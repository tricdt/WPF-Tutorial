<syncfusion:ChromelessWindow x:Class="syncfusion.demoscommon.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:syncfusion.demoscommon.wpf"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:listCollection="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusion:SfSkinManager.Theme="{syncfusion:SkinManagerExtension ThemeName=Windows11Light}"
        mc:Ignorable="d"
        Title="Syncfusion WPF Controls Demo" 
        Background="#FFFFFF"
        BorderThickness="0"
        FocusVisualStyle="{x:Null}"
        Height="1024" 
        Width="600" 
        Icon="/syncfusion.demoscommon.wpf;component/Assets/App.ico"
        ResizeBorderThickness="0"
        ShowMaximizeButton="True"
        AllowsTransparency="True"
        TitleBarBackground="#F3F6FC"
        TitleBarForeground="#000000"
        TitleBarHeight="48"
        TitleFontSize="24"
        WindowState="Maximized"
        ShowIcon="False"
        ShowTitle="False">
    <syncfusion:ChromelessWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.demoscommon.wpf;component/Views/DemoWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </syncfusion:ChromelessWindow.Resources>
    <syncfusion:ChromelessWindow.LeftHeaderItemsSource>
        <listCollection:ArrayList>
            <Image
                Width="21"
                Height="20"
                Margin="12,14,0,14"
                FocusVisualStyle="{x:Null}"
                Source="/syncfusion.demoscommon.wpf;component/Assets/App.ico" />
            <TextBlock Margin="8,15,0,14">
                <Span FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#000000">
                    Syncfusion WPF Demos
                </Span>
            </TextBlock>
        </listCollection:ArrayList>
    </syncfusion:ChromelessWindow.LeftHeaderItemsSource>
    <syncfusion:ChromelessWindow.RightHeaderItemsSource>
        <listCollection:ArrayList>
            <syncfusion:SfTextBoxExt
                x:Name="searchbox"
                Width="300"
                Height="32"
                Margin="0,0,60,0"
                syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                AutoCompleteMode="Suggest"
                Background="White"
                DropDownBackground="White"
                FocusVisualStyle="{x:Null}"
                FontSize="12"
                Foreground="Black"
                MaxDropDownHeight="312"
                SearchItemPath="SampleName"
                SuggestionMode="Custom">
                <syncfusion:SfTextBoxExt.Watermark>
                    <Grid Opacity="0.49">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="Black"
                            Text="Search" />
                        <Path Grid.Column="1"
                            x:Name="Search"
                            Width="12"
                            Height="12"
                            Margin="0,9,8,9"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            StrokeEndLineCap="Round"
                            Data="M4.55051 6.5C5.18178 7.11859 6.04635 7.5 7 7.5C8.933 7.5 10.5 5.933 10.5 4C10.5 2.067 8.933 0.5 7 0.5C5.067 0.5 3.5 2.067 3.5 4C3.5 4.97934 3.90223 5.86474 4.55051 6.5ZM4.55051 6.5L1 10"
                            Stroke="Black"
                            Stretch="Fill" />
                    </Grid>
                </syncfusion:SfTextBoxExt.Watermark>
                <syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="1"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                 Grid.Column="0"
                                 Padding="10,8,0,8"
                                 VerticalAlignment="Center"
                                 FontSize="12"
                                 FontWeight="Normal"
                                 Foreground="Black"
                                 Text="ProducDemo.Product" />
                            <Border
                                 Grid.Column="1"
                                 Width="1"
                                 Margin="0,-15"
                                 BorderBrush="#D8D8D8"
                                 BorderThickness="1" />
                            <TextBlock
                                 Grid.Column="2"
                                 Padding="10,8,0,8"
                                 VerticalAlignment="Center"
                                 FontSize="12"
                                 Foreground="Black"
                                 FontWeight="Normal"
                                 Text="ProductDemoInfo.SampleName" />
                        </Grid>
                    </DataTemplate>
                </syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
            </syncfusion:SfTextBoxExt>
        </listCollection:ArrayList>
    </syncfusion:ChromelessWindow.RightHeaderItemsSource>
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Transparent">
        <Frame
            x:Name="ROOTFRAME"
            FocusVisualStyle="{x:Null}"
            JournalOwnership="OwnsJournal"
            NavigationUIVisibility="Hidden" />
        <syncfusion:SfBusyIndicator
            Grid.ColumnSpan="2"
            Width="150"
            Height="70"
            VerticalAlignment="Center"
            AnimationType="Cupertino"
            Background="Transparent"
            IsBusy="True"
            Visibility="Visible">
            <syncfusion:SfBusyIndicator.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock
                            Width="150"
                            FontSize="15"
                            Text="Loading sample..."
                            TextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </syncfusion:SfBusyIndicator.HeaderTemplate>
        </syncfusion:SfBusyIndicator>
        <Border Opacity="0.5" Background="Black" Visibility="Visible"/>
    </Grid>

</syncfusion:ChromelessWindow>
