<UserControl x:Class="syncfusion.demoscommon.wpf.DemoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.demoscommon.wpf"
             xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.demoscommon.wpf;component/Views/DemoWindowStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource x:Key="cvs" Source="{Binding Path=DataContext.SelectedProduct.Demos, ElementName=DemosList}">
                <CollectionViewSource.GroupDescriptions>
                    <dat:PropertyGroupDescription PropertyName="GroupName" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <Storyboard x:Key="SlideIn">
                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="0" To=" -320"
                             Duration="0:0:0.3" />
            </Storyboard>
            <Storyboard x:Key="SlideOut">
                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-320" To="0"
                              Duration="0:0:0.3" />
            </Storyboard>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <RepeatButton>
                    
                </RepeatButton>
                <ListView
                    x:Name="DemosList"
                    Grid.Row="1"
                    SelectionMode="Single"
                    ItemsSource="{Binding Source={StaticResource cvs}}"
                    BorderThickness="0,0,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="8"
                                    FontFamily="SegoeUI"
                                    FontSize="12"
                                    Text="{Binding SampleName}" />
                                <Border
                                    x:Name="tag"
                                    Grid.Column="1"
                                    Width="60"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    Background="#1389d8"
                                    CornerRadius="2">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Tag}" Value="None">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock
                                        x:Name="tagtext"
                                        Padding="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        Foreground="#ffffff"
                                        Text="{Binding Tag}" />
                                </Border>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger SourceName="tagtext" Property="Text" Value="New">
                                    <Setter TargetName="tag" Property="Background" Value="#007F00" />
                                    <Setter TargetName="tagtext" Property="Foreground" Value="#ffffff" />
                                </Trigger>
                                <Trigger SourceName="tagtext" Property="Text" Value="Updated">
                                    <Setter TargetName="tag" Property="Background" Value="#0091AB" />
                                    <Setter TargetName="tagtext" Property="Foreground" Value="#ffffff" />
                                </Trigger>
                                <Trigger SourceName="tagtext" Property="Text" Value="Preview">
                                    <Setter TargetName="tag" Property="Background" Value="#FFB700" />
                                    <Setter TargetName="tagtext" Property="Foreground" Value="#000000" />
                                </Trigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ItemsControl.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <HeaderedContentControl IsTabStop="False">
                                                    <HeaderedContentControl.Header>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Margin="12,8,8,8"
                                                                FontFamily="SegoeUI-Semibold"
                                                                FontSize="13"
                                                                FontWeight="Medium"
                                                                Text="{Binding Path=Name}" />
                                                        </Grid>
                                                    </HeaderedContentControl.Header>
                                                    <HeaderedContentControl.Content>
                                                        <ItemsPresenter x:Name="ItemsHost" />
                                                    </HeaderedContentControl.Content>
                                                </HeaderedContentControl>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
