<syncfusion:ChromelessWindow x:Class="LedSignControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LedSignControl"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
        mc:Ignorable="d"
        Title="LedSignControl" 
        Width="1200"
        Height="800"
        AllowsTransparency="True"
        CloseButtonTemplate="{DynamicResource ProductsWindowCloseButtonTemplate}"
        MaximizeButtonTemplate="{DynamicResource ProductsWindowMaximizeButtonTemplate}"
        MinimizeButtonTemplate="{DynamicResource ProductsWindowMinimizeButtonTemplate}"
        MinWidth="800"
        MinHeight="500"
        BorderThickness="0"
        ShowIcon="False"
        TitleBarHeight="48"
        TitleFontSize="24">
    <syncfusion:ChromelessWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LedSignControl;component/Views/DemoWindowStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </syncfusion:ChromelessWindow.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal">

            <local:LedGroup/>
            <local:LedGroup/>
        </StackPanel>
    </ScrollViewer>
</syncfusion:ChromelessWindow>
