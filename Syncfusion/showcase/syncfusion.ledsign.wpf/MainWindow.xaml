<syncfusion:ChromelessWindow x:Class="syncfusion.ledsign.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:syncfusion.ledsign.wpf"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:listCollection="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
        mc:Ignorable="d"
        Height="450" Width="800"
        AllowsTransparency="True"
        CloseButtonTemplate="{DynamicResource ProductsWindowCloseButtonTemplate}"
        MaximizeButtonTemplate="{DynamicResource ProductsWindowMaximizeButtonTemplate}"
        MinimizeButtonTemplate="{DynamicResource ProductsWindowMinimizeButtonTemplate}"
        MinWidth="800"
        MinHeight="500"
        BorderThickness="0"
        ResizeBorderThickness="0"
        Title="Phần mềm điều khiển LED Sign"
        Icon="/syncfusion.ledsign.wpf;component/Assets/App.ico"
        TitleBarHeight="48"
        TitleFontSize="20"
   
        ShowIcon="False"
        ShowTitle="False">
    <syncfusion:ChromelessWindow.Resources>
        <ResourceDictionary>
            <local:ViewModelLocator x:Key="ViewModelLocator"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.ledsign.wpf;component/Resources/WeatherIcons.xaml" />
                <ResourceDictionary Source="/syncfusion.ledsign.wpf;component/Views/DemoWindowStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </syncfusion:ChromelessWindow.Resources>
    <syncfusion:ChromelessWindow.DataContext>
        <Binding Path="LocationViewModel" Source="{StaticResource ViewModelLocator}"/>
    </syncfusion:ChromelessWindow.DataContext>
    <syncfusion:ChromelessWindow.LeftHeaderItemsSource>
        <listCollection:ArrayList>
            <Image
                Width="21"
                Height="20"
                Margin="12,14,0,14"
                FocusVisualStyle="{x:Null}"
                Source="/syncfusion.ledsign.wpf;component/Assets/App.ico" />
            <TextBlock Margin="8,15,0,14">
                <Span FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource ContentForeground}">
                    Phần mềm điều khiển Led Sign
                </Span>
            </TextBlock>
        </listCollection:ArrayList>
    </syncfusion:ChromelessWindow.LeftHeaderItemsSource>
    <syncfusion:ChromelessWindow.RightHeaderItemsSource>
        <listCollection:ArrayList>
            <Button
                x:Name="ThemeChangeButton"
                Width="32"
                Height="32"
                Margin="0,0,4,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding ThemeChanged}">
                <Viewbox Width="17" Height="17">
                    <Path
                        Data="{Binding PathData}"
                        Fill="Transparent"
                        Stroke="{DynamicResource IconColor}"
                        StrokeEndLineCap="Round"
                        StrokeLineJoin="Round"
                        StrokeStartLineCap="Round"
                        StrokeThickness="1.5" />
                </Viewbox>
            </Button>
        </listCollection:ArrayList>
    </syncfusion:ChromelessWindow.RightHeaderItemsSource>
    <Grid>
        <ItemsControl ItemsSource="{Binding GroupLed}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="FrameworkElement.Margin" Value="0,0,5,0"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="{DynamicResource PrimaryBackground}" CornerRadius="10">
                        <Grid>
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=clipMask}" Stretch="None" />
                            </Grid.OpacityMask>
                            <Border x:Name="clipMask" Background="White" CornerRadius="10" />
                            <ScrollViewer CanContentScroll="True"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Content="{Binding GridLed}">
                            </ScrollViewer>
                            <ContentControl Content="{Binding UpDown}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Height="25"
                                        Width="95"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
    <!--<behaviors:Interaction.Behaviors>
        <local:AddMainViewToViewModelBehavior/>
    </behaviors:Interaction.Behaviors>-->
</syncfusion:ChromelessWindow>
