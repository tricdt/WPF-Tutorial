<democommon:DemoControl x:Class="syncfusion.datagriddemos.wpf.RowStyleDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             xmlns:sfgrid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
             Background="#FFFFFF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <democommon:DemoControl.DataContext>
        <local:EmployeeInfoViewModel/>
    </democommon:DemoControl.DataContext>
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/SfDataGrid/SfDataGrid.xaml" />
                </ResourceDictionary.MergedDictionaries>
                <local:RowStyleConverter x:Key="rowStyleConverter"/>
                <Style x:Key="GenericRowStyle" BasedOn="{StaticResource SyncfusionVirtualizingCellsControlStyle}" TargetType="sfgrid:VirtualizingCellsControl">
                    <Setter Property="BorderBrush" Value="Gray" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="IsTabStop" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="sfgrid:VirtualizingCellsControl">
                                <Grid>
                                    <Rectangle Clip="{TemplateBinding RowBackgroundClip}" Fill="{TemplateBinding Background}" />
                                    <Border
                                        Background="{TemplateBinding RowSelectionBrush}"
                                        BorderBrush="DarkGreen"
                                        BorderThickness="2,2,2,3"
                                        Clip="{TemplateBinding SelectionBorderClipRect}"
                                        Visibility="{TemplateBinding SelectionBorderVisiblity}" />
                                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter />
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style x:Key="RowStyle" BasedOn="{StaticResource SyncfusionVirtualizingCellsControlStyle}" TargetType="sfgrid:VirtualizingCellsControl">
                    <Setter Property="Background" Value="{Binding Path=Rating, Mode=TwoWay, Converter={StaticResource rowStyleConverter}, UpdateSourceTrigger=PropertyChanged}" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        <syncfusion:SfDataGrid
            x:Name="SfGrid"
            Margin="5"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            HeaderRowHeight="30"
            ItemsSource="{Binding EmployeeDetails}"
            NavigationMode="Row"
            RowStyle="{StaticResource RowStyle}"
            ShowRowHeader="False">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Employee ID"
                    MappingName="EmployeeID"
                    NumberDecimalDigits="0" 
                    Width="90"/>
                <syncfusion:GridTextColumn MappingName="Name" />
                <syncfusion:GridTextColumn HeaderText="Designation" MappingName="Title" />
                <syncfusion:GridTextColumn MappingName="Rating" TextAlignment="Right" Width="80" />
                <syncfusion:GridDateTimeColumn
                    DisplayBinding="{Binding Path=BirthDate, StringFormat=d}"
                    HeaderText="Birth Date"
                    TextAlignment="Right" />
                <syncfusion:GridTextColumn MappingName="Gender" Width="100" />
                <syncfusion:GridCurrencyColumn CurrencySymbol="$" MappingName="Salary" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
