<democommon:DemoControl x:Class="syncfusion.datagriddemos.wpf.AlternateRowStyleDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
             xmlns:sfgrid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
             Background="#FFFFFF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <democommon:DemoControl.DataContext>
        <local:OrderInfoViewModel/>
    </democommon:DemoControl.DataContext>
    <democommon:DemoControl.Options>
        <WrapPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock
                    x:Name="textBlock1"
                    Margin="5"
                    FontWeight="Bold"
                    Text="Alternate Row Background:" />
                <syncfusion:ColorPicker
                    x:Name="alternatingRowBackgroundPicker"
                    Width="160"
                    Height="24"
                    Margin="5"
                    Color="#EFEFEF" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock
                    x:Name="textBlock2"
                    Margin="5"
                    FontWeight="Bold"
                    Text="Row Background:" />
                <syncfusion:ColorPicker
                    x:Name="rowBackgroundPicker"
                    Width="160"
                    Height="24"
                    Margin="5"
                    Color="White" />
            </StackPanel>
        </WrapPanel>
    </democommon:DemoControl.Options>
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/SfDataGrid/SfDataGrid.xaml"/>
                </ResourceDictionary.MergedDictionaries>
                <Style
                    x:Key="alternatingRowStyle"
                    BasedOn="{StaticResource SyncfusionVirtualizingCellsControlStyle}"
                    TargetType="sfgrid:VirtualizingCellsControl">
                    <Setter Property="Background" Value="{Binding Path=Brush, ElementName=alternatingRowBackgroundPicker}" />
                </Style>
                <Style
                    x:Key="rowStyle"
                    BasedOn="{StaticResource SyncfusionVirtualizingCellsControlStyle}"
                    TargetType="sfgrid:VirtualizingCellsControl">
                    <Setter Property="Background" Value="{Binding Path=Brush, ElementName=rowBackgroundPicker}" />
                </Style>
            </ResourceDictionary>
        </Grid.Resources>
        <syncfusion:SfDataGrid
            x:Name="dataGrid"
            Margin="5"
            AllowDraggingColumns="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrderList}"
            AlternatingRowStyle="{StaticResource alternatingRowStyle}"
            RowStyle="{StaticResource rowStyle}"
            NavigationMode="Row"
            ShowGroupDropArea="True">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0" 
                    Width="80"/>

                <syncfusion:GridTextColumn HeaderText="Customer ID" MappingName="CustomerID" Width="90"/>
                <syncfusion:GridTextColumn HeaderText="Product Name" MappingName="ProductName" Width="200" />

                <syncfusion:GridDateTimeColumn
                    HeaderText="Order Date"
                    MappingName="OrderDate"
                    TextAlignment="Right" />

                <syncfusion:GridDateTimeColumn
                    HeaderText="Shipped Date"
                    MappingName="ShippedDate"
                    TextAlignment="Right" />

                <syncfusion:GridTextColumn HeaderText="Ship City" MappingName="ShipCity" />

                <syncfusion:GridTextColumn HeaderText="Ship Country" MappingName="ShipCountry" />

                <syncfusion:GridCurrencyColumn
                    CurrencySymbol="$"
                    HeaderText="Freight"
                    MappingName="Freight"
                    TextAlignment="Right" />

            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
