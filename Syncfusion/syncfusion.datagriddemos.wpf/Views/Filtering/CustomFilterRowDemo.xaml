<democommon:DemoControl x:Class="syncfusion.datagriddemos.wpf.CustomFilterRowDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             DataContext="{DynamicResource viewmodel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <democommon:DemoControl.Resources>
        <local:OrderInfoViewModel x:Key="viewmodel"/>
    </democommon:DemoControl.Resources>
    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                x:Name="textBlock1"
                Margin="5"
                FontWeight="Bold"
                Text="Custom Filtering" />
       
            <StackPanel Margin="5">
                <TextBlock
                        x:Name="textBlock2"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Order ID Column"
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock3"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Normal"
                        Text="Filter based on numeric intervals."
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock4"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Customer ID Column"
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock5"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Normal"
                        Text="Filter based on range of starts with characters."
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock6"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Ship Name Column"
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock7"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Normal"
                        Text="Required filter options are displayed in DropDown."
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock8"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Order Date Column"
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock9"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Normal"
                        Text="Filter based on Today, Yesterday, WeekDays, LastWeek, LastMonth and Older."
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock10"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Product Name Column"
                        TextWrapping="Wrap" />
                <TextBlock
                        x:Name="textBlock11"
                        Margin="5"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        FontWeight="Normal"
                        Text="Filter based on visible Records."
                        TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </democommon:DemoControl.Options>
    <syncfusion:SfDataGrid
        Name="sfgrid"
        Margin="5"
        AllowFiltering="False"
        AutoGenerateColumns="False"
        ColumnSizer="Star"
        FilterRowPosition="FixedTop"
        ItemsSource="{Binding OrderList}"
        LiveDataUpdateMode="AllowDataShaping"
        NavigationMode="Cell"
        SelectionMode="Extended"
        SelectionUnit="Row"
        ShowRowHeader="True">
        <syncfusion:SfDataGrid.Columns>
            <syncfusion:GridNumericColumn
                FilterRowEditorType="NumericComboBoxExt"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Order ID"
                MappingName="OrderID"
                NumberDecimalDigits="0" 
                Width="70"/>
            <syncfusion:GridTextColumn
                FilterRowEditorType="TextComboBoxExt"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Customer ID"
                MappingName="CustomerID" />
            <syncfusion:GridTextColumn
                FilterBehavior="StringTyped"
                FilterRowEditorType="TextBox"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Product Name"
                ImmediateUpdateColumnFilter="True"
                MappingName="ProductName" 
                Width="195"/>
            <syncfusion:GridTextColumn
                FilterRowEditorType="ExcelFilterComboBox"
                HeaderText="Shippers Company Name"
                MappingName="ShipName"
                Width="180"/>
            <syncfusion:GridTextColumn
                AllowBlankFilters="False"
                HeaderText="Ship Country"
                ImmediateUpdateColumnFilter="True"
                MappingName="ShipCountry" />
            <syncfusion:GridDateTimeColumn
                FilterRowEditorType="DateTimeComboBoxExt"
                FilterRowOptionsVisibility="Collapsed"
                HeaderText="Order Date"
                MappingName="OrderDate" 
                TextAlignment="Right"/>
            <syncfusion:GridCheckBoxColumn MappingName="IsShipped" HeaderText="Closed" />
        </syncfusion:SfDataGrid.Columns>
        <behaviors:Interaction.Behaviors>
            <local:CustomFilterRowBehavior/>
        </behaviors:Interaction.Behaviors>
    </syncfusion:SfDataGrid>
</democommon:DemoControl>
