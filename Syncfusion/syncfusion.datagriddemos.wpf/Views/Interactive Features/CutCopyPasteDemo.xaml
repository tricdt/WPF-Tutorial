<democommon:DemoControl x:Class="syncfusion.datagriddemos.wpf.CutCopyPasteDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <democommon:DemoControl.Resources>
        <local:OrderInfoViewModel x:Key="viewmodel"/>
        <democommon:EnumDisplayNameConverter x:Key="enumDisplayNameConverter"/>
    </democommon:DemoControl.Resources>
    <democommon:DemoControl.Options>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <StackPanel Margin="5">
                    <TextBlock
                    x:Name="textBlock1"
                    Margin="5"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Selection Unit" />
                    <ComboBox
                    x:Name="SelectionUnit"
                    Width="150"
                    Height="24"
                    Margin="5"
                    ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:GridSelectionUnit}"
                    SelectedIndex="0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Converter={StaticResource enumDisplayNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="5">
                    <TextBlock
                    x:Name="textBlock2"
                    Margin="5"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Selection Mode" />
                    <ComboBox
                    x:Name="cmbSelectionMode"
                    Width="150"
                    Height="24"
                    Margin="5"
                    ItemsSource="{democommon:EnumValuesExtension Type=syncfusion:GridSelectionMode}"
                    SelectedIndex="3">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Converter={StaticResource enumDisplayNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="5">
                    <TextBlock
                    x:Name="textBlock3"
                    Margin="5"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Copy Option" />
                    <syncfusion:ComboBoxAdv
                    x:Name="CopyOptionComboBox"
                    Width="150"
                    Height="24"
                    Margin="5"
                    AllowMultiSelect="True"
                    ItemsSource="{democommon:EnumValues Type=syncfusion:GridCopyOption}"
                    SelectedIndex="1" />
                </StackPanel>

                <StackPanel Margin="5">
                    <TextBlock
                    x:Name="textBlock4"
                    Margin="5"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Paste Option" />
                    <syncfusion:ComboBoxAdv
                    x:Name="PasteOptionComboBox"
                    Width="150"
                    Height="24"
                    Margin="5"
                    AllowMultiSelect="True"
                    ItemsSource="{democommon:EnumValues Type=syncfusion:GridPasteOption}"
                    SelectedIndex="1" />
                </StackPanel>

                <StackPanel Margin="5">
                    <TextBlock
                    x:Name="textBlock5"
                    Margin="5"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Clipboard Content" />
                    <Border BorderBrush="LightGray" BorderThickness="1">
                        <TextBox
                        x:Name="Clipboardcontent"
                        Width="150"
                        Height="100"
                        Margin="5"
                        IsReadOnly="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    </Border>
                </StackPanel>
            </WrapPanel>
        </ScrollViewer>
    </democommon:DemoControl.Options>
    <Grid DataContext="{StaticResource viewmodel}">
        <syncfusion:SfDataGrid
            x:Name="datagrid"
            Margin="5"
            AllowEditing="True"
            AllowGrouping="True"
            AutoExpandGroups="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrderList}"
            LiveDataUpdateMode="AllowDataShaping"
            SelectionMode="{Binding SelectedValue, ElementName=cmbSelectionMode}"
            SelectionUnit="{Binding SelectedValue, ElementName=SelectionUnit}"
            ShowGroupDropArea="True"
            AllowResizingColumns="True"
            AllowResizingHiddenColumns="True"
            ShowRowHeader="True">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0" 
                    Width="80"/>
                <syncfusion:GridTemplateColumn HeaderText="Customer ID" MappingName="CustomerID">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="2,0"
                                VerticalAlignment="Center"
                                FontStyle="Italic"
                                FontWeight="SemiBold"
                                Text="{Binding CustomerID}" />
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                    <syncfusion:GridTemplateColumn.EditTemplate>
                        <DataTemplate>
                            <Grid
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                FocusManager.FocusedElement="{Binding ElementName=textBox}">
                                <TextBox
                                    x:Name="textBox"
                                    Padding="2,0"
                                    FontStyle="Italic"
                                    FontWeight="SemiBold"
                                    Text="{Binding CustomerID, Mode=TwoWay}" />
                            </Grid>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.EditTemplate>
                </syncfusion:GridTemplateColumn>
                <syncfusion:GridMaskColumn
                    HeaderText="Contact Number"
                    MappingName="ContactNumber"
                    Mask="(999)-999-9999"
                    TextAlignment="Right" 
                    Width="95"/>
                <syncfusion:GridComboBoxColumn
                    HeaderText="Product Name"
                    ItemsSource="{Binding Path=ComboBoxItemsSource, Source={StaticResource viewmodel}}"
                    MappingName="ProductName"
                    TextTrimming="CharacterEllipsis"/>
                <syncfusion:GridNumericColumn
                    HeaderText="Quantity"
                    MappingName="Quantity"
                    NumberDecimalDigits="0" />
                <syncfusion:GridCurrencyColumn
                    CurrencyDecimalDigits="0"
                    HeaderText="UnitPrice"
                    MappingName="UnitPrice" />
                <syncfusion:GridPercentColumn HeaderText="Discount" MappingName="Freight" />
                <syncfusion:GridDateTimeColumn
                    HeaderText="Order Date"
                    MappingName="OrderDate"
                    TextAlignment="Right" />
                <syncfusion:GridTimeSpanColumn
                    HeaderText="Delivery Time"
                    MappingName="DeliveryDelay"
                    TextAlignment="Right" />
                <syncfusion:GridCheckBoxColumn HeaderText="Closed" MappingName="IsShipped" Width="60" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
    <behaviors:Interaction.Behaviors>
        <local:CopyPasteBehaviour/>
    </behaviors:Interaction.Behaviors>
</democommon:DemoControl>
