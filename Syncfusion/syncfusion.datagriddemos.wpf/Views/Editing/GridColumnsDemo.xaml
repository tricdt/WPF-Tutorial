<democommon:DemoControl x:Class="syncfusion.datagriddemos.wpf.GridColumnsDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             DataContext="{DynamicResource viewmodel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <democommon:DemoControl.Resources>
        <local:OrderInfoViewModel x:Key="viewmodel"/>
    </democommon:DemoControl.Resources>
    <Grid>
        <syncfusion:SfDataGrid
            x:Name="sfDataGrid"
            Margin="5"
            AllowEditing="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding OrderList}"
            ShowRowHeader="True">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTemplateColumn HeaderText="Order ID" MappingName="OrderID" Width="70">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontStyle="Italic"
                                FontWeight="Bold"
                                Text="{Binding OrderID}"
                                TextAlignment="Right"
                                Padding="8"/>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                    <syncfusion:GridTemplateColumn.EditTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="0,0,2,0"
                                FontStyle="Normal"
                                FontWeight="Bold"
                                Text="{Binding OrderID}"
                                TextAlignment="Right"
                                syncfusion:FocusManagerHelper.FocusedElement="True" />
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.EditTemplate>
                </syncfusion:GridTemplateColumn>
                <syncfusion:GridTextColumn HeaderText="Customer ID" MappingName="CustomerID" Width="90" />
                <syncfusion:GridMaskColumn
                    HeaderText="Contact Number"
                    MappingName="ContactNumber"
                    Mask="(999)-999-9999"
                    TextAlignment="Right" 
                    Width="120"/>
                <syncfusion:GridComboBoxColumn
                    HeaderText="Product Name"
                    ItemsSource="{Binding Path=ComboBoxItemsSource, Source={StaticResource viewmodel}}"
                    MappingName="ProductName"
                    Width="180"/>
                <syncfusion:GridCurrencyColumn
                    CurrencyDecimalDigits="2"
                    CurrencySymbol="$"
                    HeaderText="Unit Price"
                    MappingName="UnitPrice" />
                <syncfusion:GridNumericColumn
                    HeaderText="Quantity"
                    MappingName="Quantity"
                    NumberDecimalDigits="0" />
                <syncfusion:GridPercentColumn HeaderText="Discount" MappingName="Freight"  />
                <syncfusion:GridDateTimeColumn
                    HeaderText="Order Date"
                    MappingName="OrderDate"
                    TextAlignment="Right" 
                    Width="90"/>
                <syncfusion:GridCheckBoxColumn HeaderText="Closed" MappingName="IsShipped" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
</democommon:DemoControl>
