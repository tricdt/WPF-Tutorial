<democommon:DemoControl x:Class="syncfusion.datagriddemos.wpf.IntervalGroupingDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.datagriddemos.wpf"
             xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             DataContext="{DynamicResource viewmodel}"
             OptionsSize="250"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <democommon:DemoControl.Resources>
        <local:OrderInfoViewModel x:Key="viewmodel"/>
    </democommon:DemoControl.Resources>
    <Grid>
        <syncfusion:SfDataGrid
            x:Name="sfGrid"
            Margin="5"
            AllowEditing="True"
            AllowGrouping="True"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            IsGroupDropAreaExpanded="True"
            ItemsSource="{Binding OrderList}"
            NavigationMode="Cell"
            ShowGroupDropArea="True">
            <behavior:Interaction.Behaviors>
                <local:DataGridGroupColumnChangingBehavior/>
            </behavior:Interaction.Behaviors>
            <syncfusion:SfDataGrid.GroupColumnDescriptions>
                <syncfusion:GroupColumnDescription ColumnName="OrderDate"/>
            </syncfusion:SfDataGrid.GroupColumnDescriptions>
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridNumericColumn
                    HeaderText="Order ID"
                    MappingName="OrderID"
                    NumberDecimalDigits="0"
                    TextAlignment="Right" />
                <syncfusion:GridTextColumn
                    AllowSorting="True"
                    HeaderText="Customer ID"
                    MappingName="CustomerID" />

                <syncfusion:GridDateTimeColumn
                    AllowSorting="True"
                    HeaderText="Order Date"
                    MappingName="OrderDate"
                    TextAlignment="Right" />

                <syncfusion:GridMaskColumn
                    HeaderText="Contact Number"
                    MappingName="ContactNumber"
                    Mask="(99)-9999"
                    TextAlignment="Right" />
                <syncfusion:GridComboBoxColumn
                    HeaderText="Product Name"
                    ItemsSource="{Binding Path=ComboBoxItemsSource, Source={StaticResource viewmodel}}"
                    MappingName="ProductName" 
                    TextTrimming="CharacterEllipsis"/>
                <syncfusion:GridCurrencyColumn
                    CurrencyDecimalDigits="0"
                    HeaderText="Unit Price"
                    MappingName="UnitPrice" />
                <syncfusion:GridNumericColumn
                    HeaderText="Quantity"
                    MappingName="Quantity"
                    NumberDecimalDigits="0" />
                <syncfusion:GridPercentColumn HeaderText="Discount" MappingName="Freight" />
                <syncfusion:GridDateTimeColumn
                    HeaderText="Shipped Date"
                    MappingName="ShippedDate"
                    TextAlignment="Right" />
                <syncfusion:GridCheckBoxColumn HeaderText="Closed" MappingName="IsShipped" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
    </Grid>
    <democommon:DemoControl.Options>
        <StackPanel>
            <TextBlock
                x:Name="textBlock1"
                Margin="5"
                FontSize="14"
                FontWeight="Bold"
                Text="Interval Grouping" />
            <TextBlock
                x:Name="textBlock2"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="13"
                FontWeight="Bold"
                Text="Order ID Column"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="textBlock3"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="12"
                FontWeight="Normal"
                Text="Groups based on intervals"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="textBlock4"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="13"
                FontWeight="Bold"
                Text="Customer ID Column"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="textBlock5"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="12"
                FontWeight="Normal"
                Text="Groups based on starting letter"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="textBlock6"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="13"
                FontWeight="Bold"
                Text="Order Date, Shipped Date column"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="textBlock7"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="12"
                FontWeight="Normal"
                Text="Order Date - Groups based on day"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="textBlock8"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="12"
                FontWeight="Normal"
                Text="Shipped Date - Groups based on date range"
                TextWrapping="Wrap" />
        </StackPanel>
    </democommon:DemoControl.Options>

</democommon:DemoControl>
