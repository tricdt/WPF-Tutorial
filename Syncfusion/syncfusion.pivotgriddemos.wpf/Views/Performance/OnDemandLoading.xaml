<democommon:DemoControl x:Class="syncfusion.pivotgriddemos.wpf.OnDemandLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:pivotbase="clr-namespace:Syncfusion.PivotAnalysis.Base;assembly=Syncfusion.PivotAnalysis.Base"
             xmlns:local="clr-namespace:syncfusion.pivotgriddemos.wpf"
             OptionsSize="300"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--  PivotGrid control  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="250" />
            </Grid.RowDefinitions>

            <syncfusion:PivotGridControl Name="pivotGrid1" Grid.Column="0">
                <syncfusion:PivotGridControl.PivotColumns>
                    <pivotbase:PivotItem
                        AllowRunTimeGroupByField="True"
                        FieldHeader="Year"
                        FieldMappingName="Date"
                        Format="yyyy"
                        TotalHeader="Total" />
                </syncfusion:PivotGridControl.PivotColumns>
                <syncfusion:PivotGridControl.PivotRows>
                    <pivotbase:PivotItem
                        AllowRunTimeGroupByField="True"
                        FieldHeader="Client"
                        FieldMappingName="Client"
                        TotalHeader="Total" />
                    <pivotbase:PivotItem
                        FieldHeader="Campaign"
                        FieldMappingName="Campaign"
                        TotalHeader="Total" />
                    <pivotbase:PivotItem
                        FieldHeader="ColH"
                        FieldMappingName="ColH"
                        TotalHeader="Total" />
                    <pivotbase:PivotItem
                        FieldHeader="Shape"
                        FieldMappingName="Shape"
                        TotalHeader="Total" />
                    <pivotbase:PivotItem
                        FieldHeader="Color"
                        FieldMappingName="Color"
                        TotalHeader="Total" />
                    <pivotbase:PivotItem
                        FieldHeader="ColI"
                        FieldMappingName="ColI"
                        TotalHeader="Total" />
                </syncfusion:PivotGridControl.PivotRows>
                <syncfusion:PivotGridControl.PivotCalculations>
                    <pivotbase:PivotComputationInfo
                        AllowRunTimeGroupByField="True"
                        CalculationName="DoubleTotalSum"
                        FieldName="Price"
                        Format="C"
                        SummaryType="DoubleTotalSum" />
                </syncfusion:PivotGridControl.PivotCalculations>
            </syncfusion:PivotGridControl>

            <ScrollViewer
                Grid.Row="1"
                Grid.Column="0"
                Margin="5">
                <TextBlock
                    x:Name="TestResult"
                    Margin="10,0,0,0" />
            </ScrollViewer>

        </Grid>

        <i:Interaction.Behaviors>
            <local:SampleBehavior/>
        </i:Interaction.Behaviors>
    </Grid>
    <democommon:DemoControl.Options>
        <syncfusion:PivotSchemaDesigner
                    Name="SchemaDesigner"
                    Margin="5" />
    </democommon:DemoControl.Options>
</democommon:DemoControl>
