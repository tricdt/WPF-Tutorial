<democommon:DemoControl x:Class="syncfusion.gridcontroldemos.wpf.HideorShowColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.gridcontroldemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid" />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <StackPanel Orientation="Vertical">

            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <TextBlock Margin="5"
                                   Text="No of rows to be hidden"
                                   TextWrapping="Wrap" />

                <syncfusion:IntegerTextBox x:Name="RowHide"
                                                   Grid.Column="1"
                                                   Margin="5"
                                                   Value="1" />

                <TextBlock Grid.Row="1"
                                   Margin="5"
                                   Text="No of columns  to be hidden"
                                   TextWrapping="Wrap" />

                <syncfusion:IntegerTextBox x:Name="ColHide"
                                                   Grid.Row="1"
                                                   Grid.Column="1"
                                                   Margin="5"
                                                   Value="1" />

                <Button x:Name="HideButton"
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                Click="HideButton_Click"
                                Content="Hide Rows/Columns" />

                <TextBlock Grid.Row="3"
                                   Margin="5" VerticalAlignment="Center"
                                   Text="Row Count"
                                   TextWrapping="Wrap" />

                <TextBlock x:Name="RowCount" VerticalAlignment="Center"
                                   Grid.Row="3"
                                   Grid.Column="1"
                                   Margin="5" />

                <TextBlock Grid.Row="4" VerticalAlignment="Center"
                                   Grid.Column="0"
                                   Margin="5"
                                   Text="Column Count"
                                   TextWrapping="Wrap" />

                <TextBlock x:Name="ColCount" VerticalAlignment="Center"
                                   Grid.Row="4"
                                   Grid.Column="1"
                                   Margin="5" />
            </Grid>
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
