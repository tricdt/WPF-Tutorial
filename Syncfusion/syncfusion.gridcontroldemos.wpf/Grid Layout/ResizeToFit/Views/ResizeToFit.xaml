<democommon:DemoControl x:Class="syncfusion.gridcontroldemos.wpf.ResizeToFit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.gridcontroldemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid"  />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <StackPanel>
            <Button Margin="5"
                            Click="Button_Click"
                            Content="ColumnWidth - AutoFit" />
            <Button Margin="5"
                            Click="Button_Click_1"
                            Content="RowHeigths - AutoFit" />
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
