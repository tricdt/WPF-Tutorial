<democommon:DemoControl x:Class="syncfusion.gridcontroldemos.wpf.CurrencyCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.gridcontroldemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer CanContentScroll="True"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid"/>
    </ScrollViewer>
    <democommon:DemoControl.Options>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" 
                       VerticalAlignment="Center"
                       Margin="5" 
                       Text="Currency Symbol"
                       TextWrapping="Wrap" />

            <TextBox Name="CurrencySymbol"
                     Grid.Row="0" 
                     VerticalAlignment="Center"
                     Grid.Column="1"
                     Margin="5"
                     Text="$" />

            <TextBlock Grid.Row="1" 
                       VerticalAlignment="Center"
                       Margin="5"
                       Text="Number Group"
                       TextWrapping="Wrap" />

            <TextBox Name="GroupNumber"
                     Grid.Row="1" 
                     VerticalAlignment="Center"
                     Grid.Column="1"
                     Margin="5"
                     Text="4" />

            <TextBlock Grid.Row="2"
                       VerticalAlignment="Center"
                       Margin="5"
                       Text="No of decimal digits"
                       TextWrapping="Wrap" />

            <TextBox Name="DecimalNo" 
                     VerticalAlignment="Center"
                     Grid.Row="2"
                     Grid.Column="1"
                     Margin="5"
                     Text="4" />

            <!--  Set the date pattern  -->
            <TextBlock Grid.Row="3"
                       Margin="5"
                       VerticalAlignment="Center"
                       Text="Pattern"
                       TextWrapping="Wrap" />
            <ComboBox x:Name="PositivePattern" 
                      VerticalAlignment="Center"
                      Grid.Row="3"
                      Grid.Column="1"
                      Margin="5">
                <ComboBoxItem Content="$n"
                              IsSelected="True"
                              Selected="PositivePatternSelected"
                              Tag="0" />
                <ComboBoxItem Content="n$"
                              Selected="PositivePatternSelected"
                              Tag="1" />
                <ComboBoxItem Content="$ n"
                              Selected="PositivePatternSelected"
                              Tag="2" />
                <ComboBoxItem Content="n $ "
                              Selected="PositivePatternSelected"
                              Tag="3" />
            </ComboBox>

            <Button Grid.Row="4" Margin="5,10,0,0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="75"
                    Click="SetAll"
                    Content="Set" />
        </Grid>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
