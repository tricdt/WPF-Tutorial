<democommon:DemoControl x:Class="syncfusion.gridcontroldemos.wpf.PercentEditCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.gridcontroldemos.wpf"
             xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer CanContentScroll="True"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid" />
    </ScrollViewer>
    <democommon:DemoControl.Options>
        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6.5*" />
                <ColumnDefinition Width="3.5*" />
            </Grid.ColumnDefinitions>

            <!--  Set decimal seperator  -->
            <TextBlock Grid.Row="0" 
                       VerticalAlignment="Center"
                       Margin="5"
                       Text="Percent Edit Mode"
                       TextWrapping="Wrap" />

            <ComboBox x:Name="PercentEditCombo"
                      Grid.Row="0"
                      Grid.Column="1"
                      Margin="5"
                      VerticalAlignment="Center">
                <ComboBoxItem>Double</ComboBoxItem>
                <ComboBoxItem>Percent</ComboBoxItem>
            </ComboBox>

            <!--  Set Percent Separator  -->
            <TextBlock Grid.Row="1" 
                       VerticalAlignment="Center"
                       Margin="5"
                       Text="Percent Separator"
                       TextWrapping="Wrap" />

            <TextBox Name="PercentSeparator"
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="5"
                     Text=","
                     TextWrapping="Wrap" />

            <!--  Set the Number of decimal digits  -->
            <TextBlock Grid.Row="2" 
                       VerticalAlignment="Center"
                       Margin="5"
                       Text="No of Percent Decimal Digits"
                       TextWrapping="Wrap" />

            <TextBox Name="NoOfPercentDigits"
                     Grid.Row="2"
                     Grid.Column="1"
                     Margin="5"
                     Text="2" />

            <!--  Set the AutoCorrect duration  -->
            <TextBlock Grid.Row="3" VerticalAlignment="Center"
                       Margin="5"
                       Text="Set Percent Symbol"
                       TextWrapping="Wrap" />

            <TextBox Name="PercentSymbol"
                     Grid.Row="3"
                     Grid.Column="1"
                     Margin="5"
                     Text="," />

            <!--  Set the delay time of Pop-up  -->
            <TextBlock Grid.Row="4"
                       Margin="5" 
                       VerticalAlignment="Center"
                       Text="Number Group"
                       TextWrapping="Wrap" />

            <TextBox Name="NumberGroup"
                     Grid.Row="4"
                     Grid.Column="1"
                     Margin="5"
                     Text="2 3 4" />

            <Button Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="75"
                    Margin="5,10,0,0"
                    Click="SetAll"
                    Content="Set" />
        </Grid>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
