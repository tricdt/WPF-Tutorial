<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Thickness x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=BorderMarginInMenu}">-1,1,-1,1</Thickness>
  <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=CheckInMenu}" TargetType="{x:Type ContentControl}">
    <Border x:Name="Root" Background="#FFEB8900" CornerRadius="3" MinHeight="18" MinWidth="18">
      <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
        <Path Data="F1 M 399,86L 403,93L 409,81L 403,90L 399,86 Z" Fill="#FF515D7A" Height="12" Stretch="Fill" UseLayoutRounding="True" Width="10" />
      </Border>
    </Border>
    <ControlTemplate.Triggers>
      <Trigger Property="FlowDirection" Value="RightToLeft">
        <Setter Property="RenderTransform" TargetName="Root">
          <Setter.Value>
            <ScaleTransform ScaleX="-1" ScaleY="1" />
          </Setter.Value>
        </Setter>
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=GlyphCheckBorderInMenu}" TargetType="{x:Type ContentControl}">
    <Border Background="#FFEB8900" CornerRadius="3" MinHeight="18" MinWidth="18">
      <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
        <ContentPresenter />
      </Border>
    </Border>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=GlyphTriStateBorderInMenu}" TargetType="{x:Type ContentControl}">
    <Border Background="#FFEB8900" CornerRadius="3" MinHeight="18" MinWidth="18">
      <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
        <ContentPresenter />
      </Border>
    </Border>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=TriStateBorderInMenu}" TargetType="{x:Type ContentControl}">
    <Border x:Name="Root" Background="#FFEB8900" CornerRadius="3" MinHeight="18" MinWidth="18">
      <Border Background="#FFD6E4F8" CornerRadius="2" Margin="1">
        <Path Data="F1 M 399,86L 403,93L 409,81L 403,90L 399,86 Z" Fill="#FF515D7A" Height="12" Stretch="Fill" UseLayoutRounding="True" Width="10" />
      </Border>
    </Border>
    <ControlTemplate.Triggers>
      <Trigger Property="FlowDirection" Value="RightToLeft">
        <Setter Property="RenderTransform" TargetName="Root">
          <Setter.Value>
            <ScaleTransform ScaleX="-1" ScaleY="1" />
          </Setter.Value>
        </Setter>
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <ControlTemplate x:Key="CheckTriStateTemplate">
    <Grid x:Name="Root" RenderTransformOrigin="0.5,0.5">
      <Border Background="#FFF29536" CornerRadius="3" MinHeight="18" MinWidth="18" Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.CheckVisibility), RelativeSource={RelativeSource TemplatedParent}}">
        <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
          <Path Data="F1 M 399,86L 403,93L 409,81L 403,90L 399,86 Z" Fill="#FF515D7A" Height="12" Stretch="Fill" UseLayoutRounding="True" Width="10" />
        </Border>
      </Border>
      <Border Background="#FFF29536" CornerRadius="3" MinHeight="18" MinWidth="18" Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.GlyphCheckVisibility), RelativeSource={RelativeSource TemplatedParent}}">
        <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
          <ContentPresenter />
        </Border>
      </Border>
      <Border Background="#FFF29536" CornerRadius="3" MinHeight="18" MinWidth="18" Opacity="0.5" Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.GlyphTriStateVisibility), RelativeSource={RelativeSource TemplatedParent}}">
        <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
          <ContentPresenter />
        </Border>
      </Border>
      <Border Background="#FFF29536" CornerRadius="3" MinHeight="18" MinWidth="18" Opacity="0.5" Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.TriStateVisibility), RelativeSource={RelativeSource TemplatedParent}}">
        <Border Background="#FFFCF1C2" CornerRadius="2" Margin="1">
          <Path Data="F1 M 399,86L 403,93L 409,81L 403,90L 399,86 Z" Fill="#FF515D7A" Height="12" Stretch="Fill" UseLayoutRounding="True" Width="10" />
        </Border>
      </Border>
    </Grid>
    <ControlTemplate.Triggers>
      <Trigger Property="FlowDirection" Value="RightToLeft">
        <Setter Property="RenderTransform" TargetName="Root">
          <Setter.Value>
            <ScaleTransform ScaleX="-1" ScaleY="1" />
          </Setter.Value>
        </Setter>
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <Style x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=TextSplitterStyleInRibbonPageGroup}" TargetType="{x:Type dxb:TextSplitterControl}">
    <Setter Property="FirstStringHorizontalAlignment" Value="Center" />
    <Setter Property="SecondStringHorizontalAlignment" Value="Center" />
    <Setter Property="SecondStringMargin" Value="0,-4,0,0" />
    <Setter Property="Margin" Value="0,-4,0,0" />
  </Style>
  <Style x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=SelectedTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
    <Setter Property="Foreground" Value="#FF1E395B" />
  </Style>
  <Style x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=NormalTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
    <Setter Property="Foreground" Value="#FF1E395B" />
  </Style>
</ResourceDictionary>