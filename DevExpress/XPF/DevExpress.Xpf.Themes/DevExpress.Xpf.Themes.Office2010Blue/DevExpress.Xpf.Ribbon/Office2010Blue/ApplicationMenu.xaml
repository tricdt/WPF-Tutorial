<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationFramework" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBackgroundTemplate}" TargetType="{x:Type ContentControl}">
    <Border Background="#FFFFFFFF" />
  </ControlTemplate>
  <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2007}" TargetType="{x:Type ContentControl}">
    <Grid SnapsToDevicePixels="True">
      <Border x:Name="Shadow" Background="#FF000000" CornerRadius="3" Margin="3,3,0,0" Opacity="0.1" />
      <Border x:Name="Border" Background="#FF8492A6" Margin="0,0,3,3">
        <Grid Margin="1">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="22" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Border x:Name="Header" BorderThickness="0,1">
            <Border.BorderBrush>
              <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE1EDFA" Offset="0" />
                <GradientStop Color="#FF94ADCC" Offset="1" />
              </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
              <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF6FBFF" Offset="0" />
                <GradientStop Color="#FFDCE6F4" Offset="1" />
                <GradientStop Color="#FFE7EEF8" Offset="0.5" />
                <GradientStop Color="#FFDCE6F4" Offset="0.5" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>
          <Border Background="#FFFFFFFF" Grid.Row="1">
            <ContentPresenter />
          </Border>
        </Grid>
      </Border>
    </Grid>
    <ControlTemplate.Triggers>
      <DataTrigger Binding="{Binding Path=(interop:BrowserInteropHelper.IsBrowserHosted)}" Value="True">
        <Setter Property="Visibility" TargetName="Shadow" Value="Collapsed" />
        <Setter Property="Margin" TargetName="Border" Value="0" />
        <Setter Property="CornerRadius" TargetName="Border" Value="0" />
        <Setter Property="CornerRadius" TargetName="Header" Value="0" />
      </DataTrigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBottomPaneTemplate}" TargetType="{x:Type ContentControl}">
    <Border x:Name="Footer" BorderBrush="#FFD5DEE8" BorderThickness="0,1,0,0">
      <Border.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="#FFF6FBFF" Offset="0" />
          <GradientStop Color="#FFE3EBFA" Offset="1" />
        </LinearGradientBrush>
      </Border.Background>
      <ContentPresenter HorizontalAlignment="Right" Margin="2" SnapsToDevicePixels="True" />
    </Border>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuRightPaneTemplate}" TargetType="{x:Type ContentControl}">
    <Border Background="#FFFFFFFF" BorderBrush="#FFC0C3C6" BorderThickness="1,0,0,0" HorizontalAlignment="Stretch">
      <ContentPresenter />
    </Border>
  </ControlTemplate>
  <Thickness x:Key="{dxrt:BackstageThemeKey ResourceKey=BorderThickness}">1,2,1,1</Thickness>
  <Thickness x:Key="{dxrt:BackstageThemeKey ResourceKey=BorderThicknessNoFullscreen}">0,2,0,0</Thickness>
  <ControlTemplate x:Key="{dxrt:BackstageThemeKey ResourceKey=BorderTemplate}">
    <Border Background="{DynamicResource {dxt:ThemedWindowThemeKey ResourceKey=WindowActiveBorderBrush}}">
      <Border BorderThickness="0,2,0,0">
        <Border.BorderBrush>
          <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FFFFCC00" Offset="0" />
            <GradientStop Color="#00000000" Offset="1" />
          </LinearGradientBrush>
        </Border.BorderBrush>
      </Border>
    </Border>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuContentControlBorderTemplate}" TargetType="{x:Type ContentControl}">
    <ContentPresenter Content="{TemplateBinding Content}" />
  </ControlTemplate>
  <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2010}" TargetType="{x:Type ContentControl}">
    <ContentControl Template="{DynamicResource {dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2007}}">
      <ContentPresenter />
    </ContentControl>
  </ControlTemplate>
  <SolidColorBrush x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuRightPaneForeground}" Color="#FF333333" />
</ResourceDictionary>