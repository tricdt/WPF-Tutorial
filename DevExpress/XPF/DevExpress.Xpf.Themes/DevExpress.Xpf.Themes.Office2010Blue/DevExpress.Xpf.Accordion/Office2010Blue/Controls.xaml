          <Path x:Name="ItemContentCollapse" Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z" Fill="{TemplateBinding Foreground}" Height="8" RenderTransformOrigin="0.5,0.5" Stretch="Fill" Width="4">
