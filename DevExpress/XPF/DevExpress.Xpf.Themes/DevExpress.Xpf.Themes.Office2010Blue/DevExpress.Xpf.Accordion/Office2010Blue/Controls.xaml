        <Setter Property="Opacity" TargetName="RootItemPressed" Value="1" />
        <Setter Property="Fill" TargetName="RootItemContentExpand" Value="#FF515D7A" />
        <Setter Property="Fill" TargetName="RootItemContentCollapse" Value="#FF515D7A" />
