<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DataTemplate x:Key="{dxpt:NewDocumentViewerThemeKey ResourceKey=PageBorderTemplate}">
    <Grid>
      <Grid x:Name="Shadow">
        <Border BorderBrush="#FF000000" BorderThickness="1" Margin="-1" Opacity="0.05" />
        <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="1" Margin="-2" Opacity="0.03" />
        <Border BorderBrush="#FF000000" BorderThickness="2" CornerRadius="2" Margin="-3" Opacity="0.03" />
        <Border BorderBrush="#FF000000" BorderThickness="3" CornerRadius="3" Margin="-4" Opacity="0.02" />
        <Border BorderBrush="#FF000000" BorderThickness="4" CornerRadius="4" Margin="-5" Opacity="0.02" />
        <Border BorderBrush="#FF000000" BorderThickness="5" CornerRadius="5" Margin="-6" Opacity="0.02" />
        <Border BorderBrush="#FF000000" BorderThickness="6" CornerRadius="6" Margin="-7" Opacity="0.01" />
        <Border BorderBrush="#FF000000" BorderThickness="7" CornerRadius="7" Margin="-8" Opacity="0.01" />
        <Border BorderBrush="#FF000000" BorderThickness="8" CornerRadius="8" Margin="-9" Opacity="0.01" />
        <Border BorderBrush="#3F000000" BorderThickness="1" Margin="-1" />
      </Grid>
      <Border x:Name="Selection" BorderBrush="#FFFFE277" BorderThickness="3" Margin="-3" Opacity="0" />
    </Grid>
    <DataTemplate.Triggers>
      <DataTrigger Binding="{Binding IsSelected}" Value="true">
        <Setter Property="Opacity" TargetName="Selection" Value="1" />
      </DataTrigger>
    </DataTemplate.Triggers>
  </DataTemplate>
</ResourceDictionary>