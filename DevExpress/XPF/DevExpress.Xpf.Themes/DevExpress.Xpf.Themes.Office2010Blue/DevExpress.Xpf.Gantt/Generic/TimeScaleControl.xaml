<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxgn="http://schemas.devexpress.com/winfx/2008/xaml/gantt" xmlns:dxgni="http://schemas.devexpress.com/winfx/2008/xaml/gantt/internal" xmlns:dxgnt="http://schemas.devexpress.com/winfx/2008/xaml/gantt/themekeys" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Gantt.Native.TimescaleRulerControl}" TargetType="{x:Type dxgni:TimescaleRulerControl}">
    <Setter Property="BorderBrush" Value="{DynamicResource {dxgnt:TimescaleThemeKeys ResourceKey=BorderBrush}}" />
    <Setter Property="BorderThickness" Value="{DynamicResource {dxgnt:TimescaleThemeKeys ResourceKey=BorderThickness}}" />
    <Setter Property="MinHeight" Value="{DynamicResource {dxgnt:TimescaleThemeKeys ResourceKey=MinHeight}}" />
    <Setter Property="TextAlignment" Value="Center" />
    <Setter Property="TextMargin" Value="3,1" />
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="TickBrush" Value="{DynamicResource {dxgnt:TimescaleThemeKeys ResourceKey=TickBrush}}" />
    <Setter Property="TickWidth" Value="{DynamicResource {dxgnt:TimescaleThemeKeys ResourceKey=TickWidth}}" />
    <Setter Property="TickHeight" Value="{DynamicResource {dxgnt:TimescaleThemeKeys ResourceKey=TickHeight}}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type dxgni:TimescaleRulerControl}">
          <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <dxgni:TimescaleRulerPresenter Timescale="{TemplateBinding Timescale}" StartDate="{TemplateBinding StartDate}" TextMargin="{TemplateBinding TextMargin}" TickBrush="{TemplateBinding TickBrush}" TickWidth="{TemplateBinding TickWidth}" TickHeight="{TemplateBinding TickHeight}" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Gantt.TimescaleControl}" TargetType="{x:Type dxgn:TimescaleControl}">
    <Setter Property="Background" Value="LightGray" />
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type dxgn:TimescaleControl}">
          <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <dxgni:TimescaleItemsControl x:Name="PART_ItemsControl" ItemsSource="{TemplateBinding Timescales}" ItemContainerStyle="{TemplateBinding TimescaleRulerStyle}" ItemContainerStyleSelector="{TemplateBinding TimescaleRulerStyleSelector}" IsTabStop="False">
              <dxgni:TimescaleItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <dxgni:TimescaleItemsPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
              </dxgni:TimescaleItemsControl.ItemsPanel>
            </dxgni:TimescaleItemsControl>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>