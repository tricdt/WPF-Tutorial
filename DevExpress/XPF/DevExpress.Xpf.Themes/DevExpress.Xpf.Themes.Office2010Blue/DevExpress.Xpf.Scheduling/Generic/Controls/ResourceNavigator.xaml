<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxschc="http://schemas.devexpress.com/winfx/2008/xaml/scheduling" xmlns:dxschv="http://schemas.devexpress.com/winfx/2008/xaml/scheduling/visual" xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduling/themekeys" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <ResourceDictionary.MergedDictionaries>
    <dxdst:ResourceDictionaryEx Source="{dx:SchedulingResource UICore.xaml}" />
    <dxdst:ResourceDictionaryEx Source="{dx:SchedulingResource UIPreset.xaml}" />
  </ResourceDictionary.MergedDictionaries>
  <ControlTemplate x:Key="ResourceNavigator.DefaultTemplate.Horizontal" TargetType="dxschv:ResourceNavigator">
    <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
      <StackPanel Orientation="Horizontal">
        <dxschv:SchedulerButton Kind="ResourceNavigatorButtonFirst" Command="{TemplateBinding FirstCommand}" />
        <dxschv:SchedulerButton Kind="ResourceNavigatorButtonPrevPage" Command="{TemplateBinding PrevPageCommand}" />
        <dxschv:SchedulerButton Kind="ResourceNavigatorButtonPrevItem" Command="{TemplateBinding PrevCommand}" />
        <dxschv:SchedulerButton Kind="ResourceNavigatorButtonNextItem" Command="{TemplateBinding NextCommand}" />
        <dxschv:SchedulerButton Kind="ResourceNavigatorButtonNextPage" Command="{TemplateBinding NextPageCommand}" />
        <dxschv:SchedulerButton Kind="ResourceNavigatorButtonLast" Command="{TemplateBinding LastCommand}" />
        <dxschv:SchedulerButton x:Name="plus" Kind="ResourceNavigatorButtonPlus" Command="{TemplateBinding PlusCommand}" />
        <dxschv:SchedulerButton x:Name="minus" Kind="ResourceNavigatorButtonMinus" Command="{TemplateBinding MinusCommand}" />
      </StackPanel>
    </Border>
    <ControlTemplate.Triggers>
      <Trigger Property="PlusCommand" Value="{x:Null}">
        <Setter TargetName="plus" Property="Visibility" Value="Collapsed" />
      </Trigger>
      <Trigger Property="MinusCommand" Value="{x:Null}">
        <Setter TargetName="minus" Property="Visibility" Value="Collapsed" />
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <Style x:Key="ResourceNavigator.DefaultStyle" TargetType="dxschv:ResourceNavigator">
    <Setter Property="Template" Value="{StaticResource ResourceNavigator.DefaultTemplate.Horizontal}" />
    <Setter Property="Margin" Value="{StaticResource ResourceNavigator.Margin}" />
    <Setter Property="BorderBrush" Value="{StaticResource ResourceNavigator.BorderBrush}" />
    <Setter Property="Background" Value="{StaticResource ResourceNavigator.Background}" />
    <Setter Property="BorderThickness" Value="{StaticResource ResourceNavigator.BorderThickness}" />
    <Setter Property="Padding" Value="{StaticResource ResourceNavigator.Padding}" />
    <Setter Property="MinHeight" Value="{StaticResource ResourceNavigator.MinSize}" />
    <Style.Triggers>
      <Trigger Property="Orientation" Value="Vertical">
        <Setter Property="LayoutTransform">
          <Setter.Value>
            <RotateTransform Angle="90" />
          </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="{StaticResource ResourceNavigator.VerticalBorderThickness}" />
        <Setter Property="Margin" Value="{StaticResource ResourceNavigator.VerticalMargin}" />
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>