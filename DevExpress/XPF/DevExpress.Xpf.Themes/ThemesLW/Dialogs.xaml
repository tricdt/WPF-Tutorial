<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
    xmlns:dxdlg="http://schemas.devexpress.com/winfx/2008/xaml/dialogs"
    xmlns:dxdlgn="http://schemas.devexpress.com/winfx/2008/xaml/dialogs/internal">

    <ResourceDictionary.MergedDictionaries>
        <dxi:ThemeResourceDictionary Path="Dialogs\Dialogs.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Dialogs.Native.ViewModeChooserPopup'}" BasedOn="{StaticResource ViewModeChooserPopup.DefaultStyleBase}" TargetType="{x:Type dxdlgn:ViewModeChooserPopup}" />
    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Dialogs.Native.FileDialogBottomPane'}" BasedOn="{StaticResource FileDialogBottomPane.DefaultStyleBase}" TargetType="{x:Type dxdlgn:FileDialogBottomPane}" />
    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Dialogs.Native.FolderBrowserBottomPane'}" BasedOn="{StaticResource FolderBrowserBottomPane.DefaultStyleBase}" TargetType="{x:Type dxdlgn:FolderBrowserBottomPane}" />

    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Dialogs.FileDialogWindow'}" BasedOn="{StaticResource FileDialogWindow.DefaultStyle}" TargetType="{x:Type dxdlg:FileDialogWindow}" />
    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Dialogs.FolderBrowserWindow'}" BasedOn="{StaticResource FolderBrowserWindow.DefaultStyle}" TargetType="{x:Type dxdlg:FolderBrowserWindow}" />


</ResourceDictionary>