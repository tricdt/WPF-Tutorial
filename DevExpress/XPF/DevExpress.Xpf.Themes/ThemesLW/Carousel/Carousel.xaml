<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
    xmlns:cs="colorscheme_ignorable_uri"
    xmlns:dxcat="http://schemas.devexpress.com/winfx/2008/xaml/carousel/themekeys"
    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
    xmlns:dxca="http://schemas.devexpress.com/winfx/2008/xaml/carousel"
    mc:Ignorable="cs">

    <ResourceDictionary.MergedDictionaries>
        <dxi:ThemeResourceDictionary Path="Common/{ThemeName}/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <!--#region Base\Carousel\Themes\Base\Buttons.xaml-->
    <!-- General -->

    <ControlTemplate x:Key="{dxcat:LWKey CarouselNavigator.ButtonTemplate}" TargetType="{x:Type ButtonBase}">
        <Grid x:Name="Root">
            <dx:DXBorder
                x:Name="IsDefault"
                Background="{dx:LWBrush 'Brush.Button.Background, Win11=Brush.Button.SimpleButtonBackground'}"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="1" />
            <ContentPresenter
                x:Name="Content"
                HorizontalAlignment="Center"
                Margin="8"
                RecognizesAccessKey="True"
                SnapsToDevicePixels="True"
                VerticalAlignment="Center" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{dx:LWBrush 'Brush.HoverForeground, Office2019Black=Brush.ControlLight.Foreground, VS2019Light=Brush.Focused, Win11=Brush.Foreground.Primary'}" />
                <Setter Property="Background" TargetName="IsDefault" Value="{dx:LWBrush 'Brush.HoverBackground, Office2019Black=Brush.ControlLight.HoverBackground, Win11=Brush.ListItem.HoverBackground'}" />
                <Setter Property="BorderBrush" TargetName="IsDefault" Value="{dx:LWBrush 'Brush.Border, VS2019=Brush.Focused'}" />
                <Setter Property="Panel.ZIndex" Value="1" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Foreground" Value="{dx:LWBrush 'Brush.SelectionForeground, Office2019Black=Brush.ControlLight.Foreground, VS2019Dark=Brush.Backstage.Foreground, VS2019Light=Brush.Backstage.Foreground, Win11=Brush.Foreground.Primary'}" />
                <Setter Property="Background" TargetName="IsDefault" Value="{dx:LWBrush 'Brush.SelectionBackground, Office2019Black=Brush.ControlLight.SelectionBackground, Win11=Brush.ListItem.SelectionBackground'}" />
                <Setter Property="BorderBrush" TargetName="IsDefault" Value="{dx:LWBrush 'Brush.Border, VS2019=Brush.Focused'}" />
                <Setter Property="Panel.ZIndex" Value="1" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Foreground" Value="{dx:LWBrush 'Brush.SelectionForeground, Office2019Black=Brush.ControlLight.Foreground, Win11=Brush.Foreground.Primary'}" />
                <Setter Property="Background" TargetName="IsDefault" Value="{dx:LWBrush 'Brush.Button.Background, Office2019Black=Brush.ControlLight.SelectionBackground, Office2019Colorful=Brush.SelectionBackground, Office2019HighContrast=Brush.SelectionBackground, VS2019=Brush.SelectionBackground, Win11=Brush.Button.SimpleButtonBackground'}" />
                <Setter Property="BorderBrush" TargetName="IsDefault" Value="{dx:LWBrush 'Brush.Border, VS2019=Brush.Focused'}" />
                <Setter Property="Panel.ZIndex" Value="1" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="Root" Value="0.38" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxcat:LWKey CarouselNavigator.FirstButtonTemplate}" TargetType="{x:Type ButtonBase}" />

    <ControlTemplate x:Key="{dxcat:LWKey CarouselNavigator.LastButtonTemplate}" TargetType="{x:Type ButtonBase}" />
    <!--#endregion Base\Carousel\Themes\Base\Buttons.xaml-->

    <!--#region Base\Carousel\Themes\Base\Navigator.xaml-->
    <!-- General -->

    <ControlTemplate x:Key="{dxcat:LWKey CarouselNavigator.NavigatorTemplate}" TargetType="{x:Type dxca:CarouselNavigator}">
        <Grid x:Name="Root">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <RepeatButton
                x:Name="FirstItem"
                Grid.Column="0"
                Command="dxca:CarouselPanel.FirstItem"
                CommandTarget="{TemplateBinding Carousel}"
                Interval="{Binding Carousel.AnimationTime, RelativeSource={RelativeSource TemplatedParent}}"
                Template="{DynamicResource {dxcat:LWKey CarouselNavigator.ButtonTemplate}}">
                <Path Fill="{Binding ElementName=FirstItem, Path=Foreground, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource UIShape.Navigation.First}" />
            </RepeatButton>
            <RepeatButton
                x:Name="PreviousPage"
                Grid.Column="1"
                Command="dxca:CarouselPanel.PreviousPage"
                CommandTarget="{TemplateBinding Carousel}"
                Interval="{Binding Carousel.AnimationTime, RelativeSource={RelativeSource TemplatedParent}}"
                Margin="-1,0,0,0"
                Template="{DynamicResource {dxcat:LWKey CarouselNavigator.ButtonTemplate}}">
                <Path Fill="{Binding ElementName=PreviousPage, Path=Foreground, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource UIShape.Navigation.PrevPage}" />
            </RepeatButton>
            <RepeatButton
                x:Name="Previous"
                Grid.Column="2"
                Command="dxca:CarouselPanel.Previous"
                CommandTarget="{TemplateBinding Carousel}"
                Interval="{Binding Carousel.AnimationTime, RelativeSource={RelativeSource TemplatedParent}}"
                Margin="-1,0,0,0"
                Template="{DynamicResource {dxcat:LWKey CarouselNavigator.ButtonTemplate}}">
                <Path Fill="{Binding ElementName=Previous, Path=Foreground, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource UIShape.Navigation.PrevItem}" />
            </RepeatButton>
            <RepeatButton
                x:Name="Next"
                Grid.Column="3"
                Command="dxca:CarouselPanel.Next"
                CommandTarget="{TemplateBinding Carousel}"
                Interval="{Binding Carousel.AnimationTime, RelativeSource={RelativeSource TemplatedParent}}"
                Margin="-1,0,0,0"
                Template="{DynamicResource {dxcat:LWKey CarouselNavigator.ButtonTemplate}}">
                <Path Fill="{Binding ElementName=Next, Path=Foreground, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource UIShape.Navigation.NextItem}" />
            </RepeatButton>
            <RepeatButton
                x:Name="NextPage"
                Grid.Column="4"
                Command="dxca:CarouselPanel.NextPage"
                CommandTarget="{TemplateBinding Carousel}"
                Interval="{Binding Carousel.AnimationTime, RelativeSource={RelativeSource TemplatedParent}}"
                Margin="-1,0,0,0"
                Template="{DynamicResource {dxcat:LWKey CarouselNavigator.ButtonTemplate}}">
                <Path Fill="{Binding ElementName=NextPage, Path=Foreground, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource UIShape.Navigation.NextPage}" />
            </RepeatButton>
            <RepeatButton
                x:Name="LastItem"
                Grid.Column="5"
                Command="dxca:CarouselPanel.LastItem"
                CommandTarget="{TemplateBinding Carousel}"
                Interval="{Binding Carousel.AnimationTime, RelativeSource={RelativeSource TemplatedParent}}"
                Margin="-1,0,0,0"
                Template="{DynamicResource {dxcat:LWKey CarouselNavigator.ButtonTemplate}}">
                <Path Fill="{Binding ElementName=LastItem, Path=Foreground, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource UIShape.Navigation.Last}" />
            </RepeatButton>
        </Grid>
    </ControlTemplate>
    <!--#endregion Base\Carousel\Themes\Base\Navigator.xaml-->


</ResourceDictionary>