    <!--#region C:\work\2023.1\XPF\DevExpress.Xpf.Dialogs\DevExpress.Xpf.Dialogs\Themes\Generic\Controls.xaml-->
    <Style x:Key="{dxdlgt:LWKey Dialogs.DialogWindowStyle}" BasedOn="{dx:TargetStaticResource {dxt:LWKey ThemedWindow.WindowStyle}, TargetDictionary={dxi:ThemeResourceDictionary Path='Core/Controls/Controls.Generic.xaml'}}" TargetType="{x:Type dxdlg:DialogWindow}">
