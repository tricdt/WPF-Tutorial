                <Setter Property="ShowIcon" Value="True" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="{dxdlgt:LWKey Dialogs.FileDialogWindowStyle}" BasedOn="{StaticResource {dxdlgt:LWKey Dialogs.DialogWindowStyle}}" TargetType="{x:Type dxdlg:FileDialogWindow}">
        <Setter Property="Width" Value="900" />
        <Setter Property="MinWidth" Value="600" />
        <Setter Property="Height" Value="600" />
        <Setter Property="MinHeight" Value="400" />
