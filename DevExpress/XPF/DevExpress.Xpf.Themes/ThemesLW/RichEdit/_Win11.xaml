<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxrei="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal"
    xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit">

    <ResourceDictionary.MergedDictionaries>
        <dxi:ThemeResourceDictionary Path="Common/{ThemeName}/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="RichEditSelectionStroke" Color="{StaticResource Color.ListItem.SelectionBackground}" />
    <SolidColorBrush x:Key="RichEditSelectionFill" Color="{StaticResource Color.ListItem.SelectionBackground}" Opacity="0.38" />
    <SolidColorBrush x:Key="{dxret:LWKey RichEditControl.RichEditForegroundBrush}" Color="{StaticResource Color.Foreground.Primary}" />
    <SolidColorBrush x:Key="{dxret:LWKey RichEditControl.RichEditBackgroundBrush}" Color="{StaticResource Color.WindowBackground}" />
</ResourceDictionary>