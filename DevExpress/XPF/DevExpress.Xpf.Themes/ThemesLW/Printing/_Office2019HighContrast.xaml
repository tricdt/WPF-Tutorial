<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxpn="http://schemas.devexpress.com/winfx/2008/xaml/printing/native"
    xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm">
    <DataTemplate x:Key="{dxpt:LWKey NavigationPane.TabHeaderTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <dx:DXBorder
                Background="Transparent"
                BorderBrush="Gray"
                BorderThickness="1,0,0,0"
                Margin="0,-5"
                Opacity="0.1" />
            <TextBlock Margin="7,0,7,3" Text="{Binding Converter={dxpn:NavigationPaneTabTypeToDisplayNameConverter}}">
                <dxmvvm:Interaction.Behaviors>
                    <dxpn:FormattedTextBlockSizeBehavior />
                </dxmvvm:Interaction.Behaviors>
            </TextBlock>
            <dx:DXBorder
                Grid.Row="1"
                BorderBrush="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                BorderThickness="0,3,0,0"
                Margin="3,0"
                Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=dx:DXTabItem}, Converter={dxmvvm:BooleanToVisibilityConverter HiddenInsteadOfCollapsed=True}}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>