<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
    xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion">

    <ResourceDictionary.MergedDictionaries>
        <dxi:ThemeResourceDictionary Path="Accordion/Accordion.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Accordion.HeaderPresenter'}" BasedOn="{StaticResource HeaderPresenter.DefaultStyleBase}" TargetType="{x:Type dxa:HeaderPresenter}" />
    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Accordion.AccordionItem'}" BasedOn="{StaticResource AccordionItem.DefaultStyleBase}" TargetType="{x:Type dxa:AccordionItem}" />
    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Accordion.AccordionControl'}" BasedOn="{StaticResource AccordionControl.DefaultStyleBase}" TargetType="{x:Type dxa:AccordionControl}" />
    <Style x:Key="{dx:LWDefaultStyleKey 'DevExpress.Xpf.Accordion.AccordionView'}" BasedOn="{StaticResource AccordionView.DefaultStyleBase}" TargetType="{x:Type dxa:AccordionView}" />


</ResourceDictionary>