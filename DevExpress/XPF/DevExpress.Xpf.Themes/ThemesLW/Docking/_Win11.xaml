                        CornerRadius="7"
                        Padding="11">
                    <dxdove:LayoutTabFastRenderPanel x:Name="PART_FastRenderPanel" dxdove:DockPane.HitTestType="Content" Margin="{TemplateBinding Padding}" />
                </dx:DXBorder>
            </dxdove:DockingSplitLayoutPanel.Content2>
