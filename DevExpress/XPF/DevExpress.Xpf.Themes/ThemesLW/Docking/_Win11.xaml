    <ControlTemplate x:Key="{dxdot:LWKey TabbedLayoutGroupPaneElements.Template}" TargetType="{x:Type dxdove:TabbedLayoutGroupPane}">
        <dxdove:DockingSplitLayoutPanel x:Name="Root"
                BottomContent1Margin="0,0,0,2"
                DataContext="{Binding}"
                dxdove:DockPane.HitTestType="Bounds"
                LeftContent1Margin="2,0,0,0"
                RightContent1Margin="0,0,2,0"
                TopContent1Margin="0,2,0,0">
            <dxdove:DockingSplitLayoutPanel.Content1Location>
                <Binding Path="CaptionLocation">
                    <Binding.Converter>
                        <dxdove:GroupCaptionLocationToDockConverter />
                    </Binding.Converter>
                </Binding>
            </dxdove:DockingSplitLayoutPanel.Content1Location>
            <dxdove:DockingSplitLayoutPanel.Content1>
                <dxdove:DockingSplitLayoutPanel x:Name="PART_Header" MaximizeContent1="True" Panel.ZIndex="1">
                    <dxdove:DockingSplitLayoutPanel.Content1Location>
                        <Binding Path="CaptionLocation">
                            <Binding.Converter>
                                <dxdove:TabHeaderCaptionLocationToDockConverter />
                            </Binding.Converter>
                        </Binding>
                    </dxdove:DockingSplitLayoutPanel.Content1Location>
                    <dxdove:DockingSplitLayoutPanel.Content1>
                        <ItemsPresenter x:Name="PART_HeadersPanelPresenter" Margin="{Binding Content1Location, ElementName=Root, Converter={StaticResource DockToTabHeaderPanelMarginConverter}}"/>
                    </dxdove:DockingSplitLayoutPanel.Content1>
                    <dxdove:DockingSplitLayoutPanel.Content2>
                        <dxdove:TabHeaderControlBoxControl x:Name="PART_ControlBox"
                            ButtonHeight="16"
                            ButtonStyle="{DynamicResource {dxdot:LWKey TabbedLayoutGroupPaneElements.TabbedLayoutGroupPaneButtonStyle}}"
                            ButtonWidth="16"
                            dxdove:DockPane.HitTestType="ControlBox"
                            dxdove:TabHeaderControlBoxControl.Location="{Binding CaptionLocation}"
