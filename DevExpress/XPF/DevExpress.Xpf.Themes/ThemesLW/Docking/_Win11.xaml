            </Trigger>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="ButtonHeight" TargetName="PART_ControlBox" Value="44" />
                <Setter Property="ButtonWidth" TargetName="PART_ControlBox" Value="44" />
                <Setter Property="Margin" TargetName="PART_ControlBox" Value="0" />
                <Setter Property="Padding" TargetName="PART_SelectedPage" Value="14" />
                <Setter Property="MinHeight" TargetName="Root" Value="44" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="DocumentSelectorContainer.DefaultStyle" TargetType="{x:Type dxdove:DocumentSelectorContainer}">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource Brush.Foreground.Primary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dxdove:DocumentSelectorContainer}">
                        <dx:DXBorder
                            x:Name="Root"
                            Background="{StaticResource Brush.Editor.Background}"
                            BorderBrush="{StaticResource Brush.Border}"
                            BorderThickness="1"
                            CornerRadius="{Binding RelativeSource={RelativeSource Mode=Self}, Converter={dxi:DocumentSelectorCornersConverter}, ConverterParameter=Root}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <dx:DXBorder
                                    x:Name="Header"
                                    Grid.Row="0"
                                    Margin="-1,-1,-1,0"
                                    CornerRadius="{Binding RelativeSource={RelativeSource Mode=Self}, Converter={dxi:DocumentSelectorCornersConverter}, ConverterParameter=Header}"
                                    Background="{StaticResource Brush.Control.Background}"
                                    BorderBrush="{StaticResource Brush.Delimiter}"
                                    BorderThickness="{StaticResource DocumentSelector.HeaderThickness}">
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        Margin="8"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                        <Image
                                            HorizontalAlignment="Left"
                                            Margin="4"
                                            Source="{Binding Path=(dxdo:DockLayoutManager.LayoutItem).CaptionImage}"
                                            Stretch="None"
                                            VerticalAlignment="Top" />
                                        <StackPanel>
                                            <ContentControl
                                                Content="{Binding Path=(dxdo:DockLayoutManager.LayoutItem).Caption}"
                                                ContentTemplate="{Binding Path=(dxdo:DockLayoutManager.LayoutItem).CaptionTemplate}"
                                                ContentTemplateSelector="{Binding Path=(dxdo:DockLayoutManager.LayoutItem).CaptionTemplateSelector}"
                                                Focusable="False"
                                                FontWeight="Bold" />
                                            <TextBlock Text="{Binding Path=(dxdo:DockLayoutManager.LayoutItem).Description}" TextWrapping="Wrap" />
                                        </StackPanel>
                                    </StackPanel>
                                </dx:DXBorder>
                                <dx:DXBorder x:Name="Content" Grid.Row="1" Background="{StaticResource Brush.Editor.Background}">
                                    <ContentPresenter x:Name="PART_ContainerContent" Content="{Binding}" Margin="12" />
                                </dx:DXBorder>
                                <dx:DXBorder x:Name="Footer"
                                        Grid.Row="2"
                                        CornerRadius="{Binding RelativeSource={RelativeSource Mode=Self}, Converter={dxi:DocumentSelectorCornersConverter}, ConverterParameter=Footer}"
                                        Background="{StaticResource Brush.Control.Background}"
                                        BorderBrush="{StaticResource Brush.Delimiter}"
                                        BorderThickness="{StaticResource DocumentSelector.FooterThickness}"
                                        Margin="-1,0,-1,-1">
                                    <ContentPresenter
                                        Content="{Binding Path=(dxdo:DockLayoutManager.LayoutItem).FooterDescription}"
                                        HorizontalAlignment="Left"
                                        Margin="12,8,12,8"
                                        VerticalAlignment="Center" />
                                </dx:DXBorder>
                            </Grid>
                        </dx:DXBorder>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
    <Style x:Key="DocumentCloseButtonBorderStyle" TargetType="dxdove:ControlBoxButtonBorder">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxdove:ControlBoxButtonBorder">
                    <Grid x:Name="Root">
                        <dx:DXBorder x:Name="IsDefault" Background="Transparent" BorderBrush="Transparent" BorderThickness="1" CornerRadius="0,7,0,0" />
                        <ContentPresenter />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IsDefault" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Brush.ListItem.HoverBackground}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IsDefault" Storyboard.TargetProperty="BorderBrush">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Brush.ListItem.HoverBorder}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IsDefault" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Brush.ListItem.SelectionBackground}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IsDefault" Storyboard.TargetProperty="BorderBrush">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Brush.ListItem.SelectionBorder}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0.38" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ActiveStates">
                                <VisualState x:Name="EmptyActiveState" />
                                <VisualState x:Name="Inactive">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0.62" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Active">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="1" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="{dxdot:LWKey DocumentElements.CloseButton}">
        <dxdove:ControlBoxButton x:Name="PART_Button" BorderStyle="{StaticResource DocumentCloseButtonBorderStyle}" dxdove:DockPane.HitTestType="CloseButton">
            <dxdove:ControlBoxGlyphPresenter x:Name="PART_GlyphPresenter" Style="{StaticResource DocumentCloseButton}" />
        </dxdove:ControlBoxButton>
    </DataTemplate>
</ResourceDictionary>