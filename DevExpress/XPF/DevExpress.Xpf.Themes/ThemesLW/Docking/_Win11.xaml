    <dxdove:BoolToBottomThicknessConverter x:Key="BoolToBottomThicknessConverter" />
    <ControlTemplate x:Key="{dxdot:LWKey DockPaneElements.Template}" TargetType="dxdove:DockPane">
        <Grid Margin="{Binding Path=LayoutItem.ActualMargin, RelativeSource={RelativeSource TemplatedParent}}" dxdove:DockPane.HitTestType="Bounds" Background="Transparent">
            <dx:DXBorder x:Name="DockPaneContentBorder"
                    Margin="{TemplateBinding ActualBorderMargin}"
                    Padding="{TemplateBinding ActualBorderPadding}"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding ActualBorderThickness}"
                    CornerRadius="{TemplateBinding CaptionCornerRadius}"
                    SnapsToDevicePixels="True"> 
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <dxdove:FloatingDragWidget Background="Transparent">
                        <dxdove:DockPaneHeaderPresenter x:Name="PART_Header" Margin="{DynamicResource {dxdot:LWKey DockPaneElements.HeaderMargin}}" Content="{TemplateBinding Header}" />
                    </dxdove:FloatingDragWidget>
                    <dxdove:DockPaneContentPresenter
                        x:Name="PART_Content"
                        Grid.Row="1"
                        dx:FrameworkElementHelper.ClipCornerRadius="7"
                        Margin="{Binding Path=LayoutItem.ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"
                        Content="{TemplateBinding Content}" />
                </Grid>
            </dx:DXBorder>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ViewStyle" Value="Light">
                <Setter TargetName="PART_Header" Property="Margin" Value="{DynamicResource {dxdot:LWKey DockPaneElements.LightViewHeaderMargin}}" />
            </Trigger>
            <DataTrigger Binding="{Binding Path=LayoutItem.IsTabPage, RelativeSource={RelativeSource Mode=Self}}" Value="True">
                <Setter Property="BorderThickness" TargetName="DockPaneContentBorder"
                    Value="{Binding Path=ActualBorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToBottomThicknessConverter}}"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
