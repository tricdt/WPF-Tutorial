                <dx:DXBorder x:Name="PART_SelectedPage"
                        Background="{dx:LWBrush 'Brush.Control.Background, Win11Dark=Brush.PanelBackground'}"
                        BorderBrush="{dx:LWBrush 'Brush.Border, Win11Dark=Brush.PanelBorder'}"
