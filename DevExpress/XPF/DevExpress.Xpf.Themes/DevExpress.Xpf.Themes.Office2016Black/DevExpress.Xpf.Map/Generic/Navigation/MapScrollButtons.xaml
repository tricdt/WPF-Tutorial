<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/map/themekeys" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/map" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Map.MapScrollButtonsLayoutControl}" TargetType="local:MapScrollButtonsLayoutControl">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:MapScrollButtonsLayoutControl">
          <local:MapScrollButtons x:Name="PART_ScrollButtons" Command="{Binding Path=Command}" IsEnabled="{Binding Path=Map.EnableScrolling}" IsManipulationEnabled="{Binding Path=Map.IsManipulationEnabled}" />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Map.MapScrollButtons}" TargetType="local:MapScrollButtons">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:MapScrollButtons">
          <Grid Width="64" Height="64">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="FocusStates">
                <VisualState x:Name="Focused">
                  <Storyboard>
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Right" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Down" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Left" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Up" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Unfocused" />
              </VisualStateGroup>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Right" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Down" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Left" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Up" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <Storyboard>
                    <DoubleAnimation Duration="0" To="0.5" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Arrows" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementPressedColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Right" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementPressedColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Down" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementPressedColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Left" />
                    <ColorAnimation Duration="0" To="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementPressedColor}}" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="Up" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Disabled">
                  <Storyboard>
                    <DoubleAnimation Duration="0" To="0.15" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Arrows" />
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Ellipse Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayBackground}}" />
            <Grid x:Name="Arrows">
              <Path x:Name="Right" Stretch="Fill" Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementForeground}}" Data="F1 M 1252,756L 1258,762L 1252,768L 1252,756 Z " HorizontalAlignment="Right" Height="12" Margin="0,0,6,0" UseLayoutRounding="False" VerticalAlignment="Center" Width="6" />
              <Path x:Name="Down" Stretch="Fill" Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementForeground}}" Data="F1 M 1280,775L 1274,781L 1268,775L 1280,775 Z " HorizontalAlignment="Center" Height="6" Margin="0,0,0,6" UseLayoutRounding="False" VerticalAlignment="Bottom" Width="12" />
              <Path x:Name="Left" Stretch="Fill" Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementForeground}}" Data="F1 M 1291,765L 1285,759L 1291,753L 1291,765 Z " HorizontalAlignment="Left" Height="12" Margin="6,0,0,0" UseLayoutRounding="False" VerticalAlignment="Center" Width="6" />
              <Path x:Name="Up" Stretch="Fill" Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=OverlayElementForeground}}" Data="F1 M 1265,758L 1271,752L 1277,758L 1265,758 Z " HorizontalAlignment="Center" Height="6" Margin="0,6,0,0" UseLayoutRounding="False" VerticalAlignment="Top" Width="12" />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>