<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxsche="http://schemas.devexpress.com/winfx/2008/xaml/scheduling" xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduling/themekeys" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxee="clr-namespace:DevExpress.Xpf.Editors;assembly=DevExpress.Xpf.Core.v24.1" xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <DataTemplate x:Key="{dxscht:SchedulerEditorThemeKey ResourceKey=AppointmentLabelEdit_ItemTemplate}">
    <DockPanel>
      <Border DockPanel.Dock="Left" Width="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}}" Margin="0,0,4,0" BorderBrush="Gray" BorderThickness="1" CornerRadius="1" Background="{Binding Path=Brush}" />
      <TextBlock x:Name="PART_Editor" Text="{Binding Caption}" />
    </DockPanel>
  </DataTemplate>
  <ControlTemplate x:Key="{dxscht:SchedulerEditorThemeKey ResourceKey=AppointmentLabelEdit_EditNonEditableTemplate}">
    <DockPanel>
      <Border DockPanel.Dock="Left" Width="{Binding Path=ActualHeight, RelativeSource={RelativeSource Self}}" Margin="0,0,4,0" BorderBrush="Gray" BorderThickness="1" CornerRadius="1" Background="{Binding Path=(dxe:BaseEdit.OwnerEdit).SelectedItem.Brush, RelativeSource={RelativeSource TemplatedParent}}" />
      <TextBlock x:Name="PART_Editor" />
    </DockPanel>
  </ControlTemplate>
  <Style x:Key="AppointmentLabelEdit.DefaultItemContainerStyle" TargetType="dxe:ComboBoxEditItem">
    <Setter Property="Visibility" Value="{DXBinding '(object)Id ne null' , Converter={dxmvvm:BooleanToVisibilityConverter}}" />
  </Style>
  <Style x:Key="AppointmentLabelEdit.DefaultStyle" TargetType="dxsche:AppointmentLabelEdit" BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Editors.ComboBoxEdit}}">
    <Setter Property="ItemsSource" Value="{Binding ItemsCollection, RelativeSource={RelativeSource Self}}" />
    <Setter Property="DisplayMember" Value="Caption" />
    <Setter Property="IsTextEditable" Value="False" />
    <Setter Property="ApplyItemTemplateToSelectedItem" Value="True" />
    <Setter Property="ItemTemplate" Value="{DynamicResource {dxscht:SchedulerEditorThemeKey ResourceKey=AppointmentLabelEdit_ItemTemplate}}" />
    <Setter Property="EditNonEditableTemplate" Value="{DynamicResource {dxscht:SchedulerEditorThemeKey ResourceKey=AppointmentLabelEdit_EditNonEditableTemplate}}" />
    <Setter Property="ItemContainerStyle" Value="{StaticResource AppointmentLabelEdit.DefaultItemContainerStyle}" />
  </Style>
</ResourceDictionary>