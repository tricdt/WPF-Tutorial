    <ControlTemplate x:Key="{dxdvt:DocumentViewerThemeKeyExtension ResourceKey=DocumentViewerBarTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="0,0,0,3">
            <Border x:Name="ShadowBorder"
                    Background="White"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect x:Name="Shadow"
                                      BlurRadius="3"
                                      Direction="270"
                                      Opacity="0.35"
                                      ShadowDepth="1"/>
                </Border.Effect>
            </Border>
            <Border BorderThickness="0,0,0,1">
                <Border.BorderBrush>
                    <LinearGradientBrush cs:Name="LinearGradientBrush_1492"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                        >
                        <GradientStop Color="#FF838383"
                                      cs:Name="GradientStop_0003"
                                      Offset="0"
                                      cs:Office2010Blue.Color="#FF94ADCC"
                                      cs:Office2010Silver.Color="#FFC0C4C9"
                                     />
                        <GradientStop Color="#C2454545"
                                      cs:Name="GradientStop_0004"
                                      Offset="1"
                                      cs:Office2010Blue.Color="#FF94ADCC"
                                      cs:Office2010Silver.Color="#C0C4C9"
                                     />
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush cs:Name="LinearGradientBrush_1493"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                        >
                        <GradientStop Color="#FFB9B9B9"
                                      cs:Name="GradientStop_0005"
                                      Offset="0"
                                      cs:Office2010Blue.Color="#FFEDF4FD"
                                      cs:Office2010Silver.Color="#FFFFFF"
                                     />
                        <GradientStop Color="#FF9D9D9D"
                                      cs:Name="GradientStop_0006"
                                      Offset="1"
                                      cs:Office2010Blue.Color="#FFD9E4F2"
                                      cs:Office2010Silver.Color="#E9EDF1"
                                     />
                    </LinearGradientBrush>
                </Border.Background>
                <ContentPresenter Margin="12,4,4,4"/>
            </Border>
        </Grid>
    </ControlTemplate>

