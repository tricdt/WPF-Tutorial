<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <dx:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverterInverted" Invert="True"/>

    <ControlTemplate x:Key="{dxgt:GroupRowThemeKey ResourceKey=ExpandButtonTemplate}" TargetType="{x:Type dx:ToggleStateButton}">
        <Grid Background="Transparent"
              cs:Name="Grid_0001"
              SnapsToDevicePixels="True"
              cs:Office2010Blue.Background="Transparent"
              cs:Office2010Silver.Background="Transparent"
             >
            <Path x:Name="Plus2"
                  cs:Name="Path_0001"
                  Data="F1 M 248,132L 247,132L 247,130L 249,128L 247,126L 247,124L 248,124L 252,128L 248,132 Z "
                  Fill="#FF3C3C3C"
                  Height="8"
                  Stretch="Fill"
                  Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverterInverted}}"
                  Width="5"
                  cs:Office2010Blue.Fill="#FF515D7A"
                  cs:Office2010Silver.Fill="#FF80838F"
                 />
            <Path x:Name="Plus1"
                  cs:Name="Path_0002"
                  Data="F1 M 261,133L 261,132L 259,132L 257,134L 255,132L 253,132L 253,133L 257,137L 261,133 Z "
                  Fill="#FF3C3C3C"
                  Height="5"
                  Stretch="Fill"
                  Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Width="8"
                  cs:Office2010Blue.Fill="#FF515D7A"
                  cs:Office2010Silver.Fill="#FF80838F"
                 />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="Visibility"
                        TargetName="Plus1"
                        Value="Collapsed"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Visibility"
                        TargetName="Plus2"
                        Value="Collapsed"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Grid.BackgroundBorderControl}" TargetType="{x:Type dxg:BackgroundBorderControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxg:BackgroundBorderControl}">
                    <Border Background="#FFFFFFFF"
                            BorderBrush="#FFFFFFFF"
                            BorderThickness="0,0,0,1"
                            cs:Name="Border_0001"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,1,0"
                            x:Name="PART_Background"
                            VerticalAlignment="Stretch"
                            cs:Office2010Blue.Background="#FFFFFFFF"
                            cs:Office2010Blue.BorderBrush="#FFFFFFFF"
                            cs:Office2010Silver.Background="#FFFFFFFF"
                            cs:Office2010Silver.BorderBrush="#FFFFFFFF"
                           />
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Level}" Value="0">
                            <Setter Property="Margin" TargetName="PART_Background" Value="0"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="{dxgt:GroupRowThemeKey ResourceKey=ExpandDetailButtonTemplate}" TargetType="{x:Type dxg:GridToggleStateButton}">
        <Grid Background="Transparent"
              cs:Name="Grid_0002"
              dx:FrameworkElementHelper.IsVisible="{Binding Path=(dxg:GridDetailExpandButtonContainer.IsDetailButtonVisible), RelativeSource={RelativeSource TemplatedParent}}"
              cs:Office2010Blue.Background="Transparent"
              cs:Office2010Silver.Background="Transparent"
             >
            <Border x:Name="BottomBorder"
                    Background="Transparent"
                    BorderBrush="#FFFFFFFF"
                    BorderThickness="0,0,0,1"
                    cs:Name="Border_0003"
                    Margin="0,0,1,0"
                    Visibility="Collapsed"
                    cs:Office2010Blue.Background="Transparent"
                    cs:Office2010Blue.BorderBrush="#FFFFFFFF"
                    cs:Office2010Silver.Background="Transparent"
                    cs:Office2010Silver.BorderBrush="#FFFFFFFF"
                   />
            <Grid Height="9" Width="9">
                <Rectangle cs:Name="Rectangle_0001"
                           Fill="Transparent"
                           Margin="1,1,-1,-1"
                           Opacity="0.1"
                           cs:Office2010Blue.Fill="#FF000000"
                           cs:Office2010Silver.Fill="#FF000000"
                          />
                <Rectangle Margin="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0442"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#FFF4F4F4"
                                          cs:Name="GradientStop_0001"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFFFFFFF"
                                          cs:Office2010Silver.Color="#FFFFFFFF"
                                         />
                            <GradientStop Color="#FFD9D9D9"
                                          cs:Name="GradientStop_0002"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFEAEDF1"
                                          cs:Office2010Silver.Color="#FFEAEDF1"
                                         />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Path cs:Name="Path_0003"
                      Data="F1 M 145,63L 154,63L 154,72L 145,72L 145,63 Z M 146,64.0001L 146,71.0001L 153,71.0001L 153,64.0001L 146,64.0001 Z M 147,67.0001L 152,67.0001L 152,68.0001L 147,68.0001L 147,67.0001 Z "
                      Fill="#FF3C3C3C"
                      Stretch="Fill"
                      Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"
                      cs:Office2010Blue.Fill="#FF515D7A"
                      cs:Office2010Silver.Fill="#FF80838F"
                     />
                <Path cs:Name="Path_0004"
                      Data="F1 M 135,67L 137,67L 137,65L 138,65L 138,67L 140,67L 140,68L 138,68L 138,70L 137,70L 137,68L 135,68L 135,67 Z M 133,63.0001L 142,63.0001L 142,72.0001L 133,72.0001L 133,63.0001 Z M 134,64.0001L 134,71.0001L 141,71.0001L 141,64.0001L 134,64.0001 Z "
                      Fill="#FF3C3C3C"
                      Stretch="Fill"
                      Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverterInverted}}"
                      cs:Office2010Blue.Fill="#FF515D7A"
                      cs:Office2010Silver.Fill="#FF80838F"
                     />
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ShowRowBreak" Value="False"/>
                    <Condition Property="IsChecked" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Visibility"
                        TargetName="BottomBorder"
                        Value="Visible"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxgt:GroupRowThemeKey ResourceKey=ExpandButtonStyle}" TargetType="{x:Type dx:ToggleStateButton}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Width" Value="13"/>
        <Setter Property="Height" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{DynamicResource {dxgt:GroupRowThemeKey ResourceKey=ExpandButtonTemplate}}"/>
    </Style>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Grid.GridToggleStateButton}" TargetType="{x:Type dxg:GridToggleStateButton}">
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{DynamicResource {dxgt:GroupRowThemeKey ResourceKey=ExpandDetailButtonTemplate}}"/>
    </Style>

</ResourceDictionary>