<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=ErrorPanelTemplate}" TargetType="dxg:ErrorPanel">
        <Grid Margin="5,5,5,5">
            <Border x:Name="Shadow"
                    Background="#59000000"
                    CornerRadius="2"
                    cs:Name="Border_0001"
                    Margin="6,6,-6,-6"
                    cs:Office2010Blue.Background="#BF80838F"
                    cs:Office2010Silver.Background="#BF80838F"
                   />
            <Border Background="#FF646464"
                    CornerRadius="2"
                    cs:Name="Border_0002"
                    Padding="1"
                    cs:Office2010Blue.Background="#FF849DBD"
                    cs:Office2010Silver.Background="#FFA5ACB5"
                   >
                <Border CornerRadius="1" Padding="8,3,8,4">
                    <Border.Background>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0453"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#FFB3B3B3"
                                          cs:Name="GradientStop_0001"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFEFF5FB"
                                          cs:Office2010Silver.Color="#FFF3F4F5"
                                         />
                            <GradientStop Color="#FF9F9F9F"
                                          cs:Name="GradientStop_0002"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFD1E0EF"
                                          cs:Office2010Silver.Color="#FFE3E6E8"
                                         />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="5,5,5,18" Width="247">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock cs:Name="TextBlock_0001"
                                   FontSize="18"
                                   Foreground="#FFFFFFFF"
                                   Grid.Column="1"
                                   Grid.Row="0"
                                   Padding="9,3,0,0"
                                   Text="Error"
                                   TextAlignment="Left"
                                   cs:Office2010Blue.Foreground="#FF1E395B"
                                   cs:Office2010Silver.Foreground="#FF3C3C3C"
                                  />
                        <Image x:Name="icon"
                               Grid.RowSpan="2"
                               HorizontalAlignment="Left"
                               Stretch="None"
                               VerticalAlignment="Top">
                            <Image.Source>
                                <Binding Converter="{dx:EmbeddedResourceImageConverter}" Source="DevExpress.Xpf.Core.Core.Images.ErrorIcon.png"/>
                            </Image.Source>
                        </Image>
                        <TextBlock cs:Name="TextBlock_0002"
                                   Foreground="#FFFFFFFF"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   Padding="9,3,0,0"
                                   Text="{Binding}"
                                   TextAlignment="Left"
                                   TextWrapping="Wrap"
                                   cs:Office2010Blue.Foreground="#FF1E395B"
                                   cs:Office2010Silver.Foreground="#FF3C3C3C"
                                  />
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FF484848"
                cs:Name="Border_0003"
                cs:Office2010Blue.Background="#FF849DBD"
                cs:Office2010Silver.Background="#FFA5ACB5"
               >
            <Border.Padding>
                <Binding Path="(dxg:GridBorderHelper.ShowBorder)" RelativeSource="{RelativeSource TemplatedParent}">
                    <Binding.Converter>
                        <dx:BoolToObjectConverter FalseValue="0" TrueValue="1"/>
                    </Binding.Converter>
                </Binding>
            </Border.Padding>
            <Border Background="#FF838383"
                    cs:Name="Border_0004"
                    cs:Office2010Blue.Background="#FFCFDDEE"
                    cs:Office2010Silver.Background="#FFE9EDF1"
                   >
                <ContentPresenter/>
            </Border>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=Template}" TargetType="{x:Type dxg:DataControlBase}">
        <!--BEGIN WPF-->
        <AdornerDecorator>
            <!--END WPF-->
            <Grid>
                <dx:DXArranger>
                    <dxg:DXGridThemesLoader x:Name="PART_ThemesLoader"
                                            dxg:GridBorderHelper.ShowBorder="{TemplateBinding ShowBorder}"
                                            Template="{DynamicResource {dxgt:GridControlThemeKey ResourceKey=BorderTemplate}}"/>
                </dx:DXArranger>
                <dxg:ErrorPanel x:Name="PART_ErrorPanel" Visibility="Collapsed"/>
                <dx:WaitIndicator x:Name="PART_LoadingPanel"
                                  DeferedVisibility="{TemplateBinding ShowLoadingPanel}"
                                  Style="{Binding Path=View.WaitIndicatorStyle, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Grid>
            <!--BEGIN WPF-->
        </AdornerDecorator>
        <!--END WPF-->
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=FocusedGroupRowBorderTemplate}">
        <Rectangle cs:Name="Rectangle_0001"
                   Margin="1,1,1,2"
                   Stroke="#FF969696"
                   StrokeDashArray="2 2"
                   StrokeThickness="1"
                   cs:Office2010Blue.Stroke="#FF1E395B"
                   cs:Office2010Silver.Stroke="#FF3C3C3C"
                  />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=VerticalFocusedGroupRowBorderTemplate}">
        <Rectangle cs:Name="Rectangle_0002"
                   Margin="1,1,2,1"
                   Stroke="#FF969696"
                   StrokeDashArray="2 2"
                   StrokeThickness="1"
                   cs:Office2010Blue.Stroke="#FF1E395B"
                   cs:Office2010Silver.Stroke="#FF3C3C3C"
                  />
    </ControlTemplate>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Grid.DetailHeaderControl}" TargetType="{x:Type dxg:DetailHeaderControl}">
        <Setter cs:Name="Setter_0001"
                Property="Foreground"
                Value="#FF838383"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template" Value="{DynamicResource {dxgt:GridControlThemeKey ResourceKey=DetailHeaderControlTemplate}}"/>
    </Style>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Grid.GroupPanelCaptionControl}" TargetType="{x:Type dxg:GroupPanelCaptionControl}">
        <Setter cs:Name="Setter_0002"
                Property="Foreground"
                Value="#FFE0E0E0"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="Template" Value="{DynamicResource {dxgt:GridControlThemeKey ResourceKey=GroupPanelCaptionTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=FocusedRowBorderTemplate}">
        <Rectangle cs:Name="Rectangle_0003"
                   Stroke="#FF202020"
                   StrokeDashArray="2 2"
                   StrokeThickness="1"
                   cs:Office2010Blue.Stroke="#FF849DBD"
                   cs:Office2010Silver.Stroke="#FFA5ACB5"
                  />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=FocusedCellBorderTemplate}">
        <Rectangle cs:Name="Rectangle_0004"
                   Margin="0,0,1,0"
                   Stroke="#FF202020"
                   StrokeDashArray="2 2"
                   StrokeThickness="1"
                   cs:Office2010Blue.Stroke="#FF849DBD"
                   cs:Office2010Silver.Stroke="#FFA5ACB5"
                  />
    </ControlTemplate>

    <!--BEGIN WPF-->

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=FocusedCellBorderCardViewTemplate}">
        <Rectangle cs:Name="Rectangle_0005"
                   Margin="1"
                   Stroke="#FF202020"
                   StrokeDashArray="2 2"
                   StrokeThickness="1"
                   cs:Office2010Blue.Stroke="#FF849DBD"
                   cs:Office2010Silver.Stroke="#FFA5ACB5"
                  />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridControlThemeKey ResourceKey=FocusedCardBorderTemplate}">
        <Rectangle cs:Name="Rectangle_0006"
                   Stroke="#FF202020"
                   StrokeDashArray="2 2"
                   StrokeThickness="1"
                   cs:Office2010Blue.Stroke="#FF849DBD"
                   cs:Office2010Silver.Stroke="#FFA5ACB5"
                  />
    </ControlTemplate>

    <!--END WPF-->

</ResourceDictionary>