<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxei="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=ExpandButtonTemplate}" TargetType="{x:Type dx:ToggleStateButton}">
        <Grid Background="Transparent"
              cs:Name="Grid_0001"
              Height="14"
              SnapsToDevicePixels="True"
              Width="14"
              cs:Office2010Blue.Background="Transparent"
              cs:Office2010Silver.Background="Transparent"
             >
            <Grid x:Name="HoverState" Opacity="0">
                <Border CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0443"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#BFD7A820"
                                          cs:Name="GradientStop_0001"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFECC757"
                                          cs:Office2010Silver.Color="#FFECC757"
                                         />
                            <GradientStop Color="#BFB89407"
                                          cs:Name="GradientStop_0002"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFF1D449"
                                          cs:Office2010Silver.Color="#FFF1D449"
                                         />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_0444"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FFFFFAE6"
                                              cs:Name="GradientStop_0003"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFFCF7E4"
                                              cs:Office2010Silver.Color="#FFFCF7E4"
                                             />
                                <GradientStop Color="#FFFFFFED"
                                              cs:Name="GradientStop_0004"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFFCF8E7"
                                              cs:Office2010Silver.Color="#FFFCF8E7"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border Margin="1">
                            <Border.Background>
                                <LinearGradientBrush cs:Name="LinearGradientBrush_0445"
                                                     EndPoint="0.5,1"
                                                     StartPoint="0.5,0"
                                                    >
                                    <GradientStop Color="#FFFFEEA8"
                                                  cs:Name="GradientStop_0005"
                                                  Offset="0"
                                                  cs:Office2010Blue.Color="#FFF8EBB2"
                                                  cs:Office2010Silver.Color="#FFF8EBB2"
                                                 />
                                    <GradientStop Color="#FFFFFCE0"
                                                  cs:Name="GradientStop_0006"
                                                  Offset="1"
                                                  cs:Office2010Blue.Color="#FFFCF7E4"
                                                  cs:Office2010Silver.Color="#FFFCF7E4"
                                                 />
                                    <GradientStop Color="#FFFFE277"
                                                  cs:Name="GradientStop_0007"
                                                  Offset="0.5"
                                                  cs:Office2010Blue.Color="#FFFFE575"
                                                  cs:Office2010Silver.Color="#FFFFE575"
                                                 />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PressedState" Opacity="0">
                <Border CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0446"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#FFC28F36"
                                          cs:Name="GradientStop_0008"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFBF7E3B"
                                          cs:Office2010Silver.Color="#FFBF7E3B"
                                         />
                            <GradientStop Color="#FFC2A34C"
                                          cs:Name="GradientStop_0009"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFBF7E3B"
                                          cs:Office2010Silver.Color="#FFBF7E3B"
                                         />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_0447"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FFFFE575"
                                              cs:Name="GradientStop_0010"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFFFE575"
                                              cs:Office2010Silver.Color="#FFFFE575"
                                             />
                                <GradientStop Color="#FFFFF37F"
                                              cs:Name="GradientStop_0011"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFF8EBB2"
                                              cs:Office2010Silver.Color="#FFF8EBB2"
                                             />
                                <GradientStop Color="#FFFFD86C"
                                              cs:Name="GradientStop_0012"
                                              Offset="0.5"
                                              cs:Office2010Blue.Color="#FFFFD86C"
                                              cs:Office2010Silver.Color="#FFFFD86C"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Path x:Name="GlyphExpanded"
                  cs:Name="Path_0001"
                  Data="F1 M 259,112L 259,113L 257,113L 255,111L 253,113L 251,113L 251,112L 255,108L 259,112 Z "
                  Fill="#FFE3E3E3"
                  Height="5"
                  Margin="0,0,0,1"
                  Stretch="Fill"
                  Width="8"
                  cs:Office2010Blue.Fill="#FF515D7A"
                  cs:Office2010Silver.Fill="#FF80838F"
                 />
            <Path x:Name="GlyphCollapsed"
                  cs:Name="Path_0002"
                  Data="F1 M 259,116L 259,115L 257,115L 255,117L 253,115L 251,115L 251,116L 255,120L 259,116 Z "
                  Fill="#FFE3E3E3"
                  Height="5"
                  Margin="0,1,0,0"
                  Stretch="Fill"
                  Visibility="Collapsed"
                  Width="8"
                  cs:Office2010Blue.Fill="#FF515D7A"
                  cs:Office2010Silver.Fill="#FF80838F"
                 />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter cs:Name="Setter_0001"
                        Property="Fill"
                        TargetName="GlyphCollapsed"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
                <Setter cs:Name="Setter_0002"
                        Property="Fill"
                        TargetName="GlyphExpanded"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter cs:Name="Setter_0003"
                        Property="Fill"
                        TargetName="GlyphCollapsed"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
                <Setter cs:Name="Setter_0004"
                        Property="Fill"
                        TargetName="GlyphExpanded"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
            </Trigger>
            <DataTrigger Binding="{Binding Path=SelectionState}" Value="Selected">
                <Setter cs:Name="Setter_0011"
                        Property="Fill"
                        TargetName="GlyphCollapsed"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
                <Setter cs:Name="Setter_0012"
                        Property="Fill"
                        TargetName="GlyphExpanded"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=SelectionState}" Value="Focused">
                <Setter cs:Name="Setter_0013"
                        Property="Fill"
                        TargetName="GlyphCollapsed"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
                <Setter cs:Name="Setter_0014"
                        Property="Fill"
                        TargetName="GlyphExpanded"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF80838F"
                       />
            </DataTrigger>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="Visibility"
                        TargetName="GlyphCollapsed"
                        Value="Visible"/>
                <Setter Property="Visibility"
                        TargetName="GlyphExpanded"
                        Value="Hidden"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CardStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="dxg:GridViewBase.IsFocusedRow" Value="False"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <Trigger Property="dxg:GridViewBase.IsFocusedRow" Value="True"/>
        </Style.Triggers>
    </Style>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=ContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="Root">
            <Grid x:Name="Shadow" Margin="-2">
                <Grid.OpacityMask>
                    <LinearGradientBrush cs:Name="LinearGradientBrush_0448"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                        >
                        <GradientStop Color="#7F000000"
                                      cs:Name="GradientStop_0013"
                                      Offset="0"
                                      cs:Office2010Blue.Color="#7F000000"
                                      cs:Office2010Silver.Color="#7F000000"
                                     />
                        <GradientStop Color="#FF000000"
                                      cs:Name="GradientStop_0014"
                                      Offset="1"
                                      cs:Office2010Blue.Color="#FF000000"
                                      cs:Office2010Silver.Color="#FF000000"
                                     />
                    </LinearGradientBrush>
                </Grid.OpacityMask>
                <Border Background="#0C000000"
                        CornerRadius="5"
                        cs:Name="Border_0001"
                        Padding="1"
                        cs:Office2010Blue.Background="#0C000000"
                        cs:Office2010Silver.Background="#0C000000"
                       >
                    <Border Background="#0C000000"
                            CornerRadius="4"
                            cs:Name="Border_0002"
                            cs:Office2010Blue.Background="#0C000000"
                            cs:Office2010Silver.Background="#0C000000"
                           />
                </Border>
            </Grid>
            <Border x:Name="Border"
                    Background="#FF484848"
                    CornerRadius="3"
                    cs:Name="Border_0003"
                    Grid.RowSpan="1"
                    Padding="1"
                    cs:Office2010Blue.Background="#FF849DBD"
                    cs:Office2010Silver.Background="#FFA5ACB5"
                   >
                <ContentPresenter/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="dxg:GridViewBase.IsFocusedRow" Value="False"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <Trigger Property="dxg:GridViewBase.IsFocusedRow" Value="True">
                <Setter cs:Name="Setter_0005"
                        Property="Background"
                        TargetName="Border"
                        Value="#FF333333"
                        cs:Office2010Blue.Value="#FFC0A46E"
                        cs:Office2010Silver.Value="#FFC0A46E"
                       />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxgt:GridCardThemeKey ResourceKey=HeaderPresenterStyle}" TargetType="{x:Type dxg:GridCardHeaderContentPresenter}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxgt:GridCardThemeKey ResourceKey=ContentExpandButtonStyle}" TargetType="{x:Type dxg:GridCardExpandButton}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
    </Style>

    <Style x:Key="{dxgt:GridCardThemeKey ResourceKey=ContentPresenterStyle}" TargetType="{x:Type dxg:GridCardContentPresenter}">
        <Setter Property="Margin" Value="11"/>
    </Style>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=HeaderContentTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Margin="11,3,11,3"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=ExpanderContentTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=DataContentTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="Root"
                Background="#FF6C6C6C"
                BorderBrush="#FF606060"
                BorderThickness="0,1,0,0"
                CornerRadius="0,0,2,2"
                cs:Name="Border_0005"
                cs:Office2010Blue.Background="#FFE1EDFA"
                cs:Office2010Blue.BorderBrush="#FF849DBD"
                cs:Office2010Silver.Background="#FFE9EDF1"
                cs:Office2010Silver.BorderBrush="#FFA5ACB5"
               >
            <ContentPresenter/>
        </Border>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="dxg:GridViewBase.IsFocusedRow" Value="False"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <Trigger Property="dxg:GridViewBase.IsFocusedRow" Value="True"></Trigger>
            <DataTrigger Binding="{Binding Path=IsExpanded}" Value="False"/>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=HeaderPanelTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border x:Name="Root" CornerRadius="2,2,0,0">
                <Border.Background>
                    <LinearGradientBrush cs:Name="LinearGradientBrush_0449"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                        >
                        <GradientStop Color="#FF757575"
                                      cs:Name="GradientStop_0015"
                                      Offset="0"
                                      cs:Office2010Blue.Color="#FFEFF5FB"
                                      cs:Office2010Silver.Color="#FFF3F4F5"
                                     />
                        <GradientStop Color="#FF6C6C6C"
                                      cs:Name="GradientStop_0016"
                                      Offset="1"
                                      cs:Office2010Blue.Color="#FFE1EDFA"
                                      cs:Office2010Silver.Color="#FFE9EDF1"
                                     />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter/>
        </Grid>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="dxg:GridViewBase.IsFocusedRow" Value="False"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <DataTrigger Binding="{Binding Path=(dxg:RowData.RowData).SelectionState, RelativeSource={RelativeSource TemplatedParent}}" Value="Focused">
                <Setter Property="Background" TargetName="Root">
                    <Setter.Value>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0450"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#FFFAE35C"
                                          cs:Name="GradientStop_0017"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFFCDF85"
                                          cs:Office2010Silver.Color="#FFFCDF85"
                                         />
                            <GradientStop Color="#FFF4BF23"
                                          cs:Name="GradientStop_0018"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFF4BF23"
                                          cs:Office2010Silver.Color="#FFF4BF23"
                                         />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxg:RowData.RowData).SelectionState, RelativeSource={RelativeSource TemplatedParent}}" Value="Selected">
                <Setter Property="Background" TargetName="Root">
                    <Setter.Value>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0452"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#FFF6C867"
                                          cs:Name="GradientStop_0021"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFFFE575"
                                          cs:Office2010Silver.Color="#FFFFE575"
                                         />
                            <GradientStop Color="#FFFFE48A"
                                          cs:Name="GradientStop_0022"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFFFE575"
                                          cs:Office2010Silver.Color="#FFFFE575"
                                         />
                            <GradientStop Color="#FFFFE48A"
                                          cs:Name="GradientStop_0023"
                                          Offset="0.5"
                                          cs:Office2010Blue.Color="#FFFFE575"
                                          cs:Office2010Silver.Color="#FFFFE575"
                                         />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=IsExpanded}" Value="False">
                <Setter Property="CornerRadius"
                        TargetName="Root"
                        Value="2"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxg:RowData.RowData).IsSelected, RelativeSource={RelativeSource TemplatedParent}}" Value="False">
                <Setter Property="dxg:FadeSelectionHelper.Opacity"
                        TargetName="Root"
                        Value="1"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=ControlTemplate}">
        <ContentControl x:Name="card"
                        Style="{Binding Path=(dxg:GridControl.ActiveView).CardStyle, RelativeSource={RelativeSource TemplatedParent}}"
                        Template="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=ContainerTemplate}}">
            <dxg:GridCardPanel x:Name="gridCardPanel" IsExpanded="{Binding Path=IsExpanded}">
                <dxg:GridCardPanel.Header>
                    <dxg:GridCardHeaderControl x:Name="cardHeader"
                                               cs:Name="GridCardHeaderControl_0001"
                                               Foreground="#FFFFFFFF"
                                               cs:Office2010Blue.Foreground="#FF1E395B"
                                               cs:Office2010Silver.Foreground="#FF3C3C3C"
                                              >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentControl Grid.Column="0" Template="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=HeaderContentTemplate}}">
                                <dxg:GridCardHeaderContentPresenter Style="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=HeaderPresenterStyle}}"/>
                            </ContentControl>
                            <ContentControl Grid.Column="1"
                                            Template="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=ExpanderContentTemplate}}"
                                            Visibility="{Binding Path=View.ShowCardExpandButton, Converter={StaticResource BoolToVisibilityConverter}}">
                                <dxg:GridCardExpandButton Style="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=ContentExpandButtonStyle}}"/>
                            </ContentControl>
                        </Grid>
                    </dxg:GridCardHeaderControl>
                </dxg:GridCardPanel.Header>
                <dxg:GridCardPanel.Body>
                    <ContentControl Template="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=DataContentTemplate}}">
                        <dxg:GridCardContentPresenter x:Name="presenter" Style="{DynamicResource {dxgt:GridCardThemeKey ResourceKey=ContentPresenterStyle}}"/>
                    </ContentControl>
                </dxg:GridCardPanel.Body>
            </dxg:GridCardPanel>
        </ContentControl>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=View.CollapsedCardOrientation}" Value="Vertical">
                <Setter Property="RotateOnCollapse"
                        TargetName="gridCardPanel"
                        Value="True"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=SelectionState}" Value="Selected">
                <Setter cs:Name="Setter_0009"
                        Property="Foreground"
                        TargetName="cardHeader"
                        Value="#FF000000"
                        cs:Office2010Blue.Value="#FF1E395B"
                        cs:Office2010Silver.Value="#FF3C3C3C"
                       />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=SelectionState}" Value="Focused">
                <Setter cs:Name="Setter_0010"
                        Property="Foreground"
                        TargetName="cardHeader"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF1E395B"
                        cs:Office2010Silver.Value="#FF3C3C3C"
                       />
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="LoadingIndicator" TargetType="{x:Type ProgressBar}">
        <Grid SnapsToDevicePixels="True">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Determinate"/>
                    <VisualState x:Name="Indeterminate">
                        <Storyboard>
                            <DoubleAnimation Duration="00:00:2"
                                             RepeatBehavior="Forever"
                                             Storyboard.TargetName="borderLoading"
                                             Storyboard.TargetProperty="(Panel.Background).(Brush.RelativeTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                             To="360"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Background="#FF484848"
                    CornerRadius="128"
                    cs:Office2010Blue.Background="#FF9CB2CE"
                    cs:Office2010Silver.Background="#FFABB1B9"
                   >
                <Grid Margin="1">
                    <Border Background="#FFC0C0C0"
                            CornerRadius="128"
                            cs:Office2010Blue.Background="#FFD0DCE7"
                            cs:Office2010Silver.Background="#FFF2F3F5"
                           >
                        <Border Background="#FFA0A0A0"
                                CornerRadius="128"
                                Margin="1"
                                cs:Office2010Blue.Background="#FFE1EDFA"
                                cs:Office2010Silver.Background="#FFA0A0A0"
                               />
                    </Border>
                    <Border x:Name="borderLoading" CornerRadius="128">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#BFFFCC00"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#BFFFCC00"
                                              cs:Office2010Silver.Color="#BFFFCC00"
                                             />
                                <GradientStop Color="#00FFCC00"
                                              Offset="0.5"
                                              cs:Office2010Blue.Color="#00FFCC00"
                                              cs:Office2010Silver.Color="#00FFCC00"
                                             />
                                <GradientStop Color="#00FFCC00"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#00FFCC00"
                                              cs:Office2010Silver.Color="#00FFCC00"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border Background="#FFC0C0C0"
                            CornerRadius="128"
                            Margin="{TemplateBinding Padding}"
                            cs:Office2010Blue.Background="#FFD0DCE7"
                            cs:Office2010Silver.Background="#FFF2F3F5"
                           >
                        <Border Background="#FF484848"
                                CornerRadius="128"
                                Margin="1"
                                cs:Office2010Blue.Background="#FF9CB2CE"
                                cs:Office2010Silver.Background="#FFABB1B9"
                               >
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="128"
                                    Margin="1"/>
                        </Border>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxgt:GridCardThemeKey ResourceKey=LoadingCardTemplate}" TargetType="dxg:LoadingCardControl">
        <Grid x:Name="Root"
              Margin="1"
              MinHeight="216"
              MinWidth="216">
            <ProgressBar x:Name="Indicator"
                         Background="#FFFFFFFF"
                         Height="16"
                         HorizontalAlignment="Center"
                         IsIndeterminate="{Binding ShowLoadingIndicator}"
                         Margin="8"
                         MinHeight="4"
                         MinWidth="4"
                         Padding="2"
                         Template="{StaticResource LoadingIndicator}"
                         VerticalAlignment="Center"
                         Visibility="{Binding ShowLoadingIndicator, Converter={StaticResource BoolToVisibilityConverter}}"
                         Width="16"
                         cs:Office2010Blue.Background="#FFFFFFFF"
                         cs:Office2010Silver.Background="#FFFFFFFF"
                        />
            <dxg:LoadingRowButton Click="{DXEvent 'LoadMoreRows()'}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding AllowLoadMore, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Margin="15,0,9,1" Orientation="Horizontal">
                    <Label Content="{dxg:GridControlStringId LoadingRowLoadMore}"
                           Foreground="#FF000000"
                           cs:Office2010Blue.Foreground="#FF1E395B"
                           cs:Office2010Silver.Foreground="#FF000000"
                          />
