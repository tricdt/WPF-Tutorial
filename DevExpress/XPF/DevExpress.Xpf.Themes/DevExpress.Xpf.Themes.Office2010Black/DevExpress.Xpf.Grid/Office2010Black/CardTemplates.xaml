<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CardRowHeaderTextStyle}" TargetType="{x:Type TextBlock}">
        <Setter cs:Name="Setter_0001"
                Property="Foreground"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
        <Setter Property="Margin" Value="0,3,0,3"/>
    </Style>

    <CornerRadius x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellCornerRadius}">0</CornerRadius>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellBorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBackground}"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2010Blue.Color="#FFFFFFFF"
                     cs:Office2010Silver.Color="#FFFFFFFF">
        #FFFFFFFF
    </SolidColorBrush>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBrush}"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2010Blue.Color="#FF849DBD"
                     cs:Office2010Silver.Color="#FFA5ACB5">
        #FF6A6A6A
    </SolidColorBrush>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedForeground}"
                     cs:Name="SolidColorBrush_0003"
                     cs:Office2010Blue.Color="#FF1E395B"
                     cs:Office2010Silver.Color="#FF3C3C3C">
        #FF000000
    </SolidColorBrush>

    <dxg:DefaultStyle x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellStyle}" TargetType="{x:Type dxg:CellContentPresenter}"/>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellContentPresenterMargin}">0,0,0,0</Thickness>

    <DataTemplate x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=SeparatorTemplate}">
        <Grid x:Name="container">
            <Border x:Name="border"
                    Background="#FFD2D2D2"
                    cs:Name="Border_0001"
                    MinHeight="1"
                    MinWidth="1"
                    cs:Office2010Blue.Background="#FFEDF4FD"
                    cs:Office2010Silver.Background="#FFD2D2D2"
                   />
        </Grid>
        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter cs:Name="Setter_0003"
                        Property="Background"
                        TargetName="border"
                        Value="#FFAED1FF"
                        cs:Office2010Blue.Value="#FFAED1FF"
                        cs:Office2010Silver.Value="#FFAED1FF"
                       />
            </Trigger>
            <DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Horizontal">
                <Setter Property="Margin"
                        TargetName="container"
                        Value="0,3,0,3"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Vertical">
                <Setter Property="Margin"
                        TargetName="container"
                        Value="3,0,3,0"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>