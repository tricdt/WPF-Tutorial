<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxef="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2010Black.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/FilterControl.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <dxef:GroupTypeConverter x:Key="FilterControlGroupTypeConverter"/>

    <dxef:OperationStringConverter x:Key="FilterControlOperationStringConverter"/>

    <SolidColorBrush x:Key="{dxet:FilterControlThemeKey ResourceKey=InplaceFilterEditorForeground}"
                     Color="#FF000000"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2010Blue.Color="#FF000000"
                     cs:Office2010Silver.Color="#FF000000"/>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FF484848"
                    cs:Name="Border_0001"
                    cs:Office2010Blue.Background="#FF94ADCC"
                    cs:Office2010Silver.Background="#FFA5ACB5"
                   />
            <Border Background="#FFF0F0F0"
                    cs:Name="Border_0002"
                    cs:Office2010Blue.Background="#FFFFFFFF"
                    cs:Office2010Silver.Background="#FFFFFFFF"
                   >
                <Border.Margin>
                    <Binding Path="Tag" RelativeSource="{RelativeSource TemplatedParent}">
                        <Binding.Converter>
                            <dx:BoolToObjectConverter>
                                <dx:BoolToObjectConverter.TrueValue>
                                    <Thickness>1</Thickness>
                                </dx:BoolToObjectConverter.TrueValue>
                                <dx:BoolToObjectConverter.FalseValue>
                                    <Thickness>0</Thickness>
                                </dx:BoolToObjectConverter.FalseValue>
                            </dx:BoolToObjectConverter>
                        </Binding.Converter>
                    </Binding>
                </Border.Margin>
            </Border>
            <dx:BackgroundPanel Background="Transparent"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                cs:Name="BackgroundPanel_0002"
                                Foreground="#FF000000"
                                Margin="1"
                                cs:Office2010Blue.Background="Transparent"
                                cs:Office2010Blue.Foreground="#FF1E395B"
                                cs:Office2010Silver.Background="Transparent"
                                cs:Office2010Silver.Foreground="#FF3C3C3C"
                               >
                <!--BEGIN WPF-->
                <dx:BackgroundPanel.ContentTemplateSelector>
                    <Binding Path="ContentTemplateSelector" RelativeSource="{RelativeSource TemplatedParent}"/>
                </dx:BackgroundPanel.ContentTemplateSelector>
                <!--END WPF-->
            </dx:BackgroundPanel>
            <!--<ContentPresenter Margin="1" TextBlock.Foreground="Black"/>-->
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlGroupTypeButtonTemplate}" TargetType="{x:Type ContentControl}">
        <TextBlock x:Name="TextButton"
                   cs:Name="TextBlock_0001"
                   Foreground="#FFFF0000"
                   Text="{Binding Path=NodeType, Converter={StaticResource FilterControlGroupTypeConverter}}"
                   cs:Office2010Blue.Foreground="#FFFF0000"
                   cs:Office2010Silver.Foreground="#FFFF0000"
                  />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlFirstOperandButtonTemplate}" TargetType="{x:Type ContentControl}">
        <dx:XPFContentControl x:Name="FirstOperandButton"
                              Content="{Binding Path=ColumnHeaderCaption}"
                              ContentTemplate="{Binding Path=ColumnHeaderTemplate}"
                              ContentTemplateSelector="{Binding Path=ColumnHeaderTemplateSelector}"
                              cs:Name="XPFContentControl_0001"
                              Cursor="Hand"
                              Foreground="#FF0000FF"
                              Margin="0,2,0,2"
                              VerticalAlignment="Center"
                              cs:Office2010Blue.Foreground="#FF0000FF"
                              cs:Office2010Silver.Foreground="#FF0000FF"
                             />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlClauseOperationButtonTemplate}" TargetType="{x:Type ContentControl}">
        <TextBlock x:Name="TextButton"
                   cs:Name="TextBlock_0002"
                   Foreground="#FF008000"
                   Margin="0,2,0,2"
                   Text="{Binding Path=Operation, Converter={StaticResource FilterControlOperationStringConverter}}"
                   VerticalAlignment="Center"
                   cs:Office2010Blue.Foreground="#FF008000"
                   cs:Office2010Silver.Foreground="#FF008000"
                  />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=OneLocalDateTimeTemplate}">
        <dx:XPFContentControl x:Name="LocalDateTimeButton"
                              Content="{Binding Path=LocalDateTimeFunctionLabel}"
                              cs:Name="XPFContentControl_0002"
                              Cursor="Hand"
                              Foreground="#FF0000FF"
                              Margin="0,3,3,3"
                              VerticalAlignment="Center"
                              cs:Office2010Blue.Foreground="#FF0000FF"
                              cs:Office2010Silver.Foreground="#FF0000FF"
                             />
    </ControlTemplate>

    <!--BEGIN WPF-->

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlTemplate}" TargetType="{x:Type dxef:FilterControl}">
        <dxef:FilterControlBarManager>
            <dxef:FilterControlBarManager.Resources>
                <dxef:GroupFilterControlNodeToListConverter x:Key="itemsSourceConverter"/>
            </dxef:FilterControlBarManager.Resources>
            <Grid>
                <ContentControl SnapsToDevicePixels="True"
                                Tag="{TemplateBinding ShowBorder}"
                                Template="{DynamicResource {dxet:FilterControlThemeKey ResourceKey=FilterControlBorderTemplate}}"
                                UseLayoutRounding="True">
                    <ScrollViewer BorderThickness="0"
                                  dx:FocusHelper2.Focusable="False"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Grid cs:Name="Grid_0001"
                              TextElement.Foreground="#FF000000"
                              cs:Office2010Blue.TextElement.Foreground="#FF000000"
                              cs:Office2010Silver.TextElement.Foreground="#FF000000"
                             >
                            <ItemsControl x:Name="PART_ItemsControl"
                                          dx:FocusHelper2.Focusable="False"
                                          ItemsSource="{Binding Path=RootNode, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource itemsSourceConverter}}"
                                          ItemTemplate="{DynamicResource {dxet:FilterControlThemeKey ResourceKey=ItemsControlItemTemplate}}"
                                          Margin="6,2,6,6"/>
                            <Canvas x:Name="PART_FocusVisualContainer" Focusable="False"/>
                        </Grid>
                    </ScrollViewer>
                </ContentControl>
            </Grid>
        </dxef:FilterControlBarManager>
    </ControlTemplate>

    <!--END WPF-->

</ResourceDictionary>