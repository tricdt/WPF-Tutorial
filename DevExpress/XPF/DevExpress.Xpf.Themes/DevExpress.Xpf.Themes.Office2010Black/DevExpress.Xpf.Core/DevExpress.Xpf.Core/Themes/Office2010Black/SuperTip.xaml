<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.Office2010Black.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Themes/StandardControls/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="{dxt:SuperTipThemeKey ResourceKey=Foreground}"
                     cs:Office2010Blue.Color="#FF515D7A"
                     cs:Office2010Silver.Color="#FF3C3C3C">
        #FFFFFFFF
    </SolidColorBrush>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=ItemContentStyle}">
        <Setter Property="TextElement.Foreground" Value="{StaticResource {dxt:SuperTipThemeKey ResourceKey=Foreground}}"/>
        <Setter Property="TextElement.FontSize" Value="12"/>
        <Setter Property="TextElement.FontFamily" Value="Segoe UI"/>
        <Setter Property="TextElement.FontStyle" Value="Normal"/>
        <Setter Property="TextElement.FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=HeaderContentStyle}">
        <Setter Property="TextElement.Foreground" Value="{StaticResource {dxt:SuperTipThemeKey ResourceKey=Foreground}}"/>
        <Setter Property="TextElement.FontSize" Value="12"/>
        <Setter Property="TextElement.FontFamily" Value="Segoe UI"/>
        <Setter Property="TextElement.FontStyle" Value="Normal"/>
        <Setter Property="TextElement.FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=SeparatorContentStyle}"/>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=ItemLayoutStyle}" TargetType="{x:Type dx:Items2Panel}">
        <Setter Property="HorizontalIndent" Value="4"/>
    </Style>

    <Style x:Key="{dxt:SuperTipThemeKey ResourceKey=HeaderLayoutStyle}" TargetType="{x:Type dx:Items2Panel}">
        <Setter Property="HorizontalIndent" Value="4"/>
    </Style>

    <DataTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=ItemContentTemplate}">
        <TextBlock Margin="0,0,0,2" Text="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=HeaderContentTemplate}">
        <TextBlock FontWeight="Bold"
                   Margin="0,0,0,2"
                   Text="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=SeparatorContentTemplate}">
        <Border BorderThickness="0,0,0,1"
                Height="2"
                Margin="4,4,4,2">
            <Border.Background>
                <LinearGradientBrush cs:Name="LinearGradientBrush_0044"
                                     EndPoint="1,0.5"
                                     StartPoint="0,0.5"
                                    >
                    <GradientStop Color="#00767676"
                                  cs:Name="GradientStop_0001"
                                  Offset="0"
                                  cs:Office2010Blue.Color="#00859EBF"
                                  cs:Office2010Silver.Color="#0084878B"
                                 />
                    <GradientStop Color="#00767676"
                                  cs:Name="GradientStop_0002"
                                  Offset="1"
                                  cs:Office2010Blue.Color="#00859EBF"
                                  cs:Office2010Silver.Color="#0084878B"
                                 />
                    <GradientStop Color="#90767676"
                                  cs:Name="GradientStop_0003"
                                  Offset="0.5"
                                  cs:Office2010Blue.Color="#7F859EBF"
                                  cs:Office2010Silver.Color="#90767676"
                                 />
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush cs:Name="LinearGradientBrush_0045"
                                     EndPoint="1,0.5"
                                     StartPoint="0,0.5"
                                    >
                    <GradientStop Color="#00FFFFFF"
                                  cs:Name="GradientStop_0004"
                                  Offset="0"
                                  cs:Office2010Blue.Color="#00FFFFFF"
                                  cs:Office2010Silver.Color="#00FFFFFF"
                                 />
                    <GradientStop Color="#00FFFFFF"
                                  cs:Name="GradientStop_0005"
                                  Offset="1"
                                  cs:Office2010Blue.Color="#00FFFFFF"
                                  cs:Office2010Silver.Color="#00FFFFFF"
                                 />
                    <GradientStop Color="#90FFFFFF"
                                  cs:Name="GradientStop_0006"
                                  Offset="0.5"
                                  cs:Office2010Blue.Color="#7FFFFFFF"
                                  cs:Office2010Silver.Color="#90FFFFFF"
                                 />
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>
    </DataTemplate>

    <ControlTemplate x:Key="{dxt:SuperTipThemeKey ResourceKey=BorderTemplate}" TargetType="ContentControl">
        <ContentPresenter/>
    </ControlTemplate>

</ResourceDictionary>