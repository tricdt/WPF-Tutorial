<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DropMarkerBackground}"
                     Color="#FFFFFFFF"
                     cs:Office2010Blue.Color="#FFFFFFFF"
                     cs:Office2010Silver.Color="White"/>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DropMarkerBorderBrush}"
                     Color="#FFFFCC00"
                     cs:Office2010Blue.Color="#FFDDAA22"
                     cs:Office2010Silver.Color="#FFDDAA22"/>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintBorderBrush}"
                     Color="#FF646464"
                     cs:Office2010Blue.Color="#FF94ADCC"
                     cs:Office2010Silver.Color="#FFA5ACB5"/>

    <CornerRadius x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCornerRadius}">0</CornerRadius>

    <LinearGradientBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintBackground}"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFB3B3B3"
                      Offset="0"
                      cs:Office2010Blue.Color="#FFB3B3B3"
                      cs:Office2010Silver.Color="#FFE3E6E8"
                     />
        <GradientStop Color="#FF9F9F9F"
                      Offset="1"
                      cs:Office2010Blue.Color="#FF9F9F9F"
                      cs:Office2010Silver.Color="#FFF3F4F5"
                     />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCaptionForeground}"
                     Color="#FFFFFFFF"
                     cs:Office2010Blue.Color="#FF1E395B"
                     cs:Office2010Silver.Color="#FF3C3C3C"/>

    <FontWeight x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCaptionFontWeight}">Bold</FontWeight>

    <sys:Double x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCaptionFontSize}">12</sys:Double>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintDescriptionForeground}"
                     Color="#FFFFFFFF"
                     cs:Office2010Blue.Color="#FF1E395B"
                     cs:Office2010Silver.Color="#FF80838F"/>

</ResourceDictionary>