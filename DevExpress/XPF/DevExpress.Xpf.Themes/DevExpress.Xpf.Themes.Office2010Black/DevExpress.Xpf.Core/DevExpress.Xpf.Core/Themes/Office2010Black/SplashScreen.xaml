<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:WpfSvgPalette x:Key="ThemedSplashScreen.LogoPalette">
        <SolidColorBrush x:Key="BlackColor"
                         Color="#FFFBB110"
                        />
        <SolidColorBrush x:Key="WhiteColor"
                         Color="#50000000"
                        />
    </dx:WpfSvgPalette>

    <LinearGradientBrush x:Key="ProgressBarBackgroundBrush"
                         EndPoint="0,1"
                         StartPoint="0,0"
                        >
        <GradientStop Color="#FFEDEDED"
                      Offset="0"
                     />
        <GradientStop Color="#FFFCFCFC"
                      Offset="1"
                      cs:Office2010Blue.Color="#FFEFF5FB"
                      cs:Office2010Silver.Color="#FFFDFEFF"
                     />
        <GradientStop Color="#FFE5E5E5"
                      Offset="0.35"
                      cs:Office2010Blue.Color="#FFE4E5EC"
                      cs:Office2010Silver.Color="#FFE4E5EC"
                     />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ProgressBarBorderBrush"
                     Color="#7F4F4F4F"
                     cs:Office2010Blue.Color="#FF758EAF"
                     cs:Office2010Silver.Color="#FFA5ACB5"/>

    <Style x:Key="{dxt:SplashScreenThemeKey ResourceKey=TopRegionStyle}" TargetType="Border">
        <Setter Property="Background"
                Value="#FF838383"
                cs:Office2010Blue.Value="#FFCFDDEE"
                cs:Office2010Silver.Value="#FFE9EDF1"
               />
        <Setter Property="TextBlock.Foreground"
                Value="White"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
        <Setter Property="BorderBrush"
                Value="#FFAEAEAE"
                cs:Office2010Blue.Value="#FF87929F"
                cs:Office2010Silver.Value="#FF989898"
               />
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
    </Style>

    <Style x:Key="{dxt:SplashScreenThemeKey ResourceKey=BottomRegionStyle}" TargetType="Border">
        <Setter Property="Background"
                Value="White"
               />
        <Setter Property="TextBlock.Foreground"
                Value="Black"
               />
        <Setter Property="BorderBrush"
                Value="#FFAEAEAE"
                cs:Office2010Blue.Value="#FF87929F"
                cs:Office2010Silver.Value="#FF989898"
               />
        <Setter Property="BorderThickness" Value="1,0,1,1"/>
        <Setter Property="Height" Value="148"/>
    </Style>

    <Style x:Key="{dxt:SplashScreenThemeKey ResourceKey=ProgressBarStyle}" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource ProgressBarBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ProgressBarBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid x:Name="Root">
                        <dxn:SplashScreenBorder Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid x:Name="PART_Track" Margin="1">
                                <Grid x:Name="PART_Indicator"
                                      ClipToBounds="True"
                                      HorizontalAlignment="Left">
                                    <Rectangle x:Name="Indicator" Fill="{TemplateBinding Foreground}"/>
                                    <Grid x:Name="Animation"
                                          RenderTransformOrigin="-0.5,0.5"
                                          Visibility="Collapsed">
                                        <Grid.OpacityMask>
                                            <LinearGradientBrush EndPoint="0,0.5"
                                                                 StartPoint="1,0.5"
                                                                >
                                                <GradientStop Color="#00FFFFFF"
                                                              Offset="0"
                                                             />
                                                <GradientStop Color="#00FFFFFF"
                                                              Offset="1"
                                                             />
                                                <GradientStop Color="#7FFFFFFF"
                                                              Offset="0.15"
                                                             />
                                                <GradientStop Color="#FFFFFFFF"
                                                              Offset="0.5"
                                                             />
                                                <GradientStop Color="#7FFFFFFF"
                                                              Offset="0.85"
                                                             />
                                            </LinearGradientBrush>
                                        </Grid.OpacityMask>
                                        <dxn:SplashScreenBorder Margin="1">
                                            <dxn:SplashScreenBorder.Background>
                                                <LinearGradientBrush EndPoint="0.5,1"
                                                                     StartPoint="0.5,0"
                                                                    >
                                                    <GradientStop Color="#FFFAE35C"
                                                                  Offset="0"
                                                                  cs:Office2010Blue.Color="#FFC9E3FA"
                                                                 />
                                                    <GradientStop Color="#FFFDF270"
                                                                  Offset="1"
                                                                  cs:Office2010Blue.Color="#FFC9E3FA"
                                                                 />
                                                    <GradientStop Color="#FFECB300"
                                                                  Offset="0.35"
                                                                  cs:Office2010Blue.Color="#FFA2CBED"
                                                                 />
                                                </LinearGradientBrush>
                                            </dxn:SplashScreenBorder.Background>
                                        </dxn:SplashScreenBorder>
                                        <Grid.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="0.25"/>
                                            </TransformGroup>
                                        </Grid.RenderTransform>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </dxn:SplashScreenBorder>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Determinate"/>
                                <VisualState x:Name="Indeterminate">
                                    <Storyboard RepeatBehavior="Forever">
                                        <PointAnimationUsingKeyFrames Storyboard.TargetName="Animation" Storyboard.TargetProperty="(UIElement.RenderTransformOrigin)">
                                            <EasingPointKeyFrame KeyTime="0" Value="-0.5,0.5"/>
                                            <EasingPointKeyFrame KeyTime="0:0:1" Value="0.5,0.5"/>
                                            <EasingPointKeyFrame KeyTime="0:0:2" Value="1.5,0.5"/>
                                        </PointAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="LayoutTransform" TargetName="Root">
                                <Setter.Value>
                                    <RotateTransform Angle="-90"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsIndeterminate" Value="true">
                            <Setter Property="Visibility"
                                    TargetName="Indicator"
                                    Value="Collapsed"/>
                            <Setter Property="Visibility"
                                    TargetName="Animation"
                                    Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="WaitIndicatorProgressBarTemplate" TargetType="{x:Type ProgressBar}">
        <Grid SnapsToDevicePixels="True">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Determinate"/>
                    <VisualState x:Name="Indeterminate">
                        <Storyboard Timeline.DesiredFrameRate="{x:Static dx:WaitIndicator.DesiredFrameRate}">
                            <DoubleAnimation Duration="00:00:2"
                                             RepeatBehavior="Forever"
                                             Storyboard.TargetName="borderLoading"
                                             Storyboard.TargetProperty="(Panel.Background).(Brush.RelativeTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                             To="360"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <dxn:SplashScreenBorder Background="#FF484848"
                                    CornerRadius="128"
                                    cs:Name="Border_0001"
                                    cs:Office2010Blue.Background="#FF94ADCC"
                                    cs:Office2010Silver.Background="#FFA5ACB5"
                                   >
                <Grid Margin="1">
                    <dxn:SplashScreenBorder Background="#FFC0C0C0"
                                            CornerRadius="128"
                                            cs:Name="Border_0002"
                                            cs:Office2010Blue.Background="#FFE1EDFA"
                                            cs:Office2010Silver.Background="#FFF3F4F5"
                                           >
                        <dxn:SplashScreenBorder Background="#FFA0A0A0"
                                                CornerRadius="128"
                                                cs:Name="Border_0003"
                                                Margin="1"
                                                cs:Office2010Blue.Background="#FFCFDDEE"
                                                cs:Office2010Silver.Background="#FFE9EDF1"
                                               />
                    </dxn:SplashScreenBorder>
                    <dxn:SplashScreenBorder x:Name="borderLoading" CornerRadius="128">
                        <dxn:SplashScreenBorder.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_0046"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#BFFFCC00"
                                              cs:Name="GradientStop_0001"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#BFFFCC00"
                                              cs:Office2010Silver.Color="#BFFFCC00"
                                             />
                                <GradientStop Color="#00FFCC00"
                                              cs:Name="GradientStop_0002"
                                              Offset="0.5"
                                              cs:Office2010Blue.Color="#00FFCC00"
                                              cs:Office2010Silver.Color="#00FFCC00"
                                             />
                                <GradientStop Color="#00FFCC00"
                                              cs:Name="GradientStop_0003"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#00FFCC00"
                                              cs:Office2010Silver.Color="#00FFCC00"
                                             />
                            </LinearGradientBrush>
                        </dxn:SplashScreenBorder.Background>
                    </dxn:SplashScreenBorder>
                    <dxn:SplashScreenBorder Background="#FFC0C0C0"
                                            CornerRadius="128"
                                            cs:Name="Border_0004"
                                            Margin="{TemplateBinding Padding}"
                                            cs:Office2010Blue.Background="#FFE1EDFA"
                                            cs:Office2010Silver.Background="#FFF3F4F5"
                                           >
                        <dxn:SplashScreenBorder Background="#FF484848"
                                                CornerRadius="128"
                                                cs:Name="Border_0005"
                                                Margin="1"
                                                cs:Office2010Blue.Background="#FF94ADCC"
                                                cs:Office2010Silver.Background="#FFA5ACB5"
                                               >
                            <dxn:SplashScreenBorder Background="{TemplateBinding Background}"
                                                    CornerRadius="128"
                                                    Margin="1"/>
                        </dxn:SplashScreenBorder>
                    </dxn:SplashScreenBorder>
                </Grid>
            </dxn:SplashScreenBorder>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxt:SplashScreenThemeKey ResourceKey=WaitIndicatorProgressBarStyle}" TargetType="ProgressBar">
        <Setter Property="Template" Value="{StaticResource WaitIndicatorProgressBarTemplate}"/>
        <Setter Property="IsIndeterminate" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="31"/>
        <Setter Property="Width" Value="31"/>
        <Setter Property="MinHeight" Value="8"/>
        <Setter Property="MinWidth" Value="8"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="12,12,12,12"/>
        <Setter Property="Background"
                Value="#FF838383"
                cs:Office2010Blue.Value="#FFEDF4FD"
                cs:Office2010Silver.Value="#FFE9EDF1"/>
    </Style>

    <ControlTemplate x:Key="WaitIndicatorContainerTemplate" TargetType="ContentControl">
        <Grid Margin="5">
            <dxn:SplashScreenBorder x:Name="Shadow"
                                    Background="#FF000000"
                                    CornerRadius="4"
                                    cs:Name="Border_0006"
                                    Margin="2,2,-3,-3"
                                    Opacity="0.12"
                                    cs:Office2010Blue.Background="#FF000000"
                                    cs:Office2010Silver.Background="#FF000000"
                                   />
            <dxn:SplashScreenBorder Background="#FF484848"
                                    CornerRadius="3"
                                    cs:Name="Border_0007"
                                    Opacity="0.9"
                                    cs:Office2010Blue.Background="#FF94ADCC"
                                    cs:Office2010Silver.Background="#FFA5ACB5"
                                   >
                <dxn:SplashScreenBorder CornerRadius="2" Margin="1">
                    <dxn:SplashScreenBorder.Background>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0047"
                                             EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#FF858585"
                                          cs:Name="GradientStop_0004"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFEDF4FD"
                                          cs:Office2010Silver.Color="#FFE5E9EE"
                                         />
                            <GradientStop Color="#FF7C7C7C"
                                          cs:Name="GradientStop_0005"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFEFF5FB"
                                          cs:Office2010Silver.Color="#FFFDFEFF"
                                         />
                        </LinearGradientBrush>
                    </dxn:SplashScreenBorder.Background>
                    <ContentPresenter/>
                </dxn:SplashScreenBorder>
            </dxn:SplashScreenBorder>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxt:SplashScreenThemeKey ResourceKey=WaitIndicatorContainerStyle}" TargetType="ContentControl">
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Template" Value="{StaticResource WaitIndicatorContainerTemplate}"/>
    </Style>

    <Style x:Key="{dxt:SplashScreenThemeKey ResourceKey=WaitIndicatorStatusTextBoxStyle}" TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"/>
        <Setter Property="Margin" Value="-4,0,12,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Style.Triggers>
            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>