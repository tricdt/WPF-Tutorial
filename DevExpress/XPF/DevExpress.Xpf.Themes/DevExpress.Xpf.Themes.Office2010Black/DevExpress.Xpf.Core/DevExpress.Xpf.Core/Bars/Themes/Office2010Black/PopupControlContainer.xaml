<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxbt:PopupControlContainerThemeKey ResourceKey=ControlTemplate}" TargetType="{x:Type dxb:PopupContainer}">
        <dx:DXContentPresenter Background="{TemplateBinding Background}" Content="{TemplateBinding Content}"/>
    </ControlTemplate>

    <SolidColorBrush x:Key="borderBackground"
                     Color="#7F545658"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2010Blue.Color="#7F545658"
                     cs:Office2010Silver.Color="#7F545658"/>

    <!--BEGIN WPF-->

    <Style x:Key="{dxbt:OfficeTabletItemsControlThemeKey ResourceKey=BackButtonStyle}" TargetType="{x:Type ButtonBase}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Grid Background="Transparent"
                          cs:Name="Grid_0001"
                          cs:Office2010Blue.Background="Transparent"
                          cs:Office2010Silver.Background="Transparent"
                         >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Path x:Name="path"
                              cs:Name="Path_0001"
                              Data="F1 M 6,2L 7.46699,3.47572L 2.88984,8.05286L 7.41782,12.5808L 6,14L -1.32341e-007,8L 6,2 Z "
                              Fill="#FF3C3C3C"
                              Grid.Column="0"
                              Height="12"
                              HorizontalAlignment="Center"
                              Margin="8,3,8,3"
                              Stretch="Fill"
                              VerticalAlignment="Center"
                              Width="8"
                              cs:Office2010Blue.Fill="#FF1E395B"
                              cs:Office2010Silver.Fill="#FF3C3C3C"
                             />
                        <TextBlock x:Name="backText"
                                   cs:Name="TextBlock_0003"
                                   Foreground="#FF3C3C3C"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   MaxWidth="60"
                                   Text="{TemplateBinding Content}"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"
                                   cs:Office2010Blue.Foreground="#FF1E395B"
                                   cs:Office2010Silver.Foreground="#FF3C3C3C"
                                  />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter cs:Name="Setter_0001"
                                    Property="Foreground"
                                    TargetName="backText"
                                    Value="#FF000000"
                                    cs:Office2010Blue.Value="#FF000000"
                                    cs:Office2010Silver.Value="#FF000000"
                                   />
                            <Setter cs:Name="Setter_0002"
                                    Property="Fill"
                                    TargetName="path"
                                    Value="#FF000000"
                                    cs:Office2010Blue.Value="#FF000000"
                                    cs:Office2010Silver.Value="#FF000000"
                                   />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{dxbt:OfficeTabletItemsControlThemeKey ResourceKey=CaptionStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="8,-1,8,0"/>
        <Setter cs:Name="Setter_0003"
                Property="Foreground"
                Value="#FF3C3C3C"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
    </Style>

    <Style x:Key="{dxbt:OfficeTabletItemsControlThemeKey ResourceKey=BackgroundStyle}" TargetType="{x:Type Border}">
        <Setter Property="MinHeight" Value="25"/>
        <Setter cs:Name="Setter_0004"
                Property="Background"
                Value="#FFF0F0F0"
                cs:Office2010Blue.Value="#FFE1EDFA"
                cs:Office2010Silver.Value="#FFDDDDDD"
               />
        <Setter cs:Name="Setter_0005"
                Property="BorderBrush"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FFFFFFFF"
                cs:Office2010Silver.Value="#FFFFFFFF"
               />
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="CornerRadius" Value="2,2,0,0"/>
    </Style>

    <!--END WPF-->

</ResourceDictionary>