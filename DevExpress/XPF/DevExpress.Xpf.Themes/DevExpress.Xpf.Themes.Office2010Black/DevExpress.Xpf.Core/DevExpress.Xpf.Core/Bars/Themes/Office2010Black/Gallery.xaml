    <ControlTemplate x:Key="{dxbt:GalleryControlThemeKey ResourceKey=StandaloneCaptionTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid>
            <Border x:Name="Border"
                    BorderBrush="#FFFFFFFF"
                    BorderThickness="1,1,1,0"
                    cs:Name="Border_0001"
                    cs:Office2010Blue.BorderBrush="#FFFFFFFF"
                    cs:Office2010Silver.BorderBrush="#FFFFFFFF"
                   >
                <Border.Background>
                    <LinearGradientBrush cs:Name="LinearGradientBrush_0112"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                        >
                        <GradientStop Color="#FFD6D6D6"
                                      cs:Name="GradientStop_0001"
                                      Offset="0"
                                      cs:Office2010Blue.Color="#FFE1EDFA"
                                      cs:Office2010Silver.Color="#FFF3F4F5"
                                     />
                        <GradientStop Color="#FFC0C0C0"
                                      cs:Name="GradientStop_0002"
                                      Offset="1"
                                      cs:Office2010Blue.Color="#FFD3E5F7"
                                      cs:Office2010Silver.Color="#FFDFE5EC"
                                     />
                    </LinearGradientBrush>
                </Border.Background>
                <ContentPresenter/>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Pressed"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="CheckedStates">
                    <VisualState x:Name="Unchecked"/>
                    <VisualState x:Name="Checked"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

