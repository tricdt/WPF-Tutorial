<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxbt:BarStaticItemThemeKey ResourceKey=BorderTemplate}" TargetType="ContentControl">
        <Grid SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="border"
                    Background="#FF000000"
                    BorderBrush="#2FFFFFFF"
                    BorderThickness="1,0,1,0"
                    cs:Name="Border_0002"
                    Grid.Column="1"
                    Width="3"
                    cs:Office2010Blue.Background="#FF94ADCC"
                    cs:Office2010Blue.BorderBrush="#CFFFFFFF"
                    cs:Office2010Silver.Background="#FF000000"
                    cs:Office2010Silver.BorderBrush="#BFFFFFFF"
                   >
                <Border.OpacityMask>
                    <LinearGradientBrush cs:Name="LinearGradientBrush_0107"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                        >
                        <GradientStop Color="#00000000"
                                      cs:Name="GradientStop_0001"
                                      Offset="0"
                                      cs:Office2010Blue.Color="#00000000"
                                      cs:Office2010Silver.Color="#00000000"
                                     />
                        <GradientStop Color="#00000000"
                                      cs:Name="GradientStop_0002"
                                      Offset="1"
                                      cs:Office2010Blue.Color="#00000000"
                                      cs:Office2010Silver.Color="#00000000"
                                     />
                        <GradientStop Color="#FF000000"
                                      cs:Name="GradientStop_0003"
                                      Offset="0.5"
                                      cs:Office2010Blue.Color="#FF94ADCC"
                                      cs:Office2010Silver.Color="#FF000000"
                                     />
                    </LinearGradientBrush>
                </Border.OpacityMask>
            </Border>
            <ContentPresenter Content="{TemplateBinding Content}" Grid.ColumnSpan="1"/>
            <dxcn:DXTriggerManager.TriggersInfo>
                <dxcn:DXTriggerInfoCollection>
                    <dxcn:DXTriggerInfo Binding="{Binding Path=Link.Item.ShowBorder, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxb:BarItemLinkControl}}"
                                        VisualState="HideBorder"
                                        VisualStateNormal="ShowBorder">
                        <dxcn:DXTriggerInfo.TriggerValue>
                            <sys:Boolean>False</sys:Boolean>
                        </dxcn:DXTriggerInfo.TriggerValue>
                    </dxcn:DXTriggerInfo>
                </dxcn:DXTriggerInfoCollection>
            </dxcn:DXTriggerManager.TriggersInfo>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="BorderVisibility">
                    <VisualState x:Name="ShowBorder"></VisualState>
                    <VisualState x:Name="HideBorder">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>