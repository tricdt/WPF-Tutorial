                        cs:Office2010Silver.Background="#FF666666"
                       />
                <Border Background="#FF000000"
                        CornerRadius="12"
                        cs:Name="Border_2405"
                        Margin="-1"
                        Opacity="0.03"
                        cs:Office2010Blue.Background="#FF000000"
                        cs:Office2010Silver.Background="#FF000000"
                       />
                <Border Background="#FF000000"
                        CornerRadius="13"
                        cs:Name="Border_0003"
                        Margin="-2"
                        Opacity="0.03"
                        cs:Office2010Blue.Background="#7F000000"
                        cs:Office2010Silver.Background="#FF666666"
                       />
                <Border Background="#FF000000"
                        CornerRadius="14"
                        cs:Name="Border_0004"
                        Margin="-3"
                        Opacity="0.02"
                        cs:Office2010Blue.Background="#7F000000"
                        cs:Office2010Silver.Background="#FF666666"
                       />
                <Border Background="#FF000000"
                        CornerRadius="15"
                        cs:Name="Border_0005"
                        Margin="-4"
                        Opacity="0.02"
                        cs:Office2010Blue.Background="#7F000000"
                        cs:Office2010Silver.Background="#FF666666"
                       />
                <Border Background="#FF000000"
                        CornerRadius="16"
                        cs:Name="Border_0006"
                        Margin="-5"
                        Opacity="0.02"
                        cs:Office2010Blue.Background="#7F000000"
                        cs:Office2010Silver.Background="#FF666666"
                       />
                <Border Background="#FF000000"
                        CornerRadius="17"
                        cs:Name="Border_0007"
                        Margin="-6"
                        Opacity="0.01"
                        cs:Office2010Blue.Background="#7F000000"
                        cs:Office2010Silver.Background="#FF666666"
                       />
                <Border Background="#FF000000"
                        CornerRadius="18"
                        cs:Name="Border_0008"
                        Margin="-7"
                        Opacity="0.01"
                        cs:Office2010Blue.Background="#7F000000"
                        cs:Office2010Silver.Background="#FF666666"
