<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit" xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys" xmlns:dxoui="http://schemas.devexpress.com/winfx/2008/xaml/office" xmlns:dxreui="http://schemas.devexpress.com/winfx/2008/xaml/richedit" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <dxoui:GalleryStyleItemForeColorConverter x:Key="galleryStyleItemForeColorConverter" />
  <dxoui:OfficeDefaultBarItemDataTemplates x:Key="officeDefaultTemplates" />
  <DataTemplate x:Key="{dxret:BarItemTemplate ResourceKey=StyleGalleryItemCaption}">
    <Border BorderBrush="LightGray" BorderThickness="1" MaxWidth="70">
      <Grid Margin="5">
        <Grid.RowDefinitions>
          <RowDefinition Height="30" />
          <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Padding="0">
          <Border.Resources>
            <dxreui:RichEditStringIdConverter x:Key="stringIdConverter" />
          </Border.Resources>
          <TextBlock Text="{Binding Source={StaticResource stringIdConverter}, ConverterParameter=Caption_StyleGalleryItemText, Converter={StaticResource stringIdConverter}, Mode=OneTime}" HorizontalAlignment="Left" FontFamily="{Binding FontFamily}" FontWeight="{Binding FontWeight}" FontStyle="{Binding FontStyle}" FontSize="{Binding FontSize}" TextDecorations="{Binding TextDecorations}" Foreground="{Binding Converter={StaticResource galleryStyleItemForeColorConverter}, Path=FontColor}" VerticalAlignment="Bottom" Margin="0,2,0,2" Padding="0" TextWrapping="NoWrap" Grid.Row="0" Grid.Column="0" />
        </Border>
        <TextBlock Text="{Binding StyleName}" TextWrapping="NoWrap" HorizontalAlignment="Left" Foreground="Gray" Grid.Row="1" />
      </Grid>
    </Border>
  </DataTemplate>
  <DataTemplate x:Key="{dxret:BarItemTemplate ResourceKey=TableStyleGalleryItemCaption}">
    <Border Margin="2,2,2,2">
      <dxb:BarManager.DXContextMenu>
        <dxb:PopupMenu>
          <dxb:BarButtonItem IsPrivate="True" Glyph="{dx:ImageSelector Source={dxre:RichEditImage Image=NewTableStyle_16x16.png}, SvgSource={dxre:RichEditSvgImage Name=NewTableStyle}}" Content="{dxre:RichEditLocalizedString MenuCmd_NewTableStyle}" Command="{Binding RichEditControl.CommandProvider.NewTableStyle}" />
          <dxb:BarButtonItem IsPrivate="True" Glyph="{dx:ImageSelector Source={dxre:RichEditImage Image=ModifyTableStyle_16x16.png}, SvgSource={dxre:RichEditSvgImage Name=ModifyTableStyle}}" Content="{dxre:RichEditLocalizedString MenuCmd_ModifyTableStyle}" Command="{Binding Path=ModifyTableStyleCommand}" CommandParameter="{Binding Path=Style}" />
          <dxb:BarButtonItem IsPrivate="True" Glyph="{dx:ImageSelector Source={dxre:RichEditImage Image=ClearTableStyle_16x16.png}, SvgSource={dxre:RichEditSvgImage Name=ClearTableStyle}}" Content="{dxre:RichEditLocalizedString MenuCmd_DeleteTableStyle}" Command="{Binding Path=DeleteTableStyleCommand}" CommandParameter="{Binding Path=Style}" />
        </dxb:PopupMenu>
      </dxb:BarManager.DXContextMenu>
      <Grid Margin="2,2,2,2">
        <Border>
          <dx:DXImage Source="{Binding BitmapSource}" ToolTip="{Binding StyleName}" />
        </Border>
      </Grid>
    </Border>
  </DataTemplate>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.UI.DefaultBarItemDataTemplates}" TargetType="{x:Type dxreui:DefaultBarItemDataTemplates}">
    <Setter Property="Template" Value="{Binding Path=OfficeDefaultBarItemDataTemplates.Template, RelativeSource={RelativeSource Self}}" />
    <Setter Property="CheckEditTemplate" Value="{Binding OfficeDefaultBarItemDataTemplates.CheckEditTemplate, RelativeSource={RelativeSource Self}}" />
    <Setter Property="SectionMarginBarItemContentTemplate" Value="{Binding Path=OfficeDefaultBarItemDataTemplates.MarginBarItemContentTemplate, RelativeSource={RelativeSource Self}}" />
    <Setter Property="SectionPaperKindBarItemContentTemplate" Value="{Binding Path=OfficeDefaultBarItemDataTemplates.PaperKindBarItemContentTemplate, RelativeSource={RelativeSource Self}}" />
    <Setter Property="StyleGalleryItemCaptionTemplate" Value="{DynamicResource {dxret:BarItemTemplate ResourceKey=StyleGalleryItemCaption}}" />
    <Setter Property="TableStyleGalleryItemCaptionTemplate" Value="{DynamicResource {dxret:BarItemTemplate ResourceKey=TableStyleGalleryItemCaption}}" />
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.CommentSuperTipItem}" TargetType="{x:Type dxre:CommentSuperTipItem}">
    <Setter Property="ContentTemplate">
      <Setter.Value>
        <DataTemplate>
          <TextBlock MaxWidth="400" TextWrapping="Wrap" Text="{Binding}" />
        </DataTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>