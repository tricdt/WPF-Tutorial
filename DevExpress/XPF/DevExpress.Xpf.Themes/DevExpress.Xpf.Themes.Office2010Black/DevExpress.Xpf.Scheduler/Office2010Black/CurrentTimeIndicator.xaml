<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxscht:DayViewThemeKey ResourceKey=CurrentTimeIndicatorStyle}" TargetType="{x:Type ContentPresenter}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid Height="5" MinWidth="40">
                        <Border SnapsToDevicePixels="True">
                            <Border.OpacityMask>
                                <LinearGradientBrush cs:Name="LinearGradientBrush_0706"
                                                     EndPoint="0.5,1"
                                                     StartPoint="0.5,0"
                                                    >
                                    <GradientStop Color="#00000000"
                                                  cs:Name="GradientStop_0001"
                                                  Offset="1"
                                                  cs:Office2010Blue.Color="#00000000"
                                                  cs:Office2010Silver.Color="#00000000"
                                                 />
                                    <GradientStop Color="#FF000000"
                                                  cs:Name="GradientStop_0002"
                                                  Offset="0.5"
                                                  cs:Office2010Blue.Color="#FF000000"
                                                  cs:Office2010Silver.Color="#FF000000"
                                                 />
                                    <GradientStop Color="#00000000"
                                                  cs:Name="GradientStop_0003"
                                                  cs:Office2010Blue.Color="#00000000"
                                                  cs:Office2010Silver.Color="#00000000"
                                                 />
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <Border.Background>
                                <LinearGradientBrush cs:Name="LinearGradientBrush_0707"
                                                     EndPoint="1,0.5"
                                                     StartPoint="0,0.5"
                                                    >
                                    <GradientStop Color="#0026C4F1"
                                                  cs:Name="GradientStop_0004"
                                                  Offset="0"
                                                  cs:Office2010Blue.Color="#0026C4F1"
                                                  cs:Office2010Silver.Color="#0026C4F1"
                                                 />
                                    <GradientStop Color="#0026C4F1"
                                                  cs:Name="GradientStop_0005"
                                                  Offset="1"
                                                  cs:Office2010Blue.Color="#0026C4F1"
                                                  cs:Office2010Silver.Color="#0026C4F1"
                                                 />
                                    <GradientStop Color="#7F26C4F1"
                                                  cs:Name="GradientStop_0006"
                                                  Offset="0.5"
                                                  cs:Office2010Blue.Color="#7F26C4F1"
                                                  cs:Office2010Silver.Color="#7F26C4F1"
                                                 />
                                    <GradientStop Color="#7F26C4F1"
                                                  cs:Name="GradientStop_0007"
                                                  Offset="0.75"
                                                  cs:Office2010Blue.Color="#7F26C4F1"
                                                  cs:Office2010Silver.Color="#7F26C4F1"
                                                 />
                                    <GradientStop Color="#7F26C4F1"
                                                  cs:Name="GradientStop_0008"
                                                  Offset="0.25"
                                                  cs:Office2010Blue.Color="#7F26C4F1"
                                                  cs:Office2010Silver.Color="#7F26C4F1"
                                                 />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Height="1" VerticalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush cs:Name="LinearGradientBrush_0708"
                                                     EndPoint="1,0.5"
                                                     StartPoint="0,0.5"
                                                    >
                                    <GradientStop Color="#0026C4F1"
                                                  cs:Name="GradientStop_0009"
                                                  Offset="0"
                                                  cs:Office2010Blue.Color="#0026C4F1"
                                                  cs:Office2010Silver.Color="#0026C4F1"
                                                 />
                                    <GradientStop Color="#0026C4F1"
                                                  cs:Name="GradientStop_0010"
                                                  Offset="1"
                                                  cs:Office2010Blue.Color="#0026C4F1"
                                                  cs:Office2010Silver.Color="#0026C4F1"
                                                 />
                                    <GradientStop Color="#FF26C4F1"
                                                  cs:Name="GradientStop_0011"
                                                  Offset="0.5"
                                                  cs:Office2010Blue.Color="#FF26C4F1"
                                                  cs:Office2010Silver.Color="#FF26C4F1"
                                                 />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>