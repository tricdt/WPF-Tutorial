<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ValueColumnMinWidth}">21</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=HeaderColumnMinWidth}">2</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SelectorAndSearchSeparatorWidth}">4</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonsIndent}">1</sys:Double>

    <!-- Search Text Edit -->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchEditStyle}" TargetType="{x:Type dxe:TextEdit}">
        <Setter Property="ShowBorder" Value="True"/>
        <Setter cs:Name="Setter_0001"
                Property="Background"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FF000000"
                cs:Office2010Silver.Value="#FFFFFFFF"
               />
    </Style>

    <!-- View Kind Button -->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonStyle}" TargetType="{x:Type RadioButton}">
        <Setter Property="Width" Value="22"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          cs:Name="Grid_0001"
                          HorizontalAlignment="Left"
                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                          cs:Office2010Blue.Background="Transparent"
                          cs:Office2010Silver.Background="Transparent"
                         >
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="InternalFocusStates">
                                <VisualState x:Name="InternalFocused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="FocusState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="InternalUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0"
                              Grid.ColumnSpan="1"
                              Height="22"
                              Width="22">
                            <Grid x:Name="DefaultState"/>
                            <Grid x:Name="FocusState"/>
                            <Grid x:Name="HoverState" Opacity="0">
                                <Border x:Name="hover1" CornerRadius="2">
                                    <Border.Background>
                                        <LinearGradientBrush cs:Name="LinearGradientBrush_0831"
                                                             EndPoint="0.5,1"
                                                             StartPoint="0.5,0"
                                                            >
                                            <GradientStop Color="#BFD7A820"
                                                          cs:Name="GradientStop_0001"
                                                          Offset="0"
                                                          cs:Office2010Blue.Color="#BFD7A820"
                                                          cs:Office2010Silver.Color="#BFD7A820"
                                                         />
                                            <GradientStop Color="#BFB89407"
                                                          cs:Name="GradientStop_0002"
                                                          Offset="1"
                                                          cs:Office2010Blue.Color="#BFB89407"
                                                          cs:Office2010Silver.Color="#BFB89407"
                                                         />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border x:Name="hover2"
                                            CornerRadius="1"
                                            Margin="1">
                                        <Border.Background>
                                            <LinearGradientBrush cs:Name="LinearGradientBrush_0832"
                                                                 EndPoint="0.5,1"
                                                                 StartPoint="0.5,0"
                                                                >
                                                <GradientStop Color="#FFFFFAE6"
                                                              cs:Name="GradientStop_0003"
                                                              Offset="0"
                                                              cs:Office2010Blue.Color="#FFFFFAE6"
                                                              cs:Office2010Silver.Color="#FFFFFAE6"
                                                             />
                                                <GradientStop Color="#FFFFFFED"
                                                              cs:Name="GradientStop_0004"
                                                              Offset="1"
                                                              cs:Office2010Blue.Color="#FFFFFFED"
                                                              cs:Office2010Silver.Color="#FFFFFFED"
                                                             />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border x:Name="hover3"
                                                CornerRadius="1"
                                                Margin="1">
                                            <Border.Background>
                                                <LinearGradientBrush cs:Name="LinearGradientBrush_0833"
                                                                     EndPoint="0.5,1"
                                                                     StartPoint="0.5,0"
                                                                    >
                                                    <GradientStop Color="#FFFFEEA8"
                                                                  cs:Name="GradientStop_0005"
                                                                  Offset="0"
                                                                  cs:Office2010Blue.Color="#FFFFEEA8"
                                                                  cs:Office2010Silver.Color="#FFFFEEA8"
                                                                 />
                                                    <GradientStop Color="#FFFFFCE0"
                                                                  cs:Name="GradientStop_0006"
                                                                  Offset="1"
                                                                  cs:Office2010Blue.Color="#FFFFFCE0"
                                                                  cs:Office2010Silver.Color="#FFFFFCE0"
                                                                 />
                                                    <GradientStop Color="#FFFFE277"
                                                                  cs:Name="GradientStop_0007"
                                                                  Offset="0.5"
                                                                  cs:Office2010Blue.Color="#FFFFE277"
                                                                  cs:Office2010Silver.Color="#FFFFE277"
                                                                 />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                </Border>
                            </Grid>
                            <Grid x:Name="PressedState" Opacity="0">
                                <Border x:Name="pressed1" CornerRadius="2">
                                    <Border.Background>
                                        <LinearGradientBrush cs:Name="LinearGradientBrush_0834"
                                                             EndPoint="0.5,1"
                                                             StartPoint="0.5,0"
                                                            >
                                            <GradientStop Color="#BFA26F16"
                                                          cs:Name="GradientStop_0008"
                                                          Offset="0"
                                                          cs:Office2010Blue.Color="#BFA26F16"
                                                          cs:Office2010Silver.Color="#BFA26F16"
                                                         />
                                            <GradientStop Color="#BFA2832C"
                                                          cs:Name="GradientStop_0009"
                                                          Offset="1"
                                                          cs:Office2010Blue.Color="#BFA2832C"
                                                          cs:Office2010Silver.Color="#BFA2832C"
                                                         />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border x:Name="pressed2"
                                            CornerRadius="1"
                                            Margin="1">
                                        <Border.Background>
                                            <LinearGradientBrush cs:Name="LinearGradientBrush_0835"
                                                                 EndPoint="0.5,1"
                                                                 StartPoint="0.5,0"
                                                                >
                                                <GradientStop Color="#FFFFE575"
                                                              cs:Name="GradientStop_0010"
                                                              Offset="0"
                                                              cs:Office2010Blue.Color="#FFFFE575"
                                                              cs:Office2010Silver.Color="#FFFFE575"
                                                             />
                                                <GradientStop Color="#FFFFF37F"
                                                              cs:Name="GradientStop_0011"
                                                              Offset="1"
                                                              cs:Office2010Blue.Color="#FFFFF37F"
                                                              cs:Office2010Silver.Color="#FFFFF37F"
                                                             />
                                                <GradientStop Color="#FFFFD86C"
                                                              cs:Name="GradientStop_0012"
                                                              Offset="0.5"
                                                              cs:Office2010Blue.Color="#FFFFD86C"
                                                              cs:Office2010Silver.Color="#FFFFD86C"
                                                             />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Grid>
                        </Grid>
                        <Path x:Name="PART_ListView"
                              cs:Name="Path_0001"
                              Data="F1 M 2,3L 14,3L 14,4L 2,4L 2,3 Z M 2,6L 14,6L 14,7L 2,7L 2,6 Z M 2,9L 14,9L 14,10L 2,10L 2,9 Z M 2,12L 14,12L 14,13L 2,13L 2,12 Z "
                              Fill="#FF000000"
                              Height="10"
                              Stretch="Fill"
                              Width="12"
                              cs:Office2010Blue.Fill="#FF000000"
                              cs:Office2010Silver.Fill="#FF000000"
                             />
                        <Path x:Name="PART_GroupView"
                              cs:Name="Path_0002"
                              Data="F1 M 2,2L 7,2L 7,7L 2,7L 2,2 Z M 2,9.00001L 6.99999,9.00001L 6.99999,14L 2,14L 2,9.00001 Z M 8,4.00001L 14,4.00001L 14,5.00001L 8,5.00001L 8,4.00001 Z M 8,11L 14,11L 14,12L 8,12L 8,11 Z M 4,3L 4,4L 3,4L 3,5L 4,5L 4,6L 5,6L 5,5L 6,5L 6,4L 5,4L 5,3L 4,3 Z M 4,10L 4,11L 3,11L 3,12L 4,12L 4,13L 5,13L 5,12L 6,12L 6,11L 5,11L 5,10L 4,10 Z "
                              Fill="#FF000000"
                              Height="12"
                              Stretch="Fill"
                              Width="12"
                              cs:Office2010Blue.Fill="#FF000000"
                              cs:Office2010Silver.Fill="#FF000000"
                             />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenNoGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Visible"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Collapsed"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity"
                                    TargetName="Root"
                                    Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Control Border -->

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=Background}"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2010Blue.Color="#FFFFFFFF"
                     cs:Office2010Silver.Color="#FFFFFFFF"/>

    <Thickness x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderBrush}"
                     Color="#FF484848"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2010Blue.Color="#FF849DBD"
                     cs:Office2010Silver.Color="#FFA5ACB5"/>

    <!-- Desciption Presenter -->

    <ControlTemplate x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=DescriptionPresenterTemplate}" TargetType="{x:Type dxprg:PropertyDescriptionPresenterControl}">
        <Border x:Name="PART_Border"
                Background="#FF838383"
                BorderBrush="#FF484848"
                BorderThickness="0,1,0,0"
                cs:Name="Border_0005"
                cs:Office2010Blue.Background="#FFCFDDEE"
                cs:Office2010Blue.BorderBrush="#FF849DBD"
                cs:Office2010Silver.Background="#FFE9EDF1"
                cs:Office2010Silver.BorderBrush="#FFA5ACB5"
               >
            <Grid Margin="11">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter x:Name="PART_HeaderPresenter"
                                  Content="{Binding SelectedRow.Header, RelativeSource={RelativeSource TemplatedParent}}"
                                  HorizontalAlignment="Left"
                                  Margin="0,-3,0,0"
                                  TextElement.FontWeight="Bold"/>
                <ContentPresenter Grid.Row="1" Margin="0,4,0,0"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="ShowSelectedRowHeader" Value="False">
                <Setter Property="Visibility"
                        TargetName="PART_HeaderPresenter"
                        Value="Collapsed"/>
            </Trigger>
            <Trigger Property="IsInTooltip" Value="True">
                <Setter cs:Name="Setter_0002"
                        Property="Background"
                        TargetName="PART_Border"
                        Value="Transparent"
                        cs:Office2010Blue.Value="Transparent"
                        cs:Office2010Silver.Value="Transparent"
                       />
                <Setter cs:Name="Setter_0003"
                        Property="BorderBrush"
                        TargetName="PART_Border"
                        Value="Transparent"
                        cs:Office2010Blue.Value="Transparent"
                        cs:Office2010Silver.Value="Transparent"
                       />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- SearchControl-->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchControlStyle}" TargetType="{x:Type dxe:SearchControl}">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- SearchControl and ViewKindButtons panel-->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=TopPanelStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border BorderThickness="0,0,0,1">
                        <Border.BorderBrush>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_0836"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FF838383"
                                              cs:Name="GradientStop_0013"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FF95AECD"
                                              cs:Office2010Silver.Color="#FFA5ACB5"
                                             />
                                <GradientStop Color="#FF737373"
                                              cs:Name="GradientStop_0014"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FF95AECD"
                                              cs:Office2010Silver.Color="#FFC0C4C9"
                                             />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_0837"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FFB9B9B9"
                                              cs:Name="GradientStop_0015"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFEDF4FD"
                                              cs:Office2010Silver.Color="#FFFFFFFF"
                                             />
                                <GradientStop Color="#FF9D9D9D"
                                              cs:Name="GradientStop_0016"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFD9E5F2"
                                              cs:Office2010Silver.Color="#FFE9EDF1"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter Margin="4"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>