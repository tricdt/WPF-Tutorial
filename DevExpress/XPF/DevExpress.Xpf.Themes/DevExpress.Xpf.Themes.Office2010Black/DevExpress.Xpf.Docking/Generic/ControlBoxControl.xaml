            <ve:ControlBoxCustomContentPresenter x:Name="PART_CustomContent" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ve:ControlBoxButtonPresenter x:Name="PART_ExpandButton" ContentTemplate="{TemplateBinding ExpandButtonTemplate}" Width="{TemplateBinding ButtonWidth}" Height="{TemplateBinding ButtonHeight}" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{TemplateBinding ContextCommand}" CommandParameter="ExpandToggle" />
