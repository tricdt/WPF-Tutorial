            <ve:ControlBoxButtonPresenter x:Name="PART_RestoreButton" ContentTemplate="{TemplateBinding RestoreButtonTemplate}" Width="{TemplateBinding ButtonWidth}" Height="{TemplateBinding ButtonHeight}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{TemplateBinding ContextCommand}" CommandParameter="Restore" />
