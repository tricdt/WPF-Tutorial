<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking" xmlns:dxdot="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys" xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.VisualElements.BaseControlBoxControl}" TargetType="{x:Type ve:BaseControlBoxControl}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ve:BaseControlBoxControl}">
          <StackPanel Orientation="Horizontal">
            <ve:ControlBoxCustomContentPresenter x:Name="PART_CustomContent" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ve:ControlBoxButtonPresenter x:Name="PART_CloseButton" ContentTemplate="{TemplateBinding CloseButtonTemplate}" Width="{TemplateBinding ButtonWidth}" Height="{TemplateBinding ButtonHeight}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{TemplateBinding ContextCommand}" CommandParameter="Close" />
          </StackPanel>
          <ControlTemplate.Triggers>
            <Trigger Property="CloseButtonTemplate" Value="{x:Null}">
              <Setter Property="Visibility" TargetName="PART_CloseButton" Value="Collapsed" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="Foreground" Value="Black" />
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.VisualElements.DocumentTabHeaderControlBoxControl}" TargetType="{x:Type ve:DocumentTabHeaderControlBoxControl}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ve:DocumentTabHeaderControlBoxControl}">
          <StackPanel Orientation="Horizontal">
            <ve:ControlBoxCustomContentPresenter x:Name="PART_CustomContent" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ve:ControlBoxButtonPresenter x:Name="PART_PinButton" ContentTemplate="{TemplateBinding PinButtonTemplate}" Width="{TemplateBinding ButtonWidth}" Height="{TemplateBinding ButtonHeight}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{TemplateBinding ContextCommand}" CommandParameter="Pin" />
            <ve:ControlBoxButtonPresenter x:Name="PART_CloseButton" ContentTemplate="{TemplateBinding CloseButtonTemplate}" Width="{TemplateBinding ButtonWidth}" Height="{TemplateBinding ButtonHeight}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{TemplateBinding ContextCommand}" CommandParameter="Close" />
          </StackPanel>
          <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding LayoutItem.IsPinButtonVisible, RelativeSource={RelativeSource Mode=Self}}" Value="True">
              <Setter TargetName="PART_PinButton" Property="Visibility" Value="Visible" />
            </DataTrigger>
            <Trigger Property="CloseButtonTemplate" Value="{x:Null}">
              <Setter Property="Visibility" TargetName="PART_CloseButton" Value="Collapsed" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
