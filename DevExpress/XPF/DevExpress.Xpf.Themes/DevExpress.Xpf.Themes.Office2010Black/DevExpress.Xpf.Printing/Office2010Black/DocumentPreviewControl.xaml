<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="{dxpt:NewDocumentViewerThemeKey ResourceKey=PageBorderTemplate}">
        <Grid>
            <Grid x:Name="Shadow">
                <Border BorderBrush="#FF000000"
                        BorderThickness="1"
                        cs:Name="Border_0001"
                        Margin="-1"
                        Opacity="0.05"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="1"
                        CornerRadius="1"
                        cs:Name="Border_0002"
                        Margin="-2"
                        Opacity="0.03"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="2"
                        CornerRadius="2"
                        cs:Name="Border_0003"
                        Margin="-3"
                        Opacity="0.03"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="3"
                        CornerRadius="3"
                        cs:Name="Border_0004"
                        Margin="-4"
                        Opacity="0.02"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="4"
                        CornerRadius="4"
                        cs:Name="Border_0005"
                        Margin="-5"
                        Opacity="0.02"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="5"
                        CornerRadius="5"
                        cs:Name="Border_0006"
                        Margin="-6"
                        Opacity="0.02"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="6"
                        CornerRadius="6"
                        cs:Name="Border_0007"
                        Margin="-7"
                        Opacity="0.01"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="7"
                        CornerRadius="7"
                        cs:Name="Border_0008"
                        Margin="-8"
                        Opacity="0.01"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#FF000000"
                        BorderThickness="8"
                        CornerRadius="8"
                        cs:Name="Border_0009"
                        Margin="-9"
                        Opacity="0.01"
                        cs:Office2010Blue.BorderBrush="#FF000000"
                        cs:Office2010Silver.BorderBrush="#FF000000"
                       />
                <Border BorderBrush="#3F000000"
                        BorderThickness="1"
                        cs:Name="Border_0010"
                        Margin="-1"
                        cs:Office2010Blue.BorderBrush="#3F000000"
                        cs:Office2010Silver.BorderBrush="#3F000000"
                       />
            </Grid>
            <Border x:Name="Selection"
                    BorderBrush="#FFFFE277"
                    BorderThickness="3"
                    cs:Name="Border_0011"
                    Margin="-3"
                    Opacity="0"
                    cs:Office2010Blue.BorderBrush="#FFFFE277"
                    cs:Office2010Silver.BorderBrush="#FFFFE277"
                   />
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="true">
                <Setter Property="Opacity"
                        TargetName="Selection"
                        Value="1"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>