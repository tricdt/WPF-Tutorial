            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover"/>
            <Trigger Property="ItemState" Value="Pressed"/>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
                <Setter cs:Name="Setter_0001"
                        Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF515D7A"
                       />
                <Setter cs:Name="Setter_0002"
                        Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FF3C3C3C"
                        cs:Office2010Blue.Value="#FF515D7A"
                        cs:Office2010Silver.Value="#FF515D7A"
                       />
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsPressed" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
