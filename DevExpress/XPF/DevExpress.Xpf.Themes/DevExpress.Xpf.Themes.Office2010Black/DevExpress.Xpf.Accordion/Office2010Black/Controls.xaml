                                        <TranslateTransform Y="0.5"/>
                                    </TransformGroup>
                                </RadialGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFFFFFFF"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFFFFFFF"
                                              cs:Office2010Silver.Color="#FFFFFFFF"
                                             />
                                <GradientStop Color="#00FFFFFF"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#00FFFFFF"
                                              cs:Office2010Silver.Color="#00FFFFFF"
                                             />
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="#FFFFFFFF"
                            BorderThickness="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="8"
                            Opacity="0.15"
                            cs:Office2010Blue.BorderBrush="#FFFFFFFF"
                            cs:Office2010Silver.BorderBrush="#FFFFFFFF"
                           />
                </Grid>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Margin="0,0,0,1">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

