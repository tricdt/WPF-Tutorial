    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=DropDownMenuButtonTemplate}" TargetType="ToggleButton">
        <Grid Background="Transparent"
              MinWidth="32"
              cs:Office2010Blue.Background="Transparent"
              cs:Office2010Silver.Background="Transparent"
             >
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF333333"
                                            cs:Office2010Blue.To="#FF333333"
                                            cs:Office2010Silver.To="#FF333333"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF333333"
                                            cs:Office2010Blue.To="#FF333333"
                                            cs:Office2010Silver.To="#FF333333"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Normal"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid>
                <Border x:Name="HoverState"
                        CornerRadius="2"
                        Opacity="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#BFC79810"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#BFC79810"
                                          cs:Office2010Silver.Color="#BFC79810"
                                         />
                            <GradientStop Color="#BFA88407"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#BFA88407"
                                          cs:Office2010Silver.Color="#BFA88407"
                                         />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FFFFFAE6"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFFFFAE6"
                                              cs:Office2010Silver.Color="#FFFFFAE6"
                                             />
                                <GradientStop Color="#FFFFFFED"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFFFFFED"
                                              cs:Office2010Silver.Color="#FFFFFFED"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="1" Margin="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1"
                                                     StartPoint="0.5,0"
                                                    >
                                    <GradientStop Color="#FFFFEEA8"
                                                  Offset="0"
                                                  cs:Office2010Blue.Color="#FFFFEEA8"
                                                  cs:Office2010Silver.Color="#FFFFEEA8"
                                                 />
                                    <GradientStop Color="#FFFFFCE0"
                                                  Offset="1"
                                                  cs:Office2010Blue.Color="#FFFFFCE0"
                                                  cs:Office2010Silver.Color="#FFFFFCE0"
                                                 />
                                    <GradientStop Color="#FFFFE277"
                                                  Offset="0.5"
                                                  cs:Office2010Blue.Color="#FFFFE277"
                                                  cs:Office2010Silver.Color="#FFFFE277"
                                                 />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
                <Border x:Name="PressedState"
                        CornerRadius="2"
                        Opacity="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                            >
                            <GradientStop Color="#BFA26F16"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#BFA26F16"
                                          cs:Office2010Silver.Color="#BFA26F16"
                                         />
                            <GradientStop Color="#BFA2832C"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#BFA2832C"
                                          cs:Office2010Silver.Color="#BFA2832C"
                                         />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FFFFE575"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFFFE575"
                                              cs:Office2010Silver.Color="#FFFFE575"
                                             />
                                <GradientStop Color="#FFFFF37F"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFFFF37F"
                                              cs:Office2010Silver.Color="#FFFFF37F"
                                             />
                                <GradientStop Color="#FFFFD86C"
                                              Offset="0.5"
                                              cs:Office2010Blue.Color="#FFFFD86C"
                                              cs:Office2010Silver.Color="#FFFFD86C"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid Height="4"
                  Margin="10,0,10,0"
                  SnapsToDevicePixels="True"
                  Width="8">
                <Path x:Name="Path"
                      Data="F1 M 50.5001,31.5001L 40.5,31.5001L 45.5,36.5001L 50.5001,31.5001 Z"
                      Fill="#FFE3E7ED"
                      Stretch="Fill"
                      cs:Office2010Blue.Fill="#FF515D7A"
                      cs:Office2010Silver.Fill="#FF515D7A"
                     />
            </Grid>
        </Grid>
    </ControlTemplate>

