<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Border Background="#FF484848"
                BorderBrush="#3FFFFFFF"
                BorderThickness="0,0,0,1"
                cs:Name="Border_0002"
                Height="2"
                SnapsToDevicePixels="True"
                cs:Office2010Blue.Background="#FF94ADCC"
                cs:Office2010Blue.BorderBrush="#3FFFFFFF"
                cs:Office2010Silver.Background="#FFA5ACB5"
                cs:Office2010Silver.BorderBrush="#3FFFFFFF"
               >
            <Border.OpacityMask>
                <LinearGradientBrush cs:Name="LinearGradientBrush_0531"
                                     EndPoint="1,0.5"
                                     StartPoint="0,0.5"
                                    >
                    <GradientStop Color="#00FFFFFF"
                                  cs:Name="GradientStop_0001"
                                  Offset="0"
                                  cs:Office2010Blue.Color="#00FFFFFF"
                                  cs:Office2010Silver.Color="#00FFFFFF"
                                 />
                    <GradientStop Color="#00FFFFFF"
                                  cs:Name="GradientStop_0002"
                                  Offset="1"
                                  cs:Office2010Blue.Color="#00FFFFFF"
                                  cs:Office2010Silver.Color="#00FFFFFF"
                                 />
                    <GradientStop Color="#FFFFFFFF"
                                  cs:Name="GradientStop_0003"
                                  Offset="0.5"
                                  cs:Office2010Blue.Color="#FFFFFFFF"
                                  cs:Office2010Silver.Color="#FFFFFFFF"
                                 />
                </LinearGradientBrush>
            </Border.OpacityMask>
        </Border>
    </ControlTemplate>

    <Style x:Key="{dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderStyle}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Setter Property="Margin" Value="0,1,0,1"/>
        <Setter Property="Template" Value="{DynamicResource {dxrt:BackstageSeparatorItemThemeKey ResourceKey=BorderTemplate}}"/>
    </Style>

</ResourceDictionary>