<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <Thickness x:Key="{dxrt:RibbonThemeKey ResourceKey=ResizeBorderThickness}">9</Thickness>

    <DataTemplate x:Key="{dxt:FloatingContainerThemeKey ResourceKey=RibbonFloatingContainerCaptionTemplate}">
        <Grid>
            <dxb:ContentViewport ClipToBounds="True" KeepPositiveLeftContentPosition="True">
                <TextBlock x:Name="TitleTextBlock"
                           cs:Name="TextBlock_0001"
                           Foreground="#FFDADADA"
                           HorizontalAlignment="Center"
                           IsHitTestVisible="False"
                           Margin="7,4,7,5"
                           Text="{Binding}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           cs:Office2010Blue.Foreground="#FF1E395B"
                           cs:Office2010Silver.Foreground="#FF3C3C3C"
                          />
            </dxb:ContentViewport>
        </Grid>
    </DataTemplate>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=RibbonShowModeSelectorItemStyle}" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="31"/>
        <Setter Property="Height" Value="17"/>
        <Setter Property="Template" Value="{DynamicResource {dxrt:RibbonThemeKey ResourceKey=RibbonShowModeSelectorItemTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=RibbonShowModeSelectorItemTemplate}" TargetType="{x:Type dxr:RibbonShowModeSelectorItem}">
        <Grid x:Name="Button"
              Height="17"
              Width="31">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Glyph"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.75"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid x:Name="HoverState" Opacity="0">
                <Border Background="#FF515151"
                        CornerRadius="2"
                        cs:Name="Border_0008"
                        cs:Office2010Blue.Background="#FF94ADCC"
                        cs:Office2010Silver.Background="#FFA5ACB5"
                       >
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_1550"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FF949494"
                                              cs:Name="GradientStop_0001"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFD4E8FF"
                                              cs:Office2010Silver.Color="#FFFFFFFF"
                                             />
                                <GradientStop Color="#FF777777"
                                              cs:Name="GradientStop_0002"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFBDD0E8"
                                              cs:Office2010Silver.Color="#FFEBEDF0"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PressedState" Opacity="0">
                <Border Background="#FF515151"
                        CornerRadius="2"
                        cs:Name="Border_0009"
                        cs:Office2010Blue.Background="#FF5379AE"
                        cs:Office2010Silver.Background="#FFA5ACB5"
                       >
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_1551"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FF636363"
                                              cs:Name="GradientStop_0003"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFAEC2DB"
                                              cs:Office2010Silver.Color="#FFC0C4C9"
                                             />
                                <GradientStop Color="#FF717171"
                                              cs:Name="GradientStop_0004"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFBBCEE6"
                                              cs:Office2010Silver.Color="#FFDCE1E8"
                                             />
                                <GradientStop Color="#FF717171"
                                              cs:Name="GradientStop_0005"
                                              Offset="0.15"
                                              cs:Office2010Blue.Color="#FFBBCEE6"
                                              cs:Office2010Silver.Color="#FFDCE1E8"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="Glyph"
                  Height="10"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="10">
                <Path cs:Name="Path_0001"
                      Data="F1 M 0,6L 3,3L 0,3L 0,0L 10,0L 10,3L 7,3L 10,6L 10,7L 7,7L 7,10L 3,10L 3,7L 0,7L 0,6 Z "
                      Fill="#FF5C5C5C"
                      Height="10"
                      Stretch="Fill"
                      Width="10"
                      cs:Office2010Blue.Fill="#FF728EAD"
                      cs:Office2010Silver.Fill="#FF80838F"
                     />
                <Path cs:Name="Path_0002"
                      Data="F1 M 0,6L 3,3L 0,3L 0,0L 10,0L 10,3L 7,3L 10,6L 10,7L 7,7L 7,10L 3,10L 3,7L 0,7L 0,6 Z "
                      Fill="#FF5C5C5C"
                      Height="10"
                      Stretch="Fill"
                      Width="10"
                      cs:Office2010Blue.Fill="#FF728EAD"
                      cs:Office2010Silver.Fill="#FF80838F"
                     />
                <Path cs:Name="Path_0003"
                      Data="F1 M 1,1L 9,1L 9,2L 5,2L 9,6L 6,6L 6,9L 4,9L 4,6L 1,6L 5,2L 1,2L 1,1 Z "
                      Fill="#FFF0F0F0"
                      Height="8"
                      Stretch="Fill"
                      Width="8"
                      cs:Office2010Blue.Fill="#FFF0F0F0"
                      cs:Office2010Silver.Fill="#FFF0F0F0"
                     />
            </Grid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ShowAutoHidePopupButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="Button">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Glyph"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.75"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid x:Name="HoverState" Opacity="0">
                <Border Background="#FF515151"
                        CornerRadius="2"
                        cs:Name="Border_0010"
                        cs:Office2010Blue.Background="#FF94ADCC"
                        cs:Office2010Silver.Background="#FFA5ACB5"
                       >
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_1552"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FF949494"
                                              cs:Name="GradientStop_0006"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFD4E8FF"
                                              cs:Office2010Silver.Color="#FFFFFFFF"
                                             />
                                <GradientStop Color="#FF777777"
                                              cs:Name="GradientStop_0007"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFBDD0E8"
                                              cs:Office2010Silver.Color="#FFEBEDF0"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PressedState" Opacity="0">
                <Border Background="#FF515151"
                        CornerRadius="2"
                        cs:Name="Border_0011"
                        cs:Office2010Blue.Background="#FF3E6296"
                        cs:Office2010Silver.Background="#FFA5ACB5"
                       >
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush cs:Name="LinearGradientBrush_1553"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                >
                                <GradientStop Color="#FF636363"
                                              cs:Name="GradientStop_0008"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFAEC2DB"
                                              cs:Office2010Silver.Color="#FFC0C4C9"
                                             />
                                <GradientStop Color="#FF717171"
                                              cs:Name="GradientStop_0009"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#FFBBCEE6"
                                              cs:Office2010Silver.Color="#FFDCE1E8"
                                             />
                                <GradientStop Color="#FF717171"
                                              cs:Name="GradientStop_0010"
                                              Offset="0.15"
                                              cs:Office2010Blue.Color="#FFBBCEE6"
                                              cs:Office2010Silver.Color="#FFDCE1E8"
                                             />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="Glyph"
                  Height="9"
                  HorizontalAlignment="Right"
                  Margin="9,0,9,0"
                  VerticalAlignment="Center"
                  Width="13">
                <Rectangle cs:Name="Rectangle_0001"
                           Fill="#FF5C5C5C"
                           Height="5"
                           RadiusX="1"
                           RadiusY="1"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"
                           Width="13"
                           cs:Office2010Blue.Fill="#FF728EAD"
                           cs:Office2010Silver.Fill="#FF80838F"
                          />
                <Path cs:Name="Path_0004"
                      Data="F1 M 1,1L 4,1L 4,4L 1,4L 1,1 Z M 5,1L 8,1L 8,4L 5,4L 5,1 Z M 9,1L 12,1L 12,4L 9,4L 9,1 Z "
                      Fill="#FFF0F0F0"
                      Height="3"
                      Margin="1"
                      Stretch="Fill"
                      VerticalAlignment="Bottom"
                      Width="11"
                      cs:Office2010Blue.Fill="#FFF0F0F0"
                      cs:Office2010Silver.Fill="#FFF0F0F0"
                     />
            </Grid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="FloatingContainerBorder"
                Background="#FF717171"
                BorderBrush="#FF484848"
                BorderThickness="1"
                cs:Name="Border_0002"
                cs:Office2010Blue.Background="#FFCFDDEE"
                cs:Office2010Blue.BorderBrush="#FF728EAD"
                cs:Office2010Silver.Background="#FFE3E6E8"
                cs:Office2010Silver.BorderBrush="#FF585B5E"
               >
            <Grid>
                <Border x:Name="HightlightBorder"
                        BorderBrush="#1FFFFFFF"
                        BorderThickness="1"
                        cs:Name="Border_0003"
                        cs:Office2010Blue.BorderBrush="#1FFFFFFF"
                        cs:Office2010Silver.BorderBrush="#1FFFFFFF"
                       />
                <ContentPresenter/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsActive)}" Value="False">
                <Setter cs:Name="Setter_0001"
                        Property="BorderBrush"
                        TargetName="FloatingContainerBorder"
                        Value="#FF686868"
                        cs:Office2010Blue.Value="#FF94ADCC"
                        cs:Office2010Silver.Value="#FFA5ACB5"
                       />
                <Setter cs:Name="Setter_0002"
                        Property="Background"
                        TargetName="FloatingContainerBorder"
                        Value="#FF9E9E9E"
                        cs:Office2010Blue.Value="#FFD5DEE8"
                        cs:Office2010Silver.Value="#FFCED4DB"
                       />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsMaximized)}" Value="True">
                <Setter Property="Opacity"
                        TargetName="HightlightBorder"
                        Value="0"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerHeaderBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="PART_Header">
            <Border.Background>
                <LinearGradientBrush cs:Name="LinearGradientBrush_1595"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                    >
                    <GradientStop Color="#FF797979"
                                  cs:Name="GradientStop_0011"
                                  Offset="0"
                                  cs:Office2010Blue.Color="#FFEBEDF0"
                                  cs:Office2010Silver.Color="#FFEBEDF0"
                                 />
                    <GradientStop Color="#FF717171"
                                  cs:Name="GradientStop_0012"
                                  Offset="1"
                                  cs:Office2010Blue.Color="#FFCFDDEE"
                                  cs:Office2010Silver.Color="#FFE3E6E8"
                                 />
                </LinearGradientBrush>
            </Border.Background>
            <Border x:Name="HighlightBorder"
                    BorderBrush="#1FFFFFFF"
                    BorderThickness="1,1,1,0"
                    cs:Name="Border_0005"
                    cs:Office2010Blue.BorderBrush="#1FFFFFFF"
                    cs:Office2010Silver.BorderBrush="#1FFFFFFF"
                   />
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsActive)}" Value="False">
                <Setter cs:Name="Setter_0003"
                        Property="Background"
                        TargetName="PART_Header"
                        Value="#FF9E9E9E"
                        cs:Office2010Blue.Value="#FFD5DEE8"
                        cs:Office2010Silver.Value="#FFCED4DB"
                       />
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerContentTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="0,1,0,0">
            <Border x:Name="FloatingContainerBody"
                    Background="#FF717171"
                    cs:Name="Border_0006"
                    cs:Office2010Blue.Background="#FFD1E0EF"
                    cs:Office2010Silver.Background="#FFE3E6E8"
                   />
            <Border BorderBrush="#FF484848"
                    BorderThickness="1,0,1,1"
                    cs:Name="Border_0007"
                    cs:Office2010Blue.BorderBrush="#FF94ADCC"
                    cs:Office2010Silver.BorderBrush="#FFA5ACB5"
                   />
            <dxc:BackgroundPanel Content="{TemplateBinding Content}"
                                 ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                 ContentTemplate="{TemplateBinding ContentTemplate}"
                                 ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                 Margin="1,0,1,1"/>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsActive)}" Value="False">
                <Setter cs:Name="Setter_0004"
                        Property="Background"
                        TargetName="FloatingContainerBody"
                        Value="#FF9E9E9E"
                        cs:Office2010Blue.Value="#FFD5DEE8"
                        cs:Office2010Silver.Value="#FFCED4DB"
                       />
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="6,0,6,6"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerBodyTemplate}" TargetType="{x:Type ContentControl}">
        <dxc:BackgroundPanel Content="{TemplateBinding Content}"
                             ContentStringFormat="{TemplateBinding ContentStringFormat}"
                             ContentTemplate="{TemplateBinding ContentTemplate}"
                             ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"/>
    </ControlTemplate>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerBodyStyle}" TargetType="{x:Type ContentControl}"></Style>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerControlBoxStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="6,6,6,3"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerControlBoxTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter/>
    </ControlTemplate>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerCaptionStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="6,6,6,0"/>
        <Setter cs:Name="Setter_0005"
                Property="Foreground"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
    </Style>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerIconAndCaptionAreaStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerIconStyle}" TargetType="{x:Type Image}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Margin" Value="6,6,0,0"/>
        <Setter Property="Stretch" Value="Fill"/>
    </Style>

</ResourceDictionary>