<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Grid Name="rootGrid"
              Margin="0,0,-1,0"
              SnapsToDevicePixels="True">
            <Grid x:Name="HoverState" Opacity="0">
                <Border Background="#FF857E62"
                        BorderBrush="#FFD9B32D"
                        BorderThickness="0,1,0,1"
                        cs:Name="Border_0002"
                        Margin="0,0,1,0"
                        cs:Office2010Blue.Background="#FFD9DED0"
                        cs:Office2010Blue.BorderBrush="#FFF69F15"
                        cs:Office2010Silver.Background="#FFFCF1C2"
                        cs:Office2010Silver.BorderBrush="#FFEB8900"
                       />
            </Grid>
            <Grid x:Name="PressedState" Opacity="0">
                <Border BorderBrush="#FF7D3900"
                        BorderThickness="0,1,0,1"
                        cs:Name="Border_0003"
                        cs:Office2010Blue.BorderBrush="#FFC46211"
                        cs:Office2010Silver.BorderBrush="#FFCA791A"
                       >
                    <Border.Background>
                        <LinearGradientBrush cs:Name="LinearGradientBrush_0532"
                                             EndPoint="1,0.5"
                                             StartPoint="0,0.5"
                                            >
                            <GradientStop Color="#FFEA8817"
                                          cs:Name="GradientStop_0001"
                                          Offset="0"
                                          cs:Office2010Blue.Color="#FFF89C1C"
                                          cs:Office2010Silver.Color="#FFF4BF23"
                                         />
                            <GradientStop Color="#FFEA8817"
                                          cs:Name="GradientStop_0002"
                                          Offset="1"
                                          cs:Office2010Blue.Color="#FFF89C1C"
                                          cs:Office2010Silver.Color="#FFF4BF23"
                                         />
                            <GradientStop Color="#FFFAAF29"
                                          cs:Name="GradientStop_0003"
                                          Offset="0.25"
                                          cs:Office2010Blue.Color="#FFFAAA25"
                                          cs:Office2010Silver.Color="#FFF4BF23"
                                         />
                            <GradientStop Color="#FFFBBB31"
                                          cs:Name="GradientStop_0004"
                                          Offset="0.5"
                                          cs:Office2010Blue.Color="#FFFAB12A"
                                          cs:Office2010Silver.Color="#FFF4BF23"
                                         />
                            <GradientStop Color="#FFFAAF29"
                                          cs:Name="GradientStop_0005"
                                          Offset="0.75"
                                          cs:Office2010Blue.Color="#FFFAAA25"
                                          cs:Office2010Silver.Color="#FFF4BF23"
                                         />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border>
                        <Border.Background>
                            <RadialGradientBrush cs:Name="RadialGradientBrush_0016">
                                <RadialGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform X="0" Y="0.25"/>
                                    </TransformGroup>
                                </RadialGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFFED548"
                                              cs:Name="GradientStop_0006"
                                              Offset="0"
                                              cs:Office2010Blue.Color="#FFFAD64F"
                                              cs:Office2010Silver.Color="#00F89B1B"
                                             />
                                <GradientStop Color="#00FED548"
                                              cs:Name="GradientStop_0007"
                                              Offset="1"
                                              cs:Office2010Blue.Color="#00FAD64F"
                                              cs:Office2010Silver.Color="#00FED548"
                                             />
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
                <Border Background="#FFD38417"
                        cs:Name="Border_0004"
                        HorizontalAlignment="Right"
                        Margin="0,1,0,1"
                        Width="1"
                        cs:Office2010Blue.Background="#FFC46211"
                        cs:Office2010Silver.Background="#FFCA791A"
                       />
                <Grid Height="18"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Width="10">
                    <Path cs:Name="Path_0001"
                          Data="F1 M 84,100L 94,90L 94,100L 94,110L 84,100 Z"
                          Fill="#FFD38417"
                          Margin="1,0,1,0"
                          Stretch="Fill"
                          UseLayoutRounding="False"
                          cs:Office2010Blue.Fill="#FFC46211"
                          cs:Office2010Silver.Fill="#FFCA791A"
                         />
                    <Path cs:Name="Path_0002"
                          Data="F1 M 84,100L 94,90L 94,100L 94,110L 84,100 Z"
                          Fill="#FFFFFFFF"
                          Margin="2,0,0,0"
                          Stretch="Fill"
                          UseLayoutRounding="False"
                          cs:Office2010Blue.Fill="#FFFFFFFF"
                          cs:Office2010Silver.Fill="#FFFFFFFF"
                         />
                </Grid>
            </Grid>
            <ContentPresenter/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0"
                                             Storyboard.TargetName="rootGrid"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.6"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=BorderStyle}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Setter Property="Margin" Value="0,1,0,1"/>
        <Setter Property="Template" Value="{DynamicResource {dxrt:BackstageTabItemThemeKey ResourceKey=BorderTemplate}}"/>
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=GlyphContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,4,4,4"/>
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=GlyphStyle}" TargetType="{x:Type Image}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=NormalTextStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="FontSize" Value="12"/>
        <Setter cs:Name="Setter_0001"
                Property="Foreground"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=HoverTextStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="FontSize" Value="12"/>
        <Setter cs:Name="Setter_0002"
                Property="Foreground"
                Value="#FFFFFFFF"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=SelectedTextStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="FontSize" Value="12"/>
        <Setter cs:Name="Setter_0003"
                Property="Foreground"
                Value="#FF000000"
                cs:Office2010Blue.Value="#FF1E395B"
                cs:Office2010Silver.Value="#FF3C3C3C"
               />
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=ContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="2,7,12,7"/>
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=GlyphContainerTabletOfficeStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Grid.ColumnSpan" Value="2"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="8,8,8,2"/>
    </Style>

    <Style x:Key="{dxrt:BackstageTabItemThemeKey ResourceKey=ContentTabletOfficeStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="36,11,36,11"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>