<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal" xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DataTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=HorizontalAppointmentSameDayContentTemplate}">
    <dxschd:HorizontalAppointmentContentPanel VerticalAlignment="Center">
      <dxschd:HorizontalAppointmentStartClockControl VerticalAlignment="Center" ViewInfo="{Binding}" />
      <dxschd:HorizontalAppointmentEndClockControl VerticalAlignment="Center" ViewInfo="{Binding}" />
      <dxschd:AppointmentImagesControl Orientation="Horizontal" ViewInfo="{Binding}" />
      <TextBlock Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}" HorizontalAlignment="Stretch" Margin="1,0,2,0" Text="{Binding Subject}" TextAlignment="Left" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" VerticalAlignment="Stretch" />
      <TextBlock Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}" HorizontalAlignment="Stretch" Text="{Binding Location}" TextAlignment="Left" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" VerticalAlignment="Stretch" />
    </dxschd:HorizontalAppointmentContentPanel>
  </DataTemplate>
</ResourceDictionary>