<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/treemap/themekeys" xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/treemap" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <local:LeafForegroundConverter x:Key="leafForegroundConverter" />
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.TreeMap.HierarchicalTreeMapItemControl}" TargetType="{x:Type local:HierarchicalTreeMapItemControl}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:HierarchicalTreeMapItemControl}">
          <Border x:Name="PART_Border" BorderThickness="1" BorderBrush="#4D000000">
            <TextBlock x:Name="PART_Label" Margin="4" TextWrapping="WrapWithOverflow" TextTrimming="WordEllipsis" Text="{TemplateBinding Text}" Foreground="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type local:TreeMapItemPanel}}, Converter={StaticResource leafForegroundConverter}}" />
          </Border>
          <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding ItemType, RelativeSource={RelativeSource Self}}" Value="{x:Static local:ItemType.RootGroup}">
              <Setter Property="BorderThickness" TargetName="PART_Border" Value="0" />
              <Setter Property="Foreground" TargetName="PART_Label" Value="{dxi:ThemeResource {dxt:TreeMapBrushesThemeKey ResourceKey=GroupForeground}}" />
              <Setter Property="FontWeight" TargetName="PART_Label" Value="{dxi:ThemeResource {dxt:TreeMapBrushesThemeKey ResourceKey=GroupFontWeight}}" />
              <Setter Property="FontSize" TargetName="PART_Label" Value="{dxi:ThemeResource {dxt:TreeMapBrushesThemeKey ResourceKey=GroupFontSize}}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding ItemType, RelativeSource={RelativeSource Self}}" Value="{x:Static local:ItemType.SubGroup}">
              <Setter Property="BorderThickness" TargetName="PART_Border" Value="0" />
              <Setter Property="Foreground" TargetName="PART_Label" Value="{dxi:ThemeResource {dxt:TreeMapBrushesThemeKey ResourceKey=SubGroupForeground}}" />
              <Setter Property="FontWeight" TargetName="PART_Label" Value="{dxi:ThemeResource {dxt:TreeMapBrushesThemeKey ResourceKey=SubGroupFontWeight}}" />
              <Setter Property="FontSize" TargetName="PART_Label" Value="{dxi:ThemeResource {dxt:TreeMapBrushesThemeKey ResourceKey=SubGroupFontSize}}" />
            </DataTrigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>