<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- TabbedLayoutGroupPane Theme Elements -->
  <ControlTemplate x:Key="{dxt:TabbedLayoutGroupPaneElementsThemeKey ResourceKey=PageHeader}" TargetType="ve:TabbedLayoutGroupItem">
    <ve:UnclippableGrid x:Name="Grid" Margin="0,0,-1,0" ve:DockPane.HitTestType="Header">
      <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="MouseOver">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="(Control.Background)">
                <DiscreteObjectKeyFrame KeyTime="0">
                  <DiscreteObjectKeyFrame.Value>
                    <SolidColorBrush Color="#FFE9EDF1" />
                  </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
              </ObjectAnimationUsingKeyFrames>
            </Storyboard>
          </VisualState>
          <VisualState x:Name="Normal" />
        </VisualStateGroup>
        <VisualStateGroup x:Name="SelectionStates">
          <VisualState x:Name="EmptySelectionState" />
          <VisualState x:Name="Selected">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Background" Storyboard.TargetProperty="(Control.Background)">
                <DiscreteObjectKeyFrame KeyTime="0">
                  <DiscreteObjectKeyFrame.Value>
                    <SolidColorBrush Color="#FFFFFFFF" />
                  </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
              </ObjectAnimationUsingKeyFrames>
              <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="(Control.Foreground)">
                <DiscreteObjectKeyFrame KeyTime="0">
                  <DiscreteObjectKeyFrame.Value>
                    <SolidColorBrush Color="#FF000000" />
                  </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
              </ObjectAnimationUsingKeyFrames>
            </Storyboard>
          </VisualState>
          <VisualState x:Name="Unselected" />
        </VisualStateGroup>
        <VisualStateGroup x:Name="LocationStates">
          <VisualState x:Name="Top" />
          <VisualState x:Name="Bottom">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1" Storyboard.TargetName="TabItemHeader" Storyboard.TargetProperty="Padding" />
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,0,-1,0" Storyboard.TargetName="Grid" Storyboard.TargetProperty="Margin" />
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="10,3,10,4" Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Padding" />
            </Storyboard>
          </VisualState>
          <VisualState x:Name="Left">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,0,1" Storyboard.TargetName="TabItemHeader" Storyboard.TargetProperty="Padding" />
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,0,0,-1" Storyboard.TargetName="Grid" Storyboard.TargetProperty="Margin" />
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="10,3" Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Padding" />
            </Storyboard>
          </VisualState>
          <VisualState x:Name="Right">
            <Storyboard>
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1" Storyboard.TargetName="TabItemHeader" Storyboard.TargetProperty="(Border.Padding)" />
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,0,0,-1" Storyboard.TargetName="Grid" Storyboard.TargetProperty="Margin" />
              <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="10,3" Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Padding" />
            </Storyboard>
          </VisualState>
        </VisualStateGroup>
      </VisualStateManager.VisualStateGroups>
      <ve:TabHeaderContainer BottomMargin="0,0,0,1" BottomSelectedMargin="0,-1,0,0" CaptionLocation="{TemplateBinding CaptionLocation}" IsSelected="{TemplateBinding IsSelected}" LeftMargin="1,0,0,0" LeftSelectedMargin="0,0,-1,0" RightMargin="0,0,1,0" RightSelectedMargin="-1,0,0,0" TopMargin="0,1,0,0" TopSelectedMargin="0,0,0,-1">
        <Border x:Name="TabItemHeader" Background="#FFA5ACB5" Padding="1,1,1,0">
          <Border x:Name="Background" Background="#FFCED4DB" Padding="1,1,1,0" />
        </Border>
      </ve:TabHeaderContainer>
      <ve:TabHeaderTransformPanel CaptionLocation="{TemplateBinding CaptionLocation}" CaptionOrientation="{TemplateBinding CaptionOrientation}">
        <Grid x:Name="Content">
          <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <ve:TemplatedTabCaptionControl x:Name="PART_CaptionControlPresenter" Foreground="#FF3C3C3C" LayoutItem="{Binding}" Padding="10,4,10,2" />
          <ve:BaseControlBoxControl x:Name="PART_ControlBox" ButtonHeight="16" ButtonWidth="16" Grid.Column="1" LayoutItem="{Binding}" Margin="-8,4,10,2" />
        </Grid>
      </ve:TabHeaderTransformPanel>
    </ve:UnclippableGrid>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxt:TabbedLayoutGroupPaneElementsThemeKey ResourceKey=Template}" TargetType="ve:TabbedLayoutGroupPane">
    <ve:DockingSplitLayoutPanel BottomContent1Margin="2,0,2,2" DataContext="{Binding}" LeftContent1Margin="2,2,0,2" RightContent1Margin="0,2,2,2" TopContent1Margin="2,2,2,0" ve:DockPane.HitTestType="Bounds">
      <ve:DockingSplitLayoutPanel.Content1Location>
        <Binding Path="CaptionLocation">
          <Binding.Converter>
            <ve:GroupCaptionLocationToDockConverter />
          </Binding.Converter>
        </Binding>
      </ve:DockingSplitLayoutPanel.Content1Location>
      <ve:DockingSplitLayoutPanel.Content1>
        <ve:DockingSplitLayoutPanel x:Name="PART_Header" Canvas.ZIndex="1" ClipMargin="{TemplateBinding ActualClipMargin}" Margin="{TemplateBinding ActualTabPanelMargin}" MaximizeContent1="True">
          <ve:DockingSplitLayoutPanel.Content1Location>
            <Binding Path="CaptionLocation">
              <Binding.Converter>
                <ve:TabHeaderCaptionLocationToDockConverter />
              </Binding.Converter>
            </Binding>
          </ve:DockingSplitLayoutPanel.Content1Location>
          <ve:DockingSplitLayoutPanel.Content1>
            <ItemsPresenter x:Name="PART_HeadersPanelPresenter" />
          </ve:DockingSplitLayoutPanel.Content1>
          <ve:DockingSplitLayoutPanel.Content2>
            <ve:TabHeaderControlBoxControl x:Name="PART_ControlBox" ButtonHeight="16" ButtonStyle="{DynamicResource {dxt:TabbedLayoutGroupPaneElementsThemeKey ResourceKey=TabbedLayoutGroupPaneButtonStyle}}" ButtonWidth="16" LayoutItem="{Binding}" ScrollNextButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollNextButton}}" ScrollPrevButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollPrevButton}}" ve:DockPane.HitTestType="ControlBox" ve:TabHeaderControlBoxControl.Location="{Binding CaptionLocation}" />
          </ve:DockingSplitLayoutPanel.Content2>
        </ve:DockingSplitLayoutPanel>
      </ve:DockingSplitLayoutPanel.Content1>
      <ve:DockingSplitLayoutPanel.Content2>
        <Border x:Name="PART_SelectedPage" Background="#FFFFFFFF" BorderBrush="#FFA5ACB5" BorderThickness="1" Padding="11">
          <ve:LayoutTabFastRenderPanel x:Name="PART_FastRenderPanel" Margin="{TemplateBinding Padding}" ve:DockPane.HitTestType="Content" />
        </Border>
      </ve:DockingSplitLayoutPanel.Content2>
    </ve:DockingSplitLayoutPanel>
    <ControlTemplate.Triggers>
      <Trigger Property="TabbedGroupDisplayMode" Value="ContentOnly">
        <Setter Property="Visibility" TargetName="PART_Header" Value="Collapsed" />
        <Setter Property="Padding" TargetName="PART_SelectedPage" Value="0" />
        <Setter Property="BorderThickness" TargetName="PART_SelectedPage" Value="0" />
        <Setter Property="Background" TargetName="PART_SelectedPage" Value="Transparent" />
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
</ResourceDictionary>