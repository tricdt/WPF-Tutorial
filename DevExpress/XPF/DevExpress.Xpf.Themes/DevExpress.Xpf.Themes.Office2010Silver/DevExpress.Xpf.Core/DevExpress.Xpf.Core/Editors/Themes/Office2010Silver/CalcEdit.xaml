  <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
    <Grid>
      <Grid.Resources>
        <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter" />
        <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter" ThicknessFalse="11" ThicknessTrue="13" />
      </Grid.Resources>
      <Grid x:Name="Shadow" Margin="-2,-1,-2,-2">
        <Border Background="#FF000000" CornerRadius="4" Opacity="0.03" />
        <Border Background="#FF000000" CornerRadius="3" Margin="1" Opacity="0.05" />
      </Grid>
      <Border Background="#FF80838F" CornerRadius="2" Padding="1" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}">
        <Grid>
          <Border CornerRadius="1">
            <Border.Background>
              <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF3F4F5" Offset="0" />
                <GradientStop Color="#FFE5E9EE" Offset="1" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>
          <Border CornerRadius="1" Margin="1">
            <Border.Background>
              <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF3F4F5" Offset="0" />
                <GradientStop Color="#FFE5E9EE" Offset="1" />
                <GradientStop Color="#FFE5E9EE" Offset="0.25" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>
        </Grid>
      </Border>
      <Grid Background="#FFE9EDF1" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}" />
      <ContentPresenter Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}" />
    </Grid>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}" TargetType="{x:Type ContentControl}">
