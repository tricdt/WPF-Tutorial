<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxcore="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler" xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal" xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=MoreButtonUpStyle}" TargetType="{x:Type Button}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ContentControl}">
          <Grid Cursor="Hand" dxsch:SchedulerControl.HitTestType="MoreButton">
            <!--BEGIN WPF-->
            <!--<ToolTipService.ShowOnDisabled>True</ToolTipService.ShowOnDisabled>-->
            <!--END WPF-->
            <!--<ToolTipService.ToolTip>
                            <ToolTip ContentTemplate="{Binding View.MoreButtonToolTipContentTemplate}" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ButtonInfo.Appointments}">-->
            <!--TODO remove this-->
            <!--<ToolTip.Template>
                                    <ControlTemplate TargetType="{x:Type ToolTip}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </ToolTip.Template>
                            </ToolTip>
                        </ToolTipService.ToolTip>-->
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Disabled">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Normal">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0.75" />
                    <DoubleAnimation Duration="0" Storyboard.TargetName="NormalState" Storyboard.TargetProperty="Opacity" To="1" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="HoverState" Storyboard.TargetProperty="Opacity" To="1" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="PressedState" Storyboard.TargetProperty="Opacity" To="1" />
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid x:Name="Root" Height="16" Width="16">
              <Border x:Name="NormalState" Background="#FFA5ACB5" CornerRadius="64" Opacity="0">
                <Border CornerRadius="64" Margin="1">
                  <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                      <GradientStop Color="#FFF3F4F5" Offset="0" />
                      <GradientStop Color="#FFE3E6E8" Offset="1" />
                    </LinearGradientBrush>
                  </Border.Background>
                </Border>
              </Border>
              <Border x:Name="HoverState" CornerRadius="24" Opacity="0">
                <Border.Background>
                  <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#BFD7A820" Offset="0" />
                    <GradientStop Color="#FFEAC656" Offset="1" />
                  </LinearGradientBrush>
                </Border.Background>
                <Border CornerRadius="64" Margin="1">
                  <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                      <GradientStop Color="#FFFFFAE6" Offset="0" />
                      <GradientStop Color="#FFFFFFED" Offset="1" />
                    </LinearGradientBrush>
                  </Border.Background>
                  <Border CornerRadius="64" Margin="1">
                    <Border.Background>
                      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFEEA8" Offset="0" />
                        <GradientStop Color="#FFFFFCE0" Offset="1" />
                        <GradientStop Color="#FFFFE277" Offset="0.5" />
                      </LinearGradientBrush>
                    </Border.Background>
                  </Border>
                </Border>
              </Border>
              <Border x:Name="PressedState" CornerRadius="64" Opacity="0">
                <Border.Background>
                  <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC28F36" Offset="0" />
                    <GradientStop Color="#FFC2A34C" Offset="1" />
                  </LinearGradientBrush>
                </Border.Background>
                <Border CornerRadius="64" Margin="1">
                  <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                      <GradientStop Color="#FFFFE575" Offset="0" />
                      <GradientStop Color="#FFFFF37F" Offset="1" />
                      <GradientStop Color="#FFFFD86C" Offset="0.5" />
                    </LinearGradientBrush>
                  </Border.Background>
                </Border>
              </Border>
              <Path x:Name="GlyphUp" Data="F1 M 209,6.00006L 201,6.00006L 205,2L 209,6.00006 Z" Fill="#FF80838F" Height="4" HorizontalAlignment="Center" Margin="0,0,0,2" Stretch="Fill" VerticalAlignment="Center" Width="8" />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
