<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxrec="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal" xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaLeftPadding}">20</sys:Double>
  <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaRightPadding}">10</sys:Double>
  <Thickness x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentContentPadding}">10,10,10,10</Thickness>
  <Point x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentLineOffset}">0,20</Point>
  <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PrintLayoutViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
    <Grid>
      <Grid x:Name="Shadow">
        <Border Background="#FF666666" Opacity="0.05" />
        <Border Background="#FF000000" CornerRadius="12" Margin="-1" Opacity="0.03" />
        <Border Background="#FF666666" CornerRadius="13" Margin="-2" Opacity="0.03" />
        <Border Background="#FF666666" CornerRadius="14" Margin="-3" Opacity="0.02" />
        <Border Background="#FF666666" CornerRadius="15" Margin="-4" Opacity="0.02" />
        <Border Background="#FF666666" CornerRadius="16" Margin="-5" Opacity="0.02" />
        <Border Background="#FF666666" CornerRadius="17" Margin="-6" Opacity="0.01" />
        <Border Background="#FF666666" CornerRadius="18" Margin="-7" Opacity="0.01" />
        <Border Background="#FF666666" CornerRadius="19" Margin="-8" Opacity="0.01" />
        <Border Background="#FF666666" CornerRadius="20" Margin="-9" Opacity="0.01" />
        <Border Background="#FF666666" CornerRadius="21" Margin="-10" Opacity="0.01" />
      </Grid>
      <Border Background="{TemplateBinding Background}" BorderBrush="#3FA5ACB5" BorderThickness="1">
        <Grid>
          <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="-1" SnapsToDevicePixels="True" UseLayoutRounding="True" />
          <Border Background="#FFFAFAFA" HorizontalAlignment="Right" Visibility="{TemplateBinding CommentsVisibility}">
            <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea" HorizontalAlignment="Right" Visibility="{TemplateBinding CommentsVisibility}" Width="{TemplateBinding CommentsWidth}" />
          </Border>
        </Grid>
      </Border>
    </Grid>
  </ControlTemplate>
  <!--RichEditViewCommentsPresenterControlTemplate-->
  <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditViewCommentsPresenterControlTemplate}" TargetType="{x:Type ContentControl}">
    <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" SnapsToDevicePixels="True" UseLayoutRounding="True" />
  </ControlTemplate>
  <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=SimpleViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
    <Border Background="{TemplateBinding Background}">
      <Grid>
        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" SnapsToDevicePixels="True" UseLayoutRounding="True" />
        <Border Background="#FFFAFAFA" HorizontalAlignment="Right" Visibility="{TemplateBinding CommentsVisibility}">
          <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea" HorizontalAlignment="Right" Visibility="{TemplateBinding CommentsVisibility}" Width="{TemplateBinding CommentsWidth}" />
        </Border>
      </Grid>
    </Border>
  </ControlTemplate>
  <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=DraftViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
    <Border Background="{TemplateBinding Background}">
      <Grid>
        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" SnapsToDevicePixels="True" UseLayoutRounding="True" />
        <Border Background="#FFFAFAFA" HorizontalAlignment="Right" Visibility="{TemplateBinding CommentsVisibility}">
          <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea" HorizontalAlignment="Right" Visibility="{TemplateBinding CommentsVisibility}" Width="{TemplateBinding CommentsWidth}" />
        </Border>
      </Grid>
    </Border>
  </ControlTemplate>
  <!--RichEditCommentBorderControlTemplate -->
  <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditCommentBorderControlTemplate}" TargetType="{x:Type ContentControl}">
    <Grid>
      <Border Background="#FFFFFFFF" BorderBrush="{TemplateBinding Background}" BorderThickness="1" CornerRadius="2" Margin="1">
        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="-1" SnapsToDevicePixels="True" UseLayoutRounding="True" />
      </Border>
      <Border Background="{TemplateBinding Background}" CornerRadius="2" IsHitTestVisible="False" Margin="1" Opacity="0.1" />
    </Grid>
  </ControlTemplate>
  <!-- CommentMoreButtonStyle -->
  <Style x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentMoreButtonStyle}" TargetType="{x:Type Button}">
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="VerticalAlignment" Value="Bottom" />
    <Setter Property="Margin" Value="3" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Grid>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Disabled">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Normal">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0.75" />
                    <DoubleAnimation Duration="0" Storyboard.TargetName="NormalState" Storyboard.TargetProperty="Opacity" To="1" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="HoverState" Storyboard.TargetProperty="Opacity" To="1" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <Storyboard>
                    <DoubleAnimation Duration="0" Storyboard.TargetName="PressedState" Storyboard.TargetProperty="Opacity" To="1" />
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid x:Name="Root" Height="16" Width="16">
              <Border x:Name="NormalState" Background="#FF666666" CornerRadius="64" Opacity="0">
                <Border CornerRadius="64" Margin="1">
                  <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                      <GradientStop Color="#FFB3B3B3" Offset="0" />
                      <GradientStop Color="#FF9F9F9F" Offset="1" />
                    </LinearGradientBrush>
                  </Border.Background>
                </Border>
              </Border>
              <Border x:Name="HoverState" CornerRadius="24" Opacity="0">
                <Border.Background>
                  <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#BFD7A820" Offset="0" />
                    <GradientStop Color="#BFB89407" Offset="1" />
                  </LinearGradientBrush>
                </Border.Background>
                <Border CornerRadius="64" Margin="1">
                  <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                      <GradientStop Color="#FFFFFAE6" Offset="0" />
                      <GradientStop Color="#FFFFFFED" Offset="1" />
                    </LinearGradientBrush>
                  </Border.Background>
                  <Border CornerRadius="64" Margin="1">
                    <Border.Background>
                      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFEEA8" Offset="0" />
                        <GradientStop Color="#FFFFFCE0" Offset="1" />
                        <GradientStop Color="#FFFFE277" Offset="0.5" />
                      </LinearGradientBrush>
                    </Border.Background>
                  </Border>
                </Border>
              </Border>
              <Border x:Name="PressedState" CornerRadius="64" Opacity="0">
                <Border.Background>
                  <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC28F36" Offset="0" />
                    <GradientStop Color="#FFC2A34C" Offset="1" />
                  </LinearGradientBrush>
                </Border.Background>
                <Border CornerRadius="64" Margin="1">
                  <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                      <GradientStop Color="#FFFFE575" Offset="0" />
                      <GradientStop Color="#FFFFF37F" Offset="1" />
                      <GradientStop Color="#FFFFD86C" Offset="0.5" />
                    </LinearGradientBrush>
                  </Border.Background>
                </Border>
              </Border>
              <Path x:Name="GlyphDown" Data="F1 M 209,15.9999L 201,15.9999L 205,20L 209,15.9999 Z" Fill="#FF3C3C3C" Height="4" HorizontalAlignment="Center" Margin="0,2,0,0" Stretch="Fill" VerticalAlignment="Center" Width="8" />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>