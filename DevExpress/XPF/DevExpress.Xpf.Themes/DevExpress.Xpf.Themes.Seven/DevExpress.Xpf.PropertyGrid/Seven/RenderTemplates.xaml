<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dxn:RenderTemplate x:Key="{dxprgt:VSViewRenderTemplateThemeKey ResourceKey=RowCommandButton}">
        <dxn:RenderPanel Margin="5,0,6,0">
            <dxn:RenderBorder Height="10" Width="10"/>
            <dxn:RenderBorder Name="Root" Background="#FFF0F0F0">
                <dxn:RenderPanel>
                    <dxn:RenderPath Data="F1 M 10,10L 0,10L 0,0L 10,0L 10,10 Z M 1,1L 1,9L 5,9L 9,5L 9,1L 1,1 Z "
                                    Fill="#FF999999"
                                    Height="10"
                                    Stretch="Fill"
                                    Width="10"/>
                    <dxn:RenderBorder Name="ShouldHightlightValue"
                                      Background="#FF999999"
                                      Height="10"
                                      Margin="1"
                                      Opacity="0"
                                      Width="10"/>
                </dxn:RenderPanel>
            </dxn:RenderBorder>
            <dxn:RenderContentPresenter Name="PART_ContentPresenter" Visibility="Collapsed"/>
        </dxn:RenderPanel>
        <dxn:RenderTemplate.Triggers>
            <dxn:RenderStateGroup Name="CommonStates">
                <dxn:RenderStateTrigger Name="Normal"/>
                <dxn:RenderStateTrigger Name="MouseOver">
                    <dxn:RenderSetter Property="Background"
                                      TargetName="Root"
                                      Value="#FFB0B0B0"/>
                    <dxn:RenderSetter Property="Background"
                                      TargetName="ShouldHightlightValue"
                                      Value="#FFB0B0B0"/>
                </dxn:RenderStateTrigger>
            </dxn:RenderStateGroup>
            <dxn:RenderTrigger DependencyProperty="{x:Static dxprg:RowControl.ShouldHighlightValueProperty}" Value="True">
                <dxn:RenderSetter Property="Opacity"
                                  TargetName="ShouldHightlightValue"
                                  Value="1"/>
            </dxn:RenderTrigger>
            <dxn:MultiRenderTrigger>
                <dxn:MultiRenderTrigger.Conditions>
                    <dxn:RenderCondition DependencyProperty="{x:Static dxprg:RowControl.MenuButtonTemplateProperty}"
                                         Operator="Not"
                                         Value="{x:Null}"/>
                </dxn:MultiRenderTrigger.Conditions>
                <dxn:RenderSetter Property="Visibility"
                                  TargetName="PART_ContentPresenter"
                                  Value="Visible"/>
                <dxn:RenderSetter Property="Visibility"
                                  TargetName="Root"
                                  Value="Collapsed"/>
            </dxn:MultiRenderTrigger>
        </dxn:RenderTemplate.Triggers>
    </dxn:RenderTemplate>

    <dxn:RenderTemplate x:Key="{dxprgt:VSViewRenderTemplateThemeKey ResourceKey=RowCollectionButton}">
        <dxn:RenderPanel>
            <dxn:RenderPanel Name="PART_Add" Opacity="0.5">
                <dxn:RenderPath Data="F1 M 6,0C 9.31371,0 12,2.68629 12,6C 12,9.31371 9.31371,12 6,12C 2.68629,12 -6.35783e-007,9.31371 -6.35783e-007,6C -6.35783e-007,2.68629 2.68629,0 6,0 Z M 2,5L 2,7L 5,7L 5,10L 7,10L 7,7L 10,7L 10,5L 7,5L 7,2L 5,2L 5,5L 2,5 Z "
                                Fill="#FF818181"
                                Height="12"
                                Stretch="Fill"
                                Width="12"/>
            </dxn:RenderPanel>
            <dxn:RenderPanel Name="PART_Remove"
                             Opacity="0.5"
                             Visibility="Collapsed">
                <dxn:RenderPath Name="Path"
                                Data="F1 M 1.75736,1.75736C 4.1005,-0.585785 7.89949,-0.585785 10.2426,1.75736C 12.5858,4.10051 12.5858,7.8995 10.2426,10.2426C 7.89949,12.5858 4.1005,12.5858 1.75736,10.2426C -0.585787,7.8995 -0.585787,4.10051 1.75736,1.75736 Z M 2.46447,8.12132L 3.87868,9.53553L 6,7.41421L 8.12132,9.53553L 9.53553,8.12132L 7.41421,6L 9.53553,3.87868L 8.12132,2.46447L 6,4.58579L 3.87868,2.46447L 2.46447,3.87868L 4.58579,6L 2.46447,8.12132 Z "
                                Fill="#FFCC0000"
                                Height="12"
                                Stretch="Fill"
                                Width="12"/>
            </dxn:RenderPanel>
        </dxn:RenderPanel>
        <dxn:RenderTemplate.Triggers>
            <dxn:RenderStateGroup Name="CommonStates">
                <dxn:RenderStateTrigger Name="Normal"/>
                <dxn:RenderStateTrigger Name="MouseOver">
                    <dxn:RenderSetter Property="Opacity"
                                      TargetName="PART_Add"
                                      Value="1"/>
                    <dxn:RenderSetter Property="Opacity"
                                      TargetName="PART_Remove"
                                      Value="0.75"/>
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path"
                                      Value="#FF990000"/>
                </dxn:RenderStateTrigger>
            </dxn:RenderStateGroup>
            <dxn:RenderStateGroup Name="ButtonKind">
                <dxn:RenderStateTrigger Name="Add"/>
                <dxn:RenderStateTrigger Name="Remove">
                    <dxn:RenderSetter Property="Visibility"
                                      TargetName="PART_Remove"
                                      Value="Visible"/>
                    <dxn:RenderSetter Property="Visibility"
                                      TargetName="PART_Add"
                                      Value="Collapsed"/>
                </dxn:RenderStateTrigger>
            </dxn:RenderStateGroup>
        </dxn:RenderTemplate.Triggers>
    </dxn:RenderTemplate>

    <dxn:RenderTemplate x:Key="{dxprgt:VSViewRenderTemplateThemeKey ResourceKey=Expander}">
        <dxn:RenderPanel>
            <dxn:RenderBorder Name="HoverHighlight"
                              Height="14"
                              Opacity="0"
                              Width="14">
                <dxn:RenderBorder.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF1CC4F7"/>
                        <GradientStop Color="#001CC4F7" Offset="1"/>
                    </RadialGradientBrush>
                </dxn:RenderBorder.Background>
            </dxn:RenderBorder>
            <dxn:RenderPanel Name="GlyphExpanded"
                             Height="7"
                             Margin="0,0,1,1"
                             Opacity="0"
                             Width="7">
                <dxn:RenderPath Name="Path1"
                                Data="F1 M 5.98438,24.9948L 12.9428,24.9948L 13.9222,24.0155L 13.9222,16.91L 5.98438,24.9948 Z"
                                Fill="#FF303336"
                                Stretch="Fill"/>
                <dxn:RenderPath Name="Path2"
                                Data="F1 M 5.98438,24.9948L 12.9428,24.9948L 13.9222,24.0155L 13.9222,16.91L 5.98438,24.9948 Z"
                                Fill="#FF303336"
                                Stretch="Fill"/>
                <dxn:RenderPath Name="Path3"
                                Data="F1 M 13.0677,23.9948L 13.0677,19.0358L 8.06719,24.0363L 13.0677,23.9948 Z"
                                Fill="#FF87898A"
                                Margin="2,2,1,1"
                                Stretch="Fill"/>
            </dxn:RenderPanel>
            <dxn:RenderPanel Name="GlyphCollapsed"
                             Height="10"
                             Margin="1,0,0,0"
                             Width="5">
                <dxn:RenderPath Name="Path4"
                                Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                                Fill="#FF818181"
                                Stretch="Fill"/>
                <dxn:RenderPath Name="Path5"
                                Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                                Fill="#FF818181"
                                Stretch="Fill"/>
                <dxn:RenderPath Name="Path6"
                                Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                                Fill="#FFF8F8F8"
                                Height="6"
                                Margin="1"
                                Stretch="Fill"
                                Width="3"/>
            </dxn:RenderPanel>
        </dxn:RenderPanel>
        <dxn:RenderTemplate.Triggers>
            <dxn:RenderStateGroup Name="CommonStates">
                <dxn:RenderStateTrigger Name="Normal"/>
                <dxn:RenderStateTrigger Name="MouseOver">
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path1"
                                      Value="#FF1CC4F7"/>
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path2"
                                      Value="#FF1CC4F7"/>
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path3"
                                      Value="#FFCDEEFB"/>
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path4"
                                      Value="#FF1CC4F7"/>
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path5"
                                      Value="#FF1CC4F7"/>
                    <dxn:RenderSetter Property="Fill"
                                      TargetName="Path6"
                                      Value="#FFCDEEFB"/>
                    <dxn:RenderSetter Property="Opacity"
                                      TargetName="HoverHighlight"
                                      Value="0.15"/>
                </dxn:RenderStateTrigger>
            </dxn:RenderStateGroup>
            <dxn:RenderStateGroup Name="CheckedStates">
                <dxn:RenderStateTrigger Name="Checked">
                    <dxn:RenderSetter Property="Opacity"
                                      TargetName="GlyphExpanded"
                                      Value="1"/>
                    <dxn:RenderSetter Property="Opacity"
                                      TargetName="GlyphCollapsed"
                                      Value="0"/>
                </dxn:RenderStateTrigger>
                <dxn:RenderStateTrigger Name="Unchecked"/>
            </dxn:RenderStateGroup>
        </dxn:RenderTemplate.Triggers>
    </dxn:RenderTemplate>

</ResourceDictionary>