<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=RowMinHeight}">21</sys:Double>

    <Thickness x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderMargin}">2,0,0,0</Thickness>

    <Thickness x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderPadding}">2</Thickness>

    <ControlTemplate x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderNormalTemplate}">
        <Border Background="Transparent"
                MinHeight="22"
                MinWidth="22"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderMouseOverTemplate}">
        <Border x:Name="hover1"
                Background="#FFE4C97F"
                CornerRadius="2"
                MinHeight="22"
                MinWidth="22">
            <Border x:Name="hover2"
                    CornerRadius="1"
                    Margin="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFBF0" Offset="0"/>
                        <GradientStop Color="#FFFFE8A6" Offset="1"/>
                        <GradientStop Color="#FFFFF4D2" Offset="0.5"/>
                        <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderSelectedTemplate}">
        <Border x:Name="pressed1"
                Background="#FFE4C97F"
                CornerRadius="2"
                MinHeight="22"
                MinWidth="22"
                Opacity="0.9">
            <Border x:Name="pressed2"
                    Background="#FFFFF9E9"
                    CornerRadius="1"
                    Margin="1">
                <Border x:Name="pressed3"
                        Background="#FFFFE8A6"
                        Margin="1"/>
            </Border>
        </Border>
    </ControlTemplate>

</ResourceDictionary>