<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid"
                    xmlns:dxpgi="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid/internal"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <dx:BooleanToVisibilityConverter x:Key="invertBoolToVisibilityConverter" Invert="True"/>

    <ControlTemplate x:Key="{dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonTemplate}" TargetType="{x:Type dx:ToggleStateButton}">
        <Grid Background="Transparent" SnapsToDevicePixels="True">
            <Grid>
                <Border x:Name="HoverHighlight"
                        Height="14"
                        Opacity="0"
                        Width="14">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF1CC4F7"/>
                            <GradientStop Color="#001CC4F7" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>
                <Grid Height="7"
                      Margin="0,0,1,1"
                      Visibility="{Binding IsChecked, Converter={StaticResource boolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                      Width="7">
                    <Path x:Name="GlyphClosePath1"
                          Data="F1 M 5.98438,24.9948L 12.9428,24.9948L 13.9222,24.0155L 13.9222,16.91L 5.98438,24.9948 Z "
                          Fill="#FF303336"
                          Stretch="Fill"/>
                    <Path x:Name="GlyphClosePath2"
                          Data="F1 M 5.98438,24.9948L 12.9428,24.9948L 13.9222,24.0155L 13.9222,16.91L 5.98438,24.9948 Z "
                          Fill="#FF303336"
                          Stretch="Fill"/>
                    <Path x:Name="GlyphClosePath3"
                          Data="F1 M 13.0677,23.9948L 13.0677,19.0358L 8.06719,24.0363L 13.0677,23.9948 Z"
                          Fill="#FF87898A"
                          Margin="2,2,1,1"
                          Stretch="Fill"/>
                </Grid>
                <Grid Height="10"
                      Margin="1,0,0,0"
                      Visibility="{Binding IsChecked, Converter={StaticResource invertBoolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                      Width="5">
                    <Path x:Name="GlyphOpenPath1"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z "
                          Fill="#FF818181"
                          Stretch="Fill"/>
                    <Path x:Name="GlyphOpenPath2"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z "
                          Fill="#FF818181"
                          Stretch="Fill"/>
                    <Path x:Name="GlyphOpenPath3"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                          Fill="#FFF8F8F8"
                          Height="6"
                          Margin="1"
                          Stretch="Fill"
                          Width="3"/>
                </Grid>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="GlyphClosePath1"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF1CC4F7"/>
                            <ColorAnimation Storyboard.TargetName="GlyphClosePath2"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF1CC4F7"/>
                            <ColorAnimation Storyboard.TargetName="GlyphClosePath3"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFCDEEFB"/>
                            <ColorAnimation Storyboard.TargetName="GlyphOpenPath1"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF1CC4F7"/>
                            <ColorAnimation Storyboard.TargetName="GlyphOpenPath2"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF1CC4F7"/>
                            <ColorAnimation Storyboard.TargetName="GlyphOpenPath3"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFCDEEFB"/>
                            <DoubleAnimation Storyboard.TargetName="HoverHighlight"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.15"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonStyle}" TargetType="{x:Type dx:ToggleStateButton}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="13"/>
        <Setter Property="Height" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{DynamicResource {dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonTemplate}}"/>
    </Style>

</ResourceDictionary>