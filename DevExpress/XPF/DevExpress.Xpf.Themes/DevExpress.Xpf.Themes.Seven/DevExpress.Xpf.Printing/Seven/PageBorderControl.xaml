<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native;assembly=DevExpress.Xpf.Printing.v24.1"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Native.PageBorderControl}" TargetType="{x:Type native:PageBorderControl}">
        <Style.Setters>
            <!--BEGIN WPF-->
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <!--END WPF-->
            <!--ONLY SL
            <Setter Property="UseLayoutRounding" Value="True"/>
             ONLY SL-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type native:PageBorderControl}">
                        <Grid>
                            <Grid.Resources>
                                <core:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>
                            </Grid.Resources>
                            <Grid x:Name="pageShadow"
                                  Margin="-3"
                                  Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsPageShadowVisible, Converter={StaticResource boolToVisibilityConverter}}">
                                <Border Background="#FF000000"
                                        CornerRadius="5"
                                        Opacity="0.01"/>
                                <Border Background="#FF000000"
                                        CornerRadius="4"
                                        Margin="1"
                                        Opacity="0.02"/>
                                <Border Background="#FF000000"
                                        CornerRadius="3"
                                        Margin="2"
                                        Opacity="0.03"/>
                            </Grid>
                            <Border Background="#FFFFFFFF"
                                    BorderBrush="#26000000"
                                    BorderThickness="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness}">
                                <ContentPresenter Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Content}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

</ResourceDictionary>