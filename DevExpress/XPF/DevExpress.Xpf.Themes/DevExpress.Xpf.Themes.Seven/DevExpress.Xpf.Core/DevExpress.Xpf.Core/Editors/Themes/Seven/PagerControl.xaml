<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Seven.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/PagerControl.xaml"/>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Seven.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Themes/StandardControls/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonFirstPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 156,47L 156,55L 152,51L 156,47 Z M 151,47L 152,47L 152,55L 151,55L 151,47 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Stretch="Fill"
                  Width="5"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonPreviousPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 128,35L 128,43L 124,39L 128,35 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Margin="1,0,0,0"
                  Stretch="Fill"
                  Width="4"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonNextPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 149,25L 149,33L 153,29L 149,25 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Margin="1,0,0,0"
                  Stretch="Fill"
                  Width="4"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonLastPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 151,47L 151,55L 155,51L 151,47 Z M 156,47.0001L 155,47.0001L 155,55.0001L 156,55.0001L 156,47.0001 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Stretch="Fill"
                  Width="5"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=RefreshPageGlyph}">
        <Grid>
            <Path Data="M1.0000008,5.9999999 C1.0000007,8.2090558 2.791002,9.9999207 5.0000038,9.9999207 5.8149419,9.9999207 6.5731067,9.7561959 7.2053051,9.3376683 L7.2834491,9.2834481 5,6.9999989 10,6.9999989 10,11.999999 8.0001802,10.000179 7.918436,10.060469 C7.0969662,10.651709 6.0887546,11.000001 5.0000038,11.000001 2.2390017,11.000001 -2.9806088E-08,8.7614449 0,6.0001 z M0,0 L1.9997931,1.9997934 2.0814781,1.939532 C2.902729,1.3482915 3.9104328,1 4.9999962,1 7.7609982,1 10,3.2385551 10,5.9998997 L8.999999,5.9999999 C8.999999,3.7909442 7.2089977,2.00008 4.9999962,2.00008 4.1537142,2.00008 3.3686571,2.2629133 2.7223119,2.7113947 L2.715928,2.7159282 5,5.0000004 0,5.0000004 z"
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="12"
                  HorizontalAlignment="Center"
                  Stretch="Fill"
                  Width="10"/>
        </Grid>
    </DataTemplate>

    <ControlTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=BorderTemplate}" TargetType="ContentControl">
        <Border>
            <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonTemplate}" TargetType="dxe:PagerControlNavigationButton">
        <Grid x:Name="Root" Background="Transparent">
            <Grid x:Name="NormalTemplate">
                <Border Background="#FF8E8E8E"
                        CornerRadius="2"
                        Padding="1">
                    <Grid>
                        <Border CornerRadius="1" Padding="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFF6F6F6" Offset="0"/>
                                    <GradientStop Color="#FFE1E1E1" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFF2F2F2" Offset="0"/>
                                        <GradientStop Color="#FFD0D0D0" Offset="1"/>
                                        <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                        <GradientStop Color="#FFDCDCDC" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            <Grid x:Name="HoverTemplate" Opacity="0">
                <Border x:Name="hover1"
                        CornerRadius="1"
                        Margin="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFDCF1FC" Offset="0"/>
                            <GradientStop Color="#FFACDCF4" Offset="1"/>
                            <GradientStop Color="#FFC1E5F6" Offset="0.5"/>
                            <GradientStop Color="#FF92CEE9" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="SelectedTemplate" Opacity="0">
                <Border x:Name="pressed1"
                        CornerRadius="1"
                        Margin="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF9AC3DB" Offset="0"/>
                            <GradientStop Color="#FF629CBE" Offset="1"/>
                            <GradientStop Color="#FF81B4CF" Offset="0.5"/>
                            <GradientStop Color="#FF5A99B9" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Border x:Name="pressed2"
                    BorderBrush="#FFFFFFFF"
                    BorderThickness="1,1,0,0"
                    CornerRadius="1"
                    Margin="1"
                    Opacity="0.1"/>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <ContentPresenter Margin="{TemplateBinding Padding}"/>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Opacity"
                        TargetName="HoverTemplate"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Opacity"
                        TargetName="SelectedTemplate"
                        Value="1"/>
                <Setter Property="BorderBrush"
                        TargetName="pressed2"
                        Value="#FF000000"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.35"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NumericButtonTemplate}" TargetType="dxe:PagerControlNumericButton">
        <Grid x:Name="Root" Background="Transparent">
            <Grid x:Name="HoverTemplate" Opacity="0">
                <Border Background="#FF7DA2CE"
                        CornerRadius="2"
                        Opacity="0.5"
                        Padding="1">
                    <Border CornerRadius="1"
                            Padding="1"
                            Visibility="Visible">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFEBF4FD" Offset="0"/>
                                <GradientStop Color="#FFDBEAFD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                    <GradientStop Color="#FFC1DBFC" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="SelectedTemplate" Opacity="0">
                <Border Background="#FF7DA2CE"
                        CornerRadius="2"
                        Padding="1">
                    <Border CornerRadius="1"
                            Padding="1"
                            Visibility="Visible">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFEBF4FD" Offset="0"/>
                                <GradientStop Color="#FFDBEAFD" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                    <GradientStop Color="#FFC1DBFC" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid HorizontalAlignment="Center"
                  Margin="{TemplateBinding Padding}"
                  VerticalAlignment="Center">
                <ContentPresenter Content="{Binding Number, Converter={StaticResource pageIndexConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  HorizontalAlignment="Center"
                                  Visibility="{Binding Path=ShowEllipsis, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisiblityConverterInverse}}"/>
                <ContentPresenter Content="..."
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  HorizontalAlignment="Center"
                                  Visibility="{Binding Path=ShowEllipsis, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityConverter}}"/>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Opacity"
                        TargetName="HoverTemplate"
                        Value="1"/>
            </Trigger>
            <DataTrigger Binding="{Binding IsSelected}" Value="true">
                <Setter Property="Opacity"
                        TargetName="SelectedTemplate"
                        Value="1"/>
            </DataTrigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter Property="Opacity"
                        TargetName="SelectedTemplate"
                        Value="1"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>   