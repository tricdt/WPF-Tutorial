    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=LeftSelectionThumbTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="Transparent"
              HorizontalAlignment="Left"
              Width="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1"
                  HorizontalAlignment="Right"
                  Margin="2,0,-2,0"
                  Opacity="0.35"
                  Width="2">
                <Border Background="#FF000000" Opacity="0.1"/>
                <Border Background="#FF000000"
                        Margin="0,0,1,0"
                        Opacity="0.2"/>
            </Grid>
            <Border Background="#3FC0C0C0"
                    BorderBrush="#3F000000"
                    BorderThickness="0,0,1,0"
                    Grid.Column="1"
                    Width="9"/>
            <Grid Grid.Column="1"
                  Height="22"
                  Width="9">
                <Border x:Name="NormalState"
                        BorderBrush="#FF999999"
                        BorderThickness="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFC28F36" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Border BorderBrush="#FF999999"
                                BorderThickness="1,0,1,0"
                                Margin="1,2,1,2"
                                Width="3"/>
                        <Border BorderBrush="#7FFFFFFF" BorderThickness="1,1,0,0"/>
                    </Grid>
                </Border>
                <Border x:Name="PressedState"
                        BorderBrush="#FF3C7FB1"
                        BorderThickness="1"
                        Opacity="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE5F4FC" Offset="0"/>
                            <GradientStop Color="#FF68B3DB" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Border BorderBrush="#FF3C7FB1"
                                BorderThickness="1,0,1,0"
                                Margin="1,2,1,2"
                                Width="3"/>
                        <Border BorderBrush="#7FFFFFFF" BorderThickness="1,1,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxer:RangeControl.OwnerRangeControl).IsSelectionMoving, RelativeSource={RelativeSource Self}}" Value="True">
                <Setter Property="Opacity"
                        TargetName="NormalState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

