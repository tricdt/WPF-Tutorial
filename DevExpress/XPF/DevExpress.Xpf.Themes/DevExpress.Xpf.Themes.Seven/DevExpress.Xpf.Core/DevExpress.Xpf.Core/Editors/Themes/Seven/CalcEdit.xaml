                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#C066CCFF" Offset="0"/>
                                                <GradientStop Color="#C066CCFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border CornerRadius="1" Margin="1">
                                            <Border.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
