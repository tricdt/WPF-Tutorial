        <Setter Property="Template" Value="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Grid.Resources>
                <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
                <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter"
                                             ThicknessFalse="11"
                                             ThicknessTrue="13"/>
            </Grid.Resources>
            <Border Background="#FFA3B0C0"
                    CornerRadius="3"
                    Padding="1"
                    Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Border CornerRadius="2">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFAFCFE" Offset="0"/>
                                <GradientStop Color="#FFF4F7FB" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFEDF4FC" Offset="0"/>
                                <GradientStop Color="#FFD9E4F1" Offset="1"/>
                                <GradientStop Color="#FFD9E4F1" Offset="0.25"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            <Grid Background="#FFE3EFFF" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
            <ContentPresenter Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFE3EFFF" Padding="11">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

