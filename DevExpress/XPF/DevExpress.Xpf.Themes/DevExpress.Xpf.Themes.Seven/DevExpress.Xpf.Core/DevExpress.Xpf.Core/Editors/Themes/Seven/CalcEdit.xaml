                                                    <GradientStop Color="#FFD7E2EF" Offset="1"/>
                                                    <GradientStop Color="#FFE2EAF3" Offset="0.5"/>
                                                    <GradientStop Color="#FFD5E0ED" Offset="0.5"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Border>
                                    <Border x:Name="PART_Border2"
                                            CornerRadius="1"
                                            Margin="1"
                                            Opacity="0">
