<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxt:DXWindowThemeKey ResourceKey=AeroWindowBorderSize}">8</sys:Double>

    <Thickness x:Key="{dxt:DXWindowThemeKey ResourceKey=AeroWindowResizeBorderThickness}">8</Thickness>

    <SolidColorBrush x:Key="{dxt:DXWindowThemeKey ResourceKey=AeroWindowContainerBackground}" Color="#FFE3EFFF"/>

    <DataTemplate x:Key="{dxt:DXWindowThemeKey ResourceKey=AeroWindowCaptionTemplate}">
        <Grid Height="Auto" MinHeight="29">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image x:Name="PART_Icon"
                   Grid.Column="0"
                   Height="Auto"
                   Margin="6,6,0,3"
                   Source="{Binding Path=(dxc:FloatingContainer.FloatingContainer).Icon, RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                   Stretch="None"
                   VerticalAlignment="Top"
                   Width="Auto"/>
            <dxc:FloatingContainerHeaderPanel Grid.Column="1">
                <Grid HorizontalAlignment="Left"
                      IsHitTestVisible="False"
                      Margin="6,3,6,3"
                      VerticalAlignment="Center">
                    <Border Background="White"
                            CornerRadius="6"
                            Margin="-2,0,-2,0"
                            Opacity="0.3">
                        <Border.Effect>
                            <BlurEffect Radius="10"/>
                        </Border.Effect>
                    </Border>
                    <TextBlock x:Name="PART_Text"
                               Background="{x:Null}"
                               Foreground="Black"
                               Text="{Binding Path=(dxc:FloatingContainer.FloatingContainer).Caption, RelativeSource={RelativeSource AncestorType=ContentPresenter}}"/>
                </Grid>
            </dxc:FloatingContainerHeaderPanel>
        </Grid>
        <DataTemplate.Triggers>
            <Trigger Property="Source"
                     SourceName="PART_Icon"
                     Value="{x:Null}">
                <Setter Property="Visibility"
                        TargetName="PART_Icon"
                        Value="Collapsed"/>
            </Trigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <ControlTemplate x:Key="{dxt:DXWindowThemeKey ResourceKey=AeroWindowDragWidgetTemplate}" TargetType="{x:Type Thumb}">
        <Border Background="Transparent"></Border>
    </ControlTemplate>

