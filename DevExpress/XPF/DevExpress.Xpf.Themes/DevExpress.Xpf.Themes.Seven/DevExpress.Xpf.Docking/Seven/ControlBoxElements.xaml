    <!-- GroupBox Button -->

    <Style x:Key="{dxt:GroupPaneElementsThemeKey ResourceKey=GroupPaneButtonStyle}" TargetType="ve:ControlBoxButton">
        <Setter Property="BorderStyle">
            <Setter.Value>
                <Style TargetType="ve:ControlBoxButtonBorder">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ve:ControlBoxButtonBorder">
                                <Grid x:Name="Button" Background="Transparent">
                                    <ContentPresenter/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FF303336"/>
        <Setter Property="MinWidth" Value="20"/>
        <Setter Property="MinHeight" Value="20"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#FF1CC4F7"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Foreground" Value="#FF303336"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GroupPane_ExpandButton" TargetType="ve:ControlBoxGlyphPresenter">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ve:ControlBoxGlyphPresenter">
                        <Grid x:Name="Button"
                              Background="Transparent"
                              ve:DockPane.HitTestType="ExpandButton">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetName="GlyphClosePath1"
                                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                            To="#FF1CC4F7"/>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetName="GlyphClosePath2"
                                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                            To="#FF1CC4F7"/>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetName="GlyphClosePath3"
                                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                            To="#FFCDEEFB"/>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetName="GlyphOpenPath1"
                                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                            To="#FF1CC4F7"/>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetName="GlyphOpenPath2"
                                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                            To="#FF1CC4F7"/>
                                            <ColorAnimation Duration="0"
                                                            Storyboard.TargetName="GlyphOpenPath3"
                                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                            To="#FFCDEEFB"/>
                                            <DoubleAnimation Duration="0"
                                                             Storyboard.TargetName="HoverHighlight"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.15"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="ExpandedStates">
                                    <VisualState x:Name="Expanded"/>
                                    <VisualState x:Name="Collapsed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Collapsed"
                                                                           Storyboard.TargetName="GlyphClose"
                                                                           Storyboard.TargetProperty="(Control.Visibility)"/>
                                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Visible"
                                                                           Storyboard.TargetName="GlyphOpen"
                                                                           Storyboard.TargetProperty="(Control.Visibility)"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid SnapsToDevicePixels="True">
                                <Border x:Name="HoverHighlight"
                                        Height="14"
                                        Opacity="0"
                                        Width="14">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#FF1CC4F7" Offset="0"/>
                                            <GradientStop Color="#001CC4F7" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Grid x:Name="GlyphClose"
                                      Height="5"
                                      Margin="0,0,0,1"
                                      Width="10">
                                    <Path x:Name="GlyphClosePath1"
                                          Data="F1 M 65,77L 55,77L 60,72L 65,77 Z "
                                          Fill="#FF303336"
                                          Stretch="Fill"/>
                                    <Path x:Name="GlyphClosePath2"
                                          Data="F1 M 65,77L 55,77L 60,72L 65,77 Z "
                                          Fill="#FF303336"
                                          Stretch="Fill"/>
                                    <Path x:Name="GlyphClosePath3"
                                          Data="F1 M 63,76L 57,76L 60,73L 63,76 Z "
                                          Fill="#FF87898A"
                                          Margin="2,1,2,1"
                                          Stretch="Fill"/>
                                </Grid>
                                <Grid x:Name="GlyphOpen"
                                      Height="5"
                                      Visibility="Collapsed"
                                      Width="10">
                                    <Path x:Name="GlyphOpenPath1"
                                          Data="F1 M 65,84L 55,84L 60,89L 65,84 Z "
                                          Fill="#FF818181"
                                          Stretch="Fill"/>
                                    <Path x:Name="GlyphOpenPath2"
                                          Data="F1 M 65,84L 55,84L 60,89L 65,84 Z "
                                          Fill="#FF818181"
                                          Stretch="Fill"/>
                                    <Path x:Name="GlyphOpenPath3"
                                          Data="F1 M 63,85L 57,85L 60,88L 63,85 Z "
                                          Fill="#FFF8F8F8"
                                          Margin="2,1,2,1"
                                          Stretch="Fill"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

