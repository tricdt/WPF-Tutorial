<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:dxt="clr-namespace:DevExpress.Xpf.Utils.Themes;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="SchedulerViewThemeKey_MoreButtonAppointmentTemplate">
        <Border Background="White"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="3"
                Margin="2,2,2,0"
                Padding="3">
            <TextBlock MaxWidth="250"
                       Text="{Binding Path=Subject}"
                       TextWrapping="Wrap">
            </TextBlock>
        </Border>
    </DataTemplate>

</ResourceDictionary>