<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxscht:DayViewThemeKey ResourceKey=CurrentTimeIndicatorStyle}" TargetType="{x:Type ContentPresenter}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid Height="5" MinWidth="40">
                        <Border SnapsToDevicePixels="True">
                            <Border.OpacityMask>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#00000000" Offset="1"/>
                                    <GradientStop Color="#FF000000" Offset="0.5"/>
                                    <GradientStop Color="#00000000"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#0026C4F1" Offset="0"/>
                                    <GradientStop Color="#0026C4F1" Offset="1"/>
                                    <GradientStop Color="#7F26C4F1" Offset="0.5"/>
                                    <GradientStop Color="#7F26C4F1" Offset="0.75"/>
                                    <GradientStop Color="#7F26C4F1" Offset="0.25"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border Height="1" VerticalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#0026C4F1" Offset="0"/>
                                    <GradientStop Color="#0026C4F1" Offset="1"/>
                                    <GradientStop Color="#FF26C4F1" Offset="0.5"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>