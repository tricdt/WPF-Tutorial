    <Style x:Key="{dxdv:SearchBarButtonItemLayoutPanelThemeKey ResourceKey=StyleInBar}" TargetType="{x:Type dxb:BarItemLayoutPanel}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MinWidth" Value="64"/>
        <Setter Property="Margin" Value="4,0,2,0"/>
        <Setter Property="BorderThemeKey" Value="{dxdv:SearchBarButtonItemItemBorderThemeKeyExtension}"/>
        <Setter Property="FirstBorderNormalStateIsEmpty" Value="False"/>
        <Setter Property="FirstBorderUseNormalStateOnly" Value="False"/>
        <Setter Property="GlyphMargin" Value="0"/>
        <Setter Property="CommonContentMargin" Value="4,0,4,0"/>
        <Setter Property="LeftGlyphMargin" Value="0"/>
        <Setter Property="RightGlyphMargin" Value="0"/>
        <Setter Property="LeftCommonContentMargin" Value="0"/>
        <Setter Property="RightCommonContentMargin" Value="0"/>
    </Style>

