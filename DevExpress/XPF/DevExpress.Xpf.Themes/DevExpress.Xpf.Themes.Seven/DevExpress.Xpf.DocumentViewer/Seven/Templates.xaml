<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxdv="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer"
                    xmlns:dxdvt="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.Seven.v24.1;component/DevExpress.Xpf.DocumentViewer/Generic/Templates.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Search Panel -->

    <ControlTemplate x:Key="{dxdvt:DocumentViewerThemeKeyExtension ResourceKey=DocumentViewerBarTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="0,0,0,3">
            <Border x:Name="ShadowBorder"
                    Background="White"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect x:Name="Shadow"
                                      BlurRadius="3"
                                      Direction="270"
                                      Opacity="0.35"
                                      ShadowDepth="1"/>
                </Border.Effect>
            </Border>
            <Border Background="#FFBAC9DB">
                <Border Margin="0,0,0,1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFEEF4FB" Offset="1"/>
                            <GradientStop Color="#FFF4F8FD" Offset="0.5"/>
                            <GradientStop Color="#FFEEF3FA" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="0,1,0,1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                <GradientStop Color="#FFDDE8F7" Offset="1"/>
                                <GradientStop Color="#FFE8F1FB" Offset="0.5"/>
                                <GradientStop Color="#FFDCE6F4" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <ContentPresenter Margin="12,4,4,5"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxdv:SearchBarButtonItemItemBorderThemeKeyExtension ResourceKey=Normal}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid Margin="0,1,0,1" SnapsToDevicePixels="True">
            <Grid x:Name="CustomizationState" Opacity="0">
                <Border Background="#FFFFFFFF"
                        BorderBrush="#FF000000"
                        BorderThickness="1"/>
            </Grid>
            <Grid x:Name="DefaultState" Opacity="0">
                <Border CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFC0CBDF" Offset="0"/>
                            <GradientStop Color="#FFAEBED9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFDFDFE" Offset="0"/>
                                <GradientStop Color="#FFE8F1F8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="1">
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                        <GradientStop Color="#FFDFE9F7" Offset="1"/>
                                        <GradientStop Color="#FFE9F2FB" Offset="0.5"/>
                                        <GradientStop Color="#FFDEE7F5" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="HoverState" Opacity="0">
                <Border x:Name="hover1" CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFC0CBDF" Offset="0"/>
                            <GradientStop Color="#FFAEBED9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="hover2"
                            CornerRadius="1"
                            Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFDFDFE" Offset="0"/>
                                <GradientStop Color="#FFE8F1F8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="1">
                            <Border x:Name="active3" Opacity="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFF8FAFD" Offset="0"/>
                                        <GradientStop Color="#FFC8D8EF" Offset="1"/>
                                        <GradientStop Color="#FFEDEEF6" Offset="0.5"/>
                                        <GradientStop Color="#FFDAE3F5" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PressedState" Opacity="0">
                <Border x:Name="pressed1" CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFC0CBDF" Offset="0"/>
                            <GradientStop Color="#FFAEBED9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="pressed2"
                            CornerRadius="1"
                            Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFD0DAE8" Offset="0"/>
                                <GradientStop Color="#FFCED9EE" Offset="1"/>
                                <GradientStop Color="#FFDFE7F5" Offset="0.15"/>
                                <GradientStop Color="#FFD8E1F2" Offset="0.5"/>
                                <GradientStop Color="#FFCED8ED" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="DefaultState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="DefaultState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked"/>
                    <VisualState x:Name="HoverChecked"/>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="CustomizationState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

