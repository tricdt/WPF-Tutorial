            <Grid x:Name="CustomizationState"
                  Opacity="0.0"
                  Visibility="Visible">
                <Border BorderBrush="#FF000000"
                        BorderThickness="2"
                        CornerRadius="3"/>
            </Grid>
            <Grid x:Name="NormalState" Opacity="0">
                <Border Background="#FFB2C1D5" CornerRadius="2">
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF8FDFB" Offset="1"/>
                                <GradientStop Color="#FFF2F6FB" Offset="0"/>
                                <GradientStop Color="#FFF1F6FA" Offset="0.35"/>
                                <GradientStop Color="#FFEDF2F8" Offset="0.35"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="1" Margin="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFF0F6FB" Offset="1"/>
                                    <GradientStop Color="#FFDDE6F3" Offset="0"/>
                                    <GradientStop Color="#FFE3EBF4" Offset="0.35"/>
                                    <GradientStop Color="#FFDAE4F1" Offset="0.35"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="HoverState" Opacity="0">
                <Border Background="#FFB2C1D5" CornerRadius="2">
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFAFCFE" Offset="1"/>
                                <GradientStop Color="#FFF3F6FB" Offset="0"/>
                                <GradientStop Color="#FFF5F9FC" Offset="0.35"/>
                                <GradientStop Color="#FFF3F6FA" Offset="0.35"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="1" Margin="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFF5F9FC" Offset="1"/>
                                    <GradientStop Color="#FFE6EDF6" Offset="0"/>
                                    <GradientStop Color="#FFEBF1F7" Offset="0.35"/>
                                    <GradientStop Color="#FFE5ECF5" Offset="0.35"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PressedState" Opacity="0">
                <Border Background="#FFB2C1D5" CornerRadius="2">
                    <Border CornerRadius="1" Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF8FDFB" Offset="1"/>
                                <GradientStop Color="#FFF2F6FB" Offset="0"/>
                                <GradientStop Color="#FFF1F6FA" Offset="0.35"/>
                                <GradientStop Color="#FFEDF2F8" Offset="0.35"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="1" Margin="1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFF0F6FB" Offset="1"/>
                                    <GradientStop Color="#FFDDE6F3" Offset="0"/>
                                    <GradientStop Color="#FFE3EBF4" Offset="0.35"/>
                                    <GradientStop Color="#FFDAE4F1" Offset="0.35"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <ContentPresenter Content="{TemplateBinding Content}" Margin="4"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="NormalState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverChecked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="CustomizationState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=PopupControlTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter/>
    </ControlTemplate>

    <Style x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=TextSplitterStyle}" TargetType="{x:Type dxb:TextSplitterControl}">
        <Setter Property="FirstStringHorizontalAlignment" Value="Center"/>
        <Setter Property="SecondStringHorizontalAlignment" Value="Center"/>
        <Setter Property="SecondStringMargin" Value="0,-3,0,0"/>
        <Setter Property="Margin" Value="0,-3,0,0"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=NormalArrowTemplateInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Path Data="F1 M 185,54L 182,51L 182,50L 188,50L 188,51L 185,54 Z"
                  Fill="#7FFFFFFF"
                  Height="4"
                  Stretch="Fill"
                  Width="6"/>
            <Path Data="F1 M 168,37L 174,37L 171,39.9999L 168,37 Z"
                  Fill="#FF4C607A"
                  Height="3"
                  Margin="0,0,0,1"
                  SnapsToDevicePixels="True"
                  Stretch="Fill"
                  Width="6"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=SelectedArrowTemplateInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Path Data="F1 M 185,54L 182,51L 182,50L 188,50L 188,51L 185,54 Z"
                  Fill="#7FFFFFFF"
                  Height="4"
                  Stretch="Fill"
                  Width="6"/>
            <Path Data="F1 M 168,37L 174,37L 171,39.9999L 168,37 Z"
                  Fill="#FF4C607A"
                  Height="3"
                  Margin="0,0,0,1"
                  SnapsToDevicePixels="True"
                  Stretch="Fill"
                  Width="6"/>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=SelectedTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF1E395B"/>
    </Style>

    <Style x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=NormalTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF1E395B"/>
    </Style>

    <Style x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=BottomSideArrowContainerStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="0,3,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=RightSideArrowContainerStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="2,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=LayoutPanelStyle}" TargetType="{x:Type dx:Items2Panel}">
        <Setter Property="HorizontalIndent" Value="2"/>
        <Setter Property="VerticalIndent" Value="0"/>
        <Setter Property="Content1Padding" Value="5"/>
        <Setter Property="Content2Padding" Value="5"/>
        <Setter Property="VerticalPadding" Value="5"/>
        <Setter Property="HorizontalPadding" Value="5"/>
        <Setter Property="Alignment" Value="Top"/>
        <Setter Property="Margin" Value="0,0,3,0"/>
    </Style>

