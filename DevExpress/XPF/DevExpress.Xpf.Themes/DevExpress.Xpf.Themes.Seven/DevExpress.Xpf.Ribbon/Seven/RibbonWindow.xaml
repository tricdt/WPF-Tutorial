    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="FloatingContainerBorder"
                Background="#FF000000"
                Padding="1">
            <Border x:Name="FloatingContainerBackground">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border x:Name="PART_Header" Grid.Row="0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFBCD3EB" Offset="0"/>
                                <GradientStop Color="#FFB9D1EA" Offset="1"/>
                                <GradientStop Color="#FFBCD3EB" Offset="0.20"/>
                                <GradientStop Color="#FFDBE7F4" Offset="0.75"/>
                                <GradientStop Color="#FFBAD2EA" Offset="0.75"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border x:Name="FloatingContainerContent"
                            Background="#FFB9D1EA"
                            Grid.Row="1"/>
                    <Border x:Name="FloatingContainerBorder1"
                            BorderBrush="#FFFFFFFF"
                            BorderThickness="1,1,0,0"
                            Grid.Row="0"
                            Grid.RowSpan="2"/>
                    <Border x:Name="FloatingContainerBorder2"
                            BorderBrush="#FF28CFE4"
                            BorderThickness="0,0,1,1"
                            Grid.Row="0"
                            Grid.RowSpan="2"/>
                    <ContentPresenter Grid.Row="0" Grid.RowSpan="2"/>
                </Grid>
            </Border>
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsActive)}" Value="False">
                <Setter Property="Background"
                        TargetName="FloatingContainerBorder"
                        Value="#FF4C4C4C"/>
                <Setter Property="Background"
                        TargetName="PART_Header"
                        Value="#FFDAE5F2"/>
                <Setter Property="Background"
                        TargetName="FloatingContainerContent"
                        Value="#FFDAE5F2"/>
                <Setter Property="BorderBrush"
                        TargetName="FloatingContainerBorder1"
                        Value="#FFE9ECF3"/>
                <Setter Property="BorderBrush"
                        TargetName="FloatingContainerBorder2"
                        Value="#FFE9ECF3"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxr:RibbonControlHelper.IsAutoHide), RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                <Setter Property="Padding"
                        TargetName="FloatingContainerBorder"
                        Value="0"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerHeaderBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="PART_Header"
                BorderBrush="#FFFFFFFF"
                BorderThickness="1,1,0,0"
                SnapsToDevicePixels="True">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF98B4D0" Offset="0"/>
                    <GradientStop Color="#FFBCD3EB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border x:Name="Border"
                    BorderBrush="#FF28CFE4"
                    BorderThickness="0,0,1,0"/>
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsActive), RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False">
                <Setter Property="Background" TargetName="PART_Header">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFBFCDDB" Offset="0"/>
                            <GradientStop Color="#FFD7E4F2" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush"
                        TargetName="PART_Header"
                        Value="#FFE9ECF3"/>
                <Setter Property="BorderBrush"
                        TargetName="Border"
                        Value="#FFE9ECF3"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=FloatingContainerContentTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="FloatingContainerBody"
                Background="#FFB9D1EA"
                Padding="1">
            <Grid Background="{DynamicResource {dxt:FloatingContainerThemeKey ResourceKey=FloatingContainerBackground}}">
                <ContentPresenter/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxc:FloatingContainer.IsActive)}" Value="False">
                <Setter Property="Background"
                        TargetName="FloatingContainerBody"
                        Value="#FFDAE5F2"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

