<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=LeftPartTemplate}" TargetType="{x:Type ContentControl}">
        <Grid MinHeight="26" SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#FFDEEBF8"
                    BorderBrush="#FFBECCDD"
                    BorderThickness="0,1,0,0"
                    Grid.Row="0"
                    Grid.RowSpan="2"/>
            <Border Grid.Row="0"
                    Grid.RowSpan="1"
                    Opacity="0.1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter Grid.Row="0"
                              Grid.RowSpan="2"
                              Margin="1,2,1,0"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=RightPartTemplate}" TargetType="{x:Type ContentControl}">
        <Grid MinHeight="26" SnapsToDevicePixels="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#FFDEEBF8"
                    BorderBrush="#FFBECCDD"
                    BorderThickness="0,1,0,0"
                    Grid.Row="0"
                    Grid.RowSpan="2"/>
            <Border Grid.Row="0"
                    Grid.RowSpan="1"
                    Opacity="0.1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Background="#BFBECCDD"
                    BorderBrush="#7FFFFFFF"
                    BorderThickness="0,0,1,0"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    HorizontalAlignment="Left"
                    Margin="0,1,0,0"
                    Width="2">
                <Border.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                        <GradientStop Color="#FF000000" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.OpacityMask>
            </Border>
            <ContentPresenter Grid.Row="0"
                              Grid.RowSpan="2"
                              Margin="1,2,1,0"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=SizeGripTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="Transparent"
              Height="11"
              HorizontalAlignment="Right"
              Margin="0,0,1,1"
              VerticalAlignment="Bottom"
              Width="11">
            <Path Data="F1 M 0,8.99998L 2,8.99998L 2,11L 0,11L 0,8.99998 Z M 3.99997,8.99999L 5.99997,8.99999L 5.99997,11L 3.99997,11L 3.99997,8.99999 Z M 7.99998,8.99999L 9.99998,8.99999L 9.99998,11L 7.99998,11L 7.99998,8.99999 Z M 7.99998,4.99999L 9.99998,4.99999L 9.99998,6.99999L 7.99998,6.99999L 7.99998,4.99999 Z M 7.99999,0.999989L 9.99999,0.999989L 9.99999,2.99998L 7.99999,2.99998L 7.99999,0.999989 Z M 4,4.99998L 6,4.99998L 6,6.99998L 4,6.99998L 4,4.99998 Z "
                  Fill="#7FFFFFFF"
                  Margin="1,1,0,0"
                  Stretch="Fill"/>
            <Path Data="F1 M 0,7.99999L 2,7.99999L 2,9.99999L 0,9.99999L 0,7.99999 Z M 3.99997,8L 5.99997,8L 5.99997,10L 3.99997,10L 3.99997,8 Z M 7.99998,8L 9.99998,8L 9.99998,10L 7.99998,10L 7.99998,8 Z M 7.99998,4L 9.99998,4L 9.99998,6L 7.99998,6L 7.99998,4 Z M 7.99999,0L 9.99999,0L 9.99999,2L 7.99999,2L 7.99999,0 Z M 4,4L 6,4L 6,6L 4,6L 4,4 Z "
                  Fill="#3F000000"
                  Margin="0,0,1,1"
                  Stretch="Fill"/>
        </Grid>
    </ControlTemplate>

    <sys:Double x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=MinHeight}">26</sys:Double>

</ResourceDictionary>