<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion"
                    xmlns:dxan="http://schemas.devexpress.com/winfx/2008/xaml/accordion/internal"
                    xmlns:dxat="http://schemas.devexpress.com/winfx/2008/xaml/accordion/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Resource -->

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemExpandButtonSize}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemExpandButtonSize}">14</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHeight}">32</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderHeight}">22</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemOffset}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpandButtonContainerMinWidth}">18</sys:Double>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=HeaderElementsMargin}">3,3,0,3</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemContainerMargin}">0,0,0,1</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderMargin}">4,0,4,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=CollapsedItemGlyphMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderContainerMargin}">0,1,0,0</Thickness>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=DisabledItemOpacity}">0.35</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontSize}">12</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontWeight}">Normal</FontWeight>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontWeight}">Normal</FontWeight>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=BorderThickness}">0</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonCheckedMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMargin}">8,5,8,5</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMinHeight}">22</sys:Double>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowItemMargin}">0,0,1,1</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowBackgroundPadding}">0,1,0,1</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontWeight}">Normal</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontWeight}">Normal</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlFontSize}">12</sys:Double>

    <!-- Expand/Collapse Button -->

    <dxmvvm:ObjectToObjectConverter x:Key="FlipHorizontalConverter" DefaultTarget="1">
        <dxmvvm:MapItem Source="True" Target="-1"/>
    </dxmvvm:ObjectToObjectConverter>

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpanderButtonTemplate}" TargetType="dxa:AccordionExpandButton">
        <Grid x:Name="Root" Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CheckStates">
                    <VisualState x:Name="Unchecked"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsUnchecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsChecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Indeterminate"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <dxa:ExpandButtonContentPresenter x:Name="IsUnchecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentCollapse"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                          Fill="{TemplateBinding Foreground}"
                          Height="8"
                          Margin="2,0,0,0"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          Width="4">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Grid x:Name="RootItemContentCollapse"
                          Height="5"
                          Margin="0,0,0,1"
                          Width="10">
                        <Path x:Name="GlyphOpenPath1"
                              Data="F1 M 65,84L 55,84L 60,89L 65,84 Z "
                              Fill="#FF818181"
                              Stretch="Fill"/>
                        <Path x:Name="GlyphOpenPath2"
                              Data="F1 M 65,84L 55,84L 60,89L 65,84 Z "
                              Fill="#FF818181"
                              Stretch="Fill"/>
                        <Path x:Name="GlyphOpenPath3"
                              Data="F1 M 63,85L 57,85L 60,88L 63,85 Z "
                              Fill="#FFF8F8F8"
                              Margin="2,1,2,1"
                              Stretch="Fill"/>
                    </Grid>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
            <dxa:ExpandButtonContentPresenter x:Name="IsChecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Visibility="Hidden">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentExpand"
                          Data="F1 M 13.0677,23.9948L 13.0677,19.0358L 8.06719,24.0363L 13.0677,23.9948 Z"
                          Fill="{TemplateBinding Foreground}"
                          Height="6"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          Width="6">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Grid x:Name="RootItemContentExpand"
                          Height="5"
                          Width="10">
                        <Path x:Name="GlyphClosePath1"
                              Data="F1 M 65,77L 55,77L 60,72L 65,77 Z "
                              Fill="#FF303336"
                              Stretch="Fill"/>
                        <Path x:Name="GlyphClosePath2"
                              Data="F1 M 65,77L 55,77L 60,72L 65,77 Z "
                              Fill="#FF303336"
                              Stretch="Fill"/>
                        <Path x:Name="GlyphClosePath3"
                              Data="F1 M 63,76L 57,76L 60,73L 63,76 Z "
                              Fill="#FF87898A"
                              Margin="2,1,2,1"
                              Stretch="Fill"/>
                    </Grid>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover"/>
            <Trigger Property="ItemState" Value="Pressed"/>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Fill"
                        TargetName="GlyphOpenPath1"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphOpenPath2"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphOpenPath3"
                        Value="#FFCDEEFB"/>
                <Setter Property="Fill"
                        TargetName="GlyphClosePath1"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphClosePath2"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphClosePath3"
                        Value="#FFCDEEFB"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsPressed" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Fill"
                        TargetName="GlyphOpenPath1"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphOpenPath2"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphOpenPath3"
                        Value="#FFB0DDEE"/>
                <Setter Property="Fill"
                        TargetName="GlyphClosePath1"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphClosePath2"
                        Value="#FF1CC4F7"/>
                <Setter Property="Fill"
                        TargetName="GlyphClosePath3"
                        Value="#FFB0DDEE"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RootItem and Item -->

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemBackgroundTemplate}" TargetType="dxa:AccordionItemBackgroundControl">
        <Grid x:Name="Root">
            <Border x:Name="RootItemDefault"
                    Background="#FF979797"
                    Opacity="0"
                    Padding="1">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFE9E9E9" Offset="1"/>
                            <GradientStop Color="#FFF1F1F1" Offset="0.5"/>
                            <GradientStop Color="#FFE8E8E8" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="CustomBackground"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
            </Border>
            <Border x:Name="ItemHover"
                    Background="#FF96C1ED"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border CornerRadius="1" Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFDFEFF" Offset="0"/>
                            <GradientStop Color="#FFEEF3F9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF2F7FE" Offset="0"/>
                                <GradientStop Color="#FFD4EAFE" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="ItemPressed"
                    Background="#FF95B8DA"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border CornerRadius="1" Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFEBF4FD" Offset="0"/>
                            <GradientStop Color="#FFDBEAFD" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                <GradientStop Color="#FFC1DBFC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="ItemSelected"
                    Background="#FF7DA2CE"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border CornerRadius="1" Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFEBF4FD" Offset="0"/>
                            <GradientStop Color="#FFDBEAFD" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                <GradientStop Color="#FFC1DBFC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="RootItemHover"
                    Background="#FF979797"
                    Opacity="0"
                    Padding="1">
                <Grid>
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                <GradientStop Color="#FFE9E9E9" Offset="1"/>
                                <GradientStop Color="#FFF1F1F1" Offset="0.5"/>
                                <GradientStop Color="#FFE8E8E8" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border Opacity="0.5">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE3F7FF" Offset="0"/>
                                <GradientStop Color="#FFB7E7FB" Offset="1"/>
                                <GradientStop Color="#FFE3F7FF" Offset="0.5"/>
                                <GradientStop Color="#FFBDEDFF" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            <Border x:Name="RootItemPressed"
                    Background="#FF979797"
                    Opacity="0"
                    Padding="1">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE3F7FF" Offset="0"/>
                            <GradientStop Color="#FFB7E7FB" Offset="1"/>
                            <GradientStop Color="#FFE3F7FF" Offset="0.5"/>
                            <GradientStop Color="#FFBDEDFF" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="RootItemSelected"
                    Background="#FF979797"
                    Opacity="0"
                    Padding="1">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE3F7FF" Offset="0"/>
                            <GradientStop Color="#FFB7E7FB" Offset="1"/>
                            <GradientStop Color="#FFE3F7FF" Offset="0.5"/>
                            <GradientStop Color="#FFBDEDFF" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Pressed">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Selected">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="SelectedInactive">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="0.62"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Focused">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemDefault"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        TargetName="CustomBackground"
                        Value="0"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Hover"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Pressed"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Selected"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemSelected"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="SelectedInactive"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Collapse Mode -->

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonTemplate}" TargetType="ToggleButton">
        <Grid Background="Transparent"
              Height="{TemplateBinding Height}"
              Width="{TemplateBinding Width}">
            <Border x:Name="glyphBorder"
                    HorizontalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    VerticalAlignment="Center">
                <Grid Height="10"
                      RenderTransformOrigin="0.5,0.5"
                      Width="9">
                    <Path x:Name="Path1"
                          Data="F1 M 78,37L 78,41L 82,37L 82,47L 78,43L 78,47L 73,42L 78,37 Z"
                          Fill="#FF7C7C7C"
                          Stretch="Fill"/>
                    <Path x:Name="Path2"
                          Data="F1 M 77,38.9999L 77,45L 74,42L 77,38.9999 Z M 81,39L 81,45L 78,42L 81,39 Z"
                          Fill="#FFE3E7ED"
                          Margin="1,2"
                          Stretch="Fill"/>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="RenderTransform" TargetName="glyphBorder">
                    <Setter.Value>
                        <ScaleTransform ScaleX="-1"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" TargetName="Path1">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF18C0F0"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Fill" TargetName="Path2">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFB0DDEE"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Fill" TargetName="Path1">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF1291B5"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Fill" TargetName="Path2">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFB0DDEE"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=PopupWindowFrameTemplate}" TargetType="ContentControl">
        <Grid x:Name="Root" Margin="1,0,3,3">
            <Border x:Name="Shadow"
                    Background="#FF000000"
                    Margin="2,2,0,0"
                    Opacity="0.10"/>
            <Border x:Name="PopupBorder"
                    Background="#FFEEF4FB"
                    BorderBrush="#FF585858"
                    BorderThickness="1"
                    Margin="0,0,3,3"
                    Padding="3">
                <Border x:Name="Background"
                        Background="#FFFFFFFF"
                        BorderBrush="#FF8896AB"
                        BorderThickness="1">
                    <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Border>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemTemplate}" TargetType="{x:Type dxe:ListBoxEditItem}">
        <Grid x:Name="Root">
            <Grid.Resources>
                <DataTemplate x:Key="HoverTemplate">
                    <Border Background="#FF7DA2CE"
                            CornerRadius="2"
                            Opacity="0.5"
                            Padding="1">
                        <Border CornerRadius="1"
                                Padding="1"
                                Visibility="Visible">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#FFEBF4FD" Offset="0"/>
                                    <GradientStop Color="#FFDBEAFD" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border CornerRadius="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                        <GradientStop Color="#FFC1DBFC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="SelectedTemplate">
                    <Border Background="#FF7DA2CE"
                            CornerRadius="2"
                            Padding="1">
                        <Border CornerRadius="1"
                                Padding="1"
                                Visibility="Visible">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#FFEBF4FD" Offset="0"/>
                                    <GradientStop Color="#FFDBEAFD" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border CornerRadius="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                        <GradientStop Color="#FFC1DBFC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="InactiveSelectedTemplate">
                    <Border Background="#FF7DA2CE"
                            CornerRadius="2"
                            Opacity="0.35"
                            Padding="1">
                        <Border CornerRadius="1"
                                Padding="1"
                                Visibility="Visible">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#FFEBF4FD" Offset="0"/>
                                    <GradientStop Color="#FFDBEAFD" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border CornerRadius="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FFDCEBFC" Offset="0"/>
                                        <GradientStop Color="#FFC1DBFC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Border>
                </DataTemplate>
            </Grid.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard></Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="Unselected"/>
                    <VisualState x:Name="Selected">
                        <Storyboard></Storyboard>
                    </VisualState>
                    <VisualState x:Name="SelectedUnfocused">
                        <Storyboard></Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="FocusStates">
                    <VisualState x:Name="Focused">
                        <Storyboard></Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid>
                <dxmvvm:Interaction.Behaviors>
                    <dxa:CollapsedItemRotateBehavior RotateAngle="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemRotateAngle}}"/>
                </dxmvvm:Interaction.Behaviors>
                <Border x:Name="CustomBackground"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"/>
                <Rectangle x:Name="FocusVisual"
                           Opacity="0"
                           SnapsToDevicePixels="True"
                           Stroke="#FF000000"
                           StrokeDashArray="1 2"
                           StrokeThickness="1"/>
                <ContentPresenter x:Name="InactiveSelectedState"
                                  ContentTemplate="{StaticResource InactiveSelectedTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="HoverState"
                                  ContentTemplate="{StaticResource HoverTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="SelectedState"
                                  ContentTemplate="{StaticResource SelectedTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="FocusedState"
                                  ContentTemplate="{StaticResource SelectedTemplate}"
                                  Opacity="0"/>
            </Grid>
            <ContentControl x:Name="content"
                            Focusable="False"
                            FocusVisualStyle="{x:Null}"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Foreground="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderDefaultForeground}}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <ContentPresenter x:Name="contentPresenter"
                                  Height="Auto"
                                  Margin="0"
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                  Width="Auto"/>
            </ContentControl>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="1"/>
            </Trigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsKeyboardFocused, RelativeSource={RelativeSource Self}}" Value="True"/>
                    <Condition Binding="{Binding Path=IsSingleItemVisible, RelativeSource={RelativeSource AncestorType=dxan:CollapsedAccordionVirtualizingPanel}, FallbackValue=False}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                    <Condition Binding="{Binding Path=Owner.AllowItemHighlighting, RelativeSource={RelativeSource Self}}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHoverForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiDataTrigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderSelectedForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected" Value="True"/>
                    <Condition Property="IsFocused" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderSelectedInactiveForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0.6"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderDisabledForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.35"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=SplitterTemplate}" TargetType="dxa:AccordionSplitter">
        <Grid Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF535666"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="OrientationStates">
                    <VisualState x:Name="Vertical"/>
                    <VisualState x:Name="Horizontal"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="DraggingStates">
                    <VisualState x:Name="NotDragging"/>
                    <VisualState x:Name="Dragging">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF535666"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ShowBorderStates">
                    <VisualState x:Name="WithBorder"/>
                    <VisualState x:Name="WithoutBorder"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid Cursor="SizeNS"
                  Height="4"
                  Margin="3"
                  Width="16">
                <Path x:Name="Glyph"
                      Data="F1 M 558,364L 558,366L 556,366L 556,364L 558,364 Z M 554,364L 554,366L 552,366L 552,364L 554,364 Z M 550,364L 550,366L 548,366L 548,364L 550,364 Z M 546,364L 546,366L 544,366L 544,364L 546,364 Z "
                      Fill="#FFA0A0A0"
                      Margin="1"
                      Stretch="Fill"/>
                <Path Data="F1 M 559,365L 559,367L 557,367L 557,365L 559,365 Z M 555,365L 555,367L 553,367L 553,365L 555,365 Z M 551,365L 551,367L 549,367L 549,365L 551,365 Z M 547,365L 547,367L 545,367L 545,365L 547,365 Z "
                      Fill="#CFFFFFFF"
                      Margin="2,2,0,0"
                      Stretch="Fill"/>
            </Grid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=DropDownMenuButtonTemplate}" TargetType="ToggleButton">
        <Grid Background="Transparent" MinWidth="32">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path1"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FF18C0F0"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path2"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FFB0DDEE"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path1"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FF1291B5"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path2"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FFB0DDEE"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Normal"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid Height="5"
                  Margin="8,0,8,0"
                  SnapsToDevicePixels="True"
                  Width="10">
                <Path x:Name="Path1"
                      Data="F1 M 50.5001,31.5001L 40.5,31.5001L 45.5,36.5001L 50.5001,31.5001 Z"
                      Fill="#FF7C7C7C"
                      Stretch="Fill"/>
                <Path x:Name="Path2"
                      Data="F1 M 50.5001,31.5001L 40.5,31.5001L 45.5,36.5001L 50.5001,31.5001 Z"
                      Fill="#FFE3E7ED"
                      Margin="2,1"
                      Stretch="Fill"/>
            </Grid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowBackgroundTemplate}" TargetType="ContentControl">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border Background="#7FFFFFFF"
                    BorderBrush="#BFA0A0A0"
                    BorderThickness="0,1,0,0"
                    Height="2"
                    VerticalAlignment="Top"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderBackgroundTemplate}" TargetType="ContentControl">
        <Grid Margin="0,0,0,1">
            <Border Background="#FF979797" Padding="1">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFE9E9E9" Offset="1"/>
                            <GradientStop Color="#FFF1F1F1" Offset="0.5"/>
                            <GradientStop Color="#FFE8E8E8" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="1">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=SelectionIndicatorTemplate}" TargetType="{x:Type dxa:AccordionItemBackgroundControl}">
        <Border Visibility="Collapsed"/>
    </ControlTemplate>

    <dxa:ExpandButtonPosition x:Key="{dxat:AccordionThemeKeys ResourceKey=DefaultSubItemExpandButtonPosition}">Left</dxa:ExpandButtonPosition>

</ResourceDictionary> 