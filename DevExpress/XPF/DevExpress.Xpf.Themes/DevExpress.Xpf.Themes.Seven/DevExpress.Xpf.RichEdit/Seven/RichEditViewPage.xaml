<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxrec="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaLeftPadding}">20</sys:Double>

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaRightPadding}">10</sys:Double>

    <Thickness x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentContentPadding}">10,10,10,10</Thickness>

    <Point x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentLineOffset}">0,20</Point>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PrintLayoutViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Grid>
            <Grid Margin="-3">
                <Border Background="#FF000000"
                        CornerRadius="5"
                        Opacity="0.01"/>
                <Border Background="#FF000000"
                        CornerRadius="4"
                        Margin="1"
                        Opacity="0.02"/>
                <Border Background="#FF000000"
                        CornerRadius="3"
                        Margin="2"
                        Opacity="0.03"/>
            </Grid>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="#26000000"
                    BorderThickness="1">
                <Grid>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="-1"
                                      SnapsToDevicePixels="True"
                                      UseLayoutRounding="True"/>
                    <Border Background="#FFFAFAFA"
                            CornerRadius="0,2,2,0"
                            HorizontalAlignment="Right"
                            Visibility="{TemplateBinding CommentsVisibility}">
                        <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                             HorizontalAlignment="Right"
                                                             Visibility="{TemplateBinding CommentsVisibility}"
                                                             Width="{TemplateBinding CommentsWidth}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditViewCommentsPresenterControlTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{TemplateBinding Content}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          SnapsToDevicePixels="True"
                          UseLayoutRounding="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=SimpleViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFAFAFA"
                        CornerRadius="0,2,2,0"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}">
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=DraftViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFAFAFA"
                        CornerRadius="0,2,2,0"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}">
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <!--RichEditCommentBorderControlTemplate -->

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditCommentBorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FFFFFFFF"
                    BorderBrush="{TemplateBinding Background}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Margin="1">
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Margin="-1"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="2"
                    IsHitTestVisible="False"
                    Margin="1"
                    Opacity="0.1"/>
        </Grid>
    </ControlTemplate>

    <!-- CommentMoreButtonStyle -->

    <Style x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentMoreButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Root"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Root"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.75"/>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="NormalState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="HoverState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="PressedState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Shadow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="Root"
                              Height="16"
                              Margin="2"
                              Width="16">
                            <Grid x:Name="Shadow">
                                <Grid.OpacityMask>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#59000000" Offset="0"/>
                                        <GradientStop Color="#FF000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Grid.OpacityMask>
                                <Border Background="#07000000"
                                        CornerRadius="48"
                                        Margin="-2"/>
                                <Border Background="#0C000000"
                                        CornerRadius="48"
                                        Margin="-1"/>
                            </Grid>
                            <Border x:Name="NormalState"
                                    CornerRadius="64"
                                    Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF999999" Offset="0"/>
                                        <GradientStop Color="#FF888888" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="64" Margin="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                                <GradientStop Color="#FFE9E9E9" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="HoverState"
                                    CornerRadius="24"
                                    Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF3C7FB1" Offset="0"/>
                                        <GradientStop Color="#FF23558C" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFF2FCFF" Offset="0"/>
                                            <GradientStop Color="#FFDDF4FD" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="64" Margin="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFE3F7FF" Offset="0"/>
                                                <GradientStop Color="#FFB7E7FB" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="PressedState"
                                    Background="#FF909090"
                                    CornerRadius="64"
                                    Opacity="0">
                                <Border Background="#FFD5D5D5"
                                        CornerRadius="64"
                                        Margin="1"/>
                            </Border>
                            <Path x:Name="GlyphDown"
                                  Data="F1 M 209,15.9999L 201,15.9999L 205,20L 209,15.9999 Z"
                                  Fill="#FF000000"
                                  Height="4"
                                  HorizontalAlignment="Center"
                                  Stretch="Fill"
                                  VerticalAlignment="Center"
                                  Width="8"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>