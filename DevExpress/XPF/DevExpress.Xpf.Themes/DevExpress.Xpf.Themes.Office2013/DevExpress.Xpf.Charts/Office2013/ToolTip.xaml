<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/charts/themekeys"
                    xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/charts"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{dxt:ChartBrushesThemeKey ResourceKey=ToolTipForeground}"
                     Color="#FF3C3C3C"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF3C3C3C"/>

    <SolidColorBrush x:Key="{dxt:ChartBrushesThemeKey ResourceKey=CrosshairSeriesLabelForeground}"
                     Color="#FF3C3C3C"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF3C3C3C"/>

    <SolidColorBrush x:Key="{dxt:ChartBrushesThemeKey ResourceKey=CrosshairPopupBackground}"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0003"
                     cs:Office2013DarkGray.Color="#FFFFFFFF"
                     cs:Office2013LightGray.Color="#FFFFFFFF"
                     cs:Office2016Black.Color="#FFFFFFFF"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:ChartBrushesThemeKey ResourceKey=CrosshairBorderBrush}"
                     Color="#7F999999"
                     cs:Name="SolidColorBrush_0004"
                     cs:Office2013DarkGray.Color="#7F999999"
                     cs:Office2013LightGray.Color="#7F999999"
                     cs:Office2016Black.Color="#7F999999"
                     cs:Office2016Colorful.Color="#7F999999"
                     cs:Office2016White.Color="#7F999999"/>

    <local:AnnotationLocationToTransformConverter x:Key="annotationLocationConverter"/>

    <ControlTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=ToolTipPresentationTemplate}" TargetType="{x:Type local:ToolTipControl}">
        <local:ToolTipPanel x:Name="PART_ToolTipPanel"
                            DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                            Focusable="False"
                            IsHitTestVisible="False">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="VisibleStates">
                    <VisualState x:Name="Visible">
                        <Storyboard>
                            <!--BEGIN WPF-->
                            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="PART_Popup" Storyboard.TargetProperty="(Popup.IsOpen)">
                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True"/>
                            </BooleanAnimationUsingKeyFrames>
                            <!--END WPF-->
                            <!--ONLY SL 
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Popup" Storyboard.TargetProperty="(Popup.IsOpen)">
                                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="True" />
                            </ObjectAnimationUsingKeyFrames>                            
                             ONLY SL-->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_ToolTipContent" Storyboard.TargetProperty="(UIElement.Opacity)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00.15" Value="1"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Invisible">
                        <Storyboard>
                            <!--BEGIN WPF-->
                            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="PART_Popup" Storyboard.TargetProperty="(Popup.IsOpen)">
                                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                            </BooleanAnimationUsingKeyFrames>
                            <!--END WPF-->
                            <!--ONLY SL 
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Popup" Storyboard.TargetProperty="(Popup.IsOpen)">
                                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="False" />
                            </ObjectAnimationUsingKeyFrames>                            
                             ONLY SL-->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_ToolTipContent" Storyboard.TargetProperty="(UIElement.Opacity)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <!--BEGIN WPF-->
            <Popup x:Name="PART_Popup"
                   AllowsTransparency="True"
                   Placement="Absolute">
                <local:AnnotationPanel x:Name="PART_ToolTipContent"
                                       AnnotationItem="{Binding}"
                                       Background="Transparent"
                                       cs:Name="AnnotationPanel_0001"
                                       Cursor="{Binding RelativeSource={RelativeSource AncestorType=local:ChartControl}, Path=Cursor}"
                                       DataContext="{TemplateBinding ToolTipItem}"
                                       Effect="{Binding Path=Shadow}"
                                       MinWidth="40"
                                       Opacity="0"
                                       cs:Office2013DarkGray.Background="Transparent"
                                       cs:Office2013LightGray.Background="Transparent"
                                       cs:Office2016Black.Background="Transparent"
                                       cs:Office2016Colorful.Background="Transparent"
                                       cs:Office2016White.Background="Transparent"
                                      >
                    <!--END WPF-->
                    <!--ONLY SL 
                    <Popup x:Name="PART_Popup">
                        <local:AnnotationPanel x:Name="PART_ToolTipContent" DataContext="{TemplateBinding ToolTipItem}" 
                                   AnnotationItem="{Binding}" Opacity="0" MinWidth="40"  Effect="{Binding Path=Shadow}" IsHitTestVisible="False">
                     ONLY SL-->
                    <Grid x:Name="PART_MainContent" local:AnnotationPanel.ElementType="Content">
                        <Border Background="#7F999999"
                                cs:Name="Border_0001"
                                Margin="-1"
                                cs:Office2013DarkGray.Background="#7F999999"
                                cs:Office2013LightGray.Background="#7F999999"
                                cs:Office2016Black.Background="#7F999999"
                                cs:Office2016Colorful.Background="#7F999999"
                                cs:Office2016White.Background="#7F999999"
                               />
                        <Border Background="#FFFFFFFF"
                                cs:Name="Border_0002"
                                cs:Office2013DarkGray.Background="#FFFFFFFF"
                                cs:Office2013LightGray.Background="#FFFFFFFF"
                                cs:Office2016Black.Background="#FFFFFFFF"
                                cs:Office2016Colorful.Background="#FFFFFFFF"
                                cs:Office2016White.Background="#FFFFFFFF"
                               >
                            <ContentPresenter Content="{Binding Path=ToolTipItem.PresentationData, RelativeSource={RelativeSource TemplatedParent}}"
                                              ContentTemplate="{Binding Path=ToolTipItem.ContentTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                              Focusable="False"
                                              HorizontalAlignment="Center"
                                              Margin="{Binding Path=ToolTipItem.ContentMargin, RelativeSource={RelativeSource TemplatedParent}}"
                                              VerticalAlignment="Stretch"/>
                        </Border>
                    </Grid>
                    <Grid x:Name="PART_Beak"
                          Height="32"
                          local:AnnotationPanel.ElementType="Beak"
                          RenderTransform="{Binding Path=Location, Converter={StaticResource annotationLocationConverter}}"
                          RenderTransformOrigin="0.5,0.5"
                          Visibility="{Binding Path=ToolTipItem.BeakVisibility, RelativeSource={RelativeSource TemplatedParent}}"
                          Width="16">
                        <Path cs:Name="Path_0001"
                              Data="F1 M 575,369L 567,400L 568,400L 583,369L 575,369 Z "
                              Fill="#7F999999"
                              Margin="0,1,0,0"
                              Stretch="Fill"
                              UseLayoutRounding="False"
                              cs:Office2013DarkGray.Fill="#7F999999"
                              cs:Office2013LightGray.Fill="#7F999999"
                              cs:Office2016Black.Fill="#7F999999"
                              cs:Office2016Colorful.Fill="#7F999999"
                              cs:Office2016White.Fill="#7F999999"
                             />
                        <Path cs:Name="Path_0002"
                              Data="F1 M 577,368L 569,396L 582,368L 577,368 Z "
                              Fill="#FFFFFFFF"
                              Margin="2,0,1,4"
                              Stretch="Fill"
                              UseLayoutRounding="False"
                              cs:Office2013DarkGray.Fill="#FFFFFFFF"
                              cs:Office2013LightGray.Fill="#FFFFFFFF"
                              cs:Office2016Black.Fill="#FFFFFFFF"
                              cs:Office2016Colorful.Fill="#FFFFFFFF"
                              cs:Office2016White.Fill="#FFFFFFFF"
                             />
                    </Grid>
                </local:AnnotationPanel>
            </Popup>
        </local:ToolTipPanel>
    </ControlTemplate>

    <DataTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=CrosshairAxisLabelTemplate}">
        <ContentPresenter Content="{Binding Path=Content.PresentationData, RelativeSource={RelativeSource TemplatedParent}}" ContentTemplate="{Binding RelativeSource={RelativeSource Self}, Path=Content.CrosshairAxisLabelTemplate}"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=CrosshairPopupTemplate}">
        <local:AnnotationPanel AnnotationItem="{Binding }"
                               Background="Transparent"
                               cs:Name="AnnotationPanel_0002"
                               MinWidth="40"
                               cs:Office2013DarkGray.Background="Transparent"
                               cs:Office2013LightGray.Background="Transparent"
                               cs:Office2016Black.Background="Transparent"
                               cs:Office2016Colorful.Background="Transparent"
                               cs:Office2016White.Background="Transparent"
                              >
            <Grid local:AnnotationPanel.ElementType="Content">
                <Border Background="{Binding BorderBrush}"
                        cs:Name="Border_0003"
                        Margin="-1"/>
                <Border Background="{Binding Background}" cs:Name="Border_0004">
                    <ItemsControl ItemsSource="{Binding PresentationData}" Margin="24,14,24,14">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}"
                                                  ContentTemplate="{Binding Path=CrosshairSeriesLabelTemplate}"
                                                  Focusable="False"
                                                  HorizontalAlignment="{Binding Path=ElementAlignment}"
                                                  VerticalAlignment="Stretch"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
            <Grid x:Name="PART_Beak"
                  Height="32"
                  local:AnnotationPanel.ElementType="Beak"
                  RenderTransform="{Binding Path=Location, Converter={StaticResource annotationLocationConverter}}"
                  RenderTransformOrigin="0.5,0.5"
                  Visibility="{Binding Path=BeakVisibility}"
                  Width="16">
                <Path cs:Name="Path_0003"
                      Data="F1 M 575,369L 567,400L 568,400L 583,369L 575,369 Z "
                      Fill="{Binding BorderBrush}"
                      Margin="0,1,0,0"
                      Stretch="Fill"
                      UseLayoutRounding="False"/>
                <Path cs:Name="Path_0004"
                      Data="F1 M 577,368L 569,396L 582,368L 577,368 Z "
                      Fill="{Binding Background}"
                      Margin="2,0,1,4"
                      Stretch="Fill"
                      UseLayoutRounding="False"/>
            </Grid>
        </local:AnnotationPanel>
    </DataTemplate>

</ResourceDictionary>