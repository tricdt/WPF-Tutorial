    <Style x:Key="GroupBoxButton.Style" TargetType="lc:GroupBoxButton">
        <Style.Triggers>
            <Trigger Property="core:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Height" Value="44"/>
                <Setter Property="Width" Value="44"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Height" Value="16"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:GroupBoxButton">
                    <core:Container Background="#00000000"
                                    cs:Name="Container_0001"
                                    cs:Office2013DarkGray.Background="#00000000"
                                    cs:Office2013LightGray.Background="#00000000"
                                    cs:Office2016Black.Background="#00000000"
                                    cs:Office2016Colorful.Background="#00000000"
                                    cs:Office2016White.Background="#00000000"
                                   >
                        <core:Container.Resources>
                            <SolidColorBrush x:Key="ElementBrush1"
                                             x:Name="ElementBrush1"
                                             Color="{StaticResource GroupBoxButton.NormalColor}"/>
                            <SolidColorBrush x:Key="ElementBrush2"
                                             x:Name="ElementBrush2"
                                             Color="{StaticResource GroupBoxButton.NormalColor}"/>
                        </core:Container.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush1"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.MouseOverColor}"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush2"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.MouseOverColor}"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush1"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.PressedColor}"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush2"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.PressedColor}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="UnminimizeElement"
                              Height="15"
                              Margin="0,1,0,0"
                              Width="15">
                            <Path Data="F1 M 5,5L 0,9.53674e-007L 10,9.53674e-007L 5,5 Z "
                                  Fill="{StaticResource ElementBrush1}"
                                  Height="5"
                                  Stretch="Fill"
                                  Width="9"/>
                        </Grid>
                        <Grid x:Name="MinimizeElement"
                              Height="15"
                              Margin="0,0,0,1"
                              Width="15">
                            <Path Data="F1 M 5,0L 0,5L 10,5L 5,0 Z "
                                  Fill="{StaticResource ElementBrush1}"
                                  Height="5"
                                  Stretch="Fill"
                                  Width="9"/>
                        </Grid>
                        <Grid x:Name="UnmaximizeElement"
                              Height="15"
                              Margin="1,0,0,1"
                              Width="15">
                            <Path Data="F1 M 0,8L 7,8L 7,15L 0,8 Z M 15,7L 8,7L 8,2.86102e-006L 15,7 Z "
                                  Fill="{StaticResource ElementBrush2}"
                                  Height="13"
                                  Stretch="Fill"
                                  Width="13"/>
                        </Grid>
                        <Grid x:Name="MaximizeElement"
                              Height="15"
                              Width="15">
                            <Path Data="F1 M 0,10L 4.89859e-016,2L 8,10L 0,10 Z M 2,9.53674e-007L 10,9.53674e-007L 10,8L 2,9.53674e-007 Z "
                                  Fill="{StaticResource ElementBrush2}"
                                  Height="8"
                                  Stretch="Fill"
                                  Width="8"/>
                        </Grid>
                    </core:Container>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="16"/>
    </Style>

    <ControlTemplate x:Key="groupBoxNormalTemplate" TargetType="lc:GroupBox">
        <core:Container>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <VisualState x:Name="NormalLayout"/>
                    <VisualState x:Name="MinimizedLayout">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TitleStretcher"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="SeparatorElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ContentElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MaximizedLayout"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <lc:GroupBoxShadow CornerRadius="{TemplateBinding CornerRadius}"
                               Offset="{TemplateBinding ShadowOffset}"
                               Visibility="{TemplateBinding ShadowVisibility}"/>
            <Border x:Name="BorderElement"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    core:BorderExtensions.ClipChild="True"
                    CornerRadius="{TemplateBinding CornerRadius}">
                <lc:LayoutControl core:DXSerializer.Enabled="False"
                                  ItemSpace="0"
                                  Orientation="Vertical"
                                  Padding="0"
                                  ScrollBars="None">
                    <lc:LayoutGroup Background="{TemplateBinding TitleBackground}"
                                    ItemSpace="0"
                                    Padding="2"
                                    Visibility="{TemplateBinding TitleVisibility}">
                        <Rectangle x:Name="TitleStretcher"
                                   Visibility="Collapsed"
                                   Width="0"/>
                        <core:DXContentPresenter x:Name="DXContentPresenter1"
                                                 Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                 Foreground="{TemplateBinding TitleForeground}"
                                                 Margin="9,0"
                                                 VerticalAlignment="Center"/>
                        <lc:GroupBoxButton x:Name="MinimizeElement"
                                           AutomationProperties.Name="Minimize"
                                           HorizontalAlignment="Right"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MinimizeElementVisibility}"/>
                        <lc:GroupBoxButton x:Name="MaximizeElement"
                                           AutomationProperties.Name="Maximize"
                                           HorizontalAlignment="Right"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MaximizeElementVisibility}"/>
                    </lc:LayoutGroup>
                    <Rectangle x:Name="SeparatorElement"
                               Fill="{TemplateBinding SeparatorBrush}"
                               Height="1"
                               Visibility="{TemplateBinding TitleVisibility}"/>
                    <core:DXContentPresenter x:Name="ContentElement"
                                             Content="{TemplateBinding Content}"
                                             ContentTemplate="{TemplateBinding CurrentContentTemplate}"
                                             Margin="{TemplateBinding Padding}"/>
                </lc:LayoutControl>
            </Border>
        </core:Container>
        <ControlTemplate.Triggers>
            <Trigger Property="core:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="ContentElement"
                        Value="12"/>
                <Setter Property="Margin"
                        TargetName="DXContentPresenter1"
                        Value="12"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="groupBoxLightTemplate" TargetType="lc:GroupBox">
        <core:Container>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <VisualState x:Name="NormalLayout"/>
                    <VisualState x:Name="MinimizedLayout">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TitleStretcher"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ContentElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MaximizedLayout"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="BorderElement"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    core:BorderExtensions.ClipChild="True"
                    CornerRadius="{TemplateBinding CornerRadius}">
                <lc:LayoutControl core:DXSerializer.Enabled="False"
                                  ItemSpace="0"
                                  Orientation="Vertical"
                                  Padding="0"
                                  ScrollBars="None">
                    <lc:LayoutGroup Background="{TemplateBinding TitleBackground}"
                                    ItemSpace="0"
                                    Padding="9,2,2,2"
                                    Visibility="{TemplateBinding TitleVisibility}">
                        <lc:GroupBoxButton x:Name="MinimizeElement"
                                           AutomationProperties.Name="Minimize"
                                           HorizontalAlignment="Left"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MinimizeElementVisibility}"/>
                        <Rectangle x:Name="TitleStretcher"
                                   Visibility="Collapsed"
                                   Width="0"/>
                        <core:DXContentPresenter x:Name="DXContentPresenter1"
                                                 Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                 Foreground="{TemplateBinding TitleForeground}"
                                                 Margin="2,0"
                                                 VerticalAlignment="Center"/>
                        <lc:GroupBoxButton x:Name="MaximizeElement"
                                           AutomationProperties.Name="Maximize"
                                           HorizontalAlignment="Right"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MaximizeElementVisibility}"/>
                    </lc:LayoutGroup>
                    <core:DXContentPresenter x:Name="ContentElement"
                                             Content="{TemplateBinding Content}"
                                             ContentTemplate="{TemplateBinding CurrentContentTemplate}"
                                             Margin="{TemplateBinding Padding}"/>
                </lc:LayoutControl>
            </Border>
        </core:Container>
        <ControlTemplate.Triggers>
            <Trigger Property="core:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="ContentElement"
                        Value="12"/>
                <Setter Property="Margin"
                        TargetName="DXContentPresenter1"
                        Value="12"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="GroupBox.Style" TargetType="lc:GroupBox">
        <Setter Property="Background" Value="{StaticResource GroupBox.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GroupBox.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="LightTemplate" Value="{StaticResource groupBoxLightTemplate}"/>
        <Setter Property="MinimizationDirection" Value="Vertical"/>
        <Setter Property="NormalTemplate" Value="{StaticResource groupBoxNormalTemplate}"/>
        <Setter Property="Padding" Value="11"/>
        <Setter Property="SeparatorBrush" Value="{StaticResource GroupBox.SeparatorBrush}"/>
        <Setter Property="ShadowOffset" Value="3"/>
        <Setter Property="TitleBackground" Value="{StaticResource GroupBox.TitleBackground}"/>
        <Setter Property="TitleForeground" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}"/>
    </Style>

    <Style x:Key="GroupSeparator.Style" TargetType="lc:GroupSeparator">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:GroupSeparator">
                    <core:Container>
                        <Grid Opacity="0.9">
                            <Border x:Name="HorizontalRootElement"
                                    Background="{StaticResource GroupSeparator.Brush}"
                                    Height="1"
                                    Margin="0,3,0,3"/>
                            <Border x:Name="VerticalRootElement"
                                    Background="{StaticResource GroupSeparator.Brush}"
                                    Margin="3,0,3,0"
                                    Width="1"/>
                        </Grid>
                    </core:Container>
                    <ControlTemplate.Triggers>
                        <Trigger Property="core:ThemeManager.IsTouchEnabled" Value="True">
                            <Setter Property="Margin"
                                    TargetName="HorizontalRootElement"
                                    Value="0,8"/>
                            <Setter Property="Margin"
                                    TargetName="VerticalRootElement"
                                    Value="8,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>