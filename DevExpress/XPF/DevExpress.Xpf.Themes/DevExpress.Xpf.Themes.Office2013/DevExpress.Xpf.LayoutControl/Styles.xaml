<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:lc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="LayerSeparator.Style" TargetType="lc:LayerSeparator">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:LayerSeparator">
                    <core:Container Background="Transparent"
                                    cs:Name="Container_0002"
                                    cs:Office2013DarkGray.Background="Transparent"
                                    cs:Office2013LightGray.Background="Transparent"
                                    cs:Office2016Black.Background="Transparent"
                                    cs:Office2016Colorful.Background="Transparent"
                                    cs:Office2016White.Background="Transparent"
                                   >
                        <core:Container.Resources>
                            <SolidColorBrush x:Key="SeparatorBrush"
                                             x:Name="SeparatorBrush"
                                             Color="{StaticResource LayerSeparator.NormalColor}"/>
                        </core:Container.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="SeparatorBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource LayerSeparator.MouseOverColor}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="Grid1">
                            <core:Container x:Name="HorizontalRootElement" Cursor="SizeNS">
                                <Grid>
                                    <Rectangle cs:Name="Rectangle_0001"
                                               Fill="#00000000"
                                               Margin="0,-2"
                                               cs:Office2013DarkGray.Fill="#00000000"
                                               cs:Office2013LightGray.Fill="#00000000"
                                               cs:Office2016Black.Fill="#00000000"
                                               cs:Office2016Colorful.Fill="#00000000"
                                               cs:Office2016White.Fill="#00000000"
                                              />
                                    <Rectangle Fill="{StaticResource SeparatorBrush}" Height="{TemplateBinding Thickness}"/>
                                </Grid>
                            </core:Container>
                            <core:Container x:Name="VerticalRootElement" Cursor="SizeWE">
                                <Grid>
                                    <Rectangle cs:Name="Rectangle_0002"
                                               Fill="#00000000"
                                               Margin="-2,0"
                                               cs:Office2013DarkGray.Fill="#00000000"
                                               cs:Office2013LightGray.Fill="#00000000"
                                               cs:Office2016Black.Fill="#00000000"
                                               cs:Office2016Colorful.Fill="#00000000"
                                               cs:Office2016White.Fill="#00000000"
                                              />
                                    <Rectangle Fill="{StaticResource SeparatorBrush}" Width="{TemplateBinding Thickness}"/>
                                </Grid>
                            </core:Container>
                        </Grid>
                    </core:Container>
                    <ControlTemplate.Triggers>
                        <Trigger Property="core:ThemeManager.IsTouchEnabled" Value="True">
                            <Setter Property="Margin"
                                    TargetName="Grid1"
                                    Value="12"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Thickness" Value="2"/>
    </Style>

