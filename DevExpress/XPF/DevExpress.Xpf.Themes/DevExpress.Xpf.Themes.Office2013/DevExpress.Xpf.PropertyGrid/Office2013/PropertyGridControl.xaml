<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ValueColumnMinWidth}">21</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=HeaderColumnMinWidth}">2</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SelectorAndSearchSeparatorWidth}">4</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonsIndent}">1</sys:Double>

    <!-- Search Text Edit -->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchEditStyle}" TargetType="{x:Type dxe:TextEdit}">
        <Setter Property="ShowBorder" Value="True"/>
        <Setter cs:Name="Setter_0001"
                Property="Background"
                Value="#FFFFFFFF"
                cs:Office2013DarkGray.Value="#FFE3E3E3"
                cs:Office2013LightGray.Value="#FFF6F6F6"
                cs:Office2016Black.Value="#FFD4D4D4"
                cs:Office2016Colorful.Value="#FFFFFFFF"
                cs:Office2016White.Value="#FFFFFFFF"
               />
    </Style>

    <!-- View Kind Button -->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonStyle}" TargetType="{x:Type RadioButton}">
        <Style.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Width" Value="44"/>
                <Setter Property="Height" Value="44"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Width" Value="22"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          cs:Name="Grid_0001"
                          HorizontalAlignment="Left"
                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                          cs:Office2013DarkGray.Background="Transparent"
                          cs:Office2013LightGray.Background="Transparent"
                          cs:Office2016Black.Background="Transparent"
                          cs:Office2016Colorful.Background="Transparent"
                          cs:Office2016White.Background="Transparent"
                         >
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="InternalFocusStates">
                                <VisualState x:Name="InternalFocused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="FocusState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="InternalUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="Grid1"
                              Grid.Column="0"
                              Grid.ColumnSpan="1"
                              Height="22"
                              Width="22">
                            <Border x:Name="DefaultState"/>
                            <Border x:Name="FocusState"/>
                            <Border x:Name="HoverState"
                                    Background="#FFCDE6F7"
                                    cs:Name="Border_0001"
                                    Opacity="0"
                                    cs:Office2013DarkGray.Background="#3F009AFF"
                                    cs:Office2013LightGray.Background="#3F009AFF"
                                    cs:Office2016Black.Background="#FF414141"
                                    cs:Office2016Colorful.Background="#30000000"
                                    cs:Office2016White.Background="#FFCDE6F7"
                                   />
                            <Border x:Name="PressedState"
                                    Background="#FF92C0E0"
                                    cs:Name="Border_0002"
                                    Opacity="0"
                                    cs:Office2013DarkGray.Background="#5F2592DA"
                                    cs:Office2013LightGray.Background="#5F2592DA"
                                    cs:Office2016Black.Background="#60000000"
                                    cs:Office2016Colorful.Background="#47000000"
                                    cs:Office2016White.Background="#FF92C0E0"
                                   />
                        </Grid>
                        <Path x:Name="PART_ListView"
                              cs:Name="Path_0001"
                              Data="F1 M 2,3L 14,3L 14,4L 2,4L 2,3 Z M 2,6L 14,6L 14,7L 2,7L 2,6 Z M 2,9L 14,9L 14,10L 2,10L 2,9 Z M 2,12L 14,12L 14,13L 2,13L 2,12 Z "
                              Fill="#FF333333"
                              Height="10"
                              Stretch="Fill"
                              Width="12"
                              cs:Office2013DarkGray.Fill="#FF666666"
                              cs:Office2013LightGray.Fill="#FF666666"
                              cs:Office2016Black.Fill="#B2FFFFFF"
                              cs:Office2016Colorful.Fill="#87000000"
                              cs:Office2016White.Fill="#FF333333"
                             />
                        <Path x:Name="PART_GroupView"
                              cs:Name="Path_0002"
                              Data="F1 M 2,2L 7,2L 7,7L 2,7L 2,2 Z M 2,9.00001L 6.99999,9.00001L 6.99999,14L 2,14L 2,9.00001 Z M 8,4.00001L 14,4.00001L 14,5.00001L 8,5.00001L 8,4.00001 Z M 8,11L 14,11L 14,12L 8,12L 8,11 Z M 4,3L 4,4L 3,4L 3,5L 4,5L 4,6L 5,6L 5,5L 6,5L 6,4L 5,4L 5,3L 4,3 Z M 4,10L 4,11L 3,11L 3,12L 4,12L 4,13L 5,13L 5,12L 6,12L 6,11L 5,11L 5,10L 4,10 Z "
                              Fill="#FF333333"
                              Height="12"
                              Stretch="Fill"
                              Width="12"
                              cs:Office2013DarkGray.Fill="#FF666666"
                              cs:Office2013LightGray.Fill="#FF666666"
                              cs:Office2016Black.Fill="#B2FFFFFF"
                              cs:Office2016Colorful.Fill="#87000000"
                              cs:Office2016White.Fill="#FF333333"
                             />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenNoGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Visible"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Collapsed"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity"
                                    TargetName="Root"
                                    Value="0.5"/>
                        </Trigger>
                        <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                            <Setter Property="Width"
                                    TargetName="Grid1"
                                    Value="44"/>
                            <Setter Property="Height"
                                    TargetName="Grid1"
                                    Value="44"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Control Border -->

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=Background}"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FFFFFFFF"
                     cs:Office2013LightGray.Color="#FFFFFFFF"
                     cs:Office2016Black.Color="#FFD4D4D4"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <Thickness x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderBrush}"
                     Color="#FFB9B9B9"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FFABABAB"
                     cs:Office2013LightGray.Color="#FFABABAB"
                     cs:Office2016Black.Color="#60000000"
                     cs:Office2016Colorful.Color="#47000000"
                     cs:Office2016White.Color="#FFB9B9B9"/>

    <!-- Desciption Presenter -->

    <ControlTemplate x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=DescriptionPresenterTemplate}" TargetType="{x:Type dxprg:PropertyDescriptionPresenterControl}">
        <Border x:Name="PART_Border"
                Background="#FFFFFFFF"
                BorderBrush="#FFACACAC"
                BorderThickness="0,1,0,0"
                cs:Name="Border_0005"
                cs:Office2013DarkGray.Background="#FFE3E3E3"
                cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                cs:Office2013LightGray.Background="#FFF6F6F6"
                cs:Office2013LightGray.BorderBrush="#FFABABAB"
                cs:Office2016Black.Background="#FF696969"
                cs:Office2016Black.BorderBrush="#FF444444"
                cs:Office2016Colorful.Background="#FFFFFFFF"
                cs:Office2016Colorful.BorderBrush="#FFA6A6A6"
                cs:Office2016White.Background="#FFFFFFFF"
                cs:Office2016White.BorderBrush="#FFACACAC"
               >
            <Grid x:Name="Grid1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter x:Name="PART_HeaderPresenter"
                                  Content="{Binding SelectedRow.Header, RelativeSource={RelativeSource TemplatedParent}}"
                                  cs:Name="ContentPresenter_0001"
                                  HorizontalAlignment="Left"
                                  Margin="4,0,4,0"
                                  TextElement.FontSize="18"
                                  TextElement.FontWeight="Light"
                                  TextElement.Foreground="#FF0072C6"
                                  cs:Office2013DarkGray.TextElement.Foreground="#FF2B579A"
                                  cs:Office2013LightGray.TextElement.Foreground="#FF2B579A"
                                  cs:Office2016Black.TextElement.Foreground="#E3FFFFFF"
                                  cs:Office2016Colorful.TextElement.Foreground="#E3000000"
                                  cs:Office2016White.TextElement.Foreground="#FF0072C6"
                                 />
                <ContentPresenter x:Name="ContentPresenter1" Grid.Row="1"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="ShowSelectedRowHeader" Value="False">
                <Setter Property="Visibility"
                        TargetName="PART_HeaderPresenter"
                        Value="Collapsed"/>
            </Trigger>
            <Trigger Property="IsInTooltip" Value="True">
                <Setter cs:Name="Setter_0002"
                        Property="Background"
                        TargetName="PART_Border"
                        Value="Transparent"
                        cs:Office2013DarkGray.Value="Transparent"
                        cs:Office2013LightGray.Value="Transparent"
                        cs:Office2016Black.Value="Transparent"
                        cs:Office2016Colorful.Value="Transparent"
                        cs:Office2016White.Value="Transparent"
                       />
                <Setter cs:Name="Setter_0003"
                        Property="BorderBrush"
                        TargetName="PART_Border"
                        Value="Transparent"
                        cs:Office2013DarkGray.Value="Transparent"
                        cs:Office2013LightGray.Value="Transparent"
                        cs:Office2016Black.Value="Transparent"
                        cs:Office2016Colorful.Value="Transparent"
                        cs:Office2016White.Value="Transparent"
                       />
            </Trigger>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="ContentPresenter1"
                        Value="12,3,12,12"/>
                <Setter Property="Margin"
                        TargetName="PART_HeaderPresenter"
                        Value="12,12,12,3"/>
                <Setter cs:Name="Setter_0004"
                        Property="Panel.Background"
                        TargetName="PART_Border"
                        Value="#FFFFFFFF"
                        cs:Office2013DarkGray.Value="#FFFFFFFF"
                        cs:Office2013LightGray.Value="#FFFFFFFF"
                        cs:Office2016Black.Value="#FFD4D4D4"
                        cs:Office2016Colorful.Value="#FFFFFFFF"
                        cs:Office2016White.Value="#FFFFFFFF"
                       />
                <Setter Property="Margin"
                        TargetName="Grid1"
                        Value="0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- SearchControl-->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchControlStyle}" TargetType="{x:Type dxe:SearchControl}">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- SearchControl and ViewKindButtons panel-->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=TopPanelStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border Background="#FFFFFFFF"
                            BorderBrush="#FFB9B9B9"
                            BorderThickness="0,0,0,1"
                            cs:Name="Border_0007"
                            Padding="4"
                            cs:Office2013DarkGray.Background="#FFE3E3E3"
                            cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                            cs:Office2013LightGray.Background="#FFF6F6F6"
                            cs:Office2013LightGray.BorderBrush="#FFABABAB"
                            cs:Office2016Black.Background="#FF696969"
                            cs:Office2016Black.BorderBrush="#FF444444"
                            cs:Office2016Colorful.Background="#FFF0F0F0"
                            cs:Office2016Colorful.BorderBrush="#FFA6A6A6"
                            cs:Office2016White.Background="#FFFFFFFF"
                            cs:Office2016White.BorderBrush="#FFB9B9B9"
                           >
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>