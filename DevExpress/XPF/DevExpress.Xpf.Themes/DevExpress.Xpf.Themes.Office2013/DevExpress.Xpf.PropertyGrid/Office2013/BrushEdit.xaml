<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="clr-namespace:DevExpress.Xpf.Core.Native;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.Office2013.v24.1;component/DevExpress.Xpf.PropertyGrid/Generic/BrushEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="DefaultState.BorderBrush"
                     Color="#FFACACAC"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FFACACAC"
                     cs:Office2013LightGray.Color="#FFACACAC"
                     cs:Office2016Black.Color="#FF414141"
                     cs:Office2016Colorful.Color="#FFACACAC"
                     cs:Office2016White.Color="#FFACACAC"/>

    <LinearGradientBrush x:Key="DefaultState.Background"
                         cs:Name="LinearGradientBrush_6452"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFF0F0F0"
                      cs:Name="GradientStop_0001"
                      Offset="0"
                      cs:Office2013DarkGray.Color="#FFF0F0F0"
                      cs:Office2013LightGray.Color="#FFF0F0F0"
                      cs:Office2016Black.Color="#FF969696"
                      cs:Office2016Colorful.Color="#FFF0F0F0"
                      cs:Office2016White.Color="#FFF0F0F0"
                     />
        <GradientStop Color="#FFE5E5E5"
                      cs:Name="GradientStop_0002"
                      Offset="1"
                      cs:Office2013DarkGray.Color="#FFE5E5E5"
                      cs:Office2013LightGray.Color="#FFE3E3E3"
                      cs:Office2016Black.Color="#FF969696"
                      cs:Office2016Colorful.Color="#FFE5E5E5"
                      cs:Office2016White.Color="#FFE5E5E5"
                     />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="HoverState.BorderBrush"
                     Color="#FF7EB4EA"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FF92C0DF"
                     cs:Office2013LightGray.Color="#FF92C0DF"
                     cs:Office2016Black.Color="#FF414141"
                     cs:Office2016Colorful.Color="#FF7EB4EA"
                     cs:Office2016White.Color="#FF7EB4EA"/>

    <LinearGradientBrush x:Key="HoverState.Background"
                         cs:Name="LinearGradientBrush_6453"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFECF4FC"
                      cs:Name="GradientStop_0003"
                      Offset="0"
                      cs:Office2013DarkGray.Color="#FFECF4FC"
                      cs:Office2013LightGray.Color="#FFECF4FC"
                      cs:Office2016Black.Color="#30000000"
                      cs:Office2016Colorful.Color="#FFECF4FC"
                      cs:Office2016White.Color="#FFECF4FC"
                     />
        <GradientStop Color="#FFDCECFC"
                      cs:Name="GradientStop_0004"
                      Offset="1"
                      cs:Office2013DarkGray.Color="#FFDCECFC"
                      cs:Office2013LightGray.Color="#FFDCECFC"
                      cs:Office2016Black.Color="#30000000"
                      cs:Office2016Colorful.Color="#FFDCECFC"
                      cs:Office2016White.Color="#FFDCECFC"
                     />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PressedState.BorderBrush"
                     Color="#FFACACAC"
                     cs:Name="SolidColorBrush_0003"
                     cs:Office2013DarkGray.Color="#FFACACAC"
                     cs:Office2013LightGray.Color="#FFACACAC"
                     cs:Office2016Black.Color="#FF414141"
                     cs:Office2016Colorful.Color="#FFACACAC"
                     cs:Office2016White.Color="#FFACACAC"/>

    <SolidColorBrush x:Key="PressedState.Background"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0004"
                     cs:Office2013DarkGray.Color="#FFFFFFFF"
                     cs:Office2013LightGray.Color="#FFFFFFFF"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <ControlTemplate x:Key="{dxprgt:PopupBrushEditThemeKey ResourceKey=BrushTypeButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="Root" Margin="0,0,-1,-1">
            <Border x:Name="DefaultState"
                    Background="{StaticResource DefaultState.Background}"
                    BorderBrush="{StaticResource DefaultState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,0,0,1"/>
            <Border x:Name="HoverState"
                    Background="{StaticResource HoverState.Background}"
                    BorderBrush="{StaticResource HoverState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,0,0,1"
                    Opacity="0"/>
            <Border x:Name="PressedState"
                    Background="{StaticResource PressedState.Background}"
                    BorderBrush="{StaticResource PressedState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Opacity="0"/>
            <ContentPresenter HorizontalAlignment="Center"
                              Margin="3"
                              VerticalAlignment="Center"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.38"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>