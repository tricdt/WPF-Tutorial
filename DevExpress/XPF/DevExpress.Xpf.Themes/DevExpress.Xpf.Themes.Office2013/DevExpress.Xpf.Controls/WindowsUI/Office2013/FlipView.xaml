<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                    xmlns:dxwuii="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/internal"
                    xmlns:dxwuit="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="FlipViewButtonBorderThemeBrush"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FFE3E3E3"
                     cs:Office2013LightGray.Color="#FFF6F6F6"
                     cs:Office2016Black.Color="#FFD4D4D4"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <Thickness x:Key="FlipViewButtonBorderThemeThickness"/>

    <SolidColorBrush x:Key="FlipViewButtonPointerOverBackgroundThemeBrush"
                     Color="#FFD3D3D3"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FFD3D3D3"
                     cs:Office2013LightGray.Color="#FFD3D3D3"
                     cs:Office2016Black.Color="#FFD4D4D4"
                     cs:Office2016Colorful.Color="#FFD3D3D3"
                     cs:Office2016White.Color="#FFD3D3D3"/>

    <SolidColorBrush x:Key="FlipViewButtonPointerOverBorderThemeBrush"
                     Color="#FF808080"
                     cs:Name="SolidColorBrush_0003"
                     cs:Office2013DarkGray.Color="#FFABABAB"
                     cs:Office2013LightGray.Color="#FFABABAB"
                     cs:Office2016Black.Color="#FF777777"
                     cs:Office2016Colorful.Color="#FF777777"
                     cs:Office2016White.Color="#FF808080"/>

    <SolidColorBrush x:Key="FlipViewButtonPointerOverForegroundThemeBrush"
                     Color="#FF000000"
                     cs:Name="SolidColorBrush_0004"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF000000"/>

    <SolidColorBrush x:Key="FlipViewButtonPressedBackgroundThemeBrush"
                     Color="#FF2A2A2A"
                     cs:Name="SolidColorBrush_0005"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#FF2A2A2A"
                     cs:Office2016Colorful.Color="#FF2A2A2A"
                     cs:Office2016White.Color="#FF2A2A2A"/>

    <SolidColorBrush x:Key="FlipViewButtonPressedBorderThemeBrush"
                     Color="#FF808080"
                     cs:Name="SolidColorBrush_0006"
                     cs:Office2013DarkGray.Color="#FFABABAB"
                     cs:Office2013LightGray.Color="#FFABABAB"
                     cs:Office2016Black.Color="#FF777777"
                     cs:Office2016Colorful.Color="#FF777777"
                     cs:Office2016White.Color="#FF808080"/>

    <SolidColorBrush x:Key="FlipViewButtonPressedForegroundThemeBrush"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0007"
                     cs:Office2013DarkGray.Color="#FFFFFFFF"
                     cs:Office2013LightGray.Color="#FFFFFFFF"
                     cs:Office2016Black.Color="#E3FFFFFF"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="FlipViewButtonForegroundThemeBrush"
                     Color="#FF000000"
                     cs:Name="SolidColorBrush_0008"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF000000"/>

    <SolidColorBrush x:Key="FlipViewButtonBackgroundThemeBrush"
                     Color="#FF808080"
                     cs:Name="SolidColorBrush_0009"
                     cs:Office2013DarkGray.Color="#FFABABAB"
                     cs:Office2013LightGray.Color="#FFABABAB"
                     cs:Office2016Black.Color="#FF777777"
                     cs:Office2016Colorful.Color="#FF777777"
                     cs:Office2016White.Color="#FF808080"/>

    <SolidColorBrush x:Key="FocusVisualWhiteStrokeThemeBrush"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0010"
                     cs:Office2013DarkGray.Color="#FFE3E3E3"
                     cs:Office2013LightGray.Color="#FFF6F6F6"
                     cs:Office2016Black.Color="#FFD4D4D4"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="FocusVisualBlackStrokeThemeBrush"
                     Color="#FF000000"
                     cs:Name="SolidColorBrush_0011"
                     cs:Office2013DarkGray.Color="#FF000000"
                     cs:Office2013LightGray.Color="#FF000000"
                     cs:Office2016Black.Color="#FF000000"
                     cs:Office2016Colorful.Color="#FF000000"
                     cs:Office2016White.Color="#FF000000"/>

    <ControlTemplate x:Key="{dxwuit:WindowsUIElementsThemeKey ResourceKey=FlipViewTemplate}" TargetType="dxwui:FlipView">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="FocusStates">
                    <VisualState x:Name="Focused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusVisualWhite"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusVisualBlack"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unfocused"/>
                    <VisualState x:Name="PointerFocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Margin="{TemplateBinding Padding}">
                <Grid>
                    <ScrollViewer x:Name="ScrollingHost"
                                  dx:ScrollBarExtensions.AllowMouseScrolling="False"
                                  Focusable="False"
                                  HorizontalScrollBarVisibility="Disabled"
                                  IsTabStop="False"
                                  Padding="{TemplateBinding Padding}"
                                  VerticalScrollBarVisibility="Disabled">
                        <ItemsPresenter/>
                    </ScrollViewer>
                    <dxwuii:FadingButton x:Name="PreviousButtonHorizontal"
                                         Height="40"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Center"
                                         Width="70"/>
                    <dxwuii:FadingButton x:Name="NextButtonHorizontal"
                                         Height="40"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Width="70"/>
                    <dxwuii:FadingButton x:Name="PreviousButtonVertical"
                                         Height="40"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Top"
                                         Width="70"/>
                    <dxwuii:FadingButton x:Name="NextButtonVertical"
                                         Height="40"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         Width="70"/>
                </Grid>
            </Border>
            <Rectangle x:Name="FocusVisualWhite"
                       IsHitTestVisible="False"
                       Opacity="0"
                       Stroke="{StaticResource FocusVisualWhiteStrokeThemeBrush}"
                       StrokeDashArray="1,1"
                       StrokeDashOffset="1.5"
                       StrokeEndLineCap="Square"/>
            <Rectangle x:Name="FocusVisualBlack"
                       IsHitTestVisible="False"
                       Opacity="0"
                       Stroke="{StaticResource FocusVisualBlackStrokeThemeBrush}"
                       StrokeDashArray="1,1"
                       StrokeDashOffset="0.5"
                       StrokeEndLineCap="Square"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxwuit:WindowsUIElementsThemeKey ResourceKey=FlipViewItemTemplate}" TargetType="dxwui:FlipViewItem">
        <Grid Background="{TemplateBinding Background}">
            <ContentPresenter/>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>