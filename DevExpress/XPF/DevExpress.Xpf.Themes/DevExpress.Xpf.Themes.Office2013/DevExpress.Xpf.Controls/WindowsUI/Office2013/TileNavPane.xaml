    <ControlTemplate x:Key="{dxwuit:WindowsUIElementsThemeKey ResourceKey=ScrollableControlButtonTemplate}" TargetType="dxcop:ScrollableControlButton">
        <Grid x:Name="Root" Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Pressed"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="Root"
                                                           Storyboard.TargetProperty="Visibility"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="Rotations">
                    <VisualState x:Name="Left">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PathLeft"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Right">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PathRight"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Up">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PathUp"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Down">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PathDown"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="State"
                    CornerRadius="2"
                    Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}"/>
            <Path x:Name="PathRight"
                  Data="M 0 0 L 0 8 L 4 4 Z"
                  Fill="{StaticResource ButtonForeground}"
                  Height="12"
                  Margin="1,0,-1,0"
                  Opacity="0"
                  Stretch="Fill"
                  Width="6"/>
            <Path x:Name="PathLeft"
                  Data="M 0 4 L 4 8 L 4 0 Z"
                  Fill="{StaticResource ButtonForeground}"
                  Height="12"
                  Margin="-1,0,1,0"
                  Opacity="0"
                  Stretch="Fill"
                  Width="6"/>
            <Path x:Name="PathUp"
                  Data="M 0 4 L 7 4 L 3.5 0 Z"
                  Fill="{StaticResource ButtonForeground}"
                  Height="6"
                  Margin="0,-1,0,1"
                  Opacity="0"
                  Stretch="Fill"
                  Width="12"/>
            <Path x:Name="PathDown"
                  Data="M 0 0 L 3.5 4 L 7 0 Z"
                  Fill="{StaticResource ButtonForeground}"
                  Height="6"
                  Margin="0,1,0,-1"
                  Opacity="0"
                  Stretch="Fill"
                  Width="12"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ColorMode" Value="Inverted">
                <Setter Property="Fill"
                        TargetName="PathLeft"
                        Value="{StaticResource ButtonForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathRight"
                        Value="{StaticResource ButtonForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathUp"
                        Value="{StaticResource ButtonForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathDown"
                        Value="{StaticResource ButtonForegroundInverted}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background"
                        TargetName="State"
                        Value="{StaticResource ButtonHoverBackground}"/>
                <Setter Property="Fill"
                        TargetName="PathLeft"
                        Value="{StaticResource ButtonHoverForeground}"/>
                <Setter Property="Fill"
                        TargetName="PathRight"
                        Value="{StaticResource ButtonHoverForeground}"/>
                <Setter Property="Fill"
                        TargetName="PathUp"
                        Value="{StaticResource ButtonHoverForeground}"/>
                <Setter Property="Fill"
                        TargetName="PathDown"
                        Value="{StaticResource ButtonHoverForeground}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="ColorMode" Value="Inverted"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background"
                        TargetName="State"
                        Value="{StaticResource ButtonHoverBackgroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathLeft"
                        Value="{StaticResource ButtonHoverForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathRight"
                        Value="{StaticResource ButtonHoverForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathUp"
                        Value="{StaticResource ButtonHoverForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathDown"
                        Value="{StaticResource ButtonHoverForegroundInverted}"/>
            </MultiTrigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background"
                        TargetName="State"
                        Value="{StaticResource ButtonPressedBackground}"/>
                <Setter Property="Fill"
                        TargetName="PathLeft"
                        Value="{StaticResource ButtonPressedForeground}"/>
                <Setter Property="Fill"
                        TargetName="PathRight"
                        Value="{StaticResource ButtonPressedForeground}"/>
                <Setter Property="Fill"
                        TargetName="PathUp"
                        Value="{StaticResource ButtonPressedForeground}"/>
                <Setter Property="Fill"
                        TargetName="PathDown"
                        Value="{StaticResource ButtonPressedForeground}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsPressed" Value="True"/>
                    <Condition Property="ColorMode" Value="Inverted"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background"
                        TargetName="State"
                        Value="{StaticResource ButtonPressedBackgroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathLeft"
                        Value="{StaticResource ButtonPressedForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathRight"
                        Value="{StaticResource ButtonPressedForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathUp"
                        Value="{StaticResource ButtonPressedForegroundInverted}"/>
                <Setter Property="Fill"
                        TargetName="PathDown"
                        Value="{StaticResource ButtonPressedForegroundInverted}"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

