<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                    xmlns:dxwuii="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/internal"
                    xmlns:dxwuit="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=HeaderMargin}">16,12</Thickness>

    <SolidColorBrush x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=Background}"
                     Color="Transparent"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="Transparent"
                     cs:Office2013LightGray.Color="Transparent"
                     cs:Office2016Black.Color="Transparent"
                     cs:Office2016Colorful.Color="Transparent"
                     cs:Office2016White.Color="Transparent"/>

    <SolidColorBrush x:Key="ItemHoverBackground"
                     Color="#FF0072C6"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FF333333"
                     cs:Office2013LightGray.Color="#FF19478A"
                     cs:Office2016Black.Color="#30000000"
                     cs:Office2016Colorful.Color="#FF0173C7"
                     cs:Office2016White.Color="#FF0072C6"/>

    <SolidColorBrush x:Key="ItemSelectionBackground"
                     Color="#FF0072C6"
                     cs:Name="SolidColorBrush_0003"
                     cs:Office2013DarkGray.Color="#FF333333"
                     cs:Office2013LightGray.Color="#FF19478A"
                     cs:Office2016Black.Color="#60000000"
                     cs:Office2016Colorful.Color="#FF0173C7"
                     cs:Office2016White.Color="#FF0072C6"/>

    <ItemsPanelTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=ItemsPanelHorizontal}">
        <dxwuii:PageViewPanel ItemSpacing="1" Orientation="Horizontal"/>
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=ItemsPanelVertical}">
        <dxwuii:PageViewPanel ItemSpacing="1" Orientation="Vertical"/>
    </ItemsPanelTemplate>

    <ControlTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=ItemTemplate}" TargetType="dxwui:PageViewItem">
        <Grid x:Name="Root" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="SelectionState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <ColorAnimation cs:Name="ColorAnimation_0001"
                                            Duration="0"
                                            Storyboard.TargetName="content"
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFFFFFFF"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#FFFFFFFF"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Root"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Normal"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="EmptySelectedState"/>
                    <VisualState x:Name="Unselected"/>
                    <VisualState x:Name="Selected">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="SelectionState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation cs:Name="ColorAnimation_0002"
                                            Duration="0"
                                            Storyboard.TargetName="content"
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFFFFFFF"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#FFFFFFFF"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="HoverState"
                    Background="{StaticResource ItemHoverBackground}"
                    Opacity="0"/>
            <Border x:Name="SelectionState"
                    Background="{StaticResource ItemSelectionBackground}"
                    Opacity="0"/>
            <dxwuii:PageViewItemHeaderPresenter x:Name="content"
                                                Content="{TemplateBinding Header}"
                                                ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"
                                                cs:Name="ContentControl_0001"
                                                Foreground="#FF000000"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                cs:Office2013DarkGray.Foreground="#FF262626"
                                                cs:Office2013LightGray.Foreground="#FF444444"
                                                cs:Office2016Black.Foreground="#E3FFFFFF"
                                                cs:Office2016Colorful.Foreground="#E3000000"
                                                cs:Office2016White.Foreground="#FF000000"
                                               />
        </Grid>
    </ControlTemplate>

</ResourceDictionary>