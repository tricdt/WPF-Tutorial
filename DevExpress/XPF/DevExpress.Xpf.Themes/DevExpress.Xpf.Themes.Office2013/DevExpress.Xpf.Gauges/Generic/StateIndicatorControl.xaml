<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/gauges" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Gauges.StateIndicatorControl}" TargetType="local:StateIndicatorControl">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:StateIndicatorControl">
          <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
            <Grid x:Name="PART_BaseLayoutElement">
              <local:ElementInfoContainer StretchToAvailableSize="False" ElementInfo="{Binding Path=State.ElementInfo, RelativeSource={RelativeSource TemplatedParent} }" />
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>