<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CardRowHeaderTextStyle}" TargetType="{x:Type TextBlock}">
        <Style.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin" Value="0,13,0,13"/>
            </Trigger>
        </Style.Triggers>
        <Setter cs:Name="Setter_0001"
                Property="Foreground"
                Value="#FF3C3C3C"
                cs:Office2013DarkGray.Value="#FF262626"
                cs:Office2013LightGray.Value="#FF444444"
                cs:Office2016Black.Value="#E3000000"
                cs:Office2016Colorful.Value="#E3000000"
                cs:Office2016White.Value="#FF3C3C3C"
               />
        <Setter Property="Margin" Value="0,3,0,3"/>
    </Style>

    <CornerRadius x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellCornerRadius}">0</CornerRadius>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellBorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBackground}"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FFE3E3E3"
                     cs:Office2013LightGray.Color="#FFF6F6F6"
                     cs:Office2016Black.Color="#FFD4D4D4"
                     cs:Office2016Colorful.Color="#FFFFFFFF"
                     cs:Office2016White.Color="#FFFFFFFF">
        #FFFFFFFF
    </SolidColorBrush>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBrush}"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FF333333"
                     cs:Office2013LightGray.Color="#FF333333"
                     cs:Office2016Black.Color="#60000000"
                     cs:Office2016Colorful.Color="#47000000"
                     cs:Office2016White.Color="#FF0072C6">
        #FF0072C6
    </SolidColorBrush>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedForeground}"
                     cs:Name="SolidColorBrush_0003"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF3C3C3C">
        #FF3C3C3C
    </SolidColorBrush>

    <dxg:DefaultStyle x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellStyle}" TargetType="{x:Type dxg:CellContentPresenter}"/>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellContentPresenterMargin}">0</Thickness>

    <DataTemplate x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=SeparatorTemplate}">
        <Grid x:Name="container">
            <Border x:Name="border"
                    Background="#FFD6D6D6"
                    cs:Name="Border_0001"
                    MinHeight="1"
                    MinWidth="1"
                    cs:Office2013DarkGray.Background="#FFABABAB"
                    cs:Office2013LightGray.Background="#FFABABAB"
                    cs:Office2016Black.Background="#30000000"
                    cs:Office2016Colorful.Background="#30000000"
                    cs:Office2016White.Background="#FFD6D6D6"
                   />
        </Grid>
        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter cs:Name="Setter_0004"
                        Property="Background"
                        TargetName="border"
                        Value="#FFD6D6D6"
                        cs:Office2013DarkGray.Value="#FFABABAB"
                        cs:Office2013LightGray.Value="#FFABABAB"
                        cs:Office2016Black.Value="#30000000"
                        cs:Office2016Colorful.Value="#30000000"
                        cs:Office2016White.Value="#FFD6D6D6"
                       />
            </Trigger>
            <DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Horizontal">
                <Setter Property="Margin"
                        TargetName="container"
                        Value="0,3,0,3"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Vertical">
                <Setter Property="Margin"
                        TargetName="container"
                        Value="3,0,3,0"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>