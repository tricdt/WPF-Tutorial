<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxrec="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaLeftPadding}">20</sys:Double>

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaRightPadding}">10</sys:Double>

    <Thickness x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentContentPadding}">10,10,10,10</Thickness>

    <Point x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentLineOffset}">0,20</Point>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PrintLayoutViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Grid>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="#FFC6C6C6"
                    BorderThickness="1"
                    cs:Name="Border_0001"
                    cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                    cs:Office2013LightGray.BorderBrush="#FFABABAB"
                    cs:Office2016Black.BorderBrush="#60000000"
                    cs:Office2016Colorful.BorderBrush="#FFC6C6C6"
                    cs:Office2016White.BorderBrush="#FFC6C6C6"
                   >
                <Grid>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="-1"
                                      SnapsToDevicePixels="True"
                                      UseLayoutRounding="True"/>
                    <Border Background="#FFFFFFFF"
                            cs:Name="Border_0005"
                            HorizontalAlignment="Right"
                            Visibility="{TemplateBinding CommentsVisibility}"
                            cs:Office2013DarkGray.Background="#FFFFFFFF"
                            cs:Office2013LightGray.Background="#FFFFFFFF"
                            cs:Office2016Black.Background="#FF777777"
                            cs:Office2016Colorful.Background="#FFFFFFFF"
                            cs:Office2016White.Background="#FFFFFFFF"
                           >
                        <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                             HorizontalAlignment="Right"
                                                             Visibility="{TemplateBinding CommentsVisibility}"
                                                             Width="{TemplateBinding CommentsWidth}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditViewCommentsPresenterControlTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{TemplateBinding Content}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          SnapsToDevicePixels="True"
                          UseLayoutRounding="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=SimpleViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFFFFFF"
                        cs:Name="Border_0005"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}"
                        cs:Office2013DarkGray.Background="#FFFFFFFF"
                        cs:Office2013LightGray.Background="#FFFFFFFF"
                        cs:Office2016Black.Background="#FFFFFFFF"
                        cs:Office2016Colorful.Background="#FFFFFFFF"
                        cs:Office2016White.Background="#FFFFFFFF"
                       >
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=DraftViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFFFFFF"
                        cs:Name="Border_0005"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}"
                        cs:Office2013DarkGray.Background="#FFFFFFFF"
                        cs:Office2013LightGray.Background="#FFFFFFFF"
                        cs:Office2016Black.Background="#FFFFFFFF"
                        cs:Office2016Colorful.Background="#FFFFFFFF"
                        cs:Office2016White.Background="#FFFFFFFF"
                       >
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <!--RichEditCommentBorderControlTemplate -->

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditCommentBorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FFFFFFFF"
                    BorderBrush="{TemplateBinding Background}"
                    BorderThickness="1"
                    CornerRadius="2"
                    cs:Name="Border_0008"
                    Margin="1"
                    cs:Office2013DarkGray.Background="#FFFFFFFF"
                    cs:Office2013LightGray.Background="#FFFFFFFF"
                    cs:Office2016Black.Background="#FF777777"
                    cs:Office2016Colorful.Background="#FFFFFFFF"
                    cs:Office2016White.Background="#FFFFFFFF"
                   >
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Margin="-1"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="2"
                    IsHitTestVisible="False"
                    Margin="1"
                    Opacity="0.1"/>
        </Grid>
    </ControlTemplate>

    <!-- CommentMoreButtonStyle -->

    <Style x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentMoreButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Height="17"
                          Margin="1"
                          Width="17">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <ColorAnimation cs:Name="ColorAnimation_0001"
                                                        Duration="0"
                                                        Storyboard.TargetName="Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#FF999999"
                                                        cs:Office2013DarkGray.To="#FF999999"
                                                        cs:Office2013LightGray.To="#FF999999"
                                                        cs:Office2016Black.To="#FF969696"
                                                        cs:Office2016Colorful.To="#FF999999"
                                                        cs:Office2016White.To="#FF999999"
                                                       />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation cs:Name="ColorAnimation_0002"
                                                        Duration="0"
                                                        Storyboard.TargetName="Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#FF0072C6"
                                                        cs:Office2013DarkGray.To="#FF0072C6"
                                                        cs:Office2013LightGray.To="#FF0072C6"
                                                        cs:Office2016Black.To="#FF444444"
                                                        cs:Office2016Colorful.To="#FF0173C7"
                                                        cs:Office2016White.To="#FF0072C6"
                                                       />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation cs:Name="ColorAnimation_0003"
                                                        Duration="0"
                                                        Storyboard.TargetName="Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#FF0072C6"
                                                        cs:Office2013DarkGray.To="#FF0072C6"
                                                        cs:Office2013LightGray.To="#FF0072C6"
                                                        cs:Office2016Black.To="#FF444444"
                                                        cs:Office2016Colorful.To="#FF0173C7"
                                                        cs:Office2016White.To="#FF0072C6"
                                                       />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Glyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="Border"
                                Background="#FF999999"
                                CornerRadius="64"
                                cs:Name="Border_0007"
                                cs:Office2013DarkGray.Background="#FFFFFFFF"
                                cs:Office2013LightGray.Background="#FFFFFFFF"
                                cs:Office2016Black.Background="#FF969696"
                                cs:Office2016Colorful.Background="#FF999999"
                                cs:Office2016White.Background="#FF999999"
                               />
                        <Path x:Name="Glyph"
                              cs:Name="Path_0001"
                              Data="F1 M 9,0L 9,1L 8,1L 8,2L 7,2L 7,3L 6,3L 6,4L 5,4L 5,5L 4,5L 4,4L 3,4L 3,3L 2,3L 2,2L 1,2L 1,1L 0,1L 0,0L 9,0 Z "
                              Fill="#FFFFFFFF"
                              Height="5"
                              Margin="0,1,0,-1"
                              Stretch="Fill"
                              Width="9"
                              cs:Office2013DarkGray.Fill="#FFFFFFFF"
                              cs:Office2013LightGray.Fill="#FFFFFFFF"
                              cs:Office2016Black.Fill="#E3FFFFFF"
                              cs:Office2016Colorful.Fill="#FFFFFFFF"
                              cs:Office2016White.Fill="#FFFFFFFF"
                             />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>