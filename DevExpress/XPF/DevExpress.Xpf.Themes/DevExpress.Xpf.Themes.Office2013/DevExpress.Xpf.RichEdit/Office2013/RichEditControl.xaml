<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditForegroundBrush}"
                     Color="#FF3C3C3C"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FF3C3C3C"
                     cs:Office2013LightGray.Color="#FF3C3C3C"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF3C3C3C"/>

    <SolidColorBrush x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditBackgroundBrush}"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FFFFFFFF"
                     cs:Office2013LightGray.Color="#FFFFFFFF"
                     cs:Office2016Black.Color="#FF696969"
                     cs:Office2016Colorful.Color="#FFE6E6E6"
                     cs:Office2016White.Color="#FFFFFFFF"/>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=BackgroundControlTemplate}" TargetType="{x:Type ContentControl}">
        <Border>
            <Border.Background>
                <LinearGradientBrush cs:Name="LinearGradientBrush_0106"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                    >
                    <GradientStop Color="#FFFFFFFF"
                                  cs:Name="Border_0001"
                                  Offset="0"
                                  cs:Office2013DarkGray.Color="#FFE3E3E3"
                                  cs:Office2013LightGray.Color="#FFF6F6F6"
                                  cs:Office2016Black.Color="#FF696969"
                                  cs:Office2016Colorful.Color="#FFE6E6E6"
                                  cs:Office2016White.Color="#FFFFFFFF"
                                 />
                    <GradientStop Color="#FFF0F0F0"
                                  cs:Name="GradientStop_0001"
                                  Offset="1"
                                  cs:Office2013DarkGray.Color="#FFC3C3C3"
                                  cs:Office2013LightGray.Color="#FFE6E6E6"
                                  cs:Office2016Black.Color="#FF696969"
                                  cs:Office2016Colorful.Color="#FFE6E6E6"
                                  cs:Office2016White.Color="#FFF0F0F0"
                                 />
                </LinearGradientBrush>
            </Border.Background>
            <ContentPresenter Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              SnapsToDevicePixels="True"
                              UseLayoutRounding="True"/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=BorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Border BorderBrush="#FFDDDDDD"
                BorderThickness="1"
                cs:Name="Border_0002"
                SnapsToDevicePixels="True"
                cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                cs:Office2013LightGray.BorderBrush="#FFABABAB"
                cs:Office2016Black.BorderBrush="#60000000"
                cs:Office2016Colorful.BorderBrush="#47000000"
                cs:Office2016White.BorderBrush="#FFDDDDDD"
               >
            <ContentPresenter Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              UseLayoutRounding="True"/>
        </Border>
    </ControlTemplate>

</ResourceDictionary>