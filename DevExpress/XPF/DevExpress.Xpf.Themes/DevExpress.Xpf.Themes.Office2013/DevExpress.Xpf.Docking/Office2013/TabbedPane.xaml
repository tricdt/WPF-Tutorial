<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=TabHeadersBorderMargin}">0</Thickness>

    <Thickness x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=TabHeadersClipMargin}">0,-2</Thickness>

    <Thickness x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=TabHeadersBorderThickness}">1,0,1,1</Thickness>

    <SolidColorBrush x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=TabHeadersBackground}" Color="Transparent"/>

    <dx:WpfSvgPalette x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=SvgPalette}">
        <SolidColorBrush x:Key="BlackColor"
                         Color="#FF808080"
                         cs:Office2016Black.Color="#FFF0F0F0"
                        />
        <SolidColorBrush x:Key="WhiteColor"
                         Color="#FFFFFFFF"
                         cs:Office2013LightGray.Color="#FFF6F6F6"
                         cs:Office2016Black.Color="#FF696969"
                        />
        <SolidColorBrush x:Key="RedColor"
                         Color="#FFD86344"
                        />
        <SolidColorBrush x:Key="YellowColor"
                         Color="#FFEDC87E"
                        />
        <SolidColorBrush x:Key="GreenColor"
                         Color="#FF68A490"
                        />
        <SolidColorBrush x:Key="BlueColor"
                         Color="#FF4D82B8"
                        />
        <dx:WpfSvgPalette.States>
            <dx:WpfSvgPalette x:Key="Hover">
                <SolidColorBrush x:Key="BlackColor"
                                 Color="#FF808080"
                                 cs:Office2016Black.Color="#FFF0F0F0"
                                 cs:Office2016Colorful.Color="#FF727272"
                                />
                <SolidColorBrush x:Key="WhiteColor"
                                 Color="#FFFFFFFF"
                                 cs:Office2016Black.Color="#FF555555"
                                />
                <SolidColorBrush x:Key="RedColor"
                                 Color="#FFD86344"
                                />
                <SolidColorBrush x:Key="YellowColor"
                                 Color="#FFEDC87E"
                                />
                <SolidColorBrush x:Key="GreenColor"
                                 Color="#FF68A490"
                                />
                <SolidColorBrush x:Key="BlueColor"
                                 Color="#FF4D82B8"
                                />
            </dx:WpfSvgPalette>
            <dx:WpfSvgPalette x:Key="Selected">
                <SolidColorBrush x:Key="BlackColor"
                                 Color="#FFD7D7D7"
                                 cs:Office2016Black.Color="#FFF0F0F0"
                                 cs:Office2016Colorful.Color="#FFFEFEFE"
                                 cs:Office2016White.Color="#FFF0F0F0"
                                />
                <SolidColorBrush x:Key="WhiteColor"
                                 Color="#FF0072C6"
                                 cs:Office2013DarkGray.Color="#FF333333"
                                 cs:Office2013LightGray.Color="#FF19478A"
                                 cs:Office2016Black.Color="#FF444444"
                                 cs:Office2016Colorful.Color="#FFA6A6A6"
                                />
                <SolidColorBrush x:Key="RedColor"
                                 Color="#FFD86344"
                                />
                <SolidColorBrush x:Key="YellowColor"
                                 Color="#FFEDC87E"
                                />
                <SolidColorBrush x:Key="GreenColor"
                                 Color="#FF68A490"
                                />
                <SolidColorBrush x:Key="BlueColor"
                                 Color="#FF054383"
                                 cs:Office2013DarkGray.Color="#FF275A8D"
                                 cs:Office2013LightGray.Color="#FF3E74AC"
                                 cs:Office2016Black.Color="#FF4D82B8"
                                 cs:Office2016White.Color="#FF084A8D"
                                />
            </dx:WpfSvgPalette>
            <dx:WpfSvgPalette x:Key="Inactive">
                <SolidColorBrush x:Key="BlackColor"
                                 Color="#FF565555"
                                 cs:Office2016Black.Color="#FFAAAAAA"
                                 cs:Office2016White.Color="#FFFFFFFF"
                                />
                <SolidColorBrush x:Key="WhiteColor"
                                 Color="#FFFFFFFF"
                                 cs:Office2016Black.Color="#FF444444"
                                 cs:Office2016White.Color="#FFABABAB"
                                />
                <SolidColorBrush x:Key="RedColor"
                                 Color="#FFD86344"
                                />
                <SolidColorBrush x:Key="YellowColor"
                                 Color="#FFEDC87E"
                                />
                <SolidColorBrush x:Key="GreenColor"
                                 Color="#FF68A490"
                                />
                <SolidColorBrush x:Key="BlueColor"
                                 Color="#FF4D82B8"
                                />
            </dx:WpfSvgPalette>
        </dx:WpfSvgPalette.States>
    </dx:WpfSvgPalette>

    <ControlTemplate x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=PageHeader}" TargetType="{x:Type ve:TabbedPaneItem}">
        <Grid x:Name="TabItemHeader"
              Margin="0,0,1,0"
              ve:DockPane.HitTestType="Header"
              Visibility="{Binding Visibility}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="PART_CaptionControlPresenter"
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                            To="#FF3C3C3C"
                                            cs:Office2013DarkGray.To="#FFFFFFFF"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#FFFFFFFF"
                                            cs:Office2016Colorful.To="#E3000000"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Normal"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="EmptySelectionState"/>
                    <VisualState x:Name="Selected">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="PART_CaptionControlPresenter"
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                            To="#FF0072C6"
                                            cs:Office2013DarkGray.To="#FF2B579A"
                                            cs:Office2013LightGray.To="#FF2B579A"
                                            cs:Office2016Black.To="#E3FFFFFF"
                                            cs:Office2016Colorful.To="#E0000000"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unselected"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="DefaultState"
                    Background="#FFD6D6D6"
                    cs:Office2013DarkGray.Background="#FFABABAB"
                    cs:Office2013LightGray.Background="#FFABABAB"
                    cs:Office2016Black.Background="#FF595959"
                    cs:Office2016Colorful.Background="#FFC5C5C5"
                   />
            <Border x:Name="HoverState"
                    Background="#FFD6D6D6"
                    Opacity="0"
                    cs:Office2013DarkGray.Background="#FFABABAB"
                    cs:Office2013LightGray.Background="#FFABABAB"
                    cs:Office2016Black.Background="#28FFFFFF"
                    cs:Office2016Colorful.Background="#FFAEAEAE"
                   />
            <Border x:Name="PressedState"
                    Background="#FFFFFFFF"
                    Opacity="0"
                    cs:Office2013DarkGray.Background="#FFE3E3E3"
                    cs:Office2013LightGray.Background="#FFF6F6F6"
                    cs:Office2016Black.Background="#FF696969"
                    cs:Office2016Colorful.Background="#FFE6E6E6"
                   />
            <ve:TemplatedTabCaptionControl x:Name="PART_CaptionControlPresenter"
                                           Foreground="#FF3C3C3C"
                                           LayoutItem="{Binding}"
                                           Margin="1"
                                           Padding="4,2,4,3"
                                           cs:Office2013DarkGray.Foreground="#FFE5E5E5"
                                           cs:Office2013LightGray.Foreground="#FFE5E5E5"
                                           cs:Office2016Black.Foreground="#E3FFFFFF"
                                           cs:Office2016Colorful.Foreground="#E3000000"
                                          />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Padding"
                        TargetName="PART_CaptionControlPresenter"
                        Value="12"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:TabbedPaneElementsThemeKey ResourceKey=TabContainerTemplate}" TargetType="{x:Type ve:PanelTabContainer}">
        <Grid ve:DockPane.HitTestType="Bounds">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="HeaderStates">
                    <VisualState x:Name="HeaderVisible"/>
                    <VisualState x:Name="HeaderHidden">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="PART_ControlBox"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border x:Name="PageHeaders"
                    Background="#FFFFFFFF"
                    BorderBrush="#FFD6D6D6"
                    BorderThickness="{TemplateBinding ActualTabHeaderBorderThickness}"
                    Grid.Row="1"
                    Margin="{DynamicResource {dxt:TabbedPaneElementsThemeKey ResourceKey=TabHeadersBorderMargin}}"
                    cs:Office2013DarkGray.Background="#FFE3E3E3"
                    cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                    cs:Office2013LightGray.Background="#FFF6F6F6"
                    cs:Office2013LightGray.BorderBrush="#FFABABAB"
                    cs:Office2016Black.Background="#FFB2B2B2"
                    cs:Office2016Black.BorderBrush="#FFB2B2B2"
                    cs:Office2016Colorful.Background="#FFF0F0F0"
                    cs:Office2016Colorful.BorderBrush="#FFA6A6A6"
                   >
                <ve:DockingSplitLayoutPanel Background="#FFD6D6D6"
                                            Content1Location="Left"
                                            MaximizeContent1="True"
                                            cs:Office2013DarkGray.Background="#FFABABAB"
                                            cs:Office2013LightGray.Background="#FFABABAB"
                                            cs:Office2016Black.Background="#FF595959"
                                            cs:Office2016Colorful.Background="#FFC5C5C5"
                                           >
                    <ve:DockingSplitLayoutPanel.Content1>
                        <ItemsPresenter x:Name="PART_HeadersPanelPresenter"/>
                    </ve:DockingSplitLayoutPanel.Content1>
                    <ve:DockingSplitLayoutPanel.Content2>
                        <ve:TabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                       ButtonHeight="16"
                                                       ButtonStyle="{DynamicResource {dxt:TabbedPaneElementsThemeKey ResourceKey=TabbedPaneButtonStyle}}"
                                                       ButtonWidth="16"
                                                       Grid.Column="1"
                                                       LayoutItem="{Binding}"
                                                       Margin="0,4,4,2"
                                                       ScrollNextButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollNextButton}}"
                                                       ScrollPrevButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollPrevButton}}"
                                                       ve:DockPane.HitTestType="ControlBox"/>
                    </ve:DockingSplitLayoutPanel.Content2>
                </ve:DockingSplitLayoutPanel>
            </Border>
            <Border x:Name="PART_SelectedPage">
                <ve:LayoutTabFastRenderPanel x:Name="PART_FastRenderPanel" ve:DockPane.HitTestType="Content"/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="PART_ControlBox"
                        Value="0,12,12,12"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>