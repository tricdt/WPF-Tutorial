<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroBorderSize}">5</sys:Double>

    <Thickness x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowResizeBorderThickness}">8</Thickness>

    <ControlTemplate x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowHeaderBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="PART_Header"
                Background="#00000000"
                CornerRadius="0"
                cs:Name="Border_0001"
                MinHeight="27"
                cs:Office2013DarkGray.Background="#00000000"
                cs:Office2013LightGray.Background="#00000000"
                cs:Office2016Black.Background="#00000000"
                cs:Office2016Colorful.Background="#00000000"
                cs:Office2016White.Background="#00000000"
               />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowContentTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="border"
                Background="#FFD6D6D6"
                CornerRadius="0,0,3,3"
                cs:Name="Border_0002"
                Padding="1"
                SnapsToDevicePixels="True"
                cs:Office2013DarkGray.Background="#FFABABAB"
                cs:Office2013LightGray.Background="#FFABABAB"
                cs:Office2016Black.Background="#FFC3C3C3"
                cs:Office2016Colorful.Background="#FFC4C4C4"
                cs:Office2016White.Background="#FFD6D6D6"
               >
            <Border Background="#7F3C3C3C"
                    CornerRadius="0,0,1,1"
                    cs:Name="Border_0003"
                    Padding="1"
                    SnapsToDevicePixels="True"
                    cs:Office2013DarkGray.Background="#7F3C3C3C"
                    cs:Office2013LightGray.Background="#7F3C3C3C"
                    cs:Office2016Black.Background="#FFC3C3C3"
                    cs:Office2016Colorful.Background="#FFC4C4C4"
                    cs:Office2016White.Background="#7F3C3C3C"
                   >
                <Grid Background="{DynamicResource {dxt:FloatingContainerThemeKey ResourceKey=FloatingContainerBackground}}">
                    <ContentPresenter/>
                </Grid>
            </Border>
        </Border>
    </ControlTemplate>

    <Style x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowContentStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="5,0,5,5"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowBodyTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter/>
    </ControlTemplate>

    <Style x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowBodyStyle}" TargetType="{x:Type ContentControl}"></Style>

    <Style x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowControlBoxStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="2,0,0,2"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowControlBoxTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter/>
    </ControlTemplate>

    <Style x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowCaptionStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="6,3,6,3"/>
        <Setter cs:Name="Setter_0001"
                Property="Foreground"
                Value="#FF3C3C3C"
                cs:Office2013DarkGray.Value="#FF262626"
                cs:Office2013LightGray.Value="#FF444444"
                cs:Office2016Black.Value="#E3000000"
                cs:Office2016Colorful.Value="#E3000000"
                cs:Office2016White.Value="#FF3C3C3C"
               />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Border Background="#FFFFFFFF"
                                CornerRadius="6"
                                cs:Name="Border_0004"
                                Margin="-2,0,-2,0"
                                Opacity="0.3"
                                cs:Office2013DarkGray.Background="#FFE3E3E3"
                                cs:Office2013LightGray.Background="#FFF6F6F6"
                                cs:Office2016Black.Background="#FFD4D4D4"
                                cs:Office2016Colorful.Background="#FFFFFFFF"
                                cs:Office2016White.Background="#FFFFFFFF"
                               >
                            <Border.Effect>
                                <BlurEffect Radius="10"/>
                            </Border.Effect>
                        </Border>
                        <TextBlock x:Name="PART_Text"
                                   Background="{x:Null}"
                                   cs:Name="TextBlock_0001"
                                   Foreground="#FF3C3C3C"
                                   Text="{Binding Path=(dxc:FloatingContainer.FloatingContainer).Caption, RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                   cs:Office2013DarkGray.Foreground="#FF262626"
                                   cs:Office2013LightGray.Foreground="#FF444444"
                                   cs:Office2016Black.Foreground="#E3000000"
                                   cs:Office2016Colorful.Foreground="#E3000000"
                                   cs:Office2016White.Foreground="#FF3C3C3C"
                                  />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowCaptionTemplate}">
        <Grid>
            <dxb:ContentViewport ClipToBounds="True" KeepPositiveLeftContentPosition="True">
                <TextBlock x:Name="TitleTextBlock"
                           cs:Name="TextBlock_0002"
                           Foreground="#FF3C3C3C"
                           HorizontalAlignment="Center"
                           IsHitTestVisible="False"
                           Margin="6,3,6,3"
                           Text="{Binding}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           cs:Office2013DarkGray.Foreground="#FF262626"
                           cs:Office2013LightGray.Foreground="#FF444444"
                           cs:Office2016Black.Foreground="#E3000000"
                           cs:Office2016Colorful.Foreground="#E3000000"
                           cs:Office2016White.Foreground="#FF3C3C3C"
                          />
            </dxb:ContentViewport>
        </Grid>
    </DataTemplate>

    <Style x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowIconAndCaptionAreaStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="{dxrt:DXRibbonAeroWindowThemeKey ResourceKey=AeroWindowIconStyle}" TargetType="{x:Type Image}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Margin" Value="7,7,0,3"/>
        <Setter Property="Stretch" Value="None"/>
    </Style>

</ResourceDictionary>