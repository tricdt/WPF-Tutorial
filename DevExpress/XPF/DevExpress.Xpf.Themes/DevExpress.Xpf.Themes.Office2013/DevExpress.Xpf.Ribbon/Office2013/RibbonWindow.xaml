    <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <Thickness x:Key="{dxrt:RibbonThemeKey ResourceKey=ResizeBorderThickness}">4</Thickness>

    <DataTemplate x:Key="{dxt:FloatingContainerThemeKey ResourceKey=RibbonFloatingContainerCaptionTemplate}">
        <Grid>
            <dxb:ContentViewport ClipToBounds="True" KeepPositiveLeftContentPosition="True">
                <TextBlock x:Name="TitleTextBlock"
                           Foreground="#FF3C3C3C"
                           HorizontalAlignment="Center"
                           IsHitTestVisible="False"
                           Margin="7,3,7,3"
                           Text="{Binding}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           cs:Office2013DarkGray.Foreground="#FF262626"
                           cs:Office2013LightGray.Foreground="#FF444444"
                           cs:Office2016Black.Foreground="#E3FFFFFF"
                           cs:Office2016Colorful.Foreground="#FFFFFFFF"
                          />
            </dxb:ContentViewport>
        </Grid>
    </DataTemplate>

    <Style x:Key="{dxrt:RibbonThemeKey ResourceKey=RibbonShowModeSelectorItemStyle}" TargetType="{x:Type Button}">
        <Style.Triggers>
            <Trigger Property="dxc:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Width" Value="44"/>
                <Setter Property="Height" Value="44"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Width" Value="31"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Template" Value="{DynamicResource {dxrt:RibbonThemeKey ResourceKey=RibbonShowModeSelectorItemTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxrt:DXRibbonWindowThemeKey ResourceKey=MinimizationButtonTemplate}" TargetType="{x:Type Button}">
        <Grid x:Name="Button"
              Background="#00000000"
              Margin="1,0,0,0"
             >
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path"
                                            Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path"
                                            Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Path"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.5"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="HoverState"
                    Background="#FFE3ECFA"
                    Opacity="0"
                    cs:Office2016Black.Background="#30000000"
                    cs:Office2016Colorful.Background="#FF2A8AD4"
                   />
            <Border x:Name="PressedState"
                    Background="#FFC2D5F2"
                    Opacity="0"
                    cs:Office2016Black.Background="#60000000"
                    cs:Office2016Colorful.Background="#FF015C9F"
                   />
            <Grid x:Name="Glyph"
                  Height="2"
                  Margin="0,0,0,-5"
                  Width="9">
                <Rectangle x:Name="Path"
                           Fill="#FF2E2B2B"
                           Stretch="Fill"
                           cs:Office2016Black.Fill="#FFFFFFFF"
                           cs:Office2016Colorful.Fill="#FFFFFFFF"
                          />
            </Grid>
        </Grid>
    </ControlTemplate>

