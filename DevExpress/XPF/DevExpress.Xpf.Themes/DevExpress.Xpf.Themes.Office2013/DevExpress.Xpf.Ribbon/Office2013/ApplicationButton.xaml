                  Stretch="Fill"
                  VerticalAlignment="Stretch"
                  Width="16"
                  cs:Office2013DarkGray.Fill="#FF0072C6"
                  cs:Office2013LightGray.Fill="#FF0072C6"
                  cs:Office2016Black.Fill="#E3FFFFFF"
                  cs:Office2016Colorful.Fill="#FFFFFFFF"
