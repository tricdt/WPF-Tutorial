                        cs:Name="Border_0024"
                        cs:Office2013DarkGray.Background="#FF333333"
                        cs:Office2013DarkGray.BorderBrush="#FFD6D6D6"
                        cs:Office2013LightGray.Background="#FF2A8DD4"
                        cs:Office2013LightGray.BorderBrush="#FFD6D6D6"
                        cs:Office2016Black.Background="#FFB2B2B2"
                        cs:Office2016Black.BorderBrush="#FFC3C3C3"
                        cs:Office2016Colorful.Background="#FFFFFFFF"
                        cs:Office2016Colorful.BorderBrush="#FFC4C4C4"
