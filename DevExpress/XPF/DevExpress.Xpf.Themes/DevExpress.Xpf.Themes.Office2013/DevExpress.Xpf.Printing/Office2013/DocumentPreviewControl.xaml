<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="{dxpt:NewDocumentViewerThemeKey ResourceKey=PageBorderTemplate}">
        <Grid>
            <Border x:Name="Selection"
                    BorderBrush="#FFC6C6C6"
                    BorderThickness="1"
                    cs:Name="Border_0001"
                    Margin="-1"
                    cs:Office2013DarkGray.BorderBrush="#26000000"
                    cs:Office2013LightGray.BorderBrush="#26000000"
                    cs:Office2016Black.BorderBrush="#FFC3C3C3"
                    cs:Office2016Colorful.BorderBrush="#FFC6C6C6"
                    cs:Office2016White.BorderBrush="#FFC6C6C6"
                   />
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="true">
                <Setter cs:Name="Setter_0001"
                        Property="BorderBrush"
                        TargetName="Selection"
                        Value="#FF0072C6"
                        cs:Office2013DarkGray.Value="#FF333333"
                        cs:Office2013LightGray.Value="#FF19478A"
                        cs:Office2016Black.Value="#FF444444"
                        cs:Office2016Colorful.Value="#FF0173C7"
                        cs:Office2016White.Value="#FF0072C6"
                       />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>