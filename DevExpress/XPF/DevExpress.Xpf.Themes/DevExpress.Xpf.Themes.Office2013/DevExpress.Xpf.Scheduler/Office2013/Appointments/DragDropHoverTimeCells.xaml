<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=DragDropHoverTimeCellsStyle}" TargetType="{x:Type dxschd:VisualDraggedAppointmentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="#FFFFFFFF"
                            BorderBrush="#FFD6D6D6"
                            BorderThickness="2"
                            cs:Name="Border_0001"
                            Margin="1,0,1,0"
                            Opacity="0.25"
                            cs:Office2013DarkGray.Background="#FFABABAB"
                            cs:Office2013DarkGray.BorderBrush="#FFD6D6D6"
                            cs:Office2013LightGray.Background="#FFABABAB"
                            cs:Office2013LightGray.BorderBrush="#FFD6D6D6"
                            cs:Office2016Black.Background="#FFD4D4D4"
                            cs:Office2016Black.BorderBrush="#FF696968"
                            cs:Office2016Colorful.Background="#FFFFFFFF"
                            cs:Office2016Colorful.BorderBrush="#FFC4C4C4"
                            cs:Office2016White.Background="#FFFFFFFF"
                            cs:Office2016White.BorderBrush="#FFD6D6D6"
                           />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>