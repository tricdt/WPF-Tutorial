<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dxschd:ToolTipVisibilityToVisibilityConverter x:Key="ToolTipVisibilityConverter"/>

    <dx:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <dxschd:AppointmentColorConverter x:Key="appointmentColorConverter"/>

    <dxschd:BoolToThicknessConverter x:Key="selectionBoolToThicknessConverter"
                                     ThicknessWhenFalse="1"
                                     ThicknessWhenTrue="1"/>

    <dxschd:AppointmentStatusDisplayTypeToGridLengthConverter x:Key="StatusDisplayTypeToGridLengthConverter" DefaultValue="7"/>

    <dxschd:AppointmentStatusDisplayTypeToVisibilityConverter x:Key="AppointmentStatusDisplayTypeToVisibilityConverter"/>

    <Color x:Key="defaultBorderColor"
           cs:Name="Color_0001"
           cs:Office2013DarkGray.Color="#FFC6C6C6"
           cs:Office2013LightGray.Color="#FFC6C6C6"
           cs:Office2016Black.Color="#FFC6C6C6"
           cs:Office2016Colorful.Color="#FFC6C6C6"
           cs:Office2016White.Color="#FFC6C6C6">
        #FFC6C6C6
    </Color>

    <SolidColorBrush x:Key="borderBrush.IsSelected"
                     Color="#FF0072C6"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FF0072C6"
                     cs:Office2013LightGray.Color="#FF0072C6"
                     cs:Office2016Black.Color="#FF0072C6"
                     cs:Office2016Colorful.Color="#FF0072C6"
                     cs:Office2016White.Color="#FF0072C6"/>

    <SolidColorBrush x:Key="statusBorderBrush"
                     Color="#FF0072C6"
                     cs:Name="SolidColorBrush_0002"
                     cs:Office2013DarkGray.Color="#FF0072C6"
                     cs:Office2013LightGray.Color="#FF0072C6"
                     cs:Office2016Black.Color="#FF0072C6"
                     cs:Office2016Colorful.Color="#FF0072C6"
                     cs:Office2016White.Color="#FF0072C6"/>

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=VerticalAppointmentTemplate}" TargetType="{x:Type dxschd:VisualVerticalAppointmentControl}">
        <Grid x:Name="PART_ToolTipContainer"
              dxsch:SchedulerControl.HitTestType="AppointmentContent"
              dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}">
            <ToolTipService.ToolTip>
                <ToolTip Content="{TemplateBinding ViewInfo}"
                         ContentTemplate="{Binding ViewInfo.View.AppointmentToolTipContentTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                         Visibility="{Binding ViewInfo.View.AppointmentToolTipVisibility, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ToolTipVisibilityConverter}}"/>
            </ToolTipService.ToolTip>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="DraggedStates">
                    <VisualState x:Name="NotDragged">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.15"
                                             Storyboard.TargetName="AppointmentBorder"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Dragged">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.15"
                                             Storyboard.TargetName="AppointmentBorder"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.3"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <dxschd:BaseBorder x:Name="AppointmentBorder"
                               CornerRadius="0"
                               cs:Name="AppointmentRoundedBorder_0001"
                               DefaultBorderThickness="{Binding ViewInfo.Selected, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource selectionBoolToThicknessConverter}}"
                               HasBottomBorder="{Binding ViewInfo.HasBottomBorder, RelativeSource={RelativeSource TemplatedParent}}"
                               HasLeftBorder="{Binding ViewInfo.HasLeftBorder, RelativeSource={RelativeSource TemplatedParent}}"
                               HasRightBorder="{Binding ViewInfo.HasRightBorder, RelativeSource={RelativeSource TemplatedParent}}"
                               HasTopBorder="{Binding ViewInfo.HasTopBorder, RelativeSource={RelativeSource TemplatedParent}}"
                               IsSelected="{Binding ViewInfo.Selected, RelativeSource={RelativeSource TemplatedParent}}">
                <dxschd:BaseBorder.Style>
                    <Style TargetType="{x:Type dxschd:BaseBorder}">
                        <Setter Property="BorderBrush" Value="{Binding ViewInfo.LabelBrush, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter cs:Name="Setter_0001"
                                        Property="BorderBrush"
                                        Value="{StaticResource borderBrush.IsSelected}">
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </dxschd:BaseBorder.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="ContentContainerStatusColumn" Width="{Binding StatusDisplayType, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StatusDisplayTypeToGridLengthConverter}}"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="Status"
                            Background="#FFD6D6D6"
                            BorderBrush="{Binding ViewInfo.LabelColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource appointmentColorConverter}, ConverterParameter={StaticResource defaultBorderColor}}"
                            BorderThickness="0,0,1,0"
                            cs:Name="Border_0001"
                            Visibility="{Binding StatusDisplayType, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource AppointmentStatusDisplayTypeToVisibilityConverter}}"
                            cs:Office2013DarkGray.Background="#FFD6D6D6"
                            cs:Office2013LightGray.Background="#FFD6D6D6"
                            cs:Office2016Black.Background="#FFD6D6D6"
                            cs:Office2016Colorful.Background="#FFD6D6D6"
                            cs:Office2016White.Background="#FFD6D6D6"
                           >
                        <dxsch:AppointmentStatusControl Background="#FFD6D6D6"
                                                        cs:Name="AppointmentStatusControl_0001"
                                                        Orientation="Vertical"
                                                        ViewInfo="{TemplateBinding ViewInfo}"
                                                        cs:Office2013DarkGray.Background="#FFD6D6D6"
                                                        cs:Office2013LightGray.Background="#FFD6D6D6"
                                                        cs:Office2016Black.Background="#FFD6D6D6"
                                                        cs:Office2016Colorful.Background="#FFD6D6D6"
                                                        cs:Office2016White.Background="#FFD6D6D6"
                                                       >
                            <Border Background="{Binding ViewInfo.Status.Brush, RelativeSource={RelativeSource TemplatedParent}}"
                                    BorderBrush="{StaticResource statusBorderBrush}"
                                    cs:Name="AppointmentBorder_0002"/>
                        </dxsch:AppointmentStatusControl>
                    </Border>
                    <Border x:Name="border"
                            Background="{Binding ViewInfo.LabelBrush, RelativeSource={RelativeSource TemplatedParent}}"
                            Grid.Column="1"/>
                    <ContentPresenter x:Name="PART_Content"
                                      Content="{TemplateBinding ViewInfo}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Grid.Column="1"
                                      Margin="5"/>
                </Grid>
            </dxschd:BaseBorder>
            <Rectangle cs:Name="Rectangle_0001"
                       Cursor="SizeNS"
                       dxsch:SchedulerControl.HitTestType="AppointmentResizingTopEdge"
                       dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}"
                       Fill="#00000000"
                       Height="5"
                       IsHitTestVisible="True"
                       VerticalAlignment="Top"
                       Visibility="{Binding Path=ViewInfo.CanResizeStart, RelativeSource={RelativeSource TemplatedParent} ,Converter={StaticResource boolToVisibilityConverter}}"
                       cs:Office2013DarkGray.Fill="#00000000"
                       cs:Office2013LightGray.Fill="#00000000"
                       cs:Office2016Black.Fill="#00000000"
                       cs:Office2016Colorful.Fill="#00000000"
                       cs:Office2016White.Fill="#00000000"
                      />
            <Rectangle cs:Name="Rectangle_0002"
                       Cursor="SizeNS"
                       dxsch:SchedulerControl.HitTestType="AppointmentResizingBottomEdge"
                       dxsch:SchedulerControl.SelectableIntervalViewInfo="{TemplateBinding ViewInfo}"
                       Fill="#00000000"
                       Height="5"
                       IsHitTestVisible="True"
                       VerticalAlignment="Bottom"
                       Visibility="{Binding Path=ViewInfo.CanResizeEnd, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityConverter}}"
                       cs:Office2013DarkGray.Fill="#00000000"
                       cs:Office2013LightGray.Fill="#00000000"
                       cs:Office2016Black.Fill="#00000000"
                       cs:Office2016Colorful.Fill="#00000000"
                       cs:Office2016White.Fill="#00000000"
                      />
        </Grid>
    </ControlTemplate>

    <DataTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=VerticalAppointmentContentTemplate}">
        <Grid Background="#00000000"
              cs:Name="Grid_0001"
              SnapsToDevicePixels="True"
              cs:Office2013DarkGray.Background="#00000000"
              cs:Office2013LightGray.Background="#00000000"
              cs:Office2016Black.Background="#00000000"
              cs:Office2016Colorful.Background="#00000000"
              cs:Office2016White.Background="#00000000"
             >
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="0" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <dxschd:AppointmentImagesControl Grid.Column="0"
                                             Orientation="Vertical"
                                             ViewInfo="{Binding}"/>
            <dxschd:VerticalAppointmentContentPanel Grid.Column="1">
                <dxschd:VerticalAppointmentClockControl ViewInfo="{Binding}"/>
                <TextBlock Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}"
                           Margin="0,0,2,0"
                           Text="{Binding Subject}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"/>
                <TextBlock Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}"
                           Text="{Binding Location}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"/>
                <TextBlock dxschd:VerticalAppointmentContentPanel.AlwaysOnNewRow="True"
                           Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}"
                           Margin="0,6,0,0"
                           Text="{Binding Description}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"/>
            </dxschd:VerticalAppointmentContentPanel>
        </Grid>
    </DataTemplate>

</ResourceDictionary>