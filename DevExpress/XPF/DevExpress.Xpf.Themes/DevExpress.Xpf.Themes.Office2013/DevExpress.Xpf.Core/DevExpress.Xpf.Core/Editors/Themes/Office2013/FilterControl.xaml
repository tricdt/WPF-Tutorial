<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxef="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2013.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/FilterControl.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <dxef:GroupTypeConverter x:Key="FilterControlGroupTypeConverter"/>

    <dxef:OperationStringConverter x:Key="FilterControlOperationStringConverter"/>

    <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>

    <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    <dx:EmbeddedResourceImageConverter x:Key="EmbeddedResourceImageConverter"/>

    <dxef:CheckedUncheckedBoolToStringConverter x:Key="FilterControlBoolToStringConverter"/>

    <dxef:FirstToCollapsedConverter x:Key="FilterControlFirstToCollapsedConverter"/>

    <dxef:AdditionalOperandsCountToVisibilityConverter x:Key="AdditionalOperandsCountToVisibilityConverter"/>

    <dxef:OperatorPropertyNameConverter x:Key="OperatorPropertyNameConverter"/>

    <dx:EditorStringIdConverter x:Key="EditorStringIdConverter"/>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FFD6D6D6"
                    cs:Name="Border_0001"
                    cs:Office2013DarkGray.Background="#FFABABAB"
                    cs:Office2013LightGray.Background="#FFABABAB"
                    cs:Office2016Black.Background="#60000000"
                    cs:Office2016Colorful.Background="#47000000"
                    cs:Office2016White.Background="#FFD6D6D6"
                   />
            <Border Background="#FFFFFFFF"
                    cs:Name="Border_0002"
                    cs:Office2013DarkGray.Background="#FFE3E3E3"
                    cs:Office2013LightGray.Background="#FFF6F6F6"
                    cs:Office2016Black.Background="#FFD4D4D4"
                    cs:Office2016Colorful.Background="#FFFFFFFF"
                    cs:Office2016White.Background="#FFFFFFFF"
                   >
                <Border.Margin>
                    <Binding Path="Tag" RelativeSource="{RelativeSource TemplatedParent}">
                        <Binding.Converter>
                            <dx:BoolToObjectConverter>
                                <dx:BoolToObjectConverter.TrueValue>
                                    <Thickness>1</Thickness>
                                </dx:BoolToObjectConverter.TrueValue>
                                <dx:BoolToObjectConverter.FalseValue>
                                    <Thickness>0</Thickness>
                                </dx:BoolToObjectConverter.FalseValue>
                            </dx:BoolToObjectConverter>
                        </Binding.Converter>
                    </Binding>
                </Border.Margin>
            </Border>
            <ContentPresenter Margin="1"/>
        </Grid>
    </ControlTemplate>

    <SolidColorBrush x:Key="{dxet:FilterControlThemeKey ResourceKey=InplaceFilterEditorForeground}"
                     Color="#FF3C3C3C"
                     cs:Name="SolidColorBrush_0001"
                     cs:Office2013DarkGray.Color="#FF262626"
                     cs:Office2013LightGray.Color="#FF444444"
                     cs:Office2016Black.Color="#E3000000"
                     cs:Office2016Colorful.Color="#E3000000"
                     cs:Office2016White.Color="#FF3C3C3C"/>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FieldInOperationButtonTemplate}" TargetType="{x:Type dxef:FieldInOperationButtonControl}">
        <dx:XPFContentControl x:Name="ColumnButton"
                              Content="{TemplateBinding ColumnCaption}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                              cs:Name="XPFContentControl_0001"
                              Cursor="Hand"
                              Foreground="#FF3399FF"
                              Margin="0,2,3,2"
                              VerticalAlignment="Center"
                              cs:Office2013DarkGray.Foreground="#FF2B579A"
                              cs:Office2013LightGray.Foreground="#FF2B579A"
                              cs:Office2016Black.Foreground="#FF0088CC"
                              cs:Office2016Colorful.Foreground="#FF0066FF"
                              cs:Office2016White.Foreground="#FF0072C6"
                             />
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="ColumnButton"
                        Value="0,4,4,4"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlGroupTypeButtonTemplate}" TargetType="{x:Type ContentControl}">
        <TextBlock x:Name="TextButton"
                   cs:Name="TextBlock_0001"
                   Foreground="#FFCC3300"
                   Text="{Binding Path=NodeType, Converter={StaticResource FilterControlGroupTypeConverter}}"
                   cs:Office2013DarkGray.Foreground="#FFCC3300"
                   cs:Office2013LightGray.Foreground="#FFCC3300"
                   cs:Office2016Black.Foreground="#FFCC3300"
                   cs:Office2016Colorful.Foreground="#FFCC3333"
                   cs:Office2016White.Foreground="#FFCC3300"
                  />
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="TextButton"
                        Value="0,14"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlFirstOperandButtonTemplate}" TargetType="{x:Type ContentControl}">
        <dx:XPFContentControl x:Name="FirstOperandButton"
                              Content="{Binding Path=ColumnHeaderCaption}"
                              ContentTemplate="{Binding Path=ColumnHeaderTemplate}"
                              ContentTemplateSelector="{Binding Path=ColumnHeaderTemplateSelector}"
                              cs:Name="XPFContentControl_0002"
                              Cursor="Hand"
                              Foreground="#FF3399FF"
                              Margin="0,2,0,2"
                              VerticalAlignment="Center"
                              cs:Office2013DarkGray.Foreground="#FF2B579A"
                              cs:Office2013LightGray.Foreground="#FF2B579A"
                              cs:Office2016Black.Foreground="#FF0088CC"
                              cs:Office2016Colorful.Foreground="#FF0066FF"
                              cs:Office2016White.Foreground="#FF0072C6"
                             />
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="FirstOperandButton"
                        Value="0,16"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlClauseOperationButtonTemplate}" TargetType="{x:Type ContentControl}">
        <TextBlock x:Name="TextButton"
                   cs:Name="TextBlock_0002"
                   Foreground="#FF3399FF"
                   Margin="0,2,0,2"
                   Text="{Binding Path=Operation, Converter={StaticResource FilterControlOperationStringConverter}}"
                   VerticalAlignment="Center"
                   cs:Office2013DarkGray.Foreground="#FF009933"
                   cs:Office2013LightGray.Foreground="#FF009933"
                   cs:Office2016Black.Foreground="#FF009933"
                   cs:Office2016Colorful.Foreground="#FF009933"
                   cs:Office2016White.Foreground="#FF009933"
                  />
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="TextButton"
                        Value="0,16"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=OneLocalDateTimeTemplate}">
        <dx:XPFContentControl x:Name="LocalDateTimeButton"
                              Content="{Binding Path=LocalDateTimeFunctionLabel}"
                              cs:Name="XPFContentControl_0003"
                              Cursor="Hand"
                              Foreground="#FF009933"
                              Margin="0,3,3,3"
                              VerticalAlignment="Center"
                              cs:Office2013DarkGray.Foreground="#FF2B579A"
                              cs:Office2013LightGray.Foreground="#FF2B579A"
                              cs:Office2016Black.Foreground="#FF0088CC"
                              cs:Office2016Colorful.Foreground="#FF0066FF"
                              cs:Office2016White.Foreground="#FF0072C6"
                             />
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=ChangeOperandTypeButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="grid"
              Height="11"
              VerticalAlignment="Center"
              Width="11">
            <Grid Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                <Image Source="{Binding Source=DevExpress.Xpf.Core.Editors.Images.FilterControl.edit-normal.png, Converter={StaticResource EmbeddedResourceImageConverter}}"/>
                <Image Source="{Binding Source=DevExpress.Xpf.Core.Editors.Images.FilterControl.edit.png, Converter={StaticResource EmbeddedResourceImageConverter}}" Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
            <Grid Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                <Image Source="{Binding Source=DevExpress.Xpf.Core.Editors.Images.FilterControl.list-normal.png, Converter={StaticResource EmbeddedResourceImageConverter}}"/>
                <Image Source="{Binding Source=DevExpress.Xpf.Core.Editors.Images.FilterControl.list.png, Converter={StaticResource EmbeddedResourceImageConverter}}" Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Height"
                        TargetName="grid"
                        Value="28"/>
                <Setter Property="Width"
                        TargetName="grid"
                        Value="28"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:FilterControlThemeKey ResourceKey=FilterControlEditorTemplate}" TargetType="{x:Type dxef:FilterControlEditor}">
        <StackPanel Orientation="Horizontal">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="EditModeStates">
                    <VisualState x:Name="InplaceActive">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0001"
                                            Duration="0"
                                            Storyboard.TargetName="BorderBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#FFD6D6D6"
                                            cs:Office2013DarkGray.To="#FFABABAB"
                                            cs:Office2013LightGray.To="#FFABABAB"
                                            cs:Office2016Black.To="#60000000"
                                            cs:Office2016Colorful.To="#47000000"
                                            cs:Office2016White.To="#FFD6D6D6"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0002"
                                            Duration="0"
                                            Storyboard.TargetName="Background"
                                            Storyboard.TargetProperty="Color"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFE3E3E3"
                                            cs:Office2013LightGray.To="#FFF6F6F6"
                                            cs:Office2016Black.To="#FFD4D4D4"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_EditorPresenter"
                                             Storyboard.TargetProperty="MinWidth"
                                             To="50"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InplaceInactive">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0003"
                                            Duration="0"
                                            Storyboard.TargetName="BorderBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#00000000"
                                            cs:Office2013DarkGray.To="#00000000"
                                            cs:Office2013LightGray.To="#00000000"
                                            cs:Office2016Black.To="#00000000"
                                            cs:Office2016Colorful.To="#00000000"
                                            cs:Office2016White.To="#00000000"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0004"
                                            Duration="0"
                                            Storyboard.TargetName="Background"
                                            Storyboard.TargetProperty="Color"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFE3E3E3"
                                            cs:Office2013LightGray.To="#FFF6F6F6"
                                            cs:Office2016Black.To="#FFD4D4D4"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_EditorPresenter"
                                             Storyboard.TargetProperty="MinWidth"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <dxef:FieldInOperationButtonControl x:Name="PART_Column"
                                                Margin="0,1,0,1"
                                                Node="{TemplateBinding Node}"
                                                OperatorPropertyName="{Binding Path=Operator, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource OperatorPropertyNameConverter}}"
                                                Template="{DynamicResource {dxet:FilterControlThemeKey ResourceKey=FieldInOperationButtonTemplate}}"
                                                Visibility="{Binding Path=FieldInValue, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Border x:Name="PART_Stroke_Border"
                    BorderThickness="1"
                    Margin="0,0,3,0"
                    Visibility="{Binding Path=FieldInValue, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                <Border.Background>
                    <SolidColorBrush x:Name="Background"/>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="BorderBrush"/>
                </Border.BorderBrush>
                <ContentPresenter Name="PART_EditorPresenter"/>
            </Border>
            <ToggleButton x:Name="PART_ChangeOperandTypeButton"
                          Command="{Binding ChangeOperandTypeCommand, RelativeSource={RelativeSource TemplatedParent}}"
                          Cursor="Hand"
                          dx:FocusHelper2.Focusable="False"
                          IsChecked="{Binding Path=FieldInValue, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                          Margin="0,0,3,0"
                          Template="{DynamicResource {dxet:FilterControlThemeKey ResourceKey=ChangeOperandTypeButtonTemplate}}"
                          VerticalAlignment="Center"
                          Visibility="{Binding Path=Node.Owner.ShowOperandTypeIcon, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                <ToolTipService.ToolTip>
                    <ToolTip Visibility="{Binding Node.Owner.ShowToolTips, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding Source={x:Null}, ConverterParameter=FilterToolTipValueType, Converter={StaticResource EditorStringIdConverter}}"/>
                    </ToolTip>
                </ToolTipService.ToolTip>
            </ToggleButton>
        </StackPanel>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="PART_Stroke_Border"
                        Value="0,0,8,0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>