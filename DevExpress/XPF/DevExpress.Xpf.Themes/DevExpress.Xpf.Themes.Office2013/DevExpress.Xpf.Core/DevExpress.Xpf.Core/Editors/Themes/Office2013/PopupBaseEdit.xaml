<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2013.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/PopupBaseEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="{dxet:PopupBaseEditThemeKey ResourceKey=ThumbTemplate}" TargetType="{x:Type Thumb}">
        <Grid x:Name="mainGrid"
              Background="#00000000"
              cs:Name="Grid_0001"
              HorizontalAlignment="Right"
              RenderTransformOrigin="0.5,0.5"
              SnapsToDevicePixels="True"
              VerticalAlignment="Bottom"
              cs:Office2013DarkGray.Background="#00000000"
              cs:Office2013LightGray.Background="#00000000"
              cs:Office2016Black.Background="#00000000"
              cs:Office2016Colorful.Background="#00000000"
              cs:Office2016White.Background="#00000000"
             >
            <Path cs:Name="Path_0001"
                  Data="F1 M 6,6L 8,6L 8,8L 6,8L 6,6 Z M 6,3L 8,3L 8,5L 6,5L 6,3 Z M 6,2.38419e-006L 8,2.38419e-006L 8,2L 6,2L 6,2.38419e-006 Z M 3,3L 5,3L 5,5L 3,5L 3,3 Z M 3,6L 5,6L 5,8L 3,8L 3,6 Z M 0,6L 2,6L 2,8L 0,8L 0,6 Z "
                  Fill="#FFACACAC"
                  Height="8"
                  Stretch="Fill"
                  Width="8"
                  cs:Office2013DarkGray.Fill="#FFABABAB"
                  cs:Office2013LightGray.Fill="#FFABABAB"
                  cs:Office2016Black.Fill="#BA000000"
                  cs:Office2016Colorful.Fill="#87000000"
                  cs:Office2016White.Fill="#FFACACAC"
                 />
        </Grid>
    </ControlTemplate>

    <dx:BoolToObjectConverter x:Key="BorderThicknessConverter">
        <dx:BoolToObjectConverter.FalseValue>
            <Thickness>0,1,0,0</Thickness>
        </dx:BoolToObjectConverter.FalseValue>
        <dx:BoolToObjectConverter.TrueValue>
            <Thickness>0,0,0,1</Thickness>
        </dx:BoolToObjectConverter.TrueValue>
    </dx:BoolToObjectConverter>

    <ControlTemplate x:Key="{dxet:PopupBaseEditThemeKey ResourceKey=FooterTemplate}">
        <Border x:Name="PART_FooterLayer"
                Background="#FFFFFFFF"
                BorderBrush="#FFD6D6D6"
                BorderThickness="{Binding Path=(dxe:BaseEdit.OwnerEdit).(dxe:ActualPropertyProvider.Properties).PopupViewModel.DropOpposite, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BorderThicknessConverter}}"
                cs:Name="Border_0002"
                MinHeight="22"
                cs:Office2013DarkGray.Background="#FFE3E3E3"
                cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                cs:Office2013LightGray.Background="#FFF6F6F6"
                cs:Office2013LightGray.BorderBrush="#FFABABAB"
                cs:Office2016Black.Background="#FFB2B2B2"
                cs:Office2016Black.BorderBrush="#60000000"
                cs:Office2016Colorful.Background="#FFFFFFFF"
                cs:Office2016Colorful.BorderBrush="#47000000"
                cs:Office2016White.Background="#FFFFFFFF"
                cs:Office2016White.BorderBrush="#FFD6D6D6"
               />
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="MinHeight"
                        TargetName="PART_FooterLayer"
                        Value="44"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:PopupBaseEditThemeKey ResourceKey=CloseButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Background="Transparent"
              cs:Name="Grid_0003"
              cs:Office2013DarkGray.Background="Transparent"
              cs:Office2013LightGray.Background="Transparent"
              cs:Office2016Black.Background="Transparent"
              cs:Office2016Colorful.Background="Transparent"
              cs:Office2016White.Background="Transparent"
             >
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0001"
                                            Duration="0"
                                            Storyboard.TargetName="Round"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FFCC0000"
                                            cs:Office2013DarkGray.To="#FFCC0000"
                                            cs:Office2013LightGray.To="#FFCC0000"
                                            cs:Office2016Black.To="#FFCC0000"
                                            cs:Office2016Colorful.To="#FFCC0000"
                                            cs:Office2016White.To="#FFCC0000"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0002"
                                            Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFFFFFFF"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#E3FFFFFF"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0003"
                                            Duration="0"
                                            Storyboard.TargetName="Round"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF666666"
                                            cs:Office2013DarkGray.To="#FF666666"
                                            cs:Office2013LightGray.To="#FF666666"
                                            cs:Office2016Black.To="#FF777777"
                                            cs:Office2016Colorful.To="#FF777777"
                                            cs:Office2016White.To="#FF666666"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0004"
                                            Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFFFFFFF"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#E3FFFFFF"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="Round"
                    Background="#FFACACAC"
                    CornerRadius="16"
                    cs:Name="Border_0003"
                    Height="13"
                    Width="13"
                    cs:Office2013DarkGray.Background="#FFABABAB"
                    cs:Office2013LightGray.Background="#FFABABAB"
                    cs:Office2016Black.Background="#60000000"
                    cs:Office2016Colorful.Background="#47000000"
                    cs:Office2016White.Background="#FFACACAC"
                   >
                <Path x:Name="Glyph"
                      cs:Name="Path_0003"
                      Data="F1 M 0,0L 1,4.76837e-007L 3.5,2.5L 6,1.90735e-006L 7,1.90735e-006L 7,1L 4.5,3.5L 7,6L 7,7L 6,7L 3.5,4.5L 1,7L 2.86102e-006,7L 2.86102e-006,6L 2.5,3.5L 6.12323e-017,1L 0,0 Z  "
                      Fill="#FFFFFFFF"
                      Height="7"
                      Stretch="Fill"
                      Width="7"
                      cs:Office2013DarkGray.Fill="#FFFFFFFF"
                      cs:Office2013LightGray.Fill="#FFFFFFFF"
                      cs:Office2016Black.Fill="#E3FFFFFF"
                      cs:Office2016Colorful.Fill="#FFFFFFFF"
                      cs:Office2016White.Fill="#FFFFFFFF"
                     />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="Round"
                        Value="12"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>