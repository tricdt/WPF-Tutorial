<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=BorderMarginInMenu}">-1,1,-1,1</Thickness>

    <Style x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=TextSplitterStyleInRibbonPageGroup}" TargetType="{x:Type dxb:TextSplitterControl}">
        <Setter Property="FirstStringHorizontalAlignment" Value="Center"/>
        <Setter Property="SecondStringHorizontalAlignment" Value="Center"/>
        <Setter Property="SecondStringMargin" Value="0,-3,0,0"/>
        <Setter Property="Margin" Value="0,-2,0,0"/>
    </Style>

    <Style x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=SelectedTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter cs:Name="Setter_0001"
                Property="Foreground"
                Value="#FF3C3C3C"
                cs:Office2013DarkGray.Value="#FF262626"
                cs:Office2013LightGray.Value="#FF444444"
                cs:Office2016Black.Value="#E3000000"
                cs:Office2016Colorful.Value="#E3000000"
                cs:Office2016White.Value="#FF3C3C3C"
               />
    </Style>

    <Style x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=NormalTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter cs:Name="Setter_0002"
                Property="Foreground"
                Value="#FF3C3C3C"
                cs:Office2013DarkGray.Value="#FF262626"
                cs:Office2013LightGray.Value="#FF444444"
                cs:Office2016Black.Value="#E3000000"
                cs:Office2016Colorful.Value="#E3000000"
                cs:Office2016White.Value="#FF3C3C3C"
               />
    </Style>

    <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=CheckInMenu}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="Root"
              Background="Transparent"
              cs:Name="Grid_0001"
              MinHeight="20"
              MinWidth="20"
              cs:Office2013DarkGray.Background="Transparent"
              cs:Office2013LightGray.Background="Transparent"
              cs:Office2016Black.Background="Transparent"
              cs:Office2016Colorful.Background="Transparent"
              cs:Office2016White.Background="Transparent"
             >
            <Path cs:Name="Path_0001"
                  Data="F1 M 135,156L 135,159L 139,163L 145,156L 145,153L 139,160L 135,156 Z "
                  Fill="#FF666666"
                  Height="10"
                  Stretch="Fill"
                  Width="10"
                  cs:Office2013DarkGray.Fill="#FF666666"
                  cs:Office2013LightGray.Fill="#FF666666"
                  cs:Office2016Black.Fill="#BA000000"
                  cs:Office2016Colorful.Fill="#87000000"
                  cs:Office2016White.Fill="#FF666666"
                 />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="FlowDirection" Value="RightToLeft">
                <Setter Property="RenderTransform" TargetName="Root">
                    <Setter.Value>
                        <ScaleTransform ScaleX="-1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=GlyphCheckBorderInMenu}" TargetType="{x:Type ContentControl}">
        <Border Background="#FF666666"
                cs:Name="Border_0001"
                MinHeight="20"
                MinWidth="20"
                cs:Office2013DarkGray.Background="#FF666666"
                cs:Office2013LightGray.Background="#FF666666"
                cs:Office2016Black.Background="#FF777777"
                cs:Office2016Colorful.Background="#FF777777"
                cs:Office2016White.Background="#FF666666"
               >
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=GlyphTriStateBorderInMenu}" TargetType="{x:Type ContentControl}">
        <Border Background="#FF666666"
                cs:Name="Border_0002"
                MinHeight="20"
                MinWidth="20"
                cs:Office2013DarkGray.Background="#FF666666"
                cs:Office2013LightGray.Background="#FF666666"
                cs:Office2016Black.Background="#FF777777"
                cs:Office2016Colorful.Background="#FF777777"
                cs:Office2016White.Background="#FF666666"
               >
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarCheckItemThemeKey ResourceKey=TriStateBorderInMenu}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="Root"
              Background="Transparent"
              cs:Name="Grid_0002"
              MinHeight="20"
              MinWidth="20"
              cs:Office2013DarkGray.Background="Transparent"
              cs:Office2013LightGray.Background="Transparent"
              cs:Office2016Black.Background="Transparent"
              cs:Office2016Colorful.Background="Transparent"
              cs:Office2016White.Background="Transparent"
             >
            <Path cs:Name="Path_0002"
                  Data="F1 M 135,156L 135,159L 139,163L 145,156L 145,153L 139,160L 135,156 Z "
                  Fill="#FF666666"
                  Height="10"
                  Stretch="Fill"
                  Width="10"
                  cs:Office2013DarkGray.Fill="#FF666666"
                  cs:Office2013LightGray.Fill="#FF666666"
                  cs:Office2016Black.Fill="#BA000000"
                  cs:Office2016Colorful.Fill="#87000000"
                  cs:Office2016White.Fill="#FF666666"
                 />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="FlowDirection" Value="RightToLeft">
                <Setter Property="RenderTransform" TargetName="Root">
                    <Setter.Value>
                        <ScaleTransform ScaleX="-1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="CheckTriStateTemplate" TargetType="{x:Type ContentControl}">
        <Grid x:Name="Root"
              Background="Transparent"
              cs:Name="Grid_0003"
              MinHeight="20"
              MinWidth="20"
              RenderTransformOrigin="0.5,0.5"
              cs:Office2013DarkGray.Background="Transparent"
              cs:Office2013LightGray.Background="Transparent"
              cs:Office2016Black.Background="Transparent"
              cs:Office2016Colorful.Background="Transparent"
              cs:Office2016White.Background="Transparent"
             >
            <Border>
                <Path cs:Name="Path_0003"
                      Data="F1 M 135,156L 135,159L 139,163L 145,156L 145,153L 139,160L 135,156 Z "
                      Fill="#FF666666"
                      Height="10"
                      HorizontalAlignment="Center"
                      Stretch="Fill"
                      VerticalAlignment="Center"
                      Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.CheckVisibility), RelativeSource={RelativeSource TemplatedParent}}"
                      Width="10"
                      cs:Office2013DarkGray.Fill="#FF666666"
                      cs:Office2013LightGray.Fill="#FF666666"
                      cs:Office2016Black.Fill="#BA000000"
                      cs:Office2016Colorful.Fill="#87000000"
                      cs:Office2016White.Fill="#FF666666"
                     />
            </Border>
            <Border Background="#FF666666"
                    cs:Name="Border_0005"
                    Height="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.TriStateVisibility), RelativeSource={RelativeSource TemplatedParent}}"
                    Width="10"
                    cs:Office2013DarkGray.Background="#FF666666"
                    cs:Office2013LightGray.Background="#FF666666"
                    cs:Office2016Black.Background="#FF777777"
                    cs:Office2016Colorful.Background="#FF777777"
                    cs:Office2016White.Background="#FF666666"
                   />
            <Border Background="#FF92C0E0"
                    cs:Name="Border_0003"
                    Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.GlyphCheckVisibility), RelativeSource={RelativeSource TemplatedParent}}"
                    cs:Office2013DarkGray.Background="#5F2592DA"
                    cs:Office2013LightGray.Background="#5F2592DA"
                    cs:Office2016Black.Background="#60000000"
                    cs:Office2016Colorful.Background="#47000000"
                    cs:Office2016White.Background="#FF92C0E0"
                   >
                <ContentPresenter/>
            </Border>
            <Border Background="#FF999999"
                    cs:Name="Border_0004"
                    Opacity="0.35"
                    Visibility="{Binding Path=(dxb:BarCheckItemLinkControlStatesProvider.GlyphTriStateVisibility), RelativeSource={RelativeSource TemplatedParent}}"
                    cs:Office2013DarkGray.Background="#5F2592DA"
                    cs:Office2013LightGray.Background="#5F2592DA"
                    cs:Office2016Black.Background="#FF969696"
                    cs:Office2016Colorful.Background="#FF999999"
                    cs:Office2016White.Background="#FF999999"
                   >
                <ContentPresenter/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="FlowDirection" Value="RightToLeft">
                <Setter Property="RenderTransform" TargetName="Root">
                    <Setter.Value>
                        <ScaleTransform ScaleX="-1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>