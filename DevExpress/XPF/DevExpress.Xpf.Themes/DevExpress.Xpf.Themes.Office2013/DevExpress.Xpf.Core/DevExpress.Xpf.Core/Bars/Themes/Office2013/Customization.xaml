<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbc="http://schemas.devexpress.com/winfx/2008/xaml/bars/internal"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dxb:SizeEx x:Key="{dxbt:CustomizationThemeKey ResourceKey=CaptionEditorFloatSize}"
                Height="140"
                Width="400"/>

    <dxb:SizeEx x:Key="{dxbt:CustomizationThemeKey ResourceKey=CustomizationFormFloatSize}"
                Height="400"
                Width="450"/>

    <sys:Double x:Key="{dxbt:CustomizationThemeKey ResourceKey=CustomizationFormMinWidth}">300</sys:Double>

    <sys:Double x:Key="{dxbt:CustomizationThemeKey ResourceKey=CustomizationFormMinHeight}">300</sys:Double>

    <sys:Boolean x:Key="{dxbt:CustomizationThemeKey ResourceKey=ColorizeGlyph}">False</sys:Boolean>

    <ControlTemplate x:Key="{dxbt:CustomizationThemeKey ResourceKey=DragElementTemplate}" TargetType="{x:Type dxbc:BarItemDragElementContent}">
        <Grid SnapsToDevicePixels="True">
            <Grid.Resources>
                <sys:Int32 x:Key="int0">0</sys:Int32>
            </Grid.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="AppType">
                    <VisualState x:Name="Standalong"/>
                    <VisualState x:Name="BrowserHosted">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DragIcon" Storyboard.TargetProperty="(Grid.Column)">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{StaticResource int0}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_DragIcon" Storyboard.TargetProperty="(Grid.Row)">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{StaticResource int0}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <Border x:Name="Border"
                        Background="#FFFFFFFF"
                        BorderBrush="#FFB9B9B9"
                        BorderThickness="1"
                        cs:Name="Border_0002"
                        cs:Office2013DarkGray.Background="#FFE3E3E3"
                        cs:Office2013DarkGray.BorderBrush="#FFABABAB"
                        cs:Office2013LightGray.Background="#FFF6F6F6"
                        cs:Office2013LightGray.BorderBrush="#FFABABAB"
                        cs:Office2016Black.Background="#FFD4D4D4"
                        cs:Office2016Black.BorderBrush="#60000000"
                        cs:Office2016Colorful.Background="#FFFFFFFF"
                        cs:Office2016Colorful.BorderBrush="#47000000"
                        cs:Office2016White.Background="#FFFFFFFF"
                        cs:Office2016White.BorderBrush="#FFB9B9B9"
                       />
                <StackPanel Orientation="Horizontal">
                    <Image Margin="5,4,0,4"
                           Source="{Binding Path=Glyph}"
                           VerticalAlignment="Center"/>
                    <TextBlock cs:Name="TextBlock_0001"
                               Foreground="#FF3C3C3C"
                               HorizontalAlignment="Left"
                               Margin="5,4,10,4"
                               Text="{Binding Path=Content}"
                               VerticalAlignment="Top"
                               cs:Office2013DarkGray.Foreground="#FF262626"
                               cs:Office2013LightGray.Foreground="#FF444444"
                               cs:Office2016Black.Foreground="#E3000000"
                               cs:Office2016Colorful.Foreground="#E3000000"
                               cs:Office2016White.Foreground="#FF3C3C3C"
                              />
                </StackPanel>
            </Grid>
            <dx:DragIconControl x:Name="PART_DragIcon"
                                DragType="{Binding Path=(dxb:BarDragProvider.DragType), RelativeSource={RelativeSource TemplatedParent}}"
                                Grid.Column="1"
                                Grid.Row="1"
                                HorizontalAlignment="Right"
                                Margin="-12,-12,0,0"
                                VerticalAlignment="Bottom"/>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>