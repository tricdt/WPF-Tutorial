<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2013.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Themes/Generic/CustomTemplates.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <ControlTemplate x:Key="{dxet:SearchControlThemeKey ResourceKey=ClearButtonTemplate}" TargetType="{x:Type dxe:ButtonClose}">
        <Grid Background="#00000000"
              cs:Name="Grid_0001"
              Opacity="0.5"
              cs:Office2013DarkGray.Background="#00000000"
              cs:Office2013LightGray.Background="#00000000"
              cs:Office2016Black.Background="#00000000"
              cs:Office2016Colorful.Background="#00000000"
              cs:Office2016White.Background="#00000000"
             >
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0001"
                                            Duration="0"
                                            Storyboard.TargetName="Round"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF0072C6"
                                            cs:Office2013DarkGray.To="#FF333333"
                                            cs:Office2013LightGray.To="#FF333333"
                                            cs:Office2016Black.To="#FF000000"
                                            cs:Office2016Colorful.To="#FF000000"
                                            cs:Office2016White.To="#FF0072C6"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0002"
                                            Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFE3E3E3"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#E3FFFFFF"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0003"
                                            Duration="0"
                                            Storyboard.TargetName="Round"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF666666"
                                            cs:Office2013DarkGray.To="#FF666666"
                                            cs:Office2013LightGray.To="#FF666666"
                                            cs:Office2016Black.To="#FF777777"
                                            cs:Office2016Colorful.To="#FF777777"
                                            cs:Office2016White.To="#FF666666"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0004"
                                            Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"
                                            cs:Office2013DarkGray.To="#FFE3E3E3"
                                            cs:Office2013LightGray.To="#FFFFFFFF"
                                            cs:Office2016Black.To="#E3FFFFFF"
                                            cs:Office2016Colorful.To="#FFFFFFFF"
                                            cs:Office2016White.To="#FFFFFFFF"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid x:Name="Grid1"
                  Height="13"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="13">
                <Border x:Name="Round"
                        Background="#FF666666"
                        CornerRadius="16"
                        cs:Name="Border_0001"
                        Height="13"
                        Width="13"
                        cs:Office2013DarkGray.Background="#FF666666"
                        cs:Office2013LightGray.Background="#FF666666"
                        cs:Office2016Black.Background="#FF777777"
                        cs:Office2016Colorful.Background="#FF777777"
                        cs:Office2016White.Background="#FF666666"
                       >
                    <Path x:Name="Glyph"
                          cs:Name="Path_0001"
                          Data="F1 M 0,0L 1,4.76837e-007L 3.5,2.5L 6,1.90735e-006L 7,1.90735e-006L 7,1L 4.5,3.5L 7,6L 7,7L 6,7L 3.5,4.5L 1,7L 2.86102e-006,7L 2.86102e-006,6L 2.5,3.5L 6.12323e-017,1L 0,0 Z "
                          Fill="#FFFFFFFF"
                          Height="7"
                          Stretch="Fill"
                          Width="7"
                          cs:Office2013DarkGray.Fill="#FFE3E3E3"
                          cs:Office2013LightGray.Fill="#FFFFFFFF"
                          cs:Office2016Black.Fill="#E3FFFFFF"
                          cs:Office2016Colorful.Fill="#FFFFFFFF"
                          cs:Office2016White.Fill="#FFFFFFFF"
                         />
                </Border>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin"
                        TargetName="Grid1"
                        Value="12"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!--#include ..\Generic\CustomTemplates.xaml-->

</ResourceDictionary>