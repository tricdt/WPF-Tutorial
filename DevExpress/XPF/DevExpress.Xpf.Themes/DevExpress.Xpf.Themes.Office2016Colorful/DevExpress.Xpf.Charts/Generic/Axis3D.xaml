<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/charts/themekeys" xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/charts" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <ResourceDictionary.MergedDictionaries>
    <dxdst:ResourceDictionaryEx Source="{core:ChartsResource themes/Generic/ToolTip.xaml}" />
  </ResourceDictionary.MergedDictionaries>
  <core:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
  <core:BoolToVisibilityInverseConverter x:Key="boolToVisibilityInverseConverter" />
  <Style x:Key="Axis3DStyle" TargetType="{x:Type local:Axis3D}">
    <Setter Property="MinorCount" Value="4" />
    <Setter Property="InterlacedBrush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=Axis3DInterlacedBrush}}" />
    <Setter Property="GridLinesBrush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=GridLineBrush}}" />
    <Setter Property="GridLinesMinorBrush" Value="{DynamicResource {dxt:ChartBrushesThemeKey ResourceKey=MinorGridLineBrush}}" />
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Charts.AxisX3D}" TargetType="{x:Type local:AxisX3D}" BasedOn="{StaticResource Axis3DStyle}">
    <Setter Property="Interlaced" Value="false" />
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Charts.AxisY3D}" TargetType="{x:Type local:AxisY3D}" BasedOn="{StaticResource Axis3DStyle}">
    <Setter Property="Interlaced" Value="true" />
    <Setter Property="GridLinesVisible" Value="True" />
    <Setter Property="GridLinesLineStyle">
      <Setter.Value>
        <local:LineStyle Thickness="3" />
      </Setter.Value>
    </Setter>
  </Style>
  <DataTemplate x:Key="{dxt:ChartControlThemeKey ResourceKey=Crosshair3DAxisLabelTemplate}">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Polygon Grid.Column="0" Points="12,0 0,5, 12,10" Fill="{Binding Path=PresentationData.Background}" Stretch="Fill" Visibility="{Binding IsInvert, Converter={StaticResource ResourceKey=boolToVisibilityConverter}}" />
      <ContentPresenter Grid.Column="1" Content="{Binding Path=Content.PresentationData, RelativeSource={RelativeSource TemplatedParent}}" ContentTemplate="{Binding RelativeSource={RelativeSource Self}, Path=Content.CrosshairAxisLabelTemplate}" />
      <Polygon Grid.Column="2" Points="0,0 12,5, 0,10" Fill="{Binding Path=PresentationData.Background}" Stretch="Fill" Visibility="{Binding IsInvert, Converter={StaticResource ResourceKey=boolToVisibilityInverseConverter}}" />
    </Grid>
  </DataTemplate>
  <Style x:Key="Axis3DBaseStyle" TargetType="{x:Type local:Axis3DBase}" BasedOn="{StaticResource Axis3DStyle}">
    <Setter Property="CrosshairLabelTemplate" Value="{StaticResource CrosshairAxisLabelPresentationTemplate}" />
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Charts.ZAxis3D}" TargetType="{x:Type local:ZAxis3D}" BasedOn="{StaticResource Axis3DBaseStyle}">
    <Setter Property="Interlaced" Value="true" />
    <Setter Property="GridLinesVisible" Value="True" />
    <Setter Property="GridLinesLineStyle">
      <Setter.Value>
        <local:LineStyle Thickness="2" />
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Charts.ArgumentAxis3D}" TargetType="{x:Type local:ArgumentAxis3D}" BasedOn="{StaticResource Axis3DBaseStyle}">
    <Setter Property="Interlaced" Value="false" />
    <Setter Property="GridLinesVisible" Value="True" />
  </Style>
</ResourceDictionary>