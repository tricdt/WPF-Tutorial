<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:lc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Office2007Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Office2007.LayerSeparator" TargetType="lc:LayerSeparator">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Thickness" Value="3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:LayerSeparator">
                    <core:Container>
                        <core:Container.Resources>
                            <SolidColorBrush x:Key="SeparatorBrush"
                                             x:Name="SeparatorBrush"
                                             Color="{StaticResource LayerSeparator.NormalColor}"/>
                        </core:Container.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="SeparatorBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource LayerSeparator.MouseOverColor}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <core:Container x:Name="HorizontalRootElement" Cursor="SizeNS">
                            <Rectangle Fill="Transparent" Margin="0,-2"/>
                            <Rectangle Fill="{StaticResource SeparatorBrush}"
                                       Height="{TemplateBinding Thickness}"
                                       RadiusX="1.5"
                                       RadiusY="1.5"/>
                        </core:Container>
                        <core:Container x:Name="VerticalRootElement" Cursor="SizeWE">
                            <Rectangle Fill="Transparent" Margin="-2,0"/>
                            <Rectangle Fill="{StaticResource SeparatorBrush}"
                                       RadiusX="1.5"
                                       RadiusY="1.5"
                                       Width="{TemplateBinding Thickness}"/>
                        </core:Container>
                    </core:Container>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Office2007.ElementSizer" TargetType="lc:ElementSizer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:ElementSizer">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <Border.Resources>
                            <SolidColorBrush x:Key="GlyphBrush"
                                             x:Name="GlyphBrush"
                                             Color="{StaticResource ElementSizer.GlyphNormalColor}"/>
                            <SolidColorBrush x:Key="GlyphBackgroundBrush" Color="{StaticResource ElementSizer.GlyphBackgroundColor}"/>
                            <core:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                        </Border.Resources>
                        <core:Container UseLayoutRounding="True">
                            <core:Container x:Name="HorizontalRootElement"
                                            Cursor="SizeNS"
                                            Height="4"
                                            Width="16">
                                <Grid Visibility="{Binding ShowResizingHandle, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Path Data="F1 M 558,364L 558,366L 556,366L 556,364L 558,364 Z M 554,364L 554,366L 552,366L 552,364L 554,364 Z M 550,364L 550,366L 548,366L 548,364L 550,364 Z M 546,364L 546,366L 544,366L 544,364L 546,364 Z "
                                          Fill="{StaticResource GlyphBrush}"
                                          Margin="1"
                                          Stretch="Fill"/>
                                    <Path Data="F1 M 559,365L 559,367L 557,367L 557,365L 559,365 Z M 555,365L 555,367L 553,367L 553,365L 555,365 Z M 551,365L 551,367L 549,367L 549,365L 551,365 Z M 547,365L 547,367L 545,367L 545,365L 547,365 Z "
                                          Fill="{StaticResource GlyphBackgroundBrush}"
                                          Margin="2,2,0,0"
                                          Stretch="Fill"/>
                                </Grid>
                            </core:Container>
                            <core:Container x:Name="VerticalRootElement"
                                            Cursor="SizeWE"
                                            Height="16"
                                            Width="4">
                                <Grid Visibility="{Binding ShowResizingHandle, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Path Data="F1 M 538,357L 540,357L 540,359L 538,359L 538,357 Z M 538,361L 540,361L 540,363L 538,363L 538,361 Z M 538,365L 540,365L 540,367L 538,367L 538,365 Z M 538,369L 540,369L 540,371L 538,371L 538,369 Z "
                                          Fill="{StaticResource GlyphBrush}"
                                          Margin="1"
                                          Stretch="Fill"/>
                                    <Path Data="F1 M 539,358L 541,358L 541,360L 539,360L 539,358 Z M 539,362L 541,362L 541,364L 539,364L 539,362 Z M 539,366L 541,366L 541,368L 539,368L 539,366 Z M 539,370L 541,370L 541,372L 539,372L 539,370 Z "
                                          Fill="{StaticResource GlyphBackgroundBrush}"
                                          Margin="2,2,0,0"
                                          Stretch="Fill"/>
                                </Grid>
                            </core:Container>
                        </core:Container>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="GlyphBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource ElementSizer.GlyphMouseOverColor}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Office2007.GroupBoxButton" TargetType="lc:GroupBoxButton">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:GroupBoxButton">
                    <core:Container Background="Transparent">
                        <core:Container.Resources>
                            <SolidColorBrush x:Key="ElementBrush1"
                                             x:Name="ElementBrush1"
                                             Color="{StaticResource GroupBoxButton.NormalColor1}"/>
                            <SolidColorBrush x:Key="ElementBrush2"
                                             x:Name="ElementBrush2"
                                             Color="{StaticResource GroupBoxButton.NormalColor2}"/>
                        </core:Container.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush1"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.MouseOverColor}"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush2"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.MouseOverColor}"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush1"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.PressedColor}"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="ElementBrush2"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource GroupBoxButton.PressedColor}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="UnminimizeElement"
                              Height="11"
                              Margin="0,1,0,0"
                              Width="14">
                            <Path Data="F1 M 1385,811L 1392,818L 1392,818L 1399,811L 1395,811L 1392,814L 1392,814L 1389,811L 1385,811 Z "
                                  Fill="#5AFFFFFF"
                                  Margin="0,4,0,0"
                                  Stretch="Fill"/>
                            <Path Data="F1 M 1385,807L 1392,814L 1392,814L 1399,807L 1395,807L 1392,810L 1392,810L 1389,807L 1385,807 Z "
                                  Fill="#5AFFFFFF"
                                  Margin="0,0,0,4"
                                  Stretch="Fill"/>
                            <Path Data="F1 M 1392,817L 1387,812L 1389,812L 1392,815L 1395,812L 1397,812L 1392,817 Z M 1392,813L 1387,808L 1389,808L 1392,811L 1395,808L 1397,808L 1392,813 Z "
                                  Fill="{StaticResource ElementBrush1}"
                                  Margin="2,1,2,1"
                                  Stretch="Fill"/>
                        </Grid>
                        <Grid x:Name="MinimizeElement"
                              Height="11"
                              Margin="0,0,0,1"
                              Width="14">
                            <Path Data="F1 M 1376,790L 1369,783L 1369,783L 1362,790L 1366,790L 1369,787L 1369,787L 1372,790L 1376,790 Z "
                                  Fill="#5AFFFFFF"
                                  Margin="0,0,0,4"
                                  Stretch="Fill"/>
                            <Path Data="F1 M 1376,794L 1369,787L 1369,787L 1362,794L 1366,794L 1369,791L 1369,791L 1372,794L 1376,794 Z "
                                  Fill="#5AFFFFFF"
                                  Margin="0,4,0,0"
                                  Stretch="Fill"/>
                            <Path Data="F1 M 1369,784L 1369,784L 1369,784L 1374,789L 1372,789L 1369,786L 1366,789L 1364,789L 1369,784L 1369,784 Z M 1369,788L 1369,788L 1369,788L 1374,793L 1372,793L 1369,790L 1366,793L 1364,793L 1369,788L 1369,788 Z "
                                  Fill="{StaticResource ElementBrush1}"
                                  Margin="2,1,2,1"
                                  Stretch="Fill"/>
                        </Grid>
                        <Grid x:Name="UnmaximizeElement"
                              Height="15"
                              Margin="1,0,0,1"
                              Width="15">
                            <Path Data="F1 M 1395,813L 1403,821L 1396,821L 1396,828L 1388,820L 1395,820L 1395,813 Z "
                                  Fill="#FFFFFFFF"
                                  Opacity="0.15"
                                  Stretch="Fill"/>
                            <Path Data="F1 M 1396,815L 1401,820L 1396,820L 1396,815 Z M 1395,826L 1390,821L 1395,821L 1395,826 Z "
                                  Fill="{StaticResource ElementBrush2}"
                                  Height="11"
                                  Stretch="Fill"
                                  Width="11"/>
                        </Grid>
                        <Grid x:Name="MaximizeElement"
                              Height="10"
                              Width="10">
                            <Path Data="F1 M 1386,825L 1377,816L 1386,816L 1386,825 Z M 1376,817L 1385,826L 1376,826L 1376,817 Z "
                                  Fill="#FFFFFFFF"
                                  Opacity="0.15"
                                  Stretch="Fill"/>
                            <Path Data="F1 M 1385,823L 1379,817L 1385,817L 1385,823 Z M 1377,819L 1383,825L 1377,825L 1377,819 Z "
                                  Fill="{StaticResource ElementBrush2}"
                                  Height="8"
                                  Stretch="Fill"
                                  Width="8"/>
                        </Grid>
                    </core:Container>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="groupBoxNormalTemplate" TargetType="lc:GroupBox">
        <core:Container>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <VisualState x:Name="NormalLayout"/>
                    <VisualState x:Name="MinimizedLayout">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TitleStretcher"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="SeparatorElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ContentElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MaximizedLayout"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <lc:GroupBoxShadow CornerRadius="{TemplateBinding CornerRadius}"
                               Offset="{TemplateBinding ShadowOffset}"
                               Visibility="{TemplateBinding ShadowVisibility}"/>
            <Border x:Name="BorderElement"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    core:BorderExtensions.ClipChild="True"
                    CornerRadius="{TemplateBinding CornerRadius}">
                <lc:LayoutControl core:DXSerializer.Enabled="False"
                                  ItemSpace="0"
                                  Orientation="Vertical"
                                  Padding="0"
                                  ScrollBars="None">
                    <lc:LayoutGroup Background="{TemplateBinding TitleBackground}"
                                    ItemSpace="0"
                                    Padding="9,2"
                                    Visibility="{TemplateBinding TitleVisibility}">
                        <Rectangle x:Name="TitleStretcher"
                                   Visibility="Collapsed"
                                   Width="0"/>
                        <core:DXContentPresenter Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                 Foreground="{TemplateBinding TitleForeground}"
                                                 Margin="2,0"
                                                 VerticalAlignment="Center"/>
                        <lc:GroupBoxButton x:Name="MinimizeElement"
                                           AutomationProperties.Name="Minimize"
                                           HorizontalAlignment="Right"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MinimizeElementVisibility}"/>
                        <lc:GroupBoxButton x:Name="MaximizeElement"
                                           AutomationProperties.Name="Maximize"
                                           HorizontalAlignment="Right"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MaximizeElementVisibility}"/>
                    </lc:LayoutGroup>
                    <Rectangle x:Name="SeparatorElement"
                               Fill="{TemplateBinding SeparatorBrush}"
                               Height="1"
                               Visibility="{TemplateBinding TitleVisibility}"/>
                    <core:DXContentPresenter x:Name="ContentElement"
                                             Content="{TemplateBinding Content}"
                                             ContentTemplate="{TemplateBinding CurrentContentTemplate}"
                                             Margin="{TemplateBinding Padding}"/>
                </lc:LayoutControl>
            </Border>
        </core:Container>
    </ControlTemplate>

    <ControlTemplate x:Key="groupBoxLightTemplate" TargetType="lc:GroupBox">
        <core:Container>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <VisualState x:Name="NormalLayout"/>
                    <VisualState x:Name="MinimizedLayout">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TitleStretcher"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ContentElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MaximizedLayout"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="BorderElement"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    core:BorderExtensions.ClipChild="True"
                    CornerRadius="{TemplateBinding CornerRadius}">
                <lc:LayoutControl core:DXSerializer.Enabled="False"
                                  ItemSpace="0"
                                  Orientation="Vertical"
                                  Padding="0"
                                  ScrollBars="None">
                    <lc:LayoutGroup ItemSpace="0"
                                    Padding="9,2"
                                    Visibility="{TemplateBinding TitleVisibility}">
                        <lc:GroupBoxButton x:Name="MinimizeElement"
                                           AutomationProperties.Name="Minimize"
                                           HorizontalAlignment="Left"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MinimizeElementVisibility}"/>
                        <Rectangle x:Name="TitleStretcher"
                                   Visibility="Collapsed"
                                   Width="0"/>
                        <core:DXContentPresenter Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                 Foreground="{TemplateBinding TitleForeground}"
                                                 Margin="2,0"
                                                 VerticalAlignment="Center"/>
                        <lc:GroupBoxButton x:Name="MaximizeElement"
                                           AutomationProperties.Name="Maximize"
                                           HorizontalAlignment="Right"
                                           Margin="2,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{TemplateBinding MaximizeElementVisibility}"/>
                    </lc:LayoutGroup>
                    <core:DXContentPresenter x:Name="ContentElement"
                                             Content="{TemplateBinding Content}"
                                             ContentTemplate="{TemplateBinding CurrentContentTemplate}"
                                             Margin="{TemplateBinding Padding}"/>
                </lc:LayoutControl>
            </Border>
        </core:Container>
    </ControlTemplate>

    <Style x:Key="Office2007.GroupBox" TargetType="lc:GroupBox">
        <Setter Property="Background" Value="{StaticResource GroupBox.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GroupBox.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="MinimizationDirection" Value="Vertical"/>
        <Setter Property="Padding" Value="11"/>
        <Setter Property="SeparatorBrush" Value="{StaticResource GroupBox.SeparatorBrush}"/>
        <Setter Property="ShadowOffset" Value="3"/>
        <Setter Property="TitleBackground" Value="{StaticResource GroupBox.TitleBackground}"/>
        <Setter Property="TitleForeground" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="NormalTemplate" Value="{StaticResource groupBoxNormalTemplate}"/>
        <Setter Property="LightTemplate" Value="{StaticResource groupBoxLightTemplate}"/>
        <Style.Triggers>
            <Trigger Property="DisplayMode" Value="Light">
                <Setter Property="CornerRadius" Value="0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Office2007.GroupSeparator" TargetType="lc:GroupSeparator">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="lc:GroupSeparator">
                    <core:Container>
                        <Border x:Name="HorizontalRootElement"
                                Background="{StaticResource GroupSeparator.Brush1}"
                                BorderBrush="{StaticResource GroupSeparator.Brush2}"
                                BorderThickness="0,0,0,1"
                                Height="2"
                                Margin="0,3"/>
                        <Border x:Name="VerticalRootElement"
                                Background="{StaticResource GroupSeparator.Brush1}"
                                BorderBrush="{StaticResource GroupSeparator.Brush2}"
                                BorderThickness="0,0,1,0"
                                Margin="3,0"
                                Width="2"/>
                    </core:Container>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>