<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2007Silver.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Office2007Generic/ImageEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}" Color="White"/>

    <Style x:Key="{dxet:ImageEditThemeKey ResourceKey=ContentStyle}"/>

    <dx:WpfSvgPalette x:Key="{dxet:ImageEditThemeKey ResourceKey=ToolButtonPalette}">
        <SolidColorBrush x:Key="BlackColor" Color="#FFD4D4D4"/>
        <SolidColorBrush x:Key="WhiteColor" Color="#FF444444"/>
        <SolidColorBrush x:Key="RedColor" Color="#FFDB6553"/>
        <SolidColorBrush x:Key="YellowColor" Color="#FFDCA453"/>
        <SolidColorBrush x:Key="GreenColor" Color="#FF53A36C"/>
        <SolidColorBrush x:Key="BlueColor" Color="#FF65A4D9"/>
    </dx:WpfSvgPalette>

    <ControlTemplate x:Key="{dxet:CameraControlThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="RootElement">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="InternalFocusStates">
                    <VisualState x:Name="InternalFocused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusElement"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InternalUnfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="FocusElement"
                    Background="#FFFFC200"
                    CornerRadius="3"
                    Margin="-2"
                    Opacity="0"/>
            <Border Background="{DynamicResource {dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}}"
                    BorderBrush="#ff828790"
                    BorderThickness="1"
                    Padding="4">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:ImageEditThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="RootElement">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="InternalFocusStates">
                    <VisualState x:Name="InternalFocused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusElement"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InternalUnfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="FocusElement"
                    Background="#FFFFC200"
                    CornerRadius="3"
                    Margin="-2"
                    Opacity="0"/>
            <Border Background="{DynamicResource {dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}}"
                    BorderBrush="#ff828790"
                    BorderThickness="1"
                    Padding="4">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=CropMenuForegroundBrush}" Color="#FFD4D4D4"/>

    <Thickness x:Key="{dxet:ImageEditThemeKey ResourceKey=CropMenuTextMargin}">0</Thickness>

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=ImageEditToolSeparatorFillBrush}" Color="#3FFFFFFF"/>

</ResourceDictionary>