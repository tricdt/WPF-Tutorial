<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxepc="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2007Silver.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Office2007Generic/DateEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <!--BEGIN TOSLONLY REPLACE 'RepeatButton'wpfcompatibility:SLRepeatButton'-->

    <dx:EditorStringIdConverter x:Key="EditorStringIdConverter"/>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=ClearButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Background="#00000000"
              Height="Auto"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Width="Auto">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFC1A965"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border1"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFFFBE5" Offset="0"/>
                                            <GradientStop Color="#FFFCEBB7" Offset="1"/>
                                            <GradientStop Color="#FFFADF8F" Offset="0.5"/>
                                            <GradientStop Color="#FFF4C233" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border2"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFFFEFB" Offset="0"/>
                                            <GradientStop Color="#FFFFF5D7" Offset="1"/>
                                            <GradientStop Color="#FFFFF6DC" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF7B6645" Offset="0"/>
                                            <GradientStop Color="#FFA78E66" Offset="1"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="border1"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border2"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFC18C5D" Offset="0"/>
                                            <GradientStop Color="#FFFFC14C" Offset="1"/>
                                            <GradientStop Color="#FFFFAB49" Offset="0.5"/>
                                            <GradientStop Color="#FFFF8F08" Offset="0.5"/>
                                            <GradientStop Color="#FFFCB06A" Offset="0.1"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="border"
                    Background="#FF8D949D"
                    CornerRadius="2,2,2,2"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    Padding="1,1,1,1"
                    VerticalAlignment="Stretch"
                    Width="Auto">
                <Border x:Name="border2"
                        CornerRadius="1,1,1,1"
                        Height="Auto"
                        Padding="1,1,1,1"
                        Width="Auto">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF9FCFF" Offset="0"/>
                            <GradientStop Color="#FFF4F8FF" Offset="1"/>
                            <GradientStop Color="#FFF6FAFF" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="border1"
                            CornerRadius="1,1,1,1"
                            Height="Auto"
                            Width="Auto">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF5F7F9" Offset="0"/>
                                <GradientStop Color="#FFF0F4F9" Offset="1"/>
                                <GradientStop Color="#FFECF0F5" Offset="0.5"/>
                                <GradientStop Color="#FFCBD2DB" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <dx:ContentContainer x:Name="Content" Foreground="#FF000000">
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  HorizontalAlignment="Center"
                                  Margin="16,2,16,3"
                                  VerticalAlignment="Center"/>
            </dx:ContentContainer>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=LeftArrowTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,0,0,0"
              SnapsToDevicePixels="True"
              Width="Auto">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF000000"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF6F9DD9"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="back"
                    Background="#00000000"
                    CornerRadius="0,0,0,0"
                    Height="16"
                    HorizontalAlignment="Stretch"
                    Visibility="Visible"
                    Width="16">
                <Path x:Name="path"
                      Data="F1M1334,811L1330,807 1334,803 1334,811z"
                      Height="8"
                      Stretch="Fill"
                      Width="4">
                    <Path.Fill>
                        <SolidColorBrush x:Name="pathFill" Color="#FF9199A4"/>
                    </Path.Fill>
                </Path>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=RightArrowTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,0,0,0"
              SnapsToDevicePixels="True"
              Width="Auto">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF000000"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF6F9DD9"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="back"
                    Background="#00000000"
                    CornerRadius="0,0,0,0"
                    Height="16"
                    HorizontalAlignment="Stretch"
                    Visibility="Visible"
                    Width="16">
                <Path x:Name="path"
                      Data="F1M1340,804L1344,808 1340,812 1340,804z"
                      Height="8"
                      Stretch="Fill"
                      Width="4">
                    <Path.Fill>
                        <SolidColorBrush x:Name="pathFill" Color="#FF9199A4"/>
                    </Path.Fill>
                </Path>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=MonthInfoDelimeter}">
        <Border Background="#FFB9BFC8"
                BorderBrush="{x:Null}"
                BorderThickness="0,0,0,0"
                Height="1"
                Margin="0,0,0,4"
                Padding="0,0,0,0"
                SnapsToDevicePixels="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=HeaderButtonTemplate}" TargetType="{x:Type Button}">
        <Grid Height="Auto"
              Margin="0,0,0,0"
              SnapsToDevicePixels="True"
              Width="Auto">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="Content"
                                                           Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FF063a9a"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <dx:ContentContainer x:Name="Content" Foreground="#FF0066cc">
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,0"
                                  VerticalAlignment="Center"
                                  Width="Auto"/>
            </dx:ContentContainer>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=HeaderButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=HeaderButtonTemplate}}"/>
        <Setter Property="Background" Value="#00000000"/>
        <Setter Property="dx:FocusHelper2.Focusable" Value="False"/>
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=LeftArrowStyle}" TargetType="{x:Type RepeatButton}">
        <Setter Property="ClickMode" Value="Press"/>
        <Setter Property="Delay" Value="400"/>
        <Setter Property="Interval" Value="400"/>
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=LeftArrowTemplate}}"/>
        <Setter Property="dx:FocusHelper2.Focusable" Value="False"/>
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=RightArrowStyle}" TargetType="{x:Type RepeatButton}">
        <Setter Property="ClickMode" Value="Press"/>
        <Setter Property="Delay" Value="400"/>
        <Setter Property="Interval" Value="400"/>
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=RightArrowTemplate}}"/>
        <Setter Property="dx:FocusHelper2.Focusable" Value="False"/>
    </Style>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=CurrentDateButtonTemplate}" TargetType="{x:Type Button}">
        <ContentPresenter Content="{TemplateBinding Content}"
                          HorizontalAlignment="Center"
                          SnapsToDevicePixels="True"/>
    </ControlTemplate>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=CurrentDateButtonStyle}"
           BasedOn="{StaticResource {dxet:DateEditThemeKey ResourceKey=HeaderButtonStyle}}"
           TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=CurrentDateButtonTemplate}}"/>
    </Style>

    <Style x:Key="{dxet:DateEditThemeKey ResourceKey=ClearButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{DynamicResource {dxet:DateEditThemeKey ResourceKey=ClearButtonTemplate}}"/>
        <Setter Property="Background" Value="#00000000"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
        <Setter Property="dx:FocusHelper2.Focusable" Value="false"/>
    </Style>

    <ControlTemplate x:Key="{dxet:DateEditThemeKey ResourceKey=CalendarTemplate}" TargetType="{x:Type dxepc:DateEditCalendar}">
        <Border Background="#00FFFFFF"
                CornerRadius="0,0,0,0"
                Height="Auto"
                SnapsToDevicePixels="True"
                Width="Auto">
            <StackPanel Background="{x:Null}"
                        Height="Auto"
                        Margin="0,0,0,0"
                        Width="Auto">
                <Border Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0,0,0,0"
                        Height="Auto"
                        Visibility="Visible"
                        Width="Auto">
                    <Button x:Name="PART_Today"
                            BorderBrush="{x:Null}"
                            BorderThickness="0,0,0,0"
                            Content="{TemplateBinding DateTimeText}"
                            Foreground="#FF000000"
                            Height="Auto"
                            Margin="4,4,4,0"
                            Style="{DynamicResource {dxet:DateEditThemeKey IsVisibleInBlend=True, ResourceKey=HeaderButtonStyle}}"
                            Width="Auto"/>
                </Border>
                <Border Background="{x:Null}"
                        Height="Auto"
                        Padding="0,0,0,0"
                        Visibility="Visible"
                        Width="Auto">
                    <Grid Background="#FFDCDEE3"
                          Height="Auto"
                          Margin="4,4,4,0"
                          Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <RepeatButton x:Name="PART_LeftArrow"
                                      Grid.Column="0"
                                      Margin="2,0,0,0"
                                      Style="{DynamicResource {dxet:DateEditThemeKey IsVisibleInBlend=True, ResourceKey=LeftArrowStyle}}"/>
                        <Button x:Name="PART_CurrentDate"
                                Content="{TemplateBinding CurrentDateText}"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Margin="0,2,0,2"
                                Style="{DynamicResource {dxet:DateEditThemeKey IsVisibleInBlend=True, ResourceKey=CurrentDateButtonStyle}}"/>
                        <RepeatButton x:Name="PART_RightArrow"
                                      Grid.Column="2"
                                      Margin="0,0,2,0"
                                      Style="{DynamicResource {dxet:DateEditThemeKey IsVisibleInBlend=True, ResourceKey=RightArrowStyle}}"/>
                    </Grid>
                </Border>
                <Border Background="{x:Null}">
                    <Grid Margin="12,4,12,8">
                        <dxepc:DateEditCalendarContent IsEnabled="False"
                                                       Opacity="0"
                                                       State="Month"
                                                       Template="{TemplateBinding MonthInfoTemplate}"/>
                        <dxepc:DateEditCalendarContent IsEnabled="False"
                                                       Opacity="0"
                                                       State="Year"
                                                       Template="{TemplateBinding YearInfoTemplate}"/>
                        <dxepc:DateEditCalendarContent IsEnabled="False"
                                                       Opacity="0"
                                                       State="Years"
                                                       Template="{TemplateBinding YearsInfoTemplate}"/>
                        <dxepc:DateEditCalendarContent IsEnabled="False"
                                                       Opacity="0"
                                                       State="YearsGroup"
                                                       Template="{TemplateBinding YearsGroupInfoTemplate}"/>
                        <dxepc:DateEditCalendarTransferControl x:Name="PART_CalendarTransferContent"
                                                               Height="Auto"
                                                               Style="{TemplateBinding CalendarTransferStyle}"
                                                               Visibility="Visible"
                                                               Width="Auto"/>
                    </Grid>
                </Border>
                <Border Background="{x:Null}"
                        CornerRadius="0,0,0,0"
                        Height="Auto"
                        Padding="0,0,0,0"
                        Visibility="Visible"
                        Width="Auto">
                    <Button x:Name="PART_Clear"
                            BorderBrush="{x:Null}"
                            BorderThickness="0,0,0,0"
                            Content="{Binding Path=IsTabStop, RelativeSource={RelativeSource Self}, ConverterParameter=Clear, Converter={StaticResource EditorStringIdConverter}}"
                            Height="Auto"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,8"
                            Style="{DynamicResource {dxet:DateEditThemeKey IsVisibleInBlend=True, ResourceKey=ClearButtonStyle}}"
                            VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!--END TOSLONLY REPLACE 'RepeatButton'wpfcompatibility:SLRepeatButton'-->

</ResourceDictionary>