<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="ProgressBarIndicatorAnimatedFill"
                         EndPoint="0,0"
                         MappingMode="Absolute"
                         StartPoint="-100,0">
        <GradientStop Color="#00000000" Offset="0"/>
        <GradientStop Color="#FF000000" Offset="0.4"/>
        <GradientStop Color="#FF000000" Offset="0.6"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <Style x:Key="{dxt:DefaultStyleThemeKey FullName=System.Windows.Controls.ProgressBar}" TargetType="{x:Type ProgressBar}">
        <Setter Property="Background" Value="#FFFFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                    <GradientStop Color="#FF07B01F" Offset="0"/>
                    <GradientStop Color="#FF07AD1E" Offset="1"/>
                    <GradientStop Color="#FF1BDA38" Offset="0.5"/>
                    <GradientStop Color="#FF03D023" Offset="0.10"/>
                    <GradientStop Color="#FF03D023" Offset="0.90"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEDEDED" Offset="1"/>
                    <GradientStop Color="#FFE2E2E2" Offset="0.5"/>
                    <GradientStop Color="#FFD4D4D4" Offset="0.5"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid x:Name="Background" SnapsToDevicePixels="true">
                        <Border x:Name="border"
                                Background="#FFA4A4A4"
                                CornerRadius="2"
                                Opacity="1">
                            <Grid x:Name="grid" Margin="1">
                                <Border x:Name="border1"
                                        Background="White"
                                        CornerRadius="1"
                                        Opacity="0.9"/>
                                <Border x:Name="border2"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="1"
                                        Margin="1"/>
                            </Grid>
                        </Border>
                        <Rectangle x:Name="PART_Track" Margin="1"/>
                        <Decorator x:Name="PART_Indicator"
                                   HorizontalAlignment="Left"
                                   Margin="1">
                            <Grid x:Name="Foreground">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid x:Name="Determinate"
                                      Grid.ColumnSpan="3"
                                      Grid.RowSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Background="{TemplateBinding Foreground}" Grid.RowSpan="2"/>
                                    <Border x:Name="border3"
                                            CornerRadius="1"
                                            Grid.RowSpan="2"
                                            Opacity="0.75">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                                                <GradientStop Color="#A5FFFFFF" Offset="0.5"/>
                                                <GradientStop Offset="1"/>
                                                <GradientStop/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Grid>
                                <Grid x:Name="Animation"
                                      ClipToBounds="true"
                                      Grid.ColumnSpan="3"
                                      Grid.RowSpan="2">
                                    <Rectangle x:Name="PART_GlowRect"
                                               Fill="{StaticResource ProgressBarIndicatorAnimatedFill}"
                                               HorizontalAlignment="Left"
                                               Margin="-100,0,0,0"
                                               Width="100"/>
                                </Grid>
                            </Grid>
                        </Decorator>
                        <Border x:Name="border4"
                                CornerRadius="1"
                                Grid.ColumnSpan="1"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                Margin="1"
                                VerticalAlignment="Stretch"
                                Width="Auto">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#E5FFFFFF"/>
                                    <GradientStop Color="#66FFFFFF" Offset="0.5"/>
                                    <GradientStop Offset="0.5"/>
                                    <GradientStop Offset="1"/>
                                    <GradientStop Color="#BFFFFFFF" Offset="0.1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Panel.Background" Value="{x:Null}">
                            <Setter Property="Visibility"
                                    TargetName="border"
                                    Value="Hidden"/>
                        </Trigger>
                        <Trigger Property="Border.BorderThickness" Value="0">
                            <Setter Property="Margin"
                                    TargetName="PART_Indicator"
                                    Value="0"/>
                            <Setter Property="CornerRadius"
                                    TargetName="border"
                                    Value="0"/>
                            <Setter Property="Margin"
                                    TargetName="grid"
                                    Value="0"/>
                            <Setter Property="CornerRadius"
                                    TargetName="border1"
                                    Value="0"/>
                            <Setter Property="CornerRadius"
                                    TargetName="border2"
                                    Value="0"/>
                            <Setter Property="CornerRadius"
                                    TargetName="border3"
                                    Value="0"/>
                            <Setter Property="CornerRadius"
                                    TargetName="border4"
                                    Value="0"/>
                            <Setter Property="Margin"
                                    TargetName="border4"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="LayoutTransform" TargetName="Background">
                                <Setter.Value>
                                    <RotateTransform Angle="-90"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsIndeterminate" Value="true">
                            <Setter Property="Opacity"
                                    TargetName="Determinate"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="Animation"
                                    Value="1"/>
                            <Setter Property="HorizontalAlignment"
                                    TargetName="PART_Indicator"
                                    Value="Stretch"/>
                        </Trigger>
                        <Trigger Property="IsIndeterminate" Value="false">
                            <Setter Property="Background"
                                    TargetName="Animation"
                                    Value="#80B5FFA9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>