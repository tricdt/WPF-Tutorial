    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=BarTemplate}" TargetType="{x:Type ContentControl}">
        <Border BorderBrush="#FF7C7C94 "
                BorderThickness="0,0,0,1"
                SnapsToDevicePixels="True">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F4FA " Offset="0"/>
                    <GradientStop Color="#FFA09EBA " Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=MainMenuTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="Background"
                Background="#FFD7D7E5"
                SnapsToDevicePixels="True">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=StatusBarTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FFFFFFFF "
                    Padding="0,1,0,0"
                    SnapsToDevicePixels="True">
                <Border Height="Auto" Width="Auto">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFe7e8eb" Offset="0"/>
                            <GradientStop Color="#FFaeb4ba" Offset="1"/>
                            <GradientStop Color="#FFb6bbc7" Offset="0.4"/>
                            <GradientStop Color="#FFa5abaf" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <ContentPresenter/>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>