<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{dxbt:BarItemSearchControlThemeKey ResourceKey=BackgroundBrush}" Color="Transparent"/>

    <SolidColorBrush x:Key="{dxbt:BarItemSearchControlThemeKey ResourceKey=HoverBackgroundBrush}" Color="Transparent"/>

    <DataTemplate x:Key="{dxbt:BarItemSearchControlThemeKey ResourceKey=DescriptionTemplate}">
        <TextBlock Text="{Binding}" Opacity="0.75" />
    </DataTemplate>

</ResourceDictionary>
