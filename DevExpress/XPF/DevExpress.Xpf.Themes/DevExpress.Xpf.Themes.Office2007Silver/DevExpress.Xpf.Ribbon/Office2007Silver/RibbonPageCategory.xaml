    <ControlTemplate x:Key="CollapseButtonTemplate" TargetType="{x:Type ToggleButton}">
        <Grid Background="Transparent"
              Margin="2,0,2,0"
              SnapsToDevicePixels="True">
            <Grid x:Name="PART_Hover" Opacity="0">
                <Grid>
                    <Border Margin="-1,3,-1,0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE8EAEE" Offset="0.5"/>
                                <GradientStop Color="#3FE8EAEE" Offset="1"/>
                                <GradientStop Color="#26E8EAEE"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border CornerRadius="4,4,0,0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFBABDC3" Offset="0"/>
                                <GradientStop Color="#FFBDBEC1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border CornerRadius="3,3,0,0" Margin="1,1,1,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFE8EAEE" Offset="0.75"/>
                                    <GradientStop Color="#FFD6D9E1" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid Margin="1,1,1,0">
                                <Border CornerRadius="2,2,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFDDDDD0" Offset="0.5"/>
                                            <GradientStop Color="#FFE3D099" Offset="1"/>
                                            <GradientStop Color="Gainsboro"/>
                                            <GradientStop Color="#FFDDDDD0" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Path Data="F1 M 369,270L 404,270C 404,270 405,285 387,285C 369,285 369,271 369,270 Z "
                                      Height="18"
                                      Margin="1,0"
                                      Opacity="0.25"
                                      Stretch="Fill"
                                      StrokeLineJoin="Round"
                                      VerticalAlignment="Top">
                                    <Path.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1"
                                                             MappingMode="RelativeToBoundingBox"
                                                             StartPoint="0.5,0">
                                            <GradientStop Color="#FFD4D7DF" Offset="0.5"/>
                                            <GradientStop Color="#3ED2E5FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Path.Fill>
                                </Path>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
            <Grid x:Name="PART_Checked" Opacity="0">
                <Grid>
                    <Border x:Name="Header"
                            Background="#FFBEBEBE"
                            CornerRadius="4,4,0,0">
                        <Border Background="#FFD0FBFF"
                                CornerRadius="3,3,0,0"
                                Margin="1,1,1,0">
                            <Border CornerRadius="2,2,0,0" Margin="1,1,1,-1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFAFAFA" Offset="0"/>
                                        <GradientStop Color="#FFF2F4F8" Offset="1"/>
                                        <GradientStop Color="#FFF4F4F4" Offset="0.25"/>
                                        <GradientStop Color="#FFF2F2F2" Offset="0.25"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
            <Grid Margin="0,0,0,-3">
                <Path x:Name="Path"
                      Data="F1 M 6,12L 10,8L 9,7L 6,10L 3,7L 2,8L 6,12 Z "
                      Fill="#FF333333"
                      Height="5"
                      Margin="6"
                      Stretch="Fill"
                      Width="8"/>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="PART_Hover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
                <Setter Property="Opacity"
                        TargetName="PART_Checked"
                        Value="1"/>
                <Setter Property="Fill"
                        TargetName="Path"
                        Value="#FF333333"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxrt:RibbonPageCategoryThemeKey ResourceKey=CollapseButtonStyle}" TargetType="{x:Type ToggleButton}">
        <Setter Property="Content" Value="V"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{StaticResource CollapseButtonTemplate}"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>

