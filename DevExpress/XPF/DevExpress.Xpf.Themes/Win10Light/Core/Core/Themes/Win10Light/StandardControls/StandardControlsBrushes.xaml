<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- MENU BRUSHES -->
  <SolidColorBrush x:Key="Menu_Background" Color="#FFFFFFFF" x:Uid="@Color=Window.Background" />
  <SolidColorBrush x:Key="Menu_Border" Color="#FFCFCFCF" x:Uid="@Color=Border" />
  <SolidColorBrush x:Key="Menu_Foreground" Color="#FF373737" x:Uid="@Color=Foreground" />
  <SolidColorBrush x:Key="MenuItem_Foreground" Color="#FF373737" x:Uid="@Color=Foreground" />
  <SolidColorBrush x:Key="MenuItem_HoverForeground" Color="#FF3E3E3E" x:Uid="@Color=HoverForeground" />
  <SolidColorBrush x:Key="MenuItem_PressedForeground" Color="#FF3E3E3E" x:Uid="@Color=SelectionForeground" />
  <SolidColorBrush x:Key="MenuItem_HoverBackground" Color="#FFE5F1FB" x:Uid="@Color=HoverBackground" />
  <SolidColorBrush x:Key="MenuItem_HoverBorder" Color="#FFCCE8FF" x:Uid="@Color=HoverBorder" />
  <SolidColorBrush x:Key="MenuItem_SelectionBackground" Color="#FFCCE8FF" x:Uid="@Color=SelectionBackground" />
  <SolidColorBrush x:Key="MenuItem_SelectionBorder" Color="#FF99D1FF" x:Uid="@Color=SelectionBorder" />
  <!-- CONTEXT MENU BRUSHES -->
  <SolidColorBrush x:Key="ContextMenu_Background" Color="#FFFCFCFC" x:Uid="@Color=Menu.Background" />
  <SolidColorBrush x:Key="ContextMenu_Border" Color="#FFCFCFCF" x:Uid="@Color=Border" />
  <SolidColorBrush x:Key="ContextMenuItem_Foreground" Color="#FF373737" x:Uid="@Color=Foreground" />
  <SolidColorBrush x:Key="ContextMenuItem_HoverForeground" Color="#FF3E3E3E" x:Uid="@Color=HoverForeground" />
  <SolidColorBrush x:Key="ContextMenuItem_PressedForeground" Color="#FF3E3E3E" x:Uid="@Color=SelectionForeground" />
  <SolidColorBrush x:Key="ContextMenuItem_HoverBackground" Color="#FFE5F1FB" x:Uid="@Color=HoverBackground" />
  <SolidColorBrush x:Key="ContextMenuItem_HoverBorder" Color="#FFCCE8FF" x:Uid="@Color=HoverBorder" />
  <SolidColorBrush x:Key="ContextMenuItem_SelectionBackground" Color="#FFCCE8FF" x:Uid="@Color=SelectionBackground" />
  <SolidColorBrush x:Key="ContextMenuItem_SelectionBorder" Color="#FF99D1FF" x:Uid="@Color=SelectionBorder" />
</ResourceDictionary>