  <ResourceDictionary.MergedDictionaries>
    <dxt:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Win10Light.v24.1;component/Core/Core/Editors/Themes/Win10Light/ButtonEdit/ButtonEditGlyphes_Base.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <!-- Spin -->
  <DataTemplate x:Key="{dxet:ButtonsThemeKey ResourceKey=SpinUpGlyph}">
    <Grid x:Name="Root" MinWidth="16">
      <Path Fill="{TemplateBinding TextElement.Foreground}" Style="{StaticResource UIShape.Up}" cs:id="Path_0000" />
    </Grid>
    <DataTemplate.Triggers>
      <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
        <Setter Property="MinWidth" TargetName="Root" Value="42" />
      </Trigger>
    </DataTemplate.Triggers>
  </DataTemplate>
