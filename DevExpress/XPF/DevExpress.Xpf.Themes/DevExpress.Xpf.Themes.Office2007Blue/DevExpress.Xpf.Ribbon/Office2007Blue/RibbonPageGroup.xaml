                    CornerRadius="3"
                    Grid.RowSpan="2"
                    Margin="3,3,-4,-4"
                    Opacity="0.1"
                    SnapsToDevicePixels="True"
                    cs:id="Border_0000"/>
            <Border x:Name="border1"
                    BorderThickness="0"
                    CornerRadius="2"
                    SnapsToDevicePixels="True">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0"
                                         cs:id="LinearGradientBrush_0000">
                        <GradientStop Color="#FFE0EBF6"
                                      Offset="0"
                                      cs:id="GradientStop_0000"/>
                        <GradientStop Color="#FFE7F2FF"
                                      Offset="1"
                                      cs:id="GradientStop_0001"/>
                        <GradientStop Color="#FFD1DFF0"
                                      Offset="0.2"
                                      cs:id="GradientStop_0002"/>
                        <GradientStop Color="#FFC7D8ED"
                                      Offset="0.2"
                                      cs:id="GradientStop_0003"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="0">
                    <Border x:Name="border2"
                            Background="White"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            CornerRadius="1"
                            Margin="1"
                            Opacity="0"
                            SnapsToDevicePixels="True"
                            cs:id="Border_0001"/>
                    <Border x:Name="border3"
                            BorderThickness="1"
                            CornerRadius="1,2,3,0"
                            Margin="1,1,-1,-1"
                            Opacity="1"
                            SnapsToDevicePixels="True">
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0001">
                                <GradientStop Color="#FFE5EDF5"
                                              Offset="0"
                                              cs:id="GradientStop_0004"/>
                                <GradientStop Color="#FFe3fafc"
                                              Offset="1"
                                              cs:id="GradientStop_0005"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                    </Border>
                    <Border x:Name="border4"
                            BorderThickness="1"
                            CornerRadius="2"
                            Margin="0"
                            Opacity="1"
                            SnapsToDevicePixels="True">
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0002">
                                <GradientStop Color="#FF9EBFDB"
                                              Offset="1"
                                              cs:id="GradientStop_0006"/>
                                <GradientStop Color="#FFC5D2DF" cs:id="GradientStop_0007"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                    </Border>
                    <ContentPresenter/>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(interop:BrowserInteropHelper.IsBrowserHosted)}" Value="True">
                <Setter Property="Visibility"
                        TargetName="Shadow"
                        Value="Collapsed"/>
                <Setter Property="Margin"
                        TargetName="mainBorder"
                        Value="0"/>
                <Setter Property="CornerRadius"
                        TargetName="border1"
                        Value="0"/>
                <Setter Property="CornerRadius"
                        TargetName="border2"
                        Value="0"/>
                <Setter Property="CornerRadius"
                        TargetName="border3"
                        Value="0"/>
                <Setter Property="CornerRadius"
                        TargetName="border4"
                        Value="0"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonPageGroupThemeKey ResourceKey=HighlightedPopupButtonBorderTemplate}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid Background="Transparent"
              Margin="0,0,3,0"
              cs:id="Grid_0000">
            <Grid x:Name="PART_Customization"
                  Opacity="0.0"
                  Visibility="Visible">
                <Border BorderBrush="#FFE4E4E4"
                        BorderThickness="2"
                        CornerRadius="3"
                        cs:id="Border_0000"/>
            </Grid>
            <Grid x:Name="PART_Normal">
                <Border x:Name="border1"
                        BorderBrush="#ffe5edf5"
                        BorderThickness="1"
                        CornerRadius="2"
                        Margin="1,1,-1,-1"
                        Opacity="1"
                        SnapsToDevicePixels="True"
                        cs:id="Border_0001"/>
                <Border x:Name="border"
                        BorderThickness="1"
                        CornerRadius="2"
                        Margin="0"
                        Opacity="1"
                        SnapsToDevicePixels="True">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0000">
                            <GradientStop Color="#FF9EBFDB"
                                          Offset="1"
                                          cs:id="GradientStop_0000"/>
                            <GradientStop Color="{Binding Path=DataContext, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFB0B0B0}"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
            </Grid>
            <Grid x:Name="PART_Hover" Visibility="Collapsed">
                <Border x:Name="border13"
                        BorderThickness="1"
                        CornerRadius="2"
                        Margin="1,1,-1,-1"
                        Opacity="1"
                        SnapsToDevicePixels="True">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0001">
                            <GradientStop Color="#FFF4F7FB"
                                          Offset="0"
                                          cs:id="GradientStop_0001"/>
                            <GradientStop Color="White"
                                          Offset="1"
                                          cs:id="GradientStop_0002"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <Border x:Name="border3"
                        BorderThickness="1"
                        CornerRadius="2"
                        Margin="0"
                        Opacity="1"
                        SnapsToDevicePixels="True">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0002">
                            <GradientStop Color="#FFB1E6EB"
                                          Offset="1"
                                          cs:id="GradientStop_0003"/>
                            <GradientStop Color="#FFBACDE1" cs:id="GradientStop_0004"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <Border BorderThickness="1"
                        CornerRadius="1"
                        Margin="1,1,0,0"
                        Opacity="0.35">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0003">
                            <GradientStop Color="#FFFFFFFF"
                                          Offset="0"
                                          cs:id="GradientStop_0005"/>
                            <GradientStop Color="#99FFFFFF"
                                          Offset="1"
                                          cs:id="GradientStop_0006"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="PART_Pressed" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border x:Name="border2"
                        BorderThickness="1"
                        CornerRadius="2"
                        Grid.RowSpan="2"
                        Margin="0"
                        Opacity="1"
                        SnapsToDevicePixels="True">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0004">
                            <GradientStop Color="#FF87A9C3"
                                          Offset="1"
                                          cs:id="GradientStop_0007"/>
                            <GradientStop Color="#FF879CAF" cs:id="GradientStop_0008"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <Border BorderThickness="1"
                        CornerRadius="2"
                        Grid.RowSpan="2"
                        Margin="0"
                        Opacity="0.8">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0005">
                            <GradientStop Color="#FFB7D5FC"
                                          Offset="1"
                                          cs:id="GradientStop_0009"/>
                            <GradientStop Color="#FFA2C4F1"
                                          Offset="0.75"
                                          cs:id="GradientStop_0010"/>
                            <GradientStop Color="#FF8AA9D0"
                                          Offset="0.20"
                                          cs:id="GradientStop_0011"/>
                            <GradientStop Color="#FF7699C8"
                                          Offset="0.20"
                                          cs:id="GradientStop_0012"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="0,1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0006">
                            <GradientStop Color="#CC8F969F" cs:id="GradientStop_0013"/>
                            <GradientStop Color="#008F969F"
                                          Offset="1"
                                          cs:id="GradientStop_0014"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <ContentPresenter Content="{TemplateBinding Content}" Margin="4"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverChecked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Pressed" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

