<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- office2007Blue: Ribbon Status Bar. Left Part -->

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=LeftPartTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="PART_statusBarLeft"
                BorderThickness="0,1,0,0"
                Margin="0"
                SnapsToDevicePixels="True">
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF567DB0" Offset="0"/>
                    <GradientStop Color="#FF95ADCE" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Border BorderThickness="0,0,1,0"
                        Margin="0"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFDDE8F5" Offset="0"/>
                            <GradientStop Color="#FFC2D5EC" Offset="1"/>
                            <GradientStop Color="#FFD2E0F0" Offset="0.4"/>
                            <GradientStop Color="#FFBACEE6" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFe7f0fc" Offset="0"/>
                            <GradientStop Color="#FFe4eefb" Offset="1"/>
                            <GradientStop Color="#FFddeafa" Offset="0.4"/>
                            <GradientStop Color="#FFdeeafa" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <ContentPresenter Margin="2,1,0,0"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- office2007Blue: Ribbon Status Bar. Right Part -->

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=RightPartTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="PART_statusBarRight"
                Background="#FF6590CC"
                BorderThickness="0,1,0,0"
                Margin="0"
                SnapsToDevicePixels="True">
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF567DB0" Offset="0"/>
                    <GradientStop Color="#FF95ADCE" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Border BorderThickness="1,0,0,0"
                        Margin="1,0,0,0"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFC5DCF8" Offset="0"/>
                            <GradientStop Color="#FF7495C2" Offset="1"/>
                            <GradientStop Color="#FFA9CAF7" Offset="0.4"/>
                            <GradientStop Color="#FF90B6EA" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFe3eefb" Offset="0"/>
                            <GradientStop Color="#FFbfcee3" Offset="1"/>
                            <GradientStop Color="#FFd8e7fb" Offset="0.4"/>
                            <GradientStop Color="#FFcbddf4" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <ContentPresenter Margin="3,1,0,0"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- office2007Blue: Ribbon Status Bar. Size Grip -->

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=SizeGripTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="Transparent"
              Height="11"
              HorizontalAlignment="Right"
              Margin="0,0,2,2"
              VerticalAlignment="Bottom"
              Width="11">
            <Path Data="F1 M 0,8.99998L 2,8.99998L 2,11L 0,11L 0,8.99998 Z M 3.99997,8.99999L 5.99997,8.99999L 5.99997,11L 3.99997,11L 3.99997,8.99999 Z M 7.99998,8.99999L 9.99998,8.99999L 9.99998,11L 7.99998,11L 7.99998,8.99999 Z M 7.99998,4.99999L 9.99998,4.99999L 9.99998,6.99999L 7.99998,6.99999L 7.99998,4.99999 Z M 7.99999,0.999989L 9.99999,0.999989L 9.99999,2.99998L 7.99999,2.99998L 7.99999,0.999989 Z M 4,4.99998L 6,4.99998L 6,6.99998L 4,6.99998L 4,4.99998 Z "
                  Fill="#5AFFFFFF"
                  Margin="1,1,0,0"
                  Stretch="Fill"/>
            <Path Data="F1 M 0,7.99999L 2,7.99999L 2,9.99999L 0,9.99999L 0,7.99999 Z M 3.99997,8L 5.99997,8L 5.99997,10L 3.99997,10L 3.99997,8 Z M 7.99998,8L 9.99998,8L 9.99998,10L 7.99998,10L 7.99998,8 Z M 7.99998,4L 9.99998,4L 9.99998,6L 7.99998,6L 7.99998,4 Z M 7.99999,0L 9.99999,0L 9.99999,2L 7.99999,2L 7.99999,0 Z M 4,4L 6,4L 6,6L 4,6L 4,4 Z "
                  Fill="#FF4D6E9C"
                  Margin="0,0,1,1"
                  Stretch="Fill"/>
        </Grid>
    </ControlTemplate>

    <sys:Double x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=MinHeight}">26</sys:Double>

</ResourceDictionary>