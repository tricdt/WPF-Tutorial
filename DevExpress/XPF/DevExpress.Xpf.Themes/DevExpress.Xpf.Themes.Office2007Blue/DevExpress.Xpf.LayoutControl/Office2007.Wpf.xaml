<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:lc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Office2007.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.LayoutControl.LayerSeparator}"
           BasedOn="{StaticResource Office2007.LayerSeparator}"
           TargetType="{x:Type lc:LayerSeparator}"/>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.LayoutControl.ElementSizer}"
           BasedOn="{StaticResource Office2007.ElementSizer}"
           TargetType="{x:Type lc:ElementSizer}"/>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.LayoutControl.GroupBoxButton}"
           BasedOn="{StaticResource Office2007.GroupBoxButton}"
           TargetType="{x:Type lc:GroupBoxButton}"/>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.LayoutControl.GroupBox}"
           BasedOn="{StaticResource Office2007.GroupBox}"
           TargetType="{x:Type lc:GroupBox}">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.LayoutControl.GroupSeparator}"
           BasedOn="{StaticResource Office2007.GroupSeparator}"
           TargetType="{x:Type lc:GroupSeparator}"/>

</ResourceDictionary>