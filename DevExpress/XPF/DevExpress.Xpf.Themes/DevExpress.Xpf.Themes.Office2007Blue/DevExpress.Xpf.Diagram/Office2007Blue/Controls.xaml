<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdiag="http://schemas.devexpress.com/winfx/2008/xaml/diagram"
                    xmlns:dxdiagn="http://schemas.devexpress.com/winfx/2008/xaml/diagram/internal"
                    xmlns:dxdiagt="http://schemas.devexpress.com/winfx/2008/xaml/diagram/themekeys"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dxmvvm:ObjectToObjectConverter x:Key="IdToMenuPointerVisibilityConverter" DefaultTarget="Collapsed">
        <dxmvvm:MapItem Source="MoreShapes" Target="Visible"/>
    </dxmvvm:ObjectToObjectConverter>

    <dxdiagn:ShapeToolTipConverter x:Key="ToolTipConverter"/>

    <Thickness x:Key="{dxdiagt:ControlsThemeKeys ResourceKey=PageBorderThickness}">1</Thickness>

    <sys:Double x:Key="{dxdiagt:RulerThemeKey ResourceKey=Size}">21</sys:Double>

    <sys:Double x:Key="{dxdiagt:DiagramDesignerControlThemeKeys ResourceKey=FontFamilyEditorWidth}">100</sys:Double>

    <sys:Double x:Key="{dxdiagt:DiagramDesignerControlThemeKeys ResourceKey=FontSizeEditorWidth}">50</sys:Double>

    <ControlTemplate x:Key="{dxdiagt:DiagramControlThemeKeys ResourceKey=BackgroundTemplate}" TargetType="ContentControl">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <Grid Height="186"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Width="491">
                    <Path Data="F1 M 494.611,885.317C 617.845,790.553 790.153,722.941 986.298,699.166L 494.611,699.166L 494.611,885.317 Z "
                          Fill="#27FFFFFF"
                          Margin="0,0.001,-0.687,-0.153"
                          Stretch="Fill"
                          UseLayoutRounding="False"/>
                    <Path Data="F1 M 494.611,699.165L 494.611,832.87C 628.318,764.8 792.694,717.469 973.699,699.165L 494.611,699.165 Z "
                          Fill="#27FFFFFF"
                          Margin="0,0,11.913,52.295"
                          Stretch="Fill"
                          UseLayoutRounding="False"/>
                </Grid>
                <ContentPresenter/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxdiagt:DiagramControlThemeKeys ResourceKey=PageBackgroundTemplate}" TargetType="ContentControl">
        <Grid>
            <Border Background="#3F000000"
                    CornerRadius="2"
                    Margin="3,3,-3,-3"
                    Opacity="0.75"/>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="#3F000000"
                    BorderThickness="1">
                <ContentPresenter ClipToBounds="True"/>
            </Border>
        </Grid>
    </ControlTemplate>

    <DataTemplate x:Key="{dxdiagt:AdornersThemeKeys ResourceKey=SizeSnapLineTemplate}">
        <Grid>
            <Path Data="M0,0 L6,-3 L6,3 z"
                  Fill="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}"
                  HorizontalAlignment="Left"
                  Margin="1,3,0,0"
                  Stroke="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}"
                  VerticalAlignment="Center"/>
            <Path Data="M0,0 L-6,-3 L-6,3 z"
                  Fill="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}"
                  HorizontalAlignment="Right"
                  Margin="0,3,1,0"
                  Stroke="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}"
                  VerticalAlignment="Center"/>
            <Border Background="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}"
                    Height="1"
                    VerticalAlignment="Center"/>
            <Border BorderBrush="{DynamicResource {dxdiagt:AdornersThemeKeys ResourceKey=SnapLineBrush}}"
                    BorderThickness="1,0,1,0"
                    VerticalAlignment="Stretch"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxdiagt:DiagramToolboxControlThemeKey ResourceKey=StencilsSelectorItemTemplate}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="stencilName"
                       Foreground="{DynamicResource {dxdiagt:DiagramToolboxControlThemeKey ResourceKey=StencilsSelectorForeground}}"
                       Margin="0,1,3,1"
                       Text="{Binding Name}"
                       Visibility="{Binding IsCompact, Converter={dxmvvm:BooleanToVisibilityConverter Inverse=True}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dxdiag:DiagramToolboxControl}}}"/>
            <Image Grid.ColumnSpan="2"
                   Height="16"
                   HorizontalAlignment="Center"
                   Margin="-2,1,0,1"
                   Source="{dxdiag:DiagramSvgImage Size='16,16', Path=Images/Svg/CompactView.svg}"
                   Visibility="{Binding IsCompact, Converter={dxmvvm:BooleanToVisibilityConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dxdiag:DiagramToolboxControl}}}"
                   Width="16"/>
            <Path Data="M0,0 4,4 0,8"
                  Fill="{Binding ElementName=stencilName, Path=Foreground}"
                  Grid.Column="1"
                  HorizontalAlignment="Right"
                  Margin="0"
                  VerticalAlignment="Center"
                  Visibility="{Binding Id, Converter={StaticResource IdToMenuPointerVisibilityConverter}}"/>
        </Grid>
    </DataTemplate>

    <Style x:Key="{dxdiagt:DiagramToolboxControlThemeKey ResourceKey=StencilsSelectorItemStyle}" TargetType="ListBoxItem">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Margin" Value="0,0,1,1"/>
    </Style>

    <Style x:Key="{dxdiagt:DiagramToolboxControlThemeKey ResourceKey=ShapesSelectorItemStyle}" TargetType="ListBoxItem">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Margin" Value="0,0,1,1"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type dxdiag:DiagramToolboxControl}}}"/>
        <Setter Property="dxmvvm:Interaction.BehaviorsTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ItemsControl>
                        <dxdiag:DiagramToolBehavior Diagram="{Binding AssociatedObject.Tag.DiagramControl, RelativeSource={RelativeSource Self}}" DiagramTool="{Binding}"/>
                    </ItemsControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource ToolTipConverter}">
                    <Binding Path="ToolName"/>
                    <Binding Path="Tag.IsCompact" RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="Tag.ShapePreviewMode" RelativeSource="{RelativeSource Self}"/>
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>

    <Thickness x:Key="{dxdiagt:DiagramDesignerControlThemeKeys ResourceKey=DockLayoutManagerBorderThickness}">0</Thickness>

    <Thickness x:Key="{dxdiagt:DiagramDesignerControlThemeKeys ResourceKey=DiagramControlMargin}">0</Thickness>

</ResourceDictionary>