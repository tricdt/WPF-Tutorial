    <!-- DocumentSelector Theme Elements -->

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.VisualElements.DocumentSelectorContainer}" TargetType="{x:Type ve:DocumentSelectorContainer}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ve:DocumentSelectorContainer}">
                        <Grid>
                            <Border x:Name="shadow"
                                    Background="Black"
                                    CornerRadius="7"
                                    Margin="6,6,0,0"
                                    Opacity="0.15"/>
                            <Border x:Name="window"
                                    Background="#FF7499CA"
                                    CornerRadius="6"
                                    Margin="3">
                                <Grid Margin="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border x:Name="header"
                                            BorderBrush="#FFB0CFF7"
                                            BorderThickness="0,0,0,1"
                                            CornerRadius="5,5,0,0">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFE2EBF6" Offset="0"/>
                                                <GradientStop Color="#FFCBDEF7" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel HorizontalAlignment="Left"
                                                    Margin="12,8"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Image HorizontalAlignment="Left"
                                                   Margin="0,0,6,0"
                                                   Source="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionImage}"
                                                   Stretch="None"
                                                   VerticalAlignment="Top"/>
                                            <StackPanel>
                                                <ContentControl Content="{Binding Path=(local:DockLayoutManager.LayoutItem).Caption}"
                                                                ContentTemplate="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionTemplate}"
                                                                ContentTemplateSelector="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionTemplateSelector}"
                                                                Focusable="False"
                                                                FontWeight="Bold"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Bottom"/>
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Path=(local:DockLayoutManager.LayoutItem).Description}"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="content"
                                            Background="White"
                                            Grid.Row="1">
                                        <ContentPresenter x:Name="PART_ContainerContent"
                                                          Content="{Binding}"
                                                          Margin="12"/>
                                    </Border>
                                    <Border x:Name="footer"
                                            Background="#FFD1E2F7"
                                            BorderBrush="#FFB0CFF7"
                                            BorderThickness="0,1,0,0"
                                            CornerRadius="0,0,5,5"
                                            Grid.Row="2"
                                            MinHeight="25">
                                        <ContentPresenter Content="{Binding Path=(local:DockLayoutManager.LayoutItem).FooterDescription}"
                                                          HorizontalAlignment="Left"
                                                          Margin="12,3,12,5"
                                                          VerticalAlignment="Top"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

