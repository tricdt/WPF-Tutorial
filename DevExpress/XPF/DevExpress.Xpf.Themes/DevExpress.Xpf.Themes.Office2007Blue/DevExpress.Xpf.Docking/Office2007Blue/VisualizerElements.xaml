                                        Background="#FFFFFFFF"
                                        Height="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Width="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
