                <Setter Property="Fill"
                        TargetName="path1"
                        Value="#FF000000"/>
                <Setter Property="Fill"
                        TargetName="path2"
                        Value="#FF000000"/>
                <Setter Property="Fill"
                        TargetName="path3"
                        Value="#FF000000"/>
                <Setter Property="Fill"
                        TargetName="path4"
                        Value="#FF000000"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RootItem and Item -->

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemBackgroundTemplate}" TargetType="dxa:AccordionItemBackgroundControl">
        <Grid x:Name="Root">
            <Border x:Name="RootItemDefault" Opacity="0">
                <Border Background="#FF6593FC" Padding="1">
                    <Border Background="#FFFFFFFF" Padding="1,1,0,0">
                        <Border Padding="0,0,1,1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFE3EFFF " Offset="0"/>
                                    <GradientStop Color="#FFAFD2FF " Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="CustomBackground"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
            </Border>
            <Border x:Name="ItemHover"
                    BorderBrush="#FFFFBD69"
                    BorderThickness="1"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFF5CA " Offset="0"/>
                        <GradientStop Color="#FFFFDC7C " Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="ItemPressed"
                    BorderBrush="#FFFB8C3C"
                    BorderThickness="1"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFC973D " Offset="0"/>
                        <GradientStop Color="#FFFFB85E " Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="ItemSelected"
                    BorderBrush="#FFFB8C3C"
                    BorderThickness="1"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFC973D " Offset="0"/>
                        <GradientStop Color="#FFFFB85E " Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="RootItemHover" Opacity="0">
                <Border Background="#FFC1A965" Padding="1">
                    <Border Background="#FFFFFFFF" Padding="1,1,0,0">
                        <Border Padding="0,0,1,1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFFFCDE" Offset="0"/>
                                    <GradientStop Color="#FFFFD96D" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="RootItemPressed" Opacity="0">
                <Border Background="#FF7B6645" Padding="1">
                    <Border Background="#FFFFFFFF" Padding="1,1,0,0">
                        <Border Padding="0,0,1,1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFFD8A8" Offset="0"/>
                                    <GradientStop Color="#FFFFAD41" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="RootItemSelected" Opacity="0">
                <Border Background="#FF7B6645" Padding="1">
                    <Border Background="#FFFFFFFF" Padding="1,1,0,0">
                        <Border Padding="0,0,1,1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFFD8A8" Offset="0"/>
                                    <GradientStop Color="#FFFFAD41" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Pressed">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Selected">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="SelectedInactive">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="0.6"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Focused">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemDefault"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Hover"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Pressed"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Selected"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemSelected"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="SelectedInactive"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

