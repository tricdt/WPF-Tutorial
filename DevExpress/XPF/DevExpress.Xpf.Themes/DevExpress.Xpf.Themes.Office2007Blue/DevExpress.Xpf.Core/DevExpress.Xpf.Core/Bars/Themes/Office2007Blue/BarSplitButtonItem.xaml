    <ControlTemplate x:Key="{dxbt:BarSplitButtonItemThemeKey ResourceKey=ArrowTemplate}" TargetType="{x:Type dxb:ArrowControl}">
        <Grid x:Name="grid"
              Background="#00FFFFFF "
              Margin="2,0,3,0">
            <Border x:Name="arrow"
                    Background="#00FFFFFF "
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid Height="4"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="5">
                    <Path Data="F1 M 69,15L 74,15L 74,16.0001L 73,16.0001L 73,17.0001L 72,17.0001L 72,18.0001L 71,18.0001L 71,17.0001L 70,17.0001L 70,16.0001L 69,16.0001L 69,15 Z "
                          Fill="#FFFFFFFF "
                          Margin="0,1,0,0"
                          Opacity="0.35"
                          SnapsToDevicePixels="True"
                          Stretch="Fill"/>
                    <Path Data="F1 M 69,15L 74,15L 74,16.0001L 73,16.0001L 73,17.0001L 72,17.0001L 72,18.0001L 71,18.0001L 71,17.0001L 70,17.0001L 70,16.0001L 69,16.0001L 69,15 Z "
                          Fill="#FF567db1 "
                          Margin="0,0,0,1"
                          SnapsToDevicePixels="True"
                          Stretch="Fill"/>
                </Grid>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ArrowAlignment">
                    <VisualState x:Name="Right"/>
                    <VisualState x:Name="Bottom">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="4"
                                                           Storyboard.TargetName="grid"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

