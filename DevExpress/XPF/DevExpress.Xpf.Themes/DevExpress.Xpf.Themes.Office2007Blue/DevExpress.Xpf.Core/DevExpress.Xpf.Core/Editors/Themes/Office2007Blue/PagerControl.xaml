<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2007Blue.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/PagerControl.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonFirstPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 156,47L 156,55L 152,51L 156,47 Z M 151,47L 152,47L 152,55L 151,55L 151,47 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Stretch="Fill"
                  Width="5"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonPreviousPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 128,35L 128,43L 124,39L 128,35 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Margin="1,0,0,0"
                  Stretch="Fill"
                  Width="4"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonNextPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 149,25L 149,33L 153,29L 149,25 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Margin="2,0,0,0"
                  Stretch="Fill"
                  Width="4"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxet:PagerControlThemeKey ResourceKey=NavigationButtonLastPageGlyph}">
        <Grid Background="Transparent">
            <Path Data="F1 M 151,47L 151,55L 155,51L 151,47 Z M 156,47.0001L 155,47.0001L 155,55.0001L 156,55.0001L 156,47.0001 Z "
                  Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                  Height="8"
                  Margin="1,0,0,0"
                  Stretch="Fill"
                  Width="5"/>
        </Grid>
    </DataTemplate>

