    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Pressed"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Default"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Disabled"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Content"
                                            Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                            To="#983B5A82"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Background="#59FFFFFF"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    CornerRadius="2"
                    Padding="0,0,0,1">
                <Border x:Name="Display1"
                        CornerRadius="2"
                        Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF94AECF" Offset="0"/>
                            <GradientStop Color="#FFA0BADB" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="0">
                        <Grid x:Name="PART_Disabled" Opacity="0">
                            <Border CornerRadius="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFDAE2EC" Offset="0"/>
                                        <GradientStop Color="#FFF1F3F8" Offset="0.1"/>
                                        <GradientStop Color="#FFFBFDFE" Offset="1"/>
                                        <GradientStop Color="#FFE8EDF3" Offset="0.5"/>
                                        <GradientStop Color="#FFE3E7ED" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                        <Grid x:Name="PART_Default">
                            <Border CornerRadius="1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFE0ECFF" Offset="0"/>
                                        <GradientStop Color="#FFF4F8FF" Offset="0.1"/>
                                        <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                        <GradientStop Color="#FFE9F2FF" Offset="0.5"/>
                                        <GradientStop Color="#FFE4EEFF" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                        <ContentControl x:Name="Content"
                                        dx:FocusHelper2.Focusable="False"
                                        Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayContentTemplate}}">
                            <ContentControl.Foreground>
                                <SolidColorBrush Color="#E83B5A82"/>
                            </ContentControl.Foreground>
                        </ContentControl>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="dx:FocusHelper2.Focusable" Value="False"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Template" Value="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Grid.Resources>
                <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
                <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter"
                                             ThicknessFalse="11,11,11,11"
                                             ThicknessTrue="13,13,13,13"/>
            </Grid.Resources>
            <Border Background="#FF7496C2"
                    BorderThickness="0"
                    CornerRadius="3"
                    Padding="1"
                    Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Border Background="#FFEAF2FC"
                            BorderThickness="0"
                            CornerRadius="2"
                            Margin="0"/>
                    <Border Background="#FFCEE1F8"
                            CornerRadius="1"
                            Margin="1">
                    </Border>
                </Grid>
            </Border>
            <Grid Background="#FFCEE1F8" Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
            <ContentPresenter Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFCEE1F8"
                BorderThickness="0"
                Margin="0"
                Padding="11">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

