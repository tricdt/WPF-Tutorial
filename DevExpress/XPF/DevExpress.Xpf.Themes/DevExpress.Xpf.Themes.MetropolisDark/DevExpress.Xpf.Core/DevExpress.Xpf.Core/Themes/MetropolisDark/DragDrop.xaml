<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DropMarkerBackground}"
                     Color="#FF333333"
                     cs:MetropolisLight.Color="White"/>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DropMarkerBorderBrush}"
                     Color="#FFF78A09"
                     cs:MetropolisLight.Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintBackground}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="White"/>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintBorderBrush}"
                     Color="#FF515151"
                     cs:MetropolisLight.Color="#FFC8C8C8"/>

    <CornerRadius x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCornerRadius}">0</CornerRadius>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCaptionForeground}"
                     Color="#FFF78A09"
                     cs:MetropolisLight.Color="#FFF78A09"/>

    <FontWeight x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCaptionFontWeight}">Bold</FontWeight>

    <sys:Double x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintCaptionFontSize}">12</sys:Double>

    <SolidColorBrush x:Key="{dxt:DragDropThemeKey ResourceKey=DragHintDescriptionForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FF373A3D"/>

</ResourceDictionary>