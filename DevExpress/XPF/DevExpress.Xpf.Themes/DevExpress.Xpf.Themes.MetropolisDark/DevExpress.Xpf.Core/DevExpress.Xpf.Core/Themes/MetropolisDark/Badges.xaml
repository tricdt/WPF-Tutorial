<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey ErrorForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey ErrorBackground}"
                     Color="#FFF8274D"
                     cs:MetropolisLight.Color="#FFF8274D"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey ErrorBorderBrush}"
                     Color="#FFF8274D"
                     cs:MetropolisLight.Color="#FFF8274D"/>

    <Thickness x:Key="{dxt:BadgesThemeKey ErrorBorderThickness}">0</Thickness>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey WarningForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey WarningBackground}"
                     Color="#FFB3751B"
                     cs:MetropolisLight.Color="#FFB3751B"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey WarningBorderBrush}"
                     Color="#FFB3751B"
                     cs:MetropolisLight.Color="#FFB3751B"/>

    <Thickness x:Key="{dxt:BadgesThemeKey WarningBorderThickness}">0</Thickness>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey SuccessForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey SuccessBackground}"
                     Color="#FF3F961E"
                     cs:MetropolisLight.Color="#FF3F961E"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey SuccessBorderBrush}"
                     Color="#FF3F961E"
                     cs:MetropolisLight.Color="#FF3F961E"/>

    <Thickness x:Key="{dxt:BadgesThemeKey SuccessBorderThickness}">0</Thickness>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey InformationForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey InformationBackground}"
                     Color="#FF4C88C9"
                     cs:MetropolisLight.Color="#FF4C88C9"/>

    <SolidColorBrush x:Key="{dxt:BadgesThemeKey InformationBorderBrush}"
                     Color="#FF4C88C9"
                     cs:MetropolisLight.Color="#FF4C88C9"/>

    <Thickness x:Key="{dxt:BadgesThemeKey InformationBorderThickness}">0</Thickness>

    <Thickness x:Key="{dxt:BadgesThemeKey Padding}">3,3,3,4</Thickness>

    <Thickness x:Key="{dxt:BadgesThemeKey TouchPadding}">5,5,5,6</Thickness>

</ResourceDictionary>