<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.MetropolisDark.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/RatingEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Editors.RatingItem}"
           BasedOn="{StaticResource RatingItemDefaultStyle}"
           TargetType="dxe:RatingItem">
        <Setter Property="Geometry" Value="F1 M 10.5187,12.8825L 9.68433,8.51054L 12.9324,5.46739L 8.51652,4.90992L 6.62601,0.880473L 4.73126,4.90793L 0.314825,5.46074L 3.55965,8.50731L 2.72065,12.8784L 6.62082,10.7338L 10.5187,12.8825 Z "/>
        <Setter cs:Name="Setter_0001"
                Property="BorderBrush"
                Value="#7F000000"
                cs:MetropolisLight.Value="#2F000000"
               />
        <Setter Property="BorderThickness" Value="0"/>
        <Setter cs:Name="Setter_0002"
                Property="Background"
                Value="#FF808080"
                cs:MetropolisLight.Value="#FFCCCCCC"
               />
        <Setter cs:Name="Setter_0003"
                Property="HoverBackground"
                Value="#FFF78A09"
                cs:MetropolisLight.Value="#FFF78A09"
               />
        <Setter cs:Name="Setter_0004"
                Property="SelectedBackground"
                Value="#FFF78A09"
                cs:MetropolisLight.Value="#FFF78A09"
               />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxe:RatingItem">
                    <Border Background="Transparent"
                            cs:Name="Border_0001"
                            Padding="{TemplateBinding Padding}"
                            cs:MetropolisLight.Background="Transparent"
                           >
                        <Grid>
                            <Path Data="{TemplateBinding Geometry}"
                                  Fill="{TemplateBinding Background}"
                                  Margin="0,0,0,1"
                                  Stretch="Uniform"/>
                            <Path Data="{TemplateBinding Geometry}"
                                  Fill="{TemplateBinding SelectedBackground}"
                                  Margin="0,0,0,1"
                                  OpacityMask="{TemplateBinding VisualValue}"
                                  Stretch="Uniform"/>
                            <Ellipse Fill="{TemplateBinding HoverBackground}"
                                     Opacity="0.26"
                                     OpacityMask="{TemplateBinding HoverVisualValue}"
                                     Stretch="Uniform"/>
                            <Path Data="{TemplateBinding Geometry}"
                                  Fill="{TemplateBinding HoverBackground}"
                                  Margin="0,0,0,1"
                                  OpacityMask="{TemplateBinding HoverVisualValue}"
                                  Stretch="Uniform"/>
                            <Path x:Name="PART_Content"
                                  Data="{TemplateBinding Geometry}"
                                  Margin="0,0,0,1"
                                  Stretch="Uniform"
                                  Stroke="{TemplateBinding BorderBrush}"
                                  StrokeThickness="{TemplateBinding BorderThickness}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Editors.RatingControl}"
           BasedOn="{StaticResource RatingControlDefaultStyle}"
           TargetType="dxe:RatingControl"/>

</ResourceDictionary>