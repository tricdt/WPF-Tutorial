    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Pressed"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="DefaultState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="DisabledState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation cs:Name="ColorAnimation_0001"
                                            Duration="0"
                                            Storyboard.TargetName="Content"
                                            Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                            To="#FF666666"
                                            cs:MetropolisLight.To="#FFB9B9B9"
                                           />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid>
                <Grid x:Name="DisabledState" Opacity="0">
                    <Border Background="#FF333333"
                            BorderBrush="#FF515151"
                            BorderThickness="1"
                            cs:Name="Border_0026"
                            cs:MetropolisLight.Background="#FFFFFFFF"
                            cs:MetropolisLight.BorderBrush="#FFB9B9B9"
                           />
                </Grid>
                <Grid x:Name="DefaultState">
                    <Border Background="#FF333333"
                            BorderBrush="#FF515151"
                            BorderThickness="1"
                            cs:Name="Border_0028"
                            cs:MetropolisLight.Background="#FFFFFFFF"
                            cs:MetropolisLight.BorderBrush="#FFB9B9B9"
                           />
                </Grid>
                <ContentControl x:Name="Content"
                                dx:FocusHelper2.Focusable="False"
                                Margin="0,0,2,2"
                                Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayContentTemplate}}">
                    <ContentControl.Foreground>
                        <SolidColorBrush Color="#FFF78A09"
                                         cs:Name="SolidColorBrush_0001"
                                         cs:MetropolisLight.Color="#FFF78A09"
                                        />
                    </ContentControl.Foreground>
                </ContentControl>
            </Grid>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="dx:FocusHelper2.Focusable" Value="False"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Template" Value="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Grid.Resources>
                <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
                <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter"
                                             ThicknessFalse="11"
                                             ThicknessTrue="13"/>
            </Grid.Resources>
            <Border Background="#FF333333"
                    BorderBrush="#FF515151"
                    BorderThickness="1"
                    cs:Name="Border_0030"
                    Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}"
                    cs:MetropolisLight.Background="#FFFFFFFF"
                    cs:MetropolisLight.BorderBrush="#FFB9B9B9"
                   />
            <Grid Background="#FF333333"
                  cs:Name="Grid_0001"
                  Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}"
                  cs:MetropolisLight.Background="#FFFFFFFF"
                 />
            <ContentPresenter Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FF333333"
                cs:Name="Border_0031"
                Padding="11"
                cs:MetropolisLight.Background="#FFFFFFFF"
               >
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

</ResourceDictionary>