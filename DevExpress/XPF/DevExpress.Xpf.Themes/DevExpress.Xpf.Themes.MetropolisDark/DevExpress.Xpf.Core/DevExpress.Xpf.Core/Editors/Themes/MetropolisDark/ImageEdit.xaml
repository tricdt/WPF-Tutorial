<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxt:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.MetropolisDark.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/ImageEdit.xaml"/>
        <dxt:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.MetropolisDark.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Generic/Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}"
                     Color="#FFFFFFFF"
                     cs:Name="SolidColorBrush_0001"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <Style x:Key="{dxet:ImageEditThemeKey ResourceKey=ContentStyle}"/>

    <dx:EmbeddedResourceImageConverter x:Key="EmbeddedResourceImageConverter"/>

    <dx:WpfSvgPalette x:Key="{dxet:ImageEditThemeKey ResourceKey=ToolButtonPalette}">
        <SolidColorBrush x:Key="BlackColor" Color="#FFD4D4D4"/>
        <SolidColorBrush x:Key="WhiteColor" Color="#FF444444"/>
        <SolidColorBrush x:Key="RedColor" Color="#FFDB6553"/>
        <SolidColorBrush x:Key="YellowColor" Color="#FFDCA453"/>
        <SolidColorBrush x:Key="GreenColor" Color="#FF53A36C"/>
        <SolidColorBrush x:Key="BlueColor" Color="#FF65A4D9"/>
    </dx:WpfSvgPalette>

    <ControlTemplate x:Key="{dxet:PopupImageEditThemeKey ResourceKey=DisplayTemplate}">
        <Grid Background="Transparent"
              cs:Name="Grid_0001"
              dx:FocusHelper2.Focusable="True"
              Margin="4,2"
              cs:MetropolisLight.Background="#00000000"
             >
            <dx:DXImage x:Name="PART_Icon"
                        dx:FocusHelper2.Focusable="False"
                        dx:WpfSvgPalette.Palette="{DynamicResource {dxet:BaseEditThemeKey ResourceKey=DefaultIconSvgPalette}}"
                        Height="16"
                        Source="/DevExpress.Xpf.Core.v24.1;component/Editors/Images/ImageEdit/DefaultIcon.svg"
                        Stretch="Fill"
                        Width="16">
                <RenderOptions.BitmapScalingMode>NearestNeighbor</RenderOptions.BitmapScalingMode>
            </dx:DXImage>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=(dxe:BaseEdit.OwnerEdit).HasImage, RelativeSource={RelativeSource Self}}" Value="False">
                <Setter Property="dx:WpfSvgPalette.Palette"
                        TargetName="PART_Icon"
                        Value="{DynamicResource {dxt:BrushesThemeKey ResourceKey=GrayScaleSvgPalette}}"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:ImageEditThemeKey ResourceKey=ToolButtonTemplate}" TargetType="{x:Type dxe:ImageEditToolButton}">
        <Grid>
            <Grid Margin="0,1,0,1">
                <Border Name="hover"
                        Background="#3FFFFFFF"
                        CornerRadius="1"
                        cs:Name="Border_0004"
                        Opacity="0"
                        cs:MetropolisLight.Background="#3FFFFFFF"
                       />
                <Border Name="pressed"
                        Background="#3FFFFFFF"
                        CornerRadius="1"
                        cs:Name="Border_0005"
                        Opacity="0"
                        cs:MetropolisLight.Background="#3FFFFFFF"
                       />
            </Grid>
            <Border Name="border"
                    Background="{TemplateBinding Background}"
                    Margin="2,0,2,0">
                <StackPanel Margin="{TemplateBinding Padding}" Orientation="Horizontal">
                    <dx:DXImage Source="{TemplateBinding ImageSource}" Stretch="None"/>
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </StackPanel>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="Opacity"
                                             To=".3"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:ImageEditThemeKey ResourceKey=MenuPopupTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#BF000000"
                    CornerRadius="12"
                    cs:Name="Border_0003"
                    Opacity="0.75"
                    cs:MetropolisLight.Background="#BF000000"
                   />
            <ContentPresenter Margin="12,0,12,0"/>
        </Grid>
    </ControlTemplate>

    <SolidColorBrush x:Key="BorderTemplateBorderBrush"
                     Color="#FF515151"
                     cs:Name="SolidColorBrush_0002"
                     cs:MetropolisLight.Color="#FF515151"/>

    <ControlTemplate x:Key="{dxet:CameraControlThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="RootElement">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="InternalFocusStates">
                    <VisualState x:Name="InternalFocused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusElement"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InternalUnfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Background="#FFFFFFFF"
                    BorderBrush="{StaticResource BorderTemplateBorderBrush}"
                    BorderThickness="1"
                    cs:Name="Border_0001"
                    cs:MetropolisLight.Background="#FFFFFFFF"
                   >
                <ContentPresenter/>
            </Border>
            <Border x:Name="FocusElement"
                    BorderBrush="#FFF78A09"
                    BorderThickness="1"
                    cs:Name="Border_0002"
                    Opacity="0"
                    cs:MetropolisLight.BorderBrush="#FFF78A09"
                   />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:ImageEditThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="RootElement">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="InternalFocusStates">
                    <VisualState x:Name="InternalFocused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusElement"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InternalUnfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Background="#FFFFFFFF"
                    BorderBrush="{StaticResource BorderTemplateBorderBrush}"
                    BorderThickness="1"
                    cs:Name="Border_0006"
                    cs:MetropolisLight.Background="#FFFFFFFF"
                   >
                <ContentPresenter/>
            </Border>
            <Border x:Name="FocusElement"
                    BorderBrush="#FFF78A09"
                    BorderThickness="1"
                    cs:Name="Border_0007"
                    Opacity="0"
                    cs:MetropolisLight.BorderBrush="#FFF78A09"
                   />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:ImageEditThemeKey ResourceKey=EmptyContentTemplate}">
        <Grid x:Name="empty_image">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>
            <Path cs:Name="Path_0001"
                  Data="F1 M 546,395C 551,394 554,404 564,403C 574,402 576,384 596,390C 597.058,390.317 598,390.895 598,392L 598,411C 598,412.105 597.104,413 596,413L 546,413C 544.895,413 544,412.105 544,411L 544,398C 544,396.895 544.917,395.217 546,395 Z M 560,379C 563.866,379 567,382.134 567,386C 567,389.866 563.866,393 560,393C 556.134,393 553,389.866 553,386C 553,382.134 556.134,379 560,379 Z M 543,370L 599,370C 601.209,370 603,371.791 603,374L 603,414C 603,416.209 601.209,418 599,418L 543,418C 540.791,418 539,416.209 539,414L 539,374C 539,371.791 540.791,370 543,370 Z M 545,374C 543.895,374 543,374.896 543,376L 543,412C 543,413.105 543.895,414 545,414L 597,414C 598.104,414 599,413.105 599,412L 599,376C 599,374.896 598.104,374 597,374L 545,374 Z "
                  Fill="#FFF78A09"
                  Grid.Column="1"
                  Grid.Row="1"
                  Margin="3"
                  Stretch="Uniform"
                  UseLayoutRounding="False"
                  cs:MetropolisLight.Fill="#FFF78A09"
                 />
        </Grid>
    </ControlTemplate>

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=CropMenuForegroundBrush}" Color="#FFD4D4D4"/>

    <Thickness x:Key="{dxet:ImageEditThemeKey ResourceKey=CropMenuTextMargin}">0</Thickness>

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=ImageEditToolSeparatorFillBrush}" Color="#3FFFFFFF"/>

</ResourceDictionary>