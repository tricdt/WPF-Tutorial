<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxret:RichEditControlThemeKey ResourceKey=ResizePicturePlaceholderRectangleStyle}" TargetType="{x:Type Rectangle}">
        <Setter cs:Name="Setter_0001"
                Property="Stroke"
                Value="#7F484848"
                cs:MetropolisLight.Value="#7FB9B9B9"
               />
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeDashArray" Value="2,2"/>
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush cs:Name="LinearGradientBrush_0012"
                                     EndPoint="0.5,0"
                                     StartPoint="0.5,1"
                                    >
                    <GradientStop Color="#1F666666"
                                  cs:Name="GradientStop_0001"
                                  Offset="0"
                                  cs:MetropolisLight.Color="#1FB9B9B9"
                                 />
                    <GradientStop Color="#1F999999"
                                  cs:Name="GradientStop_0002"
                                  Offset="1"
                                  cs:MetropolisLight.Color="#1FB9B9B9"
                                 />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>