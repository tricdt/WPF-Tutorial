<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxrec="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaLeftPadding}">20</sys:Double>

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaRightPadding}">10</sys:Double>

    <Thickness x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentContentPadding}">10,10,10,10</Thickness>

    <Point x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentLineOffset}">0,20</Point>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PrintLayoutViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Grid>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="#FFC3C3C3"
                    BorderThickness="8"
                    cs:Name="Border_0001"
                    Margin="-8"
                    cs:MetropolisLight.BorderBrush="#FFB9B9B9"
                   >
                <Grid>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="-1"
                                      SnapsToDevicePixels="True"
                                      UseLayoutRounding="True"/>
                    <Border Background="#FFFFFFFF"
                            BorderBrush="#FFFFFFFF"
                            BorderThickness="1,0,0,0"
                            CornerRadius="0, 0, 0, 0"
                            cs:Name="Border_0005"
                            HorizontalAlignment="Right"
                            Visibility="{TemplateBinding CommentsVisibility}"
                            cs:MetropolisLight.Background="#FFFFFFFF"
                            cs:MetropolisLight.BorderBrush="#FFFFFFFF"
                           >
                        <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                             HorizontalAlignment="Right"
                                                             Visibility="{TemplateBinding CommentsVisibility}"
                                                             Width="{TemplateBinding CommentsWidth}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditViewCommentsPresenterControlTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{TemplateBinding Content}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          SnapsToDevicePixels="True"
                          UseLayoutRounding="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=SimpleViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFFFFFF"
                        BorderBrush="#FFFFFFFF"
                        BorderThickness="1,0,0,0"
                        CornerRadius="0, 0, 0, 0"
                        cs:Name="Border_0005"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}"
                        cs:MetropolisLight.Background="#FFFFFFFF"
                        cs:MetropolisLight.BorderBrush="#FFFFFFFF"
                       >
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=DraftViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFFFFFF"
                        BorderBrush="#FFFFFFFF"
                        BorderThickness="1,0,0,0"
                        CornerRadius="0, 0, 0, 0"
                        cs:Name="Border_0005"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}"
                        cs:MetropolisLight.Background="#FFFFFFFF"
                        cs:MetropolisLight.BorderBrush="#FFFFFFFF"
                       >
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <!--RichEditCommentBorderControlTemplate -->

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditCommentBorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FFFFFFFF"
                    BorderBrush="{TemplateBinding Background}"
                    BorderThickness="1"
                    CornerRadius="2"
                    cs:Name="Border_0006"
                    Margin="1"
                    cs:MetropolisLight.Background="#FFFFFFFF"
                   >
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Margin="-1"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="2"
                    IsHitTestVisible="False"
                    Margin="1"
                    Opacity="0.1"/>
        </Grid>
    </ControlTemplate>

    <!-- CommentMoreButtonStyle -->

    <Style x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentMoreButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="Transparent"
                          cs:Name="Grid_0001"
                          cs:MetropolisLight.Background="Transparent"
                         >
                        <Path x:Name="Arrow"
                              cs:Name="Path_0001"
                              Data="M 0 0 L 3.5 4 L 7 0 Z"
                              Fill="#7F000000"
                              Height="6"
                              Margin="4"
                              Stretch="Fill"
                              Width="12"
                              cs:MetropolisLight.Fill="#7F000000"
                             />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>