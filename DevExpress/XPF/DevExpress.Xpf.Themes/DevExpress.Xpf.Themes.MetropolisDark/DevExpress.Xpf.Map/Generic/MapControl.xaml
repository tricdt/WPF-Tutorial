<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/map/themekeys" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/map" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <local:VisibilityToBoolConverter x:Key="visibilityToBoolConverter" />
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Map.MapControl}" TargetType="local:MapControl">
    <Setter Property="ToolTipTemplate">
      <Setter.Value>
        <DataTemplate x:Name="ToolTipTemplate">
          <Grid x:Name="Tooltip" HorizontalAlignment="Center" VerticalAlignment="Center" UseLayoutRounding="True">
            <Grid x:Name="Shadow" Margin="0,4,0,-4" Opacity="0.1">
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="12" />
              </Grid.RowDefinitions>
              <Path x:Name="Arrow" Stretch="Fill" Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=ToolTipBackground}}" Opacity="0.7" Data="F1 M 461,303L 474,316L 487,303L 461,303 Z " HorizontalAlignment="Center" Height="13" Grid.Row="1" Width="26" Margin="0,-1,0,0" />
              <Border x:Name="ContentBack" Background="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=ToolTipBackground}}" Opacity="0.7" />
            </Grid>
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="12" />
              </Grid.RowDefinitions>
              <Path x:Name="Arrow1" Stretch="Fill" Fill="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=ToolTipBackground}}" Data="F1 M 461,303L 474,316L 487,303L 461,303 Z " HorizontalAlignment="Center" Height="13" Grid.Row="1" Width="26" Margin="0,-1,0,0" />
              <Border x:Name="ContentBack1" Background="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=ToolTipBackground}}" />
              <ContentPresenter Content="{Binding}" ContentTemplate="{Binding ContentTemplate}" />
            </Grid>
          </Grid>
        </DataTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="ZoomRegionTemplate">
      <Setter.Value>
        <DataTemplate>
          <Border x:Name="zoomRegionBorder" BorderThickness="2" Background="#204ACBFC" BorderBrush="#FF4ACBFC" />
        </DataTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:MapControl">
          <Grid FlowDirection="LeftToRight">
            <dx:ScrollBarExtensions.ScrollBehavior>
              <dx:NativeScrollBehavior />
            </dx:ScrollBarExtensions.ScrollBehavior>
            <Rectangle x:Name="PART_DraggingElement" Fill="Transparent" Stretch="Fill" />
            <Border Background="{TemplateBinding Background}">
              <ItemsControl x:Name="PART_LayersContainer">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <Grid ClipToBounds="True" />
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
              </ItemsControl>
            </Border>
            <Canvas ClipToBounds="True">
              <local:MapEditorAdorner x:Name="PART_EditorAdorner" SnapsToDevicePixels="False" UseLayoutRounding="False" />
              <ContentPresenter SnapsToDevicePixels="True" x:Name="PART_RectangleToZoomIn" Visibility="Collapsed" ContentTemplate="{TemplateBinding ZoomRegionTemplate}" />
            </Canvas>
            <local:OverlayItemsControl x:Name="PART_OverlaysContainer">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <local:MapOverlaysPanel />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
            </local:OverlayItemsControl>
            <local:ToolTipPanel x:Name="PART_ToolTipPanel" Visibility="{Binding Path=ToolTipInfo.Visibility, RelativeSource={RelativeSource TemplatedParent}}" Clip="{Binding Path=ToolTipInfo.Clip, RelativeSource={RelativeSource TemplatedParent}}" Position="{Binding Path=ToolTipInfo.ToolTipPosition, RelativeSource={RelativeSource TemplatedParent}}">
              <Popup x:Name="PART_Popup" AllowsTransparency="True" Placement="Center" IsOpen="{Binding Visibility, Mode=OneWay, Converter={StaticResource ResourceKey=visibilityToBoolConverter}}" DataContext="{Binding Path=ToolTipInfo, RelativeSource={RelativeSource TemplatedParent}}">
                <ContentPresenter Content="{Binding Path=ToolTipInfo, RelativeSource={RelativeSource TemplatedParent}}" ContentTemplate="{TemplateBinding ToolTipTemplate}" />
              </Popup>
            </local:ToolTipPanel>
            <Grid x:Name="PART_InvalidKeyPanel" Visibility="Collapsed" Margin="2,2,0,0" MinHeight="29" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
              <Border Background="#FFDD0000" Opacity="0.75" CornerRadius="5" />
              <TextBlock TextWrapping="Wrap" Text="{Binding}" Foreground="White" FontSize="14.667" Margin="32" TextAlignment="Center" />
            </Grid>
            <local:MapSearchPanel x:Name="PART_SearchPanel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" />
            <local:MeasurementsControl x:Name="PART_Measurements" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="Background" Value="{DynamicResource {dxt:MapBrushesThemeKey ResourceKey=MapBackground}}" />
    <Setter Property="ZoomToRegionBehavior">
      <Setter.Value>
        <local:ZoomToRegionBehavior />
      </Setter.Value>
    </Setter>
    <Setter Property="SelectItemsByRegionBehavior">
      <Setter.Value>
        <local:SelectItemsByRegionBehavior />
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Map.MultiScaleImageBase}" TargetType="{x:Type local:MultiScaleImageBase}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:MultiScaleImageBase}">
          <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
            <Canvas x:Name="PART_Canvas" SnapsToDevicePixels="True" UseLayoutRounding="False" RenderOptions.EdgeMode="Aliased" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>