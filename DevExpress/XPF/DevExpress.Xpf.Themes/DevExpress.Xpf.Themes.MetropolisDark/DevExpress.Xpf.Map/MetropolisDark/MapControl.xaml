<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/map/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Setup -->

    <CornerRadius x:Key="{dxt:MapThemeKey ResourceKey=OverlayRadius}">3</CornerRadius>

    <dxm:StrokeStyle x:Key="{dxt:MapThemeKey ResourceKey=HighlightShapeStroke}" Thickness="1.0"/>

    <dxm:StrokeStyle x:Key="{dxt:MapThemeKey ResourceKey=SelectedShapeStroke}" Thickness="2.0"/>

    <!-- Brushes -->

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=MapBackground}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <!-- Shape -->

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=ShapeFill}"
                     Color="#FF666666"
                     cs:MetropolisLight.Color="#FFE0E0E0"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=ShapeStroke}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=HighlightShapeStroke}" Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=SelectedShapeStroke}" Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=ShapeTitleForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FF000000"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=ShapeTitleStroke}"
                     Color="#FF000000"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <!-- Overlay -->

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=OverlayBackground}"
                     Color="#FF3C3C3C"
                     Opacity="0.84"
                     cs:MetropolisLight.Color="#FFFFFFFF"
                     cs:MetropolisLight.Opacity="0.84"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=OverlayElementForeground}"
                     Color="#FFF0F0F0"
                     cs:MetropolisLight.Color="#FF373A3D"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=OverlayElementAccentColor}" Color="#FFF78A09"/>

    <Color x:Key="{dxt:MapBrushesThemeKey ResourceKey=OverlayElementHotColor}">#FFF78A09</Color>

    <Color x:Key="{dxt:MapBrushesThemeKey ResourceKey=OverlayElementPressedColor}">#FFF78A09</Color>

    <!-- ToolTip -->

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=ToolTipBackground}"
                     Color="#FF333333"
                     cs:MetropolisLight.Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=ToolTipForeground}"
                     Color="#FFF0F0F0"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <!-- SearchPanel -->

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=SearchPanelBackground}"
                     Color="#FF333333"
                     cs:MetropolisLight.Color="White"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=SearchPanelForeground}"
                     Color="#FFF0F0F0"
                     cs:MetropolisLight.Color="#FF353535"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=SearchPanelNullTextForeground}"
                     Color="#FFF0F0F0"
                     Opacity="0.62"
                     cs:MetropolisLight.Color="#FF373A3D"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=SearchPanelClearButtonFill}" Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=SearchPanelLoadingBrush}" Color="#FFF78A09"/>

    <!--Pushpin-->

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=PushpinBackground}" Color="#FF999999"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=PushpinForeground}"
                     Color="#FF333333"
                     cs:MetropolisLight.Color="#FF373A3D"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=PushpinSelectionBrush}" Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=PushpinSelectionForeground}"
                     Color="#FF333333"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <!--MapEditor-->

    <System:Double x:Key="{dxt:AdornersThemeKeys ResourceKey=ResizePointSize}">7</System:Double>

    <SolidColorBrush x:Key="{dxt:AdornersThemeKeys ResourceKey=ResizeBoxBackground}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="#FFEFEFEF"/>

    <SolidColorBrush x:Key="{dxt:AdornersThemeKeys ResourceKey=SelectionAdornerStroke}"
                     Color="#FFEFEFEF"
                     cs:MetropolisLight.Color="#FF444444"/>

    <Thickness x:Key="{dxt:AdornersThemeKeys ResourceKey=RotationAdornerMargin}">-10,-30,-13,0</Thickness>

    <System:Double x:Key="{dxt:AdornersThemeKeys ResourceKey=EditablePointSize}">10</System:Double>

    <SolidColorBrush x:Key="{dxt:AdornersThemeKeys ResourceKey=EditablePointBackground}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="#FFEFEFEF"/>

    <SolidColorBrush x:Key="{dxt:AdornersThemeKeys ResourceKey=EditablePointStroke}"
                     Color="#FFEFEFEF"
                     cs:MetropolisLight.Color="#FF444444"/>

    <!--MapEditorPanel-->

    <Thickness x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=ItemMargin}">4</Thickness>

    <System:Double x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=ItemSize}">16</System:Double>

    <SolidColorBrush x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=SeparatorColor}" Color="#3FFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=ItemBackground}" Color="#FFF78A09"/>

    <System:Double x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=PressedItemOpacity}">0.35</System:Double>

    <System:Double x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=ActiveItemOpacity}">0.5</System:Double>

    <System:Double x:Key="{dxt:ButtonPanelThemeKeys ResourceKey=DisabledItemOpacity}">.3</System:Double>

    <!--Measurements-->

    <SolidColorBrush x:Key="{dxt:MeasurementsThemeKeys ResourceKey=RulerFill}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:MeasurementsThemeKeys ResourceKey=RulerStroke}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FF3C3C3C"/>

    <System:Double x:Key="{dxt:MeasurementsThemeKeys ResourceKey=RulerBorderThickness}">2</System:Double>

    <System:Double x:Key="{dxt:MeasurementsThemeKeys ResourceKey=AreaRulerOpacity}">0.7</System:Double>

    <SolidColorBrush x:Key="{dxt:MeasurementsThemeKeys ResourceKey=LabelFill}"
                     Color="#FF3C3C3C"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{dxt:MeasurementsThemeKeys ResourceKey=DeleteCrossFill}" Color="Gray"/>

    <SolidColorBrush x:Key="{dxt:MeasurementsThemeKeys ResourceKey=DeleteCrossHighlightedFill}" Color="Red"/>
    
    <SolidColorBrush x:Key="{dxt:MapBrushesThemeKey ResourceKey=VectorLayerForeground}"
                     Color="#FFFFFFFF"
                     cs:MetropolisLight.Color="#FF3C3C3C"/>

</ResourceDictionary>