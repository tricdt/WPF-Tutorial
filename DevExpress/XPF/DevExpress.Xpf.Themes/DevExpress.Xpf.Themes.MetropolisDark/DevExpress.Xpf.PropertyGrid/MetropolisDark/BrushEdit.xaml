<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="clr-namespace:DevExpress.Xpf.Core.Native;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.MetropolisDark.v24.1;component/DevExpress.Xpf.PropertyGrid/Generic/BrushEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="DefaultState.BorderBrush"
                     Color="#FF515151"
                     cs:Name="SolidColorBrush_0001"
                     cs:MetropolisLight.Color="#FFB9B9B9"/>

    <SolidColorBrush x:Key="DefaultState.Background"
                     Color="#FF333333"
                     cs:Name="SolidColorBrush_0002"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="HoverState.BorderBrush"
                     Color="#FF515151"
                     cs:Name="SolidColorBrush_0003"
                     cs:MetropolisLight.Color="#FFB9B9B9"/>

    <SolidColorBrush x:Key="HoverState.Background"
                     Color="#FF515151"
                     cs:Name="SolidColorBrush_0004"
                     cs:MetropolisLight.Color="#FFF0F0F0"/>

    <SolidColorBrush x:Key="PressedState.BorderBrush"
                     Color="#FF515151"
                     cs:Name="SolidColorBrush_0005"
                     cs:MetropolisLight.Color="#FFB9B9B9"/>

    <SolidColorBrush x:Key="PressedState.Background"
                     Color="#FF333333"
                     cs:Name="SolidColorBrush_0006"
                     cs:MetropolisLight.Color="#FFFFFFFF"/>

    <ControlTemplate x:Key="{dxprgt:PopupBrushEditThemeKey ResourceKey=BrushTypeButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="Root" Margin="0,0,-1,-1">
            <Border x:Name="DefaultState"
                    Background="{StaticResource DefaultState.Background}"
                    BorderBrush="{StaticResource DefaultState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,0,0,1"
                    Opacity="0"/>
            <Border x:Name="HoverState"
                    Background="{StaticResource HoverState.Background}"
                    BorderBrush="{StaticResource HoverState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,0,0,1"
                    Opacity="0"/>
            <Border x:Name="PressedState"
                    Background="{StaticResource PressedState.Background}"
                    BorderBrush="{StaticResource PressedState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,-2,0,0"
                    Opacity="0">
                <Border Background="#FFF78A09"
                        cs:Name="Border_0001"
                        Height="2"
                        Margin="-1,0,-1,0"
                        VerticalAlignment="Top"
                        cs:MetropolisLight.Background="#FFF78A09"
                       />
            </Border>
            <ContentPresenter x:Name="Content"
                              cs:Name="ContentPresenter_0001"
                              HorizontalAlignment="Center"
                              Margin="3"
                              TextElement.Foreground="#FFA2A2A2"
                              VerticalAlignment="Center"
                              cs:MetropolisLight.TextElement.Foreground="#FF373A3D"
                             />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
                <Setter cs:Name="Setter_0001"
                        Property="TextElement.Foreground"
                        TargetName="Content"
                        Value="#FFF78A09"
                        cs:MetropolisLight.Value="#FFCEE3FD"
                       />
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.38"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>