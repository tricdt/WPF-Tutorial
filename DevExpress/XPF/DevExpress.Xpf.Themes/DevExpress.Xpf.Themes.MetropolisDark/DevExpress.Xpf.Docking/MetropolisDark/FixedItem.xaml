<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys"
                    xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:BoolToVisibilityInverseConverter x:Key="boolToVisibilityInverseConverter"/>

    <dx:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <ControlTemplate x:Key="{dxt:SplitterControlElementsThemeKey ResourceKey=Template}">
        <Border x:Name="PART_Border"
                Background="Transparent"
                cs:Name="Border_0001"
                Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualMargin, RelativeSource={RelativeSource TemplatedParent}}"
                Padding="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"
                ve:DockPane.HitTestType="Bounds"
                Visibility="{Binding Path=(local:DockLayoutManager.LayoutItem).Visibility, RelativeSource={RelativeSource TemplatedParent}}"
                cs:MetropolisLight.Background="#00000000"
               >
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0001"
                                            Duration="0"
                                            Storyboard.TargetName="GlyphHorizontal"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF666666"
                                            cs:MetropolisLight.To="#FF373A3D"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0002"
                                            Duration="0"
                                            Storyboard.TargetName="GlyphVertical"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF666666"
                                            cs:MetropolisLight.To="#FF373A3D"
                                           />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation cs:Name="ColorAnimation_0003"
                                            Duration="0"
                                            Storyboard.TargetName="GlyphHorizontal"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF515151"
                                            cs:MetropolisLight.To="#FF373A3D"
                                           />
                            <ColorAnimation cs:Name="ColorAnimation_0004"
                                            Duration="0"
                                            Storyboard.TargetName="GlyphVertical"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF515151"
                                            cs:MetropolisLight.To="#FF373A3D"
                                           />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ve:DropBoundsControl x:Name="Drop" Margin="1">
                <dx:Container Background="{TemplateBinding Background}" UseLayoutRounding="True">
                    <dx:Container x:Name="PART_HorizontalRootElement">
                        <Path x:Name="GlyphHorizontal"
                              cs:Name="Path_0001"
                              Data="F1 M 479.501,336.5L 479.501,336.5L 479.501,337.5L 478.501,337.5L 478.501,336.5L 478.501,336.5L 478.501,335.5L 479.501,335.5L 479.501,336.5 Z M 471.5,336.5L 471.5,336.5L 471.5,337.5L 470.5,337.5L 470.5,336.5L 470.5,336.5L 470.5,335.5L 471.5,335.5L 471.5,336.5 Z M 483.5,336.5L 483.5,336.5L 483.5,337.5L 482.5,337.5L 482.5,336.5L 482.5,336.5L 482.5,335.5L 483.5,335.5L 483.5,336.5 Z M 475.5,336.5L 475.5,336.5L 475.5,337.5L 474.5,337.5L 474.5,336.5L 474.5,336.5L 474.5,335.5L 475.5,335.5L 475.5,336.5 Z M 481.5,336.5L 481.5,336.5L 481.5,337.5L 480.5,337.5L 480.5,336.5L 480.5,336.5L 480.5,335.5L 481.5,335.5L 481.5,336.5 Z M 473.5,336.5L 473.5,336.5L 473.5,337.5L 472.5,337.5L 472.5,336.5L 472.5,336.5L 472.5,335.5L 473.5,335.5L 473.5,336.5 Z M 485.5,336.5L 485.5,336.5L 485.5,337.5L 484.5,337.5L 484.5,336.5L 484.5,336.5L 484.5,335.5L 485.5,335.5L 485.5,336.5 Z M 477.501,336.5L 477.5,336.5L 477.501,337.5L 476.501,337.5L 476.5,336.5L 476.501,336.5L 476.5,335.5L 477.5,335.5L 477.501,336.5 Z "
                              Fill="#FF515151"
                              Height="2"
                              Stretch="Fill"
                              Width="15"
                              cs:MetropolisLight.Fill="#FFB9B9B9"
                             />
                    </dx:Container>
                    <dx:Container x:Name="PART_VerticalRootElement">
                        <Path x:Name="GlyphVertical"
                              cs:Name="Path_0002"
                              Data="F1 M 465,344L 465,344L 466,344L 466,345L 465,345L 465,345L 464,345L 464,344L 465,344 Z M 465,352L 465,352L 466,352L 466,353L 465,353L 465,353L 464,353L 464,352L 465,352 Z M 465,340L 465,340L 466,340L 466,341L 465,341L 465,341L 464,341L 464,340L 465,340 Z M 465,348L 465,348L 466,348L 466,349L 465,349L 465,349L 464,349L 464,348L 465,348 Z M 465,342L 465,342L 466,342L 466,343L 465,343L 465,343L 464,343L 464,342L 465,342 Z M 465,350L 465,350L 466,350L 466,351L 465,351L 465,351L 464,351L 464,350L 465,350 Z M 465,338L 465,338L 466,338L 466,339L 465,339L 465,339L 464,339L 464,338L 465,338 Z M 465,346L 465,346L 466,346L 466,347L 465,347L 465,347L 464,347L 464,346L 465,346 Z "
                              Fill="#FF515151"
                              Height="15"
                              Stretch="Fill"
                              Width="2"
                              cs:MetropolisLight.Fill="#FFB9B9B9"
                             />
                    </dx:Container>
                </dx:Container>
            </ve:DropBoundsControl>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:EmptySpaceControlElementsThemeKey ResourceKey=Template}">
        <Border x:Name="PART_Border"
                Background="Transparent"
                cs:Name="Border_0002"
                Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualMargin, RelativeSource={RelativeSource TemplatedParent}}"
                Padding="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"
                ve:DockPane.HitTestType="Bounds"
                Visibility="{Binding Path=(local:DockLayoutManager.LayoutItem).Visibility, RelativeSource={RelativeSource TemplatedParent}}"
                cs:MetropolisLight.Background="#00000000"
               >
            <ve:DropBoundsControl>
                <Grid SnapsToDevicePixels="True"/>
            </ve:DropBoundsControl>
        </Border>
    </ControlTemplate>

    <DataTemplate x:Key="{dxt:LabelControlElementsThemeKey ResourceKey=Caption}">
        <Border Background="Transparent"
                cs:Name="Border_0003"
                DataContext="{Binding LayoutItem}"
                ve:DockPane.HitTestType="Header"
                cs:MetropolisLight.Background="#00000000"
               >
            <ve:TemplatedCaptionControl LayoutItem="{Binding}"/>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:LabelControlElementsThemeKey ResourceKey=Content}">
        <Border DataContext="{Binding LayoutItem}" ve:DockPane.HitTestType="Content">
            <ContentPresenter Content="{Binding Path=Content}"
                              ContentTemplate="{Binding DataContext.LayoutItem.ContentTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                              ContentTemplateSelector="{Binding DataContext.LayoutItem.ContentTemplateSelector, RelativeSource={RelativeSource TemplatedParent}}"/>
        </Border>
    </DataTemplate>

    <ControlTemplate x:Key="{dxt:LabelControlElementsThemeKey ResourceKey=Template}" TargetType="ve:psvHeaderedContentControl">
        <Border x:Name="PART_Border"
                Background="Transparent"
                cs:Name="Border_0006"
                Margin="{Binding LayoutItem.ActualMargin, RelativeSource={RelativeSource TemplatedParent}}"
                Padding="{Binding LayoutItem.ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"
                ve:DockPane.HitTestType="Bounds"
                Visibility="{Binding LayoutItem.Visibility, RelativeSource={RelativeSource TemplatedParent}}"
                cs:MetropolisLight.Background="#FFFFFFFF"
               >
            <ve:DropBoundsControl>
                <Grid SnapsToDevicePixels="true">
                    <ve:LabelControlCaptionPresenter x:Name="PART_Caption"
                                                     Content="{TemplateBinding Header}"
                                                     ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                     HorizontalAlignment="{Binding LayoutItem.CaptionHorizontalAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                                     VerticalAlignment="{Binding LayoutItem.CaptionVerticalAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Visibility="{Binding LayoutItem.HasContent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityInverseConverter}}"/>
                    <ve:LabelControlContentPresenter x:Name="PART_Content"
                                                     Content="{TemplateBinding Content}"
                                                     ContentTemplate="{TemplateBinding ContentTemplate}"
                                                     HorizontalAlignment="{Binding LayoutItem.ContentHorizontalAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"
                                                     VerticalAlignment="{Binding LayoutItem.ContentVerticalAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Visibility="{Binding LayoutItem.HasContent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityConverter}}"/>
                </Grid>
            </ve:DropBoundsControl>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:SeparatorControlElementsThemeKey ResourceKey=Template}">
        <Border x:Name="PART_Border"
                Background="Transparent"
                cs:Name="Border_0005"
                Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualMargin, RelativeSource={RelativeSource TemplatedParent}}"
                Padding="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"
                ve:DockPane.HitTestType="Bounds"
                Visibility="{Binding Path=(local:DockLayoutManager.LayoutItem).Visibility, RelativeSource={RelativeSource TemplatedParent}}"
                cs:MetropolisLight.Background="#00000000"
               >
            <ve:DropBoundsControl>
                <Grid SnapsToDevicePixels="True">
                    <Grid x:Name="PART_VerticalRootElement"
                          Margin="2,4,2,4"
                          Width="2">
                        <Rectangle cs:Name="Rectangle_0001"
                                   Fill="#FFCCCCCC"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,1"
                                   Stretch="Fill"
                                   Width="1"
                                   cs:MetropolisLight.Fill="#FFB9B9B9"
                                  />
                        <Rectangle cs:Name="Rectangle_0002"
                                   Fill="#FFFFFFFF"
                                   HorizontalAlignment="Right"
                                   Margin="0,1,0,0"
                                   Stretch="Fill"
                                   Width="1"
                                   cs:MetropolisLight.Fill="#FFFFFFFF"
                                  />
                    </Grid>
                    <Grid x:Name="PART_HorizontalRootElement"
                          Height="2"
                          Margin="4,2,4,2">
                        <Rectangle cs:Name="Rectangle_0003"
                                   Fill="#FFCCCCCC"
                                   Height="1"
                                   Margin="0,0,1,0"
                                   Stretch="Fill"
                                   VerticalAlignment="Top"
                                   cs:MetropolisLight.Fill="#FFB9B9B9"
                                  />
                        <Rectangle cs:Name="Rectangle_0004"
                                   Fill="#FFFFFFFF"
                                   Height="1"
                                   Margin="1,0,0,0"
                                   Stretch="Fill"
                                   VerticalAlignment="Bottom"
                                   cs:MetropolisLight.Fill="#FFFFFFFF"
                                  />
                    </Grid>
                </Grid>
            </ve:DropBoundsControl>
        </Border>
    </ControlTemplate>

</ResourceDictionary>