    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.VisualElements.DocumentSelectorContainer}" TargetType="{x:Type ve:DocumentSelectorContainer}">
        <Style.Setters>
            <Setter cs:Name="Setter_0001"
                    Property="Foreground"
                    Value="#BFFFFFFF"
                    cs:MetropolisLight.Value="#FF373A3D"
                   />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ve:DocumentSelectorContainer}">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="#1F000000"
                                    cs:Name="Border_1066"
                                    Padding="3"
                                    cs:MetropolisLight.Background="#1F000000"
                                   >
                                <Border x:Name="Window"
                                        Background="#FF515151"
                                        cs:Name="Border_0033"
                                        cs:MetropolisLight.Background="#FFB9B9B9"
                                       >
                                    <Border Background="#FF333333"
                                            cs:Name="Border_0034"
                                            Margin="1"
                                            cs:MetropolisLight.Background="#FFFFFFFF"
                                           >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border x:Name="Header"
                                                    Background="#FF515151"
                                                    cs:Name="Border_0035"
                                                    cs:MetropolisLight.Background="#FFB9B9B9"
                                                   >
                                                <StackPanel HorizontalAlignment="Left"
                                                            Margin="12,8"
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <Image HorizontalAlignment="Left"
                                                           Margin="0,0,6,0"
                                                           Source="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionImage}"
                                                           Stretch="None"
                                                           VerticalAlignment="Top"/>
                                                    <StackPanel>
                                                        <ContentControl Content="{Binding Path=(local:DockLayoutManager.LayoutItem).Caption}"
                                                                        ContentTemplate="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionTemplate}"
                                                                        ContentTemplateSelector="{Binding Path=(local:DockLayoutManager.LayoutItem).CaptionTemplateSelector}"
                                                                        Focusable="False"
                                                                        FontWeight="Bold"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Bottom"/>
                                                        <TextBlock HorizontalAlignment="Left"
                                                                   Text="{Binding Path=(local:DockLayoutManager.LayoutItem).Description}"
                                                                   TextWrapping="Wrap"
                                                                   VerticalAlignment="Top"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                            <Border x:Name="Content"
                                                    Background="#FF333333"
                                                    cs:Name="Border_0036"
                                                    Grid.Row="1"
                                                    cs:MetropolisLight.Background="#FFFFFFFF"
                                                   >
                                                <ContentPresenter x:Name="PART_ContainerContent"
                                                                  Content="{Binding}"
                                                                  Margin="12"/>
                                            </Border>
                                            <Border x:Name="Footer"
                                                    Background="#FF515151"
                                                    cs:Name="Border_0037"
                                                    Grid.Row="2"
                                                    MinHeight="24"
                                                    cs:MetropolisLight.Background="#FFB9B9B9"
                                                   >
                                                <ContentPresenter Content="{Binding Path=(local:DockLayoutManager.LayoutItem).FooterDescription}"
                                                                  HorizontalAlignment="Left"
                                                                  Margin="12,0,0,0"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Border>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <ControlTemplate x:Key="{dxt:DocumentSelectorElementsThemeKey ResourceKey=ListBoxItem}" TargetType="{x:Type ListBoxItem}">
        <Grid>
            <Grid x:Name="HoverState" Opacity="0">
                <Border Background="#FF666666"
                        cs:Name="Border_0038"
                        Margin="0,0,0,1"
                        cs:MetropolisLight.Background="#FFB9B9B9"
                       />
            </Grid>
            <Grid x:Name="SelectedState" Opacity="0">
                <Border Background="#FFF78A09"
                        cs:Name="Border_0039"
                        Margin="0,0,0,1"
                        cs:MetropolisLight.Background="#FFF78A09"
                       />
            </Grid>
            <Border Padding="{TemplateBinding Padding}">
                <ve:TemplatedCaptionControl x:Name="caption"
                                            LayoutItem="{Binding}"
                                            Margin="3,2"/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="1"/>
                <Setter cs:Name="Setter_0002"
                        Property="Foreground"
                        TargetName="caption"
                        Value="#FF000000"
                        cs:MetropolisLight.Value="#FF373A3D"
                       />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
                <Setter cs:Name="Setter_0003"
                        Property="Foreground"
                        TargetName="caption"
                        Value="#FF000000"
                        cs:MetropolisLight.Value="#FF373A3D"
                       />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <DataTemplate x:Key="{dxt:DockPaneElementsThemeKey ResourceKey=ContentPreview}">
        <Border Background="#FF333333"
                BorderBrush="#FFF78A09"
                BorderThickness="1"
                cs:Name="Border_0041"
                Padding="12"
                cs:MetropolisLight.Background="#FFFFFFFF"
                cs:MetropolisLight.BorderBrush="#FF373A3D"
               >
            <ContentPresenter Content="{TemplateBinding Content}"/>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:DocumentElementsThemeKey ResourceKey=ContentPreview}">
        <Border Background="#FF333333"
                BorderBrush="#FFF78A09"
                BorderThickness="1"
                cs:Name="Border_0043"
                Padding="1"
                cs:MetropolisLight.Background="#FFFFFFFF"
                cs:MetropolisLight.BorderBrush="#FF373A3D"
               >
            <ContentPresenter Content="{TemplateBinding Content}"/>
        </Border>
    </DataTemplate>

    <!--END WPF-->

