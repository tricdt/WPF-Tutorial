<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="{dxpt:NewDocumentViewerThemeKey ResourceKey=PageBorderTemplate}">
        <Grid>
            <Border x:Name="Border"
                    BorderBrush="#FFC3C3C3"
                    BorderThickness="4"
                    cs:Name="Border_0001"
                    Margin="-4"
                    cs:MetropolisLight.BorderBrush="#FFC3C3C3"
                   />
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="true">
                <Setter cs:Name="Setter_0001"
                        Property="BorderBrush"
                        TargetName="Border"
                        Value="#FFF78A09"
                        cs:MetropolisLight.Value="#FFF78A09"
                       />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>