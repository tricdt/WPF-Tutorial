<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid"
                    xmlns:dxpgi="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid/internal"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxpgi:PivotGridThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type dxpgi:DXPivotGridThemesLoader}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxpgi:DXPivotGridThemesLoader}">
                    <Grid Height="Auto" Width="Auto">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="ShowBorder">
                                <VisualState Name="ShownBorder"/>
                                <VisualState Name="HidenBorder">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                       Storyboard.TargetName="border"
                                                                       Storyboard.TargetProperty="CornerRadius">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <CornerRadius>0</CornerRadius>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                       Storyboard.TargetName="border"
                                                                       Storyboard.TargetProperty="Padding">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Thickness>0</Thickness>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                       Storyboard.TargetName="border1"
                                                                       Storyboard.TargetProperty="CornerRadius">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <CornerRadius>0</CornerRadius>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="73.6"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="13"/>
                        </Grid.RowDefinitions>
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Grid.RowSpan="3">
                            <ContentPresenter Margin="1"/>
                        </Border>
                        <Border x:Name="border1"
                                BorderBrush="{DynamicResource {dxpgi:AppearanceThemeKey ResourceKey=PivotBorderBrush}}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Grid.RowSpan="3"
                                Padding="1">
                        </Border>
                        <dx:WaitIndicator DeferedVisibility="{TemplateBinding ShowIndicator}" Grid.RowSpan="3"/>
                        <dxe:FlyoutControl Content="{TemplateBinding ErrorPanelText}"
                                           Grid.RowSpan="3"
                                           IsOpen="{Binding ShowErrorPanel, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                           Style="{TemplateBinding ErrorPanelStyle}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Thickness x:Key="{dxpgi:PivotGridThemeKey ResourceKey=FieldListSearchMargin}">4,4,4,4</Thickness>

    <Thickness x:Key="{dxpgi:PivotGridThemeKey ResourceKey=InnerFieldListPadding}">0</Thickness>

    <SolidColorBrush x:Key="{dxpgi:PivotGridThemeKey ResourceKey=FieldListSearchBorderBrush}" Color="Transparent"/>

    <Thickness x:Key="{dxpgi:PivotGridThemeKey ResourceKey=FieldListSearchBorderThickness}">0,0,0,0</Thickness>

    <Thickness x:Key="{dxpgi:PivotGridThemeKey ResourceKey=InnerFieldListBorderThickness}">0</Thickness>

</ResourceDictionary>