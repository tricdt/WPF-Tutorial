<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="clr-namespace:DevExpress.Xpf.Core.Native;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid"
                    xmlns:dxpgi="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid/internal"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <dx:BooleanToVisibilityConverter x:Key="invertBoolToVisibilityConverter" Invert="True"/>

    <ControlTemplate x:Key="{dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonTemplate}" TargetType="{x:Type dx:ToggleStateButton}">
        <Border x:Name="border"
                Background="{DynamicResource {dxpgi:AppearanceThemeKey ResourceKey=ExpandButtonBackground}}"
                CornerRadius="2,2,2,2"
                Height="9"
                Padding="1,1,1,1"
                Width="9">
            <Border Background="{DynamicResource {dxpgi:AppearanceThemeKey ResourceKey=ExpandButtonInnerBackground}}" CornerRadius="1,1,1,1">
                <Grid Height="5" Width="5">
                    <Rectangle x:Name="rectangle"
                               Fill="{DynamicResource {dxpgi:AppearanceThemeKey ResourceKey=ExpandButtonColor}}"
                               Height="1"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"
                               Stretch="Fill"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsChecked, Converter={StaticResource boolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                               Width="5"/>
                    <Path x:Name="path"
                          Data="F1 M 1256,774L 1257,774L 1257,776L 1259,776L 1259,777L 1257,777L 1257,779L 1256,779L 1256,777L 1254,777L 1254,776L 1256,776L 1256,774 Z "
                          Fill="{DynamicResource {dxpgi:AppearanceThemeKey ResourceKey=ExpandButtonColor}}"
                          Height="5"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,0"
                          Stretch="Fill"
                          VerticalAlignment="Center"
                          Visibility="{Binding IsChecked, Converter={StaticResource invertBoolToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                          Width="5"/>
                </Grid>
            </Border>
        </Border>
    </ControlTemplate>

    <Style x:Key="{dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonStyle}" TargetType="{x:Type dx:ToggleStateButton}">
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Width" Value="11"/>
        <Setter Property="Height" Value="11"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template" Value="{DynamicResource {dxpgi:ScrollableAreaThemeKey ResourceKey=ExpandButtonTemplate}}"/>
    </Style>

</ResourceDictionary>