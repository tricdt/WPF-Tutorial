                                  Height="9"
                                  HorizontalAlignment="Center"
                                  Margin="0,1,0,0"
                                  Opacity="0"
                                  Stretch="Fill"
                                  VerticalAlignment="Center"
                                  Width="7"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

