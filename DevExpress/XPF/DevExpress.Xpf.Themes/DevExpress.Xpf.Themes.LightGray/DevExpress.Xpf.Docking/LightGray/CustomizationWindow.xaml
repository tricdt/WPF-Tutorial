<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/docking/platform"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys"
                    xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="{dxt:DocumentSelectorElementsThemeKey ResourceKey=CutBrushVertical}"
                         EndPoint="1,0.5"
                         StartPoint="0,0.5">
        <GradientStop Color="#FFFFFFFF" Offset="1"/>
        <GradientStop Color="#F0FFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="{dxt:DocumentSelectorElementsThemeKey ResourceKey=CutBrushHorizontal}"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFFFFFFF" Offset="1"/>
        <GradientStop Color="#F0FFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="{dxt:BrushElementsThemeKey ResourceKey=HiddenItem}"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFF3F3F3" Offset="0"/>
        <GradientStop Color="#FFCFCFCF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="{dxt:BrushElementsThemeKey ResourceKey=HiddenItemCaption}"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFE0E0E0" Offset="0"/>
        <GradientStop Color="#FFD5D5D5" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="{dxt:BrushElementsThemeKey ResourceKey=HiddenItemBorder}" Color="#FF5D5D5D"/>

    <ControlTemplate x:Key="{dxt:OtherResourcesThemeKey ResourceKey=HiddenItemTemplate}" TargetType="ve:HiddenItem">
        <Grid>
            <Border x:Name="Item"
                    Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItemBorder}}"
                    CornerRadius="2"
                    Opacity="0.5">
                <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItem}}"
                        CornerRadius="1"
                        Margin="1"/>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image x:Name="PART_Image"
                           Height="16"
                           Margin="8,6,0,6"
                           Width="16"/>
                    <ContentPresenter Margin="8,6"/>
                </StackPanel>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DockElementsThemeKey ResourceKey=DragCursor}" TargetType="ve:DragCursorControl">
        <ControlTemplate.Resources>
            <ControlTemplate x:Key="ItemTemplate" TargetType="ContentControl">
                <Grid>
                    <Grid x:Name="Item"
                          Opacity="0.75"
                          VerticalAlignment="Top">
                        <Border Background="#FF000000"
                                CornerRadius="3"
                                Margin="2,2,0,0"
                                Opacity="0.15"/>
                        <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItemBorder}}"
                                CornerRadius="2"
                                Height="28"
                                Margin="0,0,2,2">
                            <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItem}}"
                                    CornerRadius="1"
                                    Margin="1"/>
                        </Border>
                    </Grid>
                    <Border x:Name="CaptionContainer"
                            HorizontalAlignment="Center"
                            Margin="0,0,2,2"
                            MinHeight="28"
                            VerticalAlignment="Top">
                        <ContentPresenter Margin="8,2"/>
                    </Border>
                </Grid>
            </ControlTemplate>
            <ControlTemplate x:Key="PanelTemplate" TargetType="ContentControl">
                <Grid>
                    <Grid x:Name="Panel" Opacity="0.75">
                        <Border Background="#FF000000"
                                CornerRadius="3"
                                Margin="2,2,0,0"
                                Opacity="0.15"/>
                        <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItemBorder}}"
                                CornerRadius="2"
                                Margin="0,0,2,2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItemCaption}}"
                                        CornerRadius="1,1,0,0"
                                        Grid.Row="0"
                                        Margin="1"
                                        Opacity="0.75"/>
                                <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=HiddenItem}}"
                                        CornerRadius="0,0,1,1"
                                        Grid.Row="1"
                                        Margin="1,0,1,1"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <Border x:Name="CaptionContainer"
                            HorizontalAlignment="Center"
                            Margin="0,8,2,2"
                            MinHeight="28"
                            VerticalAlignment="Center">
                        <ContentPresenter Margin="8,6"/>
                    </Border>
                </Grid>
            </ControlTemplate>
            <ControlTemplate x:Key="DragCursorTemplate" TargetType="ContentControl">
                <Grid Opacity="0.75">
                    <Border BorderBrush="#FF5779AD" BorderThickness="3">
                        <Border Background="#FFA5C2E4"/>
                    </Border>
                </Grid>
            </ControlTemplate>
        </ControlTemplate.Resources>
        <ContentControl x:Name="content" Template="{StaticResource PanelTemplate}">
            <ve:TemplatedCaptionControl x:Name="PART_CaptionControl"
                                        Foreground="#FF000000"
                                        LayoutItem="{Binding}"/>
        </ContentControl>
        <ControlTemplate.Triggers>
            <Trigger Property="CursorType" Value="Item">
                <Setter Property="Template"
                        TargetName="content"
                        Value="{StaticResource ItemTemplate}"/>
            </Trigger>
            <Trigger Property="CursorType" Value="Window">
                <Setter Property="Template"
                        TargetName="content"
                        Value="{StaticResource DragCursorTemplate}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

