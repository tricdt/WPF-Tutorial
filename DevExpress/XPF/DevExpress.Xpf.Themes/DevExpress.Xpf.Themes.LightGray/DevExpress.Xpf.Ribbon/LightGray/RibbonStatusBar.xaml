<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Ribbon Status Bar. Left Part -->

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=LeftPartTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border x:Name="PART_leftBody"
                    BorderThickness="0"
                    Margin="0,0,0,0"
                    SnapsToDevicePixels="True">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FFDDDDDD" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter/>
        </Grid>
    </ControlTemplate>

    <!-- Ribbon Status Bar. Right Part -->

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=RightPartTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border x:Name="PART_rightBody"
                    BorderThickness="0"
                    Margin="0,0,0,0"
                    Opacity="0.95"
                    SnapsToDevicePixels="True">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFDBDBDD" Offset="0"/>
                        <GradientStop Color="#FFB4B4B4" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Background="#59000000"
                    BorderBrush="#BFFFFFFF"
                    BorderThickness="0,0,1,0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Margin="0"
                    Width="2"/>
            <ContentPresenter SnapsToDevicePixels="True"/>
        </Grid>
    </ControlTemplate>

    <!-- Ribbon Status Bar. Size Grip -->

    <ControlTemplate x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=SizeGripTemplate}" TargetType="{x:Type Thumb}">
        <Grid>
            <Border x:Name="PART_sizeGripBody"
                    BorderThickness="0"
                    Margin="0,0,0,0"
                    Opacity="0.95"
                    SnapsToDevicePixels="True">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFDBDBDD" Offset="0"/>
                        <GradientStop Color="#FFB4B4B4" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Height="16"
                  HorizontalAlignment="Right"
                  Margin="0,1,2,1"
                  VerticalAlignment="Bottom"
                  Width="16">
                <Viewbox Height="11"
                         HorizontalAlignment="Right"
                         Margin="0,0,0,0"
                         VerticalAlignment="Bottom"
                         Width="10">
                    <Canvas Background="Transparent"
                            Height="11"
                            Width="9.99999">
                        <Path Canvas.Left="0"
                              Canvas.Top="0.999989"
                              Data="F1 M 0,8.99998L 2,8.99998L 2,11L 0,11L 0,8.99998 Z M 3.99997,8.99999L 5.99997,8.99999L 5.99997,11L 3.99997,11L 3.99997,8.99999 Z M 7.99998,8.99999L 9.99998,8.99999L 9.99998,11L 7.99998,11L 7.99998,8.99999 Z M 7.99998,4.99999L 9.99998,4.99999L 9.99998,6.99999L 7.99998,6.99999L 7.99998,4.99999 Z M 7.99999,0.999989L 9.99999,0.999989L 9.99999,2.99998L 7.99999,2.99998L 7.99999,0.999989 Z M 4,4.99998L 6,4.99998L 6,6.99998L 4,6.99998L 4,4.99998 Z "
                              Fill="#5AFFFFFF"
                              Height="10"
                              Stretch="Fill"
                              Width="9.99999"/>
                        <Path Canvas.Left="0"
                              Canvas.Top="0"
                              Data="F1 M 0,7.99999L 2,7.99999L 2,9.99999L 0,9.99999L 0,7.99999 Z M 3.99997,8L 5.99997,8L 5.99997,10L 3.99997,10L 3.99997,8 Z M 7.99998,8L 9.99998,8L 9.99998,10L 7.99998,10L 7.99998,8 Z M 7.99998,4L 9.99998,4L 9.99998,6L 7.99998,6L 7.99998,4 Z M 7.99999,0L 9.99999,0L 9.99999,2L 7.99999,2L 7.99999,0 Z M 4,4L 6,4L 6,6L 4,6L 4,4 Z "
                              Fill="#FF6E6E6E"
                              Height="10"
                              Stretch="Fill"
                              Width="9.99999"/>
                    </Canvas>
                </Viewbox>
            </Grid>
        </Grid>
    </ControlTemplate>

    <sys:Double x:Key="{dxrt:RibbonStatusBarThemeKey ResourceKey=MinHeight}">26</sys:Double>

</ResourceDictionary>