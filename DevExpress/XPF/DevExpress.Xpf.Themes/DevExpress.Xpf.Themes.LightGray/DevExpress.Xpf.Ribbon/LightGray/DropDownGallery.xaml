<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- LightGray: Drop Down Gallery SizeGrip -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=SizeGripContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFC4C4C4"
                Height="20"
                SnapsToDevicePixels="True">
            <Border HorizontalAlignment="Stretch"
                    Margin="0,1,0,0"
                    SnapsToDevicePixels="True"
                    VerticalAlignment="Stretch">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE6E6E6" Offset="0"/>
                        <GradientStop Color="Gainsboro" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <ContentPresenter/>
            </Border>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=MenuBorderTemplate}" TargetType="{x:Type ContentControl}">
        <StackPanel>
            <Border Background="#FFC4C4C4"
                    Height="1"
                    SnapsToDevicePixels="True"/>
            <ContentPresenter/>
        </StackPanel>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=MenuGlyphSideBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFE4E4E4"
                CornerRadius="0,0,0,0"
                SnapsToDevicePixels="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=MenuContentSideBorderTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="White"
                CornerRadius="0,0,0,0"
                SnapsToDevicePixels="True"/>
    </ControlTemplate>

    <!-- LightGray: Both Resize Thumb -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=ThumbForBothResizeModeTemplate}" TargetType="{x:Type Thumb}">
        <Border Background="Transparent"
                Height="16"
                HorizontalAlignment="Stretch"
                Margin="0,1,2,1"
                SnapsToDevicePixels="True"
                Width="16">
            <Grid Height="11"
                  HorizontalAlignment="Right"
                  Margin="0"
                  VerticalAlignment="Bottom"
                  Width="10">
                <Rectangle Fill="#59FFFFFF"
                           Height="2"
                           HorizontalAlignment="Left"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"
                           Width="2"/>
                <Rectangle Fill="#FF939393"
                           Height="2"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,1"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"
                           Width="2"/>
                <Rectangle Fill="#59FFFFFF"
                           Height="2"
                           Margin="4,0"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"/>
                <Rectangle Fill="#FF939393"
                           Height="2"
                           Margin="4,0,4,1"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"/>
                <Rectangle Fill="#59FFFFFF"
                           Height="2"
                           HorizontalAlignment="Right"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"
                           Width="2"/>
                <Rectangle Fill="#FF939393"
                           Height="2"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,1"
                           Stretch="Fill"
                           VerticalAlignment="Bottom"
                           Width="2"/>
                <Rectangle Fill="#59FFFFFF"
                           Margin="4,5,4,4"
                           Stretch="Fill"/>
                <Rectangle Fill="#FF939393"
                           Margin="4,4,4,5"
                           Stretch="Fill"/>
                <Rectangle Fill="#59FFFFFF"
                           HorizontalAlignment="Right"
                           Margin="0,5,0,4"
                           Stretch="Fill"
                           Width="2"/>
                <Rectangle Fill="#FF939393"
                           HorizontalAlignment="Right"
                           Margin="0,4,0,5"
                           Stretch="Fill"
                           Width="2"/>
                <Rectangle Fill="#59FFFFFF"
                           Height="2"
                           HorizontalAlignment="Right"
                           Margin="0,1,0,0"
                           Stretch="Fill"
                           VerticalAlignment="Top"
                           Width="2"/>
                <Rectangle Fill="#FF939393"
                           Height="2"
                           HorizontalAlignment="Right"
                           Stretch="Fill"
                           VerticalAlignment="Top"
                           Width="2"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- LightGray: Vertical Resize Thumb -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=ThumbForVertResizeModeTemplate}" TargetType="{x:Type Thumb}">
        <Border Background="Transparent"
                Cursor="SizeNS"
                Height="16"
                Margin="0"
                SnapsToDevicePixels="True"
                Width="16">
            <Grid Height="3"
                  HorizontalAlignment="Center"
                  Margin="0"
                  SnapsToDevicePixels="True"
                  VerticalAlignment="Center"
                  Width="10">
                <Rectangle Fill="#59FFFFFF"
                           HorizontalAlignment="Left"
                           Margin="0,1,0,0"
                           Stretch="Fill"
                           Width="2"/>
                <Rectangle Fill="#FF939393"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,1"
                           Stretch="Fill"
                           Width="2"/>
                <Rectangle Fill="#59FFFFFF"
                           Margin="4,1,4,0"
                           Stretch="Fill"/>
                <Rectangle Fill="#FF939393"
                           Margin="4,0,4,1"
                           Stretch="Fill"/>
                <Rectangle Fill="#59FFFFFF"
                           HorizontalAlignment="Right"
                           Margin="0,1,0,0"
                           Stretch="Fill"
                           Width="2"/>
                <Rectangle Fill="#FF939393"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,1"
                           Stretch="Fill"
                           Width="2"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- LightGray: Gallery Background Template -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=GalleryBackgroundTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#ffffffff" SnapsToDevicePixels="True">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <!-- LightGray: Gallery Background Template -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=GalleryGroupsBackgroundTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Margin="0,-1,0,0"/>
    </ControlTemplate>

    <!-- LightGray: Caption Button Template -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=GalleryCaptionTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid Height="20">
            <Border x:Name="PART_Default"
                    BorderThickness="0,0,0,1"
                    CornerRadius="2,2,0,0"
                    HorizontalAlignment="Stretch"
                    Margin="0"
                    SnapsToDevicePixels="True"
                    VerticalAlignment="Stretch">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF8C8D8D" Offset="0"/>
                        <GradientStop Color="#FF7F7F7F" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="PART_Checked"
                    BorderThickness="0,0,0,1"
                    CornerRadius="2,2,0,0"
                    HorizontalAlignment="Stretch"
                    Margin="0"
                    Opacity="0"
                    SnapsToDevicePixels="True"
                    VerticalAlignment="Stretch">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF585858" Offset="0"/>
                        <GradientStop Color="#FF585858" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="PART_Highlight"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,1"
                    Opacity="0"
                    SnapsToDevicePixels="True"
                    VerticalAlignment="Stretch">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF787878" Offset="0"/>
                        <GradientStop Color="#FF636363" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Highlight" Storyboard.TargetProperty="Opacity">
                                <SplineDoubleKeyFrame KeyTime="0" Value="0.15"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Default" Storyboard.TargetProperty="Opacity">
                                <SplineDoubleKeyFrame KeyTime="0" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Opacity">
                                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Highlight" Storyboard.TargetProperty="Opacity">
                                <SplineDoubleKeyFrame KeyTime="0" Value="0.15"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="CheckedStates">
                    <VisualState x:Name="Unchecked"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Default" Storyboard.TargetProperty="Opacity">
                                <SplineDoubleKeyFrame KeyTime="0" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Opacity">
                                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <!-- LightGray: Item Border Template -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=GalleryItemBorderTemplate}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid>
            <Border x:Name="PART_Normal"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    CornerRadius="2"
                    SnapsToDevicePixels="True"/>
            <Border x:Name="PART_Hover"
                    Background="#FFD3D3D3"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    CornerRadius="2"
                    SnapsToDevicePixels="True"
                    Visibility="Collapsed">
                <Border Background="#FFD3D3D3"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        CornerRadius="2"
                        HorizontalAlignment="Stretch"
                        Margin="1"
                        VerticalAlignment="Stretch"
                        Visibility="Visible"/>
            </Border>
            <Border x:Name="PART_HoverChecked"
                    Background="#FFD3D3D3"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    CornerRadius="2"
                    SnapsToDevicePixels="True"
                    Visibility="Collapsed">
                <Border BorderBrush="{x:Null}"
                        BorderThickness="0"
                        CornerRadius="2"
                        HorizontalAlignment="Stretch"
                        Margin="1"
                        VerticalAlignment="Stretch"
                        Visibility="Visible">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFB8B8B8" Offset="0"/>
                            <GradientStop Color="#FFD3D3D3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Background="White"
                            BorderThickness="0"
                            Margin="2"/>
                </Border>
            </Border>
            <Border x:Name="PART_Checked"
                    Background="#FF929292"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    CornerRadius="2"
                    SnapsToDevicePixels="True"
                    Visibility="Collapsed">
                <Border Background="#FF9CBAE4"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        CornerRadius="2"
                        HorizontalAlignment="Stretch"
                        Margin="1"
                        VerticalAlignment="Stretch"
                        Visibility="Visible">
                    <Border Background="White"
                            BorderThickness="0"
                            Margin="2"/>
                </Border>
            </Border>
            <Border x:Name="PART_Focused"
                    Background="#FFC3D5EF"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    CornerRadius="2"
                    SnapsToDevicePixels="True"
                    Visibility="Collapsed">
                <Border Background="#FFB8B8B8"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        CornerRadius="2"
                        HorizontalAlignment="Stretch"
                        Margin="1"
                        VerticalAlignment="Stretch"
                        Visibility="Visible">
                    <Border Background="White"
                            BorderThickness="0"
                            Margin="2"/>
                </Border>
            </Border>
            <ContentPresenter/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoverChecked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Focused" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoverChecked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Focused" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoverChecked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Focused" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverChecked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoverChecked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Focused" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Normal" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Hover" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoverChecked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Checked" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Focused" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <!-- LightGray: Item Glyph Border Template -->

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=GalleryItemGlyphBorderTemplate}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Border Name="PART_Border"
                BorderBrush="Transparent"
                BorderThickness="4">
            <ContentPresenter/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="State" Value="Checked">
                <Setter Property="BorderBrush"
                        TargetName="PART_Border"
                        Value="#FFFCDF"/>
                <Setter Property="BorderThickness"
                        TargetName="PART_Border"
                        Value="4"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=PopupBorderTemplate}" TargetType="{x:Type dxr:GalleryDropDownPopupBorderControl}">
        <Grid x:Name="PART_LightGrayDropDownGalleryBorder"
              Height="Auto"
              Width="Auto">
            <Border x:Name="shadow"
                    Background="#FF3D3D3D"
                    CornerRadius="3"
                    Margin="3,3,0,0"
                    Opacity="0.15"
                    SnapsToDevicePixels="True"
                    Visibility="Collapsed"/>
            <Border x:Name="border"
                    Background="#FF3D3D3D"
                    CornerRadius="3"
                    Padding="1,1,1,1"
                    SnapsToDevicePixels="True">
                <Grid>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      Height="Auto"
                                      Margin="0"
                                      Width="Auto"/>
                </Grid>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="AppType">
                    <VisualState x:Name="Standalone">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="shadow" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="Margin">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Thickness>0,0,3,3</Thickness>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="CornerRadius">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <CornerRadius>0,0,0,0</CornerRadius>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="BrowserHosted"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxrt:GalleryDropDownControlThemeKey ResourceKey=GalleryScrollBarContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="1,1,0,0"/>
    </Style>

</ResourceDictionary>