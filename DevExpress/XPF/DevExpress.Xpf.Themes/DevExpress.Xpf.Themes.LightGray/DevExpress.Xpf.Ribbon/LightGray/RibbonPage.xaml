<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:ColorOverlayConverter x:Key="colorOverlayConverter"/>

    <DataTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=DefaultCaptionContentTemplate}">
        <TextBlock Text="{Binding}"/>
    </DataTemplate>

    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=HeaderTextIndent}">10.0</sys:Double>

    <Style x:Key="{dxrt:RibbonPageThemeKey ResourceKey=SelectedPageContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <Style x:Key="{dxrt:RibbonPageThemeKey ResourceKey=CaptionContentContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="5,3,5,3"/>
    </Style>

    <Style x:Key="{dxrt:RibbonPageThemeKey ResourceKey=HighlightedCaptionContentContainerStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="5,3,5,3"/>
    </Style>

    <Thickness x:Key="{dxrt:RibbonPageThemeKey ResourceKey=CaptionControlMargin}">0,2,0,0</Thickness>

    <Thickness x:Key="{dxrt:RibbonPageThemeKey ResourceKey=SelectedPagePopupBorderMargin}">0,20,0,20</Thickness>

    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=MinHeight}">23.0</sys:Double>

    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=AeroMinHeight}">23.0</sys:Double>

    <!-- LightGray: Ribbon Header Template and Triggers -->

    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=CaptionBackgroundTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Grid Background="Transparent">
            <Border x:Name="PART_NormalUnchecked"
                    MinHeight="21"
                    Opacity="1"
                    VerticalAlignment="Bottom">
            </Border>
            <Border x:Name="PART_NormalChecked"
                    Background="#FF535353"
                    CornerRadius="3,3,0,0"
                    Opacity="0">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PART_HoverUnchecked"
                    Background="#FF535353"
                    CornerRadius="3,3,0,0"
                    Opacity="0">
                <Border Background="#FF9D9D9D"
                        BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,0"/>
            </Border>
            <Border x:Name="PART_HoverChecked"
                    Background="#FF535353"
                    CornerRadius="3,3,0,0"
                    Opacity="0">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PART_PressedChecked"
                    Background="#FF535353"
                    CornerRadius="3,3,0,0"
                    Opacity="0">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PART_Focused"
                    Background="#FF535353"
                    CornerRadius="3,3,0,0"
                    Opacity="0">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <ContentPresenter/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStateGroup">
                    <VisualState x:Name="NormalUnchecked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_PressedChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Focused"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="NormalChecked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_PressedChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Focused"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverUnchecked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_PressedChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Focused"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HoverChecked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_PressedChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Focused"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="PressedChecked">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_PressedChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Focused"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_NormalChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverUnchecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_HoverChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_PressedChecked"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Focused"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <!-- LightGray: Ribbon Page Button Serparator Template -->

    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=SeparatorTemplate}">
        <Border Margin="1,0,0,0"
                SnapsToDevicePixels="True"
                Width="1">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                    <GradientStop Color="#59FFFFFF" Offset="0.52"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </ControlTemplate>

    <!-- LightGray: Left and Right Repeat Buttons -->

    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=RightRepeatButtonTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid x:Name="grid" Background="{x:Null}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="IsMouseOver"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="IsDefault"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="IsPressed"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="path"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FF636363"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="IsPressed"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="IsDefault"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="IsMouseOver"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="path"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FF434343"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="IsDefault" BorderThickness="1,1,0,1">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF535353" Offset="0"/>
                        <GradientStop Color="#FF535353" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEFEFEF" Offset="0"/>
                        <GradientStop Color="#FFDFE0DE" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="IsMouseOver"
                    BorderThickness="1,1,0,1"
                    Opacity="0">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF535353" Offset="0"/>
                        <GradientStop Color="#FF535353" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FFEFF0EE" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="IsPressed"
                    Background="#FF535353"
                    BorderThickness="0"
                    Opacity="0">
                <Border BorderBrush="#FF969696"
                        BorderThickness="1,0,0,0"
                        Margin="1,1,0,1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFA7A7A8" Offset="1"/>
                            <GradientStop Color="#FFB8B8B7"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Path x:Name="path"
                  Data="F1 M 28,60L 28,68L 36,64L 28,60"
                  Fill="#FF535353"
                  Height="8"
                  HorizontalAlignment="Center"
                  Margin="4,2,2,2"
                  Stretch="Fill"
                  UseLayoutRounding="False"
                  VerticalAlignment="Center"
                  Width="8"/>
        </Grid>
    </ControlTemplate>

