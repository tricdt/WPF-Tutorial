    <!-- LightGray: Ribbon Page Background -->

    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=BackgroundTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=HighlightedCaptionBackgroundTemplate}" TargetType="{x:Type dxr:RibbonCheckedBorderControl}">
        <Grid Background="Transparent" Margin="2,0,1,0">
            <Border x:Name="PART_NormalUnchecked" Background="Transparent"/>
            <Border x:Name="PART_NormalChecked"
                    Background="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFFFFFFF}"
                    BorderThickness="0"
                    CornerRadius="3,3,0,0"
                    MinHeight="21"
                    VerticalAlignment="Bottom">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFF4F4F4}" Offset="0"/>
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFE8E8E8}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PART_HoverUnchecked"
                    Background="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FF6C6C6C}"
                    BorderThickness="0"
                    CornerRadius="3,3,0,0"
                    MinHeight="21"
                    Opacity="0"
                    VerticalAlignment="Bottom">
                <Border Background="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FF7A7A7A}"
                        BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,0"/>
            </Border>
            <Border x:Name="PART_HoverChecked"
                    Background="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFFFFFFF}"
                    BorderThickness="0"
                    CornerRadius="3,3,0,0"
                    MinHeight="21"
                    Opacity="0"
                    VerticalAlignment="Bottom">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFF4F4F4}" Offset="0"/>
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFE8E8E8}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PART_PressedChecked"
                    Background="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFFFFFFF}"
                    BorderThickness="0"
                    CornerRadius="3,3,0,0"
                    MinHeight="21"
                    VerticalAlignment="Bottom">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFF4F4F4}" Offset="0"/>
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFE8E8E8}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PART_Focused"
                    Background="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFFFFFFF}"
                    BorderThickness="0"
                    CornerRadius="3,3,0,0"
                    MinHeight="21"
                    Opacity="0"
                    VerticalAlignment="Bottom">
                <Border BorderThickness="0"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,-1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFFFFFFF}" Offset="0"/>
                            <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConverter}, ConverterParameter=#FFE8E8E8}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <ContentPresenter/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStateGroup">
                    <VisualState x:Name="NormalUnchecked">
