<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=NavigationButtonPrevStyle}" TargetType="{x:Type dxschd:VisualNavigationButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxschd:VisualNavigationButton}">
                    <Grid x:Name="grid"
                          Cursor="Hand"
                          dxsch:SchedulerControl.HitTestType="NavigationButton"
                          Height="24"
                          IsHitTestVisible="True"
                          Width="24">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="grid"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="0.35"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="border"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="0.75"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="border"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="border"
                                Background="#FD6E6E6E"
                                BorderThickness="0"
                                CornerRadius="16"
                                Opacity="0.5"/>
                        <Grid x:Name="glyph"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Path Data="F1 M 253,211L 258,206L 258,215.375L 258,216L 253,211 Z "
                                  Fill="White"
                                  Height="10"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,2,0"
                                  Stretch="Fill"
                                  UseLayoutRounding="False"
                                  VerticalAlignment="Center"
                                  Width="5"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=NavigationButtonNextStyle}" TargetType="{x:Type dxschd:VisualNavigationButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxschd:VisualNavigationButton}">
                    <Grid x:Name="grid"
                          Cursor="Hand"
                          dxsch:SchedulerControl.HitTestType="NavigationButton"
                          Height="24"
                          IsHitTestVisible="True"
                          Width="24">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="grid"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="0.35"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="border"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="0.75"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="border"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="border"
                                Background="#FD6E6E6E"
                                BorderThickness="0"
                                CornerRadius="16"
                                Opacity="0.5"/>
                        <Grid x:Name="glyph"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Path Data="F1 M 272.063,219.167L 267,214.104L 267,223.596L 267,224.229L 272.063,219.167 Z "
                                  Fill="White"
                                  Height="10"
                                  HorizontalAlignment="Center"
                                  Margin="1,0,0,0"
                                  Stretch="Fill"
                                  UseLayoutRounding="False"
                                  VerticalAlignment="Center"
                                  Width="5"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=NavigationButtonsPair}">
        <Grid HorizontalAlignment="Stretch" Margin="2,0,1,0">
            <dxschd:VisualNavigationButton ButtonInfo="{Binding PrevNavButtonInfo}"
                                           HorizontalAlignment="Left"
                                           Style="{Binding Path=View.NavigationButtonPrevStyle}"
                                           VerticalAlignment="Center"/>
            <dxschd:VisualNavigationButton ButtonInfo="{Binding NextNavButtonInfo}"
                                           HorizontalAlignment="Right"
                                           Style="{Binding Path=View.NavigationButtonNextStyle}"
                                           VerticalAlignment="Center"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="{dxscht:WeekViewThemeKey ResourceKey=NavigationButtonsPairGroupByResource}">
        <Grid HorizontalAlignment="Stretch" Margin="1,0,2,0">
            <dxschd:VisualNavigationButton ButtonInfo="{Binding PrevNavButtonInfo}"
                                           HorizontalAlignment="Left"
                                           Style="{Binding Path=View.NavigationButtonPrevStyle}"
                                           VerticalAlignment="Center"/>
            <dxschd:VisualNavigationButton ButtonInfo="{Binding NextNavButtonInfo}"
                                           HorizontalAlignment="Right"
                                           Style="{Binding Path=View.NavigationButtonNextStyle}"
                                           VerticalAlignment="Center"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
