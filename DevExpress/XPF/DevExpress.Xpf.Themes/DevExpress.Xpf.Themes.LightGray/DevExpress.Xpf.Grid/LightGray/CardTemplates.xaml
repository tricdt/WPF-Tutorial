<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgcore="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
          removed SolidColorBrush x:Key =BaseBrush#FFAED1FF-->

    <!--
          removed Color x:Key =BaseColor#FF73A2E0-->

    <!--
          removed SolidColorBrush x:Key =BaseBrush#FFE3EFFF-->

    <!--
          removed Color x:Key =BaseColor#FF9FC8F1-->

    <!--
          removed Color x:Key =BaseColor#FF436CA1-->

    <Style x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CardRowHeaderTextStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="0,3,0,3"/>
    </Style>

    <CornerRadius x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellCornerRadius}">1</CornerRadius>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellBorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBackground}">White</SolidColorBrush>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBrush}">#FFA2A2A2</SolidColorBrush>

    <SolidColorBrush x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedForeground}">Black</SolidColorBrush>

    <dxg:DefaultStyle x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellStyle}" TargetType="{x:Type dxgcore:CellContentPresenter}"/>

    <Thickness x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=CellContentPresenterMargin}">0,0,0,0</Thickness>

    <DataTemplate x:Key="{dxgt:CardTemplatesThemeKey ResourceKey=SeparatorTemplate}">
        <Grid x:Name="container">
            <Border x:Name="border"
                    Background="#FFD2D2D2 "
                    MinHeight="1"
                    MinWidth="1"/>
        </Grid>
        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background"
                        TargetName="border"
                        Value="#FFAED1FF "/>
            </Trigger>
            <DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Horizontal">
                <Setter Property="Margin"
                        TargetName="container"
                        Value="0,3,0,3"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Vertical">
                <Setter Property="Margin"
                        TargetName="container"
                        Value="3,0,3,0"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>