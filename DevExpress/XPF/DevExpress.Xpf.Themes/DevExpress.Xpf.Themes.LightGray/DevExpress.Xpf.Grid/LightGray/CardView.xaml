    <ControlTemplate x:Key="{dxgt:CardViewThemeKey ResourceKey=ShowHeadersButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="button">
            <Border x:Name="opened"
                    BorderBrush="#FF7F7F7F"
                    BorderThickness="1,1,1,0"
                    CornerRadius="3,3,0,0"
                    Padding="1"
                    Visibility="Hidden">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF999999 " Offset="0"/>
                        <GradientStop Color="#FF999999 " Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="opened2"
                    BorderBrush="#FF5F5F5F"
                    BorderThickness="0,0,1,0"
                    CornerRadius="3,3,0,0"
                    Padding="1"
                    Visibility="Hidden"/>
            <Border x:Name="border"
                    CornerRadius="9"
                    Height="17"
                    Margin="4"
                    Width="17">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFECECEC" Offset="0"/>
                        <GradientStop Color="LightGray" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Path x:Name="Path"
                  Data="F1 M 678,521L 681,527L 682,527L 685,521L 678,521 Z "
                  Fill="#FF6E6E6E"
                  Height="6"
                  HorizontalAlignment="Center"
                  RenderTransformOrigin="0.5,0.5"
                  SnapsToDevicePixels="True"
                  Stretch="Fill"
                  VerticalAlignment="Center"
                  Width="7"/>
