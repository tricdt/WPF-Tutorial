    <ControlTemplate x:Key="groupBoxNormalTemplate" TargetType="local:GroupBox">
        <core:Container>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <VisualState x:Name="NormalLayout"/>
                    <VisualState x:Name="MinimizedLayout">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TitleStretcher"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="SeparatorElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ContentElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MaximizedLayout"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <local:GroupBoxShadow CornerRadius="{TemplateBinding CornerRadius}"
                                  Offset="{TemplateBinding ShadowOffset}"
                                  Visibility="{TemplateBinding ShadowVisibility}"/>
            <Border x:Name="BorderElement"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    core:BorderExtensions.ClipChild="True"
                    CornerRadius="{TemplateBinding CornerRadius}">
                <local:LayoutControl core:DXSerializer.Enabled="False"
                                     ItemSpace="0"
                                     Orientation="Vertical"
                                     Padding="0"
                                     ScrollBars="None">
                    <local:LayoutGroup Background="{TemplateBinding TitleBackground}"
                                       ItemSpace="0"
                                       Padding="5,3"
                                       Visibility="{TemplateBinding TitleVisibility}">
                        <Rectangle x:Name="TitleStretcher"
                                   Visibility="Collapsed"
                                   Width="0"/>
                        <core:DXContentPresenter Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                 Foreground="{TemplateBinding TitleForeground}"
                                                 Margin="7,0"
                                                 VerticalAlignment="Center"/>
                        <local:GroupBoxButton x:Name="MinimizeElement"
                                              AutomationProperties.Name="Minimize"
                                              HorizontalAlignment="Right"
                                              Margin="4,0,0,0"
                                              VerticalAlignment="Center"
                                              Visibility="{TemplateBinding MinimizeElementVisibility}"/>
                        <local:GroupBoxButton x:Name="MaximizeElement"
                                              AutomationProperties.Name="Maximize"
                                              HorizontalAlignment="Right"
                                              Margin="4,0,0,0"
                                              VerticalAlignment="Center"
                                              Visibility="{TemplateBinding MaximizeElementVisibility}"/>
                    </local:LayoutGroup>
                    <Rectangle x:Name="SeparatorElement"
                               Fill="{TemplateBinding SeparatorBrush}"
                               Height="1"
                               Visibility="{TemplateBinding TitleVisibility}"/>
                    <core:DXContentPresenter x:Name="ContentElement"
                                             Content="{TemplateBinding Content}"
                                             ContentTemplate="{TemplateBinding CurrentContentTemplate}"
                                             Margin="{TemplateBinding Padding}"/>
                </local:LayoutControl>
            </Border>
        </core:Container>
    </ControlTemplate>

    <ControlTemplate x:Key="groupBoxLightTemplate" TargetType="local:GroupBox">
        <core:Container>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <VisualState x:Name="NormalLayout"/>
                    <VisualState x:Name="MinimizedLayout">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TitleStretcher"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ContentElement"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MaximizedLayout"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="BorderElement"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    core:BorderExtensions.ClipChild="True"
                    CornerRadius="{TemplateBinding CornerRadius}">
                <local:LayoutControl core:DXSerializer.Enabled="False"
                                     ItemSpace="0"
                                     Orientation="Vertical"
                                     Padding="0"
                                     ScrollBars="None">
                    <local:LayoutGroup ItemSpace="0"
                                       Padding="8,3"
                                       Visibility="{TemplateBinding TitleVisibility}">
                        <local:GroupBoxButton x:Name="MinimizeElement"
                                              AutomationProperties.Name="Minimize"
                                              HorizontalAlignment="Left"
                                              Margin="4,0,0,0"
                                              VerticalAlignment="Center"
                                              Visibility="{TemplateBinding MinimizeElementVisibility}"/>
                        <Rectangle x:Name="TitleStretcher"
                                   Visibility="Collapsed"
                                   Width="0"/>
                        <core:DXContentPresenter Content="{TemplateBinding Header}"
                                                 ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                 Foreground="{TemplateBinding TitleForeground}"
                                                 Margin="4,0"
                                                 VerticalAlignment="Center"/>
                        <local:GroupBoxButton x:Name="MaximizeElement"
                                              AutomationProperties.Name="Maximize"
                                              HorizontalAlignment="Right"
                                              Margin="4,0,0,0"
                                              VerticalAlignment="Center"
                                              Visibility="{TemplateBinding MaximizeElementVisibility}"/>
                    </local:LayoutGroup>
                    <core:DXContentPresenter x:Name="ContentElement"
                                             Content="{TemplateBinding Content}"
                                             ContentTemplate="{TemplateBinding CurrentContentTemplate}"
                                             Margin="{TemplateBinding Padding}"/>
                </local:LayoutControl>
            </Border>
        </core:Container>
    </ControlTemplate>

    <Style x:Key="GroupBox.Style" TargetType="local:GroupBox">
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#B9BABF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="MinimizationDirection" Value="Vertical"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="SeparatorBrush" Value="#CBCCD2"/>
        <Setter Property="ShadowOffset" Value="3"/>
        <Setter Property="TitleBackground" Value="#D5D8E0"/>
        <Setter Property="TitleForeground" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="NormalTemplate" Value="{StaticResource groupBoxNormalTemplate}"/>
        <Setter Property="LightTemplate" Value="{StaticResource groupBoxLightTemplate}"/>
        <Style.Triggers>
            <Trigger Property="DisplayMode" Value="Light">
                <Setter Property="CornerRadius" Value="0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GroupSeparator.Style" TargetType="local:GroupSeparator">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:GroupSeparator">
                    <core:Container>
                        <core:Container.Resources>
                            <Color x:Key="Color1">DarkGray</Color>
                            <Color x:Key="Color2">LightGray</Color>
                        </core:Container.Resources>
                        <Rectangle x:Name="HorizontalRootElement"
                                   Height="1"
                                   Margin="0,3">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="1,0">
                                    <GradientStop Color="{StaticResource Color1}" Offset="0"/>
                                    <GradientStop Color="{StaticResource Color2}" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle x:Name="VerticalRootElement"
                                   Margin="3,0"
                                   Width="1">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0,1">
                                    <GradientStop Color="{StaticResource Color1}" Offset="0"/>
                                    <GradientStop Color="{StaticResource Color2}" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </core:Container>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>