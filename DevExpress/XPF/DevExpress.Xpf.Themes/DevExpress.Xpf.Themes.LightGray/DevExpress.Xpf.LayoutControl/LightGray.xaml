<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:core="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="LayerSeparator.Style" TargetType="local:LayerSeparator">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Thickness" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:LayerSeparator">
                    <core:Container>
                        <core:Container.Resources>
                            <Color x:Key="NormalColor">#26535359</Color>
                            <Color x:Key="MouseOverColor">#7F7D7D84</Color>
                            <SolidColorBrush x:Key="SeparatorBrush"
                                             x:Name="SeparatorBrush"
                                             Color="{StaticResource NormalColor}"/>
                        </core:Container.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="SeparatorBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{StaticResource MouseOverColor}"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <core:Container x:Name="HorizontalRootElement" Cursor="SizeNS">
                            <Rectangle Fill="Transparent" Margin="0,-2"/>
                            <Rectangle Fill="{StaticResource SeparatorBrush}"
                                       Height="{TemplateBinding Thickness}"
                                       RadiusX="1"
                                       RadiusY="1"/>
                        </core:Container>
                        <core:Container x:Name="VerticalRootElement" Cursor="SizeWE">
                            <Rectangle Fill="Transparent" Margin="-2,0"/>
                            <Rectangle Fill="{StaticResource SeparatorBrush}"
                                       RadiusX="1"
                                       RadiusY="1"
                                       Width="{TemplateBinding Thickness}"/>
                        </core:Container>
                    </core:Container>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

