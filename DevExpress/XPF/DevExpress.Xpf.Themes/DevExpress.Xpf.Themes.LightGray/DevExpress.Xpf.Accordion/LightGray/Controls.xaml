<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion"
                    xmlns:dxan="http://schemas.devexpress.com/winfx/2008/xaml/accordion/internal"
                    xmlns:dxat="http://schemas.devexpress.com/winfx/2008/xaml/accordion/themekeys"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Resource -->

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemExpandButtonSize}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemExpandButtonSize}">14</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHeight}">32</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderHeight}">22</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemOffset}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpandButtonContainerMinWidth}">18</sys:Double>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=HeaderElementsMargin}">3,3,0,3</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemContainerMargin}">0,0,0,1</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderMargin}">4,0,4,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=CollapsedItemGlyphMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderContainerMargin}">0,1,0,0</Thickness>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=DisabledItemOpacity}">0.35</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontSize}">12</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontWeight}">Normal</FontWeight>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontWeight}">Bold</FontWeight>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=BorderThickness}">0</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonCheckedMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMargin}">8,5,8,5</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMinHeight}">22</sys:Double>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowItemMargin}">0,0,1,1</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowBackgroundPadding}">0,1,0,0</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontWeight}">Bold</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontWeight}">Bold</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlFontSize}">12</sys:Double>

    <!-- Expand/Collapse Button -->

    <dxmvvm:ObjectToObjectConverter x:Key="FlipHorizontalConverter" DefaultTarget="1">
        <dxmvvm:MapItem Source="True" Target="-1"/>
    </dxmvvm:ObjectToObjectConverter>

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpanderButtonTemplate}" TargetType="dxa:AccordionExpandButton">
        <Grid x:Name="Root" Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CheckStates">
                    <VisualState x:Name="Unchecked"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsUnchecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsChecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Indeterminate"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <dxa:ExpandButtonContentPresenter x:Name="IsUnchecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentCollapse"
                          Data="F1 M109,189 L109,195 L115,192 L109,189 z"
                          Fill="{TemplateBinding Foreground}"
                          Height="6"
                          HorizontalAlignment="Center"
                          Margin="1,0,0,0"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          UseLayoutRounding="False"
                          VerticalAlignment="Center"
                          Width="6">
                        <Path.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="CollapseItem_RotateTransform" Angle="0"/>
                                <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                            </TransformGroup>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Grid Height="16" Width="16">
                        <Border x:Name="BackgroundCollapse"
                                Background="#FF666666"
                                CornerRadius="32"/>
                        <Path x:Name="RootItemContentCollapse"
                              Data="F1 M109,189 L109,195 L115,192 L109,189 z"
                              Fill="#FFF0F0F0"
                              Height="6"
                              HorizontalAlignment="Center"
                              Margin="0,1,0,0"
                              RenderTransformOrigin="0.5,0.5"
                              Stretch="Fill"
                              UseLayoutRounding="False"
                              VerticalAlignment="Center"
                              Width="6">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="CollapseRootItem_RotateTransform" Angle="90"/>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
            <dxa:ExpandButtonContentPresenter x:Name="IsChecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Visibility="Hidden">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentExpand"
                          Data="F1 M109,189 L109,195 L115,192 L109,189 z "
                          Fill="{TemplateBinding Foreground}"
                          Height="6"
                          HorizontalAlignment="Center"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          UseLayoutRounding="False"
                          VerticalAlignment="Center"
                          Width="6">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="ExpandItem_RotateTransform" Angle="90"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Grid Height="16" Width="16">
                        <Border x:Name="BackgroundExpand"
                                Background="#FF666666"
                                CornerRadius="32"/>
                        <Path x:Name="RootItemContentExpand"
                              Data="F1 M109,189 L109,195 L115,192 L109,189 z"
                              Fill="#FFF0F0F0"
                              Height="6"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,1"
                              RenderTransformOrigin="0.5,0.5"
                              Stretch="Fill"
                              UseLayoutRounding="False"
                              VerticalAlignment="Center"
                              Width="6">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="ExpandRootItem_RotateTransform" Angle="-90"/>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover"/>
            <Trigger Property="ItemState" Value="Pressed"/>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Hover"/>
                </MultiTrigger.Conditions>
                <Setter Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FFFFFFFF"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FFFFFFFF"/>
                <Setter Property="Background"
                        TargetName="BackgroundCollapse"
                        Value="#FF6DA1DE"/>
                <Setter Property="Background"
                        TargetName="BackgroundExpand"
                        Value="#FF6DA1DE"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Pressed"/>
                </MultiTrigger.Conditions>
                <Setter Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FFFFFFFF"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FFFFFFFF"/>
                <Setter Property="Background"
                        TargetName="BackgroundCollapse"
                        Value="#FF6DA1DE"/>
                <Setter Property="Background"
                        TargetName="BackgroundExpand"
                        Value="#FF6DA1DE"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Selected"/>
                </MultiTrigger.Conditions>
                <Setter Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FFFFFFFF"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FFFFFFFF"/>
                <Setter Property="Background"
                        TargetName="BackgroundCollapse"
                        Value="#FF6DA1DE"/>
                <Setter Property="Background"
                        TargetName="BackgroundExpand"
                        Value="#FF6DA1DE"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="SelectedInactive"/>
                </MultiTrigger.Conditions>
                <Setter Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FFFFFFFF"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FFFFFFFF"/>
                <Setter Property="Background"
                        TargetName="BackgroundCollapse"
                        Value="#FF6DA1DE"/>
                <Setter Property="Background"
                        TargetName="BackgroundExpand"
                        Value="#FF6DA1DE"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RootItem and Item -->

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemBackgroundTemplate}" TargetType="dxa:AccordionItemBackgroundControl">
        <Grid x:Name="Root">
            <Border x:Name="RootItemDefault"
                    Background="#FF9B9B9B"
                    Opacity="0"
                    Padding="1">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFD2D2D2" Offset="0"/>
                            <GradientStop Color="#FFC7C7C7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="CustomBackground"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
            </Border>
            <Border x:Name="ItemHover"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFDBEAFA" Offset="0"/>
                        <GradientStop Color="#FFCCE1F9" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="ItemPressed"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                        <GradientStop Color="#FF6FA2DD"/>
                        <GradientStop Color="#FF8FB8E5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="ItemSelected"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                        <GradientStop Color="#FF6FA2DD"/>
                        <GradientStop Color="#FF8FB8E5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="RootItemHover"
                    Background="#FF6DA1DE"
                    Opacity="0"
                    Padding="1">
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFDBEAFA" Offset="0"/>
                            <GradientStop Color="#FFCCE1F9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="RootItemPressed"
                    Background="#FF6DA1DE"
                    Opacity="0"
                    Padding="1">
                <Grid>
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFDBEAFA" Offset="0"/>
                                <GradientStop Color="#FFCCE1F9" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border Opacity="0.35">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF6FA2DD" Offset="1"/>
                                <GradientStop Color="#FF8FB8E5" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            <Border x:Name="RootItemSelected"
                    Background="#FF6DA1DE"
                    Opacity="0"
                    Padding="1">
                <Grid>
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFDBEAFA" Offset="0"/>
                                <GradientStop Color="#FFCCE1F9" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border Opacity="0.35">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF6FA2DD" Offset="1"/>
                                <GradientStop Color="#FF8FB8E5" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Pressed">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Selected">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="SelectedInactive">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="0.62"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Focused">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemDefault"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        TargetName="CustomBackground"
                        Value="0"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Hover"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Pressed"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Selected"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemSelected"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="SelectedInactive"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonTemplate}" TargetType="ToggleButton">
        <Grid Background="Transparent"
              Height="{TemplateBinding Height}"
              Width="{TemplateBinding Width}">
            <Border x:Name="glyphBorder"
                    HorizontalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    VerticalAlignment="Center">
                <Grid Height="16" Width="16">
                    <Border x:Name="background"
                            Background="#FF666666"
                            CornerRadius="32"/>
                    <Path x:Name="glyph"
                          Data="F1 M109,189 L109,195 L115,192 L109,189 z"
                          Fill="#FFF0F0F0"
                          Height="6"
                          HorizontalAlignment="Center"
                          Margin="0,0,1,0"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          UseLayoutRounding="False"
                          VerticalAlignment="Center"
                          Width="6">
                        <Path.RenderTransform>
                            <RotateTransform Angle="180"/>
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="RenderTransform" TargetName="glyphBorder">
                    <Setter.Value>
                        <ScaleTransform ScaleX="-1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Margin"
                        TargetName="glyphBorder"
                        Value="1,0,0,0"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" TargetName="glyph">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFFFFFFF"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" TargetName="background">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF6DA1DE"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Fill" TargetName="glyph">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFFFFFFF"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" TargetName="background">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF6DA1DE"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=PopupWindowFrameTemplate}" TargetType="ContentControl">
        <Grid>
            <Border Background="#FFF3F3F3"
                    BorderBrush="#FF9B9B9B"
                    BorderThickness="1,1,1,1"
                    Padding="4,4,4,4">
                <Border Background="#FFFFFFFF"
                        BorderBrush="#FFADADAD"
                        BorderThickness="1,1,1,1"
                        CornerRadius="0,0,0,0"/>
            </Border>
            <ContentPresenter Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              Margin="6,6,6,6"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemTemplate}" TargetType="{x:Type dxe:ListBoxEditItem}">
        <Grid x:Name="Root">
            <Grid.Resources>
                <DataTemplate x:Key="HoverTemplate">
                    <Border x:Name="ItemHover" CornerRadius="2">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFDBEAFA" Offset="0"/>
                                <GradientStop Color="#FFCCE1F9" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="SelectedTemplate">
                    <Border x:Name="ItemPressed" CornerRadius="2">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#FF6FA2DD"/>
                                <GradientStop Color="#FF8FB8E5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="InactiveSelectedTemplate">
                    <Border x:Name="ItemPressed" CornerRadius="2">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#FF6FA2DD"/>
                                <GradientStop Color="#FF8FB8E5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </DataTemplate>
            </Grid.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard></Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="Unselected"/>
                    <VisualState x:Name="Selected">
                        <Storyboard></Storyboard>
                    </VisualState>
                    <VisualState x:Name="SelectedUnfocused">
                        <Storyboard></Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="FocusStates">
                    <VisualState x:Name="Focused">
                        <Storyboard></Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid>
                <dxmvvm:Interaction.Behaviors>
                    <dxa:CollapsedItemRotateBehavior RotateAngle="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemRotateAngle}}"/>
                </dxmvvm:Interaction.Behaviors>
                <Border x:Name="CustomBackground"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"/>
                <Rectangle x:Name="FocusVisual"
                           Opacity="0"
                           SnapsToDevicePixels="True"
                           Stroke="#FF000000"
                           StrokeDashArray="1 2"
                           StrokeThickness="1"/>
                <ContentPresenter x:Name="InactiveSelectedState"
                                  ContentTemplate="{StaticResource InactiveSelectedTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="HoverState"
                                  ContentTemplate="{StaticResource HoverTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="SelectedState"
                                  ContentTemplate="{StaticResource SelectedTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="FocusedState"
                                  ContentTemplate="{StaticResource SelectedTemplate}"
                                  Opacity="0"/>
            </Grid>
            <ContentControl x:Name="content"
                            Focusable="False"
                            FocusVisualStyle="{x:Null}"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Foreground="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderDefaultForeground}}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <ContentPresenter x:Name="contentPresenter"
                                  Height="Auto"
                                  Margin="0"
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                  Width="Auto"/>
            </ContentControl>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="1"/>
            </Trigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsKeyboardFocused, RelativeSource={RelativeSource Self}}" Value="True"/>
                    <Condition Binding="{Binding Path=IsSingleItemVisible, RelativeSource={RelativeSource AncestorType=dxan:CollapsedAccordionVirtualizingPanel}, FallbackValue=False}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                    <Condition Binding="{Binding Path=Owner.AllowItemHighlighting, RelativeSource={RelativeSource Self}}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHoverForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiDataTrigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderSelectedForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected" Value="True"/>
                    <Condition Property="IsFocused" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderSelectedInactiveForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0.6"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderDisabledForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.35"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

