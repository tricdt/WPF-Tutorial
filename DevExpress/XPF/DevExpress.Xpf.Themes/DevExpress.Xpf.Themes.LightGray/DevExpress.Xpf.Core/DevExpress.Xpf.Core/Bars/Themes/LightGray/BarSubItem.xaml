<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ContentToArrowIndent}">4.0</sys:Double>

    <ControlTemplate x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}" TargetType="{x:Type dxb:ArrowControl}">
        <Grid Background="Transparent" SnapsToDevicePixels="True">
            <Border x:Name="arrow"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    Margin="2,1,4,0"
                    VerticalAlignment="Center">
                <dxc:PixelSnapper>
                    <Path Data="F1 M 384,282L 391,282L 388,287L 387,287L 384,282 Z "
                          Height="5"
                          Stretch="Fill"
                          Width="7">
                        <Path.Fill>
                            <SolidColorBrush Color="#FF656565"/>
                        </Path.Fill>
                    </Path>
                </dxc:PixelSnapper>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ArrowAlignment">
                    <VisualState x:Name="Right"/>
                    <VisualState x:Name="Bottom"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplateInMainMenu}" TargetType="{x:Type dxb:ArrowControl}">
        <Grid Background="Transparent" SnapsToDevicePixels="True">
            <Border x:Name="arrow"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    Margin="0,1,0,0"
                    VerticalAlignment="Center">
                <dxc:PixelSnapper>
                    <Path Data="F1 M 384,282L 391,282L 388,287L 387,287L 384,282 Z "
                          Fill="White"
                          Height="5"
                          Stretch="Fill"
                          Width="7"/>
                </dxc:PixelSnapper>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ArrowAlignment">
                    <VisualState x:Name="Right"/>
                    <VisualState x:Name="Bottom"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplateInMenu}" TargetType="{x:Type dxb:ArrowControl}">
        <Border Margin="0,1,4,0" SnapsToDevicePixels="True">
            <dxc:PixelSnapper>
                <Path x:Name="BlackTriangle"
                      Data="F1 M 394,286L 400,283L 400,282L 394,279L 394,286 Z "
                      Fill="{TemplateBinding Foreground}"
                      Height="7"
                      HorizontalAlignment="Center"
                      Stretch="Fill"
                      VerticalAlignment="Center"
                      Width="5"/>
            </dxc:PixelSnapper>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ArrowAlignment">
                    <VisualState x:Name="Right"/>
                    <VisualState x:Name="Bottom"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarSubItemThemeKey ResourceKey=NormalArrowTemplateInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Path Data="F1 M 384,282L 391,282L 388,287L 387,287L 384,282 Z "
              Height="5"
              Stretch="Fill"
              Width="7">
            <Path.Fill>
                <SolidColorBrush Color="#FF656565"/>
            </Path.Fill>
        </Path>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarSubItemThemeKey ResourceKey=SelectedArrowTemplateInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Path Data="F1 M 384,282L 391,282L 388,287L 387,287L 384,282 Z "
              Height="5"
              Stretch="Fill"
              Width="7">
            <Path.Fill>
                <SolidColorBrush Color="#FF656565"/>
            </Path.Fill>
        </Path>
    </ControlTemplate>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=TextSplitterStyleInRibbonPageGroup}" TargetType="{x:Type dxb:TextSplitterControl}">
        <Setter Property="FirstStringHorizontalAlignment" Value="Center"/>
        <Setter Property="SecondStringHorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=SelectedTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF656565"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=NormalTextStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF656565"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=BottomSideArrowContainerStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=RightSideArrowContainerStyleInTextSplitter}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="2,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}" TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInMainMenu}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplateInMainMenu}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInStatusBar}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInMenu}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplateInMenu}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInRibbonPageGroup}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInBarButtonGroup}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInRibbonQuickAccessToolbar}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplateInMainMenu}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInRibbonQuickAccessToolbarFooter}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInRibbonStatusBarLeft}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInRibbonStatusBarRight}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}}"/>
    </Style>

    <Style x:Key="{dxbt:BarSubItemThemeKey ResourceKey=ArrowStyleInRibbonPageHeader}"
           BasedOn="{StaticResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowStyle}}"
           TargetType="{x:Type dxb:BarSubItemArrowControl}">
        <Setter Property="Template" Value="{DynamicResource {dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplateInMainMenu}}"/>
    </Style>

</ResourceDictionary>