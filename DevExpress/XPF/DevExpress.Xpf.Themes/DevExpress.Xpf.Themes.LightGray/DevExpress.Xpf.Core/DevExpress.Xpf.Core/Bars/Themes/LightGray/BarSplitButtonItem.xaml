<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxbt:BarSplitButtonItemThemeKey ResourceKey=LargeContentBorderTemplateInRibbonPageGroup}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid>
            <Grid x:Name="PART_Customization" Opacity="0.0">
                <Border BorderBrush="#FF656565"
                        BorderThickness="2"
                        CornerRadius="3"/>
            </Grid>
            <Grid x:Name="PART_Hover" Opacity="0.0">
                <Border x:Name="hover_border1"
                        CornerRadius="4"
                        Margin="0,1,0,1"
                        Padding="1"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop x:Name="Gradient1" Color="#19000000"/>
                            <GradientStop x:Name="Gradient2"
                                          Color="#00000000"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="hover_border2"
                            CornerRadius="3"
                            Padding="1"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop x:Name="Gradient3" Color="#FF7E7E7E"/>
                                <GradientStop x:Name="Gradient4"
                                              Color="#FF9D9D9D"
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border x:Name="hover_border3"
                                CornerRadius="2"
                                Padding="3"
                                SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop x:Name="Gradient5" Color="#FFDBDBDB"/>
                                    <GradientStop x:Name="Gradient6"
                                                  Color="#FFF7F7F7"
                                                  Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
                <Border x:Name="disabled_border1"
                        CornerRadius="4"
                        Margin="0,1,0,1"
                        Padding="1"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop x:Name="DisabledGradient1" Color="#19000000"/>
                            <GradientStop x:Name="DisabledGradient2"
                                          Color="#00000000"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="disabled_border2"
                            CornerRadius="3"
                            Padding="1"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop x:Name="DisabledGradient3" Color="#807E7E7E"/>
                                <GradientStop x:Name="DisabledGradient4"
                                              Color="#809D9D9D"
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border x:Name="disabled_border3"
                                CornerRadius="2"
                                Padding="3"
                                SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop x:Name="DisabledGradient5" Color="#80DBDBDB"/>
                                    <GradientStop x:Name="DisabledGradient6"
                                                  Color="#80F7F7F7"
                                                  Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <Grid x:Name="PART_Pressed" Opacity="0.0">
                <Border x:Name="pressed_border1"
                        CornerRadius="4"
                        Margin="0,1,0,1"
                        Padding="1"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop x:Name="PressedGradient1" Color="#7FFFFFFF"/>
                            <GradientStop x:Name="PressedGradient2"
                                          Color="#00FFFFFF"
                                          Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="pressed_border2"
                            CornerRadius="3"
                            Padding="1"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop x:Name="PressedGradient3" Color="#FF707070"/>
                                <GradientStop x:Name="PressedGradient4"
                                              Color="#FF929292"
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border x:Name="pressed_border3"
                                CornerRadius="2"
                                Padding="3"
                                SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop x:Name="PressedGradient5" Color="#FFA9A9AA"/>
                                    <GradientStop x:Name="PressedGradient6"
                                                  Color="#FFBABAB9"
                                                  Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="HideBorderSide">
                    <VisualState x:Name="None"/>
                    <VisualState x:Name="Left">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,1"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,1"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,0"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1"
                                                           Storyboard.TargetName="hover_border2"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1"
                                                           Storyboard.TargetName="disabled_border2"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,1,1"
                                                           Storyboard.TargetName="pressed_border2"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,4,4,0"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,4,4,0"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,3,3,0"
                                                           Storyboard.TargetName="hover_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,3,3,0"
                                                           Storyboard.TargetName="disabled_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,2,2,0"
                                                           Storyboard.TargetName="hover_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,2,2,0"
                                                           Storyboard.TargetName="disabled_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,4,4,0"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,3,3,0"
                                                           Storyboard.TargetName="pressed_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,2,2,0"
                                                           Storyboard.TargetName="pressed_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Right">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,1"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,1"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,1"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,0,1"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,0,1"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,0,1"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="4,0,0,4"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="4,0,0,4"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="3,0,0,3"
                                                           Storyboard.TargetName="hover_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="3,0,0,3"
                                                           Storyboard.TargetName="disabled_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="2,0,0,2"
                                                           Storyboard.TargetName="hover_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="2,0,0,2"
                                                           Storyboard.TargetName="disabled_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="4,0,0,4"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="3,0,0,3"
                                                           Storyboard.TargetName="pressed_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="2,0,0,2"
                                                           Storyboard.TargetName="pressed_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Top">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,0,0,1"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,0,0,1"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,0,0,1"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1"
                                                           Storyboard.TargetName="hover_border2"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1"
                                                           Storyboard.TargetName="disabled_border2"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,0,1,1"
                                                           Storyboard.TargetName="pressed_border2"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,4,4"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,4,4"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,3,3"
                                                           Storyboard.TargetName="hover_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,3,3"
                                                           Storyboard.TargetName="disabled_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,2,2"
                                                           Storyboard.TargetName="hover_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,2,2"
                                                           Storyboard.TargetName="disabled_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,4,4"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,3,3"
                                                           Storyboard.TargetName="pressed_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="0,0,2,2"
                                                           Storyboard.TargetName="pressed_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Bottom">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,0"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,0"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0,1,0,0"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,1,0"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,1,0"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="1,1,1,0"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="4,4,0,0"
                                                           Storyboard.TargetName="hover_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="4,4,0,0"
                                                           Storyboard.TargetName="disabled_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="3,3,0,0"
                                                           Storyboard.TargetName="hover_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="3,3,0,0"
                                                           Storyboard.TargetName="disabled_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="2,2,0,0"
                                                           Storyboard.TargetName="hover_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="2,2,0,0"
                                                           Storyboard.TargetName="disabled_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="4,4,0,0"
                                                           Storyboard.TargetName="pressed_border1"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="3,3,0,0"
                                                           Storyboard.TargetName="pressed_border2"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.CornerRadius="2,2,0,0"
                                                           Storyboard.TargetName="pressed_border3"
                                                           Storyboard.TargetProperty="CornerRadius"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="All"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ArrowHideBorderSide">
                    <VisualState x:Name="ArrowNone"/>
                    <VisualState x:Name="ArrowLeft"/>
                    <VisualState x:Name="ArrowTop"/>
                    <VisualState x:Name="ArrowRight"/>
                    <VisualState x:Name="ArrowBottom"/>
                    <VisualState x:Name="ArrowAll"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ActiveState">
                    <VisualState x:Name="Active">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="disabled_border1"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="hover_border1"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="disabled_border1"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="hover_border1"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked"/>
                    <VisualState x:Name="HoverChecked"/>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxbt:BarSplitButtonItemThemeKey ResourceKey=ArrowBorderTemplateInRibbonPageGroup}" TargetType="{x:Type dxb:ItemBorderControl}"/>

    <ControlTemplate x:Key="{dxbt:BarSplitButtonItemThemeKey ResourceKey=ContentBorderTemplateInRibbonPageGroup}" TargetType="{x:Type dxb:ItemBorderControl}"/>

