    <!--ButtonTextBlockStyle-->

    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=ButtonTextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Foreground" Value="#FF2E2E2E"/>
        <Setter Property="Margin" Value="10,0,10,1"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--PanelTextBlockStyle-->

    <Style x:Key="{themes:SearchPanelThemeKey ResourceKey=PanelTextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!--FindPrevButtonShape-->

    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=FindPrevButtonShape}">
        <Path Data="F1 M 290.391,235.281L 283.391,231.281L 283.391,230.281L 290.391,226.281L 290.391,235.281 Z"
              Fill="#FF5E5E5E"
              Height="9"
              Stretch="Fill"
              Width="7"/>
    </DataTemplate>

    <!--FindNextButtonShape-->

    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=FindNextButtonShape}">
        <Path Data="F1 M 294.594,226.313L 301.594,230.313L 301.594,231.313L 294.594,235.313L 294.594,226.313 Z"
              Fill="#FF5E5E5E"
              Height="9"
              Margin="2,0,0,0"
              Stretch="Fill"
              Width="7"/>
    </DataTemplate>

    <!--CloseButtonShape-->

    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=CloseButtonShape}">
        <Path Data="F1 M 285,223L 288,226L 288.997,226.003L 292,223L 294,225L 290.997,228.003L 291,229L 294,232L 292,234L 289,231L 288,231L 285,234L 283,232L 286,229L 286,228L 283,225L 285,223 Z"
              Fill="#FF5E5E5E"
              Height="11"
              Stretch="Fill"
              Width="11"/>
    </DataTemplate>

    <!--OptionsButtonShape-->

    <DataTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=OptionsButtonShape}">
        <Path Data="F1 M 304,230L 301,235L 300,235L 297,230L 304,230 Z"
              Fill="#FFECECEC"
              Height="5"
              Stretch="Fill"
              Width="7"/>
    </DataTemplate>

    <!--SeparatorControlTemplate-->

    <ControlTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=SeparatorControlTemplate}" TargetType="{x:Type ContentControl}">
        <Rectangle Fill="#FF4D4D4D"
                   Height="21"
                   Margin="8,0,8,0"
                   Width="1"/>
        <!--<Setter Property="Stroke" Value="#FF545454" />
        <Setter Property="StrokeThickness" Value="0" />-->
    </ControlTemplate>

    <!--BorderControlTemplate-->

    <ControlTemplate x:Key="{themes:SearchPanelThemeKey ResourceKey=BorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Border BorderBrush="#FF545454"
                BorderThickness="0,1,0,1"
                Margin="0,1,0,1"
                Padding="8,4,8,4">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5B5B5B"/>
                    <GradientStop Color="#FF5E5E5E" Offset="1"/>
                    <GradientStop Color="#FF5D5D5D" Offset="0.13"/>
                </LinearGradientBrush>
            </Border.Background>
            <ContentPresenter Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              SnapsToDevicePixels="True"
                              UseLayoutRounding="True"/>
        </Border>
    </ControlTemplate>

</ResourceDictionary>