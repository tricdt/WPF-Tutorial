    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Pressed"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="border1"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FFEEEEEE"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Content"
                                            Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                            To="#FF444444"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Background="#FF707070" Grid.RowSpan="2"/>
            <Grid Margin="0,0,0,8">
                <Border Background="#FF565656" CornerRadius="3">
                    <Border x:Name="border1"
                            Background="#FFD5E8FA"
                            CornerRadius="2"
                            Margin="1">
                        <Border x:Name="border"
                                CornerRadius="2,2,0,0"
                                Height="4"
                                Opacity="0.35"
                                VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                </Border>
                <ContentControl x:Name="Content"
                                dx:FocusHelper2.Focusable="False"
                                Margin="4"
                                Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayContentTemplate}}">
                    <ContentControl.Foreground>
                        <SolidColorBrush Color="#FF222222"/>
                    </ContentControl.Foreground>
                </ContentControl>
            </Grid>
            <Border Background="#FF474747"
                    CornerRadius="3,3,0,0"
                    Grid.Row="1"
                    Height="4">
                <Border Background="#FF565656"
                        CornerRadius="2,2,0,0"
                        Margin="1,1,1,0">
                    <Border Background="#FF5C5C5C"
                            CornerRadius="0,0,1,1"
                            Margin="1,1,1,0"/>
                </Border>
            </Border>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxet:CalculatorThemeKey ResourceKey=DisplayStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="dx:FocusHelper2.Focusable" Value="False"/>
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="Margin" Value="-10,-10,-10,6"/>
        <Setter Property="Template" Value="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayTemplate}}"/>
    </Style>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Grid.Resources>
                <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                <dx:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
                <dx:BoolToThicknessConverter x:Key="BoolToThicknessConverter"
                                             ThicknessFalse="18,18,18,18"
                                             ThicknessTrue="18,18,18,18"/>
            </Grid.Resources>
            <Border Background="#FF707070"
                    CornerRadius="4"
                    Padding="8"
                    Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="#FF474747" CornerRadius="0,0,3,3">
                    <Border Background="#FF565656"
                            CornerRadius="0,0,2,2"
                            Margin="1">
                        <Border Background="#FF5C5C5C"
                                CornerRadius="0,0,1,1"
                                Margin="1"/>
                    </Border>
                </Border>
            </Border>
            <Border Background="#FF707070"
                    Padding="8"
                    Visibility="{Binding ShowBorder, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                <Border Background="#FF474747" CornerRadius="0,0,3,3">
                    <Border Background="#FF565656"
                            CornerRadius="0,0,2,2"
                            Margin="1">
                        <Border Background="#FF5C5C5C"
                                CornerRadius="0,0,1,1"
                                Margin="1"/>
                    </Border>
                </Border>
            </Border>
            <ContentPresenter Margin="{Binding ShowBorder, Converter={StaticResource BoolToThicknessConverter}}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FF5C5C5C" CornerRadius="2"/>
            <ContentPresenter Margin="8"/>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>