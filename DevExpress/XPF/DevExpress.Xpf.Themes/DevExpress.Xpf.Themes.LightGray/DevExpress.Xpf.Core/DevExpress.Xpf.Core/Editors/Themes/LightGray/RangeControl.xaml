        <Border Width="7">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8EB8E6" Offset="0"/>
                    <GradientStop Color="#FF6FA2DE" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Path Data="F1 M 375,379L 376,379L 376,380L 375,380L 375,379 Z M 377,379.001L 378,379.001L 378,380.001L 377,380.001L 377,379.001 Z M 375,381.001L 376,381.001L 376,382.001L 375,382.001L 375,381.001 Z M 377,381.001L 378,381.001L 378,382.001L 377,382.001L 377,381.001 Z M 375,383.001L 376,383.001L 376,384.001L 375,384.001L 375,383.001 Z M 377,383L 378,383L 378,384L 377,384L 377,383 Z M 375,385L 376,385L 376,386L 375,386L 375,385 Z M 377,385L 378,385L 378,386L 377,386L 377,385 Z M 375,387L 376,387L 376,388L 375,388L 375,387 Z M 377,387L 378,387L 378,388L 377,388L 377,387 Z M 375,389L 376,389L 376,390L 375,390L 375,389 Z M 377,389L 378,389L 378,390L 377,390L 377,389 Z "
                  Fill="#FFFFFFFF"
                  Height="11"
                  Stretch="Fill"
                  Width="3"/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:RangeControlThemeKey ResourceKey=LeftSelectionThumbTemplate}" TargetType="{x:Type Thumb}">
        <Grid Background="Transparent"
              HorizontalAlignment="Left"
              Width="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="Button"
                    BorderBrush="#FFFFFFFF"
                    BorderThickness="1,0,1,0"
                    Grid.Column="1"
                    Width="9">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF8EB8E6" Offset="0"/>
                        <GradientStop Color="#FF6FA2DE" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Path Data="F1 M 375,379L 376,379L 376,380L 375,380L 375,379 Z M 377,379.001L 378,379.001L 378,380.001L 377,380.001L 377,379.001 Z M 375,381.001L 376,381.001L 376,382.001L 375,382.001L 375,381.001 Z M 377,381.001L 378,381.001L 378,382.001L 377,382.001L 377,381.001 Z M 375,383.001L 376,383.001L 376,384.001L 375,384.001L 375,383.001 Z M 377,383L 378,383L 378,384L 377,384L 377,383 Z M 375,385L 376,385L 376,386L 375,386L 375,385 Z M 377,385L 378,385L 378,386L 377,386L 377,385 Z M 375,387L 376,387L 376,388L 375,388L 375,387 Z M 377,387L 378,387L 378,388L 377,388L 377,387 Z M 375,389L 376,389L 376,390L 375,390L 375,389 Z M 377,389L 378,389L 378,390L 377,390L 377,389 Z "
