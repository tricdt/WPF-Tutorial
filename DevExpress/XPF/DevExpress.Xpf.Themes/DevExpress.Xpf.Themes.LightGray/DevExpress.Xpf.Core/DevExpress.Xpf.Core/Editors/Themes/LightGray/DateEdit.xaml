                CornerRadius="0,0,0,0"
                Height="Auto"
                SnapsToDevicePixels="True"
                Width="Auto">
            <StackPanel Background="{x:Null}"
                        Height="Auto"
                        Margin="0,0,0,0"
                        Width="Auto">
                <Border>
                    <Button x:Name="PART_Today"
                            Content="{TemplateBinding DateTimeText}"
                            Height="Auto"
                            Style="{DynamicResource {dxet:DateEditThemeKey IsVisibleInBlend=True, ResourceKey=HeaderButtonStyle}}"
                            Width="Auto"/>
                </Border>
                <Border Background="#FFFFFFFF"
                        Height="Auto"
                        Padding="0,5,0,5"
                        Width="Auto">
                    <Grid Background="{x:Null}"
                          Height="Auto"
                          Margin="7,0,7,0"
                          Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <RepeatButton x:Name="PART_LeftArrow"
