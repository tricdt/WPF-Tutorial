<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cs="colorscheme_ignorable_uri" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- MENU BRUSHES -->
  <SolidColorBrush x:Key="Menu_Background" Color="Transparent" />
  <SolidColorBrush x:Key="Menu_Border" Color="#FF7D7D7D" x:Uid="@Color=Border" />
  <SolidColorBrush x:Key="Menu_Foreground" Color="#FFFFFFFF" x:Uid="@Color=Foreground.Primary" />
  <SolidColorBrush x:Key="MenuItem_Foreground" Color="#FFFFFFFF" x:Uid="@Color=Foreground.Primary" />
  <SolidColorBrush x:Key="MenuItem_HoverForeground" Color="#FFFFFFFF" x:Uid="@Color=Foreground.Primary" />
  <SolidColorBrush x:Key="MenuItem_PressedForeground" Color="#FFABABAB" x:Uid="@Color=Foreground.Muted" />
  <SolidColorBrush x:Key="MenuItem_HoverBackground" Color="#0FFFFFFF" x:Uid="@Color=ListItem.HoverBackground" />
  <SolidColorBrush x:Key="MenuItem_HoverBorder" Color="#0FFFFFFF" x:Uid="@Color=ListItem.HoverBorder" />
  <SolidColorBrush x:Key="MenuItem_SelectionBackground" Color="#0AFFFFFF" x:Uid="@Color=ListItem.SelectionBackground" />
  <SolidColorBrush x:Key="MenuItem_SelectionBorder" Color="#0AFFFFFF" x:Uid="@Color=ListItem.SelectionBorder" />
  <!-- CONTEXT MENU BRUSHES -->
  <SolidColorBrush x:Key="ContextMenu_Background" Color="#FF2C2C2C" x:Uid="@Color=FlyoutBackground" />
  <SolidColorBrush x:Key="ContextMenu_Border" Color="#FF161616" x:Uid="@Color=FlyoutBorder" />
  <SolidColorBrush x:Key="ContextMenuItem_Foreground" Color="#FFFFFFFF" x:Uid="@Color=Foreground.Primary" />
  <SolidColorBrush x:Key="ContextMenuItem_HoverForeground" Color="#FFFFFFFF" x:Uid="@Color=Foreground.Primary" />
  <SolidColorBrush x:Key="ContextMenuItem_PressedForeground" Color="#FFFFFFFF" x:Uid="@Color=Foreground.Primary" />
  <SolidColorBrush x:Key="ContextMenuItem_HoverBackground" Color="#0FFFFFFF" x:Uid="@Color=ListItem.HoverBackground" />
  <SolidColorBrush x:Key="ContextMenuItem_HoverBorder" Color="#0FFFFFFF" x:Uid="@Color=ListItem.HoverBorder" />
  <SolidColorBrush x:Key="ContextMenuItem_SelectionBackground" Color="#0AFFFFFF" x:Uid="@Color=ListItem.SelectionBackground" />
  <SolidColorBrush x:Key="ContextMenuItem_SelectionBorder" Color="#0AFFFFFF" x:Uid="@Color=ListItem.SelectionBorder" />
</ResourceDictionary>