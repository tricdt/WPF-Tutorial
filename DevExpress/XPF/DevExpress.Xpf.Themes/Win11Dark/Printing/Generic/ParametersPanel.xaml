<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxei="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:mvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/printing" xmlns:native="http://schemas.devexpress.com/winfx/2008/xaml/printing/native" xmlns:dxpp="http://schemas.devexpress.com/winfx/2008/xaml/printing/parameters" xmlns:parameterscore="clr-namespace:DevExpress.XtraReports.Parameters;assembly=DevExpress.Printing.v24.1.Core" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <ResourceDictionary.MergedDictionaries>
    <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Printing.v24.1;component/Themes/Generic/Constants.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <mvvm:ObjectToObjectConverter x:Key="orientationConverter">
    <mvvm:MapItem Source="{x:Static parameterscore:Orientation.Horizontal}" Target="{x:Static Orientation.Horizontal}" />
    <mvvm:MapItem Source="{x:Static parameterscore:Orientation.Vertical}" Target="{x:Static Orientation.Vertical}" />
  </mvvm:ObjectToObjectConverter>
  <mvvm:ObjectToObjectConverter x:Key="orientationInvertConverter">
    <mvvm:MapItem Source="{x:Static parameterscore:Orientation.Horizontal}" Target="{x:Static Orientation.Vertical}" />
    <mvvm:MapItem Source="{x:Static parameterscore:Orientation.Vertical}" Target="{x:Static Orientation.Horizontal}" />
  </mvvm:ObjectToObjectConverter>
  <mvvm:ObjectToObjectConverter x:Key="descriptionPositionConverter">
    <mvvm:MapItem Source="{x:Static parameterscore:Orientation.Horizontal}" Target="{x:Static dxlc:LayoutItemLabelPosition.Left}" />
    <mvvm:MapItem Source="{x:Static parameterscore:Orientation.Vertical}" Target="{x:Static dxlc:LayoutItemLabelPosition.Top}" />
  </mvvm:ObjectToObjectConverter>
  <ControlTemplate x:Key="parametersControlTemplate" TargetType="dxpp:ParametersPanel">
    <dxlc:LayoutControl DataContext="{TemplateBinding ParametersModel}" Padding="0,12" VerticalAlignment="Top" Orientation="Vertical">
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <dxpp:ParameterLayoutRoot ItemsSource="{Binding ItemViewModels}" x:Name="PART_parametersContainer" Grid.IsSharedSizeScope="True" ItemLabelsAlignment="Local" Orientation="Vertical" Margin="12,0">
          <dxpp:ParameterLayoutRoot.GroupStyle>
            <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Parameters.ParameterLayoutGroup}" TargetType="dxpp:ParameterLayoutGroup">
              <Setter Property="IsCollapsible" Value="{Binding ShowExpandButton}" />
              <Setter Property="IsCollapsed" Value="{Binding Expanded, Mode=OneTime, Converter={mvvm:BooleanNegationConverter}}" />
              <Setter Property="Header" Value="{Binding }" />
              <Setter Property="HeaderTemplate">
                <Setter.Value>
                  <DataTemplate>
                    <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" Visibility="{Binding TitleVisible, Converter={mvvm:BooleanToVisibilityConverter HiddenInsteadOfCollapsed=True}}" />
                  </DataTemplate>
                </Setter.Value>
              </Setter>
              <Setter Property="View" Value="{Binding BorderVisible, Converter={mvvm:BooleanToObjectConverter TrueValue=GroupBox, FalseValue=Group}}" />
              <Setter Property="Orientation" Value="{Binding Orientation, Converter={StaticResource orientationConverter}}" />
              <Setter Property="ItemsSource" Value="{Binding Items}" />
              <Setter Property="GroupBoxStyle">
                <Setter.Value>
                  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol.GroupBox}" TargetType="dxlc:GroupBox">
                    <Setter Property="TitleVisibility" Value="{Binding Converter={native:ParameterGroupTitleVisibilityConverter}}" />
                  </Style>
                </Setter.Value>
              </Setter>
              <Setter Property="Visibility" Value="{Binding Visible, Converter={dxc:BooleanToVisibilityConverter}}" />
            </Style>
          </dxpp:ParameterLayoutRoot.GroupStyle>
          <dxpp:ParameterLayoutRoot.ParameterItemStyle>
            <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol.LayoutItem}" TargetType="dxlc:LayoutItem">
              <Setter Property="Visibility" Value="{Binding Visible, Converter={dxc:BooleanToVisibilityConverter}}" />
              <Setter Property="IsEnabled" Value="{Binding Enabled}" />
            </Style>
          </dxpp:ParameterLayoutRoot.ParameterItemStyle>
          <dxpp:ParameterLayoutRoot.SeparatorStyle>
            <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol.GroupSeparator}" TargetType="dxlc:GroupSeparator">
              <Setter Property="Orientation" Value="{Binding Path=(dxpp:ParameterLayoutGroup.GroupModel).Orientation, RelativeSource={RelativeSource Self}, Converter={StaticResource orientationInvertConverter}, FallbackValue=Horizontal}" />
              <Setter Property="Visibility" Value="{Binding Visible, Converter={dxc:BooleanToVisibilityConverter}}" />
            </Style>
          </dxpp:ParameterLayoutRoot.SeparatorStyle>
          <dxpp:ParameterLayoutRoot.Resources>
            <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol.GroupSeparator}" TargetType="dxlc:GroupSeparator">
              <Setter Property="Orientation" Value="{Binding Path=(dxpp:ParameterLayoutGroup.GroupModel).Orientation, RelativeSource={RelativeSource Self}, Converter={StaticResource orientationInvertConverter}, FallbackValue=Horizontal}" />
              <Setter Property="Visibility" Value="{Binding Visible, Converter={dxc:BooleanToVisibilityConverter}}" />
            </Style>
          </dxpp:ParameterLayoutRoot.Resources>
        </dxpp:ParameterLayoutRoot>
      </ScrollViewer>
      <dxlc:LayoutGroup HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="12,12,12,0">
        <dxc:UniformStackPanel ChildSpacing="6">
          <Button Name="PART_resetButton" Command="{Binding ResetParametersCommand}" Content="{local:PrintingStringId StringId=ParametersReset}" />
          <Button Name="PART_submitButton" Command="{Binding SubmitParametersCommand}" Content="{local:PrintingStringId StringId=ParametersSubmit}" />
        </dxc:UniformStackPanel>
      </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
  </ControlTemplate>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Parameters.ParametersPanel}" TargetType="dxpp:ParametersPanel">
    <Setter Property="ParameterTemplateSelector">
      <Setter.Value>
        <dxpp:ParameterTemplateSelector />
      </Setter.Value>
    </Setter>
    <Setter Property="Template" Value="{StaticResource parametersControlTemplate}" />
  </Style>
  <Style x:Key="descriptionStyle" TargetType="TextBlock">
    <Setter Property="Text" Value="{Binding ActualDescription}" />
    <Setter Property="dxei:TextBlockService.AllowIsTextTrimmed" Value="True" />
    <Setter Property="ToolTip">
      <Setter.Value>
        <ToolTip Visibility="{Binding Path=PlacementTarget.(dxei:TextBlockService.IsTextTrimmed), Mode=OneWay, Converter={dxc:BooleanToVisibilityConverter}, RelativeSource={RelativeSource Self}}" Content="{Binding PlacementTarget.Text, RelativeSource={RelativeSource Self}}" />
      </Setter.Value>
    </Setter>
  </Style>
  <ControlTemplate x:Key="horizontalLineLayout" TargetType="dxpp:ParameterLineLayout">
    <dxpp:AutoFitColumnGrid x:Name="panel">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0" MinWidth="10" SharedSizeGroup="{Binding Path=(dxpp:ParameterLayoutGroup.GroupModel), Converter={native:ParameterGroupToLabelSizeScopeConverter}, RelativeSource={RelativeSource Self}}" />
        <ColumnDefinition MinWidth="4" Width="4" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Label VerticalAlignment="Center">
        <TextBlock Style="{StaticResource descriptionStyle}" TextTrimming="CharacterEllipsis" />
      </Label>
      <ContentPresenter Grid.Column="2" Content="{TemplateBinding Content}" MinWidth="{Binding Content.MinWidth, RelativeSource={RelativeSource Self}}" />
    </dxpp:AutoFitColumnGrid>
  </ControlTemplate>
  <ControlTemplate x:Key="verticalLineLayout" TargetType="dxpp:ParameterLineLayout">
    <StackPanel Name="panel">
      <Label>
        <TextBlock Style="{StaticResource descriptionStyle}" TextWrapping="Wrap" Margin="0,0,0,4" />
      </Label>
      <ContentPresenter Grid.Column="2" Content="{TemplateBinding Content}" MinWidth="{Binding Content.MinWidth, RelativeSource={RelativeSource Self}}" />
    </StackPanel>
  </ControlTemplate>
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Printing.Parameters.ParameterLineLayout}" TargetType="dxpp:ParameterLineLayout">
    <Setter Property="Focusable" Value="False" />
    <Setter Property="Visibility" Value="{Binding Visible, Converter={dxc:BooleanToVisibilityConverter}}" />
    <Setter Property="Template" Value="{StaticResource horizontalLineLayout}" />
    <Style.Triggers>
      <DataTrigger Binding="{Binding LabelOrientation}" Value="{x:Static parameterscore:Orientation.Vertical}">
        <Setter Property="Template" Value="{StaticResource verticalLineLayout}" />
      </DataTrigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>