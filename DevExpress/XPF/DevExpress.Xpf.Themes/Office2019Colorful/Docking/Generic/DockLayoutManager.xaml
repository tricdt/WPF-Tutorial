<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys" xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/docking/platform" xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <ve:FloatingModeToVisibilityConverter x:Key="floatingModeToVisibilityConverter" />
  <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.DockLayoutManager}" TargetType="{x:Type local:DockLayoutManager}">
    <Setter Property="Background" Value="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=PanelBackground}}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:DockLayoutManager">
          <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <ve:psvDockPanel>
              <local:ClosedItemsPanel x:Name="PART_ClosedItemsPanel" ve:psvDockPanel.Dock="Top" Dock="{TemplateBinding ClosedPanelsBarPosition}" />
              <Grid>
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <!--  AutoHideTray elements -->
                  <ve:AutoHideTray x:Name="PART_LeftAutoHideTray" Grid.Column="0" Grid.Row="1" Orientation="Vertical" ve:psvPanel.ZIndex="2" ItemsSource="{Binding Path=AutoHideGroups.LeftItems, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Center" CheckInterval="{TemplateBinding AutoHideGroupsCheckInterval}" />
                  <ve:AutoHideTray x:Name="PART_RightAutoHideTray" Grid.Column="2" Grid.Row="1" Orientation="Vertical" ve:psvPanel.ZIndex="2" ItemsSource="{Binding Path=AutoHideGroups.RightItems, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Center" CheckInterval="{TemplateBinding AutoHideGroupsCheckInterval}" />
                  <ve:AutoHideTray x:Name="PART_TopAutoHideTray" Grid.Column="1" Grid.Row="0" Orientation="Horizontal" ve:psvPanel.ZIndex="2" ItemsSource="{Binding Path=AutoHideGroups.TopItems, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Center" CheckInterval="{TemplateBinding AutoHideGroupsCheckInterval}" />
                  <ve:AutoHideTray x:Name="PART_BottomAutoHideTray" Grid.Column="1" Grid.Row="2" Orientation="Horizontal" ve:psvPanel.ZIndex="2" ItemsSource="{Binding Path=AutoHideGroups.BottomItems, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Center" CheckInterval="{TemplateBinding AutoHideGroupsCheckInterval}" />
                  <!--  AutoHideTray elements -->
                  <ve:OverlappingDockPanel x:Name="AutoHideLayer" DisplayMode="{TemplateBinding AutoHideMode}" Grid.Column="1" Grid.Row="1">
                    <ve:AutoHidePane DockPanel.Dock="Left" x:Name="PART_LeftAutoHideTrayPanel" HorizontalAlignment="Left" ve:AutoHideTray.Orientation="Vertical" AutoHideTray="{Binding ElementName=PART_LeftAutoHideTray}" ve:psvPanel.ZIndex="1" DisplayMode="{TemplateBinding AutoHideMode}" />
                    <ve:AutoHidePane DockPanel.Dock="Right" x:Name="PART_RightAutoHideTrayPanel" HorizontalAlignment="Right" ve:AutoHideTray.Orientation="Vertical" AutoHideTray="{Binding ElementName=PART_RightAutoHideTray}" ve:psvPanel.ZIndex="1" DisplayMode="{TemplateBinding AutoHideMode}" />
                    <ve:AutoHidePane DockPanel.Dock="Top" x:Name="PART_TopAutoHideTrayPanel" VerticalAlignment="Top" ve:AutoHideTray.Orientation="Horizontal" AutoHideTray="{Binding ElementName=PART_TopAutoHideTray}" ve:psvPanel.ZIndex="1" DisplayMode="{TemplateBinding AutoHideMode}" />
                    <ve:AutoHidePane DockPanel.Dock="Bottom" x:Name="PART_BottomAutoHideTrayPanel" VerticalAlignment="Bottom" ve:AutoHideTray.Orientation="Horizontal" AutoHideTray="{Binding ElementName=PART_BottomAutoHideTray}" ve:psvPanel.ZIndex="1" DisplayMode="{TemplateBinding AutoHideMode}" />
                    <ContentPresenter x:Name="LayoutLayer" Content="{TemplateBinding LayoutRoot}" />
                  </ve:OverlappingDockPanel>
                  <ve:FloatingLayoutItemsControl x:Name="FloatingLayer" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Path=FloatGroups, RelativeSource={RelativeSource TemplatedParent}}" Opacity="0" ve:psvPanel.ZIndex="2" />
                  <ve:ControlBox x:Name="ControlBox" MDIButtonBorderStyle="{DynamicResource {dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorderStyle}}" MDIButtonMinimizeTemplate="{DynamicResource {dxt:GlyphElementsThemeKey ResourceKey=MDIButtonMinimize}}" MDIButtonRestoreTemplate="{DynamicResource {dxt:GlyphElementsThemeKey ResourceKey=MDIButtonRestore}}" MDIButtonCloseTemplate="{DynamicResource {dxt:GlyphElementsThemeKey ResourceKey=MDIButtonClose}}" />
                </Grid>
                <ve:MinimizedFloatGroupsItemsControl ItemsSource="{Binding MinimizedItems, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Bottom" Visibility="{TemplateBinding FloatingMode, Converter={StaticResource ResourceKey=floatingModeToVisibilityConverter}}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <ve:MinimizedFloatGroupsItemPanel />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                </ve:MinimizedFloatGroupsItemsControl>
              </Grid>
            </ve:psvDockPanel>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="ViewStyle" Value="Light">
              <Setter Property="Grid.Row" TargetName="PART_RightAutoHideTray" Value="0" />
              <Setter Property="Grid.RowSpan" TargetName="PART_RightAutoHideTray" Value="3" />
              <Setter Property="Grid.Row" TargetName="PART_LeftAutoHideTray" Value="0" />
              <Setter Property="Grid.RowSpan" TargetName="PART_LeftAutoHideTray" Value="3" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="BorderBrush" Value="{DynamicResource {dxt:DockPaneElementsThemeKey ResourceKey=BorderBrush}}" />
    <Style.Triggers>
      <Trigger Property="IsDarkTheme" Value="True">
        <Setter Property="Foreground" Value="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=PanelForeground}}" />
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>