<ResourceDictionary mc:Ignorable="cs" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxtEx="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:cs="colorscheme_ignorable_uri" xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
  <ResourceDictionary.MergedDictionaries>
    <dxdst:ResourceDictionaryEx Source="{dx:DynamicThemeResource Buttons.xaml, ResourcePath=Themes, ResourcePathInTheme='Core/Core/Themes', TypeInTargetAssembly={x:Type dxcn:RenderTemplate}}" />
  </ResourceDictionary.MergedDictionaries>
  <SolidColorBrush x:Key="BaseBrushBlack" Color="Black" />
  <dxcn:SplitButtonsSeparatorThicknessConverter x:Key="separatorThicknessConverter" />
  <Visibility x:Key="Visible">Visible</Visibility>
  <Visibility x:Key="Collapsed">Collapsed</Visibility>
  <!-- RENDER TEMPLATES -->
  <!--DropDownButton-->
  <dxcn:RenderTemplate x:Key="{dxt:DropDownButtonThemeKey ResourceKey=RenderDropDownButtonTemplate}">
    <dxcn:RenderPanel Name="PART_GlyphContentAndArrow">
      <dxcn:RenderButtonBorder Name="PART_GlyphContentAndArrowBorder" RenderTemplate="{StaticResource ResourceKey={dxt:DropDownButtonThemeKey ResourceKey=BorderTemplate}}" Visibility="Visible" />
      <dxcn:RenderBorder Name="PART_OffsetThicknessBorder">
        <dxcn:RenderPanel Name="PART_RootPanel" LayoutProvider="{dxcn:DockPanelLayoutProvider LastChildFill=True}">
          <dxcn:RenderPanel Name="PART_Arrow">
            <dxcn:RenderButtonBorder Name="PART_ArrowBorder" RenderTemplate="{StaticResource ResourceKey={dxt:DropDownButtonThemeKey ResourceKey=BorderTemplate}}" Visibility="Collapsed" />
            <dxcn:RenderBorder Name="PART_ArrowPaddingBorder">
              <dxcn:RenderPanel Name="PART_ArrowRenderPanel">
                <dxcn:RenderImage Name="PART_ArrowGlyph" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible" />
                <dxcn:RenderControl Name="PART_DefaultArrowGlyph" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTemplateSelector="{dxcn:RenderDropDownArrowTemplateSelector}" Visibility="Collapsed" />
              </dxcn:RenderPanel>
            </dxcn:RenderBorder>
          </dxcn:RenderPanel>
          <dxcn:RenderPanel Name="PART_GlyphAndContent" ShouldCalcDpiAwareThickness="False">
            <dxcn:RenderButtonBorder Name="PART_GlyphAndContentBorder" RenderTemplate="{StaticResource ResourceKey={dxt:DropDownButtonThemeKey ResourceKey=BorderTemplate}}" Visibility="Collapsed" />
            <dxcn:RenderBorder Name="PART_ContentPaddingBorder">
              <dxcn:RenderPanel Name="PART_ContentRenderPanel" HorizontalAlignment="Stretch" LayoutProvider="{dxcn:DockPanelLayoutProvider LastChildFill=True }">
                <dxcn:RenderImage Name="PART_Glyph" Dock="Left" Stretch="Uniform" StretchDirection="DownOnly" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <dxcn:RenderBorder Name="PART_Offset" Dock="Left" />
                <dxcn:RenderContentPresenter Name="PART_ContentPresenter" />
              </dxcn:RenderPanel>
            </dxcn:RenderBorder>
          </dxcn:RenderPanel>
        </dxcn:RenderPanel>
      </dxcn:RenderBorder>
    </dxcn:RenderPanel>
    <dxcn:RenderTemplate.Triggers>
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ForegroundProperty}" TargetName="PART_ContentPresenter" TargetProperty="Foreground" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphProperty}" TargetName="PART_Glyph" TargetProperty="Source" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowGlyphProperty}" TargetName="PART_ArrowGlyph" TargetProperty="Source" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphToContentOffsetProperty}" TargetName="PART_Offset" TargetProperty="Width" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphToContentOffsetProperty}" TargetName="PART_Offset" TargetProperty="Height" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.GlyphAlignmentProperty}" TargetName="PART_Glyph" TargetProperty="Dock" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.GlyphWidthProperty}" TargetName="PART_Glyph" TargetProperty="Width" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.GlyphHeightProperty}" TargetName="PART_Glyph" TargetProperty="Height" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowAlignmentProperty}" TargetName="PART_Arrow" TargetProperty="Dock" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ContentProperty}" TargetName="PART_ContentPresenter" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ContentTemplateProperty}" TargetName="PART_ContentPresenter" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.VerticalContentAlignmentProperty}" TargetProperty="VerticalAlignment" TargetName="PART_ContentRenderPanel" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.HorizontalContentAlignmentProperty}" TargetProperty="HorizontalAlignment" TargetName="PART_ContentRenderPanel" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowPaddingProperty}" TargetProperty="Margin" TargetName="PART_ArrowPaddingBorder" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static ContentControl.PaddingProperty}" TargetProperty="Margin" TargetName="PART_ContentPaddingBorder" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.BorderThicknessProperty}" TargetProperty="Margin" TargetName="PART_OffsetThicknessBorder" />
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowGlyphProperty}" Value="{x:Null}">
        <dxcn:RenderSetter TargetName="PART_ArrowGlyph" Property="Visibility" Value="Collapsed" />
        <dxcn:RenderSetter TargetName="PART_DefaultArrowGlyph" Property="Visibility" Value="Visible" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphAlignmentProperty}" Value="Left">
        <dxcn:RenderSetter TargetName="PART_Glyph" Property="Dock" Value="Left" />
        <dxcn:RenderSetter TargetName="PART_Offset" Property="Dock" Value="Left" />
        <dxcn:RenderSetter TargetName="PART_ContentPresenter" Property="Dock" Value="Right" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphAlignmentProperty}" Value="Right">
        <dxcn:RenderSetter TargetName="PART_Glyph" Property="Dock" Value="Right" />
        <dxcn:RenderSetter TargetName="PART_Offset" Property="Dock" Value="Right" />
        <dxcn:RenderSetter TargetName="PART_ContentPresenter" Property="Dock" Value="Left" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphAlignmentProperty}" Value="Top">
        <dxcn:RenderSetter TargetName="PART_Glyph" Property="Dock" Value="Top" />
        <dxcn:RenderSetter TargetName="PART_Offset" Property="Dock" Value="Top" />
        <dxcn:RenderSetter TargetName="PART_ContentPresenter" Property="Dock" Value="Bottom" />
        <dxcn:RenderSetter TargetName="PART_ContentPresenter" Property="HorizontalAlignment" Value="Center" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphAlignmentProperty}" Value="Bottom">
        <dxcn:RenderSetter TargetName="PART_Glyph" Property="Dock" Value="Bottom" />
        <dxcn:RenderSetter TargetName="PART_Offset" Property="Dock" Value="Bottom" />
        <dxcn:RenderSetter TargetName="PART_ContentPresenter" Property="Dock" Value="Top" />
        <dxcn:RenderSetter TargetName="PART_ContentPresenter" Property="HorizontalAlignment" Value="Center" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowAlignmentProperty}" Value="Left">
        <dxcn:RenderSetter TargetName="PART_GlyphAndContent" Property="Dock" Value="Right" />
        <dxcn:RenderSetter TargetName="PART_GlyphAndContentBorder" Property="Placement" Value="Right" />
        <dxcn:RenderSetter TargetName="PART_Arrow" Property="Dock" Value="Left" />
        <dxcn:RenderSetter TargetName="PART_ArrowBorder" Property="Placement" Value="Left" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowAlignmentProperty}" Value="Right">
        <dxcn:RenderSetter TargetName="PART_GlyphAndContent" Property="Dock" Value="Left" />
        <dxcn:RenderSetter TargetName="PART_GlyphAndContentBorder" Property="Placement" Value="Left" />
        <dxcn:RenderSetter TargetName="PART_Arrow" Property="Dock" Value="Right" />
        <dxcn:RenderSetter TargetName="PART_ArrowBorder" Property="Placement" Value="Right" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowAlignmentProperty}" Value="Top">
        <dxcn:RenderSetter TargetName="PART_GlyphAndContent" Property="Dock" Value="Bottom" />
        <dxcn:RenderSetter TargetName="PART_GlyphAndContentBorder" Property="Placement" Value="Bottom" />
        <dxcn:RenderSetter TargetName="PART_Arrow" Property="Dock" Value="Top" />
        <dxcn:RenderSetter TargetName="PART_ArrowBorder" Property="Placement" Value="Top" />
      </dxcn:RenderTrigger>
      <dxcn:RenderTrigger ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowAlignmentProperty}" Value="Bottom">
        <dxcn:RenderSetter TargetName="PART_GlyphAndContent" Property="Dock" Value="Top" />
        <dxcn:RenderSetter TargetName="PART_GlyphAndContentBorder" Property="Placement" Value="Top" />
        <dxcn:RenderSetter TargetName="PART_Arrow" Property="Dock" Value="Bottom" />
        <dxcn:RenderSetter TargetName="PART_ArrowBorder" Property="Placement" Value="Bottom" />
      </dxcn:RenderTrigger>
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.IsAsyncOperationInProgressProperty}" TargetProperty="Visibility" TargetName="PART_ContentPresenter" Converter="{dx:BooleanToVisibilityConverter Invert=True}" ConverterParamenter="HiddenOnFalse" />
    </dxcn:RenderTemplate.Triggers>
  </dxcn:RenderTemplate>
  <!--SplitButton-->
