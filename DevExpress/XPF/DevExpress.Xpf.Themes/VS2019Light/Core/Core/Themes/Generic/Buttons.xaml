            <dxcn:RenderPanel Name="PART_ArrowRenderPanel">
              <dxcn:RenderImage Name="PART_ArrowGlyph" ShouldCalcDpiAwareThickness="False" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible" />
              <dxcn:RenderControl Name="PART_DefaultArrowGlyph" ShouldCalcDpiAwareThickness="False" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTemplateSelector="{dxcn:RenderDropDownArrowTemplateSelector}" Visibility="Collapsed" />
