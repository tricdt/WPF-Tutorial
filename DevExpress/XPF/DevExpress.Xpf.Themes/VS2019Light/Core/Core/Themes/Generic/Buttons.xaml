    </dxcn:RenderPanel>
    <dxcn:RenderTemplate.Triggers>
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ForegroundProperty}" TargetName="PART_ContentPresenter" TargetProperty="Foreground" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphProperty}" TargetName="PART_Glyph" TargetProperty="Source" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowGlyphProperty}" TargetName="PART_ArrowGlyph" TargetProperty="Source" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphToContentOffsetProperty}" TargetName="PART_Offset" TargetProperty="Width" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphToContentOffsetProperty}" TargetName="PART_Offset" TargetProperty="Height" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.GlyphAlignmentProperty}" TargetName="PART_Glyph" TargetProperty="Dock" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.GlyphWidthProperty}" TargetName="PART_Glyph" TargetProperty="Width" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.GlyphHeightProperty}" TargetName="PART_Glyph" TargetProperty="Height" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowAlignmentProperty}" TargetName="PART_Arrow" TargetProperty="Dock" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ContentProperty}" TargetName="PART_ContentPresenter" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ContentTemplateProperty}" TargetName="PART_ContentPresenter" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.VerticalContentAlignmentProperty}" TargetName="PART_ContentRenderPanel" TargetProperty="VerticalAlignment" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SimpleButton.HorizontalContentAlignmentProperty}" TargetName="PART_ContentRenderPanel" TargetProperty="HorizontalAlignment" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static ContentControl.PaddingProperty}" TargetProperty="Margin" TargetName="PART_ContentPaddingBorder" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.BorderThicknessProperty}" TargetProperty="Margin" TargetName="PART_ContentThicknessBorder" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowPaddingProperty}" TargetProperty="Margin" TargetName="PART_DefaultArrowGlyph" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:DropDownButtonBase.ArrowPaddingProperty}" TargetProperty="Margin" TargetName="PART_ArrowGlyph" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SplitButton.ArrowBorderThicknessProperty}" TargetProperty="Margin" TargetName="PART_ArrowThicknessBorder" />
      <dxcn:RenderBinding ValueSource="TemplatedParent" DependencyProperty="{x:Static dx:SplitButton.SeparatorThicknessProperty}" TargetProperty="Margin" TargetName="PART_SeparatorBorder" Converter="{StaticResource separatorThicknessConverter}" />
