<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxbt:BarStaticItemThemeKey ResourceKey=BorderTemplate}" TargetType="ContentControl">
        <Grid SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="border"
                    Grid.Column="1"
                    Margin="2,4,2,4"
                    Width="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#008D919E" Offset="0"/>
                        <GradientStop Color="#008D919E" Offset="1"/>
                        <GradientStop Color="#FF8D919E" Offset="0.25"/>
                        <GradientStop Color="#FF8D919E" Offset="0.5"/>
                        <GradientStop Color="#FF8D919E" Offset="0.75"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <ContentPresenter Content="{TemplateBinding Content}" Grid.ColumnSpan="1"/>
            <dxcn:DXTriggerManager.TriggersInfo>
                <dxcn:DXTriggerInfoCollection>
                    <dxcn:DXTriggerInfo Binding="{Binding Path=Link.Item.ShowBorder, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxb:BarItemLinkControl}}"
                                        VisualState="HideBorder"
                                        VisualStateNormal="ShowBorder">
                        <dxcn:DXTriggerInfo.TriggerValue>
                            <sys:Boolean>False</sys:Boolean>
                        </dxcn:DXTriggerInfo.TriggerValue>
                    </dxcn:DXTriggerInfo>
                </dxcn:DXTriggerInfoCollection>
            </dxcn:DXTriggerManager.TriggersInfo>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="BorderVisibility">
                    <VisualState x:Name="ShowBorder"></VisualState>
                    <VisualState x:Name="HideBorder">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="border"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>