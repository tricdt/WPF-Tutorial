            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ScrollBarThumbHorizontal" TargetType="{x:Type Thumb}">
        <Setter Property="MinWidth" Value="7"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          SnapsToDevicePixels="True">
                        <Grid Height="7">
                            <Border x:Name="DefaultState"
                                    Background="{StaticResource ScrollBar.Horizontal.DefaultState.Border2}"
                                    BorderBrush="{StaticResource ScrollBar.Horizontal.DefaultState.Border1}"
                                    BorderThickness="1"
                                    CornerRadius="4"/>
                            <Border x:Name="HoverState"
                                    Background="{StaticResource ScrollBar.Horizontal.HoverState.Border2}"
                                    BorderBrush="{StaticResource ScrollBar.Horizontal.HoverState.Border1}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Opacity="0"/>
                            <Border x:Name="DraggingState"
                                    Background="{StaticResource ScrollBar.Horizontal.DraggingState.Border2}"
                                    BorderBrush="{StaticResource ScrollBar.Horizontal.DraggingState.Border1}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Opacity="0"/>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="DraggingState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="DraggingState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity"
                                    TargetName="Root"
                                    Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

