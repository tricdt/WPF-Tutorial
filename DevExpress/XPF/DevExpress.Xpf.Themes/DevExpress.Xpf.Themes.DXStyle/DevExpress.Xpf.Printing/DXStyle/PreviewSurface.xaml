<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxpt="http://schemas.devexpress.com/winfx/2008/xaml/printing/themekeys"
                    xmlns:native="clr-namespace:DevExpress.Xpf.Printing.Native;assembly=DevExpress.Xpf.Printing.v24.1"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BackgroundStyle"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFEBECEF" Offset="0"/>
        <GradientStop Color="#FFE2E3E7" Offset="1"/>
    </LinearGradientBrush>

    <ControlTemplate x:Key="{dxpt:PrintingThemeKey ResourceKey=PreviewSurfaceTemplate}">
        <Border Background="{StaticResource BackgroundStyle}"/>
    </ControlTemplate>

</ResourceDictionary>