<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{dxscht:DayViewThemeKey ResourceKey=CurrentTimeIndicatorStyle}" TargetType="{x:Type ContentPresenter}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid Height="19" Width="32">
                        <Grid.Effect>
                            <DropShadowEffect x:Name="Shadow"
                                              BlurRadius="3"
                                              Direction="315"
                                              Opacity="0.15"
                                              ShadowDepth="2"/>
                        </Grid.Effect>
                        <Grid.OpacityMask>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="#00FFFFFF" Offset="0"/>
                                <GradientStop Color="#FFFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.OpacityMask>
                        <Path Data="F1 M 795,280L 795,281L 786,290L 763,290L 763,271L 786,271L 795,280 Z "
                              Fill="#FFB1B2BC"
                              Stretch="Fill"/>
                        <Path Data="F1 M 795,280L 795,281L 786,290L 763,290L 763,271L 786,271L 795,280 Z "
                              Fill="#FFB1B2BC"
                              Stretch="Fill"/>
                        <Path Data="F1 M 794,280L 794,281L 786,289L 764,289L 764,272L 786,272L 794,280 Z "
                              Fill="#FFE9EFFE"
                              Margin="1"
                              Stretch="Fill"/>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>