                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Resource -->

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemExpandButtonSize}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemExpandButtonSize}">14</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHeight}">32</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderHeight}">22</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemOffset}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpandButtonContainerMinWidth}">18</sys:Double>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=HeaderElementsMargin}">3,3,0,3</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemContainerMargin}">0,0,0,1</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderMargin}">4,0,4,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=CollapsedItemGlyphMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderContainerMargin}">0,1,0,0</Thickness>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=DisabledItemOpacity}">0.35</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontSize}">12</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontWeight}">Normal</FontWeight>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontWeight}">Normal</FontWeight>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=BorderThickness}">0</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonCheckedMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMargin}">8,5,8,5</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMinHeight}">22</sys:Double>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowItemMargin}">0,0,1,1</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowBackgroundPadding}">0,1,0,0</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontWeight}">Normal</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontWeight}">Normal</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlFontSize}">12</sys:Double>

    <!-- Expand/Collapse Button -->

    <dxmvvm:ObjectToObjectConverter x:Key="FlipHorizontalConverter" DefaultTarget="1">
        <dxmvvm:MapItem Source="True" Target="-1"/>
    </dxmvvm:ObjectToObjectConverter>

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpanderButtonTemplate}" TargetType="dxa:AccordionExpandButton">
        <Grid x:Name="Root" Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CheckStates">
                    <VisualState x:Name="Unchecked"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsUnchecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsChecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Indeterminate"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="RootItemHover"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD6D8DC" Offset="0"/>
                        <GradientStop Color="#FFC7C9CF" Offset="1"/>
                        <GradientStop Color="#FFA8ABB4" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border BorderThickness="1"
                        CornerRadius="1"
                        Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE8EDFF" Offset="0"/>
                            <GradientStop Color="#FFE1E8FE" Offset="1"/>
                            <GradientStop Color="#FFD3DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF6F8FF" Offset="0"/>
                            <GradientStop Color="#FFF1F5FF" Offset="1"/>
                            <GradientStop Color="#FFEAEFFE" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
            </Border>
            <Border x:Name="RootItemPressed"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF8A8D98" Offset="0"/>
                        <GradientStop Color="#FFB0B2BA" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border BorderThickness="1"
                        CornerRadius="1"
                        Padding="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFBDBEC7" Offset="0"/>
                            <GradientStop Color="#FFC7C8D0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFB1B3BC" Offset="0"/>
                            <GradientStop Color="#FFC4C6CE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
            </Border>
            <dxa:ExpandButtonContentPresenter x:Name="IsUnchecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentCollapse"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                          Fill="{TemplateBinding Foreground}"
                          Height="8"
                          Margin="1,0,0,0"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          Width="4">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Grid x:Name="RootItemContentCollapse"
                          Height="5"
                          Margin="0,1,0,0"
                          Width="8">
                        <Path Data="F1 M 1668.5,818L 1668.5,817L 1666.5,817L 1664.5,819L 1662.5,817L 1660.5,817L 1660.5,818L 1664.5,822L 1668.5,818 Z "
                              Fill="#BFFFFFFF"
                              Margin="0,1,0,-1"
                              Stretch="Fill"/>
                        <Path x:Name="PathOpen"
                              Data="F1 M 1668.5,818L 1668.5,817L 1666.5,817L 1664.5,819L 1662.5,817L 1660.5,817L 1660.5,818L 1664.5,822L 1668.5,818 Z "
                              Fill="#FF80838F"
                              Stretch="Fill"/>
                    </Grid>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
            <dxa:ExpandButtonContentPresenter x:Name="IsChecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Visibility="Hidden">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentExpand"
                          Data="F1 M 13.0677,23.9948L 13.0677,19.0358L 8.06719,24.0363L 13.0677,23.9948 Z"
                          Fill="{TemplateBinding Foreground}"
                          Height="6"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          Width="6">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Grid x:Name="RootItemContentExpand"
                          Height="5"
                          Width="8">
                        <Path Data="F1 M 1668.5,814L 1668.5,815L 1666.5,815L 1664.5,813L 1662.5,815L 1660.5,815L 1660.5,814L 1664.5,810L 1668.5,814 Z "
                              Fill="#BFFFFFFF"
                              Margin="0,1,0,-1"
                              Stretch="Fill"/>
                        <Path x:Name="PathClose"
                              Data="F1 M 1668.5,814L 1668.5,815L 1666.5,815L 1664.5,813L 1662.5,815L 1660.5,815L 1660.5,814L 1664.5,810L 1668.5,814 Z "
                              Fill="#FF80838F"
                              Stretch="Fill"/>
                    </Grid>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover"/>
            <Trigger Property="ItemState" Value="Pressed"/>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsPressed" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RootItem and Item -->

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemBackgroundTemplate}" TargetType="dxa:AccordionItemBackgroundControl">
        <Grid x:Name="Root">
            <Grid x:Name="RootItemDefault" Opacity="0">
                <Border BorderThickness="1" CornerRadius="1">
                    <Border.Effect>
                        <DropShadowEffect x:Name="Shadow"
                                          BlurRadius="3"
                                          Direction="270"
                                          Opacity="0.1"
                                          ShadowDepth="1"/>
                    </Border.Effect>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#7FB8BAC2" Offset="0"/>
                            <GradientStop Color="#FFB8BAC2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFF8F8FA" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFDFDFD" Offset="0"/>
                                <GradientStop Color="#FFF0F1F3" Offset="1"/>
                                <GradientStop Color="#FFE9EBEF" Offset="0.25"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Grid>
            <Border x:Name="CustomBackground"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
            </Border>
            <Border x:Name="ItemHover"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F6FE" Offset="0"/>
                        <GradientStop Color="#FFF4F6FE" Offset="1"/>
                        <GradientStop Color="#FFECEFF7" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCECFD5" Offset="0"/>
                        <GradientStop Color="#FFCECFD5" Offset="1"/>
                        <GradientStop Color="#FFACAFB8" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border CornerRadius="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE5EBFF" Offset="0"/>
                            <GradientStop Color="#FFE4EBFD" Offset="1"/>
                            <GradientStop Color="#FFDEE6FE" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="ItemPressed"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F6FE" Offset="0"/>
                        <GradientStop Color="#FFF4F6FE" Offset="1"/>
                        <GradientStop Color="#FFECEFF7" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFAEAFB5" Offset="0"/>
                        <GradientStop Color="#FFAEAFB5" Offset="1"/>
                        <GradientStop Color="#FF8C8F98" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border CornerRadius="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE7EDFF" Offset="0"/>
                            <GradientStop Color="#FFDEE6FE" Offset="1"/>
                            <GradientStop Color="#FFD2DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="ItemSelected"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F6FE" Offset="0"/>
                        <GradientStop Color="#FFF4F6FE" Offset="1"/>
                        <GradientStop Color="#FFECEFF7" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFAEAFB5" Offset="0"/>
                        <GradientStop Color="#FFAEAFB5" Offset="1"/>
                        <GradientStop Color="#FF8C8F98" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border CornerRadius="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE7EDFF" Offset="0"/>
                            <GradientStop Color="#FFDEE6FE" Offset="1"/>
                            <GradientStop Color="#FFD2DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Grid x:Name="RootItemHover" Opacity="0">
                <Border BorderThickness="1" CornerRadius="1">
                    <Border.Effect>
                        <DropShadowEffect x:Name="Shadow"
                                          BlurRadius="3"
                                          Direction="270"
                                          Opacity="0.1"
                                          ShadowDepth="1"/>
                    </Border.Effect>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#7FB8BAC2" Offset="0"/>
                            <GradientStop Color="#FFB8BAC2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFF8F8FA" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFDFDFD" Offset="0"/>
                                <GradientStop Color="#FFF0F1F3" Offset="1"/>
                                <GradientStop Color="#FFE9EBEF" Offset="0.25"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
                <Border Margin="1" Opacity="0.4">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE7EDFF" Offset="0"/>
                            <GradientStop Color="#FFDEE6FE" Offset="1"/>
                            <GradientStop Color="#FFD2DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="RootItemPressed" Opacity="0">
                <Border BorderThickness="1" CornerRadius="1">
                    <Border.Effect>
                        <DropShadowEffect x:Name="Shadow"
                                          BlurRadius="3"
                                          Direction="270"
                                          Opacity="0.1"
                                          ShadowDepth="1"/>
                    </Border.Effect>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#7FB8BAC2" Offset="0"/>
                            <GradientStop Color="#FFB8BAC2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFF8F8FA" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFDFDFD" Offset="0"/>
                                <GradientStop Color="#FFF0F1F3" Offset="1"/>
                                <GradientStop Color="#FFE9EBEF" Offset="0.25"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
                <Border Margin="1" Opacity="0.9">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE7EDFF" Offset="0"/>
                            <GradientStop Color="#FFDEE6FE" Offset="1"/>
                            <GradientStop Color="#FFD2DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="RootItemSelected" Opacity="0">
                <Border BorderThickness="1" CornerRadius="1">
                    <Border.Effect>
                        <DropShadowEffect x:Name="Shadow"
                                          BlurRadius="3"
                                          Direction="270"
                                          Opacity="0.1"
                                          ShadowDepth="1"/>
                    </Border.Effect>
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#7FB8BAC2" Offset="0"/>
                            <GradientStop Color="#FFB8BAC2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFF8F8FA" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFDFDFD" Offset="0"/>
                                <GradientStop Color="#FFF0F1F3" Offset="1"/>
                                <GradientStop Color="#FFE9EBEF" Offset="0.25"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
                <Border Margin="1" Opacity="0.9">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE7EDFF" Offset="0"/>
                            <GradientStop Color="#FFDEE6FE" Offset="1"/>
                            <GradientStop Color="#FFD2DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Pressed">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Selected">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="SelectedInactive">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="0.6"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Focused">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemDefault"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        TargetName="CustomBackground"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Hover"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Pressed"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Selected"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemSelected"
                        Value="1"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonTemplate}" TargetType="ToggleButton">
        <Grid Background="Transparent"
              Height="{TemplateBinding Height}"
              Width="{TemplateBinding Width}">
            <Border x:Name="ItemHover"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD6D8DC" Offset="0"/>
