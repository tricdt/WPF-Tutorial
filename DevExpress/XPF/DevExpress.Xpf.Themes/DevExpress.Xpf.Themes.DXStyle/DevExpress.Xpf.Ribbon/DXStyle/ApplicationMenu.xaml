<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationFramework"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBackgroundTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFFFFFFF" cs:id="Border_0000"/>
    </ControlTemplate>
    <SolidColorBrush x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuRightPaneForeground}" Color="Black"/>
    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2007}" TargetType="{x:Type ContentControl}">
        <Border x:Name="Border"
                Background="#FF92949E"
                cs:id="Border_0000">
            <Grid x:Name="Shadow" Grid.Row="0">
                <Border BorderBrush="#CC000000"
                        BorderThickness="5"
                        CornerRadius="5"
                        Margin="-5,-1,-5,-5"
                        Opacity="0.03"/>
                <Border BorderBrush="#CC000000"
                        BorderThickness="4"
                        CornerRadius="4"
                        Margin="-4"
                        Opacity="0.03"/>
                <Border BorderBrush="#CC000000"
                        BorderThickness="3"
                        CornerRadius="3"
                        Margin="-3"
                        Opacity="0.03"/>
                <Border BorderBrush="#CC000000"
                        BorderThickness="2"
                        CornerRadius="2"
                        Margin="-2"
                        Opacity="0.03"/>
                <Border BorderBrush="#CC000000"
                        BorderThickness="1"
                        CornerRadius="1"
                        Margin="-1"
                        Opacity="0.05"/>
                <Grid Margin="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="22"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border x:Name="Header"
                            BorderBrush="#FF92949E"
                            BorderThickness="0,0,0,1"
                            cs:id="Border_0005">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0000">
                                <GradientStop Color="#FFF0F0F0"
                                              Offset="0"
                                              cs:id="GradientStop_0000"/>
                                <GradientStop Color="#FFE5E6E8"
                                              Offset="1"
                                              cs:id="GradientStop_0001"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border BorderBrush="#BFFFFFFF"
                                BorderThickness="1"
                                cs:id="Border_0006"/>
                    </Border>
                    <Border Grid.Row="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0001">
                                <GradientStop Color="Red"
                                              Offset="0"
                                              cs:id="GradientStop_0002"/>
                                <GradientStop Color="#FFD1D8E2"
                                              Offset="1"
                                              cs:id="GradientStop_0003"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBottomPaneTemplate}" TargetType="{x:Type ContentControl}">
        <Border BorderBrush="#FF92949E"
                BorderThickness="0,1,0,0"
                cs:id="Border_0000">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0000">
                    <GradientStop Color="#FFF0F0F0"
                                  Offset="0"
                                  cs:id="GradientStop_0000"/>
                    <GradientStop Color="#FFE5E6E8"
                                  Offset="1"
                                  cs:id="GradientStop_0001"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Border BorderBrush="#BFFFFFFF"
                        BorderThickness="1"
                        cs:id="Border_0001"/>
                <ContentPresenter HorizontalAlignment="Right"
                                  Margin="2"
                                  SnapsToDevicePixels="True"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuRightPaneTemplate}" TargetType="{x:Type ContentControl}">
        <Border Background="#FFEBECEF" cs:id="Border_0000">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <Thickness x:Key="{dxrt:BackstageThemeKey ResourceKey=BorderThickness}">1,1,1,1</Thickness>

    <Thickness x:Key="{dxrt:BackstageThemeKey ResourceKey=BorderThicknessNoFullscreen}">0,1,0,0</Thickness>

    <ControlTemplate x:Key="{dxrt:BackstageThemeKey ResourceKey=BorderTemplate}">
        <Border Background="{DynamicResource {dxt:ThemedWindowThemeKey ResourceKey=WindowActiveBorderBrush}}" SnapsToDevicePixels="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuContentControlBorderTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{TemplateBinding Content}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2010}" TargetType="{x:Type ContentControl}">
        <ContentControl Template="{DynamicResource {dxrt:RibbonThemeKey ResourceKey=ApplicationMenuBarControlBorderTemplate2007}}">
            <ContentPresenter/>
        </ContentControl>
    </ControlTemplate>

</ResourceDictionary>