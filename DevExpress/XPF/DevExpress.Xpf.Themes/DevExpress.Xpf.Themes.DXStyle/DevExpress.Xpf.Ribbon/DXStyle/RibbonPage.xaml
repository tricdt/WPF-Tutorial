    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=HeaderTextIndent}">90.0</sys:Double>

    <sys:Double x:Key="{dxrt:RibbonPageThemeKey ResourceKey=MinHeight}">23.0</sys:Double>

