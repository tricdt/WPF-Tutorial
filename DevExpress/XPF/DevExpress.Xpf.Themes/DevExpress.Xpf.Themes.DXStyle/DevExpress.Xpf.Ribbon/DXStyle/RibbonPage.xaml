    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=RightRepeatButtonTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,-1,-3,-1"
              SnapsToDevicePixels="True"
              Width="16">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF201F35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Shadow"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF201F35"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="States"
                                             Storyboard.TargetProperty="(Grid.Effect).(DropShadowEffect.Opacity)"
                                             To="0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid x:Name="States" Background="#FFFFFFFF">
                <Grid.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00FFFFFF" Offset="0"/>
                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                        <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
                    </LinearGradientBrush>
                </Grid.OpacityMask>
                <Grid.Effect>
                    <DropShadowEffect x:Name="Shadow"
                                      BlurRadius="5"
                                      Direction="180"
                                      Opacity="0.15"
                                      ShadowDepth="3"/>
                </Grid.Effect>
                <Border x:Name="HoverState"
                        Background="#FFCBD6F3"
                        Opacity="0"/>
                <Border x:Name="PressedState"
                        Background="#FFCED2D9"
                        Opacity="0"/>
                <Border x:Name="Separator"
                        Background="#FF9DA0AA"
                        HorizontalAlignment="Left"
                        Width="1"/>
                <Path x:Name="Glyph"
                      Data="F1 M 206,7.00006L 206,15.0001L 210,11.0001L 206,7.00006 Z"
                      Fill="#FF80838F"
                      Height="8"
                      HorizontalAlignment="Center"
                      Margin="2,0,0,0"
                      Stretch="Fill"
                      VerticalAlignment="Center"
                      Width="4"/>
            </Grid>
        </Grid>
    </ControlTemplate>

