<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxdv="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer"
                    xmlns:dxdvt="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.DXStyle.v24.1;component/DevExpress.Xpf.DocumentViewer/Generic/Templates.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- BarItem Colors -->

    <LinearGradientBrush x:Key="BarItem.DefaultState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#BFA9ACB5" Offset="0"/>
        <GradientStop Color="#BFA9ACB5" Offset="1"/>
        <GradientStop Color="#FFA9ACB5" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.DefaultState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFF2F3F5" Offset="0"/>
        <GradientStop Color="#FFECEEF2" Offset="1"/>
        <GradientStop Color="#FFDEE0E6" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.HoverState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#BFA9ACB5" Offset="0"/>
        <GradientStop Color="#BFA9ACB5" Offset="1"/>
        <GradientStop Color="#FFA9ACB5" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.HoverState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFE3EBFE" Offset="0"/>
        <GradientStop Color="#FFDEE7FE" Offset="1"/>
        <GradientStop Color="#FFD3DEFC" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.PressedState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#BFA9ACB5" Offset="0"/>
        <GradientStop Color="#BFA9ACB5" Offset="1"/>
        <GradientStop Color="#FFA9ACB5" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.PressedState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFD2D3D7" Offset="0"/>
        <GradientStop Color="#FFE1E2E6" Offset="1"/>
        <GradientStop Color="#FFE1E2E6" Offset="0.2"/>
    </LinearGradientBrush>

    <!-- Search Panel -->

    <ControlTemplate x:Key="{dxdvt:DocumentViewerThemeKeyExtension ResourceKey=DocumentViewerBarTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="0,0,0,3">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="3"
                                  Direction="270"
                                  Opacity="0.14"
                                  ShadowDepth="1"/>
            </Grid.Effect>
            <Border BorderThickness="0,0,0,1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                        <GradientStop Color="#FFF1F2F6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#3FB8BAC2" Offset="0"/>
                        <GradientStop Color="#FFB8BAC2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
            </Border>
            <ContentPresenter Margin="12,4,4,5"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxdv:SearchBarButtonItemItemBorderThemeKeyExtension ResourceKey=Normal}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid x:Name="Root">
            <Border Background="{StaticResource BarItem.DefaultState.Border1}"
                    CornerRadius="2"
                    Margin="0,1,0,1"
                    Padding="1">
                <Grid>
                    <Border x:Name="DefaultState"
                            Background="{StaticResource BarItem.DefaultState.Border2}"
                            CornerRadius="1"
                            Opacity="0"/>
                    <Border x:Name="HoverState"
                            Background="{StaticResource BarItem.HoverState.Border2}"
                            CornerRadius="1"
                            Opacity="0"/>
                    <Border BorderBrush="#7FFFFFFF"
                            BorderThickness="1"
                            CornerRadius="1"/>
                    <Border x:Name="PressedState"
                            Background="{StaticResource BarItem.PressedState.Border2}"
                            CornerRadius="1"
                            Opacity="0"/>
                </Grid>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="DefaultState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxdv:SearchBarSubItemItemBorderThemeKeyExtension ResourceKey=Normal}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid x:Name="Root" Margin="0,1,0,1">
            <Border x:Name="DefaultState"
                    Background="{StaticResource BarItem.DefaultState.Border2}"
                    BorderBrush="{StaticResource BarItem.DefaultState.Border1}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"/>
            <Border x:Name="HoverState"
                    Background="{StaticResource BarItem.HoverState.Border2}"
                    BorderBrush="{StaticResource BarItem.HoverState.Border1}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"/>
            <Border BorderBrush="#7FFFFFFF"
                    BorderThickness="1"
                    CornerRadius="1"
                    Margin="1"/>
            <Border x:Name="PressedState"
                    Background="{StaticResource BarItem.PressedState.Border2}"
                    BorderBrush="{StaticResource BarItem.PressedState.Border1}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="DefaultState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxdv:SearchBarButtonItemLayoutPanelThemeKey ResourceKey=StyleInBar}" TargetType="{x:Type dxb:BarItemLayoutPanel}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MinWidth" Value="64"/>
        <Setter Property="Margin" Value="4,0,2,0"/>
        <Setter Property="BorderThemeKey" Value="{dxdv:SearchBarButtonItemItemBorderThemeKeyExtension}"/>
        <Setter Property="FirstBorderNormalStateIsEmpty" Value="False"/>
        <Setter Property="FirstBorderUseNormalStateOnly" Value="False"/>
        <Setter Property="GlyphMargin" Value="0"/>
        <Setter Property="CommonContentMargin" Value="4,0,4,0"/>
        <Setter Property="LeftGlyphMargin" Value="0"/>
        <Setter Property="RightGlyphMargin" Value="0"/>
        <Setter Property="LeftCommonContentMargin" Value="0"/>
        <Setter Property="RightCommonContentMargin" Value="0"/>
    </Style>

    <Style x:Key="{dxdv:SearchBarSubItemLayoutPanelThemeKey ResourceKey=StyleInBar}" TargetType="{x:Type dxb:BarItemLayoutPanel}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,0,2,0"/>
        <Setter Property="MinWidth" Value="64"/>
        <Setter Property="BorderThemeKey" Value="{dxdv:SearchBarSubItemItemBorderThemeKeyExtension}"/>
        <Setter Property="FirstBorderNormalStateIsEmpty" Value="False"/>
        <Setter Property="FirstBorderUseNormalStateOnly" Value="False"/>
        <Setter Property="ContentAndGlyphMargin" Value="4"/>
        <Setter Property="ArrowMargin" Value="0"/>
        <Setter Property="LeftContentAndGlyphMargin" Value="4"/>
        <Setter Property="RightContentAndGlyphMargin" Value="4"/>
        <Setter Property="LeftArrowMargin" Value="0,1,0,0"/>
        <Setter Property="RightArrowMargin" Value="0,1,4,0"/>
        <Setter Property="CommonContentMargin" Value="0"/>
        <Setter Property="ArrowThemeKey" Value="{dxbt:BarSubItemThemeKey ResourceKey=ArrowTemplate}"/>
    </Style>

    <Style x:Key="{dxdv:SearchBarStaticItemLayoutPanelThemeKey ResourceKey=StyleInBar}" TargetType="{x:Type dxb:BarItemLayoutPanel}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThemeKey" Value="{dxdv:SearchBarStaticItemItemBorderThemeKeyExtension}"/>
        <Setter Property="FirstBorderNormalStateIsEmpty" Value="False"/>
        <Setter Property="FirstBorderUseNormalStateOnly" Value="False"/>
        <Setter Property="ContentAndGlyphMargin" Value="0"/>
        <Setter Property="CommonContentMargin" Value="0,0,2,0"/>
    </Style>

</ResourceDictionary>