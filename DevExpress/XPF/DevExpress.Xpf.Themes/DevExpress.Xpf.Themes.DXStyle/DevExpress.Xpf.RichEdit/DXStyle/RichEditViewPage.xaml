<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxrec="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaLeftPadding}">20</sys:Double>

    <sys:Double x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentsAreaRightPadding}">10</sys:Double>

    <Thickness x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentContentPadding}">10,10,10,10</Thickness>

    <Point x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentLineOffset}">0,20</Point>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PrintLayoutViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Grid>
            <Border x:Name="ShadowBorder"
                    Background="White"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect x:Name="Shadow"
                                      BlurRadius="3"
                                      Direction="270"
                                      Opacity="0.35"
                                      ShadowDepth="1"/>
                </Border.Effect>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="#FF8F9096"
                    BorderThickness="1">
                <Grid>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="-1"
                                      SnapsToDevicePixels="True"
                                      UseLayoutRounding="True"/>
                    <Border Background="#FFFAFAFA"
                            HorizontalAlignment="Right"
                            Visibility="{TemplateBinding CommentsVisibility}">
                        <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                             HorizontalAlignment="Right"
                                                             Visibility="{TemplateBinding CommentsVisibility}"
                                                             Width="{TemplateBinding CommentsWidth}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditViewCommentsPresenterControlTemplate}" TargetType="{x:Type ContentControl}">
        <ContentPresenter Content="{TemplateBinding Content}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          SnapsToDevicePixels="True"
                          UseLayoutRounding="True"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=SimpleViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFAFAFA"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}">
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=DraftViewPageBorderControlTemplate}" TargetType="{x:Type dxrec:RichEditViewPageContentControl}">
        <Border Background="{TemplateBinding Background}">
            <Grid>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                <Border Background="#FFFAFAFA"
                        HorizontalAlignment="Right"
                        Visibility="{TemplateBinding CommentsVisibility}">
                    <dxrec:RichEditViewCommentsPresenter x:Name="CommentsArea"
                                                         HorizontalAlignment="Right"
                                                         Visibility="{TemplateBinding CommentsVisibility}"
                                                         Width="{TemplateBinding CommentsWidth}"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <!--RichEditCommentBorderControlTemplate -->

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=RichEditCommentBorderControlTemplate}" TargetType="{x:Type ContentControl}">
        <Grid>
            <Border Background="#FFFFFFFF"
                    BorderBrush="{TemplateBinding Background}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Margin="1">
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Margin="-1"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="2"
                    IsHitTestVisible="False"
                    Margin="1"
                    Opacity="0.1"/>
        </Grid>
    </ControlTemplate>

    <!-- CommentMoreButtonStyle -->

    <Style x:Key="{dxret:RichEditControlThemeKey ResourceKey=CommentMoreButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Root"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Root"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.75"/>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="NormalState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="GlyphDown"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="#FF201F35"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="HoverState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="GlyphDown"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="#FF4A5668"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="PressedState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="GlyphDown"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="#FF201F35"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="Root"
                              Height="16"
                              Margin="2"
                              Width="16">
                            <Border x:Name="NormalState"
                                    Background="#FFA9ACB5"
                                    CornerRadius="64"
                                    Opacity="0">
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFAFBFC" Offset="0"/>
                                            <GradientStop Color="#FFF8F9FA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="64" Margin="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFF2F3F5" Offset="0"/>
                                                <GradientStop Color="#FFECEEF2" Offset="1"/>
                                                <GradientStop Color="#FFDEE0E6" Offset="0.5"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="HoverState"
                                    Background="#FFA9ACB5"
                                    CornerRadius="24"
                                    Opacity="0">
                                <Border CornerRadius="64" Margin="1">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFF2F4FF" Offset="0"/>
                                            <GradientStop Color="#FFEFF4FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="64" Margin="1">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFE3EBFE" Offset="0"/>
                                                <GradientStop Color="#FFDEE7FE" Offset="1"/>
                                                <GradientStop Color="#FFD3DEFC" Offset="0.5"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </Border>
                            <Border x:Name="PressedState"
                                    Background="#FFA9ACB5"
                                    CornerRadius="64"
                                    Opacity="0">
                                <Border Background="#FFDCDDE1"
                                        CornerRadius="64"
                                        Margin="1">
                                    <Border Background="#FFDCDDE1"
                                            CornerRadius="64"
                                            Margin="1"/>
                                </Border>
                            </Border>
                            <Path x:Name="GlyphDown"
                                  Data="F1 M 209,15.9999L 201,15.9999L 205,20L 209,15.9999 Z"
                                  Fill="#FF201F35"
                                  Height="4"
                                  HorizontalAlignment="Center"
                                  Margin="0,1,0,0"
                                  Stretch="Fill"
                                  VerticalAlignment="Center"
                                  Width="8"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>