<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <dx:BoolToVisibilityInverseConverter x:Key="boolToVisibilityInverseConverter"/>

    <dx:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <dx:BoolToThicknessConverter x:Key="boolToThicknessConverter" ThicknessTrue="-2"/>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=SelectedTabDragOffset}">2</Thickness>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabHeadersClipMargin}">-1,-2</Thickness>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=ContentBorderThickness}">1</Thickness>

    <sys:Double x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabHeadersTransparencySize}">7</sys:Double>

    <SolidColorBrush x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabbedBackground}" Color="#FF9DA0AA"/>

    <LinearGradientBrush x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=MDIBackground}"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FF919499"
                      Offset="0"
                      cs:id="GradientStop_0000"/>
        <GradientStop Color="#FF919499"
                      Offset="1"
                      cs:id="GradientStop_0001"/>
        <GradientStop Color="#FFA6A8AD"
                      Offset="0.5"
                      cs:id="GradientStop_0002"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="{dxt:DocumentElementsThemeKey ResourceKey=Background}" Color="White"/>

    <SolidColorBrush x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabHeadersBackground}" Color="Transparent"/>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabPanelMargin}">0,2,0,0</Thickness>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabbedBorderMargin}">0</Thickness>

    <ControlTemplate x:Key="{dxt:DocumentElementsThemeKey ResourceKey=Template}" TargetType="ve:Document">
        <Border>
            <Border Background="{Binding Background}"
                    Margin="{Binding IsFloatingRootItem, Converter={StaticResource boolToThicknessConverter}}"
                    ve:DockPane.HitTestType="Bounds">
                <ve:DocumentContentPresenter x:Name="PART_ContentPresenter"
                                             Content="{TemplateBinding Content}"
                                             Margin="{Binding LayoutItem.ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Border>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=PageHeader}" TargetType="ve:DocumentPaneItem">
        <ve:UnclippableGrid x:Name="Root"
                            ve:DockPane.HitTestType="Header"
                            Visibility="{Binding Visibility}">
            <ve:UnclippableGrid.Resources>
                <dx:ColorOverlayConverter x:Key="colorOverlayConveter"/>
                <LinearGradientBrush x:Key="coloredHoverBrush"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0000">
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFE3E3E3}" Offset="0"/>
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFF3F3F3}" Offset="1"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="coloredNormalBrush2"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0001">
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFF0F0F0}" Offset="0"/>
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFF3F3F3}" Offset="1"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="coloredNormalBrush1"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0002">
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFDDDDDD}" Offset="0"/>
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFEEEEEE}" Offset="1"/>
                </LinearGradientBrush>
                <SolidColorBrush x:Key="coloredBorderBrush" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFB5B5B5}"/>
                <Color x:Key="unselectedForeground" cs:id="Color_0000">#FFE0E0E0</Color>
                <Color x:Key="selectedForeground" cs:id="Color_0001">#FF808080</Color>
                <Color x:Key="inactiveForeground" cs:id="Color_0002">#FF808080</Color>
                <Color x:Key="hoverForeground" cs:id="Color_0003">#FFFFFFFF</Color>
                <SolidColorBrush x:Key="coloredUnselectedForeground"
                                 Color="#FF201F35"
                                 cs:id="SolidColorBrush_0000"/>
                <SolidColorBrush x:Key="coloredSelectedForeground" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter={StaticResource selectedForeground}}"/>
                <SolidColorBrush x:Key="coloredInactiveForeground" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter={StaticResource inactiveForeground}}"/>
                <SolidColorBrush x:Key="coloredHoverForeground"
                                 Color="#FF201F35"
                                 cs:id="SolidColorBrush_0001"/>
                <SolidColorBrush x:Key="selectedBrush"
                                 Color="White"
                                 cs:id="SolidColorBrush_0002"/>
                <SolidColorBrush x:Key="defaultBorderBrush"
                                 Color="#FF9DA0AA"
                                 cs:id="SolidColorBrush_0003"/>
                <LinearGradientBrush x:Key="normalBack"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0003">
                    <GradientStop Color="#FFEDEDF0"
                                  Offset="0"
                                  cs:id="GradientStop_0000"/>
                    <GradientStop Color="#FFF5F6F7"
                                  Offset="1"
                                  cs:id="GradientStop_0001"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="normalBorderBrush"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0004">
                    <GradientStop Color="#FFDCDDE1"
                                  Offset="0"
                                  cs:id="GradientStop_0002"/>
                    <GradientStop Color="#FFEBECEF"
                                  Offset="1"
                                  cs:id="GradientStop_0003"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="hoverBack2"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0005">
                    <GradientStop Color="#FFCDDAFB"
                                  Offset="0"
                                  cs:id="GradientStop_0004"/>
                    <GradientStop Color="#FFE0E8FD"
                                  Offset="1"
                                  cs:id="GradientStop_0005"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="hoverBack1"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0006">
                    <GradientStop Color="#FFE6ECFD"
                                  Offset="0"
                                  cs:id="GradientStop_0006"/>
                    <GradientStop Color="#FFF0F4FE"
                                  Offset="1"
                                  cs:id="GradientStop_0007"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="focusedTab"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0007">
                    <GradientStop Color="#3F6699FF"
                                  Offset="0"
                                  cs:id="GradientStop_0008"/>
                    <GradientStop Color="#006699FF"
                                  Offset="1"
                                  cs:id="GradientStop_0009"/>
                </LinearGradientBrush>
                <LinearGradientBrush x:Key="focusedTabColored"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     cs:id="LinearGradientBrush_0008">
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFE0E0E0}" Offset="0"/>
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#00FFFFFF}" Offset="1"/>
                </LinearGradientBrush>
            </ve:UnclippableGrid.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TabBackground"
                                                           Storyboard.TargetProperty="BorderBrush">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource hoverBack1}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TabBackground"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource hoverBack2}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ColoredTabBackground"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredHoverBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Normal"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="EmptySelectionState"/>
                    <VisualState x:Name="Selected">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TabBackground"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TabBackground"
                                                           Storyboard.TargetProperty="BorderBrush">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="focusedTab"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TabBackground"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="TabBackground"
                                                           Storyboard.TargetProperty="BorderBrush">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unselected"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ColorStates">
                    <VisualState x:Name="EmptyColorState"/>
                    <VisualState x:Name="ColorSelected">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ColoredTabBackground"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ColoredTabBackground"
                                                           Storyboard.TargetProperty="BorderBrush">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="focusedTabColored"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredSelectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredSelectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="ColorInactive">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ColoredTabBackground"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ColoredTabBackground"
                                                           Storyboard.TargetProperty="BorderBrush">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource selectedBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredInactiveForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredInactiveForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="ColorUnselected">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredUnselectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredUnselectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="ColorMouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredHoverForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredHoverForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="LocationStates">
                    <VisualState x:Name="Top"/>
                    <VisualState x:Name="Bottom">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="9,2,9,4"
                                                           Storyboard.TargetName="PART_CaptionControlPresenter"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="-5,0,4,2"
                                                           Storyboard.TargetName="PART_ControlBox"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Left">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="9,3"
                                                           Storyboard.TargetName="PART_CaptionControlPresenter"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="-5,2,4,0"
                                                           Storyboard.TargetName="PART_ControlBox"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Right">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="9,3"
                                                           Storyboard.TargetName="PART_CaptionControlPresenter"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="-5,2,4,0"
                                                           Storyboard.TargetName="PART_ControlBox"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ve:TabHeaderContainer x:Name="TabHeaderContainer"
                                   BottomSelectedMargin="0,-1,0,-2"
                                   CaptionLocation="{TemplateBinding CaptionLocation}"
                                   IsSelected="{TemplateBinding IsSelected}"
                                   LeftSelectedMargin="-2,0,-1,0"
                                   RightSelectedMargin="-1,0,-2,0"
                                   TopSelectedMargin="0,-2,0,-1">
                <ve:TabHeaderBackgroundPanel CaptionLocation="{TemplateBinding CaptionLocation}" CaptionOrientation="{TemplateBinding CaptionOrientation}">
                    <Grid>
                        <Border x:Name="TabItemHeader"
                                Background="#FF9DA0AA"
                                Margin="0,0,-1,0"
                                Padding="{TemplateBinding ActualBorderThickness}"
                                Visibility="{Binding HasTabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityInverseConverter}}"
                                cs:id="Border_0000">
                            <Border x:Name="TabBackground"
                                    Background="{StaticResource normalBorderBrush}"
                                    BorderBrush="{StaticResource normalBack}"
                                    BorderThickness="{TemplateBinding ActualBorderThickness}">
                                <Border x:Name="focusedTab"
                                        Background="{StaticResource focusedTab}"
                                        Opacity="0"/>
                            </Border>
                        </Border>
                        <Border x:Name="ColoredTabItemHeader"
                                Background="{StaticResource defaultBorderBrush}"
                                Margin="0,0,-1,0"
                                Padding="{TemplateBinding ActualBorderThickness}"
                                Visibility="{Binding HasTabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityConverter}}">
                            <Border x:Name="ColoredTabBackground"
                                    Background="{StaticResource coloredNormalBrush1}"
                                    BorderBrush="{StaticResource coloredNormalBrush2}"
                                    BorderThickness="{TemplateBinding ActualBorderThickness}">
                                <Border x:Name="focusedTabColored"
                                        Background="{StaticResource focusedTabColored}"
                                        Opacity="0"/>
                            </Border>
                        </Border>
                    </Grid>
                </ve:TabHeaderBackgroundPanel>
            </ve:TabHeaderContainer>
            <ve:TabHeaderTransformPanel CaptionLocation="{TemplateBinding CaptionLocation}" CaptionOrientation="{TemplateBinding CaptionOrientation}">
                <Grid x:Name="Content">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ve:TemplatedTabCaptionControl x:Name="PART_CaptionControlPresenter"
                                                   Foreground="#FF201F35"
                                                   LayoutItem="{Binding}"
                                                   Padding="9,4,9,2"
                                                   cs:id="TemplatedTabCaptionControl_0000"/>
                    <ve:DocumentTabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                           ButtonHeight="15"
                                                           ButtonStyle="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=DocumentPageButtonStyle}}"
                                                           ButtonWidth="15"
                                                           CloseButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=ClosePageButton}}"
                                                           Grid.Column="1"
                                                           LayoutItem="{Binding}"
                                                           Margin="-5,2,4,0"
                                                           PinButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=PinPageButton}}"/>
                </Grid>
            </ve:TabHeaderTransformPanel>
        </ve:UnclippableGrid>
        <ControlTemplate.Triggers>
            <Trigger Property="ViewStyle" Value="Light">
                <Setter Property="BottomSelectedMargin"
                        TargetName="TabHeaderContainer"
                        Value="0,-1,0,0"/>
                <Setter Property="TopSelectedMargin"
                        TargetName="TabHeaderContainer"
                        Value="0,0,0,-1"/>
                <Setter Property="LeftSelectedMargin"
                        TargetName="TabHeaderContainer"
                        Value="0,0,-1,0"/>
                <Setter Property="RightSelectedMargin"
                        TargetName="TabHeaderContainer"
                        Value="-1,0,0,0"/>
                <Setter Property="Padding"
                        TargetName="PART_CaptionControlPresenter"
                        Value="9,4,9,0">
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabContainerTemplate}" TargetType="ve:DocumentTabContainer">
        <ControlTemplate.Resources>
            <ve:GroupCaptionLocationToDockConverter x:Key="groupCaptionLocationToDockConverter"/>
            <ve:TabHeaderCaptionLocationToDockConverter x:Key="tabHeaderCaptionLocationToDockConverter"/>
        </ControlTemplate.Resources>
        <ve:DockingSplitLayoutPanel Content1Location="{Binding CaptionLocation, Converter={StaticResource groupCaptionLocationToDockConverter}}"
                                    DataContext="{Binding LayoutItem}"
                                    Margin="{TemplateBinding ActualBorderMargin}"
                                    SnapsToDevicePixels="True"
                                    ve:DockPane.HitTestType="Bounds">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ActiveStates">
                    <VisualState x:Name="ActiveEmptyState"/>
                    <VisualState x:Name="Active"/>
                    <VisualState x:Name="Inactive"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="HeaderStates">
                    <VisualState x:Name="HeaderVisible"/>
                    <VisualState x:Name="HeaderHidden"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ve:DockingSplitLayoutPanel.Content1>
                <ve:DockingSplitLayoutPanel x:Name="HeadersPanel"
                                            Background="Transparent"
                                            Canvas.ZIndex="1"
                                            ClipMargin="{TemplateBinding ActualClipMargin}"
                                            Content1Location="{Binding CaptionLocation, Converter={StaticResource tabHeaderCaptionLocationToDockConverter}}"
                                            LeftContent1Margin="3,0"
                                            Margin="{TemplateBinding ActualTabPanelMargin}"
                                            MaximizeContent1="True"
                                            TopContent1Margin="0,3"
                                            UseClipMargin="True"
                                            cs:id="DockingSplitLayoutPanel_0000">
                    <ve:DockingSplitLayoutPanel.Content1>
                        <ItemsPresenter x:Name="PART_HeadersPanelPresenter"/>
                    </ve:DockingSplitLayoutPanel.Content1>
                    <ve:DockingSplitLayoutPanel.Content2>
                        <ve:TabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                       ButtonHeight="18"
                                                       ButtonStyle="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=DocumentGroupButtonStyle}}"
                                                       ButtonWidth="19"
                                                       CloseButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=CloseButton}}"
                                                       DropDownButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=DropDownButton}}"
                                                       LayoutItem="{Binding}"
                                                       ScrollNextButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollNextButton}}"
                                                       ScrollPrevButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollPrevButton}}"
                                                       ve:DockPane.HitTestType="ControlBox"
                                                       ve:TabHeaderControlBoxControl.Location="{Binding CaptionLocation}"/>
                    </ve:DockingSplitLayoutPanel.Content2>
                </ve:DockingSplitLayoutPanel>
            </ve:DockingSplitLayoutPanel.Content1>
            <ve:DockingSplitLayoutPanel.Content2>
                <Grid x:Name="PART_SelectedPage" ve:DockPane.HitTestType="Content">
                    <Grid.Resources>
                        <dx:ColorOverlayConverter x:Key="colorOverlayConveter"/>
                        <SolidColorBrush x:Key="coloredBack" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFB5B5B5}"/>
                    </Grid.Resources>
                    <Border x:Name="HeaderPart"
                            Background="{TemplateBinding ActualBackground}"
                            BorderBrush="#FF9DA0AA"
                            BorderThickness="{TemplateBinding ActualContentBorderThickness}"
                            cs:id="Border_0000">
                        <ve:LayoutTabFastRenderPanel x:Name="PART_FastRenderPanel" ve:DockPane.HitTestType="Content"/>
                    </Border>
                </Grid>
            </ve:DockingSplitLayoutPanel.Content2>
        </ve:DockingSplitLayoutPanel>
        <ControlTemplate.Triggers>
            <Trigger Property="AreTabHeadersVisible" Value="False">
                <Setter Property="Visibility"
                        TargetName="HeadersPanel"
                        Value="Collapsed"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ViewStyle" Value="Light"/>
                    <Condition Property="AreTabHeadersVisible" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="BorderThickness"
                        TargetName="HeaderPart"
                        Value="0"/>
            </MultiTrigger>
            <Trigger Property="TabbedGroupDisplayMode" Value="ContentOnly">
                <Setter Property="BorderThickness"
                        TargetName="HeaderPart"
                        Value="0"/>
            </Trigger>
            <Trigger Property="ViewStyle" Value="Light">
                <Setter Property="LeftContent1Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,3,0"/>
                <Setter Property="TopContent1Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,0,3"/>
                <Setter Property="RightContent2Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,2,0">
                </Setter>
                <Setter Property="BottomContent2Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,0,2">
                </Setter>
                <Setter Property="Margin"
                        TargetName="HeadersPanel"
                        Value="0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=MDIDocument}" TargetType="ve:MDIDocument">
        <Grid Background="{StaticResource {dxt:DocumentPaneElementsThemeKey ResourceKey=MDIBackground}}">
            <Border x:Name="Border"
                    Background="#E5737782"
                    Padding="1"
                    cs:id="Border_0000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border x:Name="PART_Header"
                            BorderBrush="#FFEDEDF0"
                            BorderThickness="0,1,0,0"
                            ve:DockPane.HitTestType="Header"
                            cs:id="Border_0001">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0000">
                                <GradientStop Color="#FFD9DAE0"
                                              Offset="0"
                                              cs:id="GradientStop_0000"/>
                                <GradientStop Color="#FFC8C9D0"
                                              Offset="1"
                                              cs:id="GradientStop_0001"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="6,6,6,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ve:TemplatedCaptionControl x:Name="PART_CaptionControlPresenter"
                                                        FontWeight="Bold"
                                                        Foreground="#FF5D5C6D"
                                                        LayoutItem="{Binding}"
                                                        cs:id="TemplatedCaptionControl_0000">
                                <ve:TemplatedCaptionControl.Effect>
                                    <DropShadowEffect BlurRadius="0"
                                                      Color="#FFFFFFFF"
                                                      Opacity="0.5"
                                                      ShadowDepth="1"
                                                      cs:id="DropShadowEffect_0000"/>
                                </ve:TemplatedCaptionControl.Effect>
                            </ve:TemplatedCaptionControl>
                            <ve:WindowControlBoxControl x:Name="PART_ControlBox"
                                                        ButtonHeight="17"
                                                        ButtonStyle="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=MDIDocumentButtonStyle}}"
                                                        ButtonWidth="31"
                                                        CloseButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=CloseButton}}"
                                                        Grid.Column="1"
                                                        LayoutItem="{Binding}"
                                                        MaximizeButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=MaximizeButton}}"
                                                        MinimizeButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=MinimizeButton}}"
                                                        RestoreButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=RestoreButton}}"/>
                        </Grid>
                    </Border>
                    <Border x:Name="PART_Content"
                            Background="#FFC8C9D0"
                            Grid.Row="1"
                            Padding="4,0,4,4"
                            Visibility="{Binding IsMinimized, Converter={StaticResource boolToVisibilityInverseConverter}}"
                            cs:id="Border_0002">
                        <Border x:Name="ContentBorder"
                                Background="#FFEBECEF"
                                BorderBrush="#FFA8AAB4"
                                BorderThickness="1"
                                ve:DockPane.HitTestType="Content"
                                cs:id="Border_0004">
                            <ve:DocumentContentPresenter x:Name="PART_ContentPresenter" Content="{Binding LayoutItemData}"/>
                        </Border>
                    </Border>
                    <Border x:Name="PART_InactiveLayer"/>
                </Grid>
            </Border>
            <ve:ResizeBoundsControl x:Name="PART_ResizeBounds"
                                    Canvas.ZIndex="2"
                                    FlowDirection="LeftToRight"
                                    ve:DockPane.HitTestType="Border"/>
            <Grid x:Name="Shadow" Grid.Row="0">
                <Border BorderBrush="Black"
                        BorderThickness="5"
                        CornerRadius="5"
                        Margin="-6"
                        Opacity="0.01"
                        cs:id="Border_0003"/>
                <Border BorderBrush="Black"
                        BorderThickness="4"
                        CornerRadius="4"
                        Margin="-5"
                        Opacity="0.01"
                        cs:id="Border_0005"/>
                <Border BorderBrush="Black"
                        BorderThickness="3"
                        CornerRadius="3"
                        Margin="-4"
                        Opacity="0.02"
                        cs:id="Border_0006"/>
                <Border BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="2"
                        Margin="-3"
                        Opacity="0.03"
                        cs:id="Border_0007"/>
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="1"
                        Margin="-2"
                        Opacity="0.04"
                        cs:id="Border_0008"/>
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="1"
                        Margin="-1"
                        Opacity="0.05"
                        cs:id="Border_0009"/>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ActiveStates">
                    <VisualState x:Name="Active"/>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Border"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.75"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="MDIStates">
                    <VisualState x:Name="EmptyMDIState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="PART_Header"
                                                           Storyboard.TargetProperty="Visibility"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="PART_ResizeBounds"
                                                           Storyboard.TargetProperty="Visibility"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="PART_Content"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="PART_Content"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Minimized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="PART_ResizeBounds"
                                                           Storyboard.TargetProperty="Visibility"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=MDIContainerTemplate}" TargetType="ve:DocumentMDIContainer">
        <Grid DataContext="{Binding LayoutItem}"
              SnapsToDevicePixels="True"
              ve:DockPane.HitTestType="Bounds">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border x:Name="barPanel"
                    Background="#FFEBECEF"
                    BorderBrush="#FF9DA0AA"
                    BorderThickness="0,0,0,1"
                    Visibility="Collapsed"
                    cs:id="Border_0001">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Content="{Binding SelectedItem.Caption}"
                                      ContentTemplate="{Binding LayoutItem.SelectedItem.CaptionTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                      ContentTemplateSelector="{Binding LayoutItem.SelectedItem.CaptionTemplateSelector, RelativeSource={RelativeSource TemplatedParent}}"
                                      Margin="2"/>
                    <ve:TabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                   ButtonHeight="18"
                                                   ButtonStyle="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=MDIContainerButtonStyle}}"
                                                   ButtonWidth="19"
                                                   CloseButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=CloseButton}}"
                                                   DropDownButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=DropDownButton}}"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Right"
                                                   LayoutItem="{Binding}"
                                                   Margin="2"
                                                   RestoreButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=RestoreButton}}"
                                                   ScrollNextButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollNextButton}}"
                                                   ScrollPrevButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollPrevButton}}"/>
                </Grid>
            </Border>
            <ScrollViewer x:Name="scroller"
                          Background="{TemplateBinding ActualBackground}"
                          BorderThickness="0"
                          Grid.Row="1"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <ItemsPresenter x:Name="PART_MDIPanelPresenter"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"/>
            </ScrollViewer>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="HeaderStates">
                    <VisualState x:Name="HeaderVisible">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Visible"
                                                           Storyboard.TargetName="barPanel"
                                                           Storyboard.TargetProperty="Visibility"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.HorizontalAlignment="Stretch"
                                                           Storyboard.TargetName="PART_MDIPanelPresenter"
                                                           Storyboard.TargetProperty="HorizontalAlignment"/>
                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.VerticalAlignment="Stretch"
                                                           Storyboard.TargetName="PART_MDIPanelPresenter"
                                                           Storyboard.TargetProperty="VerticalAlignment"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HeaderHidden"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="MaximizedStates">
                    <VisualState x:Name="EmptyMaximizedState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="scroller" Storyboard.TargetProperty="HorizontalScrollBarVisibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <ScrollBarVisibility>Disabled</ScrollBarVisibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="scroller" Storyboard.TargetProperty="VerticalScrollBarVisibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <ScrollBarVisibility>Disabled</ScrollBarVisibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentElementsThemeKey ResourceKey=FloatDocument}" TargetType="ve:FloatDocument">
        <ve:DocumentFormBorderContentControl IsActive="{Binding IsActive}">
            <Border Background="{Binding Background}">
                <ve:DocumentContentPresenter x:Name="PART_ContentPresenter"
                                             Content="{Binding LayoutItemData}"
                                             ve:DockPane.HitTestType="Content"/>
            </Border>
        </ve:DocumentFormBorderContentControl>
    </ControlTemplate>

</ResourceDictionary>