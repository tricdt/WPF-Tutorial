    <!-- MDIButton -->

    <ControlTemplate x:Key="{dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorder}" TargetType="dxb:ItemBorderControl">
        <Grid Height="17" Width="17">
            <Border x:Name="HoverState"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F6FE" Offset="0"/>
                        <GradientStop Color="#FFF4F6FE" Offset="1"/>
                        <GradientStop Color="#FFECEFF7" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCECFD5" Offset="0"/>
                        <GradientStop Color="#FFCECFD5" Offset="1"/>
                        <GradientStop Color="#FFACAFB8" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border CornerRadius="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE5EBFF" Offset="0"/>
                            <GradientStop Color="#FFE4EBFD" Offset="1"/>
                            <GradientStop Color="#FFDEE6FE" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Border x:Name="PressedState"
                    BorderThickness="1"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF4F6FE" Offset="0"/>
                        <GradientStop Color="#FFF4F6FE" Offset="1"/>
                        <GradientStop Color="#FFECEFF7" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFAEAFB5" Offset="0"/>
                        <GradientStop Color="#FFAEAFB5" Offset="1"/>
                        <GradientStop Color="#FF8C8F98" Offset="0.25"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border CornerRadius="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE7EDFF" Offset="0"/>
                            <GradientStop Color="#FFDEE6FE" Offset="1"/>
                            <GradientStop Color="#FFD2DEFC" Offset="0.25"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked"/>
                    <VisualState x:Name="HoverChecked"/>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorderStyle}" TargetType="dxb:ItemBorderControl">
        <Setter Property="Template" Value="{DynamicResource {dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorder}}"/>
    </Style>

    <DataTemplate x:Key="{dxt:GlyphElementsThemeKey ResourceKey=MDIButtonClose}">
