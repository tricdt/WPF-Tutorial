                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="PinnedPath"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="#FF000000"/>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="UnpinnedPath"
                                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                        To="#FF000000"/>
                                    </Storyboard>
