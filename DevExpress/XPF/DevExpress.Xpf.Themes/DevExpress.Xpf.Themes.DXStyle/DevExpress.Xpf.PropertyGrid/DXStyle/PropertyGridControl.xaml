<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ValueColumnMinWidth}">21</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=HeaderColumnMinWidth}">2</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SelectorAndSearchSeparatorWidth}">4</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonsIndent}">1</sys:Double>

    <LinearGradientBrush x:Key="BarItem.HoverState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00646877" Offset="0"/>
        <GradientStop Color="#00646877" Offset="1"/>
        <GradientStop Color="#FF646877" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.HoverState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00B9C6EE" Offset="0"/>
        <GradientStop Color="#00B9C6EE" Offset="1"/>
        <GradientStop Color="#FFB9C6EE" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.PressedState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00646877" Offset="0"/>
        <GradientStop Color="#00646877" Offset="1"/>
        <GradientStop Color="#FF646877" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.PressedState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00BCC2CB" Offset="0"/>
        <GradientStop Color="#00BCC2CB" Offset="1"/>
        <GradientStop Color="#FFBCC2CB" Offset="0.5"/>
    </LinearGradientBrush>

    <!-- Search Text Edit -->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchEditStyle}" TargetType="{x:Type dxe:TextEdit}">
        <Setter Property="ShowBorder" Value="True"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Background" Value="#FFFFFFFF"/>
    </Style>

    <!-- View Kind Button -->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonStyle}" TargetType="{x:Type RadioButton}">
        <Setter Property="Width" Value="22"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          HorizontalAlignment="Left"
                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="InternalFocusStates">
                                <VisualState x:Name="InternalFocused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="FocusState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="InternalUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0"
                              Grid.ColumnSpan="1"
                              Height="22"
                              Width="22">
                            <Border x:Name="DefaultState"/>
                            <Border x:Name="FocusState"/>
                            <Border x:Name="HoverState"
                                    Background="{StaticResource BarItem.HoverState.Border2}"
                                    BorderBrush="{StaticResource BarItem.HoverState.Border1}"
                                    BorderThickness="1,0,1,0"
                                    Opacity="0"/>
                            <Border x:Name="PressedState"
                                    Background="{StaticResource BarItem.PressedState.Border2}"
                                    BorderBrush="{StaticResource BarItem.PressedState.Border1}"
                                    BorderThickness="1,0,1,0"
                                    Opacity="0"/>
                        </Grid>
                        <Path x:Name="PART_ListView"
                              Data="F1 M 2,3L 14,3L 14,4L 2,4L 2,3 Z M 2,6L 14,6L 14,7L 2,7L 2,6 Z M 2,9L 14,9L 14,10L 2,10L 2,9 Z M 2,12L 14,12L 14,13L 2,13L 2,12 Z "
                              Fill="#FF000000"
                              Height="10"
                              Stretch="Fill"
                              Width="12"/>
                        <Path x:Name="PART_GroupView"
                              Data="F1 M 2,2L 7,2L 7,7L 2,7L 2,2 Z M 2,9.00001L 6.99999,9.00001L 6.99999,14L 2,14L 2,9.00001 Z M 8,4.00001L 14,4.00001L 14,5.00001L 8,5.00001L 8,4.00001 Z M 8,11L 14,11L 14,12L 8,12L 8,11 Z M 4,3L 4,4L 3,4L 3,5L 4,5L 4,6L 5,6L 5,5L 6,5L 6,4L 5,4L 5,3L 4,3 Z M 4,10L 4,11L 3,11L 3,12L 4,12L 4,13L 5,13L 5,12L 6,12L 6,11L 5,11L 5,10L 4,10 Z "
                              Fill="#FF000000"
                              Height="12"
                              Stretch="Fill"
                              Width="12"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenNoGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Visible"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Collapsed"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity"
                                    TargetName="Root"
                                    Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Control Border -->

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=Background}" Color="#FFFFFFFF"/>

    <Thickness x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderBrush}" Color="#FF8591A2"/>

    <!-- Desciption Presenter -->

    <ControlTemplate x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=DescriptionPresenterTemplate}" TargetType="{x:Type dxprg:PropertyDescriptionPresenterControl}">
        <Border x:Name="PART_Border"
                Background="#FFEBECEF"
                BorderBrush="#FF9DA0AA"
                BorderThickness="0,1,0,0"
                Padding="2">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter x:Name="PART_HeaderPresenter"
                                  Content="{Binding SelectedRow.Header, RelativeSource={RelativeSource TemplatedParent}}"
                                  HorizontalAlignment="Left"
                                  TextElement.FontWeight="Bold"/>
                <ContentPresenter Grid.Row="1" Margin="0,4,0,0"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="ShowSelectedRowHeader" Value="False">
                <Setter Property="Visibility"
                        TargetName="PART_HeaderPresenter"
                        Value="Collapsed"/>
            </Trigger>
            <Trigger Property="IsInTooltip" Value="True">
                <Setter Property="Background"
                        TargetName="PART_Border"
                        Value="Transparent"/>
                <Setter Property="BorderBrush"
                        TargetName="PART_Border"
                        Value="Transparent"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- SearchControl-->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchControlStyle}" TargetType="{x:Type dxe:SearchControl}">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- SearchControl and ViewKindButtons panel-->

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=TopPanelStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border BorderThickness="0,0,0,1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                <GradientStop Color="#FFF1F2F6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#3FB8BAC2" Offset="0"/>
                                <GradientStop Color="#FFB8BAC2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <ContentPresenter Margin="4"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>