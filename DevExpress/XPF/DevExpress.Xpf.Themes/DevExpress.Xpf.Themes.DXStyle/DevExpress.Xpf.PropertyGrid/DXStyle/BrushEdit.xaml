<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="clr-namespace:DevExpress.Xpf.Core.Native;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.DXStyle.v24.1;component/DevExpress.Xpf.PropertyGrid/Generic/BrushEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="DefaultState.BorderBrush" Color="#FF9DA0AA"/>

    <LinearGradientBrush x:Key="DefaultState.HighlightedBorder"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFEDEDF0" Offset="0"/>
        <GradientStop Color="#FFF5F6F7" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DefaultState.Background"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFDCDDE1" Offset="0"/>
        <GradientStop Color="#FFEBECEF" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="HoverState.BorderBrush" Color="#FF9DA0AA"/>

    <LinearGradientBrush x:Key="HoverState.HighlightedBorder"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFE6ECFD" Offset="0"/>
        <GradientStop Color="#FFF0F4FE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverState.Background"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFCDDAFB" Offset="0"/>
        <GradientStop Color="#FFE0E8FD" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PressedState.BorderBrush" Color="#FF9DA0AA"/>

    <SolidColorBrush x:Key="PressedState.Background" Color="#FFFFFFFF"/>

    <ControlTemplate x:Key="{dxprgt:PopupBrushEditThemeKey ResourceKey=BrushTypeButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="Root" Margin="0,0,-1,-1">
            <Border x:Name="DefaultState"
                    Background="{StaticResource DefaultState.HighlightedBorder}"
                    BorderBrush="{StaticResource DefaultState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,0,0,1"
                    Padding="1,1,1,0">
                <Border Background="{StaticResource DefaultState.Background}"/>
            </Border>
            <Border x:Name="HoverState"
                    Background="{StaticResource HoverState.HighlightedBorder}"
                    BorderBrush="{StaticResource HoverState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,0,0,1"
                    Opacity="0"
                    Padding="1,1,1,0">
                <Border Background="{StaticResource HoverState.Background}"/>
            </Border>
            <Border x:Name="PressedState"
                    Background="{StaticResource PressedState.Background}"
                    BorderBrush="{StaticResource PressedState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Opacity="0"/>
            <ContentPresenter HorizontalAlignment="Center"
                              Margin="3"
                              VerticalAlignment="Center"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.38"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>