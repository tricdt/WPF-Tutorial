<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BarItem.HoverState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00646877" Offset="0"/>
        <GradientStop Color="#00646877" Offset="1"/>
        <GradientStop Color="#FF646877" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.HoverState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00B9C6EE" Offset="0"/>
        <GradientStop Color="#00B9C6EE" Offset="1"/>
        <GradientStop Color="#FFB9C6EE" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.PressedState.Border1"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00646877" Offset="0"/>
        <GradientStop Color="#00646877" Offset="1"/>
        <GradientStop Color="#FF646877" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BarItem.PressedState.Border2"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#00BCC2CB" Offset="0"/>
        <GradientStop Color="#00BCC2CB" Offset="1"/>
        <GradientStop Color="#FFBCC2CB" Offset="0.5"/>
    </LinearGradientBrush>

    <sys:Double x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=RowMinHeight}">21</sys:Double>

    <Thickness x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderMargin}">2,0,0,0</Thickness>

    <Thickness x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderPadding}">2</Thickness>

    <ControlTemplate x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderNormalTemplate}">
        <Border Background="Transparent"
                MinHeight="22"
                MinWidth="22"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderMouseOverTemplate}">
        <Border x:Name="HoverState"
                Background="{StaticResource BarItem.HoverState.Border2}"
                BorderBrush="{StaticResource BarItem.HoverState.Border1}"
                BorderThickness="1,0,1,0"
                MinHeight="22"
                MinWidth="22"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxprgt:PropertyGridViewThemeKey ResourceKey=CategoryHeaderSelectedTemplate}">
        <Border x:Name="PressedState"
                Background="{StaticResource BarItem.PressedState.Border2}"
                BorderBrush="{StaticResource BarItem.PressedState.Border1}"
                BorderThickness="1,0,1,0"
                MinHeight="22"
                MinWidth="22"/>
    </ControlTemplate>

</ResourceDictionary>