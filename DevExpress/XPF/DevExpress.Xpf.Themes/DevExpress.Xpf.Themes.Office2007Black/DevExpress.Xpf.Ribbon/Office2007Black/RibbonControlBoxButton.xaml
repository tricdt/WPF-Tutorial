        <GradientStop Color="#FF363535" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="{dxt:RibbonHeaderItemsThemeKey ResourceKey=RibbonDefaultButtonForegroundPressedState}"
                         EndPoint="0.5,1"
