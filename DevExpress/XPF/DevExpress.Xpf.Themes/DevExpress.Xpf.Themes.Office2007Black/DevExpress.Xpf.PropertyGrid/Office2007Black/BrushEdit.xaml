<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxcn="clr-namespace:DevExpress.Xpf.Core.Native;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.Office2007Black.v24.1;component/DevExpress.Xpf.PropertyGrid/Generic/BrushEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <LinearGradientBrush x:Key="DefaultState.BorderBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFF9FCFF" Offset="0"/>
        <GradientStop Color="#FFF4F8FF" Offset="1"/>
        <GradientStop Color="#FFF6FAFF" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DefaultState.Background"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFFFFDFE" Offset="0"/>
        <GradientStop Color="#FFF7FDFD" Offset="1"/>
        <GradientStop Color="#FFE2E7EC" Offset="0.5"/>
        <GradientStop Color="#FFCED7E1" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverState.BorderBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFF9FCFF" Offset="0"/>
        <GradientStop Color="#FFF4F8FF" Offset="1"/>
        <GradientStop Color="#FFF6FAFF" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverState.Background"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FFFFFBE5" Offset="0"/>
        <GradientStop Color="#FFFCEBB7" Offset="1"/>
        <GradientStop Color="#FFFADF8F" Offset="0.5"/>
        <GradientStop Color="#FFF4C233" Offset="0.5"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PressedState.BorderBrush" Color="#FF828790"/>

    <SolidColorBrush x:Key="PressedState.Background" Color="#FFFFFFFF"/>

    <ControlTemplate x:Key="{dxprgt:PopupBrushEditThemeKey ResourceKey=BrushTypeButtonTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid x:Name="Root" Margin="0,0,-1,-1">
            <Border Background="#FF828790" Padding="1,1,1,0">
                <Grid>
                    <Border x:Name="DefaultState"
                            Background="{StaticResource DefaultState.Background}"
                            BorderBrush="{StaticResource DefaultState.BorderBrush}"
                            BorderThickness="1,1,1,0"
                            Margin="0,0,0,1"/>
                    <Border x:Name="HoverState"
                            Background="{StaticResource HoverState.Background}"
                            BorderBrush="{StaticResource HoverState.BorderBrush}"
                            BorderThickness="1,1,1,0"
                            Margin="0,0,0,1"
                            Opacity="0"/>
                </Grid>
            </Border>
            <Border x:Name="PressedState"
                    Background="{StaticResource PressedState.Background}"
                    BorderBrush="{StaticResource PressedState.BorderBrush}"
                    BorderThickness="1,1,1,0"
                    Margin="0,-2,0,0"
                    Opacity="0"/>
            <ContentPresenter HorizontalAlignment="Center"
                              Margin="3"
                              VerticalAlignment="Center"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.38"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>