<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/docking/platform"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys"
                    xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=SelectedTabDragOffset}">1</Thickness>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabHeadersClipMargin}">-1,-2</Thickness>

    <sys:Double x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabHeadersTransparencySize}">7</sys:Double>

    <dx:BoolToVisibilityInverseConverter x:Key="boolToVisibilityInverseConverter"/>

    <dx:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>

    <dx:BoolToThicknessConverter x:Key="boolToThicknessConverter" ThicknessTrue="-2"/>

    <SolidColorBrush x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabbedBackground}" Color="#FF898989"/>

    <LinearGradientBrush x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=MDIBackground}"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FF272829" Offset="0"/>
        <GradientStop Color="#FF525962" Offset="1"/>
        <GradientStop Color="#FF383A3C" Offset="0.5"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="{dxt:DocumentElementsThemeKey ResourceKey=Background}" Color="White"/>

    <SolidColorBrush x:Key="defaultBorderBrush" Color="#FF898989"/>

    <SolidColorBrush x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabHeadersBackground}" Color="Transparent"/>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabPanelMargin}">0</Thickness>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabbedBorderMargin}">0</Thickness>

    <Thickness x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=ContentBorderThickness}">1</Thickness>

    <!-- DocumentPane Theme Elements -->

    <ControlTemplate x:Key="{dxt:DocumentElementsThemeKey ResourceKey=Template}" TargetType="ve:Document">
        <Border x:Name="border"
                Background="{Binding Background}"
                Margin="{Binding IsFloatingRootItem, Converter={StaticResource boolToThicknessConverter}}"
                ve:DockPane.HitTestType="Bounds">
            <ve:DocumentContentPresenter x:Name="PART_ContentPresenter"
                                         Content="{TemplateBinding Content}"
                                         Margin="{Binding LayoutItem.ActualPadding, RelativeSource={RelativeSource TemplatedParent}}"/>
        </Border>
    </ControlTemplate>

    <!-- DocumentPane Theme Elements -->

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=PageHeader}" TargetType="ve:DocumentPaneItem">
        <ve:UnclippableGrid x:Name="Grid"
                            Margin="0,0,-1,0"
                            ve:DockPane.HitTestType="Header"
                            Visibility="{Binding Visibility}">
            <ve:UnclippableGrid.Resources>
                <dx:ColorOverlayConverter x:Key="colorOverlayConveter"/>
                <SolidColorBrush x:Key="hoverBrush" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFF3F3F3}"/>
                <SolidColorBrush x:Key="normalBrush" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFE9E9E9}"/>
                <LinearGradientBrush x:Key="focusedTabColored"
                                     EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFD0D0D0}" Offset="0"/>
                    <GradientStop Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#00FFFFFF}" Offset="1"/>
                </LinearGradientBrush>
                <Color x:Key="unselectedForeground">#FF444444</Color>
                <Color x:Key="selectedForeground">#FF444444</Color>
                <Color x:Key="inactiveForeground">#FF808080</Color>
                <Color x:Key="hoverForeground">#FF444444</Color>
                <SolidColorBrush x:Key="coloredUnselectedForeground" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter={StaticResource unselectedForeground}}"/>
                <SolidColorBrush x:Key="coloredSelectedForeground" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter={StaticResource selectedForeground}}"/>
                <SolidColorBrush x:Key="coloredInactiveForeground" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter={StaticResource inactiveForeground}}"/>
                <SolidColorBrush x:Key="coloredHoverForeground" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter={StaticResource hoverForeground}}"/>
            </ve:UnclippableGrid.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TabBackground" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFDCDCDC"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColoredTabBackground" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource hoverBrush}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Normal"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="EmptySelectionState"/>
                    <VisualState x:Name="Selected">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TabBackground" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFFFFFFF"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="focusedTab"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TabBackground" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFFFFFFF"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unselected"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="ColorStates">
                    <VisualState x:Name="EmptyColorState"/>
                    <VisualState x:Name="ColorSelected">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredSelectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredSelectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColoredTabBackground" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFFFFFFF"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="focusedTabColored"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="ColorInactive">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredInactiveForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredInactiveForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColoredTabBackground" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFFFFFFF"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="ColorUnselected">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredUnselectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredUnselectedForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="ColorMouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_CaptionControlPresenter" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredHoverForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ControlBox" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource coloredHoverForeground}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="LocationStates">
                    <VisualState x:Name="Top"/>
                    <VisualState x:Name="Bottom">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="0,0,-1,0"
                                                           Storyboard.TargetName="Grid"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="9,2,9,4"
                                                           Storyboard.TargetName="PART_CaptionControlPresenter"
                                                           Storyboard.TargetProperty="Padding"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Left">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="0,0,0,-1"
                                                           Storyboard.TargetName="Grid"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="9,3"
                                                           Storyboard.TargetName="PART_CaptionControlPresenter"
                                                           Storyboard.TargetProperty="Padding"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Right">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="0,0,0,-1"
                                                           Storyboard.TargetName="Grid"
                                                           Storyboard.TargetProperty="Margin"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="9,3"
                                                           Storyboard.TargetName="PART_CaptionControlPresenter"
                                                           Storyboard.TargetProperty="Padding"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ve:TabHeaderContainer x:Name="TabHeaderContainer"
                                   BottomMargin="0,0,0,1"
                                   BottomSelectedMargin="0,-1,0,0"
                                   CaptionLocation="{TemplateBinding CaptionLocation}"
                                   IsSelected="{TemplateBinding IsSelected}"
                                   LeftMargin="1,0,0,0"
                                   LeftSelectedMargin="0,0,-1,0"
                                   RightMargin="0,0,1,0"
                                   RightSelectedMargin="-1,0,0,0"
                                   TopMargin="0,1,0,0"
                                   TopSelectedMargin="0,0,0,-1">
                <ve:TabHeaderBackgroundPanel CaptionLocation="{TemplateBinding CaptionLocation}" CaptionOrientation="{TemplateBinding CaptionOrientation}">
                    <Grid>
                        <Border x:Name="ColoredTabItemHeader"
                                Background="{StaticResource defaultBorderBrush}"
                                Padding="{TemplateBinding ActualBorderThickness}"
                                Visibility="{Binding HasTabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityConverter}}">
                            <Border x:Name="ColoredTabBackground" Background="{StaticResource normalBrush}">
                                <Border x:Name="focusedTabColored"
                                        Background="{StaticResource focusedTabColored}"
                                        Margin="{TemplateBinding ActualBorderThickness}"
                                        Opacity="0"/>
                            </Border>
                        </Border>
                        <Border x:Name="TabItemHeader"
                                Background="#FF898989"
                                Padding="{TemplateBinding ActualBorderThickness}"
                                Visibility="{Binding HasTabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityInverseConverter}}">
                            <Border x:Name="TabBackground" Background="#FFCBCBCB">
                                <Border x:Name="focusedTab"
                                        Margin="{TemplateBinding ActualBorderThickness}"
                                        Opacity="0">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFBE297" Offset="0"/>
                                            <GradientStop Color="#00FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                        </Border>
                    </Grid>
                </ve:TabHeaderBackgroundPanel>
            </ve:TabHeaderContainer>
            <ve:TabHeaderTransformPanel CaptionLocation="{TemplateBinding CaptionLocation}" CaptionOrientation="{TemplateBinding CaptionOrientation}">
                <Grid x:Name="Content">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ve:TemplatedTabCaptionControl x:Name="PART_CaptionControlPresenter"
                                                   LayoutItem="{Binding}"
                                                   Padding="9,4,9,2"/>
                    <ve:DocumentTabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                           ButtonHeight="16"
                                                           ButtonStyle="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=DocumentPageButtonStyle}}"
                                                           ButtonWidth="16"
                                                           CloseButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=ClosePageButton}}"
                                                           Grid.Column="1"
                                                           LayoutItem="{Binding}"
                                                           Margin="-5,2,3,0"
                                                           PinButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=PinPageButton}}"/>
                </Grid>
            </ve:TabHeaderTransformPanel>
        </ve:UnclippableGrid>
        <ControlTemplate.Triggers>
            <Trigger Property="ViewStyle" Value="Light">
                <Setter Property="TopMargin"
                        TargetName="TabHeaderContainer"
                        Value="0"/>
                <Setter Property="BottomMargin"
                        TargetName="TabHeaderContainer"
                        Value="0"/>
                <Setter Property="LeftMargin"
                        TargetName="TabHeaderContainer"
                        Value="0"/>
                <Setter Property="RightMargin"
                        TargetName="TabHeaderContainer"
                        Value="0"/>
                <Setter Property="Padding"
                        TargetName="PART_CaptionControlPresenter"
                        Value="9,4,9,0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=TabContainerTemplate}" TargetType="ve:DocumentTabContainer">
        <ve:DockingSplitLayoutPanel DataContext="{Binding LayoutItem}"
                                    Margin="{TemplateBinding ActualBorderMargin}"
                                    SnapsToDevicePixels="True"
                                    ve:DockPane.HitTestType="Bounds">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ActiveStates">
                    <VisualState x:Name="ActiveEmptyState"/>
                    <VisualState x:Name="Active"/>
                    <VisualState x:Name="Inactive"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="HeaderStates">
                    <VisualState x:Name="HeaderVisible"/>
                    <VisualState x:Name="HeaderHidden"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ve:DockingSplitLayoutPanel.Content1Location>
                <Binding Path="CaptionLocation">
                    <Binding.Converter>
                        <ve:GroupCaptionLocationToDockConverter/>
                    </Binding.Converter>
                </Binding>
            </ve:DockingSplitLayoutPanel.Content1Location>
            <ve:DockingSplitLayoutPanel.Content1>
                <ve:DockingSplitLayoutPanel x:Name="HeadersPanel"
                                            Background="Transparent"
                                            Canvas.ZIndex="1"
                                            ClipMargin="{TemplateBinding ActualClipMargin}"
                                            LeftContent1Margin="3,0"
                                            Margin="{TemplateBinding ActualTabPanelMargin}"
                                            MaximizeContent1="True"
                                            TopContent1Margin="0,3"
                                            UseClipMargin="True">
                    <ve:DockingSplitLayoutPanel.Content1Location>
                        <Binding Path="CaptionLocation">
                            <Binding.Converter>
                                <ve:TabHeaderCaptionLocationToDockConverter/>
                            </Binding.Converter>
                        </Binding>
                    </ve:DockingSplitLayoutPanel.Content1Location>
                    <ve:DockingSplitLayoutPanel.Content1>
                        <ItemsPresenter x:Name="PART_HeadersPanelPresenter"/>
                    </ve:DockingSplitLayoutPanel.Content1>
                    <ve:DockingSplitLayoutPanel.Content2>
                        <ve:TabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                       ButtonHeight="18"
                                                       ButtonStyle="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=DocumentGroupButtonStyle}}"
                                                       ButtonWidth="18"
                                                       CloseButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=CloseButton}}"
                                                       DropDownButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=DropDownButton}}"
                                                       LayoutItem="{Binding}"
                                                       ScrollNextButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollNextButton}}"
                                                       ScrollPrevButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollPrevButton}}"
                                                       ve:DockPane.HitTestType="ControlBox"
                                                       ve:TabHeaderControlBoxControl.Location="{Binding CaptionLocation}"/>
                    </ve:DockingSplitLayoutPanel.Content2>
                </ve:DockingSplitLayoutPanel>
            </ve:DockingSplitLayoutPanel.Content1>
            <ve:DockingSplitLayoutPanel.Content2>
                <Border x:Name="PART_SelectedPage" ve:DockPane.HitTestType="Content">
                    <Border.Resources>
                        <dx:ColorOverlayConverter x:Key="colorOverlayConveter"/>
                        <SolidColorBrush x:Key="coloredBack" Color="{Binding TabColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource colorOverlayConveter}, ConverterParameter=#FFB0B0B0}"/>
                    </Border.Resources>
                    <Border x:Name="HeaderPart"
                            Background="{TemplateBinding ActualBackground}"
                            BorderBrush="{StaticResource defaultBorderBrush}"
                            BorderThickness="{TemplateBinding ActualContentBorderThickness}">
                        <ve:LayoutTabFastRenderPanel x:Name="PART_FastRenderPanel" ve:DockPane.HitTestType="Content"/>
                    </Border>
                </Border>
            </ve:DockingSplitLayoutPanel.Content2>
        </ve:DockingSplitLayoutPanel>
        <ControlTemplate.Triggers>
            <Trigger Property="AreTabHeadersVisible" Value="False">
                <Setter Property="Visibility"
                        TargetName="HeadersPanel"
                        Value="Collapsed"/>
            </Trigger>
            <Trigger Property="TabbedGroupDisplayMode" Value="ContentOnly">
                <Setter Property="BorderThickness"
                        TargetName="HeaderPart"
                        Value="0"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ViewStyle" Value="Light"/>
                    <Condition Property="AreTabHeadersVisible" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="BorderThickness"
                        TargetName="HeaderPart"
                        Value="0"/>
            </MultiTrigger>
            <Trigger Property="ViewStyle" Value="Light">
                <Setter Property="LeftContent1Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,3,0"/>
                <Setter Property="TopContent1Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,0,3"/>
                <Setter Property="RightContent2Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,2,0">
                </Setter>
                <Setter Property="BottomContent2Margin"
                        TargetName="HeadersPanel"
                        Value="0,0,0,2">
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- MDIContainer Theme Elements -->

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=MDIDocument}" TargetType="ve:MDIDocument">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ActiveStates">
                    <VisualState x:Name="Active"/>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF939393"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="PART_Header"
                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                            To="#FF8C8C8C"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Header" Storyboard.TargetProperty="(Border.Background)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF9B9DA2" Offset="0"/>
                                            <GradientStop Color="#FF999999" Offset="1"/>
                                            <GradientStop Color="#FF97989C" Offset="0.3"/>
                                            <GradientStop Color="#FF929292" Offset="0.3"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_ControlBox"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.5"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_CaptionControlPresenter"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.5"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="PART_Content"
                                            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                            To="#FF999999"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="contentBorder"
                                            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                            To="#FF8C8C8C"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Visibility="Visible"
                                                           Storyboard.TargetName="PART_InactiveLayer"
                                                           Storyboard.TargetProperty="Visibility"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="MDIStates">
                    <VisualState x:Name="EmptyMDIState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="PART_Header"
                                                           Storyboard.TargetProperty="Visibility"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="PART_ResizeBounds"
                                                           Storyboard.TargetProperty="Visibility"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="PART_Content"
                                                           Storyboard.TargetProperty="Padding"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Thickness="0"
                                                           Storyboard.TargetName="PART_Content"
                                                           Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Minimized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Visibility="Collapsed"
                                                           Storyboard.TargetName="PART_ResizeBounds"
                                                           Storyboard.TargetProperty="Visibility"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="border"
                    Background="#FF2F2F2F"
                    Padding="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border x:Name="PART_Header"
                            BorderBrush="#FF353535"
                            BorderThickness="0,0,0,1"
                            ve:DockPane.HitTestType="Header">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF434752" Offset="0"/>
                                <GradientStop Color="#FF3B3B3B" Offset="1"/>
                                <GradientStop Color="#FF3C404A" Offset="0.3"/>
                                <GradientStop Color="#FF2F3030" Offset="0.3"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ve:TemplatedCaptionControl x:Name="PART_CaptionControlPresenter"
                                                        Foreground="#FFFFFFFF"
                                                        LayoutItem="{Binding}"
                                                        Padding="4,2"/>
                            <ve:WindowControlBoxControl x:Name="PART_ControlBox"
                                                        ButtonHeight="21"
                                                        ButtonStyle="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=MDIDocumentButtonStyle}}"
                                                        ButtonWidth="21"
                                                        CloseButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=CloseButton}}"
                                                        Grid.Column="1"
                                                        LayoutItem="{Binding}"
                                                        Margin="2,2,2,1"
                                                        MaximizeButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=MaximizeButton}}"
                                                        MinimizeButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=MinimizeButton}}"
                                                        RestoreButtonTemplate="{DynamicResource {dxt:DocumentElementsThemeKey ResourceKey=RestoreButton}}"/>
                        </Grid>
                    </Border>
                    <Border x:Name="PART_Content"
                            Background="#FF4D4D4D"
                            Grid.Row="1"
                            Padding="3,0,3,3"
                            Visibility="{Binding IsMinimized, Converter={StaticResource boolToVisibilityInverseConverter}}">
                        <Border x:Name="contentBorder"
                                Background="#FF404040"
                                Padding="1,0,1,1"
                                ve:DockPane.HitTestType="Content">
                            <Border Background="#FFF0F1F2">
                                <ve:DocumentContentPresenter x:Name="PART_ContentPresenter" Content="{Binding LayoutItemData}"/>
                            </Border>
                        </Border>
                    </Border>
                    <Border x:Name="PART_InactiveLayer"
                            Background="#FFF0F1F2"
                            Grid.Row="1"
                            Opacity="0.15"
                            Visibility="Collapsed"/>
                </Grid>
            </Border>
            <ve:ResizeBoundsControl x:Name="PART_ResizeBounds"
                                    Canvas.ZIndex="2"
                                    FlowDirection="LeftToRight"
                                    ve:DockPane.HitTestType="Border"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentPaneElementsThemeKey ResourceKey=MDIContainerTemplate}" TargetType="ve:DocumentMDIContainer">
        <Grid DataContext="{Binding LayoutItem}"
              SnapsToDevicePixels="True"
              ve:DockPane.HitTestType="Bounds">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border x:Name="barPanel"
                    Background="#FF535353"
                    BorderBrush="#FF404040"
                    BorderThickness="0,0,0,1"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Content="{Binding SelectedItem.Caption}"
                                      ContentTemplate="{Binding LayoutItem.SelectedItem.CaptionTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                      ContentTemplateSelector="{Binding LayoutItem.SelectedItem.CaptionTemplateSelector, RelativeSource={RelativeSource TemplatedParent}}"
                                      Margin="2"
                                      TextElement.Foreground="#FFFFFFFF"/>
                    <ve:TabHeaderControlBoxControl x:Name="PART_ControlBox"
                                                   ButtonHeight="18"
                                                   ButtonWidth="18"
                                                   CloseButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=CloseButton}}"
                                                   DropDownButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=DropDownButton}}"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Right"
                                                   LayoutItem="{Binding}"
                                                   Margin="2"
                                                   RestoreButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=RestoreButton}}"
                                                   ScrollNextButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollNextButton}}"
                                                   ScrollPrevButtonTemplate="{DynamicResource {dxt:DocumentPaneElementsThemeKey ResourceKey=ScrollPrevButton}}"/>
                </Grid>
            </Border>
            <ScrollViewer x:Name="scroller"
                          Background="{TemplateBinding ActualBackground}"
                          BorderThickness="0"
                          Grid.Row="1"
                          HorizontalScrollBarVisibility="Auto"
                          Padding="{TemplateBinding Padding}"
                          VerticalScrollBarVisibility="Auto">
                <ItemsPresenter x:Name="PART_MDIPanelPresenter"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"/>
            </ScrollViewer>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="HeaderStates">
                    <VisualState x:Name="HeaderVisible">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.Visibility="Visible"
                                                           Storyboard.TargetName="barPanel"
                                                           Storyboard.TargetProperty="Visibility"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.HorizontalAlignment="Stretch"
                                                           Storyboard.TargetName="PART_MDIPanelPresenter"
                                                           Storyboard.TargetProperty="HorizontalAlignment"/>
                            <ObjectAnimationUsingKeyFrames dxi:ValueSetter.VerticalAlignment="Stretch"
                                                           Storyboard.TargetName="PART_MDIPanelPresenter"
                                                           Storyboard.TargetProperty="VerticalAlignment"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="HeaderHidden"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="MaximizedStates">
                    <VisualState x:Name="EmptyMaximizedState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="scroller" Storyboard.TargetProperty="HorizontalScrollBarVisibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <ScrollBarVisibility>Disabled</ScrollBarVisibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="scroller" Storyboard.TargetProperty="VerticalScrollBarVisibility">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <ScrollBarVisibility>Disabled</ScrollBarVisibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:DocumentElementsThemeKey ResourceKey=FloatDocument}" TargetType="ve:FloatDocument">
        <ve:DocumentFormBorderContentControl IsActive="{Binding IsActive}">
            <Border Background="{Binding Background}">
                <ve:DocumentContentPresenter x:Name="PART_ContentPresenter"
                                             Content="{Binding LayoutItemData}"
                                             ve:DockPane.HitTestType="Content"/>
            </Border>
        </ve:DocumentFormBorderContentControl>
    </ControlTemplate>

</ResourceDictionary>