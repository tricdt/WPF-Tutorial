                                       TargetName="border"
                                       Value="2,2,0,0"/>
                    <dxcn:RenderSetter Property="CornerRadius"
                                       TargetName="border2"
                                       Value="1,1,0,0"/>
                    <dxcn:RenderSetter Property="Padding"
                                       TargetName="border"
                                       Value="1,1,1,0"/>
                    <dxcn:RenderSetter Property="Margin"
                                       TargetName="Focused"
                                       Value="-2,-2,-2,0"/>
                </dxcn:RenderStateTrigger>
                <dxcn:RenderStateTrigger Name="Bottom">
                    <dxcn:RenderSetter Property="CornerRadius"
                                       TargetName="Focused"
                                       Value="0,0,3,3"/>
                    <dxcn:RenderSetter Property="CornerRadius"
                                       TargetName="border"
                                       Value="0,0,2,2"/>
                    <dxcn:RenderSetter Property="CornerRadius"
                                       TargetName="border2"
                                       Value="0,0,1,1"/>
                    <dxcn:RenderSetter Property="Margin"
                                       TargetName="Focused"
                                       Value="-2,0,-2,-2"/>
                </dxcn:RenderStateTrigger>
            </dxcn:RenderStateGroup>
        </dxcn:RenderTemplate.Triggers>
