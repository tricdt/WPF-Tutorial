<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--BEGIN WPF-->

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2007Black.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Office2007Generic/ImageEdit.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--END WPF-->

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}" Color="White"/>

    <Style x:Key="{dxet:ImageEditThemeKey ResourceKey=ContentStyle}"/>

    <dx:WpfSvgPalette x:Key="{dxet:ImageEditThemeKey ResourceKey=ToolButtonPalette}">
        <SolidColorBrush x:Key="BlackColor"
                         Color="#FFD4D4D4"
                         cs:id="SolidColorBrush_0000"/>
        <SolidColorBrush x:Key="WhiteColor"
                         Color="#FF444444"
                         cs:id="SolidColorBrush_0001"/>
        <SolidColorBrush x:Key="RedColor"
                         Color="#FFDB6553"
                         cs:id="SolidColorBrush_0002"/>
        <SolidColorBrush x:Key="YellowColor"
                         Color="#FFDCA453"
                         cs:id="SolidColorBrush_0003"/>
        <SolidColorBrush x:Key="GreenColor"
                         Color="#FF53A36C"
                         cs:id="SolidColorBrush_0004"/>
        <SolidColorBrush x:Key="BlueColor"
                         Color="#FF65A4D9"
                         cs:id="SolidColorBrush_0005"/>
    </dx:WpfSvgPalette>

    <ControlTemplate x:Key="{dxet:CameraControlThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="RootElement">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="InternalFocusStates">
                    <VisualState x:Name="InternalFocused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusElement"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InternalUnfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="FocusElement"
                    Background="#FFFFC200"
                    CornerRadius="3"
                    Margin="-2"
                    Opacity="0"
                    cs:id="Border_0000"/>
            <Border Background="{DynamicResource {dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}}"
                    BorderBrush="#ff828790"
                    BorderThickness="1"
                    Padding="4"
                    cs:id="Border_0001">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:ImageEditThemeKey ResourceKey=BorderTemplate}" TargetType="{x:Type ContentControl}">
        <Grid x:Name="RootElement">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="InternalFocusStates">
                    <VisualState x:Name="InternalFocused">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="FocusElement"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="InternalUnfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="FocusElement"
                    Background="#FFFFC200"
                    CornerRadius="3"
                    Margin="-2"
                    Opacity="0"
                    cs:id="Border_0000"/>
            <Border Background="{DynamicResource {dxet:ImageEditThemeKey ResourceKey=ImageBackgroundBrush}}"
                    BorderBrush="#ff828790"
                    BorderThickness="1"
                    Padding="4"
                    cs:id="Border_0001">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=CropMenuForegroundBrush}" Color="#FFD4D4D4"/>

    <Thickness x:Key="{dxet:ImageEditThemeKey ResourceKey=CropMenuTextMargin}">0</Thickness>

    <SolidColorBrush x:Key="{dxet:ImageEditThemeKey ResourceKey=ImageEditToolSeparatorFillBrush}" Color="#3FFFFFFF"/>

</ResourceDictionary>