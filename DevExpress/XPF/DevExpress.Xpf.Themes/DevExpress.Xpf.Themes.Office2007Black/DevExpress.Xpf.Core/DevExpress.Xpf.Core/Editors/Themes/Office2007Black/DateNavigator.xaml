<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxednc="clr-namespace:DevExpress.Xpf.Editors.DateNavigator.Controls;assembly=DevExpress.Xpf.Core.v24.1"
                    xmlns:dxepc="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Office2007Black.v24.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Editors/Themes/Office2007Generic/DateNavigator.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Thickness x:Key="{dxet:DateNavigatorThemeKey ResourceKey=DateNavigatorCalendarPadding}">6,12,6,12</Thickness>

    <Style x:Key="{dxet:DateNavigatorThemeKey ResourceKey=OutlookHeaderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background"
                Value="#FFD2D5DA"
                cs:id="Setter_0000"/>
        <Setter Property="MinHeight" Value="22"/>
    </Style>

    <Style x:Key="{dxet:DateNavigatorThemeKey ResourceKey=HeaderStyle}" TargetType="{x:Type Border}">
        <Setter Property="Background"
                Value="#FFD2D5DA"
                cs:id="Setter_0000"/>
        <Setter Property="Margin" Value="4,4,4,8"/>
    </Style>

    <dxc:EditorStringIdConverter x:Key="EditorStringIdConverter"/>

    <SolidColorBrush x:Key="{dxet:DateNavigatorThemeKey ResourceKey=BackgroundBrush}" Color="#FFF0F1F2"/>

    <ControlTemplate x:Key="{dxet:DateNavigatorThemeKey ResourceKey=ClearButtonTemplate}" TargetType="{x:Type Button}">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <SolidColorBrush Color="#FFC1A965" cs:id="SolidColorBrush_0000"/>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border1"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1"
                                                             StartPoint="0.5,0"
                                                             cs:id="LinearGradientBrush_0000">
                                            <GradientStop Color="#FFFFFBE5"
                                                          Offset="0"
                                                          cs:id="GradientStop_0000"/>
                                            <GradientStop Color="#FFFCEBB7"
                                                          Offset="1"
                                                          cs:id="GradientStop_0001"/>
                                            <GradientStop Color="#FFFADF8F"
                                                          Offset="0.5"
                                                          cs:id="GradientStop_0002"/>
                                            <GradientStop Color="#FFF4C233"
                                                          Offset="0.5"
                                                          cs:id="GradientStop_0003"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border2"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1"
                                                             StartPoint="0.5,0"
                                                             cs:id="LinearGradientBrush_0001">
                                            <GradientStop Color="#FFFFFEFB"
                                                          Offset="0"
                                                          cs:id="GradientStop_0004"/>
                                            <GradientStop Color="#FFFFF5D7"
                                                          Offset="1"
                                                          cs:id="GradientStop_0005"/>
                                            <GradientStop Color="#FFFFF6DC"
                                                          Offset="0.5"
                                                          cs:id="GradientStop_0006"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1"
                                                             StartPoint="0.5,0"
                                                             cs:id="LinearGradientBrush_0002">
                                            <GradientStop Color="#FF7B6645"
                                                          Offset="0"
                                                          cs:id="GradientStop_0007"/>
                                            <GradientStop Color="#FFA78E66"
                                                          Offset="1"
                                                          cs:id="GradientStop_0008"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="border1"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0"/>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="border2"
                                                           Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <LinearGradientBrush EndPoint="0.5,1"
                                                             StartPoint="0.5,0"
                                                             cs:id="LinearGradientBrush_0003">
                                            <GradientStop Color="#FFC18C5D"
                                                          Offset="0"
                                                          cs:id="GradientStop_0009"/>
                                            <GradientStop Color="#FFFFC14C"
                                                          Offset="1"
                                                          cs:id="GradientStop_0010"/>
                                            <GradientStop Color="#FFFFAB49"
                                                          Offset="0.5"
                                                          cs:id="GradientStop_0011"/>
                                            <GradientStop Color="#FFFF8F08"
                                                          Offset="0.5"
                                                          cs:id="GradientStop_0012"/>
                                            <GradientStop Color="#FFFCB06A"
                                                          Offset="0.1"
                                                          cs:id="GradientStop_0013"/>
                                        </LinearGradientBrush>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="border"
                    Background="#FF898785"
                    CornerRadius="2,2,2,2"
                    Height="Auto"
                    HorizontalAlignment="Stretch"
                    Padding="1,1,1,1"
                    VerticalAlignment="Stretch"
                    Width="Auto"
                    cs:id="Border_0000">
                <Border x:Name="border2"
                        CornerRadius="1,1,1,1"
                        Height="Auto"
                        Padding="1,1,1,1"
                        Width="Auto">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1"
                                             StartPoint="0.5,0"
                                             cs:id="LinearGradientBrush_0004">
                            <GradientStop Color="#FFF9FCFF"
                                          Offset="0"
                                          cs:id="GradientStop_0014"/>
                            <GradientStop Color="#FFF4F8FF"
                                          Offset="1"
                                          cs:id="GradientStop_0015"/>
                            <GradientStop Color="#FFF6FAFF"
                                          Offset="0.5"
                                          cs:id="GradientStop_0016"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border x:Name="border1"
                            CornerRadius="1,1,1,1"
                            Height="Auto"
                            Width="Auto">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0005">
                                <GradientStop Color="#FFFAFEFF"
                                              Offset="0"
                                              cs:id="GradientStop_0017"/>
                                <GradientStop Color="#FFFAFFFF"
                                              Offset="1"
                                              cs:id="GradientStop_0018"/>
                                <GradientStop Color="#FFE0E5EB"
                                              Offset="0.5"
                                              cs:id="GradientStop_0019"/>
                                <GradientStop Color="#FFCBD5DF"
                                              Offset="0.5"
                                              cs:id="GradientStop_0020"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <dxc:ContentContainer x:Name="Content"
                                  Content="{TemplateBinding Content}"
                                  HorizontalAlignment="Center"
                                  Margin="16,2,16,3"
                                  VerticalAlignment="Center"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateNavigatorThemeKey ResourceKey=LeftArrowTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,0,0,0"
              SnapsToDevicePixels="True"
              Width="Auto">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF000000"
                                            cs:id="ColorAnimation_0000"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF6F9DD9"
                                            cs:id="ColorAnimation_0001"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="back"
                    Background="#00000000"
                    CornerRadius="0,0,0,0"
                    Height="16"
                    HorizontalAlignment="Stretch"
                    Visibility="Visible"
                    Width="16"
                    cs:id="Border_0000">
                <Path x:Name="path"
                      Data="F1M1334,811L1330,807 1334,803 1334,811z"
                      Height="8"
                      Stretch="Fill"
                      Width="4">
                    <Path.Fill>
                        <SolidColorBrush x:Name="pathFill"
                                         Color="#FF9199A4"
                                         cs:id="SolidColorBrush_0000"/>
                    </Path.Fill>
                </Path>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateNavigatorThemeKey ResourceKey=RightArrowTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,0,0,0"
              SnapsToDevicePixels="True"
              Width="Auto">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF000000"
                                            cs:id="ColorAnimation_0000"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="pathFill"
                                            Storyboard.TargetProperty="Color"
                                            To="#FF6F9DD9"
                                            cs:id="ColorAnimation_0001"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="back"
                    Background="#00000000"
                    CornerRadius="0,0,0,0"
                    Height="16"
                    HorizontalAlignment="Stretch"
                    Visibility="Visible"
                    Width="16"
                    cs:id="Border_0000">
                <Path x:Name="path"
                      Data="F1M1340,804L1344,808 1340,812 1340,804z"
                      Height="8"
                      Stretch="Fill"
                      Width="4">
                    <Path.Fill>
                        <SolidColorBrush x:Name="pathFill"
                                         Color="#FF9199A4"
                                         cs:id="SolidColorBrush_0000"/>
                    </Path.Fill>
                </Path>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:DateNavigatorThemeKey ResourceKey=MonthInfoDelimeter}">
        <Border Background="#FF9199A4"
                Height="1"
                Margin="0,0,0,4"
                SnapsToDevicePixels="True"
                cs:id="Border_0000"/>
    </ControlTemplate>

    <Style x:Key="{dxet:DateNavigatorThemeKey IsVisibleInBlend=True, ResourceKey=CalendarCurrentDateStyle}" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>