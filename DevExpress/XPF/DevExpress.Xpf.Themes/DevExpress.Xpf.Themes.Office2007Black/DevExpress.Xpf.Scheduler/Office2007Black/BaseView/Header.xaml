<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--<Grid x:Key="" Background="Transparent">
        <dxschd:HeaderControl HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" ResourceColor="{Binding Content.Brushes.ResourceHeader, RelativeSource={RelativeSource TemplatedParent}}" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" dxschd:SchedulerItemsControl.ElementPosition="{Binding Path=(dxschd:SchedulerItemsControl.ElementPosition), RelativeSource={RelativeSource TemplatedParent}, Converter={dxschd:ElementPositionVerticalWeekHeaderConverter}}" />
    </Grid>-->

    <dxschd:ElementPositionVerticalWeekHeaderConverter x:Key="elementPositionVerticalWeekHeaderConverter"/>

    <dxschd:ColorResourcesConverter x:Key="colorResourcesConverter"/>

    <!--Vertical Header-->

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=VerticalHeaderNormalTemplate}" TargetType="{x:Type dxschd:VerticalHeaderControl}">
        <dxschd:SchedulerOfficeColorConvertControl x:Name="clrConvCtrl"
                                                   BaseColors="{DynamicResource {dxscht:Office2007ThemeKey ResourceKey=HeaderBaseColors}}"
                                                   ControlBrush="{TemplateBinding ResourceColor}"
                                                   DisableResourceColor="{TemplateBinding DisableResourceColor}"
                                                   SnapsToDevicePixels="True"
                                                   Visibility="Visible">
            <ContentControl x:Name="HeaderContent"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            dxschd:SchedulerItemsControl.ElementPosition="{Binding Path=(dxschd:SchedulerItemsControl.ElementPosition), RelativeSource={RelativeSource TemplatedParent}}"
                            SnapsToDevicePixels="True"
                            UseLayoutRounding="True">
                <ContentControl.Resources>
                    <LinearGradientBrush x:Key="NormalGradient"
                                         EndPoint="1,0.5"
                                         StartPoint="0,0.5">
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop1}" Offset="0"/>
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop2}" Offset="1"/>
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop3}" Offset="0.35"/>
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop4}" Offset="0.35"/>
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="NormalBorder" Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_HeaderBaseBorderColor}"/>
                </ContentControl.Resources>
                <ContentControl.Template>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <dxschd:HeaderBorder Background="{DynamicResource NormalGradient}"
                                             BorderBrush="{DynamicResource NormalBorder}"
                                             DefaultBorderThickness="1"
                                             ElementPosition="{Binding Path=(dxschd:SchedulerItemsControl.ElementPosition), RelativeSource={RelativeSource TemplatedParent}}"
                                             MinHeight="24"
                                             SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              Margin="4"
                                              VerticalAlignment="Center"/>
                        </dxschd:HeaderBorder>
                    </ControlTemplate>
                </ContentControl.Template>
            </ContentControl>
        </dxschd:SchedulerOfficeColorConvertControl>
    </ControlTemplate>

    <!--Normal Header-->

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=HeaderNormalTemplate}" TargetType="{x:Type dxschd:HeaderControl}">
        <dxschd:SchedulerOfficeColorConvertControl x:Name="clrConvCtrl"
                                                   BaseColors="{DynamicResource {dxscht:Office2007ThemeKey ResourceKey=HeaderBaseColors}}"
                                                   ControlBrush="{TemplateBinding ResourceColor}"
                                                   DisableResourceColor="{TemplateBinding DisableResourceColor}"
                                                   SnapsToDevicePixels="True"
                                                   Tag="test"
                                                   Visibility="Visible">
            <ContentControl x:Name="HeaderContent"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            dxschd:SchedulerItemsControl.ElementPosition="{Binding Path=(dxschd:SchedulerItemsControl.ElementPosition), RelativeSource={RelativeSource TemplatedParent}}"
                            SnapsToDevicePixels="True"
                            UseLayoutRounding="True">
                <ContentControl.Resources>
                    <LinearGradientBrush x:Key="NormalGradient"
                                         EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop1}" Offset="0"/>
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop2}" Offset="1"/>
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop3}" Offset="0.35"/>
                        <GradientStop Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_NormalGradientStop4}" Offset="0.35"/>
                    </LinearGradientBrush>
                    <SolidColorBrush x:Key="NormalBorder" Color="{Binding ElementName=clrConvCtrl, Path=Container, Converter={StaticResource colorResourcesConverter}, ConverterParameter=ColorDefinition_HeaderBaseBorderColor}"/>
                </ContentControl.Resources>
                <ContentControl.Template>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <dxschd:HeaderBorder Background="{DynamicResource NormalGradient}"
                                             BorderBrush="{DynamicResource NormalBorder}"
                                             DefaultBorderThickness="1"
                                             ElementPosition="{Binding Path=(dxschd:SchedulerItemsControl.ElementPosition), RelativeSource={RelativeSource TemplatedParent}}"
                                             MinHeight="24"
                                             SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              Margin="4"
                                              VerticalAlignment="Center"/>
                        </dxschd:HeaderBorder>
                    </ControlTemplate>
                </ContentControl.Template>
            </ContentControl>
        </dxschd:SchedulerOfficeColorConvertControl>
    </ControlTemplate>

    <!--Alternate Header-->

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=HeaderAlternateTemplate}" TargetType="{x:Type dxschd:HeaderControl}">
