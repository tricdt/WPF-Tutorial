<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                    xmlns:dxschcore="clr-namespace:DevExpress.XtraScheduler;assembly=DevExpress.XtraScheduler.v24.1.Core"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=HorizontalAppointmentSameDayContentTemplate}">
        <dxschd:HorizontalAppointmentContentPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <dxschd:HorizontalAppointmentStartClockControl VerticalAlignment="Center" ViewInfo="{Binding}"/>
            <dxschd:HorizontalAppointmentEndClockControl VerticalAlignment="Center" ViewInfo="{Binding}"/>
            <dxschd:AppointmentImagesControl Orientation="Horizontal" ViewInfo="{Binding}"/>
            <TextBlock Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}"
                       HorizontalAlignment="Stretch"
                       Margin="1,0,2,0"
                       Text="{Binding Subject}"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       VerticalAlignment="Stretch">
                <!--BEGIN WPF-->
                <TextBlock.TextTrimming>
                    <TextTrimming>CharacterEllipsis</TextTrimming>
                </TextBlock.TextTrimming>
                <!--END WPF-->
            </TextBlock>
            <TextBlock Foreground="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=AppointmentForegroundColor}}"
                       HorizontalAlignment="Stretch"
                       Text="{Binding Location}"
                       TextAlignment="Left"
                       TextWrapping="Wrap"
                       VerticalAlignment="Stretch">
                <!--BEGIN WPF-->
                <TextBlock.TextTrimming>
                    <TextTrimming>CharacterEllipsis</TextTrimming>
                </TextBlock.TextTrimming>
                <!--END WPF-->
            </TextBlock>
        </dxschd:HorizontalAppointmentContentPanel>
    </DataTemplate>

</ResourceDictionary>