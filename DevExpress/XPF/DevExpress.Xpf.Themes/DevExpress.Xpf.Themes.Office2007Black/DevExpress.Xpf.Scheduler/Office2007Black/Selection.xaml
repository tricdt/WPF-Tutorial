<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=SelectionTemplate}" TargetType="dxschd:SchedulerSelection">
        <Grid HorizontalAlignment="Stretch"
              IsHitTestVisible="False"
              VerticalAlignment="Stretch">
            <Path Fill="#bad8fc"
                  HorizontalAlignment="Stretch"
                  Opacity="0.5"
                  StrokeThickness="2"
                  VerticalAlignment="Stretch">
                <Path.Data>
                    <PathGeometry x:Name="Geometry" FillRule="EvenOdd"></PathGeometry>
                </Path.Data>
            </Path>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>