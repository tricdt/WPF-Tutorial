<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxbt="http://schemas.devexpress.com/winfx/2008/xaml/bars/themekeys"
                    xmlns:dxdv="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer"
                    xmlns:dxdvt="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevExpress.Xpf.Themes.Office2007Black.v24.1;component/DevExpress.Xpf.DocumentViewer/Generic/Templates.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Search Panel -->

    <ControlTemplate x:Key="{dxdvt:DocumentViewerThemeKeyExtension ResourceKey=DocumentViewerBarTemplate}" TargetType="{x:Type ContentControl}">
        <Grid Margin="0,0,0,3">
            <Border x:Name="ShadowBorder"
                    Background="White"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect x:Name="Shadow"
                                      BlurRadius="3"
                                      Direction="270"
                                      Opacity="0.35"
                                      ShadowDepth="1"/>
                </Border.Effect>
            </Border>
            <Border Padding="0,0,0,1" SnapsToDevicePixels="True">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#004C535C " Offset="0"/>
                        <GradientStop Color="#FF4C535C " Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFCDD0D5 " Offset="0"/>
                            <GradientStop Color="#FF949CA6 " Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <ContentPresenter Margin="12,4,4,5"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxdv:SearchBarButtonItemItemBorderThemeKeyExtension ResourceKey=Normal}" TargetType="{x:Type dxb:ItemBorderControl}">
        <Grid Margin="0,1,0,1">
            <Grid x:Name="PART_Customization" Opacity="0.0">
                <Border x:Name="customization"
                        Background="#3F9BBAE3 "
                        BorderBrush="#FF9BBAE3 "
                        BorderThickness="1"
                        SnapsToDevicePixels="True"/>
            </Grid>
            <Grid x:Name="PART_Normal">
                <Border BorderBrush="#FF898785"
                        BorderThickness="1"
                        CornerRadius="2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFEAEEEF " Offset="0"/>
                            <GradientStop Color="#FFBBC5CF " Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="PART_Hover" Opacity="0.0">
                <Border x:Name="hover"
                        BorderBrush="#FFFFBD69 "
                        BorderThickness="1"
                        CornerRadius="2"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFF5CA " Offset="0"/>
                            <GradientStop Color="#FFFFDC7C " Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid x:Name="PART_Pressed" Opacity="0.0">
                <Border x:Name="pressed"
                        BorderBrush="#FFFB8C3C "
                        BorderThickness="1"
                        CornerRadius="2"
                        SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFC973D " Offset="0"/>
                            <GradientStop Color="#FFFFB85E " Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Normal"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked"/>
                    <VisualState x:Name="HoverChecked"/>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Customization"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Hover"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_Pressed"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.0"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

