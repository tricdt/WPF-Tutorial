<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion"
                    xmlns:dxan="http://schemas.devexpress.com/winfx/2008/xaml/accordion/internal"
                    xmlns:dxat="http://schemas.devexpress.com/winfx/2008/xaml/accordion/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Resource -->

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemExpandButtonSize}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemExpandButtonSize}">14</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHeight}">32</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderHeight}">22</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemOffset}">18</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpandButtonContainerMinWidth}">18</sys:Double>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=HeaderElementsMargin}">3,3,0,3</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemContainerMargin}">0,0,0,1</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderMargin}">4,0,4,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=CollapsedItemGlyphMargin}">3,0,3,0</Thickness>

    <Thickness x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderContainerMargin}">0,1,0,0</Thickness>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=DisabledItemOpacity}">0.35</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontSize}">12</sys:Double>

    <sys:Double x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderFontWeight}">Normal</FontWeight>

    <FontWeight x:Key="{dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderFontWeight}">Bold</FontWeight>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=BorderThickness}">0</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonCheckedMargin}">7</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMargin}">8,5,8,5</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlMinHeight}">22</sys:Double>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowItemMargin}">0,0,1,1</Thickness>

    <Thickness x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowBackgroundPadding}">0,2,0,1</Thickness>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderFontWeight}">Bold</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontSize}">12</sys:Double>

    <FontWeight x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemFontWeight}">Bold</FontWeight>

    <sys:Double x:Key="{dxat:AccordionThemeKeys ResourceKey=SearchControlFontSize}">12</sys:Double>

    <!-- Expand/Collapse Button -->

    <dxmvvm:ObjectToObjectConverter x:Key="FlipHorizontalConverter" DefaultTarget="1">
        <dxmvvm:MapItem Source="True" Target="-1"/>
    </dxmvvm:ObjectToObjectConverter>

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ExpanderButtonTemplate}" TargetType="dxa:AccordionExpandButton">
        <Grid x:Name="Root" Background="Transparent">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CheckStates">
                    <VisualState x:Name="Unchecked"/>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsUnchecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="IsChecked"
                                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Indeterminate"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="RootItemHover"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFBF0" Offset="0"/>
                        <GradientStop Color="#FFFFE8A6" Offset="1"/>
                        <GradientStop Color="#FFFFF4D2" Offset="0.5"/>
                        <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="RootItemPressed"
                    Background="#FFFFF9E9"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border Background="#FFFFE8A6" CornerRadius="1"/>
            </Border>
            <dxa:ExpandButtonContentPresenter x:Name="IsUnchecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentCollapse"
                          Data="F1 M 22,13.9999L 22,24L 27,19L 22,13.9999 Z"
                          Fill="{TemplateBinding Foreground}"
                          Height="8"
                          Margin="2,0,0,0"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          Width="4">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Path x:Name="RootItemContentCollapse"
                          Data="F1 M 583,394L 588,389L 588,387L 583,392L 578,387L 578,389L 583,394 Z M 583,390L 588,385L 588,383L 583,388L 578,383L 578,385L 583,390 Z "
                          Fill="{TemplateBinding Foreground}"
                          Height="10"
                          Stretch="Fill"
                          Width="10"/>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
            <dxa:ExpandButtonContentPresenter x:Name="IsChecked"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ItemType="{TemplateBinding ItemType}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Visibility="Hidden">
                <dxa:ExpandButtonContentPresenter.ItemContent>
                    <Path x:Name="ItemContentExpand"
                          Data="F1 M 13.0677,23.9948L 13.0677,19.0358L 8.06719,24.0363L 13.0677,23.9948 Z"
                          Fill="{TemplateBinding Foreground}"
                          Height="6"
                          RenderTransformOrigin="0.5,0.5"
                          Stretch="Fill"
                          Width="6">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{Binding IsRightExpandButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource FlipHorizontalConverter}}"/>
                        </Path.RenderTransform>
                    </Path>
                </dxa:ExpandButtonContentPresenter.ItemContent>
                <dxa:ExpandButtonContentPresenter.RootItemContent>
                    <Path x:Name="RootItemContentExpand"
                          Data="F1 M 583,362L 588,367L 588,369L 583,364L 578,369L 578,367L 583,362 Z M 583,366L 588,371L 588,373L 583,368L 578,373L 578,371L 583,366 Z "
                          Fill="{TemplateBinding Foreground}"
                          Height="10"
                          Stretch="Fill"
                          Width="10"/>
                </dxa:ExpandButtonContentPresenter.RootItemContent>
            </dxa:ExpandButtonContentPresenter>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover"/>
            <Trigger Property="ItemState" Value="Pressed"/>
            <Trigger Property="ItemState" Value="Disabled"/>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FF1B293E"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FF1B293E"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="IsPressed" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentExpand"
                        Value="#FF1B293E"/>
                <Setter Property="Fill"
                        TargetName="RootItemContentCollapse"
                        Value="#FF1B293E"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- RootItem and Item -->

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=ItemBackgroundTemplate}" TargetType="dxa:AccordionItemBackgroundControl">
        <Grid x:Name="Root">
            <Border x:Name="RootItemDefault" Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4D6082" Offset="0"/>
                        <GradientStop Color="#FF3D5277" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="CustomBackground"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
            </Border>
            <Border x:Name="ItemHover"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFBF0" Offset="0"/>
                        <GradientStop Color="#FFFFE8A6" Offset="1"/>
                        <GradientStop Color="#FFFFF4D2" Offset="0.5"/>
                        <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="ItemPressed"
                    Background="#FFFFF9E9"
                    CornerRadius="2"
                    Opacity="0">
                <Border Background="#FFFFE8A6" CornerRadius="2"/>
            </Border>
            <Border x:Name="ItemSelected"
                    Background="#FFFFF9E9"
                    CornerRadius="2"
                    Opacity="0">
                <Border Background="#FFFFE8A6" CornerRadius="2"/>
            </Border>
            <Border x:Name="RootItemHover" Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4D6082" Offset="0"/>
                        <GradientStop Color="#FF3D5277" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="RootItemPressed" Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4D6082" Offset="0"/>
                        <GradientStop Color="#FF3D5277" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="RootItemSelected" Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4D6082" Offset="0"/>
                        <GradientStop Color="#FF3D5277" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <!--<Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFCF2" Offset="0" />
                        <GradientStop Color="#FFFFE8A6" Offset="1" />
                        <GradientStop Color="#FFFFEDBA" Offset="0.5" />
                        <GradientStop Color="#FFFFE8A6" Offset="0.5" />
                    </LinearGradientBrush>
                </Border.Background>-->
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="ItemState" Value="Default"/>
            <Trigger Property="ItemState" Value="Hover">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Pressed">
                <Setter Property="Opacity"
                        TargetName="ItemPressed"
                        Value="1"/>
            </Trigger>
            <Trigger Property="ItemState" Value="Selected">
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="1"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="SubItem"/>
                    <Condition Property="ItemState" Value="SelectedInactive"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="ItemSelected"
                        Value="0.6"/>
            </MultiTrigger>
            <Trigger Property="ItemState" Value="Focused">
                <Setter Property="Opacity"
                        TargetName="ItemHover"
                        Value="1"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Default"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemDefault"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        TargetName="CustomBackground"
                        Value="0"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Hover"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Pressed"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemPressed"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Selected"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemSelected"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="SelectedInactive"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemDefault"
                        Value="1"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="RootItem"/>
                    <Condition Property="ItemState" Value="Focused"/>
                </MultiTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="RootItemHover"
                        Value="1"/>
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Collapse Mode -->

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapseButtonTemplate}" TargetType="ToggleButton">
        <Grid Background="Transparent"
              Height="{TemplateBinding Height}"
              Width="{TemplateBinding Width}">
            <Border x:Name="HoverState"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFBF0" Offset="0"/>
                        <GradientStop Color="#FFFFE8A6" Offset="1"/>
                        <GradientStop Color="#FFFFF4D2" Offset="0.5"/>
                        <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="PressedState"
                    Background="#FFFFF9E9"
                    CornerRadius="2"
                    Opacity="0"
                    Padding="1">
                <Border Background="#FFFFE8A6" CornerRadius="1"/>
            </Border>
            <Border x:Name="glyphBorder"
                    HorizontalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    VerticalAlignment="Center">
                <Path x:Name="glyph"
                      Data="F1 M 1395,798L 1400,793L 1400,795L 1397,798L 1400,801L 1400,803L 1395,798 Z M 1399,798L 1404,793L 1404,795L 1401,798L 1404,801L 1404,803L 1399,798 Z "
                      Fill="#FF2C3E74"
                      Height="10"
                      HorizontalAlignment="Center"
                      Margin="0,0,1,1"
                      RenderTransformOrigin="0.5,0.5"
                      Stretch="Fill"
                      VerticalAlignment="Center"
                      Width="9"/>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=ActualShowHeader, RelativeSource={RelativeSource AncestorType=dxa:AccordionControl}}" Value="True">
                <Setter Property="Fill" TargetName="glyph">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFFFFFFF"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="RenderTransform" TargetName="glyphBorder">
                    <Setter.Value>
                        <ScaleTransform ScaleX="-1"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="0"/>
                <Setter Property="Fill" TargetName="glyph">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF2C3E74"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="PressedState"
                        Value="1"/>
                <Setter Property="Fill" TargetName="glyph">
                    <Setter.Value>
                        <SolidColorBrush Color="#FF2C3E74"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=PopupWindowFrameTemplate}" TargetType="ContentControl">
        <Grid>
            <Border Background="#FFD3DAE5"
                    BorderBrush="#FF8B97A7"
                    BorderThickness="1">
                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=CollapsedItemTemplate}" TargetType="{x:Type dxe:ListBoxEditItem}">
        <Grid x:Name="Root">
            <Grid.Resources>
                <DataTemplate x:Key="HoverTemplate">
                    <Border x:Name="HoverState" CornerRadius="2">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFFBF0" Offset="0"/>
                                <GradientStop Color="#FFFFE8A6" Offset="1"/>
                                <GradientStop Color="#FFFFF4D2" Offset="0.5"/>
                                <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="SelectedTemplate">
                    <Border x:Name="PressedState"
                            Background="#FFFFF9E9"
                            CornerRadius="2">
                        <Border Background="#FFFFE8A6" CornerRadius="2"/>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="InactiveSelectedTemplate">
                    <Border x:Name="PressedState"
                            Background="#FFFFF9E9"
                            CornerRadius="2">
                        <Border Background="#FFFFE8A6" CornerRadius="2"/>
                    </Border>
                </DataTemplate>
            </Grid.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver"/>
                    <VisualState x:Name="Disabled">
                        <Storyboard></Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualState x:Name="Unselected"/>
                    <VisualState x:Name="Selected">
                        <Storyboard></Storyboard>
                    </VisualState>
                    <VisualState x:Name="SelectedUnfocused">
                        <Storyboard></Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="FocusStates">
                    <VisualState x:Name="Focused">
                        <Storyboard></Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid>
                <dxmvvm:Interaction.Behaviors>
                    <dxa:CollapsedItemRotateBehavior RotateAngle="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemRotateAngle}}"/>
                </dxmvvm:Interaction.Behaviors>
                <Border x:Name="CustomBackground"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2"/>
                <Rectangle x:Name="FocusVisual"
                           Opacity="0"
                           SnapsToDevicePixels="True"
                           Stroke="#FF000000"
                           StrokeDashArray="1 2"
                           StrokeThickness="1"/>
                <ContentPresenter x:Name="InactiveSelectedState"
                                  ContentTemplate="{StaticResource InactiveSelectedTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="HoverState"
                                  ContentTemplate="{StaticResource HoverTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="SelectedState"
                                  ContentTemplate="{StaticResource SelectedTemplate}"
                                  Opacity="0"/>
                <ContentPresenter x:Name="FocusedState"
                                  ContentTemplate="{StaticResource SelectedTemplate}"
                                  Opacity="0"/>
            </Grid>
            <ContentControl x:Name="content"
                            Focusable="False"
                            FocusVisualStyle="{x:Null}"
                            FontSize="{TemplateBinding FontSize}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Foreground="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderDefaultForeground}}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <ContentPresenter x:Name="contentPresenter"
                                  Height="Auto"
                                  Margin="0"
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                  Width="Auto"/>
            </ContentControl>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="1"/>
            </Trigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsKeyboardFocused, RelativeSource={RelativeSource Self}}" Value="True"/>
                    <Condition Binding="{Binding Path=IsSingleItemVisible, RelativeSource={RelativeSource AncestorType=dxan:CollapsedAccordionVirtualizingPanel}, FallbackValue=False}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                    <Condition Binding="{Binding Path=Owner.AllowItemHighlighting, RelativeSource={RelativeSource Self}}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderHoverForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiDataTrigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderSelectedForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="1"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected" Value="True"/>
                    <Condition Property="IsFocused" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderSelectedInactiveForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="SelectedState"
                        Value="0.6"/>
                <Setter Property="Opacity"
                        TargetName="HoverState"
                        Value="0"/>
                <Setter Property="Opacity"
                        TargetName="FocusVisual"
                        Value="0"/>
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground"
                        TargetName="content"
                        Value="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=ItemHeaderDisabledForeground}}"/>
                <Setter Property="Opacity"
                        TargetName="Root"
                        Value="0.35"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=SplitterTemplate}" TargetType="dxa:AccordionSplitter">
        <Border Background="Transparent" Margin="0,0,0,1">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF5C6778"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="OrientationStates">
                    <VisualState x:Name="Vertical"/>
                    <VisualState x:Name="Horizontal"/>
                </VisualStateGroup>
                <VisualStateGroup x:Name="DraggingStates">
                    <VisualState x:Name="NotDragging"/>
                    <VisualState x:Name="Dragging">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF5C6778"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid Cursor="SizeNS"
                  Height="2"
                  Margin="3,3,3,2"
                  Width="14">
                <Path x:Name="Glyph"
                      Data="F1 M 558,364L 558,366L 556,366L 556,364L 558,364 Z M 554,364L 554,366L 552,366L 552,364L 554,364 Z M 550,364L 550,366L 548,366L 548,364L 550,364 Z M 546,364L 546,366L 544,366L 544,364L 546,364 Z "
                      Fill="#FF8C97A8"
                      Stretch="Fill"/>
                <Path Data="F1 M 559,365L 559,367L 557,367L 557,365L 559,365 Z M 555,365L 555,367L 553,367L 553,365L 555,365 Z M 551,365L 551,367L 549,367L 549,365L 551,365 Z M 547,365L 547,367L 545,367L 545,365L 547,365 Z "
                      Fill="#3FFFFFFF"
                      Margin="1,1,-1,-1"
                      Stretch="Fill"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=DropDownMenuButtonTemplate}" TargetType="ToggleButton">
        <Grid MinWidth="{DynamicResource {dxat:AccordionItemThemeKeys ResourceKey=RootItemHeaderHeight}}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FF212E41"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                            To="#FF212E41"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Normal"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="HoverState"
                    CornerRadius="2"
                    Opacity="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFBF0" Offset="0"/>
                        <GradientStop Color="#FFFFE8A6" Offset="1"/>
                        <GradientStop Color="#FFFFF4D2" Offset="0.5"/>
                        <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="PressedState"
                    Background="#FFFFF9E9"
                    CornerRadius="2"
                    Opacity="0">
                <Border Background="#FFFFE8A6" CornerRadius="2"/>
            </Border>
            <Path x:Name="Glyph"
                  Data="F1 M 211,186L 205,186L 208,189L 211,186 Z"
                  Fill="#FF212E41"
                  Height="3"
                  SnapsToDevicePixels="True"
                  Stretch="Fill"
                  Width="6"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=OverflowBackgroundTemplate}" TargetType="ContentControl">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border Background="#3FFFFFFF"
                    BorderBrush="#FF909DB7"
                    BorderThickness="0,1,0,0"
                    Height="2"
                    VerticalAlignment="Top"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionThemeKeys ResourceKey=HeaderBackgroundTemplate}" TargetType="ContentControl">
        <Grid Margin="0,0,0,1">
            <Border>
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4D6082" Offset="0"/>
                        <GradientStop Color="#FF3D5277" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter/>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxat:AccordionItemThemeKeys ResourceKey=SelectionIndicatorTemplate}" TargetType="{x:Type dxa:AccordionItemBackgroundControl}">
        <Border Visibility="Collapsed"/>
    </ControlTemplate>

    <dxa:ExpandButtonPosition x:Key="{dxat:AccordionThemeKeys ResourceKey=DefaultSubItemExpandButtonPosition}">Left</dxa:ExpandButtonPosition>

</ResourceDictionary>