<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="RichEditBorderBrush" Color="#FF98A4B8"/>

    <!--BEGIN WPF-->

    <SolidColorBrush x:Key="BackgroundSquare" Color="#FF2D3F5D"/>

    <SolidColorBrush x:Key="DarkSquare" Color="#FF35496A"/>

    <SolidColorBrush x:Key="LightSquare" Color="#FF293955"/>

    <DrawingBrush x:Key="BackgroundStyle"
                  Stretch="None"
                  TileMode="Tile"
                  Viewport="0,0,4,4"
                  ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="{StaticResource BackgroundSquare}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,0,0"/>
                            <RectangleGeometry Rect="0,0,4,4"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="{StaticResource LightSquare}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,1,1"/>
                            <RectangleGeometry Rect="2,2,1,1"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="{StaticResource DarkSquare}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,1,1,1"/>
                            <RectangleGeometry Rect="2,3,1,1"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!--END WPF-->

    <!--ONLY SL
    <SolidColorBrush x:Key="BackgroundStyle" Color="#FF2D3F5D" />
    ONLY SL-->

    <SolidColorBrush x:Key="RulerBackgroundBrush" Color="Transparent"/>

    <SolidColorBrush x:Key="RulerBorderBrush" Color="Transparent"/>

    <SolidColorBrush x:Key="RulerTabHotZoneBrush" Color="#FF787C8A"/>

    <LinearGradientBrush x:Key="RulerIndentHotZoneBackgroundBrush"
                         EndPoint="1,0.5"
                         StartPoint="0,0.5">
        <GradientStop Color="#FFF6F7F9" Offset="0"/>
        <GradientStop Color="#FFDCE1E8" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="RulerIndentHotZoneBorderBrush" Color="#FF4E576B"/>

    <SolidColorBrush x:Key="RulerTableHotZoneBorderBrush" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="RulerTableHotZoneBackgroundBrush" Color="#FF798495"/>

    <SolidColorBrush x:Key="RulerTickMarkBrush" Color="#FF7F8CA2"/>

    <SolidColorBrush x:Key="RulerDefaultTabMarkBrush" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="RulerSpaceAreaBrush" Color="#FFBCC7D8"/>

    <SolidColorBrush x:Key="TabTypeToggleHotZoneControlTemplateBackgroundBrush" Color="Transparent"/>

</ResourceDictionary>