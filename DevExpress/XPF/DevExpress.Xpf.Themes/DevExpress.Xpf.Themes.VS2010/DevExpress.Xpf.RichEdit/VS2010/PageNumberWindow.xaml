<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys"
                    xmlns:dxreui="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxret:RichEditControlThemeKey ResourceKey=PageNumberWindowControlTemplate}" TargetType="{x:Type dxreui:PageNumberWindow}">
        <Border Background="#CF505050"
                CornerRadius="6"
                Padding="12,5,12,5"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">
            <TextBlock FontSize="13"
                       Foreground="White"
                       Text="{TemplateBinding Text}"
                       UseLayoutRounding="True"/>
        </Border>
    </ControlTemplate>

</ResourceDictionary>