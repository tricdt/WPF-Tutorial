              Fill="#FF4A5668"
              Height="8"
              HorizontalAlignment="Center"
              Stretch="Fill"
              VerticalAlignment="Center"
              Width="5"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxgt:RowIndicatorThemeKey ResourceKey=NewItemRowIconTemplate}">
        <Path Data="F1 M 398,1050L 399,1048L 397,1049L 396.5,1046L 396,1049L 394,1048L 395,1050L 392,1050.5L 395,1051L 394,1053L 396,1052L 396.5,1055L 397,1052L 399,1053L 398,1051L 401,1050.5L 398,1050 Z"
              Fill="#FF4A5668"
              Height="9"
              HorizontalAlignment="Center"
              Margin="0,1,0,0"
              Stretch="Fill"
              VerticalAlignment="Center"
              Width="9"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxgt:RowIndicatorThemeKey ResourceKey=EditingIconTemplate}">
        <Path Data="F1 M 405,1027L 405,1029L 407,1029L 410,1026L 408,1024M 411,1021L 409,1023L 411,1025L 413,1023L 411,1021 Z"
              Fill="#FF4A5668"
              Height="8"
              HorizontalAlignment="Center"
              Margin="1,0,0,0"
              Stretch="Fill"
              VerticalAlignment="Center"
              Width="8"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxgt:RowIndicatorThemeKey ResourceKey=ErrorIconTemplate}">
        <Path Data="F1 M 412,1040L 411,1041L 409.5,1039.5L 408,1041L 407,1040L 408.5,1038.5L 407,1037L 408,1036L 409.5,1037.5L 411,1036L 412,1037L 410.5,1038.5M 409.5,1034C 407.016,1034 405,1036.02 405,1038.5C 405,1040.98 407.016,1043 409.5,1043C 411.984,1043 414,1040.98 414,1038.5C 414,1036.02 411.984,1034 409.5,1034 Z"
              Fill="#FF4A5668"
