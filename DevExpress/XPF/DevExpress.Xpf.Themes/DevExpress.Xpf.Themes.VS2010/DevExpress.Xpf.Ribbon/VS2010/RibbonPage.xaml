    <ControlTemplate x:Key="{dxrt:RibbonPageThemeKey ResourceKey=RightRepeatButtonTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Margin="0,-1,-3,-1"
              SnapsToDevicePixels="True"
              Width="16">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="NormalState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF1B293E"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF4A5668"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Glyph"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF1B293E"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border x:Name="Shadow"
                    Background="#FF000000"
                    Margin="-1,0,0,0"
                    Opacity="0.05"/>
            <Border x:Name="NormalState"
                    Background="#FF939EB0"
                    Opacity="0">
                <Border Margin="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFCFDFD" Offset="0"/>
                            <GradientStop Color="#FFE7EAEF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF7F8F9" Offset="0"/>
                                <GradientStop Color="#FFCED4DF" Offset="1"/>
                                <GradientStop Color="#FFD8DDE5" Offset="0.5"/>
                                <GradientStop Color="#FFCED4DF" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="HoverState"
                    Background="#FFA19D8D"
                    Opacity="0">
                <Border Margin="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFFEF8" Offset="0"/>
                            <GradientStop Color="#FFFFF4D3" Offset="1"/>
                            <GradientStop Color="#FFFFF9E8" Offset="0.5"/>
                            <GradientStop Color="#FFFFF4D3" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Margin="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFFBEE" Offset="0"/>
                                <GradientStop Color="#FFFFE8A6" Offset="1"/>
                                <GradientStop Color="#FFFFF3D1" Offset="0.5"/>
                                <GradientStop Color="#FFFFE8A6" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </Border>
            <Border x:Name="PressedState"
                    Background="#FF939EB0"
                    Opacity="0">
                <Border Background="#FFACB9CC" Margin="1">
                    <Border Background="#FFB1BED1" Margin="1"/>
                </Border>
            </Border>
            <Path x:Name="Glyph"
                  Data="F1 M 127.5,56.5002L 127.5,64.5002L 131.5,60.5002L 127.5,56.5002 Z"
                  Fill="#FF1B293E"
                  Grid.Column="1"
                  Height="8"
                  HorizontalAlignment="Center"
                  Stretch="Fill"
                  UseLayoutRounding="False"
                  VerticalAlignment="Center"
                  Width="4"/>
        </Grid>
