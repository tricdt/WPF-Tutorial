                    </Border>
                </Border>
            </Border>
            <Border x:Name="PressedState" Opacity="0">
                <Border Background="#FFE4C97F"
                        CornerRadius="2"
                        Padding="1">
                    <Border Background="#FFFFF9E9"
                            CornerRadius="1"
                            Padding="1">
                        <Border Background="#FFFFE8A6"/>
                    </Border>
                </Border>
            </Border>
            <Path Data="F1M1334,811L1330,807 1334,803 1334,811z"
                  Fill="#FF1B293E"
