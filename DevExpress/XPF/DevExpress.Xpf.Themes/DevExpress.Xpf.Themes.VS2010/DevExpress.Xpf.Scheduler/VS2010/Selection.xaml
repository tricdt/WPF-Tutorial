<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxschd="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/internal"
                    xmlns:dxscht="http://schemas.devexpress.com/winfx/2008/xaml/scheduler/themekeys"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="{dxscht:SchedulerViewThemeKey ResourceKey=SelectionTemplate}" TargetType="dxschd:SchedulerSelection">
        <Grid IsHitTestVisible="False">
            <Path Fill="#FFBAD8FC"
                  Opacity="0.5"
                  StrokeThickness="2">
                <Path.Data>
                    <PathGeometry x:Name="Geometry" FillRule="EvenOdd"/>
                </Path.Data>
            </Path>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>