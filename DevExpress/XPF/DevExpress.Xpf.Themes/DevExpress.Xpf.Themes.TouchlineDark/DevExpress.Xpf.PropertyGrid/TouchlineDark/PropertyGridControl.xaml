<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
                    xmlns:dxprgt="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid/themekeys"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ValueColumnMinWidth}">19</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=HeaderColumnMinWidth}">5</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SelectorAndSearchSeparatorWidth}">10</sys:Double>

    <sys:Double x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonsIndent}">1</sys:Double>

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=Background}" Color="#FF333333"/>

    <Thickness x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=BorderBrush}" Color="#FF515151"/>

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchEditStyle}" TargetType="{x:Type dxe:TextEdit}">
        <Setter Property="Background" Value="#FF333333"/>
        <Setter Property="BorderBrush" Value="#FF333333"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="ShowBorder" Value="True"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=ViewKindButtonStyle}" TargetType="{x:Type RadioButton}">
        <Setter Property="Width" Value="44"/>
        <Setter Property="Height" Value="44"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          HorizontalAlignment="Left"
                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="InternalFocusStates">
                                <VisualState x:Name="InternalFocused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="FocusState"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="InternalUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0"
                              Grid.ColumnSpan="1"
                              Height="44"
                              Width="44">
                            <Border x:Name="DefaultState"/>
                            <Border x:Name="FocusState"/>
                            <Border x:Name="HoverState"
                                    Background="#FFF78A09"
                                    Opacity="0"/>
                            <Border x:Name="PressedState"
                                    Background="#FFF78A09"
                                    Opacity="0"/>
                        </Grid>
                        <Path x:Name="PART_ListView"
                              Data="F1 M 2,3L 14,3L 14,4L 2,4L 2,3 Z M 2,6L 14,6L 14,7L 2,7L 2,6 Z M 2,9L 14,9L 14,10L 2,10L 2,9 Z M 2,12L 14,12L 14,13L 2,13L 2,12 Z "
                              Fill="#BFFFFFFF"
                              Height="20"
                              Stretch="Fill"
                              Width="24"/>
                        <Path x:Name="PART_GroupView"
                              Data="F1 M 2,2L 7,2L 7,7L 2,7L 2,2 Z M 2,9.00001L 6.99999,9.00001L 6.99999,14L 2,14L 2,9.00001 Z M 8,4.00001L 14,4.00001L 14,5.00001L 8,5.00001L 8,4.00001 Z M 8,11L 14,11L 14,12L 8,12L 8,11 Z M 4,3L 4,4L 3,4L 3,5L 4,5L 4,6L 5,6L 5,5L 6,5L 6,4L 5,4L 5,3L 4,3 Z M 4,10L 4,11L 3,11L 3,12L 4,12L 4,13L 5,13L 5,12L 6,12L 6,11L 5,11L 5,10L 4,10 Z "
                              Fill="#BFFFFFFF"
                              Height="24"
                              Stretch="Fill"
                              Width="24"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenNoGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Visible"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="DataContext" Value="{x:Static dxprg:ApplyingMode.WhenGrouping}">
                            <Setter Property="Visibility"
                                    TargetName="PART_ListView"
                                    Value="Collapsed"/>
                            <Setter Property="Visibility"
                                    TargetName="PART_GroupView"
                                    Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                            <Setter Property="Fill"
                                    TargetName="PART_ListView"
                                    Value="#FF333333"/>
                            <Setter Property="Fill"
                                    TargetName="PART_GroupView"
                                    Value="#FF333333"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                            <Setter Property="Fill"
                                    TargetName="PART_ListView"
                                    Value="#FF333333"/>
                            <Setter Property="Fill"
                                    TargetName="PART_GroupView"
                                    Value="#FF333333"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="1"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity"
                                    TargetName="DefaultState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="HoverState"
                                    Value="0"/>
                            <Setter Property="Opacity"
                                    TargetName="PressedState"
                                    Value="1"/>
                            <Setter Property="Fill"
                                    TargetName="PART_ListView"
                                    Value="#FF333333"/>
                            <Setter Property="Fill"
                                    TargetName="PART_GroupView"
                                    Value="#FF333333"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity"
                                    TargetName="Root"
                                    Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=DescriptionPresenterTemplate}" TargetType="{x:Type dxprg:PropertyDescriptionPresenterControl}">
        <Border x:Name="PART_Border"
                Background="#FF333333"
                BorderBrush="#FF515151"
                BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter x:Name="PART_HeaderPresenter"
                                  Content="{Binding SelectedRow.Header, RelativeSource={RelativeSource TemplatedParent}}"
                                  HorizontalAlignment="Left"
                                  Margin="0,-4,0,0"
                                  TextElement.FontSize="24"
                                  TextElement.FontWeight="Light"
                                  TextElement.Foreground="#FFF78A09"/>
                <ContentPresenter Grid.Row="1" Margin="0,10,0,0"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="ShowSelectedRowHeader" Value="False">
                <Setter Property="Visibility"
                        TargetName="PART_HeaderPresenter"
                        Value="Collapsed"/>
            </Trigger>
            <Trigger Property="IsInTooltip" Value="True">
                <Setter Property="BorderBrush" TargetName="PART_Border">
                    <Setter.Value>
                        <SolidColorBrush Color="Transparent"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=SearchControlStyle}" TargetType="{x:Type dxe:SearchControl}">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="{dxprgt:PropertyGridControlThemeKey ResourceKey=TopPanelStyle}" TargetType="{x:Type ContentControl}">
        <Setter Property="Margin" Value="10"/>
    </Style>

</ResourceDictionary>

