    <SolidColorBrush x:Key="GroupButton.BorderBrush.IsCollapsed" Color="#FF515151"/>

    <SolidColorBrush x:Key="GroupButton.Background.IsCollapsed" Color="#FF333333"/>

    <SolidColorBrush x:Key="GroupHeader.BorderBrush" Color="#FF515151"/>

    <SolidColorBrush x:Key="GroupHeader.Background" Color="#FF333333"/>

    <SolidColorBrush x:Key="GroupHeader.BorderBrush.IsHovered" Color="#FF515151"/>

    <SolidColorBrush x:Key="GroupHeader.Background.IsHovered" Color="#FF3C3C3C"/>

    <SolidColorBrush x:Key="GroupHeader.BorderBrush.IsPressed" Color="#FF515151"/>

    <SolidColorBrush x:Key="GroupHeader.Background.IsPressed" Color="#FF515151"/>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=GroupControlBackgroundBrush}" Color="#FF333333"/>

    <sys:Double x:Key="{themes:SpreadsheetThemeKey ResourceKey=GroupLineThickness}">2</sys:Double>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=GroupLineBrush}" Color="#FF515151"/>

    <sys:Double x:Key="{themes:SpreadsheetThemeKey ResourceKey=GroupDotThickness}">2</sys:Double>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=GroupDotBrush}" Color="#FF515151"/>

    <!-- Header -->

