    <sys:Double x:Key="{themes:SpreadsheetThemeKey ResourceKey=ChartStyleGalleryBarItemHeight}">105</sys:Double>

    <Color x:Key="{themes:SpreadsheetThemeKey ResourceKey=GridLinesColor}">#FF515151</Color>

    <Color x:Key="GlyphColor">#FF515151</Color>

    <!-- General Resources -->

    <Thickness x:Key="{themes:SpreadsheetThemeKey ResourceKey=SpreadsheetBorderThickness}">1</Thickness>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=SpreadsheetBorderBrush}" Color="#BFF0F0F0"/>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=SpreadsheetForegroundBrush}" Color="#FFE3E3E3"/>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=SpreadsheetBackgroundBrush}" Color="#FF333333"/>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=VisualFeedbackLineBrush}" Color="#FFF78A09"/>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=FrozenSeparatorBrush}" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="{themes:SpreadsheetThemeKey ResourceKey=AutoFilterBackgroundBrush}" Color="#E5FFFFFF"/>

    <SolidColorBrush x:Key="Selection.BorderBrush" Color="#FFF78A09"/>

    <SolidColorBrush x:Key="Selection.Background" Color="#3FF78A09"/>

    <SolidColorBrush x:Key="TabPanel.BorderBrush" Color="#FF515151"/>

    <SolidColorBrush x:Key="TabPanel.Background" Color="#FF333333"/>

    <SolidColorBrush x:Key="ResizeThumb.Background" Color="#FF333333"/>

