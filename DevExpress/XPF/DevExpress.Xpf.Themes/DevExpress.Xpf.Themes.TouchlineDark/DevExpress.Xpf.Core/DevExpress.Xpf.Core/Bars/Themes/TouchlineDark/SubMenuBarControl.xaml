    <ControlTemplate x:Key="{dxbt:SubMenuBarControlThemeKey ResourceKey=ScrollLeftButtonTemplate}" TargetType="{x:Type RepeatButton}">
        <Grid Background="Transparent"
              cs:Name="Grid_0003"
              SnapsToDevicePixels="True">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FFFFFFFF"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="Path"
                                            Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                            To="#FF7C7C7C"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="Path"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.35"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path x:Name="Path"
                  Data="F1 M 431.5,239C 435.09,239 438,241.91 438,245.5C 438,249.09 435.09,252 431.5,252C 427.91,252 425,249.09 425,245.5C 425,241.91 427.91,239 431.5,239 Z M 431.5,240C 428.462,240 426,242.463 426,245.5C 426,248.538 428.462,251 431.5,251C 434.537,251 437,248.538 437,245.5C 437,242.463 434.537,240 431.5,240 Z M 428,246L 428,246L 428,245L 428,245L 431,242L 432,242L 429,245L 429,245L 435,245L 435,246L 429,246L 432,249L 431,249L 428,246 Z "
                  Fill="#bfffffff"
                  Height="13"
                  HorizontalAlignment="Center"
                  Margin="3"
                  Stretch="Fill"
                  VerticalAlignment="Center"
                  Width="13"/>
        </Grid>
    </ControlTemplate>

