    </ResourceDictionary.MergedDictionaries>

    <s:Double x:Key="{dxdst:DropDownButtonThemeKey ResourceKey=ButtonOpacity}">0.5</s:Double>

    <Visibility x:Key="Visible">Visible</Visibility>

    <Visibility x:Key="Collapsed">Collapsed</Visibility>

    <SolidColorBrush x:Key="{dxdst:DropDownButtonThemeKey ResourceKey=Foreground}" Color="#bfffffff"/>

    <SolidColorBrush x:Key="{dxdst:DropDownButtonThemeKey ResourceKey=ArrowForeground}" Color="#bfffffff"/>

    <SolidColorBrush x:Key="{dxdst:DropDownButtonThemeKey ResourceKey=PressedForeground}" Color="#bfffffff"/>

