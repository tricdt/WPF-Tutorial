        <SolidColorBrush x:Key="BlueColor">#FF4C88C9</SolidColorBrush>
        <dx:WpfSvgPalette.States>
            <dx:WpfSvgPalette x:Key="Hover">
                <SolidColorBrush x:Key="BlackColor">#FFEFEFEF</SolidColorBrush>
