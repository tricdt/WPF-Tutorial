    <Style x:Key="GroupPane_ExpandButton" TargetType="ve:ControlBoxGlyphPresenter">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ve:ControlBoxGlyphPresenter">
                        <Grid Background="#00000000"
                              Height="15"
                              Width="15">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="ExpandedStates">
                                    <VisualState x:Name="Expanded"/>
                                    <VisualState x:Name="Collapsed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Collapsed"
                                                                           Storyboard.TargetName="GlyphExpanded"
                                                                           Storyboard.TargetProperty="(Control.Visibility)"/>
                                            <ObjectAnimationUsingKeyFrames dxcn:ValueSetter.Visibility="Visible"
                                                                           Storyboard.TargetName="GlyphCollapsed"
                                                                           Storyboard.TargetProperty="(Control.Visibility)"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Path x:Name="GlyphCollapsed"
                                  Data="F1 M 0,0L 1,0L 1,1L 2,1L 2,2L 3,2L 3,3L 4,3L 4,2L 5,2L 5,1L 6,1L 6,0L 7,0L 7,3L 6,3L 6,4L 5,4L 5,5L 4,5L 4,6L 3,6L 3,5L 2,5L 2,4L 1,4L 1,3L 0,3L 0,0 Z  "
                                  Fill="#FF404040"
                                  Height="6"
                                  Stretch="Fill"
                                  Visibility="Collapsed"
                                  Width="7"/>
                            <Path x:Name="GlyphExpanded"
                                  Data="F1 M 0,3L 1,3L 1,2L 2,2L 2,1L 3,1L 3,0L 4,0L 4,1L 5,1L 5,2L 6,2L 6,3L 7,3L 7,6L 6,6L 6,5L 5,5L 5,4L 4,4L 4,3L 3,3L 3,4L 2,4L 2,5L 1,5L 1,6L 0,6L 0,3 Z "
                                  Fill="#FF404040"
                                  Height="6"
                                  Stretch="Fill"
                                  Width="7"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

