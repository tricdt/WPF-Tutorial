    <!-- MDIButton -->

    <ControlTemplate x:Key="{dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorder}" TargetType="dxb:ItemBorderControl">
        <Grid Height="21" Width="21">
            <Border x:Name="HoverState"
                    Background="#FF3665B3"
                    BorderBrush="#FF3665B3"
                    BorderThickness="1"
                    Opacity="0"/>
            <Border x:Name="PressedState"
                    Background="#FF43639B"
                    BorderBrush="#FF43639B"
                    BorderThickness="1"
                    Opacity="0"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="State">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Hover">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="HoverState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PressedState"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked"/>
                    <VisualState x:Name="HoverChecked"/>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="Customization"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <Style x:Key="{dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorderStyle}" TargetType="dxb:ItemBorderControl">
        <Setter Property="Template" Value="{DynamicResource {dxt:MDIButtonElementsThemeKey ResourceKey=ButtonBorder}}"/>
    </Style>

    <!-- Glyphs -->

    <DataTemplate x:Key="{dxt:GlyphElementsThemeKey ResourceKey=MDIButtonClose}">
        <Path Data="F1 M 0,0L 2,0L 2,1L 3,1L 3,2L 4,2L 4,1L 5,1L 5,0L 7,0L 7,2L 6,2L 6,3L 5,3L 5,4L 6,4L 6,5L 7,5L 7,7L 5,7L 5,6L 4,6L 4,5L 3,5L 3,6L 2,6L 2,7L 0,7L 0,5L 1,5L 1,4L 2,4L 2,3L 1,3L 1,2L 0,2L 0,0 Z "
              Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
              Height="7"
              Stretch="Fill"
              Width="7"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:GlyphElementsThemeKey ResourceKey=MDIButtonRestore}">
        <Path Data="F1 M 0,3L 2,3L 2,0L 8,0L 8,5L 7,5L 7,2L 3,2L 3,3L 6,3L 6,8L 0,8L 0,3 Z M 1,5L 1,7L 5,7L 5,5L 1,5 Z "
              Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
              Height="8"
              Stretch="Fill"
              Width="8"/>
    </DataTemplate>

    <DataTemplate x:Key="{dxt:GlyphElementsThemeKey ResourceKey=MDIButtonMinimize}">
        <Rectangle Fill="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource Self}}"
                   Height="2"
                   Stretch="Fill"
                   Width="7"/>
    </DataTemplate>

