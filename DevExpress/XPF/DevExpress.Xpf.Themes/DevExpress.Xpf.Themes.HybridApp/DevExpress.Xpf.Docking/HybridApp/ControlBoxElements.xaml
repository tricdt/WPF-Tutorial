    <Style x:Key="DockPane_HideButton" TargetType="ve:ControlBoxGlyphPresenter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ve:ControlBoxGlyphPresenter">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="DockStates">
                                <VisualState x:Name="Left"/>
                                <VisualState x:Name="Right">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Glyph"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).Children[1].ScaleX"
                                                         To="-1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Top">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Glyph"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).Children[0].Angle"
                                                         To="90"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Bottom">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="Glyph"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).Children[0].Angle"
                                                         To="270"/>
                                        <DoubleAnimation Duration="0"
