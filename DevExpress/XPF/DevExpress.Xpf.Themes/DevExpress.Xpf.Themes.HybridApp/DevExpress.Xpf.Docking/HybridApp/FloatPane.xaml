<ResourceDictionary mc:Ignorable="cs"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=BorderMargin}">0</Thickness>

    <Thickness x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=ShadowMargin}">8,8,3,3</Thickness>

    <Thickness x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=FormBorderMargin}">3</Thickness>

    <Thickness x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=SingleBorderMargin}">0</Thickness>

    <Thickness x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=MaximizedBorderMargin}">0</Thickness>

    <system:Double x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=ResizingSideLength}">6</system:Double>

    <system:Double x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=ResizingCornerLength}">10</system:Double>

    <system:Double x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=MinHeight}">84</system:Double>

    <system:Double x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=MinWidth}">84</system:Double>

    <Point x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=WindowDraggingOffset}"
           X="2"
           Y="2"/>

    <ControlTemplate x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=SingleBorderTemplate}" TargetType="ve:FormBorderControl">
        <Grid>
            <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=PanelBackground}}"
                    Margin="2"
                    ve:DockPane.HitTestType="Border"/>
            <Grid x:Name="PART_Content" Margin="{TemplateBinding ActualContentMargin}">
                <ve:LayoutItemsControl ItemsSource="{Binding Path=ItemsInternal}"
                                       Margin="{Binding Path=ActualMargin}"
                                       Orientation="{Binding Path=Orientation}"
                                       ve:DockPane.HitTestType="Content"/>
            </Grid>
            <ve:ResizeBoundsControl x:Name="PART_ResizeBorders"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="SizeStates">
                    <VisualState x:Name="EmptySizeState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ResizeBorders" Storyboard.TargetProperty="(Control.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=EmptyBorderTemplate}" TargetType="ve:FormBorderControl">
        <Grid>
            <Grid.Effect>
                <DropShadowEffect x:Name="Shadow"
                                  BlurRadius="8"
                                  Direction="315"
                                  Opacity="0.15"
                                  ShadowDepth="1"/>
            </Grid.Effect>
            <Grid>
                <Border Background="#FF000000"
                        CornerRadius="2,2,2,2"
                        IsHitTestVisible="False"
                        Margin="{TemplateBinding ActualShadowMargin}"
                        Opacity="0.15"/>
                <Border Background="#00000000"
                        Margin="{TemplateBinding ActualBorderMargin}"
                        ve:DockPane.HitTestType="Border">
                </Border>
            </Grid>
            <Grid x:Name="PART_Content" Margin="{Binding ActualContentMargin, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                <ve:LayoutItemsControl ItemsSource="{Binding Path=ItemsInternal}"
                                       Margin="{Binding Path=ActualMargin}"
                                       Orientation="{Binding Path=Orientation}"
                                       ve:DockPane.HitTestType="Content"/>
            </Grid>
            <ve:ResizeBoundsControl x:Name="PART_ResizeBorders"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="SizeStates">
                    <VisualState x:Name="EmptySizeState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ResizeBorders" Storyboard.TargetProperty="(Control.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=FormBorderTemplate}" TargetType="ve:FormBorderControl">
        <Grid>
            <Grid.Effect>
                <DropShadowEffect x:Name="Shadow"
                                  BlurRadius="8"
                                  Direction="315"
                                  Opacity="0.15"
                                  ShadowDepth="1"/>
            </Grid.Effect>
            <ve:FormBorderContentControl Padding="{TemplateBinding ActualBorderMargin}">
                <ve:LayoutItemsControl ItemsSource="{Binding Path=ItemsInternal}"
                                       Margin="{Binding Path=ActualMargin}"
                                       Orientation="{Binding Path=Orientation}"
                                       ve:DockPane.HitTestType="Content"/>
            </ve:FormBorderContentControl>
            <ve:ResizeBoundsControl x:Name="PART_ResizeBorders"/>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="SizeStates">
                    <VisualState x:Name="EmptySizeState"/>
                    <VisualState x:Name="Maximized">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ResizeBorders" Storyboard.TargetProperty="(Control.Visibility)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:FloatPaneElementsThemeKey ResourceKey=FormBorderContentTemplate}" TargetType="ve:FormBorderContentControl">
        <Border x:Name="Root"
                Background="#FFEAEAEA"
                ve:DockPane.HitTestType="Border">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="ActiveStates">
                    <VisualState x:Name="Active"/>
                    <VisualState x:Name="Inactive">
                        <Storyboard>
                            <ColorAnimation Duration="0"
                                            Storyboard.TargetName="PART_CaptionControlPresenter"
                                            Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                            To="#FF191919"/>
                            <DoubleAnimation Duration="0"
                                             Storyboard.TargetName="PART_ControlBox"
                                             Storyboard.TargetProperty="(Control.Opacity)"
                                             To="0.5"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Border Background="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=PanelBackground}}" Margin="1">
                <Grid MinHeight="22">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ve:FloatingDragWidget x:Name="GroupHeader"
                                           Background="#00000000"
                                           ve:DockPane.HitTestType="Header">
                        <Grid Margin="6,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ve:TemplatedCaptionControl x:Name="PART_CaptionControlPresenter"
                                                        FontSize="18"
                                                        FontWeight="Light"
                                                        Foreground="#FF2F51A5"
                                                        LayoutItem="{Binding}"/>
                            <ve:WindowControlBoxControl x:Name="PART_ControlBox"
                                                        ButtonHeight="17"
                                                        ButtonStyle="{DynamicResource {dxt:FloatPaneElementsThemeKey ResourceKey=FloatPaneButtonStyle}}"
                                                        ButtonWidth="17"
                                                        CloseButtonTemplate="{DynamicResource {dxt:FloatPaneElementsThemeKey ResourceKey=CloseButton}}"
                                                        Grid.Column="1"
                                                        LayoutItem="{Binding}"
                                                        MaximizeButtonTemplate="{DynamicResource {dxt:FloatPaneElementsThemeKey ResourceKey=MaximizeButton}}"
                                                        MinimizeButtonTemplate="{DynamicResource {dxt:FloatPaneElementsThemeKey ResourceKey=MinimizeButton}}"
                                                        RestoreButtonTemplate="{DynamicResource {dxt:FloatPaneElementsThemeKey ResourceKey=RestoreButton}}"/>
                        </Grid>
                    </ve:FloatingDragWidget>
                    <Border x:Name="PART_Content"
                            Grid.Row="1"
                            ve:DockPane.HitTestType="Content">
                        <ContentPresenter/>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxt:MinimizedFloatGroupsItemElementsThemeKey ResourceKey=Template}" TargetType="{x:Type ve:MinimizedFloatGroupsItem}">
        <Border x:Name="PART_CaptionBackground"
                Background="#FFFFFFFF"
                BorderBrush="#FFF6F6F6"
                BorderThickness="1"
                Margin="0,1,1,0"
                UseLayoutRounding="True"
                ve:DockPane.HitTestType="Header">
            <Grid UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Background="#FFFFFFFF"
                        BorderBrush="#FFEAEAEA"
                        BorderThickness="1"
                        Grid.ColumnSpan="2"/>
                <ve:TemplatedCaptionControl DataContext="{TemplateBinding ActualLayoutItem}"
                                            Foreground="#FF383838"
                                            LayoutItem="{Binding}"
                                            Padding="5,3"/>
                <ve:MinimizedItemControlBoxControl x:Name="PART_ControlBox"
                                                   ButtonHeight="17"
                                                   ButtonStyle="{DynamicResource {dxt:FloatPaneElementsThemeKey ResourceKey=FloatPaneButtonStyle}}"
                                                   ButtonWidth="17"
                                                   CloseButtonTemplate="{DynamicResource {dxt:DockPaneElementsThemeKey ResourceKey=CloseButton}}"
                                                   Grid.Column="1"
                                                   LayoutItem="{TemplateBinding ActualLayoutItem}"
                                                   Margin="0,0,1,0"
                                                   MaximizeButtonTemplate="{DynamicResource {dxt:DockPaneElementsThemeKey ResourceKey=MaximizeButton}}"
                                                   RestoreButtonTemplate="{DynamicResource {dxt:DockPaneElementsThemeKey ResourceKey=RestoreButton}}"/>
            </Grid>
        </Border>
    </ControlTemplate>

</ResourceDictionary>