                    <dxcn:RenderSetter Property="Margin"
                                       TargetName="Focused"
                                       Value="-2,0,-2,-2"/>
                </dxcn:RenderStateTrigger>
            </dxcn:RenderStateGroup>
        </dxcn:RenderTemplate.Triggers>
    </dxcn:RenderTemplate>

