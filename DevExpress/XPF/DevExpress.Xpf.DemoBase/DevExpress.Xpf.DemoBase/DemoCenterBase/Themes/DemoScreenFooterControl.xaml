<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm">

    <Style TargetType="{x:Type local:DemoScreenFooterControl}">
        <Style.Resources>
            <dxmvvm:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <dxmvvm:ObjectToObjectConverter x:Key="CompactModeTemplateConverter">
                <dxmvvm:MapItem Source="False">
                    <dxmvvm:MapItem.Target>
                        <DataTemplate>
                            <Grid Background="#404040" Height="118">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="50,0,0,0" VerticalAlignment="Center">
                                    <Grid Margin="0,4,0,15" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#FF828282"
                                                VerticalAlignment="Top"
                                                Margin="0,0,5,0">
                                            <TextBlock Text="{Binding Version}"
                                                       Foreground="White"
                                                       Margin="8,4,9,4" />
                                        </Border>
                                        <WrapPanel Grid.Column="1"
                                                   Orientation="Horizontal"
                                                   Visibility="{Binding IsRegistered, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                                            <local:ImageButton DataContext="{Binding TextLinks[0]}"
                                                               Command="{Binding OpenCommand}"
                                                               VerticalAlignment="Top"
                                                               Text="{Binding Text}"
                                                               TextForeground="White"
                                                               TextForegroundHover="#FFFFA801"
                                                               Margin="0,4,7,0" />
                                            <Border Height="20"
                                                    Width="1"
                                                    Background="#FF828282"
                                                    Margin="0,2,0,0" />
                                            <local:ImageButton DataContext="{Binding TextLinks[1]}"
                                                               Command="{Binding OpenCommand}"
                                                               VerticalAlignment="Top"
                                                               Text="{Binding Text}"
                                                               TextForeground="White"
                                                               TextForegroundHover="#FFFFA801"
                                                               Margin="18,4,19,0" />
                                            <Border Height="20"
                                                    Width="1"
                                                    Background="#FF828282"
                                                    Margin="0,2,5,0" />
                                            <local:ImageButton DataContext="{Binding TextLinks[2]}"
                                                               Command="{Binding OpenCommand}"
                                                               VerticalAlignment="Top"
                                                               Text="{Binding Text}"
                                                               TextForeground="White"
                                                               TextForegroundHover="#FFFFA801"
                                                               Margin="4,4,0,0" />
                                        </WrapPanel>
                                    </Grid>
                                    <TextBlock LineStackingStrategy="BlockLineHeight"
                                               LineHeight="14"
                                               FontSize="12"
                                               FontWeight="Light"
                                               Text="{Binding Copyright}"
                                               Foreground="#FF9F9F9F"
                                               Margin="-1,0,0,0" />
                                    <TextBlock LineStackingStrategy="BlockLineHeight"
                                               LineHeight="14"
                                               FontSize="12"
                                               FontWeight="Light"
                                               Text="All trademarks or registered trademarks are property of their respective owners."
                                               Foreground="#FF9F9F9F"
                                               Margin="-1,2,0,0" />
                                </StackPanel>
                                <ItemsControl Grid.Column="1"
                                              Focusable="False"
                                              ItemsSource="{Binding ImageLinks}"
                                              VerticalAlignment="Top"
                                              HorizontalAlignment="Right"
                                              Margin="0,27,23,0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:ImageButton Command="{Binding OpenCommand}"
                                                               Height="70"
                                                               Focusable="False"
                                                               VerticalAlignment="Top"
                                                               ImageWidth="48"
                                                               Image="{Binding Preview}"
                                                               ImageHover="{Binding PreviewHover}"
                                                               Text="{Binding Text}"
                                                               TextForeground="White"
                                                               TextForegroundHover="#FFFFA801"
                                                               Margin="17,0" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </dxmvvm:MapItem.Target>
                </dxmvvm:MapItem>
                <dxmvvm:MapItem Source="True">
                    <dxmvvm:MapItem.Target>
                        <DataTemplate>
                            <Grid Background="#404040" Height="59">
                                <TextBlock LineStackingStrategy="BlockLineHeight"
                                           LineHeight="14"
                                           FontSize="12"
                                           FontWeight="Light"
                                           Text="{Binding Copyright}"
                                           Foreground="#FF9F9F9F"
                                           VerticalAlignment="Center"
                                           Margin="20,0,0,0" />
                                <ItemsControl Focusable="False"
                                              ItemsSource="{Binding ImageLinks}"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <local:ImageButton Command="{Binding OpenCommand}"
                                                               Focusable="False"
                                                               Cursor="Hand"
                                                               Image="{Binding Preview}"
                                                               ImageHover="{Binding PreviewHover}"
                                                               ImageWidth="32"
                                                               TextForeground="White"
                                                               TextForegroundHover="#FFFFA801"
                                                               Margin="13,0,0,0" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </dxmvvm:MapItem.Target>
                </dxmvvm:MapItem>
            </dxmvvm:ObjectToObjectConverter>
        </Style.Resources>
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DemoScreenFooterControl}">
                    <ContentPresenter Focusable="False"
                                      Content="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                      ContentTemplate="{Binding IsCompactMode, Converter={StaticResource CompactModeTemplateConverter}, RelativeSource={RelativeSource TemplatedParent}}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>