<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers">
    <Style TargetType="{x:Type local:ColumnScrollControl}">
        <Style.Resources>
            <Style x:Key="EmptyButton" TargetType="Button">
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Focusable" Value="False" />
            </Style>
        </Style.Resources>
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ColumnScrollControl}">
                    <DockPanel VerticalAlignment="Stretch">
                        <ItemsControl DockPanel.Dock="Bottom"
                                      HorizontalAlignment="Center"
                                      Focusable="False"
                                      ItemsSource="{TemplateBinding PageButtons}"
                                      Margin="9"
                                      Visibility="{DXBinding '@p.PagesCount > 1 ? $Visibility.Visible : $Visibility.Hidden'}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton IsChecked="{Binding IsChecked, Mode=TwoWay}" Focusable="False">
                                        <RadioButton.Template>
                                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                                <Grid Margin="2,0" Background="Transparent">
                                                    <Ellipse x:Name="optionMark"
                                                                 Stroke="#D4D4D4"
                                                                 MinWidth="8"
                                                                 MinHeight="8"
                                                                 Opacity="1" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="true">
                                                        <Setter TargetName="optionMark" Property="Fill" Value="#D4D4D4" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <DockPanel Background="Transparent">
                            <Button x:Name="PART_PrevButton"
                                    Style="{StaticResource EmptyButton}"
                                    DockPanel.Dock="Left"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,2,0"
                                    Visibility="{DXBinding '@p.PagesCount > 1 ? $Visibility.Visible : $Visibility.Hidden'}">
                                <Image Source="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/Prev.svg'}"
                                       Stretch="None" />
                            </Button>
                            <Button x:Name="PART_NextButton"
                                    Style="{StaticResource EmptyButton}"
                                    DockPanel.Dock="Right"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="2,0,0,0"
                                    Visibility="{DXBinding '@p.PagesCount > 1 ? $Visibility.Visible : $Visibility.Hidden'}">
                                <Image Source="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/Next.svg'}"
                                       Stretch="None" />
                            </Button>
                            <local:ColumnScrollDecorator x:Name="PART_ChildContainer">
                                <Border>
                                    <Border.OpacityMask>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0.03,0">
                                            <GradientStop Color="Transparent" Offset="0" />
                                            <GradientStop x:Name="leftOpacityGradient" Color="Black" Offset="0" />
                                        </LinearGradientBrush>
                                    </Border.OpacityMask>
                                    <local:NonInteractiveScrollViewer x:Name="PART_ScrollViewer"
                                                  Focusable="False"
                                                  VerticalScrollBarVisibility="Disabled"
                                                  HorizontalScrollBarVisibility="Hidden">
                                        <local:NonInteractiveScrollViewer.OpacityMask>
                                            <LinearGradientBrush StartPoint="0.97,0" EndPoint="1,0">
                                                <GradientStop x:Name="opacityGradient" Color="Black" Offset="1" />
                                                <GradientStop Color="Transparent" Offset="1" />
                                            </LinearGradientBrush>
                                        </local:NonInteractiveScrollViewer.OpacityMask>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="10000" />
                                            <ContentPresenter />
                                            <Border Width="10000" />
                                        </StackPanel>
                                    </local:NonInteractiveScrollViewer>
                                </Border>
                            </local:ColumnScrollDecorator>
                        </DockPanel>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsOpacityMaskVisible, RelativeSource={RelativeSource Self}}" Value="true">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="opacityGradient"
                                                         Storyboard.TargetProperty="Offset"
                                                         To="0"
                                                         Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <QuinticEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="opacityGradient"
                                                         Storyboard.TargetProperty="Offset"
                                                         To="1"
                                                         Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <QuinticEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsLeftOpacityMaskVisible, RelativeSource={RelativeSource Self}}" Value="true">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="leftOpacityGradient"
                                                         Storyboard.TargetProperty="Offset"
                                                         To="1"
                                                         Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <QuinticEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="leftOpacityGradient"
                                                         Storyboard.TargetProperty="Offset"
                                                         To="0"
                                                         Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <QuinticEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                        <Trigger Property="IsFirstPageSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_PrevButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.35"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_PrevButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsLastPageSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_NextButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.35"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="PART_NextButton"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="CrossPlatform" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:ColumnScrollControl}">
                            <Grid Name="rootPanel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="26" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="26" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PART_PrevButton"
                                        Style="{StaticResource EmptyButton}"
                                        Height="276"
                                        DockPanel.Dock="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Margin="0,2,2,0"
                                        Visibility="{DXBinding '(@p.ShowButtons and @p.PagesCount > 1) ? $Visibility.Visible : $Visibility.Collapsed'}">
                                    <Polygon Name="prevGlyph" Margin="0,0,8,0" Points="13,27 1,14 13,1 14,2 3,14 14,26" Fill="#26A4DD"/>
                                </Button>
                                <Button x:Name="PART_NextButton" Grid.Column="2"
                                        Style="{StaticResource EmptyButton}"
                                        Height="276"
                                        DockPanel.Dock="Right"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Margin="2,2,0,0" 
                                        Visibility="{DXBinding '(@p.ShowButtons and @p.PagesCount > 1) ? $Visibility.Visible : $Visibility.Collapsed'}">
                                    <Polygon Name="nextGlyph" Margin="8,0,0,0" Points="3,1 15,14 3,27 2,26 13,14 2,2 " Fill="#26A4DD"/>
                                </Button>
                                <local:ColumnScrollDecorator x:Name="PART_ChildContainer" Grid.ColumnSpan="3">
                                    <Border Padding="26,0">
                                        <local:NonInteractiveScrollViewer x:Name="PART_ScrollViewer"
                                                  Focusable="False" 
                                                  VerticalScrollBarVisibility="Disabled"
                                                  HorizontalScrollBarVisibility="Hidden">
                                            <ScrollViewer.OpacityMask>
                                                <LinearGradientBrush StartPoint="0.97,0" EndPoint="1,0">
                                                    <GradientStop x:Name="opacityGradient" Color="Black" Offset="1" />
                                                    <GradientStop Color="Transparent" Offset="1" />
                                                </LinearGradientBrush>
                                            </ScrollViewer.OpacityMask>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="10000" />
                                                <ContentPresenter />
                                                <Border Width="10000" />
                                            </StackPanel>
                                        </local:NonInteractiveScrollViewer>
                                    </Border>
                                </local:ColumnScrollDecorator>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFirstPageSelected" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="prevGlyph"
                                                         Storyboard.TargetProperty="Fill.Color"
                                                         To="#C2C2C2"
                                                         Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="prevGlyph"
                                                         Storyboard.TargetProperty="Fill.Color"
                                                         To="#26A4DD"
                                                         Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsLastPageSelected" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="nextGlyph"
                                                         Storyboard.TargetProperty="Fill.Color"
                                                         To="#C2C2C2"
                                                         Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="nextGlyph"
                                                         Storyboard.TargetProperty="Fill.Color"
                                                         To="#26A4DD"
                                                         Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>