<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:dxdb="clr-namespace:DevExpress.Xpf.DemoBase"
                    xmlns:dxdbt="clr-namespace:DevExpress.Xpf.DemoBase.ThemeKeys"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers">
    <Style TargetType="{x:Type local:DemoCarouselControl}">
        <Style.Resources>
            <Style x:Key="EmptyButton" TargetType="Button">
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Focusable" Value="False" />
            </Style>
            <dxmvvm:ObjectToObjectConverter x:Key="ShadowOpacityConverter">
                <dxmvvm:MapItem Source="False" Target="0" />
                <dxmvvm:MapItem Source="True" Target="0.15" />
            </dxmvvm:ObjectToObjectConverter>
            <dxmvvm:ObjectToObjectConverter x:Key="OpacityConverter">
                <dxmvvm:MapItem Source="False" Target="0.35" />
                <dxmvvm:MapItem Source="True" Target="1" />
            </dxmvvm:ObjectToObjectConverter>
        </Style.Resources>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ItemsPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid Margin="1" x:Name="grid" Height="170">
                        <Border x:Name="outerBorder"
                                Background="#99808080"
                                BorderThickness="1"
                                CornerRadius="3"
                                BorderBrush="#FF808080"
                                Visibility="{Binding IsAvailable, Converter={dxmvvm:BooleanToVisibilityConverter}}"
                                Opacity="0"/>
                        <Grid Opacity="{Binding IsAvailable, Converter={StaticResource OpacityConverter}}" IsEnabled="{Binding IsAvailable}">
                            <Grid.Effect>
                                <DropShadowEffect Direction="-90"
                                                  ShadowDepth="1"
                                                  Opacity="{Binding IsAvailable, Converter={StaticResource ShadowOpacityConverter}}"
                                                  BlurRadius="4" />
                            </Grid.Effect>
                            <Border BorderThickness="1" BorderBrush="#FFCACACA" Background="White" Margin="9" Height="150">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Margin="9,9,9,0">
                                        <Image Source="{Binding Preview}" Stretch="Fill" Width="250" Height="100" />
                                        <Border BorderThickness="1" BorderBrush="Black" Opacity="0.15"/>
                                    </Grid>
                                    <Grid Height="39" Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="1" Text="{Binding Title}" TextAlignment="Center" Foreground="#FF3C3C3C" FontSize="16" Margin="0,0,0,2"/>
                                    </Grid>
                                </Grid>
                            </Border>
                            <Button Style="{StaticResource EmptyButton}" Focusable="False" Command="{Binding OnRunCommand}">
                                <Button.Resources>
                                    <dxmvvm:ObjectToObjectConverter x:Key="CountToVisibilityConverter" DefaultTarget="Visible">
                                        <dxmvvm:MapItem Source="0" Target="Collapsed"/>
                                    </dxmvvm:ObjectToObjectConverter>
                                </Button.Resources>
                                <Button.ContextMenu>
                                    <ContextMenu ItemsSource="{Binding Links}" Visibility="{Binding Links.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                        <ContextMenu.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Background="#FFF5F5F5"/>
                                            </ItemsPanelTemplate>
                                        </ContextMenu.ItemsPanel>
                                        <ContextMenu.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="-24,0,-40,0" Text="{Binding}" Style="{DynamicResource ResourceKey={dxdbt:DemoThemeKey ResourceId=ContextMenuTextBlock}}"/>
                                            </DataTemplate>
                                        </ContextMenu.ItemTemplate>
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Command" Value="{Binding SelectedCommand}"/>
                                                <Setter Property="Header" Value="{Binding Title}"/>
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                        <Grid Width="141" Height="60" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,4,0" Visibility="{Binding IsUniversal, Converter={dxmvvm:BooleanToVisibilityConverter}}">
                            <Border Background="#FFFF7624">
                                <Border.Effect>
                                    <DropShadowEffect Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.25" />
                                </Border.Effect>
                            </Border>
                            <StackPanel Margin="0,4,9,0">
                                <TextBlock Text="PART OF" Foreground="White" HorizontalAlignment="Right" FontFamily="{x:Static dxdb:CustomFonts.OpenSansCondensed}" Margin="0,0,0,6" />
                                <TextBlock Text="THE UNIVERSAL" Foreground="White" HorizontalAlignment="Right" FontSize="19" FontFamily="{x:Static dxdb:CustomFonts.OpenSansCondensed}" LineHeight="14" LineStackingStrategy="BlockLineHeight" />
                                <TextBlock Text="SUBSCRIPTION" Foreground="White" HorizontalAlignment="Right" FontFamily="{x:Static dxdb:CustomFonts.OpenSansCondensed}" LineHeight="9" LineStackingStrategy="BlockLineHeight" Margin="0,5,0,0" />
                            </StackPanel>
                        </Grid>
                        <Grid MinWidth="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,4,0" Visibility="{DXBinding 'PlatformLabel.Length gt 0 ? $Visibility.Visible : $Visibility.Collapsed'}">
                            <Border Background="{DXBinding 'PlatformLabel.Length gt 10 ? `#FF119C52` : PlatformLabel.Length gt 3 ? `#FF61408E` : `#FF26A4DD` '}">
                                <Border.Effect>
                                    <DropShadowEffect Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.25" />
                                </Border.Effect>
                            </Border>
                            <TextBlock Text="{Binding PlatformLabel}" Foreground="White" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{x:Static dxdb:CustomFonts.OpenSansCondensed}"
                                       Margin="7,6" />
                        </Grid>
                    </Grid>
                    <DataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="outerBorder" Property="Opacity" Value="0.25"/>
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>