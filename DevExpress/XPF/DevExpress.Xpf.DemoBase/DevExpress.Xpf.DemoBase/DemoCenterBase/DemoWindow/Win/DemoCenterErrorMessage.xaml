<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:demoparts="clr-namespace:DevExpress.Xpf.DemoCenterBase">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <dxmvvm:ObjectToObjectConverter x:Key="IsErrorToBackgroundConverter">
        <dxmvvm:MapItem Source="True">
            <dxmvvm:MapItem.Target>
                <SolidColorBrush Color="#FFF9F9F9" />
            </dxmvvm:MapItem.Target>
        </dxmvvm:MapItem>
        <dxmvvm:MapItem Source="False">
            <dxmvvm:MapItem.Target>
                <SolidColorBrush Color="White" />
            </dxmvvm:MapItem.Target>
        </dxmvvm:MapItem>
    </dxmvvm:ObjectToObjectConverter>
    <Style TargetType="{x:Type demoparts:DemoCenterErrorMessage}">
        <Setter Property="Width" Value="400" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="demoparts:DemoCenterErrorMessage">
                    <Border x:Name="LayoutRoot" Background="{TemplateBinding IsError, Converter={StaticResource IsErrorToBackgroundConverter}}">
                        <Grid Margin="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <dx:DocumentPresenter Background="Transparent" Foreground="Black" Document="{TemplateBinding Message}" />
                            <StackPanel Grid.Row="1" Margin="0,12,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button x:Name="IgnoreButton" Content="Ignore" Width="80"
                                        Visibility="{TemplateBinding ShowIgnoreButton, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Border Width="10" Visibility="{TemplateBinding ShowIgnoreButton, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Button x:Name="OKButton" Content="OK" Width="80" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
