<ResourceDictionary xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoBase.Helpers"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <helpers:ThemeSelectorCategoryIsVisibleConverter x:Key="themeSelectorCategoryIsVisibleConverter" />
    
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemStyle}" TargetType="dxb:GalleryItem">
        <Setter Property="Caption" Value="{Binding Path=DisplayName}"/>
        <Setter Property="Glyph" Value="{Binding Path=Theme.LargeGlyph, Mode=OneTime}"/>
        <Setter Property="HoverGlyph" Value="{Binding Path=Theme.LargeGlyph, Mode=OneTime}"/>
        <Setter Property="IsChecked" Value="{Binding Path=IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding UseSvgGlyphs}" Value="True">
                <Setter Property="Glyph" Value="{Binding Theme.SvgGlyph, Mode=OneTime, Converter={dx:SvgUriToImageSourceConverter}}"/>
                <Setter Property="HoverGlyph" Value="{Binding Theme.SvgGlyph, Mode=OneTime, Converter={dx:SvgUriToImageSourceConverter}}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InSplitButtonItemStyle}" TargetType="dxb:GalleryItem" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemStyle}}">
        <Setter Property="Glyph" Value="{Binding Path=Theme.LargeGlyph, Mode=OneTime}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding UseSvgGlyphs}" Value="True">
                <Setter Property="Glyph" Value="{Binding Theme.SvgGlyph, Mode=OneTime, Converter={dx:SvgUriToImageSourceConverter}}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonGalleryItemStyle}" TargetType="dxb:GalleryItem" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemStyle}}">
        <Setter Property="Glyph" Value="{Binding Path=Theme.LargeGlyph, Mode=OneTime}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding UseSvgGlyphs}" Value="True">
                <Setter Property="Glyph" Value="{Binding Theme.SvgGlyph, Mode=OneTime, Converter={dx:SvgUriToImageSourceConverter}}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonDropDownGalleryItemStyle}" TargetType="dxb:GalleryItem" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemStyle}}">
        <Setter Property="Glyph" Value="{Binding Path=Theme.LargeGlyph, Mode=OneTime}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding UseSvgGlyphs}" Value="True">
                <Setter Property="Glyph" Value="{Binding Theme.SvgGlyph, Mode=OneTime, Converter={dx:SvgUriToImageSourceConverter}}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemTemplate}">
        <ContentControl>
            <dxb:GalleryItem/>
        </ContentControl>
    </DataTemplate>

    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupStyle}" TargetType="dxb:GalleryItemGroup">
        <Setter Property="Caption" Value="{Binding Path=Name}"/>
        <Setter Property="ItemsSource" Value="{Binding Path=Items}"/>
        <Setter Property="ItemStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemStyle}}"/>
        <Setter Property="ItemTemplate" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=ItemTemplate}}"/>
        <Setter Property="IsVisible">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource themeSelectorCategoryIsVisibleConverter}">
                    <Binding Path="Name" />
                    <Binding Path="Items[0].ShowAllCategories" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InSplitButtonGroupStyle}" TargetType="dxb:GalleryItemGroup" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupStyle}}">
        <Setter Property="ItemStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InSplitButtonItemStyle}}"/>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonGalleryGroupStyle}" TargetType="dxb:GalleryItemGroup" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupStyle}}">
        <Setter Property="ItemStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonGalleryItemStyle}}"/>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonDropDownGalleryGroupStyle}" TargetType="dxb:GalleryItemGroup" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupStyle}}">
        <Setter Property="ItemStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonDropDownGalleryItemStyle}}"/>
    </Style>
    
    <DataTemplate x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupTemplate}">
        <ContentControl>
            <dxb:GalleryItemGroup/>
        </ContentControl>
    </DataTemplate>
   
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=Style}" TargetType="dxb:Gallery">
        <Setter Property="AllowHoverAnimation" Value="True"/>
        <Setter Property="AllowHoverImages" Value="True"/>
        <Setter Property="FilterCaption" Value="Themes"/>
        <Setter Property="GroupsSource" Value="{Binding Path=Groups}"/>
        <Setter Property="HoverGlyphSize" Value="48,48"/>
        <Setter Property="IsItemCaptionVisible" Value="False"/>
        <Setter Property="IsItemDescriptionVisible" Value="False"/>
        <Setter Property="ItemCaptionHorizontalAlignment" Value="Center"/>
        <Setter Property="ItemCheckMode" Value="Single"/>
        <Setter Property="ItemGlyphSize" Value="48,48"/>
        <Setter Property="ColCount" Value="3"/>
        <Setter Property="RowCount" Value="2"/>
        <Setter Property="GroupTemplate" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupTemplate}}"/>
        <Setter Property="GroupStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=GroupStyle}}"/>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InSplitButtonGalleryStyle}" TargetType="dxb:Gallery" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=Style}}">
        <Setter Property="GroupStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InSplitButtonGroupStyle}}"/>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonGalleryStyle}" TargetType="dxb:Gallery" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=Style}}">
        <Setter Property="ItemAutoHeight" Value="True"/>
        <Setter Property="RowCount" Value="2"/>
        <Setter Property="ColCount" Value="4" />
        <Setter Property="GroupStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonGalleryGroupStyle}}"/>
    </Style>
    <Style x:Key="{helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonDropDownGalleryStyle}" TargetType="dxb:Gallery" BasedOn="{StaticResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=Style}}">
        <Setter Property="AllowHoverImages" Value="False"/>
        <Setter Property="IsItemCaptionVisible" Value="True"/>
        <Setter Property="ItemGlyphLocation" Value="Top"/>
        <Setter Property="IsGroupCaptionVisible" Value="True"/>
        <Setter Property="GroupStyle" Value="{DynamicResource {helpers:GalleryDemoThemeSelectorThemeKey ResourceKey=InRibbonDropDownGalleryGroupStyle}}"/>
        <Setter Property="RowCount" Value="4"/>
        <Setter Property="ColCount" Value="4"/>
        <Setter Property="SizeMode" Value="None" />
    </Style>
        
</ResourceDictionary>
    
