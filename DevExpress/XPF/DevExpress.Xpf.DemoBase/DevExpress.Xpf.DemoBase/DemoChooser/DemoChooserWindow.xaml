<dx:ThemedWindow x:Class="DevExpress.Xpf.DemoChooser.DemoChooserWindow"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib"
                 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                 xmlns:dxdb="clr-namespace:DevExpress.Xpf.DemoBase"
                 xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoBase.Helpers"
                 xmlns:demochooser="clr-namespace:DevExpress.Xpf.DemoChooser"
                 xmlns:dbhelpers="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers"
                 xmlns:internal="clr-namespace:DevExpress.Xpf.DemoCenter.Internal"
                 mc:Ignorable="d"
                 MinHeight="700"
                 MinWidth="800"
                 Width="1244"
                 Height="910"
                 Background="White"
                 Padding="0"
                 ShowTitle="False"
                 ShowIcon="False"
                 RoundWindowCorners="False"
                 UseLayoutRounding="True"
                 ResizeMode="CanResize"
                 WindowStartupLocation="CenterScreen"
                 Icon="{Binding AppIcon}"
                 Title="{Binding AppTitle}">
    <dx:ThemedWindow.Resources>
        <sys:Double x:Key="{dxt:ThemedWindowThemeKey ResourceKey=WindowHeaderHeight, ThemeName=Office2019Colorful}">70</sys:Double>
        <SolidColorBrush x:Key="{dxt:ThemedWindowThemeKey ResourceKey=WindowInactiveHeaderBackground, ThemeName=Office2019Colorful}">#FF26A4DD</SolidColorBrush>
        <SolidColorBrush x:Key="{dxt:ThemedWindowThemeKey ResourceKey=WindowActiveHeaderBackground, ThemeName=Office2019Colorful}">#FF26A4DD</SolidColorBrush>
        <sys:Double x:Key="{dxt:ThemedWindowThemeKey ResourceKey=WindowInactiveHeaderOpacity, ThemeName=Office2019Colorful}">1</sys:Double>
        <SolidColorBrush x:Key="{dxt:ThemedWindowThemeKey ResourceKey=WindowActiveBorderBrush, ThemeName=Office2019Colorful}" Color="#FF7E7E7E" />
        <SolidColorBrush x:Key="{dxt:ThemedWindowThemeKey ResourceKey=WindowInactiveBorderBrush, ThemeName=Office2019Colorful}" Color="#FF7E7E7E" />
        <Style x:Key="HeaderButtonStyle" TargetType="{x:Type dx:HeaderItemControl}">
            <Setter Property="MinWidth" Value="40" />
            <Setter Property="MinHeight" Value="70" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dx:HeaderItemControl}">
                        <Image x:Name="icon" Width="24" Height="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               SnapsToDevicePixels="True"
                               Stretch="None">
                        </Image>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Name" Value="PART_CloseButton">
                                <Setter TargetName="icon" Property="Source" Value="{dx:SvgImageSource AutoSize=False, Size=24\,24, Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoCenterBase/Images/Close.svg'}" />
                                <Setter TargetName="icon" Property="Margin" Value="8,0,24,0" />
                            </Trigger>
                            <Trigger Property="Name" Value="PART_Maximize">
                                <Setter TargetName="icon" Property="Source" Value="{dx:SvgImageSource AutoSize=False, Size=24\,24, Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/Maximize.svg'}" />
                            </Trigger>
                            <Trigger Property="Name" Value="PART_Restore">
                                <Setter TargetName="icon" Property="Source" Value="{dx:SvgImageSource AutoSize=False, Size=24\,24, Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/Restore.svg'}" />
                            </Trigger>
                            <Trigger Property="Name" Value="PART_Minimize">
                                <Setter TargetName="icon" Property="Source" Value="{dx:SvgImageSource AutoSize=False, Size=24\,24, Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/Minimize.svg'}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="0.5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <dx:CloseHeaderItemControlTemplateProvider x:Key="{dxt:ThemedWindowThemeKey ResourceKey=HeaderItemControlCloseTemplateProvider, ThemeName=Office2019Colorful}" HeaderItemControlStyle="{StaticResource HeaderButtonStyle}" />
        <dx:CommonHeaderItemControlTemplateProvider x:Key="{dxt:ThemedWindowThemeKey ResourceKey=HeaderItemControlCommonTemplateProvider, ThemeName=Office2019Colorful}" HeaderItemControlStyle="{StaticResource HeaderButtonStyle}" />
    </dx:ThemedWindow.Resources>
    <dx:ThemedWindow.ToolbarItems>
        <StackPanel Orientation="Horizontal" Margin="46,0,0,0">
            <Grid>
                <Image Source="{Binding Icon}" IsHitTestVisible="False" Stretch="None" VerticalAlignment="Center"
                       Visibility="{Binding ShowBackButton, Converter={dxmvvm:BooleanToVisibilityConverter HiddenInsteadOfCollapsed=True, Inverse=True}}">
                    <dx:WpfSvgPalette.Palette>
                        <dx:WpfSvgPalette OverridesThemeColors="True" />
                    </dx:WpfSvgPalette.Palette>
                </Image>
                <Button Command="{Binding BackCommand}"
                        Cursor="Hand"
                        Width="36"
                        Height="36"
                        Focusable="False"
                        Visibility="{Binding ShowBackButton, Converter={dxmvvm:BooleanToVisibilityConverter HiddenInsteadOfCollapsed=True}}">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter />
                        </ControlTemplate>
                    </Button.Template>
                    <Image>
                        <dx:WpfSvgPalette.Palette>
                            <dx:WpfSvgPalette OverridesThemeColors="True" />
                        </dx:WpfSvgPalette.Palette>
                        <dxmvvm:Interaction.Behaviors>
                            <helpers:SvgImageBehavior Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/BackButtonWhite.svg'
                                                      Target="{x:Static Image.SourceProperty}" />
                        </dxmvvm:Interaction.Behaviors>
                    </Image>
                </Button>
            </Grid>
            <TextBlock Margin="8,0,0,1" FontFamily="{x:Static dxdb:CustomFonts.OpenSansCondensed}"
                       FontSize="20" Foreground="White" VerticalAlignment="Center"
                       Text="{Binding Title}" />
            <Border Margin="24,17,23,13" Background="White" BorderBrush="White" BorderThickness="1,0,0,0" Width="1" Opacity="0.5" 
                    Visibility="{Binding Source={x:Static internal:PlatformViewModel.IsNetCore3}, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
            <TextBlock Text=".NET Core 3 and .NET 5 Desktop Libraries" Foreground="White" Margin="0,0,0,1" FontSize="20" Focusable="False" FontFamily="{x:Static dxdb:CustomFonts.OpenSansCondensed}" VerticalAlignment="Center" 
                    Visibility="{Binding Source={x:Static internal:PlatformViewModel.IsNetCore3}, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </dx:ThemedWindow.ToolbarItems>
    <dbhelpers:AdaptiveContentControl MinWidth="560" MinHeight="625">
        <ContentPresenter Content="{Binding PageViewModel}">
            <ContentPresenter.ContentTemplateSelector>
                <demochooser:PageViewSelector />
            </ContentPresenter.ContentTemplateSelector>
        </ContentPresenter>
        <dbhelpers:DemoScreenFooterControl PlatformName="{Binding PlatformName}" Margin="-1" dbhelpers:AdaptiveContentControl.Priority="0" />
    </dbhelpers:AdaptiveContentControl>
</dx:ThemedWindow>
