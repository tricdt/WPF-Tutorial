<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoChooser.Helpers">
    <Style TargetType="{x:Type local:CrossPlatformDemoCarouselControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ItemsPresenter/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <local:CrossPlatformDemoCarouselPanel ViewPort="{DXBinding '@a($ScrollViewer).ViewportWidth'}" Grid.IsSharedSizeScope="True"  />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="FrameworkElement">
                    <Setter Property="VerticalAlignment" Value="Top" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>