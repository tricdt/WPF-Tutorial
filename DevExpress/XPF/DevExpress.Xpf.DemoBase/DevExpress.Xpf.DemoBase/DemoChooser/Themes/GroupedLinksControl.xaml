<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:dxdbt="clr-namespace:DevExpress.Xpf.DemoBase.ThemeKeys"
                    xmlns:local="clr-namespace:DevExpress.Xpf.DemoChooser">
    <TextDecorationCollection x:Key="LinkDecorations">
        <TextDecoration PenThicknessUnit="Pixel" PenOffsetUnit="Pixel">
            <TextDecoration.Pen>
                <Pen Thickness="1" DashCap="Flat">
                    <Pen.Brush>
                        <SolidColorBrush Color="#26A4DD"/>
                    </Pen.Brush>
                    <Pen.DashStyle>
                        <DashStyle Dashes="2,2"/>
                    </Pen.DashStyle>
                </Pen>
            </TextDecoration.Pen>
        </TextDecoration>
    </TextDecorationCollection>
    <Style x:Key="HoveredTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="TextDecorations" Value="{StaticResource LinkDecorations}"/>
        <Setter Property="Foreground" Value="#26A4DD"/>
    </Style>
    <Style TargetType="{x:Type local:GroupedLinksControl}">
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="GroupHeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}"
                               Foreground="#26A4DD"
                               FontSize="14"
                               FontFamily="Segoe UI Bold"
                               Margin="-1,0,0,10"
                               Cursor="Hand">
                        <TextBlock.ContextMenu>
                            <ContextMenu ItemsSource="{Binding ContextMenu}" Visibility="{DXBinding 'ContextMenu.Count gt 0', Converter={dxmvvm:BooleanToVisibilityConverter}}">
                                <ContextMenu.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Background="#FFF5F5F5"/>
                                    </ItemsPanelTemplate>
                                </ContextMenu.ItemsPanel>
                                <ContextMenu.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Margin="-24,0,-40,0" Text="{Binding}" Style="{DynamicResource ResourceKey={dxdbt:DemoThemeKey ResourceId=ContextMenuTextBlock}}"/>
                                    </DataTemplate>
                                </ContextMenu.ItemTemplate>
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="Command" Value="{Binding SelectedCommand}"/>
                                        <Setter Property="Header" Value="{Binding Title}"/>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ShowAllTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="Show All Demos" Style="{StaticResource HoveredTextBlockStyle}" Cursor="Hand" Margin="0,4,0,10"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GroupedLinksControl}">
                    <Grid DataContext="{x:Null}">
                        <Border x:Name="PART_PanelContainer" Background="Transparent" Padding="{TemplateBinding Padding}">
                            <local:GroupedLinksControlPanel x:Name="PART_Panel" />
                        </Border>
                        <Grid x:Name="PART_Flyout" Margin="12,5,0,10" Opacity="0" Visibility="Collapsed" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.Effect>
                                <DropShadowEffect Direction="-90"
                                                  ShadowDepth="1"
                                                  Opacity="0.15"
                                                  BlurRadius="4" />
                            </Grid.Effect>
                            <Border Width="271" Grid.Column="1" BorderBrush="#CACACA" BorderThickness="1" Background="White">
                                <StackPanel Margin="18,11,10,6">
                                    <TextBlock Text="{Binding Title}" FontSize="17" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <dx:DocumentPresenter 
                                                      IsTabStop="False" Background="Transparent" dx:FocusHelper2.Focusable="False"
                                                      Document="{Binding Description}"  Margin="0,0,0,6"
                                                      FontSize="12" FontFamily="Segoe UI,Tahoma">
                                        <dx:DocumentPresenter.Resources>
                                            <Style TargetType="Paragraph">
                                                <Setter Property="Margin" Value="0,2" />
                                                <Setter Property="LineHeight" Value="14" />
                                                <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                                            </Style>
                                        </dx:DocumentPresenter.Resources>
                                    </dx:DocumentPresenter>
                                    <!--<TextBlock Text="{Binding Description}"  Margin="0,0,0,6"/>-->
                                </StackPanel>
                            </Border>
                            <Grid Grid.Column="0"
                                  VerticalAlignment="Center"
                                  Margin="0,0,-1,0"
                                  Visibility="{TemplateBinding LeftFlyoutIndicatorVisibility}">
                                <Path Data="F1 M 1,0 l -7,7.5 l 7,7.5 Z"
                                      Fill="White" />
                                <Path Data="F1 M 0,0 l -7,7.5 l 7,7.5"
                                      Stroke="#CACACA" />
                            </Grid>
                            <Grid Grid.Column="2"
                                  VerticalAlignment="Center"
                                  Margin="0,-1,3,0"
                                  Visibility="{TemplateBinding RightFlyoutIndicatorVisibility}">
                                <Path Data="F1 M -1,0 l 7,7.5 l -7,7.5 Z"
                                      Fill="White" />
                                <Path Data="F1 M 0,0 l 7,7.5 l -7,7.5"
                                      Stroke="#CACACA" />
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>