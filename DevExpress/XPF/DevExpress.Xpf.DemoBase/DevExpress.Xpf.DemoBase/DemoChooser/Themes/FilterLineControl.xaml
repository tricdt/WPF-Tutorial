<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoChooser.Helpers"
                    xmlns:demoparts="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers"
                    xmlns:themes="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:dxei="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal">

    <Style TargetType="{x:Type helpers:FilterLineControl}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type helpers:FilterLineControl}">
                    <StackPanel Width="300"
                                Orientation="Horizontal"
                                Focusable="False">
                        <Image x:Name="image"
                               Stretch="None"
                               Source="{demoparts:DumbSvgImageSource Uri='pack://application:,,,/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Images/Magnifier.svg'}"
                               Margin="0,4,10,0"
                               Focusable="False" />
                        <dxe:TextEdit x:Name="filterEdit"
                                      EditValue="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource TemplatedParent}}"
                                      NullText="Find Demos by Keyword (Ctrl+F)"
                                      NullTextForeground="#A4A4A4"
                                      ShowBorder="False"
                                      SelectAllOnGotFocus="True"
                                      ShowError="False"
                                      Foreground="#26A4DD"
                                      NullValue=""
                                      Width="200" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>