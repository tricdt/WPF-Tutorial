<UserControl x:Class="DevExpress.Xpf.DemoChooser.Internal.ReportsFullPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevExpress.Xpf.DemoChooser.Internal"
             xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers"
             xmlns:dxdb="clr-namespace:DevExpress.Xpf.DemoBase"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxdbt="clr-namespace:DevExpress.Xpf.DemoBase.ThemeKeys"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             helpers:AdaptiveContentControl.Priority="-2"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DevExpress.Xpf.DemoBase.v24.1;component/DemoChooser/Pages/DirectXSwitchCheckEdit.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <dxmvvm:ObjectToObjectConverter x:Key="CountToVisibilityConverter" DefaultTarget="Visible">
                <dxmvvm:MapItem Source="0" Target="Collapsed"/>
            </dxmvvm:ObjectToObjectConverter>
            <dxmvvm:ObjectToObjectConverter x:Key="ShadowOpacityConverter">
                <dxmvvm:MapItem Source="False" Target="0" />
                <dxmvvm:MapItem Source="True" Target="0.15" />
            </dxmvvm:ObjectToObjectConverter>
            <dxmvvm:ObjectToObjectConverter x:Key="OpacityConverter">
                <dxmvvm:MapItem Source="False" Target="0.35" />
                <dxmvvm:MapItem Source="True" Target="1" />
            </dxmvvm:ObjectToObjectConverter>
            <Style x:Key="EmptyButton" TargetType="Button">
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="IsTabStop" Value="False" />
                <Setter Property="Focusable" Value="False" />
            </Style>
            <DataTemplate x:Key="carouselControlItemTemplate">
                <Grid UseLayoutRounding="True" Height="{Binding ActualHeight, RelativeSource={RelativeSource TemplatedParent}}"
                      Opacity="{Binding IsAvailable, Converter={StaticResource OpacityConverter}}"
                      IsEnabled="{Binding IsAvailable}"
                      IsHitTestVisible="{Binding IsAvailable}"
                      Cursor="Hand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto" SharedSizeGroup="description" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="1" x:Name="grid">
                        <Border BorderBrush="#FFCACACA" Background="White" Margin="9">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Style="{StaticResource EmptyButton}" Grid.RowSpan="2" Focusable="False" Command="{Binding OnRunCommand}">
                                    <Button.ContextMenu>
                                        <ContextMenu ItemsSource="{Binding Links}" Visibility="{Binding Links.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                            <ContextMenu.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Background="#FFF5F5F5"/>
                                                </ItemsPanelTemplate>
                                            </ContextMenu.ItemsPanel>
                                            <ContextMenu.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Margin="-24,0,-40,0" Text="{Binding}" Style="{DynamicResource ResourceKey={dxdbt:DemoThemeKey ResourceId=ContextMenuTextBlock}}"/>
                                                </DataTemplate>
                                            </ContextMenu.ItemTemplate>
                                            <ContextMenu.ItemContainerStyle>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Command" Value="{Binding SelectedCommand}"/>
                                                    <Setter Property="Header" Value="{Binding Title}"/>
                                                </Style>
                                            </ContextMenu.ItemContainerStyle>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <Border Height="39" Grid.Row="0" Name="headerContainer">
                                    <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" Name="platformLabel" TextTrimming="CharacterEllipsis" FontFamily="Segoe UI, Tahoma" IsHitTestVisible="False"
                                                       TextAlignment="Left" FontSize="15" VerticalAlignment="Center" Grid.Row="1" Foreground="#FF33A3DC" FontWeight="Bold"
                                                       MaxWidth="{DXBinding '@e(headerContainer).ActualWidth-@e(directXSwitcher).ActualWidth'}"/>
                                        <dxe:CheckEdit VerticalAlignment="Top" Grid.Column="1" Name="directXSwitcher"
                                                           Visibility="{Binding ProductLink.SupportsDirectX, Converter={dx:BooleanToVisibilityConverter}}"
                                                           EditValue="{Binding ProductLink.UseGdi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                           Focusable="False" Margin="11,2,0,0"
                                                           Template="{StaticResource directXSwitcherTemplate}" />
                                    </StackPanel>
                                </Border>
                                <Grid Grid.Row="1" IsHitTestVisible="False">
                                    <Grid.Effect>
                                        <DropShadowEffect Direction="-90"
                                                  ShadowDepth="1"
                                                  Opacity="{Binding IsAvailable, Converter={StaticResource ShadowOpacityConverter}}"
                                                  BlurRadius="6" />
                                    </Grid.Effect>
                                    <dx:DXImage Name="image" Source="{Binding Preview}" RenderOptions.BitmapScalingMode="Fant" 
                                                Height="{DXBinding '@p.ActualHeight - 70'}"
                                                Stretch="UniformToFill" HorizontalAlignment="Left" 
                                                StretchDirection="Both"/>
                                    <Border BorderThickness="1" BorderBrush="Black" Opacity="0.15"/>
                                </Grid>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <!--<DataTemplate.Triggers>
                <DataTrigger Binding="{Binding PlatformLabel}" Value="Blazor">
                    <Setter TargetName="titleBorder" Property="Background" Value="#5f368d" />
                </DataTrigger>
            </DataTemplate.Triggers>-->
                <DataTemplate.Triggers>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsEnabled" Value="True" />
                            <Condition Property="IsMouseOver" Value="True" />
                        </MultiTrigger.Conditions>
                        <MultiTrigger.Setters>
                            <Setter TargetName="platformLabel" Property="TextDecorations" Value="Underline" />
                        </MultiTrigger.Setters>
                    </MultiTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="42,36, 42, 36" TextElement.Foreground="#FF3C3C3C">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding PlatformDescription}" FontWeight="Bold" TextWrapping="Wrap"
                   FontSize="16" FontFamily="Segoe UI, Tahoma" Focusable="False" Margin="9,0,0,5"/>
        <TextBlock Text="Select the desired platform below to explore the capabilities of DevExpress Reports – voted Best Reporting Suite by readers of Visual Studio Magazine." TextWrapping="Wrap"
                   FontSize="16" FontFamily="Segoe UI, Tahoma" Focusable="False" Margin="9,0" Grid.Row="1" HorizontalAlignment="Left">
        </TextBlock>
        <ItemsControl Margin="0,10" ItemsSource="{Binding FeaturedDemos}" Grid.Row="2" ItemTemplate="{StaticResource carouselControlItemTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2" Columns="3" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
