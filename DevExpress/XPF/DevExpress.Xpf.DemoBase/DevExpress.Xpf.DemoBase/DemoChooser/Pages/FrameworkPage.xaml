<UserControl x:Class="DevExpress.Xpf.DemoChooser.Internal.FrameworkPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:DevExpress.Xpf.DemoChooser.Helpers"
             xmlns:basehelpers="clr-namespace:DevExpress.Xpf.DemoCenterBase.Helpers"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             mc:Ignorable="d">
    <UserControl.Resources>
        <dxmvvm:ObjectToObjectConverter x:Key="ShadowOpacityConverter">
            <dxmvvm:MapItem Source="False" Target="0" />
            <dxmvvm:MapItem Source="True" Target="0.15" />
        </dxmvvm:ObjectToObjectConverter>
        <dxmvvm:ObjectToObjectConverter x:Key="OpacityConverter">
            <dxmvvm:MapItem Source="False" Target="0.35" />
            <dxmvvm:MapItem Source="True" Target="1" />
        </dxmvvm:ObjectToObjectConverter>
        <Style x:Key="EmptyButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Focusable" Value="False" />
        </Style>
        <Style x:Key="linkButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="text"
                               Text="{TemplateBinding Content}"
                               Foreground="#26A4DD"
                               FontSize="14" 
                               Margin="0,0,0,5"
                               FontFamily="Segoe UI Bold"
                               Cursor="Hand"
                               HorizontalAlignment="Left"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="text" Property="TextDecorations" Value="Underline" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="linkTemplate">
            <Button Focusable="False" Command="{Binding SelectedCommand}" Content="{Binding Title}" Style="{StaticResource linkButton}" />
        </DataTemplate>
        <DataTemplate x:Key="carouselControlItemTemplate" >
            <Grid UseLayoutRounding="True" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto" SharedSizeGroup="description" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Margin="1,11" x:Name="grid">
                    <Border x:Name="outerBorder"
                        Background="#99808080"
                        BorderThickness="1"
                        CornerRadius="3"
                        BorderBrush="#FF808080"
                        Visibility="{Binding IsAvailable, Converter={dxmvvm:BooleanToVisibilityConverter}}"
                        Opacity="{DXBinding '@e(grid).IsMouseOver ? 0.25 : 0'}"/>
                    <Grid Opacity="{Binding IsAvailable, Converter={StaticResource OpacityConverter}}" IsEnabled="{Binding IsAvailable}">
                        <Grid.Effect>
                            <DropShadowEffect Direction="-90"
                                                  ShadowDepth="1"
                                                  Opacity="{Binding IsAvailable, Converter={StaticResource ShadowOpacityConverter}}"
                                                  BlurRadius="4" />
                        </Grid.Effect>
                        <Border BorderThickness="1" BorderBrush="#FFCACACA" Background="White" Margin="9">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="9,9,9,9" Grid.Row="0">
                                    <dx:DXImage Name="image" Source="{Binding Preview}" RenderOptions.BitmapScalingMode="Fant" 
                                                        Stretch="UniformToFill" 
                                                        StretchDirection="DownOnly"
                                                        MaxHeight="210" />
                                    <Border BorderThickness="1" BorderBrush="Black" Opacity="0.15"/>
                                </Grid>
                                <Grid Height="39" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="1" Text="{Binding Title}" TextAlignment="Center" Foreground="#FF3C3C3C" FontSize="16" Margin="0,0,0,2"/>
                                </Grid>
                            </Grid>
                        </Border>
                        <Button Style="{StaticResource EmptyButton}" Focusable="False" Command="{Binding OnRunCommand}"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Margin="11,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15"  />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                               FontFamily="Segoe UI" FontSize="12" Margin="0,0,0,15" 
                               Visibility="{Binding Description, Converter={helpers:StringIsNullToVisibilityConverter}}">
                    </TextBlock>
                </Grid>

                <Grid  Grid.Row="2" Margin="11,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*"  />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" SharedSizeGroup="demos and tutorials" />
                        <!--<RowDefinition Height="auto" SharedSizeGroup="tutorials" />-->
                    </Grid.RowDefinitions>
                    <ItemsControl Focusable="False" Grid.Row="0"  Grid.Column="0" ItemsSource="{Binding DemoLinks}"  ItemTemplate="{StaticResource linkTemplate}" Margin="0,0,0,10" />
                    <ItemsControl Focusable="False" Grid.Row="0"  Grid.Column="1" ItemsSource="{Binding TutorialLinks}"  ItemTemplate="{StaticResource linkTemplate}" Margin="0,0,0,10" />
                </Grid>                
                
                <Grid.ContextMenu>
                    <ContextMenu Visibility="{Binding Links, Converter={helpers:ListToVisibilityConverter}}" ItemsSource="{Binding Links}">
                        <ContextMenu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="#FFF5F5F5"/>
                            </ItemsPanelTemplate>
                        </ContextMenu.ItemsPanel>
                        <ContextMenu.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="-24,0,-40,0" Text="{Binding}" />
                            </DataTemplate>
                        </ContextMenu.ItemTemplate>
                        <ContextMenu.ItemContainerStyle>
                            <Style TargetType="MenuItem">
                                <Setter Property="Command" Value="{Binding SelectedCommand}" />
                                <Setter Property="Header" Value="{Binding Title}" />
                            </Style>
                        </ContextMenu.ItemContainerStyle>
                    </ContextMenu>
                </Grid.ContextMenu>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="linksCarouselControlItemTemplate">
            <Grid Margin="11,0" UseLayoutRounding="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" SharedSizeGroup="staticLinks"  />
                </Grid.RowDefinitions>
                <StackPanel Visibility="{Binding StaticLinks, Converter={helpers:ObjectToVisibilityConverter}}">
                    <TextBlock Margin="0,0,0,10" Foreground="#FFA0A0A0" Text="{Binding StaticLinksTitle}" FontFamily="Segoe UI Bold" FontSize="12"/>
                    <ItemsControl Focusable="False" ItemsSource="{Binding StaticLinks}" ItemTemplate="{StaticResource linkTemplate}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="15,0,15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding PlatformDescription}" 
                   Visibility="{Binding PlatformDescription, Converter={helpers:StringIsNullToVisibilityConverter}}"
                   TextWrapping="Wrap" TextAlignment="Justify" 
                   HorizontalAlignment="Left" Margin="35,10,35,0" 
                   FontFamily="Segoe UI" FontSize="13" Foreground="#3c3c3c"  />
        <basehelpers:ColumnScrollControl x:Name="scrollControl" Focusable="False" Grid.Row="1" AllowDifferentColumnWidth="False" CrossPlatform="True"
                                         CurrentPage="{Binding ActualCurrentPage, ElementName=linksScrollControl}" HorizontalAlignment="Left">
            <helpers:CrossPlatformDemoCarouselControl x:Name="carousel"  ItemsSource="{Binding FeaturedDemos}" Focusable="False" FlyoutVisibility="Visible" ItemTemplate="{StaticResource carouselControlItemTemplate}">
                <helpers:CrossPlatformDemoCarouselControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <helpers:CrossPlatformDemoCarouselPanel ViewPort="{DXBinding '@a($ScrollViewer).ViewportWidth'}" Grid.IsSharedSizeScope="True" MaxItemWidth="770" />
                    </ItemsPanelTemplate>
                </helpers:CrossPlatformDemoCarouselControl.ItemsPanel>
            </helpers:CrossPlatformDemoCarouselControl>
        </basehelpers:ColumnScrollControl>
        <ScrollViewer Grid.Row="2"
                      Margin="0,5,0,0"
                      Focusable="False"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                      x:Name="verticalScroll">
            <basehelpers:ColumnScrollControl x:Name="linksScrollControl" Focusable="False" AllowDifferentColumnWidth="True" CrossPlatform="True" ShowButtons="False"
                                             AllowScrollWithMouseWheel="{DXBinding '@e(verticalScroll).ComputedVerticalScrollBarVisibility != $Visibility.Visible'}"
                                             CurrentPage="{Binding ActualCurrentPage, ElementName=scrollControl}">
                <helpers:CrossPlatformDemoCarouselControl x:Name="linksCarousel" ItemsSource="{Binding FeaturedLinks}" Focusable="False" FlyoutVisibility="Visible" ItemTemplate="{StaticResource linksCarouselControlItemTemplate}" >
                    <helpers:CrossPlatformDemoCarouselControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <helpers:CrossPlatformDemoCarouselPanel ViewPort="{DXBinding '@a($ScrollViewer).ViewportWidth'}" MaxItemWidth="770" />
                        </ItemsPanelTemplate>
                    </helpers:CrossPlatformDemoCarouselControl.ItemsPanel>
                </helpers:CrossPlatformDemoCarouselControl>
            </basehelpers:ColumnScrollControl>
        </ScrollViewer>
    </Grid>
</UserControl>
