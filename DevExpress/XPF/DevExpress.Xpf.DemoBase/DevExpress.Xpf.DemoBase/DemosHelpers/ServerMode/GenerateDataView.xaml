<UserControl x:Class="DevExpress.Xpf.DemoBase.GenerateDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Visibility="{DXBinding '@Self.DataContext != null ? $Visibility.Visible : $Visibility.Collapsed'}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
        <ProgressBar Minimum="0" Maximum="{Binding MaxValue, Mode=OneWay}" Name="progress" Height="20" 
                                 Value="{Binding Progress, Mode=OneWay}"
                                 Visibility="{DXBinding 'ShowProgress ? $Visibility.Visible : $Visibility.Hidden'}"
                                 Margin="0,0,0,4"/>
        <Label Content="{Binding State}" Margin="0,0,0,12"/>
        <Button Command="{Binding StopAndShowCommand}" Margin="0,0,0,8">Stop generating data and show the demo</Button>
    </StackPanel>
</UserControl>
