<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
	xmlns:local="clr-namespace:DevExpress.Xpf.DemoBase">
    <Style TargetType="{x:Type local:ExportImage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ExportImage}">
                    <Border SnapsToDevicePixels="True"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Width="{TemplateBinding Width}"
                            Padding="{TemplateBinding Padding}"
                            dxp:ExportSettings.TargetType="Image"
                            dxp:ExportSettings.Background="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}"
                            dxp:ExportSettings.BorderThickness="0">
                        <Image Source="{TemplateBinding Source}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
